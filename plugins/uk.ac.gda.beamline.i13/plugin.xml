<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         id="product"
         point="org.eclipse.core.runtime.products">
      <product
            application="uk.ac.gda.client.application"
            name="Diamond Beamline I13">
         <property
               name="appName"
               value="Diamond Beamline I13">
         </property>
         <property
               name="preferenceCustomization"
               value="plugin_customization.ini">
         </property>         
         <property
               name="windowImages"
               value="platform:/plugin/uk.ac.gda.core/icons/GDAlogos/GDALogo16.png,platform:/plugin/uk.ac.gda.core/icons/GDAlogos/GDALogo32.png,platform:/plugin/uk.ac.gda.core/icons/GDAlogos/GDALogo48.png,platform:/plugin/uk.ac.gda.core/icons/GDAlogos/GDALogo64.png,platform:/plugin/uk.ac.gda.core/icons/GDAlogos/GDALogo128.png">
         </property>
         <property
               name="aboutImage"
               value="platform:/plugin/uk.ac.gda.core/icons/GDAlogos/GDALogo128.png">
         </property>
         <property
               name="aboutText"
               value="Diamond Beamline I13 &#x0A;&#x0A;Based on GDA See &lt;http://www.opengda.org/&gt;">
         </property>    
      </product>
   </extension>
   <extension
         point="org.eclipse.ui.actionSets">
      <actionSet
            label="I13 Manuals"
            visible="true"
            id="gda.rcp.help.i13.manuals">
         <action
               id="gda.rcp.help.beamlinemanual"
               label="Beamline Manual"
               menubarPath="help/helpStart"               
               style="push">
               <class class="org.eclipse.help.ui.browser.LaunchURL">
                    <parameter name="url" value="http://wiki.diamond.ac.uk/Wiki/Wiki.jsp?page=I13%20-%20X-ray%20Imaging%20and%20Coherence" />
               </class>               
        	</action>
         <action
               id="gda.rcp.help.elog"
               label="ELog - Send Feedback"
               menubarPath="help/helpStart"               
               style="push">
                <class class="org.eclipse.help.ui.browser.LaunchURL">
                    <parameter name="url" value="https://elog.pri.diamond.ac.uk/" />
               </class>               
        	</action>          
         <action
               id="gda.rcp.help.reportabug"
               label="Report A Problem"
               menubarPath="help/helpStart"               
               style="push">
                <class class="org.eclipse.help.ui.browser.LaunchURL">
                    <parameter name="url" value="http://trac.diamond.ac.uk/beam/login" />
               </class>               
        	</action>        	
      </actionSet>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <category
            name="I13I Views"
            id="uk.ac.gda.beamline.i13i"/>
                       <view
                 allowMultiple="false"
                 category="uk.ac.gda.beamline.i13i"
                 class="gda.rcp.views.ViewFactory:statusView"
                 icon="platform:/plugin/uk.ac.gda.core/icons/GDAlogos/GDALogo32.png"
                 id="uk.ac.gda.beamline.i13i.views.StatusView"
                 name="Status">
      </view>
                       <view
                 allowMultiple="false"
                 category="uk.ac.gda.beamline.i13i"
                 class="gda.rcp.views.ViewFactory:alignmentView"
                 icon="platform:/plugin/uk.ac.gda.core/icons/GDAlogos/GDALogo32.png"
                 id="uk.ac.gda.beamline.i13i.views.AlignmentView"
                 name="Alignment">
      </view>
                       <view
                             allowMultiple="false"
                             category="uk.ac.gda.beamline.i13i"
                             class="uk.ac.diamond.scisoft.analysis.rcp.views.PlotView"
                             icon="icons/chart_curve.png"
                             id="uk.ac.gda.beamline.i13i.DetectorPlot"
                             name="Detector Image"
                             restorable="true">
                       </view>
      <view
            allowMultiple="false"
            category="uk.ac.gda.beamline.i13i"
            class="uk.ac.gda.beamline.i13i.views.cameraview.CameraViewPart"
            id="uk.ac.gda.client.tomo.CameraView"
            name="Tomography Camera Low Res  View"
            restorable="true">
      </view>
      <view
            allowMultiple="false"
            category="uk.ac.gda.beamline.i13i"
            class="uk.ac.diamond.scisoft.analysis.rcp.views.PlotView"
            icon="icons/chart_curve.png"
            id="uk.ac.gda.beamline.i13i.NormalisedImage"
            name="Normalised Image"
            restorable="true">
      </view>
      <view
            allowMultiple="false"
            class="uk.ac.gda.beamline.i13i.views.adScaleAdjustmentView.AreaDetectorProfileViewCreator:i13"
            icon="icons/AreaDetectorProfileView.gif"
            id="uk.ac.gda.beamline.i13i.AreaDetectorProfileView"
            name="PCO Image Profile View">
      </view>                       
      <view
            allowMultiple="false"
            class="uk.ac.gda.beamline.i13i.views.adScaleAdjustmentView.AreaDetectorArrayViewCreator:i13"
            id="uk.ac.gda.beamline.i13i.AreaDetectorArrayView"
            name="PCO Image View">
      </view>
      <view
            allowMultiple="false"
            class="uk.ac.gda.beamline.i13i.views.adScaleAdjustmentView.AreaDetectorLiveViewCreator:i13"
            id="uk.ac.gda.beamline.i13i.AreaDetectorLiveView"
            name="PCO Live View">
      </view>                       
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            class="uk.ac.gda.beamline.i13i.perspectives.DataCollectionPerspective"
            icon="icons/releng_gears.gif"
            id="uk.ac.gda.beamline.i13i.perspectives.DataCollectionPerspective"
            name="Data Collection">
      </perspective>
      <perspective
            class="uk.ac.gda.beamline.i13i.perspectives.ScriptingPerspective"
            icon="icons/releng_gears.gif"
            id="uk.ac.gda.beamline.i13i.perspectives.ScriptingPerspective"
            name="Scripting">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="*">
            <perspectiveShortcut
                  id="uk.ac.gda.beamline.i13i.perspectives.DataCollectionPerspective">
            </perspectiveShortcut>
      </perspectiveExtension>
   </extension>    
   
<extension
      point="org.eclipse.help.toc">
   <toc
         file="userGuideTableOfContents.xml"
         primary="true">
   </toc>
   <toc
         file="toc.xml">
   </toc>
</extension>
<extension
      point="org.eclipse.ui.commands">
   <command
         id="uk.ac.gda.beamline.i13i.commands.setExposure"
         name="SetExposure">
      <commandParameter
            id="uk.ac.gda.beamline.i13i.commandParameters.adcontrollerServiceName"
            name="name"
            optional="false">
      </commandParameter>
   </command>
   <command
         id="uk.ac.gda.beamline.i13i.commands.setLiveViewScale"
         name="SetLiveViewScale">
      <commandParameter
            id="uk.ac.gda.beamline.i13i.commandParameters.adcontrollerServiceName"
            name="name"
            optional="false">
      </commandParameter>
   </command>
</extension>
<extension
      point="org.eclipse.ui.commandImages">
   <image
         commandId="uk.ac.gda.beamline.i13i.commands.setLiveViewScale"
         icon="icons/setLiveViewScale.gif">
   </image>
   <image
         commandId="uk.ac.gda.beamline.i13i.commands.setExposure"
         icon="icons/setExposure.gif">
   </image>
</extension>
<extension
      point="org.eclipse.ui.handlers">
   <handler
         class="uk.ac.gda.beamline.i13i.handlers.SetExposure"
         commandId="uk.ac.gda.beamline.i13i.commands.setExposure">
   </handler>
   <handler
         class="uk.ac.gda.beamline.i13i.handlers.SetLiveViewScale"
         commandId="uk.ac.gda.beamline.i13i.commands.setLiveViewScale">
   </handler>
</extension>
<extension
      name="tst"
      point="org.eclipse.ui.menus">
   <menuContribution
         allPopups="false"
         locationURI="toolbar:uk.ac.gda.beamline.i13i.AreaDetectorArrayView">
      <command
            commandId="uk.ac.gda.beamline.i13i.commands.setExposure"
            label="Set Exposure"
            style="push">
         <parameter
               name="uk.ac.gda.beamline.i13i.commandParameters.adcontrollerServiceName"
               value="i13">
         </parameter>
      </command>
   </menuContribution>
   <menuContribution
         allPopups="false"
         locationURI="toolbar:uk.ac.gda.beamline.i13i.AreaDetectorProfileView">
      <command
            commandId="uk.ac.gda.beamline.i13i.commands.setExposure"
            label="Set Exposure"
            style="push">
         <parameter
               name="uk.ac.gda.beamline.i13i.commandParameters.adcontrollerServiceName"
               value="i13">
         </parameter>
      </command>
      <command
            commandId="uk.ac.gda.beamline.i13i.commands.setLiveViewScale"
            label="Set LiveView Scale"
            style="push">
         <parameter
               name="uk.ac.gda.beamline.i13i.commandParameters.adcontrollerServiceName"
               value="i13">
         </parameter>
      </command>
      <command
            commandId="org.eclipse.ui.views.showView"
            icon="icons/AreaDetectorLiveView.gif"
            label="Show Live View"
            style="push">
         <parameter
               name="org.eclipse.ui.views.showView.viewId"
               value="uk.ac.gda.beamline.i13i.AreaDetectorLiveView">
         </parameter>
      </command>
   </menuContribution>
   <menuContribution
         allPopups="false"
         locationURI="toolbar:uk.ac.gda.beamline.i13i.AreaDetectorLiveView">
      <command
            commandId="uk.ac.gda.beamline.i13i.commands.setExposure"
            label="Set Exposure"
            style="push">
         <parameter
               name="uk.ac.gda.beamline.i13i.commandParameters.adcontrollerServiceName"
               value="i13">
         </parameter>
      </command>
      <command
            commandId="uk.ac.gda.beamline.i13i.commands.setLiveViewScale"
            label="Set LiveView Scale"
            style="push">
         <parameter
               name="uk.ac.gda.beamline.i13i.commandParameters.adcontrollerServiceName"
               value="i13">
         </parameter>
      </command>
      <command
            commandId="org.eclipse.ui.views.showView"
            icon="icons/AreaDetectorProfileView.gif"
            label="Show Profile View"
            style="push">
         <parameter
               name="org.eclipse.ui.views.showView.viewId"
               value="uk.ac.gda.beamline.i13i.AreaDetectorProfileView">
         </parameter>
      </command>
      <command
            commandId="org.eclipse.ui.views.showView"
            icon="icons/AreaDetectorImageView.gif"
            label="Show Image View"
            style="push">
         <parameter
               name="org.eclipse.ui.views.showView.viewId"
               value="uk.ac.gda.beamline.i13i.AreaDetectorArrayView">
         </parameter>
      </command>
   </menuContribution>
   <menuContribution
         allPopups="false"
         locationURI="toolbar:uk.ac.gda.client.tomo.CameraView">
      <command
            commandId="uk.ac.gda.beamline.i13i.commands.setExposure"
            label="Set Exposure"
            style="push">
         <parameter
               name="uk.ac.gda.beamline.i13i.commandParameters.adcontrollerServiceName"
               value="i13">
         </parameter>
      </command>
   </menuContribution>
</extension>       
</plugin>
