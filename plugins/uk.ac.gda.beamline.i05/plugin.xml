<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

  <extension point="org.eclipse.core.contenttype.contentTypes">
     <content-type
       base-type="org.eclipse.core.runtime.xml"
       describer="uk.ac.gda.arpes.ui.ARPESScanBeanDescriber"
       file-extensions="xml"
       id="uk.ac.gda.arpes.beans.ARPESScanBeanContentType"
       name="ARPESScanBean File Content"
       priority="high">
     </content-type>
  </extension>
  <extension point="org.eclipse.ui.editors">
    <editor class="uk.ac.gda.arpes.ui.ARPESScanBeanEditor"
            default="true"
            id="uk.ac.gda.arpes.beans.ARPESScanBeanEditor"
            name="ARPES Scan Editor">
            <contentTypeBinding
                contentTypeId="uk.ac.gda.arpes.beans.ARPESScanBeanContentType">
            </contentTypeBinding>
     </editor>
  </extension>
   <extension
         id="product"
         point="org.eclipse.core.runtime.products">
      <product
            application="uk.ac.gda.client.application"
            name="Beamline I05">
         <property
               name="appName"
               value="Beamline I05">
         </property>
         <property
               name="preferenceCustomization"
               value="plugin_customization.ini">
         </property>
         <property
               name="windowImages"
               value="icons/GDALogo16.png,icons/GDALogo32.png">
         </property>         
      </product>
   </extension>
   <extension
         point="org.eclipse.ui.startup">
      <startup
            class="uk.ac.gda.beamline.i05.I05StartupService">
      </startup>
   </extension>
<extension
          point="org.eclipse.ui.perspectiveExtensions">
    <perspectiveExtension targetID="*">
       <perspectiveShortcut
             id="uk.ac.gda.pydev.extension.ui.JythonPerspective">
       </perspectiveShortcut>
-   </perspectiveExtension>
-   </extension>
<extension
      point="uk.ac.gda.client.dashboard.objects">
   <Scannable
         name="analyser_slit"
         tooltip="analyser entrance slit setting">
   </Scannable>
      <Scannable
         name="sample_temp"
         tooltip="sample temperature">
   </Scannable>
      <Scannable
         name="exit_slit"
         tooltip="monochromator exit slit setting">
   </Scannable>
      <Scannable
         name="energy"
         tooltip="photon energy">
   </Scannable>
      <Scannable
         name="sa"
         tooltip="cryo manipulator">
   </Scannable>
</extension>
<extension
      point="uk.ac.gda.client.preferences">
   <preference
         name="gda.client.max.size.cached.points"
         value="10000">
   </preference>
</extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            class="uk.ac.gda.beamline.i05.perspectives.ArpesAlignmentPerspective"
            id="uk.ac.gda.beamline.i05.perspectives.ArpesAlignmentPerspective"
            icon="icons/application_view_gallery.png"
            name="ARPES Alignment">
      </perspective>     
      <perspective
            class="uk.ac.gda.beamline.i05.perspectives.ArpesExperimentPerspective"
            id="uk.ac.gda.beamline.i05.perspectives.ArpesExperimentPerspective"
            icon="icons/application_view_gallery.png"
            name="ARPES Experiment">
      </perspective>  
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <category
            name="Data Acquisition - ARPES"
            id="gda.rcp.arpes">
      </category>
      <view
            category="gda.rcp.arpes"
            class="uk.ac.diamond.scisoft.analysis.rcp.views.PlotView"
            icon="icons/sample.gif"
            id="uk.ac.gda.client.arpes.cameraview"
            name="Detector Plot"
            restorable="true">
      </view>
      <view
            category="gda.rcp.arpes"
            class="uk.ac.diamond.scisoft.analysis.rcp.views.PlotView"
            icon="icons/sample.gif"
            id="uk.ac.gda.client.arpes.sweptview"
            name="Swept Plot"
            restorable="true">
      </view>
      <view
            category="gda.rcp.arpes"
            class="uk.ac.gda.arpes.ui.ContinuousModeControllerView"
            icon="icons/sample.gif"
            id="uk.ac.gda.arpes.ui.continuousmodecontroller"
            name="Continuous Mode"
            restorable="true">
      </view>
         <view
            category="uk.ac.gda.client.general.category"
            class="uk.ac.gda.rcp.views.dashboard.DashboardView"
            icon="icons/sample.gif"
            id="uk.ac.gda.rcp.views.dashboardView"
            name="Polling Dashboard"
            restorable="true">
      </view>
         <view
               category="gda.rcp.arpes"
               class="uk.ac.gda.arpes.ui.views.SampleMetadataView"
               icon="icons/sample.gif"
               id="uk.ac.gda.arpes.ui.view.samplemetadata"
               name="Sample Information"
               restorable="true">
         </view>
   </extension>
   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            category="uk.ac.gda.client.preferences.gdaroot"
            class="uk.ac.gda.rcp.views.dashboard.DashboardPreferencePage"
            id="uk.ac.gda.rcp.views.dasboard.dashboardPreferences"
            name="Polling Dashboard">
      </page>
   </extension>
      <extension
         point="org.eclipse.ui.commands">
      <command
            defaultHandler="uk.ac.gda.rcp.views.dashboard.actions.AddScannableHandler"
            id="uk.ac.gda.rcp.views.dashboard.actions.AddScannableCommand"
            name="Add Scannable">
      </command>
      <command
            defaultHandler="uk.ac.gda.rcp.views.dashboard.actions.DeleteServerObjectHandler"
            id="uk.ac.gda.rcp.views.dashboard.actions.DeleteServerObjectCommand"
            name="Remove Scannable">
      </command>
      <command
            defaultHandler="uk.ac.gda.rcp.views.dashboard.actions.DashboardPreferencesAction"
            id="uk.ac.gda.rcp.views.dashboard.actions.DashboardPreferences"
            name="Preferences">
      </command>
      <command
            defaultHandler="uk.ac.gda.rcp.views.dashboard.actions.ResetServerObjectsHandler"
            id="uk.ac.gda.rcp.views.dashboard.actions.ResetServerObjectsCommand"
            name="Reset">
      </command>
      <command
            defaultHandler="uk.ac.gda.rcp.views.dashboard.actions.ClearServerObjectsHandler"
            id="uk.ac.gda.rcp.views.dashboard.actions.ClearServerObjectsCommand"
            name="Clear">
      </command>
    <command
          defaultHandler="uk.ac.gda.rcp.views.dashboard.actions.MoveUpHandler"
          id="uk.ac.gda.rcp.views.dashboard.actions.DashUpCommand"
          name="Dash Item Up">
    </command>
    <command
          defaultHandler="uk.ac.gda.rcp.views.dashboard.actions.MoveDownHandler"
          id="uk.ac.gda.rcp.views.dashboard.actions.DashDownCommand"
          name="Dash Item Down">
    </command>
</extension>
<extension   point="org.eclipse.ui.menus">
    <menuContribution
       locationURI="toolbar:uk.ac.gda.rcp.views.dashboardView">
    <command
          commandId="uk.ac.gda.rcp.views.dashboard.actions.AddScannableCommand"
          icon="icons/monitor_add.png"
          label="Add scannable"
          style="push"
          tooltip="Add scannable">
    </command>
    <command
          commandId="uk.ac.gda.rcp.views.dashboard.actions.DeleteServerObjectCommand"
          icon="icons/cross.png"
          label="Delete scannable"
          style="push"
          tooltip="Delete monitor">
    </command>
    <command
          commandId="uk.ac.gda.rcp.views.dashboard.actions.DashUpCommand"
          icon="icons/arrow_up.png"
          label="Move Up"
          style="push"
          tooltip="Move selected scannable up">
    </command>
    <command
          commandId="uk.ac.gda.rcp.views.dashboard.actions.DashDownCommand"
          icon="icons/arrow_down.png"
          label="Move Down"
          style="push"
          tooltip="Move selected scannable down">
    </command>
 </menuContribution>
 <menuContribution
       locationURI="popup:uk.ac.gda.rcp.views.dashboardView">
    <command
          commandId="uk.ac.gda.rcp.views.dashboard.actions.AddScannableCommand"
          icon="icons/monitor_add.png"
          label="Add scannable"
          style="push"
          tooltip="Add scannable">
    </command>
    <command
          commandId="uk.ac.gda.rcp.views.dashboard.actions.DeleteServerObjectCommand"
          icon="icons/cross.png"
          label="Delete scannable"
          style="push"
          tooltip="Delete monitor">
    </command>
    <command
          commandId="uk.ac.gda.rcp.views.dashboard.actions.DashUpCommand"
          icon="icons/arrow_up.png"
          label="Move Up"
          style="push"
          tooltip="Move selected scannable up">
    </command>
    <command
          commandId="uk.ac.gda.rcp.views.dashboard.actions.DashDownCommand"
          icon="icons/arrow_down.png"
          label="Move Down"
          style="push"
          tooltip="Move selected scannable down">
    </command>
    <separator
          name="uk.ac.gda.client.exafs.separator4"
          visible="true">
    </separator>
    <command
          commandId="uk.ac.gda.rcp.views.dashboard.actions.ResetServerObjectsCommand"
          label="Reset"
          style="push"
          tooltip="Reset to default view">
    </command>
    <command
          commandId="uk.ac.gda.rcp.views.dashboard.actions.ClearServerObjectsCommand"
          icon="icons/page_delete.png"
          label="Clear"
          style="push"
          tooltip="Clear all server objects">
    </command>
    <separator
          name="uk.ac.gda.client.exafs.separator1"
          visible="true">
    </separator>
    <command
          commandId="uk.ac.gda.rcp.views.dashboard.actions.DashboardPreferences"
          label="Preferences..."
          style="push">
    </command>
 </menuContribution>
 <menuContribution
       locationURI="menu:uk.ac.gda.rcp.views.dashboardView">
    <command
          commandId="uk.ac.gda.rcp.views.dashboard.actions.ResetServerObjectsCommand"
          label="Reset"
          style="push"
          tooltip="Reset to default view">
    </command>
    <command
          commandId="uk.ac.gda.rcp.views.dashboard.actions.ClearServerObjectsCommand"
          icon="icons/page_delete.png"
          label="Clear"
          style="push"
          tooltip="Clear all server objects">
    </command>
    <separator
          name="uk.ac.gda.client.exafs.separator1"
          visible="true">
    </separator>
    <command
          commandId="uk.ac.gda.rcp.views.dashboard.actions.DashboardPreferences"
          label="Preferences..."
          style="push">
    </command>
 </menuContribution>
</extension>
<extension
      point="org.eclipse.core.runtime.preferences">
   <initializer
         class="uk.ac.gda.beamline.i05.I05PreferenceInitializer">
   </initializer>
</extension>
</plugin>
