<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

  <extension point="org.eclipse.core.contenttype.contentTypes">
     <content-type
       base-type="org.eclipse.core.runtime.xml"
       describer="uk.ac.gda.arpes.ui.ARPESScanBeanDescriber"
       file-extensions="xml"
       id="uk.ac.gda.arpes.beans.ARPESScanBeanContentType"
       name="ARPESScanBean File Content"
       priority="high">
     </content-type>
  </extension>
  <extension point="org.eclipse.ui.editors">
    <editor
          class="uk.ac.gda.arpes.ui.ARPESScanBeanEditor"
          default="true"
          icon="icons/anaico.png"
          id="uk.ac.gda.arpes.beans.ARPESScanBeanEditor"
          name="ARPES Scan Editor">
            <contentTypeBinding
                contentTypeId="uk.ac.gda.arpes.beans.ARPESScanBeanContentType">
            </contentTypeBinding>
     </editor>
  </extension>
        <extension
         point="org.eclipse.ui.intro">
      <intro
            class="uk.ac.gda.beamline.i05.I05Intro"
            id="uk.ac.gda.beamline.i05.i05intro">
      </intro>
      <introProductBinding introId="uk.ac.gda.beamline.i05.i05intro" productId="uk.ac.gda.beamline.i05.product"/>
   </extension>
   <extension
         id="product"
         point="org.eclipse.core.runtime.products">
      <product
            application="uk.ac.gda.client.application"
            name="Beamline I05">
         <property
               name="appName"
               value="Beamline I05">
         </property>
         <property
               name="preferenceCustomization"
               value="plugin_customization.ini">
         </property>
         <property
               name="windowImages"
               value="icons/GDALogo16.png,icons/GDALogo32.png">
         </property>         
      </product>
   </extension>
   <extension
         point="org.eclipse.ui.startup">
      <startup
            class="uk.ac.gda.beamline.i05.I05StartupService">
      </startup>
   </extension>
<extension
          point="org.eclipse.ui.perspectiveExtensions">
    <perspectiveExtension targetID="*">
       <perspectiveShortcut
             id="uk.ac.gda.pydev.extension.ui.JythonPerspective">
       </perspectiveShortcut>
   </perspectiveExtension>
   </extension>
<extension point="uk.ac.gda.client.dashboard.objects">
      <Scannable name="analyser_slit" tooltip="analyser entrance slit setting"/>
      <Scannable name="sample_temp" tooltip="sample temperature" />
      <Scannable name="s6_ysize" tooltip="monochromator exit slit setting" />
      <Scannable name="s2_ysize" tooltip="s2 vertical slit size" />
      <Scannable name="s2_xsize" tooltip="s2 horizontal slit size" />
      <Scannable name="pgm_energy" tooltip="photon energy" />
      <Scannable name="pgm_cff" tooltip="monochromator cff" />
      <Scannable name="sa" tooltip="cryo manipulator" />
</extension>
<extension
      point="uk.ac.gda.client.preferences">
   <preference
         name="gda.client.max.size.cached.points"
         value="10000">
   </preference>
</extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            class="uk.ac.gda.beamline.i05.perspectives.ArpesAlignmentPerspective"
            id="uk.ac.gda.beamline.i05.perspectives.ArpesAlignmentPerspective"
            icon="icons/application_view_gallery.png"
            name="ARPES Alignment">
      </perspective>     
      <perspective
            class="uk.ac.gda.beamline.i05.perspectives.ArpesExperimentPerspective"
            id="uk.ac.gda.beamline.i05.perspectives.ArpesExperimentPerspective"
            icon="icons/application_view_gallery.png"
            name="ARPES Experiment">
      </perspective>  
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <category
            name="Data Acquisition - ARPES"
            id="gda.rcp.arpes">
      </category>
      <view
            category="gda.rcp.arpes"
            class="uk.ac.diamond.scisoft.analysis.rcp.views.ROIProfilePlotView"
            icon="icons/sample.gif"
            id="uk.ac.gda.client.arpes.cameraview"
            name="Detector Plot"
            restorable="true">
      </view>
      <view
            category="gda.rcp.arpes"
            class="uk.ac.diamond.scisoft.analysis.rcp.views.PlotView"
            icon="icons/sample.gif"
            id="uk.ac.gda.client.arpes.sweptview"
            name="Swept Plot"
            restorable="true">
      </view>
      <view
            category="gda.rcp.arpes"
            class="uk.ac.gda.arpes.ui.views.ContinuousModeControllerView"
            icon="icons/sample.gif"
            id="uk.ac.gda.arpes.ui.continuousmodecontroller"
            name="Continuous Mode"
            restorable="true">
      </view>
            <view
            category="gda.rcp.arpes"
            class="uk.ac.gda.arpes.ui.views.AnalyserProgressView"
            icon="icons/sample.gif"
            id="uk.ac.gda.arpes.ui.analyserprogress"
            name="Analyser Progress"
            restorable="true">
      </view>
            <view
                  class="uk.ac.gda.arpes.ui.views.CryoView"
                  id="uk.ac.gda.arpes.ui.views.CryoView"
                  name="Cryo View">
            </view>
   </extension>
     <extension
        point="org.eclipse.ui.newWizards">
     <category
           id="uk.ac.gda.beamline.i05"
           name="Experiment">
     </category>
     <wizard
           category="uk.ac.gda.beamline.i05"
           class="uk.ac.gda.beamline.i05.wizards.NewExperimentWizard"
           icon="icons/anaiconew.png"
           id="uk.ac.gda.beamline.i05.wizards.NewExperimentWizard"
           name="New Region">
     </wizard>
  </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="toolbar:uk.ac.gda.client.toolbar?after=additions">
         <command
               commandId="org.eclipse.ui.newWizard"
               mode="FORCE_TEXT"
               style="push"
               tooltip="Create a blank defintion file for an ARPES experiment">
            <visibleWhen
                  checkEnabled="false">
               <with
                     variable="activeWorkbenchWindow.activePerspective">
                  <equals
                        value="uk.ac.gda.beamline.i05.perspectives.ArpesExperimentPerspective">
                  </equals>
               </with>
            </visibleWhen>
            <parameter name="newWizardId" value="uk.ac.gda.beamline.i05.wizards.NewExperimentWizard" />
         </command>
      </menuContribution>
   </extension>
</plugin>
