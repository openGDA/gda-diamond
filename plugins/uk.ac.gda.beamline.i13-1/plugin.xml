<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         id="product"
         point="org.eclipse.core.runtime.products">
      <product
            application="uk.ac.gda.client.application"
            name="Diamond Beamline I13">
         <property
               name="appName"
               value="Diamond Beamline I13">
         </property>
         <property
               name="preferenceCustomization"
               value="plugin_customization.ini">
         </property>         
         <property
               name="windowImages"
               value="platform:/plugin/uk.ac.gda.core/icons/GDAlogos/GDALogo16.png,platform:/plugin/uk.ac.gda.core/icons/GDAlogos/GDALogo32.png,platform:/plugin/uk.ac.gda.core/icons/GDAlogos/GDALogo48.png,platform:/plugin/uk.ac.gda.core/icons/GDAlogos/GDALogo64.png,platform:/plugin/uk.ac.gda.core/icons/GDAlogos/GDALogo128.png">
         </property>
         <property
               name="aboutImage"
               value="platform:/plugin/uk.ac.gda.core/icons/GDAlogos/GDALogo128.png">
         </property>
         <property
               name="aboutText"
               value="Diamond Beamline I13 &#x0A;&#x0A;Based on GDA See &lt;http://www.opengda.org/&gt;">
         </property>    
      </product>
   </extension>
  
   <extension
         point="org.eclipse.help.toc">
      <toc
            file="userGuideTableOfContents.xml"
            primary="true">
      </toc>
      <toc
            file="toc.xml">
      </toc>
   </extension> 
   <extension
         point="org.eclipse.ui.actionSets">
      <actionSet
            label="I13 Manuals"
            visible="true"
            id="gda.rcp.help.i13.manuals">
         <action
               id="gda.rcp.help.beamlinemanual"
               label="Beamline Manual"
               menubarPath="help/helpStart"               
               style="push">
               <class class="org.eclipse.help.ui.browser.LaunchURL">
                    <parameter name="url" value="http://confluence.diamond.ac.uk/display/I13Tech/I13-1+Data+Acquisition+User+Guide" />
               </class>               
        	</action>
         <action
               id="gda.rcp.help.elog"
               label="ELog - Send Feedback"
               menubarPath="help/helpStart"               
               style="push">
                <class class="org.eclipse.help.ui.browser.LaunchURL">
                    <parameter name="url" value="https://elog.pri.diamond.ac.uk/" />
               </class>               
        	</action>          
         <action
               id="gda.rcp.help.reportabug"
               label="Report A Problem"
               menubarPath="help/helpStart"               
               style="push">
                <class class="org.eclipse.help.ui.browser.LaunchURL">
                    <parameter name="url" value="http://jira.diamond.ac.uk/secure/CreateIssue.jspa?pid=10120"/>
               </class>               
        	</action>        	
      </actionSet>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <category
            name="I13J Views"
            id="uk.ac.gda.beamline.i13j"/>
                       <view
                 allowMultiple="false"
                 category="uk.ac.gda.beamline.i13j"
                 class="gda.rcp.views.ViewFactory:statusView"
                 icon="platform:/plugin/uk.ac.gda.core/icons/GDAlogos/GDALogo32.png"
                 id="uk.ac.gda.beamline.i13j.views.StatusView"
                 name="Status">
      </view>
                       <view
                             allowMultiple="false"
                             category="uk.ac.diamond.scisoft.analysis.rcp"
                             class="uk.ac.diamond.scisoft.analysis.rcp.views.PlotView"
                             icon="icons/chart_curve.png"
                             id="uk.ac.gda.beamline.i13j.DetectorPlot"
                             name="Detector Image"
                             restorable="true">
                       </view>  
      <view
            allowMultiple="false"
            category="uk.ac.gda.beamline.i13j"
            class="uk.ac.gda.epics.adviewer.views.HistogramViewCreator:float2"
            icon="icons/AreaDetectorProfileView.gif"
            id="uk.ac.gda.beamline.i13j.float2AreaDetectorProfileView"
            name="float2 Image Profile View">
      </view>                       
      <view
            allowMultiple="false"
            category="uk.ac.gda.beamline.i13j"
            class="uk.ac.gda.epics.adviewer.views.TwoDArrayViewCreator:float2"
            icon="icons/AreaDetectorImageView.gif"
            id="uk.ac.gda.beamline.i13j.float2AreaDetectorArrayView"
            name="float2 Image View">
      </view>
      <view
            allowMultiple="false"
            category="uk.ac.gda.beamline.i13j"
            class="uk.ac.gda.epics.adviewer.views.MJPegViewCreator:float2"
            icon="icons/AreaDetectorLiveView.gif"
            id="uk.ac.gda.beamline.i13j.float2AreaDetectorLiveView"
            name="float2 Live View">
      </view>                       
                                  
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            class="uk.ac.gda.beamline.i13j.perspectives.DataCollectionPerspective"
            icon="icons/releng_gears.gif"
            id="uk.ac.gda.beamline.i13j.perspectives.DataCollectionPerspective"
            name="Data Collection">
      </perspective>
      <perspective
            class="uk.ac.diamond.scisoft.analysis.rcp.DataExplorationPerspective"
            icon="icons/chart_curve.png"
            id="uk.ac.gda.beamline.i13j.perspectives.DataExplorer"
            name="Data Explorer">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="*">
            <perspectiveShortcut
                  id="uk.ac.gda.beamline.i13j.perspectives.DataCollectionPerspective">
            </perspectiveShortcut>
      </perspectiveExtension>
   </extension>    
   
   <extension point="org.eclipse.ui.menus">   
	<menuContribution
            locationURI="toolbar:org.eclipse.ui.main.toolbar?after=additions">
         <toolbar
               id="uk.ac.gda.client.mx.mainControls">
            <command
                  commandId="uk.ac.gda.client.datadispenser.controller.command"
                  label="Data Dispenser"
                  mode="FORCE_TEXT"
                  style="push">
            </command>
         </toolbar>
      </menuContribution>
 <menuContribution
       allPopups="false"
       locationURI="toolbar:uk.ac.gda.beamline.i13j.float2AreaDetectorProfileView">
    <command
          commandId="uk.ac.gda.epics.adviewer.commands.setExposure"
          label="Set Exposure"
          style="push">
       <parameter
             name="uk.ac.gda.epics.adviewer.commandParameters.adcontrollerServiceName"
             value="float2">
       </parameter>
    </command>
    <command
          commandId="uk.ac.gda.epics.adviewer.commands.setLiveViewScale"
          label="Set LiveView Scale"
          style="push">
       <parameter
             name="uk.ac.gda.epics.adviewer.commandParameters.adcontrollerServiceName"
             value="float2">
       </parameter>
    </command>
    <command
          commandId="org.eclipse.ui.views.showView"
          icon="icons/AreaDetectorLiveView.gif"
          label="Show Live View"
          style="push">
       <parameter
             name="org.eclipse.ui.views.showView.viewId"
             value="uk.ac.gda.beamline.i13j.float2AreaDetectorLiveView">
       </parameter>
    </command>
 </menuContribution>
 <menuContribution
       allPopups="false"
       locationURI="toolbar:uk.ac.gda.beamline.i13j.float2AreaDetectorArrayView">
    <command
          commandId="uk.ac.gda.epics.adviewer.commands.setExposure"
          label="Set Exposure"
          style="push">
       <parameter
             name="uk.ac.gda.epics.adviewer.commandParameters.adcontrollerServiceName"
             value="float2">
       </parameter>
    </command>
 </menuContribution>
 <menuContribution
       allPopups="false"
       locationURI="toolbar:uk.ac.gda.beamline.i13j.float2AreaDetectorLiveView">
    <command
          commandId="uk.ac.gda.epics.adviewer.command.zoomToFit"
          label="Zoom To Fit"
          style="push"
          tooltip="Zoom To Fit">
    </command>
    <command
          commandId="uk.ac.gda.epics.adviewer.commands.setExposure"
          label="Set Exposure"
          style="push"
          tooltip="Set Exposure">
       <parameter
             name="uk.ac.gda.epics.adviewer.commandParameters.adcontrollerServiceName"
             value="float2">
       </parameter>
    </command>
    <command
          commandId="uk.ac.gda.epics.adviewer.commands.setLiveViewScale"
          label="Set LiveView Scale"
          style="push"
          tooltip="Set LiveView Scale">
       <parameter
             name="uk.ac.gda.epics.adviewer.commandParameters.adcontrollerServiceName"
             value="float2">
       </parameter>
    </command>
    <command
          commandId="org.eclipse.ui.views.showView"
          icon="icons/AreaDetectorProfileView.gif"
          label="Show Profile View"
          style="push"
          tooltip="Show Profile ">
       <parameter
             name="org.eclipse.ui.views.showView.viewId"
             value="uk.ac.gda.beamline.i13j.float2AreaDetectorProfileView">
       </parameter>
    </command>
    <command
          commandId="org.eclipse.ui.views.showView"
          icon="icons/AreaDetectorImageView.gif"
          label="Show Image View"
          style="push"
          tooltip="Show Full Image">
       <parameter
             name="org.eclipse.ui.views.showView.viewId"
             value="uk.ac.gda.beamline.i13j.float2AreaDetectorArrayView">
       </parameter>
    </command>
 </menuContribution>                    
   </extension>
</plugin>
