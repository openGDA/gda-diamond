<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         id="product"
         point="org.eclipse.core.runtime.products">
      <product
            application="uk.ac.gda.client.application"
            name="GDA I08 Beamline">
         <property
               name="appName"
               value="GDA I08 Beamline">
         </property>
         <property
               name="aboutImage"
               value="platform:/plugin/uk.ac.gda.core/icons/GDAlogos/GDALogo128.png">
         </property>
         <property
               name="aboutText"
               value="Diamond Beamline I08&#x0A;&#x0A;Based on GDA See &lt;http://www.opengda.org/&gt;">
         </property>
         <property
               name="windowImages"
               value="platform:/plugin/uk.ac.gda.core/icons/GDAlogos/GDALogo16.png,platform:/plugin/uk.ac.gda.core/icons/GDAlogos/GDALogo32.png,platform:/plugin/uk.ac.gda.core/icons/GDAlogos/GDALogo48.png,platform:/plugin/uk.ac.gda.core/icons/GDAlogos/GDALogo64.png,platform:/plugin/uk.ac.gda.core/icons/GDAlogos/GDALogo128.png">
         </property>
      </product>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            class="uk.ac.gda.beamline.i08.perspectives.ExperimentPerspective"
            id="uk.ac.gda.microscopy.ExperimentPerspective"
            name="X-ray Microscopy Experiment">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">

      <perspectiveExtension
            targetID="uk.ac.diamond.daq.mapping.ui.experiment.MappingPerspective">
         <view
               closeable="true"
               id="uk.ac.gda.rcp.views.dashboardView"
               moveable="true"
               relationship="stack"
               relative="gda.rcp.jythonterminalview"
               showTitle="true"
               visible="true">
         </view>
      </perspectiveExtension>

      <perspectiveExtension
            targetID="uk.ac.gda.microscopy.ExperimentPerspective">

         <view
               closeable="false"
               id="gda.rcp.jythonterminalview"
               minimized="false"
               moveable="true"
               ratio="0.95"
               relationship="left"
               relative="org.eclipse.ui.editorss"
               showTitle="true"
               visible="true">
         </view>
<!--         
         <view
               closeable="true"
               id="uk.ac.gda.nano.views.TestView"
               moveable="true"
               relationship="stack"
               relative="uk.ac.gda.nano.views.terminalView"
               showTitle="true"
               visible="true">
         </view>
-->         
         <view
               closeable="false"
               id="uk.ac.gda.client.liveplotview"
               minimized="false"
               moveable="true"
               ratio="0.6"
               relationship="top"
               relative="gda.rcp.jythonterminalview"
               showTitle="true"
               visible="true">
         </view>
         <view
               closeable="true"
               id="uk.ac.gda.rcp.views.dashboardView"
               moveable="false"
               ratio="0.75"
               relationship="right"
               relative="gda.rcp.jythonterminalview"
               showTitle="true"
               visible="true">
         </view>
         <view
               id="uk.ac.gda.client.navigator"
               minimized="false"
               ratio="0.2"
               relationship="left"
               relative="uk.ac.gda.client.liveplotview">
         </view>
         <view
               id="uk.ac.gda.epics.adviewer.mpegview"
               minimized="false"
               ratio="0.2"
               relationship="right"
               relative="uk.ac.gda.client.liveplotview"
               visible="true">
         </view>
      </perspectiveExtension>
   </extension>
   <extension
         point="uk.ac.gda.client.dashboard.objects">
      <Scannable
            name="IDEnergy"
            tooltip="Insertion device energy">
      </Scannable>
      <Scannable
            name="pgm_energy"
            tooltip="Plane Grating monochromator energy">
      </Scannable>
      <Scannable
            name="topup"
            tooltip="Topup">
      </Scannable>
      <Scannable
            name="absorber"
            tooltip="Front end absorber">
      </Scannable>
      <Scannable
            name="opticsShutter"
            tooltip="Optics Shutter">
      </Scannable>
      <Scannable
            name="shutter1"
            tooltip="Experimental shutter">
      </Scannable>
   </extension>
   <extension
         point="uk.ac.gda.client.preferences">
      <preference
            name="gda.client.max.size.cached.points"
            value="10000">
      </preference>
   </extension>
  
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="menu:window?after=showView">
         <menu
               label="Area Detectors">
            <command
                  commandId="org.eclipse.ui.views.showView"
                  label="Andor"
                  style="push">
               <parameter
                     name="org.eclipse.ui.views.showView.viewId"
                     value="uk.ac.gda.epics.adviewer.mpegview">
               </parameter>
               <parameter
                     name="org.eclipse.ui.views.showView.secondaryId"
                     value="pv//Andor//BL08I-EA-DET-01@">
               </parameter>
            </command>
         </menu>
         <menu
               label="Fluorescence detector">
            <command
                  commandId="org.eclipse.ui.views.showView"
                  label="Fluorescence"
                  style="push">
               <parameter
                     name="org.eclipse.ui.views.showView.viewId"
                     value="uk.ac.gda.exafs.ui.views.detectors.FluorescenceDetectorConfigurationView">
               </parameter>
            </command>
         </menu>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <view
            class="uk.ac.gda.exafs.ui.views.detectors.FluorescenceDetectorConfigurationView"
            id="uk.ac.gda.beamline.i08.FluorescenceDetector"
            name="Xmap Fluorescence Detector"
            restorable="true">
      </view>
   </extension>
</plugin>
