<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         id="product"
         point="org.eclipse.core.runtime.products">
      <product
            application="uk.ac.gda.client.application"
            name="GDA I20 EDE">
         <property
               name="appName"
               value="GDA I20 EDE">
         </property>
         <property
               name="preferenceCustomization"
               value="plugin_customization.ini">
         </property>
         <property
               name="aboutImage"
               value="platform:/plugin/uk.ac.gda.core/icons/GDAlogos/GDALogomed.png">
         </property>
         <property
               name="windowImages"
               value="platform:/plugin/uk.ac.gda.core/icons/GDAlogos/GDALogo16.png,platform:/plugin/uk.ac.gda.core/icons/GDAlogos/GDALogo32.png,platform:/plugin/uk.ac.gda.core/icons/GDAlogos/GDALogo48.png,platform:/plugin/uk.ac.gda.core/icons/GDAlogos/GDALogo64.png,platform:/plugin/uk.ac.gda.core/icons/GDAlogos/GDALogo128.png">
         </property>
      </product>
   </extension>
   
   <extension
         point="uk.ac.gda.client.preferences">
      <preference
            name="gda.client.max.size.cached.points"
            value="10000">
      </preference>
   </extension>
   <extension
         point="uk.ac.gda.client.dashboard.objects">
      <Scannable
            name="topup"
            tooltip="The time before the next topup">
      </Scannable>
      <Scannable
            name="wigglerGap"
            tooltip="Current wiggler gap">
      </Scannable>
      <Scannable
            name="ringCurrent">
      </Scannable>
      <Scannable
            name="ringEnergy">
      </Scannable>
   </extension>
   <extension
         point="org.eclipse.ui.startup">
      <startup
            class="uk.ac.gda.beamline.i20_1.StartupService">
      </startup>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <category
            id="uk.ac.gda.beamline.i20_1.alignmentviews"
            name="Data Acquisition - EDE Alignment">
      </category>
      <category
            id="uk.ac.gda.beamline.i20_1.edeexperimentviews"
            name="Data Acquisition - EDE Experiment">
      </category>
      <view
            category="uk.ac.gda.beamline.i20_1.alignmentviews"
            class="uk.ac.gda.exafs.ede.alignment.ui.BeamlineAlignmentView"
            icon="icons/crosshairs.gif"
            id="uk.ac.gda.exafs.ui.views.beamlinealignmentview"
            name="Optics"
            restorable="true">
      </view>
      <view
            allowMultiple="false"
            category="uk.ac.gda.beamline.i20_1.alignmentviews"
            class="uk.ac.gda.exafs.ede.alignment.ui.AlignmentSingleSpectrumView"
            icon="icons/1-star.gif"
            id="uk.ac.gda.exafs.ui.views.alignmentSingleSpectrumView"
            name="Single Collection"
            restorable="true">
      </view>
      <view
            category="uk.ac.gda.beamline.i20_1.alignmentviews"
            class="uk.ac.gda.exafs.ede.alignment.ui.FocusingView"
            id="uk.ac.gda.exafs.ui.views.focusingview"
            name="Focusing View"
            restorable="true">
      </view>
      <view
            allowMultiple="false"
            category="uk.ac.gda.beamline.i20_1.alignmentviews"
            class="uk.ac.gda.exafs.ede.alignment.ui.DetectorLiveModeView"
            icon="icons/chart_curve.png"
            id="uk.ac.gda.exafs.ui.views.DetectorLiveModeView"
            name="Live Mode"
            restorable="true">
      </view>
      <view
            allowMultiple="false"
            category="uk.ac.gda.beamline.i20_1.alignmentviews"
            class="uk.ac.gda.exafs.calibration.ui.EdeManualCalibrationPlotView"
            icon="icons/chart_curve.png"
            id="uk.ac.gda.exafs.ui.views.calibrationreference"
            name="Reference Spectrum"
            restorable="true">
      </view>
      <view
            allowMultiple="false"
            category="uk.ac.diamond.scisoft.analysis.rcp"
            class="uk.ac.gda.exafs.calibration.ui.EdeManualCalibrationPlotView"
            icon="icons/chart_curve.png"
            id="uk.ac.gda.exafs.ui.views.calibrationEdeData"
            name="EDE Data Spectrum"
            restorable="true">
      </view>
      <view
            category="uk.ac.gda.beamline.i20_1.alignmentviews"
            class="uk.ac.gda.exafs.ede.alignment.ui.AlignmentStageCalibrationView"
            icon="icons/brick.png"
            id="uk.ac.gda.exafs.ui.views.alignmentstagecalibration"
            name="Alignment Stage"
            restorable="true">
      </view>
      <view
            category="uk.ac.gda.beamline.i20_1.alignmentviews"
            class="uk.ac.gda.exafs.ede.experiment.ui.ExperimentSingleSpectrumView"
            icon="icons/1-star.gif"
            id="uk.ac.gda.exafs.ui.views.experimentSingleSpectrumView"
            name="Single Collection"
            restorable="true">
      </view>
      <view
            category="uk.ac.gda.beamline.i20_1.edeexperimentviews"
            class="uk.ac.gda.exafs.ede.experiment.ui.LinearExperimentView"
            id="uk.ac.gda.exafs.ui.views.linearExperimentView"
            name="Linear experiment"
            restorable="true">
      </view>
      <view
            category="uk.ac.gda.beamline.i20_1.alignmentviews"
            class="uk.ac.gda.exafs.plotting.ui.ExperimentDataPlotView"
            icon="icons/1-star.gif"
            id="uk.ac.gda.exafs.ui.views.dataplotview"
            name="Ede experiment plot"
            restorable="true">
      </view>
      <view
            category="uk.ac.gda.beamline.i20_1.edeexperimentviews"
            class="uk.ac.gda.exafs.ede.experiment.ui.CyclicExperimentView"
            id="uk.ac.gda.exafs.ui.views.cyclicExperimentView"
            name="Cyclic experiment "
            restorable="true">
      </view>
      <view
            class="uk.ac.gda.exafs.plotting.ui.SlitsScanPlotView"
            id="uk.ac.gda.exafs.ui.views.slitsscanplotview"
            name="Slits scan plot"
            restorable="true">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            class="uk.ac.gda.exafs.ui.perspectives.AlignmentPerspective"
            icon="icons/chart_curve.png"
            id="uk.ac.gda.beamline.i20_1.AlignmentPerspective"
            name="Alignment">
      </perspective>
      <perspective
            class="uk.ac.gda.exafs.ui.perspectives.ExperimentPerspective"
            id="uk.ac.gda.beamline.i20_1.ExperimentPerspective"
            name="EDE Experiment">
      </perspective>
   </extension>
   <extension point="org.eclipse.core.runtime.preferences">
      <initializer
            class="uk.ac.gda.beamline.i20_1.I20_1PreferenceInitializer">
      </initializer>
   </extension>
   
      

   <extension
      name="d10"
      point="org.eclipse.ui.menus">
   <menuContribution
         allPopups="false"
         locationURI="toolbar:uk.ac.gda.exafs.ui.views.calibrationEdeData">
      <command
            commandId="uk.ac.gda.beamline.i20_1.calibration.reset"
            label="Reset"
            style="push">
      </command>
   </menuContribution>
   <menuContribution
         allPopups="false"
         locationURI="toolbar:uk.ac.gda.exafs.ui.views.calibrationreference">
      <command
            commandId="uk.ac.gda.beamline.i20_1.calibration.reset"
            label="Reset"
            style="push">
      </command>
   </menuContribution>
   <menuContribution
         allPopups="false"
         locationURI="popup:uk.ac.gda.exafs.ui.views.linearExperimentView">
      <command
            commandId="uk.ac.gda.exafs.ui.data.experiment.splitgroup"
            label="Split Group"
            style="push">
         <visibleWhen
               checkEnabled="false">
            <with
                  variable="selection">
               <iterate
                     ifEmpty="false"
                     operator="or">
                  <instanceof
                        value="uk.ac.gda.exafs.ui.data.experiment.TimingGroupUIModel">
                  </instanceof>
               </iterate>
            </with>
         </visibleWhen>
      </command>
   </menuContribution>
   <menuContribution
         allPopups="false"
         locationURI="popup:uk.ac.gda.exafs.ui.views.linearExperimentView">
      <command
            commandId="uk.ac.gda.exafs.ui.data.experiment.removegroup"
            label="Remove Group"
            style="push">
         <visibleWhen
               checkEnabled="false">
            <with
                  variable="selection">
               <iterate
                     ifEmpty="false"
                     operator="or">
                  <instanceof
                        value="uk.ac.gda.exafs.ui.data.experiment.TimingGroupUIModel">
                  </instanceof>
               </iterate>
            </with>
         </visibleWhen>
      </command>
   </menuContribution>
   <menuContribution
         allPopups="false"
         locationURI="popup:uk.ac.gda.exafs.ui.views.cyclicExperimentView">
      <command
            commandId="uk.ac.gda.exafs.ui.data.experiment.splitgroup"
            label="Split Group"
            style="push">
         <visibleWhen
               checkEnabled="false">
            <with
                  variable="selection">
               <iterate
                     ifEmpty="false"
                     operator="or">
                  <instanceof
                        value="uk.ac.gda.exafs.ui.data.experiment.TimingGroupUIModel">
                  </instanceof>
               </iterate>
            </with>
         </visibleWhen>
      </command>
   </menuContribution>
   <menuContribution
         allPopups="false"
         locationURI="popup:uk.ac.gda.exafs.ui.views.cyclicExperimentView">
      <command
            commandId="uk.ac.gda.exafs.ui.data.experiment.removegroup"
            label="Remove Group"
            style="push">
         <visibleWhen
               checkEnabled="false">
            <with
                  variable="selection">
               <iterate
                     ifEmpty="false"
                     operator="or">
                  <instanceof
                        value="uk.ac.gda.exafs.ui.data.experiment.TimingGroupUIModel">
                  </instanceof>
               </iterate>
            </with>
         </visibleWhen>
      </command>
   </menuContribution>
   <menuContribution
         allPopups="false"
         locationURI="menu:window?after=showView">
      <menu
            label="Area Detectors">
         <command
               commandId="org.eclipse.ui.views.showView"
               label="d10 MPeg"
               style="push">
            <parameter
                  name="org.eclipse.ui.views.showView.viewId"
                  value="uk.ac.gda.epics.adviewer.mpegview">
            </parameter>
            <parameter
                  name="org.eclipse.ui.views.showView.secondaryId"
                  value="d10ADController">
            </parameter>
         </command>
      </menu>
   </menuContribution>
</extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            defaultHandler="uk.ac.gda.exafs.ui.views.commandhandlers.ResetCalibrationDataPlot"
            id="uk.ac.gda.beamline.i20_1.calibration.reset"
            name="Reset">
      </command>
      <command
            defaultHandler="uk.ac.gda.exafs.ui.data.experiment.SplitTimingGroupCommandHandler"
            id="uk.ac.gda.exafs.ui.data.experiment.splitgroup"
            name="Split Group">
      </command>
      <command
            defaultHandler="uk.ac.gda.exafs.ui.data.experiment.RemoveTimeGroupCommandHandler"
            id="uk.ac.gda.exafs.ui.data.experiment.removegroup"
            name="Remove Group">
      </command>
   </extension>
   <extension
         point="org.dawnsci.plotting.api.toolPage">
      <plotting_tool_page
            category="org.dawnsci.plotting.tools.category.Science"
            class="org.dawnsci.plotting.tools.profile.TimeResolvedToolPage"
            id="org.dawnsci.plotting.tools.profile.timeresolvedtool"
            label="Time resolved Tool">
      </plotting_tool_page>
   </extension>
   <extension
         point="org.eclipse.core.runtime.preferences">
   </extension>

   
</plugin>
