            commandId="uk.ac.gda.exafs.ui.data.experiment.splitgroup"
            label="Split Group"
            style="push">
         <visibleWhen
               checkEnabled="false">
            <with
                  variable="selection">
               <iterate
                     ifEmpty="false"
                     operator="or">
                  <instanceof
                        value="uk.ac.gda.exafs.experiment.ui.data.TimingGroupUIModel">
                  </instanceof>
               </iterate>
            </with>
         </visibleWhen>
      </command>
   </menuContribution>
