<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         id="product"
         point="org.eclipse.core.runtime.products">
      <product
            application="uk.ac.gda.client.application"
            name="Diamond Beamline I14">
         <property
               name="appName"
               value="Diamond Beamline I14">
         </property>
         <property
               name="aboutImage"
               value="platform:/plugin/uk.ac.gda.core/icons/GDAlogos/GDALogo128.png">
         </property>
         <property
               name="aboutText"
               value="Diamond Beamline I14&#x0A;&#x0A;Based on GDA See &lt;http://www.opengda.org/&gt;">
         </property>
         <property
               name="windowImages"
               value="platform:/plugin/uk.ac.gda.core/icons/GDAlogos/GDALogo16.png,platform:/plugin/uk.ac.gda.core/icons/GDAlogos/GDALogo32.png,platform:/plugin/uk.ac.gda.core/icons/GDAlogos/GDALogo48.png,platform:/plugin/uk.ac.gda.core/icons/GDAlogos/GDALogo64.png,platform:/plugin/uk.ac.gda.core/icons/GDAlogos/GDALogo128.png">
         </property>
      </product>
   </extension>
   <extension
         point="uk.ac.gda.client.preferences">
      <preference
            name="gda.client.max.size.cached.points"
            value="10000">
      </preference>
   </extension>

   <extension
         point="org.eclipse.ui.views">
      <category
            name="I14 Views"
            id="uk.ac.gda.beamline.i14">
      </category>
      <view
            allowMultiple="false"
            category="uk.ac.gda.beamline.i14"
            class="gda.rcp.views.ViewFactory:statusViewStaff"
            icon="platform:/plugin/uk.ac.gda.beamline.i14/icons/status.png"
            id="uk.ac.gda.beamline.i14.views.I14StatusViewStaff"
            name="Status - staff">
      </view>
      <view
            allowMultiple="false"
            category="uk.ac.gda.beamline.i14"
            class="gda.rcp.views.ViewFactory:statusViewUser"
            icon="platform:/plugin/uk.ac.gda.beamline.i14/icons/status.png"
            id="uk.ac.gda.beamline.i14.views.I14StatusViewUser"
            name="Status - user">
      </view>
      <e4view
            allowMultiple="false"
            category="uk.ac.gda.beamline.i14"
            class="uk.ac.diamond.daq.mapping.ui.standards.StandardsScanView"
            icon="platform:/plugin/uk.ac.diamond.daq.mapping.ui/icons/gridscan.png"
            id="uk.ac.diamond.daq.mapping.ui.standards.StandardsScanView"
            name="Standards Scans"
            restorable="true">
      </e4view>
      <e4view
            allowMultiple="false"
            category="uk.ac.gda.beamline.i14"
            class="uk.ac.gda.beamline.i14.views.customscript.CustomScriptView"
            icon="platform:/plugin/uk.ac.gda.client/icons/script.png"
            id="uk.ac.gda.beamline.i14.views.customscript.CustomScriptView"
            name="Custom script"
            restorable="true">
      </e4view>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="uk.ac.diamond.daq.mapping.ui.experiment.MappingPerspective">
         <view
               id="uk.ac.gda.beamline.i14.views.I14StatusViewUser"
               minimized="false"
               relative="org.dawnsci.mapping.ui.mappeddataview"
               relationship="bottom"
               ratio="0.55">
         </view>
         <view
               id="uk.ac.gda.beamline.i14.views.I14StatusViewStaff"
               minimized="false"
               visible="false"
               relationship="stack"
               relative="uk.ac.gda.beamline.i14.views.I14StatusViewUser">
         </view>
         <view
               id="uk.ac.gda.client.livecontrol.LiveControlsView"
               minimized="false"
               relationship="right"
               relative="org.dawnsci.mapping.ui.spectrumview">
         </view>
         <view
               id="uk.ac.diamond.daq.client.gui.camera.CameraConfigurationView"
               minimized="false"
               closeable="true"
               relationship="stack"
               relative="org.dawnsci.mapping.ui.mapview">
         </view>
         <view
               id="uk.ac.diamond.daq.mapping.ui.standards.StandardsScanView"
               minimized="false"
               closeable="false"
               relationship="stack"
               relative="uk.ac.diamond.daq.mapping.ui.experiment.mappingExperimentView">
         </view>
         <view
               id="uk.ac.gda.beamline.i14.views.customscript.CustomScriptView"
               minimized="false"
               closeable="false"
               relationship="stack"
               relative="uk.ac.diamond.daq.mapping.ui.standards.StandardsScanView">
         </view>
         <view
               id="uk.ac.gda.client.live.stream.view.LiveStreamView"
               minimized="false"
               relationship="stack"
               relative="console_folder">
         </view>
      </perspectiveExtension>
   </extension>
    <extension
         point="org.eclipse.scanning.api.rerunHandler">
      <rerunHandler
            class="org.eclipse.scanning.event.ui.view.QueuedScanRepeatHandler">
      </rerunHandler>
   </extension>

</plugin>
