<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:util="http://www.springframework.org/schema/util"
	xmlns:corba="http://www.diamond.ac.uk/schema/gda/corba"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
           http://www.springframework.org/schema/util
           http://www.springframework.org/schema/util/spring-util-2.0.xsd
           http://www.diamond.ac.uk/schema/gda/corba
           http://www.diamond.ac.uk/schema/gda/corba/gda-corba-1.0.xsd">

	<bean
		class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
		<property name="location"
			value="file:${gda.config}/properties/java.properties" />
	</bean>

	<bean class="gda.spring.FindableNameSetterPostProcessor" />

	<bean id="GDAHashtable" class="gda.util.findableHashtable.FindableHashtable" />

	<import resource="i15_GDA_Metadata.xml" />

	<bean class="gda.factory.EpicsDeviceObjectCreator">
		<property name="name" value="${gda.factory.factoryName}"></property>
	</bean>

	<bean id="Ring" class="gda.spring.FindableEpicsDeviceFactoryBean">
		<property name="recordPvs">
			<map>
				<entry key="Top" value="" />
				<entry key="Current" value="SR-DI-DCCT-01:SIGNAL" />
				<entry key="FastCurrent" value="SR21C-DI-DCCT-01:SIGNAL" />
				<entry key="TimeUntilRefill" value="SR-CS-FILL-01:COUNTDOWN" />
				<entry key="BeamMode" value="CS-CS-MSTAT-01:MODE" />
			</map>
		</property>
	</bean>

	<import resource="devices/dummy/motors.xml" />

	<import resource="devices/live/motors.xml" />
	<!--
	<import resource="devices/live/geo2.xml" />
	 -->
	<import resource="devices/live/FE.xml" />
	<import resource="devices/live/FM.xml" />
	<import resource="devices/live/slits6_motors.xml" />
	<import resource="devices/live/diffractometer.xml" />
	<import resource="devices/live/temperatures.xml" />
	<import resource="devices/live/currents.xml" />
	<!-- Second end table -->
	<import resource="devices/live/BASE2.xml" />
	<import resource="devices/live/D6.xml" />
	<import resource="devices/live/FS2.xml" />
	<!-- 
	 -->
	<import resource="devices/live/M3.xml" />
	<import resource="devices/live/SFAB.xml" />
	<import resource="devices/live/D7.xml" />
	<import resource="devices/live/EYE2.xml" />
	<import resource="devices/live/BS2.xml" />
	<import resource="devices/live/DET2.xml" />

	<import resource="devices/live/OxfordCryoStream.xml"/>
	<!-- Multi-channel Analyser Crystal detectors: mac11, ... -->
 	<import resource="MACDetectors.xml" />
	<!-- ?? <import resource="MACScannables.xml"/>  -->
	<!-- Multi-Channel Scaler (Struck): mcs1, mcs2 -->
	<!-- ?? <import resource="MCS.xml"/>  -->

	<bean id="ScanDataStore" class="gda.util.simpleServlet.FindableSimpleServlet" />
	<bean id="Plot_Manager" class="gda.analysis.plotmanager.PlotManager" />
	<bean id="plot_server" class="uk.ac.diamond.scisoft.analysis.plotserver.PlotServerBase" />
	<bean id="ODCCD" class="gda.device.detector.odccd.ODCCDController" />
	<bean id="Mar345Detector" class="gda.device.detector.mar345.Mar345Detector" />

	<bean id="FileRegistrar" class="gda.data.fileregistrar.FileRegistrar">
		<property name="name" value="FileRegistrar" />
		<property name="directory"
			value="/dls/bl-misc/dropfiles2/icat/dropZone/${gda.instrument}-" />
	</bean>

	<!-- Copy FileRegistrar xml files for debugging unknown instrument problems. -->
	<bean id="FileRegistrarDebug" class="gda.data.fileregistrar.FileRegistrar">
		<property name="name" value="FileRegistrarDebug" />
		<property name="directory"
			value="/dls/${gda.instrument}/var/dropZone/${gda.instrument}-" />
	</bean>

	<bean id="DefaultDataWriterFactory" class="gda.data.scan.datawriter.DefaultDataWriterFactory">
		<property name="name" value="DataWriterFactory" />
		<property name="dataWriterExtenders">
			<list>
				<ref bean="FileRegistrar" />
				<ref bean="FileRegistrarDebug" />
			</list>
		</property>
	</bean>

	<bean id="jythonServerFacade" class="gda.jython.JythonServerFacade">
		<constructor-arg ref="command_server" />
	</bean>

	<bean id="command_server" class="gda.jython.JythonServer">
		<!-- 
		<property name="userScriptDirectory" value="${gda.data}/scripts" />
		<property name="gdaScriptDirectory" value="${gda.config}/scripts" />
		<property name="gdaScriptLibraryDirectory" value="${gda.root}/uk.ac.gda.core/scripts" />
		 -->
		<property name="jythonScriptPaths">
			<bean class="gda.jython.ScriptPaths">
				<property name="projects"><list>
					<bean class="gda.jython.ScriptProject">
						<property name="path" value="${gda.data}/scripts" /> 
						<property name="name" value="Scripts: User" />
						<property name="type" value="USER" />
					</bean>
					<bean class="gda.jython.ScriptProject">
						<property name="path" value="${gda.config}/scripts" />
						<property name="name" value="Scripts: Config" />
						<property name="type" value="CONFIG" />
					</bean>
					<bean class="gda.jython.ScriptProject">
						<property name="path" value="${gda.root}/uk.ac.gda.core/scripts" /> 
						<property name="name" value="Scripts: Core" /> 
						<property name="type" value="CORE" /> 
					</bean>
				</list></property>
				<property name="startupScript" value="${gda.config}/scripts/localStation.py" /> 
			</bean>
		</property>
		<property name="gdaVarDirectory" value="${gda.var}" />
		<property name="cacheDirectory" value="${gda.var}/jythonCache" />
		<property name="remotePort" value="9999" />
	</bean>

	<corba:export namespace="i15server" />
	<bean class="gda.spring.SingletonRegistrationPostProcessor" />
</beans>
