<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">


	<bean id="DXMotor" class="gda.device.motor.EpicsMotor">
		<property name="deviceName" value="DIFF.X" />
	</bean>
	<bean id="DYMotor" class="gda.device.motor.EpicsMotor">
		<property name="deviceName" value="DIFF.Y" />
	</bean>
	<bean id="DZMotor" class="gda.device.motor.EpicsMotor">
		<property name="deviceName" value="DIFF.Z" />
	</bean>
	<bean id="DkphiMotor" class="gda.device.motor.EpicsMotor">
		<property name="deviceName" value="DIFF.KPHI" />
	</bean>
	<bean id="Dr1kappaMotor" class="gda.device.motor.EpicsMotor">
		<property name="deviceName" value="DIFF.KAPPA" />
	</bean>
	<bean id="Dr1kthetaMotor" class="gda.device.motor.EpicsMotor">
		<property name="deviceName" value="DIFF.KTHETA" />
	</bean>
	<bean id="Dr1muMotor" class="gda.device.motor.EpicsMotor">
		<property name="deviceName" value="DIFF.MU" />
	</bean>
	<bean id="Dr1deltaMotor" class="gda.device.motor.EpicsMotor">
		<property name="deviceName" value="DIFF.DELTA" />
	</bean>
	<bean id="Dr1gammaMotor" class="gda.device.motor.EpicsMotor">
		<property name="deviceName" value="DIFF.GAMMA" />
	</bean>
	<bean id="Dr1ddistMotor" class="gda.device.motor.EpicsMotor">
		<property name="deviceName" value="DIFF.DETECTZ" />
	</bean>
	<bean id="Dr1jack1Motor" class="gda.device.motor.EpicsMotor">
		<property name="deviceName" value="DIFF.Y1" />
	</bean>
	<bean id="Dr1jack2Motor" class="gda.device.motor.EpicsMotor">
		<property name="deviceName" value="DIFF.Y2" />
	</bean>
	<bean id="Dr1jack3Motor" class="gda.device.motor.EpicsMotor">
		<property name="deviceName" value="DIFF.Y3" />
	</bean>
	<bean id="Dr1TransXMotor" class="gda.device.motor.EpicsMotor">
		<property name="deviceName" value="DIFF.BASEX" />
	</bean>
	<bean id="Dr1RotationMotor" class="gda.device.motor.EpicsMotor">
		<property name="deviceName" value="DIFF.BASEROT" />
	</bean>


	<bean id="dx" class="gda.device.scannable.ScannableMotor">
		<property name="motor" ref="DXMotor" />
	</bean>
	<bean id="dy" class="gda.device.scannable.ScannableMotor">
		<property name="motor" ref="DYMotor" />
	</bean>
	<bean id="dz" class="gda.device.scannable.ScannableMotor">
		<property name="motor" ref="DZMotor" />
	</bean>
	<bean id="dkphi" class="gda.device.scannable.ScannableMotor">
		<property name="motor" ref="DkphiMotor" />
	</bean>
	<bean id="dkappa" class="gda.device.scannable.ScannableMotor">
		<property name="motor" ref="Dr1kappaMotor" />
	</bean>
	<bean id="dktheta" class="gda.device.scannable.ScannableMotor">
		<property name="motor" ref="Dr1kthetaMotor" />
	</bean>
	<bean id="dmu" class="gda.device.scannable.ScannableMotor">
		<property name="motor" ref="Dr1muMotor" />
	</bean>
	<bean id="ddelta" class="gda.device.scannable.ScannableMotor">
		<property name="motor" ref="Dr1deltaMotor" />
	</bean>
	<bean id="dgamma" class="gda.device.scannable.ScannableMotor">
		<property name="motor" ref="Dr1gammaMotor" />
	</bean>
	<bean id="ddist" class="gda.device.scannable.ScannableMotor">
		<property name="motor" ref="Dr1ddistMotor" />
	</bean>
	<bean id="djack1" class="gda.device.scannable.ScannableMotor">
		<property name="motor" ref="Dr1jack1Motor" />
	</bean>
	<bean id="djack2" class="gda.device.scannable.ScannableMotor">
		<property name="motor" ref="Dr1jack2Motor" />
	</bean>
	<bean id="djack3" class="gda.device.scannable.ScannableMotor">
		<property name="motor" ref="Dr1jack3Motor" />
	</bean>
	<bean id="dtransx" class="gda.device.scannable.ScannableMotor">
		<property name="motor" ref="Dr1TransXMotor" />
	</bean>
	<bean id="drotation" class="gda.device.scannable.ScannableMotor">
		<property name="motor" ref="Dr1RotationMotor" />
	</bean>
	<bean id="diffractometer" class="gda.device.scannable.scannablegroup.ScannableGroup">
		<property name="groupMembers">
			<list>
				<ref bean="dx" />
				<ref bean="dy" />
				<ref bean="dz" />
				<ref bean="dkphi" />
				<ref bean="dkappa" />
				<ref bean="dktheta" />
				<ref bean="dmu" />
				<ref bean="ddelta" />
				<ref bean="dgamma" />
				<ref bean="ddist" />
				<ref bean="djack1" />
				<ref bean="djack2" />
				<ref bean="djack3" />
				<ref bean="dtransx" />
				<ref bean="drotation" />
			</list>
		</property>
	</bean>

</beans>