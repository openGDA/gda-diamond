<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

	<!-- Vertical KB mirror motors -->

	<bean id="svfmcurve_motor" class="gda.device.motor.EpicsMotor">
		<property name="deviceName" value="SVFM.CURVE" />
		<property name="local" value="true"/>
	</bean>

	<bean id="svfmellip_motor" class="gda.device.motor.EpicsMotor">
		<property name="deviceName" value="SVFM.ELLIP" />
		<property name="local" value="true"/>
	</bean>

	<bean id="svfmy_motor" class="gda.device.motor.EpicsMotor">
		<property name="deviceName" value="SVFM.Y" />
		<property name="local" value="true"/>
	</bean>

	<bean id="svfmpitch_motor" class="gda.device.motor.EpicsMotor">
		<property name="deviceName" value="SVFM.PITCH" />
		<property name="local" value="true"/>
	</bean>

	<bean id="svfmcurve" class="gda.device.scannable.ScannableMotor">
		<property name="motor" ref="svfmcurve_motor" />
	</bean>

	<bean id="svfmellip" class="gda.device.scannable.ScannableMotor">
		<property name="motor" ref="svfmellip_motor" />
	</bean>

	<bean id="svfmy" class="gda.device.scannable.ScannableMotor">
		<property name="motor" ref="svfmy_motor" />
	</bean>

	<bean id="svfmpitch" class="gda.device.scannable.ScannableMotor">
		<property name="motor" ref="svfmpitch_motor" />
	</bean>

	<bean id="svfm" class="gda.device.scannable.scannablegroup.ScannableGroup">
		<property name="groupMembers">
			<list>
				<ref bean="svfmcurve" />
				<ref bean="svfmellip" />
				<ref bean="svfmy" />
				<ref bean="svfmpitch" />
			</list>
		</property>
	</bean>

	<!-- Horizontal KB mirror motors -->
	
	<bean id="shfmcurve_motor" class="gda.device.motor.EpicsMotor">
		<property name="deviceName" value="SHFM.CURVE" />
		<property name="local" value="true"/>
	</bean>

	<bean id="shfmellip_motor" class="gda.device.motor.EpicsMotor">
		<property name="deviceName" value="SHFM.ELLIP" />
		<property name="local" value="true"/>
	</bean>

	<bean id="shfmx_motor" class="gda.device.motor.EpicsMotor">
		<property name="deviceName" value="SHFM.X" />
		<property name="local" value="true"/>
	</bean>

	<bean id="shfmyaw_motor" class="gda.device.motor.EpicsMotor">
		<property name="deviceName" value="SHFM.YAW" />
		<property name="local" value="true"/>
	</bean>

	<bean id="shfmcurve" class="gda.device.scannable.ScannableMotor">
		<property name="motor" ref="shfmcurve_motor" />
	</bean>

	<bean id="shfmellip" class="gda.device.scannable.ScannableMotor">
		<property name="motor" ref="shfmellip_motor" />
	</bean>

	<bean id="shfmx" class="gda.device.scannable.ScannableMotor">
		<property name="motor" ref="shfmx_motor" />
	</bean>

	<bean id="shfmyaw" class="gda.device.scannable.ScannableMotor">
		<property name="motor" ref="shfmyaw_motor" />
	</bean>

	<bean id="shfm" class="gda.device.scannable.scannablegroup.ScannableGroup">
		<property name="groupMembers">
			<list>
				<ref bean="shfmcurve" />
				<ref bean="shfmellip" />
				<ref bean="shfmx" />
				<ref bean="shfmyaw" />
			</list>
		</property>
	</bean>
</beans>
