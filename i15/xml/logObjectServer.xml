<?xml version="1.0" encoding="UTF-8"?>

<configuration>
<!-- address where the messages from Object Servers send to - the LogServer-->
    <appender name="SOCKET" class="ch.qos.logback.classic.net.SocketAppender">
        <RemoteHost>i15-control.diamond.ac.uk</RemoteHost>
        <Port>6788</Port>
        <ReconnectionDelay>10000</ReconnectionDelay>
        <IncludeCallerData>true</IncludeCallerData>
    </appender>
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <layout class="ch.qos.logback.classic.PatternLayout">
            <Pattern>%date %-5level %logger{36} - %m %ex%n</Pattern>
        </layout>
    </appender>    
    <!--<appender name="ELOG" class="gda.util.ElogAppender">
    	<Visit></Visit>
		<LogID>BLI15</LogID>
		<GroupID>DA</GroupID>
		<UserID>gda</UserID>
        <layout class="ch.qos.logback.classic.PatternLayout">
        	<pattern>%-5level [%logger] %ex - %m%n</pattern>
        </layout>	    
    </appender>-->  
    <logger name="gda">
        <level value="INFO"/>
    </logger>
    <logger name="gda.device.corba.impl">
        <level value="INFO"/>
    </logger>    
    <logger name="gda.jython.corba.impl.JythonImpl">
        <level value="INFO"/>
    </logger> 
    <logger name="gda.util.ElogEntry">
        <level value="INFO"/>
        <appender-ref ref="ELOG"/>
    </logger> 
    <root>
        <level value="INFO"/>
        <appender-ref ref="SOCKET"/>
        <appender-ref ref="CONSOLE"/>
    </root>
    <consolePlugin />
</configuration>
