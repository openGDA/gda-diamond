	<bean id="regionDefinitionResourceUtil"
		class="org.opengda.detector.electronanalyser.client.RegionDefinitionResourceUtil">
		<property name="fileName"
			value="D:/gda/i09/runtime-TestInClient/Test123/My.seq" />
		<property name="sourceSelectable" value="true"/>
		<property name="xRaySourceEnergyLimit" value="2100"/>
	</bean>
	<bean id="analysercamera"
		class="org.opengda.detector.electronanalyser.client.Camera">
		<property name="frameRate"	value="70" />
		<property name="energyResolution" value="0.0877"/>
		<property name="cameraXSize" value="1024"/>
		<property name="cameraYSize" value="1024"/>
	</bean>
	
	<bean id="sequenceviewfactory"
		class="org.opengda.detector.electronanalyser.client.sequenceeditor.SequenceViewFactory">
		<property name="viewPartName" value="Sequence Editor" />
		<property name="regionDefinitionResourceUtil" ref="regionDefinitionResourceUtil" />
		<property name="camera" ref="analysercamera"/>
		<property name="location" value="Diamond Test"/>
<!-- 		<property name="user" value="${gda.defVisit}"/> -->
		<property name="user" value="test2013-1"/>
	</bean>

	<bean id="regionviewfactory"
		class="org.opengda.detector.electronanalyser.client.regioneditor.RegionViewFactory">
		<property name="viewPartName" value="Region Editor" />
		<property name="regionDefinitionResourceUtil" ref="regionDefinitionResourceUtil" />
		<property name="camera" ref="analysercamera"/>
	</bean>
	
	<bean id="analyserCapability"
		class="org.opengda.detector.electronanalyser.server.AnalyserCapabilities"/>

	<bean id="analysercontroller"
		class="org.opengda.detector.electronanalyser.server.VGScientaController">
		<property name="basePVName"	value="ELECTRON-ANALYSER-01:TEST:" />
	</bean>
	
	<bean id="analyser"
		class="org.opengda.detector.electronanalyser.server.VGScientaAnalyser">
		<property name="controller"	ref="analysercontroller" />
		<property name="capabilities" ref="analyserCapability"/>
	</bean>

	<bean id="spectrumviewfactory"
		class="org.opengda.detector.electronanalyser.client.plot.SpectrumViewFactory">
		<property name="viewPartName" value="Spectrum Plot" />
		<property name="analyser" ref="analyser" />
	</bean>


</beans>
