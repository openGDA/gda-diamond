<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="analyser" class="uk.ac.diamond.daq.devices.specs.phoibos.SpecsPhoibosAnalyser">
		<property name="controller" ref="analysercontroller" />
		<property name="capabilities" ref="analyserCapabilities" />
		<property name="adBase" ref="analyser.cam" />
<!-- 		<property name="ndProc" ref="analyser.proc" /> -->
		<property name="ndArray" ref="analyser.arr" />
<!-- 		<property name="ndStats" ref="analyser.stat" /> -->
<!-- 		<property name="computeCentroid" value="true" /> -->
<!-- 		<property name="computeStats" value="true" /> -->
<!-- 		<property name="ndFile" ref="analyser_filebase" /> -->
		<property name="collectionStrategy" ref="analyser_simpleacquire" />
<!-- 		<property name="fileWriter" ref="analyser_hdf_fileWriter" /> -->
		<property name="readAcquisitionTime" value="true" />
		<property name="readFilepath" value="true" />
		<property name="readAcquisitionPeriod" value="false" />
		<property name="readArray" value="true" />
	</bean>
	
	<import resource="analyser_lens_mapping.xml" />
	<bean id="analyserCapabilities" class="uk.ac.diamond.daq.devices.specs.phoibos.SpecsPhoibosCapabilites">
		<description>
			This class is used to hold the specific capabilities of	the analyser. It contains a map of
			lens modes and an array to map pixel position to angle for each.
		</description>

		<property name="lens2angles">
			<map>
				<entry key="HighMagnification" value-ref="HighMagnificationArray" />
				<entry key="AngleResolvedMode22" value-ref="AngleResolvedMode22Array" />
			</map>
		</property>
		<property name="energyStepPerPixel" value="0.086088032" />
		<property name="detectorEnergyWidthInPixels" value="1064" />
	</bean>
	
	<bean class="org.springframework.remoting.rmi.RmiServiceExporter">
		<property name="serviceName" value="gda/analyser" />
		<property name="service" ref="analyser" />
		<property name="serviceInterface" value="org.opengda.detector.electronanalyser.server.IVGScientaAnalyser" />
	</bean>
	
	<bean id="analysercontroller" class="uk.ac.diamond.daq.devices.specs.phoibos.SpecsPhoibosController">
		<property name="basePVName" value="TEST-SPECS-01:" />
	</bean>
	
	<bean id="SequenceFileObserver" class="gda.jython.scriptcontroller.ScriptControllerBase"/>
		
<!-- 	<bean id="analyserCapability" class="org.opengda.detector.electronanalyser.server.AnalyserCapabilities" /> -->
	
	<bean id="analyser.cam" class="gda.device.detector.areadetector.v17.impl.ADBaseImpl">
		<property name="basePVName" value="TEST-SPECS-01:" />
	</bean>
	
	<bean id="analyser.arr" class="gda.device.detector.areadetector.v17.impl.NDArrayImpl">
		<property name="basePVName" value="TEST-SPECS-01:ARR:" />
		<property name="pluginBase">
			<bean class="gda.device.detector.areadetector.v17.impl.NDPluginBaseImpl">
				<property name="basePVName" value="TEST-SPECS-01:ARR:" />
				<property name="initialArrayPort" value="CCD.CAM" />
				<property name="initialArrayAddress" value="0" />
				<property name="initialEnableCallbacks" value="1" />
				<property name="initialBlockingCallbacks" value="false" />
			</bean>
		</property>
	</bean>
	
	<bean id="analyser_simpleacquire" class="gda.device.detector.addetector.triggering.SimpleAcquire">
		<constructor-arg ref="analyser.cam" />
		<constructor-arg value="0.1" />
	</bean>
	
	<bean id="regionDefinitionResourceUtil" class="org.opengda.detector.electronanalyser.utils.RegionDefinitionResourceUtil">
<!-- 		<property name="fileName" value="D:/scratch/i09/data/Test123/My.seq" /> -->
		<property name="fileName" value="user.seq" />
		<property name="sourceSelectable" value="false"/>
		<property name="XRaySourceEnergyLimit" value="2100"/>
	</bean>

<!-- 	<bean id="ew4000_collectionstrategy" class="org.opengda.detector.electronanalyser.nxdetector.EW4000CollectionStrategy"> -->
	<bean id="analyser_collectionstrategy" class="uk.ac.diamond.daq.devices.specs.phoibos.PhoibosCollectionStrategy">
		<property name="analyser" ref="analyser" />
<!-- 		<property name="dcmenergy" ref="dcmenergy"/> -->
		<property name="pgmenergy" ref="pgmenergy"/>
		<property name="scriptcontroller" ref="SequenceFileObserver"/>
<!-- 		<property name="softXRayFastShutter" ref="fsj1"/> -->
<!-- 		<property name="hardXRayFastShutter" ref="fsi1"/> -->
		<property name="photonEnergyScannable" ref="pgmenergy" />
	</bean>
	
	<bean id="ew4000" class="org.opengda.detector.electronanalyser.nxdetector.EW4000">
		<property name="name" value="ew4000" />
		<property name="collectionStrategy" ref="analyser_collectionstrategy"/>
		<property name="regionDefinitionResourceUtil" ref="regionDefinitionResourceUtil"/>
		<property name="scriptcontroller" ref="SequenceFileObserver"/>
	</bean>

</beans>
