<?xml version="1.0" encoding="UTF-8"?>
<configuration>
	<if condition='property("gda.mode").equalIgnoreCase("live")'>
		<then>
			<property file="${gda.config}/logging/live/log.properties" />
		</then>
		<else>
			<property file="${gda.config}/logging/dummy/log.properties" />
		</else>
	</if>

	<turboFilter class="ch.qos.logback.classic.turbo.MarkerFilter">
		<Name>Finest</Name>
		<Marker>FINEST</Marker>
		<OnMatch>DENY</OnMatch>
	</turboFilter>

	<appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
		<layout class="ch.qos.logback.classic.PatternLayout">
			<Pattern>%date %-5level [%thread] %logger - %message %ex %n</Pattern>
		</layout>
	</appender>

	<!-- log to the central LogServer -->
	<appender name="SOCKET" class="ch.qos.logback.classic.net.SocketAppender">
		<RemoteHost>${gda.logserver.host}</RemoteHost>
		<Port>${gda.logserver.port}</Port>
		<ReconnectionDelay>10000</ReconnectionDelay>
		<IncludeCallerData>true</IncludeCallerData>
	</appender>

	<logger name="gda">
		<level value="DEBUG" />
	</logger>
	<logger name="gda.device.motor.MoveEventQueue">
		<level value="INFO" />
	</logger>
	<logger name="gda.device.motor.EpicsMotor">
		<level value="INFO" />
	</logger>
	<logger name="gda.device.corba.impl">
		<level value="INFO" />
	</logger>
	<logger name="gda.device.temperature">
		<level value="INFO" />
	</logger>
	<logger name="gda.jython.corba.impl">
		<level value="INFO" />
	</logger>
	<logger name="gda.oe.corba.impl">
		<level value="INFO" />
	</logger>

	<root>
		<level value="INFO" />
		<appender-ref ref="SOCKET" />
		<appender-ref ref="CONSOLE" />
	</root>
	<consolePlugin />
</configuration>
