<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <property file="${gda.config}/properties/java.properties" />
    <turboFilter class="ch.qos.logback.classic.turbo.MarkerFilter">
        <Name>Finest</Name>
        <Marker>FINEST</Marker>
        <OnMatch>DENY</OnMatch>
    </turboFilter>

    <!-- enable this if you want log message appear on local console -->
   <appender name="Console" class="ch.qos.logback.core.ConsoleAppender">
        <layout class="ch.qos.logback.classic.PatternLayout">
            <pattern>%r  %-5level [%logger{36}] - %m%n</pattern>
        </layout>
    </appender>
    <appender name="LogPanel" class="gda.util.LogPanelAppender">
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>INFO</level>
        </filter>
        <layout class="ch.qos.logback.classic.PatternLayout">
            <pattern>%date %-5level [%logger{36}] - %m%n</pattern>
        </layout>
    </appender>
    <appender name="DebugPanel" class="gda.util.DebugPanelAppender">
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>DEBUG</level>
        </filter>
        <layout class="ch.qos.logback.classic.PatternLayout">
            <pattern>%date %-5level [%logger] - %m%n</pattern>
        </layout>
    </appender>
    <appender name="DebugFILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <File>${gda.logs.dir}/gda_client.log</File>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <FileNamePattern>${gda.logs.dir}/gda_client.%d{yyyy-MM-dd}.log.zip</FileNamePattern>
        </rollingPolicy>
        <layout class="ch.qos.logback.classic.PatternLayout">
            <pattern>%d %-5level [%logger] %ex - %m%n</pattern>
        </layout>
        <!--<rollingPolicy class="ch.qos.logback.core.rolling.FixedWindowRollingPolicy">
            <FileNamePattern>${gda.logs.dir}/gda.%i.log.zip</FileNamePattern>
            <minIndex>1</minIndex>
            <maxIndex>5</maxIndex>
            </rollingPolicy>
            <triggeringPolicy class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
            <MaxFileSize>2000KB</MaxFileSize>
            </triggeringPolicy>-->
    </appender>
    
    <!--<appender name="HTMLFILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <File>${gda.logs.dir}/lastLogEntries.html</File>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <FileNamePattern>${gda.logs.dir}/logEntries.%d{yyyy-MM-dd}.log</FileNamePattern>
        </rollingPolicy>
        <layout class="ch.qos.logback.classic.html.HTMLLayout">
            <cssBuilder class="ch.qos.logback.core.html.UrlCssBuilder">
                <url>address_of_a_custom_stylesheet.css</url>
            </cssBuilder>
            <Pattern>%date%thread%level%logger%msg</Pattern>
            <Title>Logging Events</Title>
        </layout>
    </appender>-->
    <appender name="WS001_LogPanel" class="ch.qos.logback.classic.net.SocketAppender">
        <RemoteHost>i10-ws001.diamond.ac.uk</RemoteHost>
        <Port>6790</Port>
        <ReconnectionDelay>10000</ReconnectionDelay>
        <IncludeCallerData>true</IncludeCallerData>
    </appender>
    <appender name="WS002_LogPanel" class="ch.qos.logback.classic.net.SocketAppender">
        <RemoteHost>i10-ws002.diamond.ac.uk</RemoteHost>
        <Port>6790</Port>
        <ReconnectionDelay>10000</ReconnectionDelay>
        <IncludeCallerData>true</IncludeCallerData>
    </appender>       
    
    <logger name="gda">
        <level value="INFO"/>
        <!--<appender-ref ref="FILE"/>-->
    </logger>
    <logger name="gda.device.corba.impl">
        <level value="INFO"/>
    </logger>
    <logger name="gda.device.temperature">
        <level value="INFO"/>
    </logger>
    <logger name="gda.jython.corba.impl">
        <level value="INFO"/>
    </logger>
    <logger name="gda.oe.corba.impl">
        <level value="INFO"/>
    </logger>

    <root>
        <level value="INFO"/>
        <appender-ref ref="Console"/>
        <appender-ref ref="LogPanel"/>
        <appender-ref ref="DebugPanel"/>
        <appender-ref ref="DebugFILE"/>
        <appender-ref ref="WS001_LogPanel"/>
        <appender-ref ref="WS002_LogPanel"/>         
        <!--<appender-ref ref="HTMLFILE"/>-->
    </root>
</configuration>
