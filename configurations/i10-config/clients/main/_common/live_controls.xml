	<!-- PIMTE detector control -->
	<bean id="pimteStart" class="uk.ac.gda.client.livecontrol.JythonCommandControl">
		<property name="jythonCommand" value="pimte_addetector.adBase.setImageModeWait(gda.device.detector.areadetector.v17.ImageMode.CONTINUOUS); pimte_addetector.collectData()" />
		<property name="buttonText" value="Start camera" />
		<property name="group" value="PIMTE" />
	</bean>
	<bean id="pimteStop" class="uk.ac.gda.client.livecontrol.JythonCommandControl">
		<property name="jythonCommand" value="pimte_addetector.adBase.stopAcquiring()" />
		<property name="buttonText" value="Stop camera" />
		<property name="group" value="PIMTE" />
	</bean>
	<bean id="pimteEnable" class="uk.ac.gda.client.livecontrol.JythonCommandControl">
		<property name="jythonCommand" value="pimte_addetector.ndArray.getPluginBase().enableCallbacks()" />
		<property name="buttonText" value="Enable stream" />
		<property name="group" value="PIMTE" />
	</bean>
	<bean id="pimteDisable" class="uk.ac.gda.client.livecontrol.JythonCommandControl">
		<property name="jythonCommand" value="pimte_addetector.ndArray.getPluginBase().disableCallbacks()" />
		<property name="buttonText" value="Disable stream" />
		<property name="group" value="PIMTE" />
	</bean>

