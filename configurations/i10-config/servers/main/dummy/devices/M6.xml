<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

	<!-- M6 -->     

	<bean id="m6x_motor" class="gda.device.motor.DummyMotor">
		<property name="minPosition" value="-10.0" />
		<property name="maxPosition" value="10.0" />
		<property name="speed" value="1.0" />
		<property name="unitString" value="mm"/>
	</bean>
	<bean id="m6y_motor" class="gda.device.motor.DummyMotor">
		<property name="minPosition" value="-45.0" />
		<property name="maxPosition" value="45.0" />
		<property name="speed" value="0.25" />
		<property name="unitString" value="mm"/>
	</bean>
	<bean id="m6z_motor" class="gda.device.motor.DummyMotor">
		<property name="minPosition" value="-10.0" />
		<property name="maxPosition" value="10.0" />
		<property name="speed" value="1.0" />
		<property name="unitString" value="mm"/>
	</bean>
	<bean id="m6yaw_motor" class="gda.device.motor.DummyMotor">
		<property name="minPosition" value="-35000.0" />
		<property name="maxPosition" value="35000.0" />
		<property name="speed" value="1.0" />
		<property name="unitString" value="urad"/>
	</bean>
	<bean id="m6pitch_motor" class="gda.device.motor.DummyMotor">
		<property name="minPosition" value="-35000.0" />
		<property name="maxPosition" value="35000.0" />
		<property name="speed" value="1.0" />
		<property name="unitString" value="urad"/>
	</bean>
	<bean id="m6roll_motor" class="gda.device.motor.DummyMotor">
		<property name="minPosition" value="-9000.0" />
		<property name="maxPosition" value="9000.0" />
		<property name="speed" value="1.0" />
		<property name="unitString" value="urad"/>
	</bean>
	
	<bean id="m6_x" class="gda.device.scannable.ScannableMotor">
		<property name="motor" ref="m6x_motor" />
		<!-- <property name="initialUserUnits" value="mm" />
		<property name="hardwareUnitString" value="mm" />
		<property name="lowerGdaLimits" value="-100" />
		<property name="upperGdaLimits" value="100" /> -->
	</bean>  
	
	<bean id="m6_y" class="gda.device.scannable.ScannableMotor">
		<property name="motor" ref="m6y_motor" />
		<!-- <property name="initialUserUnits" value="mm" />
		<property name="hardwareUnitString" value="mm" />
		<property name="lowerGdaLimits" value="-100" />
		<property name="upperGdaLimits" value="100" /> -->
	</bean>  
	
	<bean id="m6_z" class="gda.device.scannable.ScannableMotor">
		<property name="motor" ref="m6z_motor" />
		<!-- <property name="initialUserUnits" value="mm" />
		<property name="hardwareUnitString" value="mm" />
		<property name="lowerGdaLimits" value="-100" />
		<property name="upperGdaLimits" value="100" /> -->
	</bean>  
	
	<bean id="m6_yaw" class="gda.device.scannable.ScannableMotor">
		<property name="motor" ref="m6yaw_motor" />
		<!-- <property name="initialUserUnits" value="mm" />
		<property name="hardwareUnitString" value="mm" />
		<property name="lowerGdaLimits" value="-100" />
		<property name="upperGdaLimits" value="100" /> -->
	</bean>  
	
	<bean id="m6_pitch" class="gda.device.scannable.ScannableMotor">
		<property name="motor" ref="m6pitch_motor" />
		<!-- <property name="initialUserUnits" value="mm" />
		<property name="hardwareUnitString" value="mm" />
		<property name="lowerGdaLimits" value="-100" />
		<property name="upperGdaLimits" value="100" /> -->
	</bean>  
	
	<bean id="m6_roll" class="gda.device.scannable.ScannableMotor">
		<property name="motor" ref="m6roll_motor" />
		<!-- <property name="initialUserUnits" value="mm" />
		<property name="hardwareUnitString" value="mm" />
		<property name="lowerGdaLimits" value="-100" />
		<property name="upperGdaLimits" value="100" /> -->
	</bean>  
	
	<bean id="m6" class="gda.device.scannable.scannablegroup.ScannableGroup">
		<property name="groupMembers">
			<list>
				<ref bean="m6_x" />
				<ref bean="m6_y" />
				<ref bean="m6_z" />
				<ref bean="m6_yaw" />
				<ref bean="m6_pitch" />
				<ref bean="m6_roll" />
			</list>
		</property>
	</bean>
</beans>