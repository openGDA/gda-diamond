<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">
	
	<!-- Mirror / M4 --> 
	
	<bean id="m4x_motor" class="gda.device.motor.DummyMotor">
		<property name="minPosition" value="-10.0" />
		<property name="maxPosition" value="10.0" />
		<property name="speed" value="1" />
		<property name="unitString" value="mm"/>
	</bean>		
	<bean id="m4y_motor" class="gda.device.motor.DummyMotor">
		<property name="minPosition" value="-45.0" />
		<property name="maxPosition" value="45.0" />
		<property name="speed" value="1" />
		<property name="unitString" value="mm"/>
	</bean>		
	<bean id="m4z_motor" class="gda.device.motor.DummyMotor">
		<property name="minPosition" value="-10.0" />
		<property name="maxPosition" value="12.0" />
		<property name="speed" value="1" />
		<property name="unitString" value="mm"/>
	</bean>		
	<bean id="m4yaw_motor" class="gda.device.motor.DummyMotor">
		<property name="minPosition" value="-35000" />
		<property name="maxPosition" value="35000" />
		<property name="speed" value="1" />
		<property name="unitString" value="urad"/>
	</bean>		
	<bean id="m4pitch_motor" class="gda.device.motor.DummyMotor">
		<property name="minPosition" value="-35000" />
		<property name="maxPosition" value="35000" />
		<property name="speed" value="1" />
		<property name="unitString" value="urad"/>
	</bean>		
	<bean id="m4roll_motor" class="gda.device.motor.DummyMotor">
		<property name="minPosition" value="-9000" />
		<property name="maxPosition" value="9000" />
		<property name="speed" value="1" />
		<property name="unitString" value="urad"/>
	</bean>
		<bean id="m4_x" class="gda.device.scannable.ScannableMotor">
		<property name="motor" ref="m4x_motor" />
		<!-- <property name="initialUserUnits" value="mm" />
		<property name="hardwareUnitString" value="mm" />
		<property name="lowerGdaLimits" value="-100" />
		<property name="upperGdaLimits" value="100" /> -->
	</bean>  
	
	<bean id="m4_y" class="gda.device.scannable.ScannableMotor">
		<property name="motor" ref="m4y_motor" />
		<!-- <property name="initialUserUnits" value="mm" />
		<property name="hardwareUnitString" value="mm" />
		<property name="lowerGdaLimits" value="-100" />
		<property name="upperGdaLimits" value="100" /> -->
	</bean>  
	
	<bean id="m4_z" class="gda.device.scannable.ScannableMotor">
		<property name="motor" ref="m4z_motor" />
		<!-- <property name="initialUserUnits" value="mm" />
		<property name="hardwareUnitString" value="mm" />
		<property name="lowerGdaLimits" value="-100" />
		<property name="upperGdaLimits" value="100" /> -->
	</bean>  
	
	<bean id="m4_yaw" class="gda.device.scannable.ScannableMotor">
		<property name="motor" ref="m4yaw_motor" />
		<!-- <property name="initialUserUnits" value="mm" />
		<property name="hardwareUnitString" value="mm" />
		<property name="lowerGdaLimits" value="-100" />
		<property name="upperGdaLimits" value="100" /> -->
	</bean>  
	
	<bean id="m4_pitch" class="gda.device.scannable.ScannableMotor">
		<property name="motor" ref="m4pitch_motor" />
		<!-- <property name="initialUserUnits" value="mm" />
		<property name="hardwareUnitString" value="mm" />
		<property name="lowerGdaLimits" value="-100" />
		<property name="upperGdaLimits" value="100" /> -->
	</bean>  
	
	<bean id="m4_roll" class="gda.device.scannable.ScannableMotor">
		<property name="motor" ref="m4roll_motor" />
		<!-- <property name="initialUserUnits" value="mm" />
		<property name="hardwareUnitString" value="mm" />
		<property name="lowerGdaLimits" value="-100" />
		<property name="upperGdaLimits" value="100" /> -->
	</bean>  
	
	<bean id="m4" class="gda.device.scannable.scannablegroup.ScannableGroup">
		<property name="groupMembers">
			<list>
				<ref bean="m4_x" />
				<ref bean="m4_y" />
				<ref bean="m4_z" />
				<ref bean="m4_yaw" />
				<ref bean="m4_pitch" />
				<ref bean="m4_roll" />
			</list>
		</property>
	</bean>
</beans>