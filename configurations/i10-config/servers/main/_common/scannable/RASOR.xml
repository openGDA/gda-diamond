	</bean>

	<bean id="slitD" class="gda.device.scannable.scannablegroup.ScannableGroup">
		<property name="name" value="slitD" />
		<property name="groupMembers">
			<list>
				<ref bean="dsd" />
			</list>
		</property>
	</bean>
	
	<bean id="dsu" class="gda.device.scannable.ScannableMotor">
