 	<!--Rasor-->
 	
 	
 	<bean id="dsd" class="gda.device.scannable.ScannableMotor">
		<property name="name" value="dsd" />
		<property name="inputNames">
			<list>
				<value>dsd</value>
			</list>
		</property>
		<property name="initialUserUnits" value="mm" />
		<property name="motor" ref="aptr2_trans_motor" />
