		<!-- 
		<property name="lowerGdaLimits" value="-100" />
		<property name="upperGdaLimits" value="100" />
		 -->
	</bean>  
	
	<bean id="UMJ1" class="gda.device.scannable.scannablegroup.ScannableGroup">
		<property name="groupMembers">
			<list>
				<ref bean="user2_axis1" />
				<ref bean="user2_axis2" />
				<ref bean="user2_axis3" />
				<ref bean="user2_axis4" />
				<ref bean="user2_axis5" />
				<ref bean="user2_axis6" />
			</list>
		</property>
		<property name="local" value="true"/>
	</bean>
</beans>
