<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">     

	<!-- UMJ1 (U2) User Motors -->

	<bean id="user2_axis1" class="gda.device.scannable.ScannableMotor">
		<property name="initialUserUnits" value="mm" />
		<property name="motor" ref="user2_axis1_motor" />
		<property name="hardwareUnitString" value="mm" />
		<!-- 
		<property name="lowerGdaLimits" value="-100" />
		<property name="upperGdaLimits" value="100" />
		 -->
	</bean>
	
	<bean id="user2_axis2" class="gda.device.scannable.ScannableMotor">
		<property name="initialUserUnits" value="mm" />
		<property name="motor" ref="user2_axis2_motor" />
		<property name="hardwareUnitString" value="mm" />
		<!-- 
		<property name="lowerGdaLimits" value="-100" />
		<property name="upperGdaLimits" value="100" />
		 -->
	</bean>
	
	<bean id="user2_axis3" class="gda.device.scannable.ScannableMotor">
		<property name="initialUserUnits" value="mm" />
		<property name="motor" ref="user2_axis3_motor" />
		<property name="hardwareUnitString" value="mm" />
		<!-- 
		<property name="lowerGdaLimits" value="-100" />
		<property name="upperGdaLimits" value="100" />
		 -->
	</bean>
	
    <bean id="user2_axis4" class="gda.device.scannable.ScannableMotor">
		<property name="initialUserUnits" value="mm" />
		<property name="motor" ref="user2_axis4_motor" />
		<property name="hardwareUnitString" value="mm" />
		<!-- 
		<property name="lowerGdaLimits" value="-100" />
		<property name="upperGdaLimits" value="100" />
		 -->
	</bean>  
	
	<bean id="user2_axis5" class="gda.device.scannable.ScannableMotor">
		<property name="initialUserUnits" value="mm" />
		<property name="motor" ref="user2_axis5_motor" />
		<property name="hardwareUnitString" value="mm" />
		<!-- 
		<property name="lowerGdaLimits" value="-100" />
		<property name="upperGdaLimits" value="100" />
		 -->
	</bean>  
	
	 <bean id="user2_axis6" class="gda.device.scannable.ScannableMotor">
		<property name="initialUserUnits" value="mm" />
