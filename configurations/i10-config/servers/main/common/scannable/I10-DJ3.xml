<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">     

	<!-- DJ3 (D11) -->

	<bean id="dj3_bim" class="gda.device.scannable.ScannableMotor">
		<property name="initialUserUnits" value="mm" />
		<property name="motor" ref="dj3d11_bim_motor" />
		<property name="hardwareUnitString" value="mm" />
		<!-- 
		<property name="lowerGdaLimits" value="-100" />
		<property name="upperGdaLimits" value="100" />
		 -->
	</bean>

	<bean id="dj3_scrn" class="gda.device.scannable.ScannableMotor">
		<property name="initialUserUnits" value="mm" />
		<property name="motor" ref="dj3d11_scrn_motor" />
		<property name="hardwareUnitString" value="mm" />
		<!-- 
		<property name="lowerGdaLimits" value="-100" />
		<property name="upperGdaLimits" value="100" />
		 -->
	</bean>

	<bean id="dj3_det" class="gda.device.scannable.ScannableMotor">
		<property name="initialUserUnits" value="mm" />
		<property name="motor" ref="dj3d11_det_motor" />
		<property name="hardwareUnitString" value="mm" />
		<!-- 
		<property name="lowerGdaLimits" value="-100" />
		<property name="upperGdaLimits" value="100" />
		 -->
	</bean>

	<bean id="DJ3" class="gda.device.scannable.scannablegroup.ScannableGroup">
		<property name="groupMembers">
			<list>
				<ref bean="dj3_bim" />
				<ref bean="dj3_scrn" />
				<ref bean="dj3_det" />
				<ref bean="dj3d11_pos" />
			</list>
		</property>
		<property name="local" value="true"/>
	</bean>
</beans>
