<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">     

	<!-- D6 (D8) -->

	<bean id="d6_bim" class="gda.device.scannable.ScannableMotor">
		<property name="initialUserUnits" value="mm" />
		<property name="motor" ref="d6d8_bim_motor" />
		<property name="hardwareUnitString" value="mm" />
		<!-- 
		<property name="lowerGdaLimits" value="-100" />
		<property name="upperGdaLimits" value="100" />
		 -->
	</bean>
	
	<bean id="d6_scrn" class="gda.device.scannable.ScannableMotor">
		<property name="initialUserUnits" value="mm" />
		<property name="motor" ref="d6d8_scrn_motor" />
		<property name="hardwareUnitString" value="mm" />
		<!-- 
		<property name="lowerGdaLimits" value="-100" />
		<property name="upperGdaLimits" value="100" />
		 -->
	</bean>
	
	<bean id="d6_det" class="gda.device.scannable.ScannableMotor">
		<property name="initialUserUnits" value="mm" />
		<property name="motor" ref="d6d8_det_motor" />
		<property name="hardwareUnitString" value="mm" />
		<!-- 
		<property name="lowerGdaLimits" value="-100" />
		<property name="upperGdaLimits" value="100" />
		 -->
	</bean>
	
	<bean id="D6" class="gda.device.scannable.scannablegroup.ScannableGroup">
		<property name="groupMembers">
			<list>
				<ref bean="d6_bim" />
				<ref bean="d6_scrn" />
				<ref bean="d6_det" />
				<ref bean="d6_pos" />
			</list>
		</property>
		<property name="local" value="true"/>
	</bean>
</beans>
