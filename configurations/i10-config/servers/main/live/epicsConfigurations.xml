<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

	<bean id="epicsConfig" class="gda.configuration.epics.EpicsConfiguration">
		<constructor-arg value="${gda.config}/xml/epics/BL10I-gda-interface.xml" />
	</bean>

	<bean id="rasorConfig" class="gda.configuration.epics.EpicsConfiguration">
		<constructor-arg value="${gda.config}/xml/epics/ME01D-gda-interface.xml" />
	</bean>

	<bean id="polarimeterConfig" class="gda.configuration.epics.EpicsConfiguration">
		<constructor-arg value="${gda.config}/xml/epics/ME02P-gda-interface.xml" />
	</bean>
	
	<bean id="vortexConfig" class="gda.configuration.epics.EpicsConfiguration">
		<constructor-arg value="${gda.config}/xml/epics/ME13C-XMAP-interface.xml" />
	</bean> 
</beans>