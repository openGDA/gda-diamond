<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans.xsd">

	<!-- Tertiary Slits / S8 Optical Element -->

	<bean id="s8xring_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL10J-AL-SLITS-02:XRING" />
	</bean>

	<bean id="s8xhall_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL10J-AL-SLITS-02:XHALL" />
	</bean>

	<bean id="s8yplus_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL10J-AL-SLITS-02:YPLUS" />
	</bean>

	<bean id="s8yminus_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL10J-AL-SLITS-02:YMINUS" />
	</bean>

	<bean id="s8xsize_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL10J-AL-SLITS-02:XSIZE" />
	</bean>

	<bean id="s8xcentre_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL10J-AL-SLITS-02:XCENTRE" />
	</bean>

	<bean id="s8ysize_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL10J-AL-SLITS-02:YSIZE" />
	</bean>

	<bean id="s8ycentre_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL10J-AL-SLITS-02:YCENTRE" />
	</bean>
</beans>