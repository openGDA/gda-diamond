<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

	<!-- Slits / S7 -->

	<bean id="s7xgap_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL10J-AL-SLITS-01:XGAP" />
	</bean>

	<bean id="s7z_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL10J-AL-SLITS-01:Z" />
	</bean>

	<bean id="s7ygap_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL10J-AL-SLITS-01:YGAP" />
	</bean>

	<bean id="s7xsize_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL10J-AL-SLITS-01:XSIZE" />
	</bean>

	<bean id="s7ysize_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL10J-AL-SLITS-01:YSIZE" />
	</bean>
</beans>