<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans.xsd">

	<!-- Tertiary Slits / S6 Optical Element -->

	<bean id="s6xring_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL10I-AL-SLITS-06:XRING" />
	</bean>

	<bean id="s6xhall_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL10I-AL-SLITS-06:XHALL" />
	</bean>

	<bean id="s6yplus_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL10I-AL-SLITS-06:YPLUS" />
	</bean>

	<bean id="s6yminus_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL10I-AL-SLITS-06:YMINUS" />
	</bean>

	<bean id="s6xsize_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL10I-AL-SLITS-06:XSIZE" />
	</bean>

	<bean id="s6xcentre_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL10I-AL-SLITS-06:XCENTRE" />
	</bean>

	<bean id="s6ysize_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL10I-AL-SLITS-06:YSIZE" />
	</bean>

	<bean id="s6ycentre_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL10I-AL-SLITS-06:YCENTRE" />
	</bean>
</beans>