<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

	<!-- Mirror / M6 -->

	<bean id="m6x_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL10J-OP-FOCA-01:X" />
	</bean>

	<bean id="m6y_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL10J-OP-FOCA-01:Y" />
	</bean>

	<bean id="m6z_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL10J-OP-FOCA-01:Z" />
	</bean>

	<bean id="m6yaw_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL10J-OP-FOCA-01:YAW" />
	</bean>

	<bean id="m6pitch_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL10J-OP-FOCA-01:PITCH" />
	</bean>

	<bean id="m6roll_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL10J-OP-FOCA-01:ROLL" />
	</bean>
</beans>