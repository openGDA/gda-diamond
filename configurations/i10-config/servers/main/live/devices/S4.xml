<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans.xsd">

	<!-- Slits / S4 -->

	<bean id="s4xgap_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL10I-AL-SLITS-04:XGAP" />
	</bean>

	<bean id="s4z_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL10I-AL-SLITS-04:Z" />
	</bean>

	<bean id="s4ygap_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL10I-AL-SLITS-04:YGAP" />
	</bean>

	<bean id="s4xsize_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL10I-AL-SLITS-04:XSIZE" />
	</bean>

	<bean id="s4ysize_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL10I-AL-SLITS-04:YSIZE" />
	</bean>
</beans>