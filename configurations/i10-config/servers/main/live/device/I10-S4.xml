<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

	<!-- Slits / S4 -->

  	<bean id="s4xgap_motor" class="gda.device.motor.EpicsMotor">
		<property name="deviceName" value="SLITS4.XGAP" />
		<property name="epicsConfiguration" ref="epicsConfig" />
		<property name="local" value="true"/>
	</bean>
  	
  	<bean id="s4z_motor" class="gda.device.motor.EpicsMotor">
		<property name="deviceName" value="SLITS4.Z" />
		<property name="epicsConfiguration" ref="epicsConfig" />
		<property name="local" value="true"/>
	</bean>
  	
  	<bean id="s4ygap_motor" class="gda.device.motor.EpicsMotor">
		<property name="deviceName" value="SLITS4.YGAP" />
		<property name="epicsConfiguration" ref="epicsConfig" />
		<property name="local" value="true"/>
	</bean>

	<bean id="s4xsize_motor" class="gda.device.motor.EpicsMotor">
		<property name="deviceName" value="SLITS4.XSIZE" />
		<property name="epicsConfiguration" ref="epicsConfig" />
		<property name="local" value="true"/>
	</bean>
	
	<bean id="s4ysize_motor" class="gda.device.motor.EpicsMotor">
		<property name="deviceName" value="SLITS4.YSIZE" />
		<property name="epicsConfiguration" ref="epicsConfig" />
		<property name="local" value="true"/>
	</bean>
</beans>