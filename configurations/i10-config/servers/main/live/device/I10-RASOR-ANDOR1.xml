<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

	<!--  Based on GDA-mt/configurations/i16-config/servers/main/live/epics/detector/andor1.xml at d024aae -->

	<!-- AD hardware -->

	<bean id="andor1_adbase" class="gda.device.detector.areadetector.v17.impl.ADBaseImpl">
		<property name="epicsConfiguration" ref="rasorConfig" />
		<property name="deviceName" value="ANDOR1_ADBase" />
	</bean>

	<bean id="andor_ndfile" class="gda.device.detector.areadetector.v17.impl.NDFileImpl">
		<property name="epicsConfiguration" ref="rasorConfig" />
		<property name="deviceName" value="ANDOR1_NDFile" />
		<property name="resetToInitialValues" value="false" />
	</bean>


	<!-- NXDetector collection strategies -->

	<!-- SingleExposureStandard(ADBase adBase, double readoutTime)
				Negative readoutTime disables AcquirePeriod
	 -->
	<bean id="andor1_nxcollectionstrategy"
		class="gda.device.detector.addetector.triggering.SingleExposureStandard">
		<constructor-arg ref="andor1_adbase" />
		<constructor-arg value="-1" />
	</bean>

	<!-- SingleExposureEpicsShutter(ADBase adBase, double readoutTime,
			String shutterPV, String shutterOpenValue, double shutterOpenDelay,
			String shutterCloseValue, double shutterCloseDelay)
				Negative readoutTime disables AcquirePeriod
	 -->
	<bean id="andor1_GV12collectionStrategy"
		class="gda.device.detector.addetector.triggering.SingleExposureEpicsShutter">
		<constructor-arg ref="andor1_adbase" />
		<constructor-arg value="-1" />
		<constructor-arg value="BL10I-VA-VALVE-12:CON" />
		<constructor-arg value="Open" />
		<constructor-arg value="1.0" />
		<constructor-arg value="Close" />
		<constructor-arg value="1.0" />
	</bean>

	<!-- NXDetector file writers -->

	<!-- SingleImagePerFileWriter(String detectorName)
	 -->
	<bean id="andor1_nxfilewriter_for_scans"
		class="gda.device.detector.nxdetector.plugin.areadetector.filewriter.SingleImagePerFileWriter">
		<constructor-arg value="andor" />
		<property name="ndFile" ref="andor_ndfile" />
		<property name="keyNameForMetadataPathTemplate" value="andor_path_template" />
	</bean>

	<!-- SingleImagePerFileWriterWithNumTracker(String detectorName)
	 -->
	<bean id="andor1_nxfilewriter_for_snaps"
		class="gda.device.detector.nxdetector.plugin.areadetector.filewriter.SingleImagePerFileWriterWithNumTracker">
		<constructor-arg value="andor" />
		<property name="ndFile" ref="andor_ndfile" />
		<property name="numTrackerExtension" value="andor1snaps" />
		<property name="keyNameForMetadataPathTemplate" value="andor_path_template" />
	</bean>

	<!-- NXDetectors -->

	<bean id="andor1det" class="gda.device.detector.NXDetector">
		<property name="name" value="andor1det" />
		<property name="collectionStrategy" ref="andor1_nxcollectionstrategy" />
		<property name="additionalPluginList">
			<list>
				<ref bean="andor1_nxfilewriter_for_scans" />
			</list>
		</property>
	</bean>

	<bean id="andor1det_for_snaps" class="gda.device.detector.NXDetector">
		<property name="name" value="andor1det_for_snaps" />
		<property name="collectionStrategy" ref="andor1_nxcollectionstrategy" />
		<property name="additionalPluginList">
			<list>
				<ref bean="andor1_nxfilewriter_for_snaps" />
			</list>
		</property>
	</bean>

	<bean id="andor1GV12det" class="gda.device.detector.NXDetector">
		<property name="name" value="andor1GV12det" />
		<property name="collectionStrategy" ref="andor1_GV12collectionStrategy" />
		<property name="additionalPluginList">
			<list>
				<ref bean="andor1_nxfilewriter_for_scans" />
			</list>
		</property>
	</bean>

	<bean id="andor1GV12det_for_snaps" class="gda.device.detector.NXDetector">
		<property name="name" value="andor1gv12det_for_snaps" />
		<property name="collectionStrategy" ref="andor1_GV12collectionStrategy" />
		<property name="additionalPluginList">
			<list>
				<ref bean="andor1_nxfilewriter_for_snaps" />
			</list>
		</property>
	</bean>

</beans>