<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

	<!-- D6 (D8) -->

	<bean id="d6_scrn" class="gda.device.enumpositioner.EpicsPneumaticCallback">
		<property name="controlPv" value="BL10I-DI-PHDGN-05:CON:CON"/>
		<property name="statusPv" value="BL10I-DI-PHDGN-05:STA"/>
		<property name="local" value="true"/>
	</bean>

	<bean id="d6d8_det_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL10I-DI-PHDGN-05:DET:X" />
		<property name="local" value="true"/>
	</bean>

    <bean id="d6_pos" class="gda.device.enumpositioner.EpicsPositioner">
        <property name="recordName" value="BL10I-DI-PHDGN-05:DET:X:MP"/>
    </bean>
</beans>