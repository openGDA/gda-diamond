		<property name="local" value="true"/>
	</bean>

	<bean id="AnalyserDetectorMotor" class="gda.device.motor.EpicsMotor">
		<property name="deviceName" value="ANA.THETA" />
		<property name="epicsConfiguration" ref="polarimeterConfig" />
