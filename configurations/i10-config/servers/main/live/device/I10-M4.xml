<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

	<!-- Mirror / M4 -->

	<bean id="m4x_motor" class="gda.device.motor.EpicsMotor">
		<property name="deviceName" value="M4.X" />
		<property name="epicsConfiguration" ref="epicsConfig" />
		<property name="local" value="true"/>
	</bean>

	<bean id="m4y_motor" class="gda.device.motor.EpicsMotor">
		<property name="deviceName" value="M4.Y" />
		<property name="epicsConfiguration" ref="epicsConfig" />
		<property name="local" value="true"/>
	</bean>

	<bean id="m4z_motor" class="gda.device.motor.EpicsMotor">
		<property name="deviceName" value="M4.Z" />
		<property name="epicsConfiguration" ref="epicsConfig" />
		<property name="local" value="true"/>
	</bean>

	<bean id="m4yaw_motor" class="gda.device.motor.EpicsMotor">
		<property name="deviceName" value="M4.YAW" />
		<property name="epicsConfiguration" ref="epicsConfig" />
		<property name="local" value="true"/>
	</bean>

	<bean id="m4pitch_motor" class="gda.device.motor.EpicsMotor">
		<property name="deviceName" value="M4.PITCH" />
		<property name="epicsConfiguration" ref="epicsConfig" />
		<property name="local" value="true"/>
	</bean>

	<bean id="m4roll_motor" class="gda.device.motor.EpicsMotor">
		<property name="deviceName" value="M4.ROLL" />
		<property name="epicsConfiguration" ref="epicsConfig" />
		<property name="local" value="true"/>
	</bean>
</beans>