<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

	<!-- Slits / S7 -->

	<bean id="s7xgap_motor" class="gda.device.motor.EpicsMotor">
		<property name="deviceName" value="SLITS7.XGAP" />
		<property name="epicsConfiguration" ref="epicsConfig" />
		<property name="local" value="true"/>
	</bean>
	
	<bean id="s7z_motor" class="gda.device.motor.EpicsMotor">
		<property name="deviceName" value="SLITS7.Z" />
		<property name="epicsConfiguration" ref="epicsConfig" />
		<property name="local" value="true"/>
	</bean>
	
	<bean id="s7ygap_motor" class="gda.device.motor.EpicsMotor">
		<property name="deviceName" value="SLITS7.YGAP" />
		<property name="epicsConfiguration" ref="epicsConfig" />
		<property name="local" value="true"/>
	</bean>

	<bean id="s7xsize_motor" class="gda.device.motor.EpicsMotor">
		<property name="deviceName" value="SLITS7.XSIZE" />
		<property name="epicsConfiguration" ref="epicsConfig" />
		<property name="local" value="true"/>
	</bean>
	
	<bean id="s7ysize_motor" class="gda.device.motor.EpicsMotor">
		<property name="deviceName" value="SLITS7.YSIZE" />
		<property name="epicsConfiguration" ref="epicsConfig" />
		<property name="local" value="true"/>
	</bean>
</beans>