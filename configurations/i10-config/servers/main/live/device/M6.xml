<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

	<!-- Mirror / M6 -->

	<bean id="m6x_motor" class="gda.device.motor.EpicsMotor">
		<property name="deviceName" value="M6.X" />
		<property name="epicsConfiguration" ref="epicsConfig" />
		<property name="local" value="true"/>
	</bean>

	<bean id="m6y_motor" class="gda.device.motor.EpicsMotor">
		<property name="deviceName" value="M6.Y" />
		<property name="epicsConfiguration" ref="epicsConfig" />
		<property name="local" value="true"/>
	</bean>

	<bean id="m6z_motor" class="gda.device.motor.EpicsMotor">
		<property name="deviceName" value="M6.Z" />
		<property name="epicsConfiguration" ref="epicsConfig" />
		<property name="local" value="true"/>
	</bean>

	<bean id="m6yaw_motor" class="gda.device.motor.EpicsMotor">
		<property name="deviceName" value="M6.YAW" />
		<property name="epicsConfiguration" ref="epicsConfig" />
		<property name="local" value="true"/>
	</bean>

	<bean id="m6pitch_motor" class="gda.device.motor.EpicsMotor">
		<property name="deviceName" value="M6.PITCH" />
		<property name="epicsConfiguration" ref="epicsConfig" />
		<property name="local" value="true"/>
	</bean>

	<bean id="m6roll_motor" class="gda.device.motor.EpicsMotor">
		<property name="deviceName" value="M6.ROLL" />
		<property name="epicsConfiguration" ref="epicsConfig" />
		<property name="local" value="true"/>
	</bean>
</beans>