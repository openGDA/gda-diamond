<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- display message in Logger Server's console -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <layout class="ch.qos.logback.classic.PatternLayout">
            <Pattern>%date %-5level [%logger] - %message%n%rEx</Pattern>
        </layout>
    </appender>

    <!-- Socket for forwarding log message to LogPanel in GDA Client or other viewers -->
    <appender name="localhost" class="ch.qos.logback.classic.net.SocketAppender">
        <RemoteHost>localhost</RemoteHost>
        <Port>6001</Port>
        <ReconnectionDelay>10000</ReconnectionDelay>
        <IncludeCallerData>true</IncludeCallerData>
    </appender>

    <appender name="localhost_LogPanel" class="ch.qos.logback.classic.net.SocketAppender">
        <RemoteHost>localhost</RemoteHost>
        <Port>6002</Port>
        <ReconnectionDelay>10000</ReconnectionDelay>
        <IncludeCallerData>true</IncludeCallerData>
    </appender>

    <appender name="DebugFILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <File>${gda.logs.dir}/gda_server.log</File>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <FileNamePattern>${gda.logs.dir}/gda_server.%d{yyyy-MM-dd}.log.gz</FileNamePattern>
        </rollingPolicy>
        <layout class="ch.qos.logback.classic.PatternLayout">
            <pattern>%d %-5level %logger - %m %rEx %n</pattern>
        </layout>
    </appender>
        
    <logger name="gda">
        <level value="INFO"/>
    </logger>
    
    <logger name="gda.device.monitor.corba.impl">
        <level value="INFO"/>
    </logger>
    
    <logger name="gda.device.corba.impl">
        <level value="INFO"/>
    </logger>
    
    <root>
        <level value="ALL"/>
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="localhost"/>
        <appender-ref ref="localhost_LogPanel"/>
        <appender-ref ref="DebugFILE"/>
    </root>
</configuration>
