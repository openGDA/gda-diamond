<?xml version="1.0" encoding="UTF-8"?>
<configuration>
	<property file="${gda.config}/properties/java.properties" />
    <!-- display message in Logger Server's console -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <layout class="ch.qos.logback.classic.PatternLayout">
            <Pattern>%date %-5level [%logger] - %message%n%ex</Pattern>
        </layout>
    </appender>
    <!-- Socket for forwarding log message to LogPanel in GDA Client or other viewers -->
    <appender name="WS001" class="ch.qos.logback.classic.net.SocketAppender">
        <RemoteHost>i10-ws001.diamond.ac.uk</RemoteHost>
        <Port>6789</Port>
        <ReconnectionDelay>10000</ReconnectionDelay>
        <IncludeCallerData>true</IncludeCallerData>
    </appender>
    <appender name="WS001_LogPanel" class="ch.qos.logback.classic.net.SocketAppender">
        <RemoteHost>i10-ws001.diamond.ac.uk</RemoteHost>
        <Port>6790</Port>
        <ReconnectionDelay>10000</ReconnectionDelay>
        <IncludeCallerData>true</IncludeCallerData>
    </appender>
    <appender name="WS001_GUI" class="ch.qos.logback.classic.net.SocketAppender">
        <RemoteHost>i10-ws001.diamond.ac.uk</RemoteHost>
        <Port>4321</Port>
        <ReconnectionDelay>10000</ReconnectionDelay>
        <IncludeCallerData>true</IncludeCallerData>
    </appender>
    <appender name="WS002" class="ch.qos.logback.classic.net.SocketAppender">
        <RemoteHost>i10-ws002.diamond.ac.uk</RemoteHost>
        <Port>6789</Port>
        <ReconnectionDelay>10000</ReconnectionDelay>
        <IncludeCallerData>true</IncludeCallerData>
    </appender>
    <appender name="WS002_LogPanel" class="ch.qos.logback.classic.net.SocketAppender">
        <RemoteHost>i10-ws002.diamond.ac.uk</RemoteHost>
        <Port>6790</Port>
        <ReconnectionDelay>10000</ReconnectionDelay>
        <IncludeCallerData>true</IncludeCallerData>
    </appender>
    <appender name="WS002_GUI" class="ch.qos.logback.classic.net.SocketAppender">
        <RemoteHost>i10-ws002.diamond.ac.uk</RemoteHost>
        <Port>4321</Port>
        <ReconnectionDelay>10000</ReconnectionDelay>
        <IncludeCallerData>true</IncludeCallerData>
    </appender>
    <appender name="WS001-1" class="ch.qos.logback.classic.net.SocketAppender">
        <RemoteHost>i10-1-ws001.diamond.ac.uk</RemoteHost>
        <Port>6789</Port>
        <ReconnectionDelay>10000</ReconnectionDelay>
        <IncludeCallerData>true</IncludeCallerData>
    </appender>
    <appender name="WS001-1_LogPanel" class="ch.qos.logback.classic.net.SocketAppender">
        <RemoteHost>i10-1-ws001.diamond.ac.uk</RemoteHost>
        <Port>6790</Port>
        <ReconnectionDelay>10000</ReconnectionDelay>
        <IncludeCallerData>true</IncludeCallerData>
    </appender>
    <appender name="WS001-1_GUI" class="ch.qos.logback.classic.net.SocketAppender">
        <RemoteHost>i10-1-ws001.diamond.ac.uk</RemoteHost>
        <Port>4321</Port>
        <ReconnectionDelay>10000</ReconnectionDelay>
        <IncludeCallerData>true</IncludeCallerData>
    </appender>
    <appender name="WS002-1" class="ch.qos.logback.classic.net.SocketAppender">
        <RemoteHost>i10-1-ws002.diamond.ac.uk</RemoteHost>
        <Port>6789</Port>
        <ReconnectionDelay>10000</ReconnectionDelay>
        <IncludeCallerData>true</IncludeCallerData>
    </appender>
    <appender name="WS002-1_LogPanel" class="ch.qos.logback.classic.net.SocketAppender">
        <RemoteHost>i10-1-ws002.diamond.ac.uk</RemoteHost>
        <Port>6790</Port>
        <ReconnectionDelay>10000</ReconnectionDelay>
        <IncludeCallerData>true</IncludeCallerData>
    </appender>
    <appender name="WS002-1_GUI" class="ch.qos.logback.classic.net.SocketAppender">
        <RemoteHost>i10-1-ws002.diamond.ac.uk</RemoteHost>
        <Port>4321</Port>
        <ReconnectionDelay>10000</ReconnectionDelay>
        <IncludeCallerData>true</IncludeCallerData>
    </appender>
    
    <appender name="DebugFILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <File>${gda.logs.dir}/gda_server.log</File>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <FileNamePattern>${gda.logs.dir}/gda_server.%d{yyyy-MM-dd}.log.zip</FileNamePattern>
        </rollingPolicy>
        <layout class="ch.qos.logback.classic.PatternLayout">
            <pattern>%d %-5level %logger - %m %ex %n</pattern>
        </layout>
    </appender>
        
    <logger name="gda">
        <level value="INFO"/>
    </logger>
    
    <logger name="gda.device.monitor.corba.impl">
        <level value="INFO"/>
    </logger>
    
    <logger name="gda.device.corba.impl">
        <level value="INFO"/>
    </logger>
    
    <root>
        <level value="ALL"/>
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="WS001"/>
        <appender-ref ref="WS001_LogPanel"/>
        <appender-ref ref="WS001_GUI"/>
        <appender-ref ref="WS002"/>
        <appender-ref ref="WS002_LogPanel"/>
        <appender-ref ref="WS002_GUI"/>
        <appender-ref ref="WS001-1"/>
        <appender-ref ref="WS001-1_LogPanel"/>
        <appender-ref ref="WS001-1_GUI"/>
        <appender-ref ref="WS002-1"/>
        <appender-ref ref="WS002-1_LogPanel"/>
        <appender-ref ref="WS002-1_GUI"/>
        <appender-ref ref="DebugFILE"/>
    </root>
</configuration>
