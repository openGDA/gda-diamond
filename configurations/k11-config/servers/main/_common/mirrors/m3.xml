<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:gda="http://www.diamond.ac.uk/schema/gda/gda"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
						http://www.diamond.ac.uk/schema/gda/gda http://www.diamond.ac.uk/schema/gda/gda/gda-gda-1.2.xsd">


	<!-- COMBINED MOTION -->
	<gda:motor id="m3_x" pv="BL11K-OP-MR-03:X" />
	<gda:motor id="m3_y" pv="BL11K-OP-MR-03:Y" />
	<gda:motor id="m3_roll" pv="BL11K-OP-MR-03:ROLL" />
	<gda:motor id="m3_pitch" pv="BL11K-OP-MR-03:PITCH" />
	<gda:motor id="m3_yaw" pv="BL11K-OP-MR-03:YAW" />
	
	<!-- RAW MOTION -->
	<gda:motor id="m3_x1" pv="BL11K-OP-MR-03:X1" />
	<gda:motor id="m3_x2" pv="BL11K-OP-MR-03:X2" />
	<gda:motor id="m3_y1" pv="BL11K-OP-MR-03:Y1" />
	<gda:motor id="m3_y2" pv="BL11K-OP-MR-03:Y2" />
	<gda:motor id="m3_y3" pv="BL11K-OP-MR-03:Y3" />
	

	<bean id="m3" class="gda.device.scannable.scannablegroup.ScannableGroup">
		<property name="groupMembers">
			<list>
				<ref bean="m3_x" />
				<ref bean="m3_y" />
				<ref bean="m3_roll" />
				<ref bean="m3_pitch" />
				<ref bean="m3_yaw" />
				<ref bean="m3_x1" />
				<ref bean="m3_x2" />
				<ref bean="m3_y1" />
				<ref bean="m3_y2" />
				<ref bean="m3_y3" />
			</list>
		</property>
	</bean>

</beans>
