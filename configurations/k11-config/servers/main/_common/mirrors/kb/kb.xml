<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:gda="http://www.diamond.ac.uk/schema/gda/gda"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
						http://www.diamond.ac.uk/schema/gda/gda http://www.diamond.ac.uk/schema/gda/gda/gda-gda-1.2.xsd">

	<gda:motor id="kb_x"
		live-pvName="#{configProperties.KBM_PV_PREFIX}01:X"
		dummy-minPosition="-4.1"
		dummy-maxPosition="6.35"
		dummy-position="1.0"
		dummy-unitString="mm"/>

	<gda:motor id="kb_y"
		live-pvName="#{configProperties.KBM_PV_PREFIX}01:Y"
		dummy-minPosition="-7.5"
		dummy-maxPosition="2.8"
		dummy-position="1"
		dummy-unitString="mm"/>

	<bean id="kb_mirrors" class="gda.device.scannable.scannablegroup.ScannableGroup">
		<property name="groupMembers">
			<list>
				<ref bean="kb_x" />
				<ref bean="kb_y" />
			</list>
		</property>
	</bean>


	<!-- kb_cs_x is a virtual motor. It transforms the camera pixels space 
             in the the kb_x space through geobrick. See https://jira.diamond.ac.uk/browse/K11-1254 -->
        <gda:motor id="kb_cs_x"
                live-pvName="#{configProperties.KBM_PV_PREFIX}01:CS:X"
                dummy-minPosition="-4.1"
                dummy-maxPosition="6.35"
                dummy-position="1.0"
                dummy-unitString="mm"/>

    <!-- kb_cs_y is a virtual motor. It transforms the camera pixels space 
             in the the kb_y space through geobrick. See https://jira.diamond.ac.uk/browse/K11-1254 -->
        <gda:motor id="kb_cs_y"
                live-pvName="#{configProperties.KBM_PV_PREFIX}01:CS:Y"
                dummy-minPosition="-7.5"
                dummy-maxPosition="2.8"
                dummy-position="1"
                dummy-unitString="mm"/>

</beans>
