<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">


	<bean id="vfm_pitch" class="gda.device.scannable.ScannableMotor">
		<property name="motor" ref="vfm_pitch_motor" />
	</bean>

	<bean id="vfm_bendus" class="gda.device.scannable.ScannableMotor">
		<property name="motor" ref="vfm_bendus_motor" />
	</bean>

	<bean id="vfm_bendds" class="gda.device.scannable.ScannableMotor">
		<property name="motor" ref="vfm_bendds_motor" />
	</bean>



	<bean id="vfm" class="gda.device.scannable.scannablegroup.ScannableGroup">
		<property name="groupMembers">
			<list>
				<ref bean="vfm_pitch" />
				<ref bean="vfm_bendus" />
				<ref bean="vfm_bendds" />
			</list>
		</property>
	</bean>

</beans>