<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:gda="http://www.diamond.ac.uk/schema/gda/gda"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
						http://www.diamond.ac.uk/schema/gda/gda http://www.diamond.ac.uk/schema/gda/gda/gda-gda-1.2.xsd">


	<gda:motor id="vfm_pitch" pv="BL11K-OP-KBM-01:VFM:PITCH" />
	<gda:motor id="vfm_bendus" pv="BL11K-OP-KBM-01:VFM:BENDUS" />
	<gda:motor id="vfm_bendds" pv="BL11K-OP-KBM-01:VFM:BENDDS" />


	<bean id="vfm" class="gda.device.scannable.scannablegroup.ScannableGroup">
		<property name="groupMembers">
			<list>
				<ref bean="vfm_pitch" />
				<ref bean="vfm_bendus" />
				<ref bean="vfm_bendds" />
			</list>
		</property>
	</bean>

</beans>