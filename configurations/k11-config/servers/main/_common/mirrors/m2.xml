<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:gda="http://www.diamond.ac.uk/schema/gda/gda"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
						http://www.diamond.ac.uk/schema/gda/gda http://www.diamond.ac.uk/schema/gda/gda/gda-gda-1.2.xsd">

	<!-- COMBINED MOTION -->
	<gda:motor id="m2_x" pv="BL11K-OP-MR-02:X" />
	<gda:motor id="m2_y" pv="BL11K-OP-MR-02:Y" />
	<gda:motor id="m2_roll" pv="BL11K-OP-MR-02:ROLL" />
	<gda:motor id="m2_pitch" pv="BL11K-OP-MR-02:PITCH" />
	<gda:motor id="m2_yaw" pv="BL11K-OP-MR-02:YAW" />
	
	<!-- RAW MOTION -->
	<gda:motor id="m2_x1" pv="BL11K-OP-MR-02:X1" />
	<gda:motor id="m2_x2" pv="BL11K-OP-MR-02:X2" />
	<gda:motor id="m2_y1" pv="BL11K-OP-MR-02:Y1" />
	<gda:motor id="m2_y2" pv="BL11K-OP-MR-02:Y2" />
	<gda:motor id="m2_y3" pv="BL11K-OP-MR-02:Y3" />
	<gda:motor id="m2_bendus" pv="BL11K-OP-MR-02:BENDUS" />
	<gda:motor id="m2_bendds" pv="BL11K-OP-MR-02:BENDDS" />

	<bean id="m2" class="gda.device.scannable.scannablegroup.ScannableGroup">
		<property name="groupMembers">
			<list>
				<ref bean="m2_x" />
				<ref bean="m2_y" />
				<ref bean="m2_roll" />
				<ref bean="m2_pitch" />
				<ref bean="m2_yaw" />
				<ref bean="m2_x1" />
				<ref bean="m2_x2" />
				<ref bean="m2_y1" />
				<ref bean="m2_y2" />
				<ref bean="m2_y3" />
				<ref bean="m2_bendus" />
				<ref bean="m2_bendds" />
			</list>
		</property>
	</bean>

</beans>
