<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">


	<bean id="kb_x" class="gda.device.scannable.ScannableMotor">
		<property name="motor" ref="kb_x_motor" />
	</bean>

	<bean id="kb_y" class="gda.device.scannable.ScannableMotor">
		<property name="motor" ref="kb_y_motor" />
	</bean>	
		
	<bean id="kb_mirrors" class="gda.device.scannable.scannablegroup.ScannableGroup">
		<property name="groupMembers">
			<list>
				<ref bean="kb_x" />
				<ref bean="kb_y" />
			</list>
		</property>
	</bean>
	
</beans>
