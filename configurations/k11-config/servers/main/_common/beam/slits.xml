<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="slit_x" class="gda.device.scannable.ScannableMotor">
		<property name="motor" ref="slit_x_motor" />
	</bean>
	
	<bean id="slit_y" class="gda.device.scannable.ScannableMotor">
		<property name="motor" ref="slit_y_motor" />
	</bean>
	
	<bean id="diffraction_probe_size" class="gda.device.scannable.scannablegroup.ScannableGroup">
		<property name="groupMembers">
			<list>
				<ref bean="slit_x" />
				<ref bean="slit_y" />
			</list>
		</property>
	</bean>
	
</beans>
