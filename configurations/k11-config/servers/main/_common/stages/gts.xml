<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">


	<bean id="gts_x" class="gda.device.scannable.ScannableMotor">
		<property name="motor" ref="gts_x_motor" />
	</bean>

	<bean id="gts_y" class="gda.device.scannable.ScannableMotor">
		<property name="motor" ref="gts_y_motor" />
	</bean>

	<bean id="gts_z" class="gda.device.scannable.ScannableMotor">
		<property name="motor" ref="gts_z_motor" />
	</bean>

	<bean id="gts_rot" class="gda.device.scannable.ScannableMotor">
		<property name="motor" ref="gts_rot_motor" />
	</bean>

	<bean id="gts_pitch" class="gda.device.scannable.ScannableMotor">
		<property name="motor" ref="gts_pitch_motor" />
	</bean>

	<bean id="gts_roll" class="gda.device.scannable.ScannableMotor">
		<property name="motor" ref="gts_roll_motor" />
	</bean>

	<bean id="gts_y1" class="gda.device.scannable.ScannableMotor">
		<property name="motor" ref="gts_y1_motor" />
	</bean>

	<bean id="gts_y2" class="gda.device.scannable.ScannableMotor">
		<property name="motor" ref="gts_y2_motor" />
	</bean>

	<bean id="gts_y3" class="gda.device.scannable.ScannableMotor">
		<property name="motor" ref="gts_y3_motor" />
	</bean>



	<bean id="gts_centring" class="gda.device.scannable.scannablegroup.ScannableGroup">
		<property name="groupMembers">
			<list>
				<ref bean="gts_x" />
				<ref bean="gts_z" />
			</list>
		</property>
	</bean>

	<bean id="gts" class="gda.device.scannable.scannablegroup.ScannableGroup">
		<property name="groupMembers">
			<list>
				<ref bean="gts_y" />
				<ref bean="gts_rot" />
				<ref bean="gts_centring" />
			</list>
		</property>
	</bean>

</beans>