<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:gda="http://www.diamond.ac.uk/schema/gda/gda"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
						http://www.diamond.ac.uk/schema/gda/gda http://www.diamond.ac.uk/schema/gda/gda/gda-gda-1.2.xsd">


	<gda:motor id="gts_x"
		live-pvName="BL11K-MO-STAGE-02:X"
		dummy-minPosition="-12.5"
		dummy-maxPosition="12.5"
		dummy-position="9.45"
		dummy-unitString="mm"\>

	<gda:motor id="gts_y"
		live-pvName="BL11K-MO-STAGE-02:Y"
		dummy-minPosition="-12.5"
		dummy-maxPosition="12.5"
		dummy-position="9.45"
		dummy-unitString="mm"\>

	<gda:motor id="gts_z"
		live-pvName="BL11K-MO-STAGE-02:Z"
		dummy-minPosition="-12.5"
		dummy-maxPosition="12.5"
		dummy-position="9.45"
		dummy-unitString="mm"\>

	<gda:motor id="gts_rot"
		live-pvName="BL11K-MO-STAGE-02:ROT"
		dummy-minPosition="0"
		dummy-maxPosition="3600"
		dummy-position="9.45"
		dummy-unitString="deg"\>

	<gda:motor id="gts_pitch"
		live-pvName="BL11K-MO-STAGE-02:PITCH"
		dummy-minPosition="-12.5"
		dummy-maxPosition="12.5"
		dummy-position="9.45"
		dummy-unitString="mrad"\>

	<gda:motor id="gts_roll"
		live-pvName="BL11K-MO-STAGE-02:ROLL"
		dummy-minPosition="-12.5"
		dummy-maxPosition="12.5"
		dummy-position="9.45"
		dummy-unitString="mrad"\>

	
	<!-- RAW MOTION -->
	<gda:motor id="gts_y1"
		live-pvName="BL11K-MO-STAGE-02:Y1"
		dummy-minPosition="-12.5"
		dummy-maxPosition="12.5"
		dummy-position="9.45"
		dummy-unitString="mm"\>

	<gda:motor id="gts_y2"
		live-pvName="BL11K-MO-STAGE-02:Y2"
		dummy-minPosition="-12.5"
		dummy-maxPosition="12.5"
		dummy-position="9.45"
		dummy-unitString="mm"\>

	<gda:motor id="gts_y3"
		live-pvName="BL11K-MO-STAGE-02:Y3"
		dummy-minPosition="-12.5"
		dummy-maxPosition="12.5"
		dummy-position="9.45"
		dummy-unitString="mm"\>


	<bean id="gts_centring" class="gda.device.scannable.scannablegroup.ScannableGroup">
		<property name="groupMembers">
			<list>
				<ref bean="gts_x" />
				<ref bean="gts_z" />
			</list>
		</property>
	</bean>

	<bean id="gts" class="gda.device.scannable.scannablegroup.ScannableGroup">
		<property name="groupMembers">
			<list>
				<ref bean="gts_y" />
				<ref bean="gts_rot" />
				<ref bean="gts_centring" />
			</list>
		</property>
	</bean>

</beans>
