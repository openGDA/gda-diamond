<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:gda="http://www.diamond.ac.uk/schema/gda/gda"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
						http://www.diamond.ac.uk/schema/gda/gda http://www.diamond.ac.uk/schema/gda/gda/gda-gda-1.2.xsd">


	<gda:motor id="gts_x" pv="BL11K-MO-STAGE-02:X" />
	<gda:motor id="gts_y" pv="BL11K-MO-STAGE-02:Y" />
	<gda:motor id="gts_z" pv="BL11K-MO-STAGE-02:Z" />
	<gda:motor id="gts_rot" pv="BL11K-MO-STAGE-02:ROT" />
	<gda:motor id="gts_pitch" pv="BL11K-MO-STAGE-02:PITCH" />
	<gda:motor id="gts_roll" pv="BL11K-MO-STAGE-02:ROLL" />
	
	<!-- RAW MOTION -->
	<gda:motor id="gts_y1" pv="BL11K-MO-STAGE-02:Y1" />
	<gda:motor id="gts_y2" pv="BL11K-MO-STAGE-02:Y2" />
	<gda:motor id="gts_y3" pv="BL11K-MO-STAGE-02:Y3" />


	<bean id="gts_centring" class="gda.device.scannable.scannablegroup.ScannableGroup">
		<property name="groupMembers">
			<list>
				<ref bean="gts_x" />
				<ref bean="gts_z" />
			</list>
		</property>
	</bean>

	<bean id="gts" class="gda.device.scannable.scannablegroup.ScannableGroup">
		<property name="groupMembers">
			<list>
				<ref bean="gts_y" />
				<ref bean="gts_rot" />
				<ref bean="gts_centring" />
			</list>
		</property>
	</bean>

</beans>