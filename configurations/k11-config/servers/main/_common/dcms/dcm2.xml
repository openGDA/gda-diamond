<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:gda="http://www.diamond.ac.uk/schema/gda/gda"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
						http://www.diamond.ac.uk/schema/gda/gda http://www.diamond.ac.uk/schema/gda/gda/gda-gda-1.2.xsd">

	<gda:motor id="dcm2_y" pv="BL11K-OP-DCM-02:Y" />
	<gda:motor id="dcm2_bragg" pv="BL11K-OP-DCM-02:BRAGG" />
	<gda:motor id="dcm2_z" pv="BL11K-OP-DCM-02:Z" />
	
	
	<bean id="dcm2" class="gda.device.scannable.scannablegroup.ScannableGroup">
		<property name="groupMembers">
			<list>
				<ref bean="dcm2_y" />
				<ref bean="dcm2_bragg" />
				<ref bean="dcm2_z" />
				<ref bean="dcm2_roll" />
				<ref bean="dcm2_pitch" />
				<ref bean="dcm2_y_positioner" />
			</list>
		</property>
	</bean>

</beans>
