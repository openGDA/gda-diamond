<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:gda="http://www.diamond.ac.uk/schema/gda/gda"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
						http://www.diamond.ac.uk/schema/gda/gda http://www.diamond.ac.uk/schema/gda/gda/gda-gda-1.2.xsd">


	<!-- COMBINED MOTION -->
	<gda:motor id="s1_xsize" pv="BL11K-AL-SLITS-01:XSIZE" />
	<gda:motor id="s1_xcentre" pv="BL11K-AL-SLITS-01:XCENTRE" />
	<gda:motor id="s1_ysize" pv="BL11K-AL-SLITS-01:YSIZE" />
	<gda:motor id="s1_ycentre" pv="BL11K-AL-SLITS-01:YCENTRE" />


	<!-- RAW MOTION -->
	<gda:motor id="s1_xplus" pv="BL11K-AL-SLITS-01:XPLUS" />
	<gda:motor id="s1_xminus" pv="BL11K-AL-SLITS-01:XMINUS" />
	<gda:motor id="s1_yplus" pv="BL11K-AL-SLITS-01:YPLUS" />
	<gda:motor id="s1_yminus" pv="BL11K-AL-SLITS-01:YMINUS" />


	<bean id="s1" class="gda.device.scannable.scannablegroup.ScannableGroup">
		<property name="groupMembers">
			<list>
				<ref bean="s1_xsize" />
				<ref bean="s1_xcentre" />
				<ref bean="s1_ysize" />
				<ref bean="s1_ycentre" />
				<ref bean="s1_xplus" />
				<ref bean="s1_xminus" />
				<ref bean="s1_yplus" />
				<ref bean="s1_yminus" />
			</list>
		</property>
	</bean>
</beans>
