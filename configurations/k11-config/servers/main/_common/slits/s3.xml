<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:gda="http://www.diamond.ac.uk/schema/gda/gda"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
						http://www.diamond.ac.uk/schema/gda/gda http://www.diamond.ac.uk/schema/gda/gda/gda-gda-1.2.xsd">


	<!-- COMBINED MOTION -->
	<gda:motor id="s3_xsize" pv="BL11K-MO-SLITS-03:XSIZE" />
	<gda:motor id="s3_xcentre" pv="BL11K-MO-SLITS-03:XCENTRE" />
	<gda:motor id="s3_ysize" pv="BL11K-MO-SLITS-03:YSIZE" />
	<gda:motor id="s3_ycentre" pv="BL11K-MO-SLITS-03:YCENTRE" />


	<!-- RAW MOTION -->
	<gda:motor id="s3_xplus" pv="BL11K-MO-SLITS-03:IMGX:PLUS" />
	<gda:motor id="s3_xminus" pv="BL11K-MO-SLITS-03:IMGX:MINUS" />
	<gda:motor id="s3_yplus" pv="BL11K-MO-SLITS-03:IMGY:PLUS" />
	<gda:motor id="s3_yminus" pv="BL11K-MO-SLITS-03:IMGY:MINUS" />


	<bean id="s3" class="gda.device.scannable.scannablegroup.ScannableGroup">
		<property name="groupMembers">
			<list>
				<ref bean="s3_xsize" />
				<ref bean="s3_xcentre" />
				<ref bean="s3_ysize" />
				<ref bean="s3_ycentre" />
				<ref bean="s3_xplus" />
				<ref bean="s3_xminus" />
				<ref bean="s3_yplus" />
				<ref bean="s3_yminus" />
			</list>
		</property>
	</bean>
</beans>
