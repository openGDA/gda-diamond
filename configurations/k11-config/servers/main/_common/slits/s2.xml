<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:gda="http://www.diamond.ac.uk/schema/gda/gda"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
						http://www.diamond.ac.uk/schema/gda/gda http://www.diamond.ac.uk/schema/gda/gda/gda-gda-1.2.xsd">


	<!-- COMBINED MOTION -->
	<gda:motor id="s2_xsize" pv="BL11K-MO-SLITS-02:XSIZE" />
	<gda:motor id="s2_xcentre" pv="BL11K-MO-SLITS-02:XCENTRE" />
	<gda:motor id="s2_ysize" pv="BL11K-MO-SLITS-02:YSIZE" />
	<gda:motor id="s2_ycentre" pv="BL11K-MO-SLITS-02:YCENTRE" />


	<!-- RAW MOTION -->
	<gda:motor id="s2_xplus" pv="BL11K-MO-SLITS-02:DIFX:PLUS" />
	<gda:motor id="s2_xminus" pv="BL11K-MO-SLITS-02:DIFX:MINUS" />
	<gda:motor id="s2_yplus" pv="BL11K-MO-SLITS-02:DIFY:PLUS" />
	<gda:motor id="s2_yminus" pv="BL11K-MO-SLITS-02:DIFY:MINUS" />


	<bean id="s2" class="gda.device.scannable.scannablegroup.ScannableGroup">
		<property name="groupMembers">
			<list>
				<ref bean="s2_xsize" />
				<ref bean="s2_xcentre" />
				<ref bean="s2_ysize" />
				<ref bean="s2_ycentre" />
				<ref bean="s2_xplus" />
				<ref bean="s2_xminus" />
				<ref bean="s2_yplus" />
				<ref bean="s2_yminus" />
			</list>
		</property>
	</bean>
</beans>
