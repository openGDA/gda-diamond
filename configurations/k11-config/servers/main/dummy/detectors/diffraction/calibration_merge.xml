<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:gda="http://www.diamond.ac.uk/schema/gda/gda"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
	http://www.diamond.ac.uk/schema/gda/gda http://www.diamond.ac.uk/schema/gda/gda/gda-gda-1.0.xsd">

	<bean id="diffraction_calibration_appender" class="org.eclipse.dawnsci.nexus.appender.NexusNodeCopyAppender" init-method="register">
		<!-- This value cames from MALCOLM detector table. The value actually comes from the properties -->
		<property name="name" value="${server.processingRequests.diffractionCalibrationMerge.datasetName}" />
		<property name="nodePaths">
			<set>
				<value>/entry1</value>
				<value>/entry1/instrument/detector</value>
				<value>/entry1/instrument/detector/data</value>
			</set>
		</property>
		<property name="customTargetPerNode">
			<map>
				<entry key="/entry1/instrument/detector/data" value="calibration_data/" />
			</map>
		</property>
		<property name="excludedPerNode">
			<map>
				<entry key="/entry1">
					<set>
						<value>calibration_data</value>
						<value>instrument</value>
					</set>
				</entry>
				<entry key="/entry1/instrument/detector" value="data" />
			</map>
		</property>
    </bean>

</beans>