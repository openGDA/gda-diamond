<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<!-- COMBINED MOTION -->

	<bean id="m1_x_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL11K-OP-MR-01:X" />
		<property name="local" value="true" />
	</bean>

	<bean id="m1_y_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL11K-OP-MR-01:Y" />
		<property name="local" value="true" />
	</bean>

	<bean id="m1_roll_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL11K-OP-MR-01:ROLL" />
		<property name="local" value="true" />
	</bean>

	<bean id="m1_pitch_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL11K-OP-MR-01:PITCH" />
		<property name="local" value="true" />
	</bean>

	<bean id="m1_yaw_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL11K-OP-MR-01:YAW" />
		<property name="local" value="true" />
	</bean>


	<!-- RAW MOTION -->

	<bean id="m1_x1_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL11K-OP-MR-01:X1" />
		<property name="local" value="true" />
	</bean>

	<bean id="m1_x2_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL11K-OP-MR-01:X2" />
		<property name="local" value="true" />
	</bean>

	<bean id="m1_y1_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL11K-OP-MR-01:Y1" />
		<property name="local" value="true" />
	</bean>

	<bean id="m1_y2_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL11K-OP-MR-01:Y2" />
		<property name="local" value="true" />
	</bean>

	<bean id="m1_y3_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL11K-OP-MR-01:Y3" />
		<property name="local" value="true" />
	</bean>

</beans>
