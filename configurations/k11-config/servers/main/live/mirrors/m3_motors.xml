<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<!-- COMBINED MOTION -->

	<bean id="m3_x_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL11K-OP-MR-03:X" />
		<property name="local" value="true" />
	</bean>

	<bean id="m3_y_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL11K-OP-MR-03:Y" />
		<property name="local" value="true" />
	</bean>

	<bean id="m3_roll_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL11K-OP-MR-03:ROLL" />
		<property name="local" value="true" />
	</bean>

	<bean id="m3_pitch_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL11K-OP-MR-03:PITCH" />
		<property name="local" value="true" />
	</bean>

	<bean id="m3_yaw_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL11K-OP-MR-03:YAW" />
		<property name="local" value="true" />
	</bean>


	<!-- RAW MOTION -->

	<bean id="m3_x1_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL11K-OP-MR-03:X1" />
		<property name="local" value="true" />
	</bean>

	<bean id="m3_x2_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL11K-OP-MR-03:X2" />
		<property name="local" value="true" />
	</bean>

	<bean id="m3_y1_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL11K-OP-MR-03:Y1" />
		<property name="local" value="true" />
	</bean>

	<bean id="m3_y2_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL11K-OP-MR-03:Y2" />
		<property name="local" value="true" />
	</bean>

	<bean id="m3_y3_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL11K-OP-MR-03:Y3" />
		<property name="local" value="true" />
	</bean>

</beans>
