<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
	
	<bean id="s2_xplus_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL11K-MO-SLITS-02:DIFX:PLUS" />
	</bean>

	<bean id="s2_xminus_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL11K-MO-SLITS-02:DIFX:MINUS" />
	</bean>

	<bean id="s2_yplus_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL11K-MO-SLITS-02:DIFY:PLUS" />
	</bean>

	<bean id="s2_yminus_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL11K-MO-SLITS-02:DIFX:MINUS" />
	</bean>

	<bean id="s2_xsize_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL11K-MO-SLITS-02:X:GAP" />
	</bean>

	<bean id="s2_xcentre_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL11K-MO-SLITS-02:X:CENTRE" />
	</bean>

	<bean id="s2_ysize_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL11K-MO-SLITS-02:Y:GAP" />
	</bean>

	<bean id="s2_ycentre_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL11K-MO-SLITS-02:Y:CENTRE" />
	</bean>
</beans>
