<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">


	<bean id="dcm2_roll" class="gda.device.scannable.MultiPVScannable">
		<property name="writePV" 
			value="#{configProperties.DCM_PV_PREFIX}02:ROLL:VAL" />
		<property name="readPV" 
			value="#{configProperties.DCM_PV_PREFIX}02:ROLL:RBV" />
		<property name="hardwareUnitString" value="microns" />
		<property name="userUnits" value="microns" />
	</bean>
	
	<bean id="dcm2_pitch" class="gda.device.scannable.MultiPVScannable">
		<property name="writePV" 
			value="#{configProperties.DCM_PV_PREFIX}02:PITCH:VAL" />
		<property name="readPV" 
			value="#{configProperties.DCM_PV_PREFIX}02:PITCH:RBV" />
		<property name="hardwareUnitString" value="microns" />
		<property name="userUnits" value="microns" />
	</bean>
	
	<bean id="dcm2_y_positioner" class="gda.device.enumpositioner.EpicsEnumPositioner" >
		<property name="pvBase" value="#{configProperties.DCM_PV_PREFIX}02:Y:SELECT" />
	</bean>

	<!-- MONITORS -->
	<bean id="dcm2_temp_heater1"
		class="gda.device.monitor.EpicsMonitor">
		<property name="pvName"
			value="#{configProperties.DCM_PV_PREFIX}02:HEATER1:T" />
		<property name="unit" value="C" />
		<property name="poll" value="true" />
		<property name="sensitivity" value="0.1" />
	</bean>

