<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:gda="http://www.diamond.ac.uk/schema/gda/gda"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
	http://www.diamond.ac.uk/schema/gda/gda http://www.diamond.ac.uk/schema/gda/gda/gda-gda-1.0.xsd">


	<bean id="d10_adbase" class="gda.device.detector.areadetector.v17.impl.ADBaseImpl">
		<property name="basePVName" value="BL11K-DI-PHDGN-10:CAM:" />
	</bean>
	
	<bean id="d10_roi" class="gda.device.detector.areadetector.v17.impl.NDROIImpl">
		<property name="basePVName" value="BL11K-DI-PHDGN-10:ROI:" />
		<property name="pluginBase">
			<bean class="gda.device.detector.areadetector.v17.impl.NDPluginBaseImpl">
				<property name="basePVName" value="BL11K-DI-PHDGN-10:ROI:" />
				<property name="initialArrayPort" value="D10.cam" />
			</bean>
		</property>
	</bean>

	<bean id="d10_stats" class="gda.device.detector.areadetector.v17.impl.NDStatsImpl">
		<property name="basePVName" value="BL11K-DI-PHDGN-10:STAT:" />
		<property name="pluginBase">
			<bean class="gda.device.detector.areadetector.v17.impl.NDPluginBaseImpl">
				<property name="basePVName" value="BL11K-DI-PHDGN-10:STAT:" />
				<property name="initialArrayPort" value="D10.cam" />
			</bean>
		</property>
	</bean>

	<bean id="d10_ndarray" class="gda.device.detector.areadetector.v17.impl.NDArrayImpl">
		<property name="basePVName" value="BL11K-DI-PHDGN-10:ARR:" />
		<property name="pluginBase">
			<bean class="gda.device.detector.areadetector.v17.impl.NDPluginBaseImpl">
				<property name="basePVName" value="BL11K-DI-PHDGN-10:ARR:" />
				<property name="initialArrayPort" value="D10.roi" />
			</bean>
		</property>
	</bean>

	<bean id="d10_ndfile" class="gda.device.detector.areadetector.v17.impl.NDFileImpl">
		<property name="basePVName" value="BL11K-DI-PHDGN-10:HDF5:" />
		<property name="pluginBase">
			<bean class="gda.device.detector.areadetector.v17.impl.NDPluginBaseImpl">
				<property name="basePVName" value="BL11K-DI-PHDGN-10:HDF5:" />
				<property name="initialArrayPort" value="D10.stat" />
			</bean>
		</property>
		<!-- These arguments are here to please Spring -->
		<property name="initialAutoSave" value="Not hooked up to anything!" />
		<property name="initialAutoIncrement" value="Not hooked up to anything!" />
		<property name="initialWriteMode" value="0" />
		<property name="initialNumCapture" value="1" />
		<property name="initialFileName" value="d10" />
		<property name="initialFileTemplate" value="%s%s.hdf5" />
	</bean>

	<bean id="d10_hdf5" class="gda.device.detector.areadetector.v17.impl.NDFileHDF5Impl">
		<property name="basePVName" value="BL11K-DI-PHDGN-10:HDF5:" />
		<property name="file" ref="d10_ndfile" />
	</bean>

	<bean id="d10_camera_control" class="uk.ac.gda.epics.camera.EpicsCameraControl">
		<constructor-arg ref="d10_adbase" />
		<constructor-arg ref="d10_roi" />
	</bean>
</beans>