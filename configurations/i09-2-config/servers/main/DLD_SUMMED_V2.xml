<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="dldSummedCollectionStrategy" class="gda.device.detector.addetector.collectionstrategy.ArrayPortDecorator">
		<property name="ndArray" ref="dld_summed_ndarray"/>
		<property name="arrayPortName" value="#{dld_proc_summed.getPortName_RBV()}"/>
		<property name="decoratee">
			<bean class="gda.device.detector.addetector.collectionstrategy.AutoSummingProcessDecorator">
				<property name="ndProcess" ref="dld_proc_summed"/>
				<property name="processDataTypeOut" value="8"/>
				<property name="restoreState" value="true"/>
				<property name="decoratee">
					<bean class="gda.device.detector.addetector.collectionstrategy.InternalTriggerModeDecorator">
						<property name="decoratee">
							<bean class="gda.device.detector.addetector.collectionstrategy.ProcStartStop">
								<property name="ndProcess" ref="dld_proc_summed"/>
								<property name="adBase" ref="dld_adbase" />
								<property name="procMonitorPV" value="#{dld_summed_stats.getBasePVName()}ArrayCounter_RBV" />
							</bean>
						</property>
					</bean>
				</property>
			</bean>
		</property>
	</bean>
	
	<!--  HDF5 plugin configuration -->
	<bean id="dldSummedHdf5Filewriter" class="gda.device.detector.addetector.filewriter.MultipleImagesPerHDF5FileWriter">
		<property name="ndFileHDF5" ref="dld_summed_hdf5"/>
		<property name="fileNameTemplate" value="dld"/>
		<property name="filePathTemplate" value="$datadir$" />
		<property name="fileTemplate" value="%s%s-%d.hdf" />
		<property name="fileNumberAtScanStart" value="0" />
		<property name="setFileNameAndNumber" value="true" />
		<property name="rowChunks" value="0" />
		<property name="colChunks" value="0" />
		<property name="framesChunks" value="1" />
		<property name="framesFlush" value="1" />
		<property name="lazyOpen" value="true" />
		<property name="blocking" value="false" />
		<property name="attrByDimSupported" value="false" />
		<property name="attrByDim" value="false" />
		<property name="pathErrorSuppressed" value="true" />
		<property name="SwmrModeEnabled" value="false"/>
 		<property name="ndArrayPortVal" value="#{dld_proc_summed.getPortName_RBV()}"/>
	</bean>
	
	<!-- TIFF plugin - SingleImagePerFileWriter(String detectorName), one tiff file per scan data point	 -->
	<bean id="dldSummedTiffFileWriter" class="gda.device.detector.addetector.filewriter.SingleImagePerFileWriter">
		<property name="ndFile" ref="dld_summed_tifffile"/>
		<property name="fileNameTemplate" value="dld"/>
		<property name="filePathTemplate" value="$datadir$/$scan$-dld-files" />
		<property name="fileTemplate" value="%s%s-%05d.tiff" />
		<property name="fileNumberAtScanStart" value="0" />
		<property name="setFileNameAndNumber" value="true" />
		<property name="blocking" value="false" />
		<property name="pathErrorSuppressed" value="true" />
		<property name="keyNameForMetadataPathTemplate" value="dld_path_template" />
 		<property name="ndArrayPortVal" value="#{dld_proc_summed.getPortName_RBV()}"/>
	</bean>

	<!-- NXDetector -->
 	<bean id="dld_summed" class="gda.device.detector.NXDetector">
		<property name="name" value="dld_summed" />
		<property name="collectionStrategy" ref="dldSummedCollectionStrategy" />
		<property name="additionalPluginList">
			<list>
				<ref bean="dld_summed_RoiStats1" />
<!-- 				<ref bean="dld_summed_RoiStats2" /> -->
<!-- 				<ref bean="dld_summed_RoiStats3" /> -->
				<ref bean="dldImageStats_summed" />
				<ref bean="dldSummedHdf5Filewriter" />
			</list>
		</property>
	</bean>
 	<bean id="dldtiff_summed" class="gda.device.detector.NXDetector">
		<property name="name" value="dldtiff_summed" />
		<property name="collectionStrategy" ref="dldSummedCollectionStrategy" />
		<property name="additionalPluginList">
			<list>
				<ref bean="dld_summed_RoiStats1" />
				<ref bean="dld_summed_RoiStats2" />
<!-- 				<ref bean="dld_summed_RoiStats3" /> -->
				<ref bean="dldImageStats_summed" />
				<ref bean="dldSummedTiffFileWriter" />
			</list>
		</property>
	</bean>

</beans>
