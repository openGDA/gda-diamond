<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans.xsd">

	
	<!-- Area Detector EPICS Plugins -->
	<bean id="dld_adbase" class="gda.spring.V17ADBaseFactoryBean">
		<property name="prefix" value="#{ localhostInetAddress.hostName.split('\.')[0] }-AD-SIM-01:CAM:" />
	</bean>
	
	<!-- The Object which get the ROIs from the client over RMI -->
	<bean id="dld_roi" class="gda.device.detector.nxdetector.roi.LiveStreamROIProvider" />
	<bean id="dld_roi_rmi" class="uk.ac.gda.remoting.server.GdaRmiServiceExporter">
		<property name="serviceName" value="gda/dldRoi" />
		<property name="service" ref="dld_roi" />
		<property name="serviceInterface" value="gda.device.detector.nxdetector.roi.RemoteRectangularROIsProvider" />
	</bean>
	
	<bean id="mcp_roi"
		class="gda.device.detector.nxdetector.roi.MutableRectangularIntegerROI">
		<property name="xstart" value="0" />
		<property name="ystart" value="0" />
		<property name="xsize" value="1212" />
		<property name="ysize" value="1212" />
	</bean>

<!-- 	This configuration requires beans from DLD.XML -->
	<bean id="dld_proc_summed" class="gda.device.detector.areadetector.v17.impl.NDProcessImpl">
		<property name="basePVName" value="#{ localhostInetAddress.hostName.split('\.')[0] }-AD-SIM-01:PROC:" /> 
		<property name="pluginBase">
			<bean class="gda.device.detector.areadetector.v17.impl.NDPluginBaseImpl">
				<property name="basePVName" value="#{ localhostInetAddress.hostName.split('\.')[0] }-AD-SIM-01:PROC:" />
				<property name="initialArrayPort" value="ADSIM.CAM"/>
			</bean>
		</property>
	</bean>

<!-- This one is used to get basePVname in collection strategy -->
	<bean id="dld_summed_stats" class="gda.device.detector.areadetector.v17.impl.NDStatsImpl">
		<property name="basePVName" value="#{ localhostInetAddress.hostName.split('\.')[0] }-AD-SIM-01:STAT4:" />
		<property name="pluginBase">
			<bean class="gda.device.detector.areadetector.v17.impl.NDPluginBaseImpl">
				<property name="basePVName" value="#{ localhostInetAddress.hostName.split('\.')[0] }-AD-SIM-01:STAT4:" />
				<property name="initialArrayPort" value="ADSIM.rois.roi4" />
			</bean>
		</property>
	</bean>
	
	<bean id="dld_summed_ndarray" class="gda.device.detector.areadetector.v17.impl.NDArrayImpl">
		<property name="basePVName" value="#{ localhostInetAddress.hostName.split('\.')[0] }-AD-SIM-01:ARR:" />
		<property name="pluginBase">
			<bean class="gda.device.detector.areadetector.v17.impl.NDPluginBaseImpl">
				<property name="basePVName" value="#{ localhostInetAddress.hostName.split('\.')[0] }-AD-SIM-01:ARR:" />
				<property name="initialArrayPort" value="ADSIM.proc" />
			</bean>
		</property>
	</bean>
	<bean id="dld_summed_tifffile" class="gda.device.detector.areadetector.v17.impl.NDFileImpl">
		<property name="basePVName" value="#{ localhostInetAddress.hostName.split('\.')[0] }-AD-SIM-01:TIFF:" />
		<property name="pluginBase">
			<bean class="gda.device.detector.areadetector.v17.impl.NDPluginBaseImpl">
				<property name="basePVName" value="#{ localhostInetAddress.hostName.split('\.')[0] }-AD-SIM-01:TIFF:" />
				<property name="initialArrayPort" value="ADSIM.proc" />
			</bean>
		</property>
		<property name="initialWriteMode" value="0" />
		<property name="initialNumCapture" value="1" />
		<property name="initialFileName" value="dld" />
		<property name="initialFileTemplate" value="%s%s-%d.tiff" />
	</bean>
	<bean id="dld_summed_ndfile" class="gda.device.detector.areadetector.v17.impl.NDFileImpl">
		<property name="basePVName" value="#{ localhostInetAddress.hostName.split('\.')[0] }-AD-SIM-01:HDF5:" />
		<property name="pluginBase">
			<bean class="gda.device.detector.areadetector.v17.impl.NDPluginBaseImpl">
				<property name="basePVName" value="#{ localhostInetAddress.hostName.split('\.')[0] }-AD-SIM-01:HDF5:" />
				<property name="initialArrayPort" value="ADSIM.proc" />
			</bean>
		</property>
		<property name="initialWriteMode" value="0" />
		<property name="initialNumCapture" value="1" />
		<property name="initialFileName" value="dld" />
		<property name="initialFileTemplate" value="%s%s-%d.hdf5" />
	</bean>
	<bean id="dld_summed_hdf5" class="gda.device.detector.areadetector.v17.impl.NDFileHDF5Impl">
		<property name="basePVName" value="#{ localhostInetAddress.hostName.split('\.')[0] }-AD-SIM-01:HDF5:" />
		<property name="file" ref="dld_summed_ndfile" />
		<property name="attrByDimPVsAvailable" value="false"/>
		<property name="swmrModePVsAvailable" value="false"/>
	</bean>

	<!-- ROI-STAT pairs -->
	<bean id="dldImageStats_summed" class="gda.device.detector.nxdetector.plugin.areadetector.ADRoiStatsPairFactory">
		<property name="pluginName" value="dldImageStats_summed" />
		<property name="baseRoiPVName" value="#{ localhostInetAddress.hostName.split('\.')[0] }-AD-SIM-01:ROI4:" />
		<property name="baseStatsPVName" value="#{ localhostInetAddress.hostName.split('\.')[0] }-AD-SIM-01:STAT4:" />
		<property name="roiInputNdArrayPort" value="ADSIM.proc" />
		<property name="enabledBasicStats" value="Total" />
		<property name="oneTimeSeriesCollectionPerLine" value="false" />
		<property name="roiProvider" ref="mcp_roi" />
		<property name="legacyTSpvs" value="false"/>
	</bean>
	<bean id="dld_summed_RoiStats1" class="gda.device.detector.nxdetector.plugin.areadetector.ADRoiStatsPairFactory">
		<property name="pluginName" value="dld_summed_RoiStats1" />
		<property name="baseRoiPVName" value="#{ localhostInetAddress.hostName.split('\.')[0] }-AD-SIM-01:ROI5:" />
		<property name="baseStatsPVName" value="#{ localhostInetAddress.hostName.split('\.')[0] }-AD-SIM-01:STAT5:" />
		<property name="roiInputNdArrayPort" value="ADSIM.proc" />
		<property name="enabledBasicStats" value="Total" />
		<property name="oneTimeSeriesCollectionPerLine" value="false" />
		<property name="roiProvider">
	        <bean class="gda.device.detector.nxdetector.roi.LiveStreamRoiIndexer">
	            <property name="liveStreamRoiProvider" ref="dld_roi" />
	            <property name="index" value="0" />
	        </bean>
		</property>
		<property name="legacyTSpvs" value="false"/>
	</bean>
	<bean id="dld_summed_RoiStats2" class="gda.device.detector.nxdetector.plugin.areadetector.ADRoiStatsPairFactory">
		<property name="pluginName" value="dld_summed_RoiStats2" />
		<property name="baseRoiPVName" value="#{ localhostInetAddress.hostName.split('\.')[0] }-AD-SIM-01:ROI6:" />
		<property name="baseStatsPVName" value="#{ localhostInetAddress.hostName.split('\.')[0] }-AD-SIM-01:STAT6:" />
		<property name="roiInputNdArrayPort" value="ADSIM.proc" />
		<property name="enabledBasicStats" value="Total" />
		<property name="oneTimeSeriesCollectionPerLine" value="false" />
		<property name="roiProvider">
	        <bean class="gda.device.detector.nxdetector.roi.LiveStreamRoiIndexer">
	            <property name="liveStreamRoiProvider" ref="dld_roi" />
	            <property name="index" value="1" /> 
	        </bean>
		</property>
		<property name="legacyTSpvs" value="false"/>
	</bean>

</beans>
