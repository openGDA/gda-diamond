<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<alias name="sim_adbase" alias="fleacam4_adbase" />
	<alias name="sim_stats" alias="fleacam4_stats" />
	<alias name="sim_ndarray" alias="fleacam4_ndarray" />
	<alias name="sim_ndfile_hdf5" alias="fleacam4_ndfile" />
	<alias name="sim_hdf5" alias="fleacam4_hdf5" />
	<alias name="sim_driver" alias="fleacam4_driver" />
	<alias name="sim_stats" alias="fleacam4_ndstats" />

    <bean id="fleacam4_ad" class="gda.device.detector.addetector.ADDetector">
        <property name="adBase" ref="fleacam4_adbase"/>
        <property name="collectionStrategy">
            <bean class="gda.device.detector.addetector.triggering.SingleExposureStandard">
                <constructor-arg ref="fleacam4_adbase" />
                <constructor-arg value="0.1" />
            </bean>
        </property>
<!--         <property name="ndFile"  ref="fleacam4_ndfile"/> -->
        <property name="ndArray" ref="fleacam4_ndarray"/>
        <property name="ndStats" ref="fleacam4_ndstats"/>

        <property name="readArray" value="true" />
        <property name="readFilepath" value="true" />
        <property name="readAcquisitionTime" value="true" />
        <property name="readAcquisitionPeriod" value="false" />
        <property name="computeStats" value="false" />
        <property name="computeCentroid" value="false" />
    </bean>
    
</beans>