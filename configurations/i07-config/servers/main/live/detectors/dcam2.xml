<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans.xsd">


	<bean id="dcam2_adbase" class="gda.device.detector.areadetector.v17.impl.ADBaseImpl">
		<property name="basePVName" value="BL07I-DI-DCAM-02:CAM:" />
	</bean>

	<bean id="dcam2_roi" class="gda.device.detector.areadetector.v17.impl.NDROIImpl">
		<property name="basePVName" value="BL07I-DI-DCAM-02:ROI:" />
		<property name="pluginBase">
			<bean class="gda.device.detector.areadetector.v17.impl.NDPluginBaseImpl">
				<property name="basePVName" value="BL07I-DI-DCAM-02:ROI:" />
				<property name="initialArrayPort" value="DCAM2.CAM" />
			</bean>
		</property>
	</bean>

	<bean id="dcam2_ndstats" class="gda.device.detector.areadetector.v17.impl.NDStatsImpl">
		<property name="basePVName" value="BL07I-DI-DCAM-02:STAT:" />
		<property name="pluginBase">
			<bean class="gda.device.detector.areadetector.v17.impl.NDPluginBaseImpl">
				<property name="basePVName" value="BL07I-DI-DCAM-02:STAT:" />
				<property name="initialArrayPort" value="DCAM2.CAM" />
			</bean>
		</property>
	</bean>

	<bean id="dcam2_ndfile" class="gda.device.detector.areadetector.v17.impl.NDFileImpl">
		<property name="basePVName" value="BL07I-DI-DCAM-02:HDF5:" />
		<property name="pluginBase">
			<bean class="gda.device.detector.areadetector.v17.impl.NDPluginBaseImpl">
				<property name="basePVName" value="BL07I-DI-DCAM-02:HDF5:" />
				<property name="initialArrayPort" value="DCAM2.stat" />
			</bean>
		</property>
		<property name="initialWriteMode" value="0" />
		<property name="initialNumCapture" value="1" />
		<property name="initialFileName" value="dcam2" />
		<property name="initialFileTemplate" value="%s%s.hdf5" />
	</bean>
	
	<bean id="dcam2_ndfile_tiff" class="gda.device.detector.areadetector.v17.impl.NDFileImpl">
		<property name="basePVName" value="BL07I-DI-DCAM-02:TIFF:" />
		<property name="pluginBase">
			<bean class="gda.device.detector.areadetector.v17.impl.NDPluginBaseImpl">
				<property name="basePVName" value="BL07I-DI-DCAM-02:TIFF:" />
				<property name="initialArrayPort" value="DCAM2.CAM" />
			</bean>
		</property>
		<property name="initialWriteMode" value="0" />
		<property name="initialNumCapture" value="1" />
		<property name="initialFileName" value="dcam2" />
		<property name="initialFileTemplate" value="%s%s.tiff" />
	</bean>

	<bean id="dcam2_hdf5" class="gda.device.detector.areadetector.v17.impl.NDFileHDF5Impl">
		<property name="basePVName" value="BL07I-DI-DCAM-02:HDF5:" />
		<property name="file" ref="dcam2_ndfile" />
		<property name="useSWMR" value="true" />
	</bean>

</beans>
