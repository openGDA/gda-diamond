<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">


	<bean id="eiger_controller_base" class="uk.ac.gda.devices.odin.OdinDetectorControllerEpics" >
		<property name="basePv" value="BL07I-EA-EIGER-01:"/>
	</bean>
	
	<bean id="eiger_controller" class="uk.ac.gda.devices.odin.OdinDetectorEiger" >
		<constructor-arg ref="eiger_controller_base" />
		<!--property name="basePv" value="BL07I-EA-EIGER-01:"/-->
	</bean>

	<bean id="eiger_pva"
		class="gda.device.detector.areadetector.v17.impl.NDPvaImpl">
		<property name="basePVName" value="BL07I-EA-EIGER-01:PVA:" />
		<property name="pluginBase">
			<bean
				class="gda.device.detector.areadetector.v17.impl.NDPluginBaseImpl">
				<property name="basePVName" value="BL07I-EA-EIGER-01:PVA:" />
				<property name="initialArrayPort" value="ODN.CAM" />
			</bean>
		</property>
	</bean>

	<bean id="eiger_pva_adbase"
		class="gda.device.detector.areadetector.v17.impl.ADBaseImpl">
		<property name="basePVName" value="BL07I-EA-EIGER-01:CAM:" />
	</bean>
	
	<import resource="../../_common/transient/eiger.xml" />


</beans>

