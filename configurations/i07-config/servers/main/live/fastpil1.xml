<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">


	<!-- AD hardware -->

<!--  Duplicates!
	<bean id="pilatus1_driver"
		class="gda.device.detector.areadetector.v17.impl.ADDriverPilatusImpl">
		<property name="basePVName" value="BL07I-EA-PILAT-01:CAM:" />
	</bean>

	<bean id="pilatus1_adbase" class="gda.device.detector.areadetector.v17.impl.ADBaseImpl">
		<property name="basePVName" value="BL07I-EA-PILAT-01:CAM:" />
	</bean>
-->

	<!-- Not an exact duplicate per se, but an NDFileImpl bean is created in pilatus1_824.xml with the same PV -->
	<bean id="fastpil1_camserver_ndfile" class="gda.device.detector.areadetector.v17.impl.NDFileImpl">
		<property name="basePVName" value="BL07I-EA-PILAT-01:CAM:" />
		<property name="resetToInitialValues" value="false" />
		<property name="filePathConverter">
			<bean class="uk.ac.gda.util.SimpleFilePathConverter">
				<property name="userSubString" value="/dls/i07/data" />
				<property name="internalSubString" value="/ramdisk" />
			</bean>
		</property>
	</bean>

	<!-- NXDetector collection strategies -->

	<bean id="fastpil1_nxcollectionstrategy"
		class="gda.device.detector.addetector.triggering.SingleExposurePilatus">
		<constructor-arg ref="pilatus1_adbase" />
		<constructor-arg value=".02" />
	</bean>

	<!-- NXDetector file writers -->

	<bean id="fastpil1_nxfilewriter_for_scans"
		class="gda.device.detector.nxdetector.plugin.areadetector.filewriter.SingleImagePerFileWriter">
		<constructor-arg value="fastpil1" />
		<property name="ndFile" ref="fastpil1_camserver_ndfile" />
		<property name="pathErrorSuppressed" value="true" />
	</bean>

	<!-- NXDetectors -->
	<bean id="fastpil1_plot_server_roi_provider" class="gda.device.detector.nxdetector.roi.PlotServerROISelectionProvider">
		<constructor-arg value="Pilatus 1" />
		<constructor-arg value="6" />
	</bean>

	<bean id="fastpil1_freerun_controller" class="gda.device.detector.nxdetector.plugin.areadetector.ADPilatusFreerunControllerPlugin">
		<constructor-arg ref="pilatus1_adbase" />
	</bean>

	<bean id="fastpil1" class="gda.device.detector.NXDetector">
		<property name="name" value="fastpil1" />
		<property name="collectionStrategy" ref="fastpil1_nxcollectionstrategy" />
		<property name="additionalPluginList">
			<list>
				<ref bean="fastpil1_nxfilewriter_for_scans" />
				<bean
					class="gda.device.detector.nxdetector.plugin.areadetector.ADRoiStatsPairFactory">
					<property name="pluginName" value="roistats1" />
					<property name="baseRoiPVName" value="BL07I-EA-PILAT-01:ROI1:" />
					<property name="baseStatsPVName" value="BL07I-EA-PILAT-01:STAT1:" />
					<property name="roiInputNdArrayPort" value="pilatus1.proc" />
					<property name="enabledBasicStats" value="MinValue,MaxValue,MaxX,MaxY,Total" />
					<property name="roiProvider">
						<bean
							class="gda.device.detector.nxdetector.roi.RectangularIntegerROIIndexer">
							<constructor-arg ref="fastpil1_plot_server_roi_provider" />
							<constructor-arg value="0" />
						</bean>
					</property>
				</bean>
				<bean
					class="gda.device.detector.nxdetector.plugin.areadetector.ADRoiStatsPairFactory">
					<property name="pluginName" value="roistats2" />
					<property name="baseRoiPVName" value="BL07I-EA-PILAT-01:ROI2:" />
					<property name="baseStatsPVName" value="BL07I-EA-PILAT-01:STAT2:" />
					<property name="roiInputNdArrayPort" value="pilatus1.proc" />
					<property name="enabledBasicStats" value="MaxValue,MaxX,MaxY,Total" />
					<property name="roiProvider">
						<bean
							class="gda.device.detector.nxdetector.roi.RectangularIntegerROIIndexer">
							<constructor-arg ref="fastpil1_plot_server_roi_provider" />
							<constructor-arg value="1" />
						</bean>
					</property>
				</bean>
				<bean
					class="gda.device.detector.nxdetector.plugin.areadetector.ADRoiStatsPairFactory">
					<property name="pluginName" value="roistats3" />
					<property name="baseRoiPVName" value="BL07I-EA-PILAT-01:ROI3:" />
					<property name="baseStatsPVName" value="BL07I-EA-PILAT-01:STAT3:" />
					<property name="roiInputNdArrayPort" value="pilatus1.proc" />
					<property name="enabledBasicStats" value="MaxValue,MaxX,MaxY,Total" />
					<property name="roiProvider">
						<bean
							class="gda.device.detector.nxdetector.roi.RectangularIntegerROIIndexer">
							<constructor-arg ref="fastpil1_plot_server_roi_provider" />
							<constructor-arg value="2" />
						</bean>
					</property>
				</bean>
				<bean
					class="gda.device.detector.nxdetector.plugin.areadetector.ADRoiStatsPairFactory">
					<property name="pluginName" value="roistats4" />
					<property name="baseRoiPVName" value="BL07I-EA-PILAT-01:ROI4:" />
					<property name="baseStatsPVName" value="BL07I-EA-PILAT-01:STAT4:" />
					<property name="roiInputNdArrayPort" value="pilatus1.proc" />
					<property name="enabledBasicStats" value="MaxValue,MaxX,MaxY,Total" />
					<property name="roiProvider">
						<bean
							class="gda.device.detector.nxdetector.roi.RectangularIntegerROIIndexer">
							<constructor-arg ref="fastpil1_plot_server_roi_provider" />
							<constructor-arg value="3" />
						</bean>
					</property>
				</bean>
				<bean
					class="gda.device.detector.nxdetector.plugin.areadetector.ADRoiStatsPairFactory">
					<property name="pluginName" value="roistats5" />
					<property name="baseRoiPVName" value="BL07I-EA-PILAT-01:ROI5:" />
					<property name="baseStatsPVName" value="BL07I-EA-PILAT-01:STAT5:" />
					<property name="roiInputNdArrayPort" value="pilatus1.proc" />
					<property name="enabledBasicStats" value="MaxValue,MaxX,MaxY,Total" />
					<property name="roiProvider">
						<bean
							class="gda.device.detector.nxdetector.roi.RectangularIntegerROIIndexer">
							<constructor-arg ref="fastpil1_plot_server_roi_provider" />
							<constructor-arg value="4" />
						</bean>
					</property>
				</bean>
				<bean
					class="gda.device.detector.nxdetector.plugin.areadetector.ADRoiStatsPairFactory">
					<property name="pluginName" value="roistats6" />
					<property name="baseRoiPVName" value="BL07I-EA-PILAT-01:ROI6:" />
					<property name="baseStatsPVName" value="BL07I-EA-PILAT-01:STAT6:" />
					<property name="roiInputNdArrayPort" value="pilatus1.proc" />
					<property name="enabledBasicStats" value="MaxValue,MaxX,MaxY,Total" />
					<property name="roiProvider">
						<bean
							class="gda.device.detector.nxdetector.roi.RectangularIntegerROIIndexer">
							<constructor-arg ref="fastpil1_plot_server_roi_provider" />
							<constructor-arg value="5" />
						</bean>
					</property>
				</bean>
				<ref bean="fastpil1_freerun_controller" />
			</list>
		</property>
	</bean>


</beans>
