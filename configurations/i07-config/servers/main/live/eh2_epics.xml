	</bean>
	<bean id="xrdpirg" class="gda.device.monitor.EpicsMonitor">
		<property name="pvName" value="BL07I-VA-PIRG-32:P" />
	</bean>
	<bean id="xrdionp" class="gda.device.monitor.EpicsMonitor">
		<property name="pvName" value="BL07I-VA-IONP-31:P" />
	</bean>

	<!-- EBC - Electron Beam Heater -->

	<bean id="ebcpid" class="gda.device.enumpositioner.EpicsSimpleMbbinary">
		<property name="recordName" value="BL07I-EA-EBC-01:PIDCONTROL" />
		<property name="readOnly" value="false" />
	</bean>

	<bean id="ebcpidcontrol" class="gda.device.enumpositioner.EpicsSimpleMbbinary">
		<property name="recordName" value="BL07I-EA-EBC-01:PID.FBON" />
		<property name="readOnly" value="false" />
	</bean>

	<bean id="ebcsetpoint" class="gda.device.scannable.EpicsScannable">
		<property name="pvName" value="BL07I-EA-EBC-01:PID.VAL" />
		<property name="useNameAsInputName" value="true" />
	</bean>

</beans>
