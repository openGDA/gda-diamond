	<bean id="llpirg" class="gda.device.monitor.EpicsMonitor">
		<property name="pvName" value="BL07I-VA-PIRG-31:P" />
	</bean>
	<bean id="bcpirg" class="gda.device.monitor.EpicsMonitor">
		<property name="pvName" value="BL07I-VA-PIRG-30:P" />
	</bean>
	<bean id="bcionp" class="gda.device.monitor.EpicsMonitor">
