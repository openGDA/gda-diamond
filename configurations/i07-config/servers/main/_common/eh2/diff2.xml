<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">


	<description>
		Configuration for DIFF2 (Diffractometer 2) in EH2
	</description>
	<bean id="diff2omega" class="gda.device.scannable.ScannableMotor">
		<property name="motor" ref="MotorOMEGA_DIFF2" />
		<property name="protectionLevel" value="0" />
		<property name="initialUserUnits" value="Deg" />
		<property name="hardwareUnitString" value="Deg" />
		<property name="outputFormat">
			<list>
				<value>%9.5f</value>
			</list>
		</property>
	</bean>
	<!-- Alpha in Vertical mode -->
	<bean id="diff2alpha" class="gda.device.scannable.ScannableMotor">
		<property name="motor" ref="MotorALPHA_DIFF2" />
		<property name="protectionLevel" value="0" />
		<property name="initialUserUnits" value="Deg" />
		<property name="hardwareUnitString" value="Deg" />
		<property name="outputFormat">
			<list>
				<value>%9.5f</value>
			</list>
		</property>
	</bean>
	<!-- Delta in Vertical mode / Gamma in Horizental mode -->
	<bean id="diff2delta" class="gda.device.scannable.ScannableMotor">
		<property name="motor" ref="MotorDELTA_DIFF2" />
		<property name="protectionLevel" value="0" />
		<property name="initialUserUnits" value="Deg" />
		<property name="hardwareUnitString" value="Deg" />
		<property name="outputFormat">
			<list>
				<value>%9.5f</value>
			</list>
		</property>
	</bean>

	<!-- Gamma in Vertical mode / Delta in Horizental mode -->
	<bean id="diff2gamma" class="gda.device.scannable.ScannableMotor">
		<property name="motor" ref="MotorGAMMA_DIFF2" />
		<property name="protectionLevel" value="0" />
		<property name="initialUserUnits" value="Deg" />
		<property name="hardwareUnitString" value="Deg" />
		<property name="outputFormat">
			<list>
				<value>%9.5f</value>
			</list>
		</property>
	</bean>

	<!-- Gonio Rotation (DRot) -->
	<bean id="diff2detselect"
		class="gda.device.scannable.ScannableMotor">
		<property name="motor" ref="MotorDROT_DIFF2" />
		<property name="protectionLevel" value="0" />
		<property name="initialUserUnits" value="Deg" />
		<property name="hardwareUnitString" value="Deg" />
		<property name="outputFormat">
			<list>
				<value>%9.5f</value>
			</list>
		</property>
	</bean>


	<!-- Pilatus Rotation -->
	<bean id="diff2prot" class="gda.device.scannable.ScannableMotor">
		<property name="motor" ref="MotorDETROT_DIFF2" />
		<property name="protectionLevel" value="0" />
		<property name="initialUserUnits" value="Deg" />
		<property name="hardwareUnitString" value="Deg" />
		<property name="outputFormat">
			<list>
				<value>%9.5f</value>
			</list>
		</property>
	</bean>


	<!-- Point detector -->
	<bean id="diff2dets4rot"
		class="gda.device.scannable.ScannableMotor">
		<property name="motor" ref="MotorNU2_DIFF2" />
		<property name="protectionLevel" value="0" />
		<property name="initialUserUnits" value="Deg" />
		<property name="hardwareUnitString" value="Deg" />
		<property name="outputFormat">
			<list>
				<value>%9.5f</value>
			</list>
		</property>
	</bean>
	<!-- Post sample slits rotation -->
	<bean id="diff2dets3rot"
		class="gda.device.scannable.ScannableMotor">
		<property name="motor" ref="MotorNU1_DIFF2" />
		<property name="protectionLevel" value="0" />
		<property name="initialUserUnits" value="Deg" />
		<property name="hardwareUnitString" value="Deg" />
		<property name="outputFormat">
			<list>
				<value>%9.5f</value>
			</list>
		</property>
	</bean>


