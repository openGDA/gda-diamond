<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <turboFilter class="ch.qos.logback.classic.turbo.MarkerFilter">
        <Name>Finest</Name>
        <Marker>FINEST</Marker>
        <OnMatch>DENY</OnMatch>
    </turboFilter>
    
    <!-- display message in Logger Server's console -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <layout class="ch.qos.logback.classic.PatternLayout">
            <Pattern>%date %-5level [%logger] - %message%n%rEx</Pattern>
        </layout>
    </appender>

    <!-- Socket for forwarding log message to LogPanel in GDA Client or other viewers -->
    <appender name="SOCKET" class="ch.qos.logback.classic.net.SocketAppender">
        <RemoteHost>i07-ws001.diamond.ac.uk</RemoteHost>
        <Port>6001</Port>
        <ReconnectionDelay>10000</ReconnectionDelay>
        <IncludeCallerData>true</IncludeCallerData>
    </appender>

    <appender name="LogPanelApplication" class="ch.qos.logback.classic.net.SocketAppender">
        <RemoteHost>i07-ws001.diamond.ac.uk</RemoteHost>
        <Port>6002</Port>
        <ReconnectionDelay>10000</ReconnectionDelay>
        <IncludeCallerData>true</IncludeCallerData>
    </appender>

    <!-- Socket for forwarding log message to Eclipse console view -->
    <appender name="EclipseConsole" class="ch.qos.logback.classic.net.SocketAppender">
        <RemoteHost>i07-ws001.diamond.ac.uk</RemoteHost>
        <Port>4321</Port>
        <ReconnectionDelay>10000</ReconnectionDelay>
        <IncludeCallerData>true</IncludeCallerData>
    </appender>

    <appender name="DebugFILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <File>${gda.logs.dir}/gda_server.log</File>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <FileNamePattern>${gda.logs.dir}/gda_server.%d{yyyy-MM-dd}.log.gz</FileNamePattern>
        </rollingPolicy>
        <layout class="ch.qos.logback.classic.PatternLayout">
            <pattern>%d %-5level [%logger] %rEx - %m%n</pattern>
        </layout>
    </appender>
    
