<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

	<!-- Created primarily for visit si9328 -->

	<!-- AD hardware -->

	<!-- <bean id="pilatus3_driver" class="gda.device.detector.areadetector.v17.impl.ADDriverPilatusImpl"> 
		<property name="deviceName" value="pilatus3_pilatus" /> </bean> -->

	<bean id="pilatus2_adbase" class="gda.device.detector.areadetector.v17.impl.ADBaseImpl">
		<property name="basePVName" value="BL07I-EA-PILAT-02:CAM:" />
	</bean>


	<bean id="pilatus2_camserver_ndfile" class="gda.device.detector.areadetector.v17.impl.NDFileImpl">
		<property name="basePVName" value="BL07I-EA-PILAT-02:CAM:" />
		<property name="resetToInitialValues" value="false" />
	</bean>


	<!-- NXDetector collection strategies -->

	<bean id="pil2multi_nxcollectionstrategy"
		class="gda.device.detector.addetector.triggering.SoftwareSynchronisedMultipleExposure">
		<constructor-arg ref="pilatus2_adbase" />
		<constructor-arg value=".003" />
	</bean>

	<!-- NXDetector file writers -->

	<bean id="pil2multi_nxfilewriter_for_scans"
		class="gda.device.detector.nxdetector.plugin.areadetector.filewriter.PilatusCamserverFileWriter">
		<constructor-arg value="pil2multi" />
		<property name="ndFile" ref="pilatus2_camserver_ndfile" />
		<property name="fileNumberAtScanStart" value="0" />
		<property name="fileTemplateForReadout" value="%s00000_%s%05d.tif" />
		<property name="returnExpectedFullFileName" value="true" />
		<property name="waitForFileArrival" value="true" />  <!-- Seems to have no effect!  -->
	</bean>

	<!-- NXDetectors -->

	<bean id="pil2multi" class="gda.device.detector.NXDetector">
		<property name="name" value="pil2multi" />
		<property name="collectionStrategy" ref="pil2multi_nxcollectionstrategy" />
		<property name="additionalPluginList">
			<list>
				<ref bean="pil2multi_nxfilewriter_for_scans" />
			</list>
		</property>

	</bean>


</beans>