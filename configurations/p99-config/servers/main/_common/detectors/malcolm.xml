<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<!-- Sample scan (Andor) -->
	<bean id="malcolmInfoSampleAndor" class="org.eclipse.scanning.api.event.scan.DeviceInformation">
		<property name="label" value="P99 Malcolm with Andor" />
		<property name="description" value="Malcolm sample scan with Andor detector" />
		<property name="icon" value=""/>
	</bean>

	<bean id="malcolmInfoNoDetector" class="org.eclipse.scanning.api.event.scan.DeviceInformation">
		<property name="label" value="P99 Malcolm only PandA" />
		<property name="description" value="Malcolm scan without a detector" />
		<property name="icon" value=""/>
	</bean>

	<bean id="malcolmInfoAndor2FocusZ" class="org.eclipse.scanning.api.event.scan.DeviceInformation">
		<property name="label" value="P99 Malcolm focus scan with Andor" />
		<property name="description" value="Malcolm scan" />
		<property name="icon" value=""/>
	</bean>
	
	<bean id="malcolmInfoJ13KinematicsNoDetector" class="org.eclipse.scanning.api.event.scan.DeviceInformation">
		<property name="label" value="P99 Malcolm with J13 Kinematics only PandA" />
		<property name="description" value="Malcolm scan: J13 Kinematics, No detectors (just PandA)" />
		<property name="icon" value=""/>
	</bean>

	<bean id="malcolmInfoJ13KinematicsAndor2" class="org.eclipse.scanning.api.event.scan.DeviceInformation">
		<property name="label" value="P99 Malcolm with J13 Kinematics with Andor" />
		<property name="description" value="Malcolm scan: J13 Kinematics, Andor 2" />
		<property name="icon" value=""/>
	</bean>

	<bean id="malcolmInfoSampleJ08Andor" class="org.eclipse.scanning.api.event.scan.DeviceInformation">
		<property name="label" value="J08 Malcolm with Andor" />
		<property name="description" value="Malcolm sample scan (J08 stages + Andor)" />
		<property name="icon" value=""/>
	</bean>

	<bean id="malcolmInfoJ08NoDetector" class="org.eclipse.scanning.api.event.scan.DeviceInformation">
		<property name="label" value="J08 Malcolm only PandA" />
		<property name="description" value="Malcolm scan without a detector" />
		<property name="icon" value=""/>
	</bean>
	
</beans>
