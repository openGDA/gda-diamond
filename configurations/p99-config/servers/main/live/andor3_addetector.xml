<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:gda="http://www.diamond.ac.uk/schema/gda/gda"
	xmlns:corba="http://www.diamond.ac.uk/schema/gda/corba"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
	http://www.diamond.ac.uk/schema/gda/gda http://www.diamond.ac.uk/schema/gda/gda/gda-gda-1.0.xsd
	http://www.diamond.ac.uk/schema/gda/corba http://www.diamond.ac.uk/schema/gda/corba/gda-corba-1.0.xsd">


	<bean id="andor3_addetector_hdf5_writer"
		class="gda.device.detector.addetector.filewriter.MultipleImagesPerHDF5FileWriter">
		<property name="ndFileHDF5" ref="andor3_addetector_hdf5" />
		<property name="fileTemplate" value="%s%s.hdf5" />
		<property name="filePathTemplate" value="$datadir$" />
		<property name="fileNameTemplate" value="" />
		<property name="fileNumberAtScanStart" value="-1" />
		<property name="setFileNameAndNumber" value="true" />
	</bean>

	<bean id="andor3_addetector_collection_strategy" class="gda.device.detector.addetector.collectionstrategy.ConfigureAcquireTimeDecorator">
        <property name="restoreAcquireTime" value="true" />
        <property name="decoratee">
            <bean class="gda.device.detector.addetector.collectionstrategy.SingleImageModeDecorator">
                <property name="restoreNumImagesAndImageMode" value="true"/>
                <property name="decoratee">
                    <bean class="gda.device.detector.addetector.collectionstrategy.InternalTriggerModeDecorator">
                        <property name="decoratee">
                            <bean class="gda.device.detector.addetector.collectionstrategy.SoftwareStartStop">
                                <property name="adBase" ref="andor3_addetector_adbase" />
                                <property name="restoreAcquireState" value="true"/>
                            </bean>
                        </property>
                        <property name="restoreTriggerMode" value="true" />
                    </bean>
                </property>
            </bean>
        </property>
    </bean>

	<bean id="andor3_addetector" class="gda.device.detector.addetector.ADDetector">
		<property name="adBase" ref="andor3_addetector_adbase" />
		<property name="ndFile" ref="andor3_addetector_ndfile" />
		<property name="ndArray" ref="andor3_addetector_ndarray" />
		<property name="ndStats" ref="andor3_addetector_stats" />
		<property name="fileWriter" ref="andor3_addetector_hdf5_writer" />
		<property name="collectionStrategy" ref="andor3_addetector_collection_strategy"/>
	</bean>

	<bean id="andor3_addetector_adbase"
			class="gda.device.detector.areadetector.v17.impl.ADBaseImpl">
		<property name="basePVName" value="BL99P-EA-DET-01:DET:" />
	</bean>

	<bean id="andor3_addetector_stats"
			class="gda.device.detector.areadetector.v17.impl.NDStatsImpl">
		<property name="basePVName" value="BL99P-EA-DET-01:STAT:" />
		<property name="pluginBase">
			<bean class="gda.device.detector.areadetector.v17.impl.NDPluginBaseImpl">
				<property name="basePVName" value="BL99P-EA-DET-01:STAT:" />
				<property name="initialArrayPort" value="DET1.cam" />
			</bean>
		</property>
	</bean>

	<bean id="andor3_addetector_ndarray"
			class="gda.device.detector.areadetector.v17.impl.NDArrayImpl">
		<property name="basePVName" value="BL99P-EA-DET-01:ARR:" />
		<property name="pluginBase">
			<bean class="gda.device.detector.areadetector.v17.impl.NDPluginBaseImpl">
				<property name="basePVName" value="BL99P-EA-DET-01:ARR:" />
				<property name="initialArrayPort" value="DET1.roi" />
			</bean>
		</property>
	</bean>

	<bean id="andor3_addetector_ndfile"
			class="gda.device.detector.areadetector.v17.impl.NDFileImpl">
		<property name="basePVName" value="BL99P-EA-DET-01:HDF5:" />
		<property name="pluginBase">
			<bean class="gda.device.detector.areadetector.v17.impl.NDPluginBaseImpl">
				<property name="basePVName" value="BL99P-EA-DET-01:HDF5:" />
				<property name="initialArrayPort" value="DET1.cam" />
			</bean>
		</property>
		<!-- These arguments are here to please Spring -->
		<property name="initialAutoSave" value="Not hooked up to anything!" />
		<property name="initialAutoIncrement" value="Not hooked up to anything!" />
		<property name="initialWriteMode" value="0" />
		<property name="initialNumCapture" value="1" />
		<property name="initialFileName" value="andor3_addetector" />
		<property name="initialFileTemplate" value="%s%s.hdf5" />
	</bean>

	<bean id="andor3_addetector_hdf5"
			class="gda.device.detector.areadetector.v17.impl.NDFileHDF5Impl">
		<property name="basePVName" value="BL99P-EA-DET-01:HDF5:" />
		<property name="file" ref="andor3_addetector_ndfile" />
	</bean>

	<bean id="andor3_addetector_gain" class="gda.device.scannable.PVScannable" >
		<property name="pvName" value="BL99P-EA-DET-01:DET:Gain" />
	</bean>
	
	<bean id="andor3_addetector_exposure" class="gda.device.scannable.PVScannable" >
		<property name="pvName" value="BL99P-EA-DET-01:DET:AcquireTime" />
	</bean>

	<!--  Scanning Gui configuration -->

	<bean id="andor3_addetectorModel" class="uk.ac.diamond.daq.detectors.addetector.api.AreaDetectorRunnableDeviceModel">
		<property name="name"                   value="andor3_addetector"/>
		<property name="exposureTime"           value="0.1"/>
	</bean>
	<bean id="andor3_addetectorInfo" class="org.eclipse.scanning.api.event.scan.DeviceInformation">
		<property name="id"          value="org.eclipse.scanning.api.event.scan.DeviceInformation.andor3_addetectorInfo"/>
		<property name="label"       value="andor3_addetector Area Detector Device Label"/>
		<property name="description" value="andor3_addetector Area Detector Device Description"/>
	<!-- 		<property name="icon"        value="org.eclipse.scanning.example/icons/alarm-clock-select.png"/>  bundle must be on client for that, if it isn't a default icon is used -->
	</bean>
	<bean id="andor3_addetectorDetector" class="uk.ac.diamond.daq.detectors.addetector.AreaDetectorRunnableDevice" init-method="register">
		<property name="name"              value="andor3_addetector"/>
		<property name="model"             ref="andor3_addetectorModel"/>
		<property name="deviceInformation" ref="andor3_addetectorInfo"/>
		<property name="activated"         value="false"/> <!-- This means it is activated as the default device to use in a scan -->
	</bean>

</beans>
