<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:gda="http://www.diamond.ac.uk/schema/gda/gda"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
	http://www.diamond.ac.uk/schema/gda/gda http://www.diamond.ac.uk/schema/gda/gda/gda-gda-1.0.xsd">


        <bean id="andor_adbase" class="gda.device.detector.areadetector.v17.impl.ADBaseImpl">
                <property name="basePVName" value="BL99P-EA-DET-03:CAM:" />
                <property name="BinX" value="4" />
                <property name="BinY" value="4" />
        </bean>

        <bean id="andor_stats" class="gda.device.detector.areadetector.v17.impl.NDStatsImpl">
                <property name="basePVName" value="BL99P-EA-DET-03:STAT:" />
                <property name="pluginBase">
                        <bean class="gda.device.detector.areadetector.v17.impl.NDPluginBaseImpl">
                                <property name="basePVName" value="BL99P-EA-DET-03:STAT:" />
                                <property name="initialArrayPort" value="DET1.CAM" />
                        </bean>
                </property>
        </bean>

        <bean id="andor_ndarray" class="gda.device.detector.areadetector.v17.impl.NDArrayImpl">
                <property name="basePVName" value="BL99P-EA-DET-03:ARR:" />
                <property name="pluginBase">
                        <bean class="gda.device.detector.areadetector.v17.impl.NDPluginBaseImpl">
                                <property name="basePVName" value="BL99P-EA-DET-03:ARR:" />
                                <property name="initialArrayPort" value="DET1.CAM" />
                        </bean>
                </property>
        </bean>

        <bean id="andor_ndfile" class="gda.device.detector.areadetector.v17.impl.NDFileImpl">
                <property name="basePVName" value="BL99P-EA-DET-03:HDF5:" />
                <property name="pluginBase">
                        <bean class="gda.device.detector.areadetector.v17.impl.NDPluginBaseImpl">
                                <property name="basePVName" value="BL99P-EA-DET-03:HDF5:" />
                                <property name="initialArrayPort" value="DET1.stat" />
                        </bean>
                </property>
                <!-- These arguments are here to please Spring -->
                <property name="initialAutoSave" value="Not hooked up to anything!" />
                <property name="initialAutoIncrement" value="Not hooked up to anything!" />
                <property name="initialWriteMode" value="0" />
                <property name="initialNumCapture" value="1" />
                <property name="initialFileName" value="andor" />
                <property name="initialFileTemplate" value="%s%s.hdf5" />
        </bean>

        <bean id="andor_hdf5" class="gda.device.detector.areadetector.v17.impl.NDFileHDF5Impl">
                <property name="basePVName" value="BL99P-EA-DET-03:HDF5:" />
                <property name="file" ref="andor_ndfile" />
        </bean>

</beans>