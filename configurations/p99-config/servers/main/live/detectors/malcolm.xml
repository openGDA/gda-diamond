	<bean id="malcolmDeviceNoDetector" class="org.eclipse.scanning.malcolm.core.MalcolmDevice" init-method="register">
		<property name="name" value="BL99P-ML-SCAN-02" />
		<property name="model" ref="malcolmModelNoDetector" />
