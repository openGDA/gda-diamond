<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<description>
		To use the Simulated Area detector in dummy mode:
			1) Launch the Utilities > GDA SWMR AreaDetector Simulation
				on the local machine and start the IOC in localhost.
	</description>

	<bean id="andor1" class="uk.ac.gda.client.live.stream.view.CameraConfiguration">
		<property name="displayName" value="Andor 1" />
		<property name="url" value="p99-detector01.diamond.ac.uk:8080/DET1.mjpg.mjpg" />
		<!-- If you want the EPICS array stream option add this. Commented out by default as WORKSTATION might not be set -->
		<property name="arrayPv" value="BL99P-EA-DET-01:ARR" />
		<!-- <property name="roiProvider" ref="andor3_addetector_roi" /> -->
	</bean>
		 
</beans>
