<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
						http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="mg_kalpha_energy" class="gda.device.monitor.DummyMonitor">
		<constructor-arg name="name" value="mg_kalpha_energy"/>
		<constructor-arg name="constantValue" value="1253.6"/>
		<property name="unit" value="eV"/>
		<property name="throwExceptionOnAttemptedMove" value="true"/>
	</bean>

</beans>