	<bean id="Stanford01" class="gda.device.currentamplifier.EpicsStanfordCurrentAmp">
		<property name="deviceName" value="EAAMP1" />
	</bean>
	<bean id="Stanford02" class="gda.device.currentamplifier.EpicsStanfordCurrentAmp">
		<property name="deviceName" value="EAAMP2" />
	</bean>
	<bean id="Stanford03" class="gda.device.currentamplifier.EpicsStanfordCurrentAmp">
		<property name="deviceName" value="EAAMP3" />
	</bean>
	<bean id="Stanford04" class="gda.device.currentamplifier.EpicsStanfordCurrentAmp">
		<property name="deviceName" value="EAAMP4" />
	</bean>

	<bean id="xspress2system" class="gda.device.detector.xspress.Xspress2System">
		<property name="daServerName" value="DAServer" />
		<property name="tfgName" value="tfg" />
		<property name="xspressSystemName" value="xsp1" />

		<property name="mcaOpenCommand" value="xspress2 open-mca 'xsp1'" />
		<property name="scalerOpenCommand" value="xspress2 open-scalers 'xsp1'" />
		<property name="startupScript" value="xspress2 format-run 'xsp1' res-none" />

		<property name="configFileName"
			value="${gda.config}/templates/Xspress_Parameters.xml" />
		
		<property name="dtcConfigFileName"
			value="${gda.config}/templates/Xspress_DeadTime_Parameters.xml" />
			
		<property name="fullMCABits" value="12" />
		<property name="onlyDisplayFF" value="true" />
		<property name="outputFormat">
			<list>
				<value>%9.2f</value>
			</list>
		</property>
	</bean>


	<!-- Time Frame Generator -->
	<bean id="tfg" class="gda.device.timer.Etfg">
		<property name="daServerName" value="DAServer" />
	</bean>

	<!-- Scaler channels -->
	<bean id="CalMemory" class="gda.device.memory.Scaler">
		<property name="daServerName" value="DAServer" />
		<property name="width" value="5" />
		<property name="height" value="1" />
		<property name="openCommand" value="tfg open-cc" />
	</bean>


	<bean id="ionchambers" class="gda.device.detector.countertimer.TfgScalerWithLogValues">
		<property name="extraNames">
			<list>
				<value>I0</value>
				<value>It</value>
				<value>Iref</value>
				<value>lnI0It</value>
				<value>lnItIref</value>
			</list>
		</property>
		<property name="scaler" ref="CalMemory" />
		<property name="timer" ref="tfg" />
		<property name="timeChannelRequired" value="false" />
		<property name="outputLogValues" value="true" />
		<property name="TFGv2" value="true" />
		<property name="numChannelsToRead" value="4" />
		<property name="outputFormat">
			<list>
				<value>%6.4g</value>
				<value>%9d</value>
				<value>%9d</value>
				<value>%9d</value>
				<value>%.4g</value>
				<value>%.4g</value>
			</list>
		</property>
	</bean>

	<!-- merges data from xspress and ion chambers -->
	<bean id="FFI0" class="gda.device.detector.TfgFFoverI0">
		<property name="xspress" ref="xspress2system" />
		<!--property name="scaler" ref="CalMemory" / -->
		<property name="counterTimer" ref="ionchambers" />
	</bean>

	<bean id="xmapMca" class="gda.device.detector.xmap.NexusXmap">
		<property name="xmapControllerName" value="xmapcontroller" />

		<!-- Value determined by procedure in DTC_for_vortex.doc and is a list, 
			one value for each element -->
		<property name="eventProcessingTimes">
			<list>
				<value>1.1029752060937018e-007</value>
			</list>
		</property>

		<property name="slave" value="false" />
		<property name="configFileName"
			value="${gda.config}/templates/Vortex_Parameters.xml" />
		<property name="tfg" ref="tfg" />
	</bean>

	<bean id="If" class="gda.device.detector.XesIf">
		<property name="xmap" ref="xmapMca" />
		<property name="gdhist" ref="CalMemory" />
		<property name="scaler" ref="ionchambers" />
		<property name="ifChannelNumber" value="4" />
	</bean>

	<bean id="FFI0_vortex" class="gda.device.detector.TfgXMapFFoverI0">
		<property name="xmap" ref="xmapMca" />
		<!--property name="scaler" ref="CalMemory" / -->
		<property name="counterTimer" ref="ionchambers" />
	</bean>

	<bean id="i0_stanford_sensitivity" class="gda.device.monitor.EpicsMonitor">
		<property name="pvName" value="BL20I-EA-IAMP-01:SENS:SEL1" />
		<property name="local" value="true" />
	</bean>
	<bean id="i0_stanford_sensitivity_units" class="gda.device.monitor.EpicsMonitor">
		<property name="pvName" value="BL20I-EA-IAMP-01:SENS:SEL2" />
		<property name="local" value="true" />
	</bean>
	<bean id="it_stanford_sensitivity" class="gda.device.monitor.EpicsMonitor">
		<property name="pvName" value="BL20I-EA-IAMP-02:SENS:SEL1" />
		<property name="local" value="true" />
	</bean>
	<bean id="it_stanford_sensitivity_units" class="gda.device.monitor.EpicsMonitor">
		<property name="pvName" value="BL20I-EA-IAMP-02:SENS:SEL2" />
		<property name="local" value="true" />
	</bean>
	<bean id="iref_stanford_sensitivity" class="gda.device.monitor.EpicsMonitor">
		<property name="pvName" value="BL20I-EA-IAMP-03:SENS:SEL1" />
		<property name="local" value="true" />
	</bean>
	<bean id="iref_stanford_sensitivity_units" class="gda.device.monitor.EpicsMonitor">
		<property name="pvName" value="BL20I-EA-IAMP-03:SENS:SEL2" />
		<property name="local" value="true" />
	</bean>


</beans>
