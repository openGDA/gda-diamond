		<property name="NUMBER_OF_ELEMENTS" value="1" />
	</bean>
	<bean id="xmapcontroller" class="gda.device.detector.xmap.EpicsXmapControllerI20">
		<property name="edxdControllerName" value="edxdcontroller" />
