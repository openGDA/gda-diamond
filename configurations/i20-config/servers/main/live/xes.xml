<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:util="http://www.springframework.org/schema/util"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
           http://www.springframework.org/schema/util
           http://www.springframework.org/schema/util/spring-util-2.0.xsd">


<bean id="xtal_minus1_x_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL20I-EA-ANAL-01:XTAL:M1:X" />
	</bean>
	<bean id="xtal_minus1_y_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL20I-EA-ANAL-01:XTAL:M1:Y" />
	</bean>
	<bean id="xtal_minus1_rot_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL20I-EA-ANAL-01:XTAL:M1:TILT" />
	</bean>
	<bean id="xtal_minus1_pitch_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL20I-EA-ANAL-01:XTAL:M1:PITCH" />
	</bean>

	<bean id="xtal_central_y_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL20I-EA-ANAL-01:C:Y" />
	</bean>
	<bean id="xtal_central_rot_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL20I-EA-ANAL-01:C:TILT" />
	</bean>
	<bean id="xtal_central_pitch_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL20I-EA-ANAL-01:C:PITCH" />
	</bean>

	<bean id="xtal_plus1_x_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL20I-EA-ANAL-01:XTAL:P1:X" />
	</bean>
	<bean id="xtal_plus1_y_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL20I-EA-ANAL-01:XTAL:P1:Y" />
	</bean>
	<bean id="xtal_plus1_rot_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL20I-EA-ANAL-01:XTAL:P1:TILT" />
	</bean>
	<bean id="xtal_plus1_pitch_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL20I-EA-ANAL-01:XTAL:P1:PITCH" />
	</bean>

	<bean id="det_x_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL20I-EA-DET-03:X" />
	</bean>
	<bean id="det_y_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL20I-EA-DET-03:Y" />
	</bean>
	<bean id="det_rot_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL20I-EA-DET-03:PITCH" />
	</bean>

	<bean id="xtal_x_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL20I-EA-ANAL-01:X" />
	</bean>

	<bean id="spec_rot_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL20I-EA-ANAL-01:ROT" />
	</bean>

	<bean id="xtal_minus1_x" class="gda.device.scannable.ScannableMotor">
		<property name="motor" ref="xtal_minus1_x_motor" />
		<property name="hardwareUnitString" value="mm" />
		<property name="initialUserUnits" value="mm" />
	</bean>
	<bean id="xtal_minus1_y" class="gda.device.scannable.ScannableMotor">
		<property name="motor" ref="xtal_minus1_y_motor" />
		<property name="hardwareUnitString" value="mm" />
		<property name="initialUserUnits" value="mm" />
	</bean>
	<bean id="xtal_minus1_rot" class="gda.device.scannable.ScannableMotor">
		<property name="motor" ref="xtal_minus1_rot_motor" />
		<property name="hardwareUnitString" value="deg" />
		<property name="initialUserUnits" value="deg" />
	</bean>
	<bean id="xtal_minus1_pitch" class="gda.device.scannable.ScannableMotor">
		<property name="motor" ref="xtal_minus1_pitch_motor" />
		<property name="hardwareUnitString" value="deg" />
		<property name="initialUserUnits" value="deg" />
	</bean>

	<bean id="xtal_central_y" class="gda.device.scannable.ScannableMotor">
		<property name="motor" ref="xtal_central_y_motor" />
		<property name="hardwareUnitString" value="mm" />
		<property name="initialUserUnits" value="mm" />
	</bean>
	<bean id="xtal_central_rot" class="gda.device.scannable.ScannableMotor">
		<property name="motor" ref="xtal_central_rot_motor" />
		<property name="hardwareUnitString" value="deg" />
		<property name="initialUserUnits" value="deg" />
	</bean>
	<bean id="xtal_central_pitch" class="gda.device.scannable.ScannableMotor">
		<property name="motor" ref="xtal_central_pitch_motor" />
		<property name="hardwareUnitString" value="deg" />
		<property name="initialUserUnits" value="deg" />
	</bean>

	<bean id="xtal_plus1_x" class="gda.device.scannable.ScannableMotor">
		<property name="motor" ref="xtal_plus1_x_motor" />
		<property name="hardwareUnitString" value="mm" />
		<property name="initialUserUnits" value="mm" />
	</bean>
	<bean id="xtal_plus1_y" class="gda.device.scannable.ScannableMotor">
		<property name="motor" ref="xtal_plus1_y_motor" />
		<property name="hardwareUnitString" value="mm" />
		<property name="initialUserUnits" value="mm" />
	</bean>
	<bean id="xtal_plus1_rot" class="gda.device.scannable.ScannableMotor">
		<property name="motor" ref="xtal_plus1_rot_motor" />
		<property name="hardwareUnitString" value="deg" />
		<property name="initialUserUnits" value="deg" />
	</bean>
	<bean id="xtal_plus1_pitch" class="gda.device.scannable.ScannableMotor">
		<property name="motor" ref="xtal_plus1_pitch_motor" />
		<property name="hardwareUnitString" value="deg" />
		<property name="initialUserUnits" value="deg" />
	</bean>

	<bean id="det_x" class="gda.device.scannable.ScannableMotor">
		<property name="motor" ref="det_x_motor" />
		<property name="hardwareUnitString" value="mm" />
		<property name="initialUserUnits" value="mm" />
	</bean>
	<bean id="det_y" class="gda.device.scannable.ScannableMotor">
		<property name="motor" ref="det_y_motor" />
		<property name="hardwareUnitString" value="mm" />
		<property name="initialUserUnits" value="mm" />
	</bean>
	<bean id="det_rot" class="gda.device.scannable.ScannableMotor">
		<property name="motor" ref="det_rot_motor" />
		<property name="hardwareUnitString" value="deg" />
		<property name="initialUserUnits" value="deg" />
	</bean>

	<bean id="xtal_x" class="gda.device.scannable.ScannableMotor">
		<property name="motor" ref="xtal_x_motor" />
		<property name="hardwareUnitString" value="mm" />
		<property name="initialUserUnits" value="mm" />
	</bean>

	<bean id="spec_rot" class="gda.device.scannable.ScannableMotor">
		<property name="motor" ref="spec_rot_motor" />
		<property name="hardwareUnitString" value="deg" />
		<property name="initialUserUnits" value="deg" />
	</bean>
	
	<bean id="radius" class="gda.device.scannable.DummyPersistentScannable" />
	<bean id="cut1" class="gda.device.scannable.DummyPersistentScannable">
		<property name="outputFormat">
			<util:list>
				<value>%.0f</value>
			</util:list>
		</property>
	</bean>
	<bean id="cut2" class="gda.device.scannable.DummyPersistentScannable" >
		<property name="outputFormat">
			<util:list>
				<value>%.0f</value>
			</util:list>
		</property>
	</bean>
	<bean id="cut3" class="gda.device.scannable.DummyPersistentScannable" >
		<property name="outputFormat">
			<util:list>
				<value>%.0f</value>
			</util:list>
		</property>
	</bean>
	<bean id="material" class="gda.device.scannable.DummyPersistentEnumScannable" >
		<property name="acceptableStrings">
			<list>
				<value>Si</value>
				<value>Ge</value>
			</list>
		</property>
	</bean>
	
	<bean id="spectrometer" class="gda.device.scannable.scannablegroup.ScannableGroup">
		<property name="groupMembers">
			<list>
				<ref bean="xtal_minus1_x" />
				<ref bean="xtal_minus1_y" />
				<ref bean="xtal_minus1_rot" />
				<ref bean="xtal_minus1_pitch" />
				<ref bean="xtal_central_y" />
				<ref bean="xtal_central_rot" />
				<ref bean="xtal_central_pitch" />
				<ref bean="xtal_plus1_x" />
				<ref bean="xtal_plus1_y" />
				<ref bean="xtal_plus1_rot" />
				<ref bean="xtal_plus1_pitch" />
				<ref bean="det_x" />
				<ref bean="det_y" />
				<ref bean="det_rot" />
				<ref bean="xtal_x" />
				<ref bean="spec_rot" />
			</list>
		</property>
	</bean>

	<bean id="XESBragg" class="gda.device.scannable.XesSpectrometerScannable">
		<property name="xtal_x" ref="xtal_x" />
		<property name="det_rot" ref="det_rot" />
		<property name="det_x" ref="det_x" />
		<property name="det_y" ref="det_y" />
		<property name="radiusScannable" ref="radius" />

		<property name="xtal_minus1_x" ref="xtal_minus1_x" />
		<property name="xtal_minus1_y" ref="xtal_minus1_y" />
		<property name="xtal_minus1_pitch" ref="xtal_minus1_pitch" />
		<property name="xtal_minus1_rot" ref="xtal_minus1_rot" />

		<property name="xtal_central_y" ref="xtal_central_y" />
		<property name="xtal_central_pitch" ref="xtal_central_pitch" />
		<property name="xtal_central_rot" ref="xtal_central_rot" />

		<property name="xtal_plus1_x" ref="xtal_plus1_x" />
		<property name="xtal_plus1_y" ref="xtal_plus1_y" />
		<property name="xtal_plus1_pitch" ref="xtal_plus1_pitch" />
		<property name="xtal_plus1_rot" ref="xtal_plus1_rot" />
	</bean>
	
	<bean id="XESEnergy" class="gda.device.scannable.XESEnergyScannable">
		<property name="xes" ref="XESBragg" />
		<property name="cut1" ref="cut1" />
		<property name="cut2" ref="cut2" />
		<property name="cut3" ref="cut3" />
		<property name="material" ref="material" />
	</bean>

</beans>