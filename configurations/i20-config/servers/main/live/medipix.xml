<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

	<!-- AD hardware -->

	<bean id="medipix_adbase" class="gda.device.detector.areadetector.v17.impl.ADBaseImpl">
		<property name="basePVName" value="BL20I-EA-DET-05:CAM:" />
	</bean>

	<bean id="medipix_ndfiletif" class="gda.device.detector.areadetector.v17.impl.NDFileImpl">
		<property name="basePVName" value="BL20I-EA-DET-05:TIFF:" />
		<property name="pluginBase">
			<bean class="gda.device.detector.areadetector.v17.impl.NDPluginBaseImpl">
				<property name="basePVName" value="BL20I-EA-DET-05:TIFF:" />
			</bean>
		</property>
		<property name="resetToInitialValues" value="false" />
	</bean>


	<!-- NXDetector collection strategies -->

	<bean id="medipix_nxcollectionstrategy"
		class="gda.device.detector.addetector.triggering.SingleExposureStandard">
		<constructor-arg ref="medipix_adbase" />
		<constructor-arg value="0.001" />
		<constructor-arg value="2" />
	</bean>


	<!-- NXDetector file writers -->

	<bean id="medipix_nxfilewriter_for_scans"
		class="gda.device.detector.nxdetector.plugin.areadetector.filewriter.SingleImagePerFileWriter">
		<constructor-arg value="medipix" />
		<property name="ndFile" ref="medipix_ndfiletif" />
		<property name="keyNameForMetadataPathTemplate" value="pilatus100k_path_template" />
	</bean>

	<bean id="medipix_nxfilewriter_for_snaps"
		class="gda.device.detector.nxdetector.plugin.areadetector.filewriter.SingleImagePerFileWriterWithNumTracker">
		<constructor-arg value="medipix" />
		<property name="ndFile" ref="medipix_ndfiletif" />
		<property name="numTrackerExtension" value="medipix_snaps_numracker" />
		<property name="keyNameForMetadataPathTemplate" value="pilatus100k_path_template" />
	</bean>


	<!-- NXDetectors -->



	<bean id="_medipix_for_snaps" class="gda.device.detector.NXDetector">
		<property name="name" value="medipix" />
		<property name="collectionStrategy" ref="medipix_nxcollectionstrategy" />
		<property name="additionalPluginList">
			<list>
				<ref bean="medipix_nxfilewriter_for_snaps" />
			</list>
		</property>
	</bean>

	<bean id="merlin" class="gda.device.detector.MerlinDetector">
		<property name="name" value="merlin" />
		<property name="totalCountsPV" value="BL20I-EA-DET-05:STAT1:Total_RBV" />
		<property name="merlinController" ref="_medipix" />
	</bean>

	<bean id="medipix_plotserver_roi_provider"
		class="gda.device.detector.nxdetector.roi.PlotServerROISelectionProvider">
		<constructor-arg value="medipix" />
		<constructor-arg value="6" />
	</bean>
	
	<bean id="medipix_roistat_pair1"
		class="gda.device.detector.nxdetector.plugin.areadetector.ADRoiStatsPairFactory">
		<property name="pluginName" value="roistats1" />
		<property name="baseRoiPVName" value="BL20I-EA-DET-05:ROI1:" />
		<property name="baseStatsPVName" value="BL20I-EA-DET-05:STAT1:" />
		<property name="roiInputNdArrayPort" value="mpx1.det" />
		<property name="enabledBasicStats" value="MaxValue,Total" />
		<property name="roiProvider">
			<bean
				class="gda.device.detector.nxdetector.roi.RectangularIntegerROIIndexer">
				<constructor-arg ref="medipix_plotserver_roi_provider" />
				<constructor-arg value="0" />
			</bean>
		</property>
	</bean>
	<bean id="medipix_roistat_pair2"
		class="gda.device.detector.nxdetector.plugin.areadetector.ADRoiStatsPairFactory">
		<property name="pluginName" value="roistats2" />
		<property name="baseRoiPVName" value="BL20I-EA-DET-05:ROI2:" />
		<property name="baseStatsPVName" value="BL20I-EA-DET-05:STAT2:" />
		<property name="roiInputNdArrayPort" value="mpx1.det" />
		<property name="enabledBasicStats" value="MaxValue,Total" />
		<property name="roiProvider">
			<bean
				class="gda.device.detector.nxdetector.roi.RectangularIntegerROIIndexer">
				<constructor-arg ref="medipix_plotserver_roi_provider" />
				<constructor-arg value="0" />
			</bean>
		</property>
	</bean>
	<bean id="medipix_roistat_pair3"
		class="gda.device.detector.nxdetector.plugin.areadetector.ADRoiStatsPairFactory">
		<property name="pluginName" value="roistats3" />
		<property name="baseRoiPVName" value="BL20I-EA-DET-05:ROI3:" />
		<property name="baseStatsPVName" value="BL20I-EA-DET-05:STAT3:" />
		<property name="roiInputNdArrayPort" value="mpx1.det" />
		<property name="enabledBasicStats" value="MaxValue,Total" />
		<property name="roiProvider">
			<bean
				class="gda.device.detector.nxdetector.roi.RectangularIntegerROIIndexer">
				<constructor-arg ref="medipix_plotserver_roi_provider" />
				<constructor-arg value="0" />
			</bean>
		</property>
	</bean>
	<bean id="medipix_roistat_pair4"
		class="gda.device.detector.nxdetector.plugin.areadetector.ADRoiStatsPairFactory">
		<property name="pluginName" value="roistats4" />
		<property name="baseRoiPVName" value="BL20I-EA-DET-05:ROI4:" />
		<property name="baseStatsPVName" value="BL20I-EA-DET-05:STAT4:" />
		<property name="roiInputNdArrayPort" value="mpx1.det" />
		<property name="enabledBasicStats" value="MaxValue,Total" />
		<property name="roiProvider">
			<bean
				class="gda.device.detector.nxdetector.roi.RectangularIntegerROIIndexer">
				<constructor-arg ref="medipix_plotserver_roi_provider" />
				<constructor-arg value="0" />
			</bean>
		</property>
	</bean>
	<bean id="medipix_roistat_pair5"
		class="gda.device.detector.nxdetector.plugin.areadetector.ADRoiStatsPairFactory">
		<property name="pluginName" value="roistats5" />
		<property name="baseRoiPVName" value="BL20I-EA-DET-05:ROI5:" />
		<property name="baseStatsPVName" value="BL20I-EA-DET-05:STAT5:" />
		<property name="roiInputNdArrayPort" value="mpx1.det" />
		<property name="enabledBasicStats" value="MaxValue,Total" />
		<property name="roiProvider">
			<bean
				class="gda.device.detector.nxdetector.roi.RectangularIntegerROIIndexer">
				<constructor-arg ref="medipix_plotserver_roi_provider" />
				<constructor-arg value="0" />
			</bean>
		</property>
	</bean>
	<bean id="medipix_roistat_pair6"
		class="gda.device.detector.nxdetector.plugin.areadetector.ADRoiStatsPairFactory">
		<property name="pluginName" value="roistats6" />
		<property name="baseRoiPVName" value="BL20I-EA-DET-05:ROI6:" />
		<property name="baseStatsPVName" value="BL20I-EA-DET-05:STAT6:" />
		<property name="roiInputNdArrayPort" value="mpx1.det" />
		<property name="enabledBasicStats" value="MaxValue,Total" />
		<property name="roiProvider">
			<bean
				class="gda.device.detector.nxdetector.roi.RectangularIntegerROIIndexer">
				<constructor-arg ref="medipix_plotserver_roi_provider" />
				<constructor-arg value="0" />
			</bean>
		</property>
	</bean>
	<bean id="_medipix" class="gda.device.detector.NXDetector">
		<property name="name" value="medipix" />
		<property name="collectionStrategy" ref="medipix_nxcollectionstrategy" />
		<!-- <property name="additionalPluginList"> <list> <ref bean="medipix_nxfilewriter_for_scans" 
			/> </list> </property> -->
		<property name="additionalPluginList">
			<list>
				<ref bean="medipix_roistat_pair1" />
				<ref bean="medipix_roistat_pair2" />
				<ref bean="medipix_roistat_pair3" />
				<ref bean="medipix_roistat_pair4" />
				<ref bean="medipix_roistat_pair5" />
				<ref bean="medipix_roistat_pair6" />
			</list>
		</property>
	</bean>
</beans>
