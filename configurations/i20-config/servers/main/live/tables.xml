<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">


	<bean id="table1_x_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL20I-MO-TABLE-01:X" />
		<property name="local" value="true" />
	</bean>
	<bean id="table1_y_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL20I-MO-TABLE-01:Y" />
		<property name="local" value="true" />
	</bean>
	
	<bean id="table2_x_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL20I-MO-TABLE-02:X" />
		<property name="local" value="false" />
	</bean>
	<bean id="table2_y_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL20I-MO-TABLE-02:Y" />
		<property name="local" value="false" />
	</bean>

	<bean id="sample_x_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL20I-MO-TABLE-03:X" />
		<property name="local" value="true" />
	</bean>
	<bean id="sample_y_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL20I-MO-TABLE-03:Y" />
		<property name="local" value="true" />
	</bean>
	<bean id="sample_z_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL20I-MO-TABLE-03:Z" />
		<property name="local" value="true" />
	</bean>
	<bean id="sample_pitch_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL20I-MO-TABLE-03:PITCH" />
		<property name="local" value="true" />
	</bean>
	<bean id="sample_roll_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL20I-MO-TABLE-03:ROLL" />
		<property name="local" value="true" />
	</bean>
	<bean id="sample_rot_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL20I-MO-TABLE-03:ROT" />
		<property name="local" value="true" />
	</bean>
	<bean id="sample_fine_rot_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL20I-MO-TABLE-03:ROTF" />
		<property name="local" value="true" />
	</bean>



	<bean id="table1_x" class="gda.device.scannable.ScannableMotor">
		<property name="protectionLevel" value="3" />
		<property name="motor" ref="table1_x_motor" />
		<property name="local" value="false" />
	</bean>
	<bean id="table1_y" class="gda.device.scannable.ScannableMotor">
		<property name="protectionLevel" value="3" />
		<property name="motor" ref="table1_y_motor" />
		<property name="local" value="false" />
	</bean>

	<bean id="table2_x" class="gda.device.scannable.ScannableMotor">
		<property name="protectionLevel" value="3" />
		<property name="motor" ref="table2_x_motor" />
		<property name="local" value="false" />
	</bean>
	<bean id="table2_y" class="gda.device.scannable.ScannableMotor">
		<property name="protectionLevel" value="3" />
		<property name="motor" ref="table2_y_motor" />
		<property name="local" value="false" />
	</bean>


	<bean id="sample_x" class="gda.device.scannable.ScannableMotor">
		<property name="motor" ref="sample_x_motor" />
		<property name="local" value="false" />
	</bean>
	<bean id="sample_y" class="gda.device.scannable.ScannableMotor">
		<property name="motor" ref="sample_y_motor" />
		<property name="local" value="false" />
	</bean>
	<bean id="sample_z" class="gda.device.scannable.ScannableMotor">
		<property name="motor" ref="sample_z_motor" />
		<property name="local" value="false" />
	</bean>
	<bean id="sample_pitch" class="gda.device.scannable.ScannableMotor">
		<property name="motor" ref="sample_pitch_motor" />
		<property name="local" value="false" />
	</bean>
	<bean id="sample_roll" class="gda.device.scannable.ScannableMotor">
		<property name="motor" ref="sample_roll_motor" />
		<property name="local" value="false" />
	</bean>
	<bean id="sample_rot" class="gda.device.scannable.ScannableMotor">
		<property name="motor" ref="sample_rot_motor" />
		<property name="local" value="false" />
	</bean>
	<bean id="sample_fine_rot" class="gda.device.scannable.ScannableMotor">
		<property name="motor" ref="sample_fine_rot_motor" />
		<property name="local" value="false" />
	</bean>

	<bean id="filterwheel" class="gda.device.enumpositioner.EpicsEditablePositionerCallback">
		<property name="recordName" value="BL20I-OP-ATTN-06:MP" />
	</bean>
	<bean class="uk.ac.gda.remoting.server.GdaRmiServiceExporter">
		<property name="serviceName" value="gda/filterwheel" />
		<property name="service" ref="filterwheel" />
		<property name="serviceInterface" value="gda.device.EditableEnumPositioner" />
	</bean>

	<bean id="cryostick_pos_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL20I-CG-CRYO-02:POSN" />
		<property name="local" value="true" />
	</bean>
	<bean id="cryostick_pos" class="gda.device.scannable.ScannableMotor">
		<property name="motor" ref="cryostick_pos_motor" />
	</bean>

	<bean id="cryostick" class="gda.device.enumpositioner.EpicsEditablePositionerCallback">
		<property name="recordName" value="BL20I-CG-CRYO-02:MP" />
	</bean>
	<bean class="uk.ac.gda.remoting.server.GdaRmiServiceExporter">
		<property name="serviceName" value="gda/cryostick" />
		<property name="service" ref="cryostick" />
		<property name="serviceInterface" value="gda.device.EditableEnumPositioner" />
	</bean>
	
	<bean id="cryostat" class="gda.device.scannable.Lakeshore340Scannable">
		<property name="pvName" value="BL20I-EA-TEMPC-01:" />
	</bean>
	
	<bean id="cryo_setpoint" class="gda.device.controlpoint.EpicsControlPoint">
		<property name="pvNameGetPoint" value="BL20I-EA-TEMPC-01:SETP" />
		<property name="pvNameSetPoint" value="BL20I-EA-TEMPC-01:SETP_S" />
	</bean>
	
	<bean id="cryo_range" class="gda.device.controlpoint.EpicsControlPoint">
		<property name="pvNameGetPoint" value="BL20I-EA-TEMPC-01:RANGE" />
		<property name="pvNameSetPoint" value="BL20I-EA-TEMPC-01:RANGE_S" />
	</bean>

	<bean id="cryo_mode" class="gda.device.controlpoint.EpicsControlPoint">
		<property name="pvNameGetPoint" value="BL20I-EA-TEMPC-01:CMODE" />
		<property name="pvNameSetPoint" value="BL20I-EA-TEMPC-01:CMODE_S" />
	</bean>

	<bean id="cryo_ch0" class="gda.device.monitor.EpicsMonitor">
		<property name="pvName" value="BL20I-EA-TEMPC-01:KRDG0" />
		<property name="local" value="false"/>
	</bean>

	<bean id="cryo_ch1" class="gda.device.monitor.EpicsMonitor">
		<property name="pvName" value="BL20I-EA-TEMPC-01:KRDG1" />
		<property name="local" value="false"/>
	</bean>

	<bean id="cryo_ch2" class="gda.device.monitor.EpicsMonitor">
		<property name="pvName" value="BL20I-EA-TEMPC-01:KRDG2" />
		<property name="local" value="false"/>
	</bean>

	<bean id="cryo_ch3" class="gda.device.monitor.EpicsMonitor">
		<property name="pvName" value="BL20I-EA-TEMPC-01:KRDG3" />
		<property name="local" value="false"/>
	</bean>

</beans>