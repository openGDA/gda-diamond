<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:util="http://www.springframework.org/schema/util"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
           http://www.springframework.org/schema/util
           http://www.springframework.org/schema/util/spring-util-2.0.xsd">

	<bean id="ohcoating" class="gda.device.enumpositioner.EpicsPositionerCallback">
		<property name="deviceName" value="M1P" />
	</bean>
	<bean id="crystalcut" class="gda.device.monitor.EpicsMonitor">
		<property name="pvName" value="BL20I-OP-QCM-01:XTAL" />
	</bean>

	<bean id="bragg1_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL20I-OP-QCM-01:BRAGG1" />
	</bean>
	<bean id="bragg2_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL20I-OP-QCM-01:BRAGG2" />
	</bean>
	<bean id="braggoffset_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL20I-OP-QCM-01:OFFSET" />
	</bean>
	<bean id="crystal1_pitch_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL20I-OP-QCM-01:XTAL1:PITCH:FBMTR" />
	</bean>
	<bean id="crystal2_roll_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL20I-OP-QCM-01:XTAL2:ROLL:FBMTR" />
	</bean>
	<bean id="crystal34_roll_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL20I-OP-QCM-01:XTAL34:ROLL:FBMTR" />
	</bean>

	<bean id="jena_crystal1_pitch_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL20I-OP-QCM-01:XTAL1:PITCH" />
	</bean>
	<bean id="jena_crystal2_roll_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL20I-OP-QCM-01:XTAL2:ROLL" />
	</bean>
	<bean id="jena_crystal34_roll_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL20I-OP-QCM-01:XTAL34:ROLL" />
	</bean>

	<bean id="bragg1" class="gda.device.scannable.ScannableMotor">
		<property name="initialUserUnits" value="eV" />
		<property name="motor" ref="bragg1_motor" />
		<property name="hardwareUnitString" value="eV" />
		<property name="outputFormat">
			<util:list>
				<value>%.4f</value>
			</util:list>
		</property>
	</bean>

	<bean id="bragg2" class="gda.device.scannable.ScannableMotor">
		<property name="protectionLevel" value="3" />
		<property name="initialUserUnits" value="eV" />
		<property name="motor" ref="bragg2_motor" />
		<property name="hardwareUnitString" value="eV" />
		<property name="outputFormat">
			<util:list>
				<value>%.4f</value>
			</util:list>
		</property>
	</bean>

	<bean id="braggoffset" class="gda.device.scannable.ScannableMotor">
		<property name="motor" ref="braggoffset_motor" />
		<property name="outputFormat">
			<util:list>
				<value>%.4f</value>
			</util:list>
		</property>
	</bean>
	
	<bean id="bragg1_cal_energy" class="gda.device.scannable.PVScannable">
		<constructor-arg value="bragg1_cal_energy" />
		<constructor-arg value="BL20I-OP-QCM-01:BRAGG1:ACTUAL"/>
	</bean>
	<bean id="bragg1_cal_set" class="gda.device.scannable.PVScannable">
		<constructor-arg value="bragg1_cal_energy" />
		<constructor-arg value="BL20I-OP-QCM-01:CALC:B1OFF.PROC"/>
	</bean>
	<bean id="bragg2_cal_energy" class="gda.device.scannable.PVScannable">
		<constructor-arg value="bragg1_cal_energy" />
		<constructor-arg value="BL20I-OP-QCM-01:BRAGG2:ACTUAL"/>
	</bean>
	<bean id="bragg2_cal_set" class="gda.device.scannable.PVScannable">
		<constructor-arg value="bragg1_cal_energy" />
		<constructor-arg value="BL20I-OP-QCM-01:CALC:B2OFF.PROC"/>
	</bean>

	<bean id="crystal1_pitch" class="gda.device.scannable.Crystal1PitchScannable">
		<property name="protectionLevel" value="1" />
		<property name="motor" ref="crystal1_pitch_motor" />
	</bean>
	<bean id="crystal2_roll" class="gda.device.scannable.ScannableMotor">
		<property name="protectionLevel" value="3" />
		<property name="motor" ref="crystal2_roll_motor" />
	</bean>
	<bean id="crystal34_roll" class="gda.device.scannable.ScannableMotor">
		<property name="protectionLevel" value="3" />
		<property name="motor" ref="crystal34_roll_motor" />
	</bean>

	
	<bean id="jena_crystal1_pitch" class="gda.device.scannable.ScannableMotor">
		<property name="protectionLevel" value="3" />
		<property name="motor" ref="jena_crystal1_pitch_motor" />
	</bean>
	<bean id="jena_crystal2_roll" class="gda.device.scannable.ScannableMotor">
		<property name="protectionLevel" value="3" />
		<property name="motor" ref="jena_crystal2_roll_motor" />
	</bean>
	<bean id="jena_crystal34_roll" class="gda.device.scannable.ScannableMotor">
		<property name="protectionLevel" value="3" />
		<property name="motor" ref="jena_crystal34_roll_motor" />
	</bean>
	<bean id="mono" class="gda.device.scannable.scannablegroup.ScannableGroup">
		<property name="groupMembers">
			<list>
				<ref bean="crystal1_pitch" />
				<ref bean="crystal2_roll" />
				<ref bean="crystal34_roll" />
				<ref bean="crystalcut" />
			</list>
		</property>
	</bean>
</beans>
