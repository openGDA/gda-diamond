<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <turboFilter class="ch.qos.logback.classic.turbo.MarkerFilter">
        <Name>Finest</Name>
        <Marker>FINEST</Marker>
        <OnMatch>DENY</OnMatch>
    </turboFilter>
   
    <appender name="LogServer" class="ch.qos.logback.classic.net.SocketAppender">
        <RemoteHost>i20-control.diamond.ac.uk</RemoteHost>
        <Port>6788</Port>
        <ReconnectionDelay>10000</ReconnectionDelay>
        <IncludeCallerData>true</IncludeCallerData>
    </appender>

   <logger name="gda">
       <level value="DEBUG"/>
   </logger>
    <logger name="gda.factory.corba">
        <level value="WARN"/>
    </logger>
    <logger name="gda.device.corba.util">
        <level value="ERROR"/>
    </logger>
    <logger name="gda.device.corba.impl">
        <level value="WARN"/>
    </logger>
    <logger name="gda.jython.corba.impl">
        <level value="WARN"/>
    </logger>
    <logger name="gda.oe.corba.impl">
        <level value="WARN"/>
    </logger>
    <logger name="gda.jython.GDAJythonInterpreter">
        <level value="WARN"/>
    </logger>
    <logger name="gda.device.motor.MoveEventQueue">
        <level value="WARN"/>
    </logger>
    <logger name="gda.jython.logger.RedirectableFileLogger">
        <level value="WARN"/>
    </logger>
    <root>
        <level value="DEBUG"/>
        <appender-ref ref="LogServer"/>
     </root>
</configuration>
