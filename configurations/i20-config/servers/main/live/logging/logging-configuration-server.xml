<?xml version="1.0" encoding="UTF-8"?>

<configuration>
    <turboFilter class="ch.qos.logback.classic.turbo.MarkerFilter">
        <Name>Finest</Name>
        <Marker>FINEST</Marker>
        <OnMatch>DENY</OnMatch>
    </turboFilter>

    <appender name="LogServer" class="ch.qos.logback.classic.net.SocketAppender">
        <RemoteHost>i20-control.diamond.ac.uk</RemoteHost>
        <Port>6788</Port>
        <ReconnectionDelay>10000</ReconnectionDelay>
        <IncludeCallerData>true</IncludeCallerData>
    </appender>
    <!-- enable this if you want log message appear on local console -->
   <appender name="Console" class="ch.qos.logback.core.ConsoleAppender">
        <layout class="ch.qos.logback.classic.PatternLayout">
            <pattern>%d %-5level [%logger{36}] - %m%n</pattern>
        </layout>
    </appender>

    <logger name="gda">
        <level value="DEBUG"/>
    </logger>
    <logger name="gda.device.motor.EpicsMotor">
        <level value="WARN"/>
    </logger>
    <logger name="gda.jython.GDAInteractiveConsole">
        <level value="INFO"/>
    </logger>  
    <logger name="gda.jython.GDAJythonInterpreter">
        <level value="WARN"/>
    </logger>
    <logger name="gda.device.motor.MoveEventQueue">
        <level value="WARN"/>
    </logger>
    <logger name="gda.jython.logger.RedirectableFileLogger">
        <level value="WARN"/>
    </logger>
   <logger name="gda.epics.LazyPVFactory">
        <level value="INFO"/>
    </logger>
   <logger name="gda.device.detector.analyser.EpicsMCASimple">
        <level value="INFO"/>
    </logger>
    <logger name="gda.epics.connection.EpicsChannelManager">
        <level value="WARN"/>
    </logger>
    <logger name="gda.epics.connection.EpicsController">
        <level value="INFO"/>
    </logger>
    <logger name="gda.device.detector.DAServer">
        <level value="DEBUG"/>
    </logger>
    <logger name="gda.jython.authoriser.LdapAuthoriser">
        <level value="WARN"/>
    </logger>
    <root>
        <level value="DEBUG"/>
        <appender-ref ref="Console"/>
        <appender-ref ref="LogServer"/>
    </root>
    <consolePlugin />
</configuration>
