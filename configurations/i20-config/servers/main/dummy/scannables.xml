<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">


	<bean id="topup_motor" class="gda.device.motor.DummyMotor">
		<property name="speed" value="200" />
		<property name="position" value="60"/>
	</bean>

	<bean id="topup" class="gda.device.scannable.ScannableMotor">
		<property name="initialUserUnits" value="s" />
		<property name="motor" ref="topup_motor" />
		<property name="hardwareUnitString" value="s" />
	</bean>

	<bean id="topupChecker" class="gda.device.scannable.TopupScannable">
		<property name="scannableToBeMonitored" ref="topup" />
		<property name="tolerance" value="10" />
		<property name="timeout" value="60" />
		<property name="waittime" value="10" />
		<property name="level" value="0" />
		<property name="pauseBeforePoint" value="true" />
		<property name="local" value="true"/>
	</bean>


	<bean id="absorber_motor" class="gda.device.motor.DummyMotor">
		<property name="speed" value="200" />
		<property name="position" value="1"/>
	</bean>

	<bean id="absorber" class="gda.device.scannable.ScannableMotor">
		<property name="protectionLevel" value="3" />
		<property name="motor" ref="absorber_motor" />
	</bean>

	<bean id="absorberChecker" class="gda.device.scannable.CheckingScannable">
		<property name="scannable" ref="absorber" />
		<property name="value" value="1" />
		<property name="level" value="0" />
		<property name="pauseBeforePoint" value="false" />
		<property name="local" value="true"/>
	</bean>

<!-- this is in machine.xml in the live config -->
	<bean id="shutter1" class="gda.device.enumpositioner.DummyValve">
		<property name="position" value="Open" />
	</bean>

	<bean id="shutterChecker" class="gda.device.scannable.ShutterChecker">
		<constructor-arg index="0">
			<ref bean="shutter1" />
		</constructor-arg>
		<constructor-arg index="1">
			<null />
		</constructor-arg>
		<constructor-arg index="2">
			<list>
				<value>xspress2system</value>
				<value>ionchambers</value>
				<value>I1</value>
				<value>xmapMca</value>
			</list>
		</constructor-arg>
	</bean>

	<bean id="test_motor" class="gda.device.motor.DummyMotor">
		<property name="speed" value="200" />
	</bean>

	<bean id="test" class="gda.device.scannable.ScannableMotor">
		<property name="protectionLevel" value="3" />
		<property name="initialUserUnits" value="mm" />
		<property name="motor" ref="test_motor" />
		<property name="hardwareUnitString" value="mm" />
	</bean>
	
	<!-- more needs adding to this list -->
	<bean id="sample_alignment" class="gda.device.scannable.scannablegroup.ScannableGroup">
		<property name="groupMembers">
			<list>
				<ref bean="sample_x" />
				<ref bean="sample_y" />
				<ref bean="sample_z" />
				<ref bean="sample_pitch" />
				<ref bean="sample_roll" />
				<ref bean="sample_rot" />
				<ref bean="sample_fine_rot" />
				<ref bean="filterwheel" />
			</list>
		</property>
	</bean>
	
</beans>