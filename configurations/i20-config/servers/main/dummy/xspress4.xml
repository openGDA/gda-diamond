<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

<!-- Controller for xspress4  -->
	<bean id="controllerForXspress4"
		class="uk.ac.gda.devices.detector.xspress3.controllerimpl.DummyXspress3Controller">
		<constructor-arg>
			<ref bean="DAServer" />
		</constructor-arg>
		<constructor-arg>
			<ref bean="tfg" />
		</constructor-arg>
		
		<property name="numberOfChannels" value="64"/>
		<property name="simulationFileName" value="${scratchdir}/simulationFilename" />
	</bean>

</beans>