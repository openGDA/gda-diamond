<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">


<!-- Dummy Stanford current amplifiers-->
	<bean id="ionc1_stanford" class="gda.device.currentamplifier.DummyStanfordScannable" />
	<bean id="ionc2_stanford" class="gda.device.currentamplifier.DummyStanfordScannable" />
	<bean id="ionc3_stanford" class="gda.device.currentamplifier.DummyStanfordScannable" />
	
<!-- RMI export the Stanford scannables -->
	<bean class="uk.ac.gda.remoting.server.GdaRmiServiceExporter">
		<property name="serviceName" value="gda/ionc1_stanford" />
		<property name="service" ref="ionc1_stanford" />
		<property name="serviceInterface" value="gda.device.currentamplifier.StanfordAmplifier" />
	</bean>
	<bean class="uk.ac.gda.remoting.server.GdaRmiServiceExporter">
		<property name="serviceName" value="gda/ionc2_stanford" />
		<property name="service" ref="ionc2_stanford" />
		<property name="serviceInterface" value="gda.device.currentamplifier.StanfordAmplifier" />
	</bean>
	<bean class="uk.ac.gda.remoting.server.GdaRmiServiceExporter">
		<property name="serviceName" value="gda/ionc3_stanford" />
		<property name="service" ref="ionc3_stanford" />
		<property name="serviceInterface" value="gda.device.currentamplifier.StanfordAmplifier" />
	</bean>
</beans>