	<bean id="x3c" class="uk.ac.gda.devices.detector.xspress3.controllerimpl.EpicsController">
		<property name="epicsTemplate" value="richard:XSP3"/>
	</bean>

	<bean id="vortex" class="uk.ac.gda.devices.detector.xspress3.Xspress3Detector">
		<constructor-arg index="0"
			type="uk.ac.gda.devices.detector.xspress3.Xspress3Controller">
			<ref bean="x3c" />
		</constructor-arg>
	</bean>

	<bean id="xspress3_collectionstrategy"
		class="uk.ac.gda.devices.detector.xspress3.Xspress3CollectionStrategy">
		<constructor-arg ref="x3c" />
	</bean>

	<bean id="xspress3_single_ndfile" class="gda.device.detector.areadetector.v17.impl.NDFileImpl">
		<property name="basePVName" value="richard:XSP3:HDF5:" />
		<property name="resetToInitialValues" value="false" />
		<property name="pluginBase">
			<bean class="gda.device.detector.areadetector.v17.impl.NDPluginBaseImpl">
				<property name="basePVName" value="richard:XSP3:HDF5:" />
			</bean>
		</property>
	</bean>

	<bean id="xspress3_ndfile" class="gda.device.detector.areadetector.v17.impl.NDFileHDF5Impl">
		<property name="basePVName" value="richard:XSP3:HDF5:" />
		<property name="file" ref="xspress3_single_ndfile"/>
	</bean>

	<bean id="xspress3_nxfilewriter"
		class="gda.device.detector.nxdetector.plugin.areadetector.filewriter.MultipleImagesPerHDF5FileWriter">
		<property name="ndFileHDF5" ref="xspress3_ndfile" />
		<property name="fileTemplate" value="%s%s%d.hdf5"/>
		<property name="filePathTemplate" value="$datadir$"/>
		<property name="fileNameTemplate" value="xspress3_"/>
		<property name="fileNumberAtScanStart" value="1"/>
		<property name="setFileNameAndNumber" value="true"/>
	</bean>
	
	<bean id="xspress3_ff_calculator" class = "uk.ac.gda.devices.detector.xspress3.Xspress3FFCalculatorNXPlugin">
		<constructor-arg ref="x3c" />
	</bean>

	<bean id="xspress3" class="gda.device.detector.NXDetector">
		<property name="name" value="xspress3" />
		<property name="collectionStrategy" ref="xspress3_collectionstrategy" />
		<property name="additionalPluginList">
			<list>
				<ref bean="xspress3_ff_calculator" />
				<ref bean="xspress3_nxfilewriter" />
			</list>
		</property>
	</bean>

