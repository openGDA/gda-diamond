	<bean id="filterwheel" class="gda.device.enumpositioner.DummyEnumPositioner">
		<property name="positions">
			<list>
				<value>Empty</value>
				<value>Mn 5um</value>
				<value> Fe 5um</value>
				<value> Co 5um</value>
				<value> Ni 5um</value>
				<value> Cu 5um</value>
				<value> Zn 5um</value>
				<value> Zr 20um</value>
				<value> Pb 10um</value>
				<value> Rh (empty)</value>
				<value> Pd 25um</value>
				<value> Ag (empty)</value>
				<value> Cd 25um</value>
				<value>W 4um</value>
				<value> Pt 5um</value>
				<value> User</value>
			</list>
		</property>
	</bean>
	
	<bean class="uk.ac.gda.remoting.server.GdaRmiServiceExporter">
		<property name="serviceName" value="gda/filterwheel" />
		<property name="service" ref="filterwheel" />
		<property name="serviceInterface" value="gda.device.EditableEnumPositioner" />
	</bean>
