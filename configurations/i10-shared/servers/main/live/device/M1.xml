<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

	<!--  M1 -->
	     
	<bean id="m1x_motor" class="gda.device.motor.EpicsMotor">
		<property name="deviceName" value="M1.X" />
		<property name="epicsConfiguration" ref="epicsConfig" />
		<property name="local" value="true"/>
		<property name="accessControlName" value="branchena" />
	</bean>

	<bean id="m1y_motor" class="gda.device.motor.EpicsMotor">
		<property name="deviceName" value="M1.Y" />
		<property name="epicsConfiguration" ref="epicsConfig" />
