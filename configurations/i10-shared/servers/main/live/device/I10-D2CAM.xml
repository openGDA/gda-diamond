<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

	<!-- D2 (D4) Camera 1 aka cam2 -->

	<!--  Based on GDA-mt/configurations/i16-config/servers/main/live/epics/detector/andor1.xml at d024aae -->

	<!-- AD hardware -->

	<bean id="cam2_adbase" class="gda.device.detector.areadetector.v17.impl.ADBaseImpl">
		<property name="deviceName" value="D2.DCAM.CAM_ADBase" />
	</bean>

	<bean id="cam2_ndfile" class="gda.device.detector.areadetector.v17.impl.NDFileImpl">
		<property name="deviceName" value="D2.DCAM.FIMG_NDFile" />
		<property name="resetToInitialValues" value="false" />
	</bean>

	<!-- NXDetector collection strategies -->

	<!-- SingleExposureStandard(ADBase adBase, double readoutTime)
				Negative readoutTime disables AcquirePeriod
	 -->
	<bean id="cam2_nxcollectionstrategy"
		class="gda.device.detector.addetector.triggering.SingleExposureStandard">
		<constructor-arg ref="cam2_adbase" />
		<constructor-arg value="-1" />
	</bean>

		<!-- NXDetector file writers -->

	<!-- SingleImagePerFileWriter(String detectorName)
	 -->
	<bean id="cam2_nxfilewriter_for_scans"
		class="gda.device.detector.nxdetector.plugin.areadetector.filewriter.SingleImagePerFileWriter">
		<constructor-arg value="cam2" />
		<property name="ndFile" ref="cam2_ndfile" />
		<property name="keyNameForMetadataPathTemplate" value="cam2_path_template" />
	</bean>

	<!-- SingleImagePerFileWriterWithNumTracker(String detectorName)
	 -->
	<bean id="cam2_nxfilewriter_for_snaps"
		class="gda.device.detector.nxdetector.plugin.areadetector.filewriter.SingleImagePerFileWriterWithNumTracker">
		<constructor-arg value="cam2" />
		<property name="ndFile" ref="cam2_ndfile" />
		<property name="numTrackerExtension" value="cam2snaps" />
		<property name="keyNameForMetadataPathTemplate" value="cam2_path_template" />
	</bean>

	<!-- NXDetectors -->

	<bean id="cam2det" class="gda.device.detector.NXDetector">
		<property name="name" value="cam2det" />
		<property name="collectionStrategy" ref="cam2_nxcollectionstrategy" />
		<property name="additionalPluginList">
			<list>
				<ref bean="cam2_nxfilewriter_for_scans" />
			</list>
		</property>
	</bean>

	<bean id="cam2det_for_snaps" class="gda.device.detector.NXDetector">
		<property name="name" value="cam2det_for_snaps" />
		<property name="collectionStrategy" ref="cam2_nxcollectionstrategy" />
		<property name="additionalPluginList">
			<list>
				<ref bean="cam2_nxfilewriter_for_snaps" />
			</list>
		</property>
	</bean>
</beans>