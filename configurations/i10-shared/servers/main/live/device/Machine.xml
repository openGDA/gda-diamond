<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans.xsd">

<!-- 
Ring Energy:    CS-CS-MSTAT-01:BEAMENERGY
Ring Current:   SR21C-DI-DCCT-01:SIGNAL
Lifetime:       SR21C-DI-DCCT-01:LIFETIME
Mode:           CS-CS-MSTAT-01:MODE
Fill Mode:      LI-TI-MTGEN-01:MODE
Top up:         SR-CS-FILL-01:COUNTDOWN
 -->

 
<!-- 	<bean id="re" class="gda.device.monitor.EpicsMonitor"> -->
<!-- 		<property name="pvName" value="CS-CS-MSTAT-01:BEAMENERGY" /> -->
<!-- 		<property name="local" value="true" /> -->
<!-- 	</bean> -->

	<bean id="rc" class="gda.device.monitor.EpicsMonitor">
		<property name="pvName" value="SR21C-DI-DCCT-01:SIGNAL" />
		<property name="local" value="true" />
	</bean>

	<bean id="topup_time" class="gda.device.monitor.EpicsMonitor">
		<property name="pvName" value="SR-CS-FILL-01:COUNTDOWN" />
		<property name="local" value="true" />
	</bean>

	<bean id="topupstate" class="gda.device.monitor.EpicsMonitor">
		<property name="pvName" value="SR-CS-FILL-01:TOPUPSTATE" />
		<property name="local" value="true" />
	</bean>

	<bean id="frontend" class ="gda.device.enumpositioner.EpicsPneumaticCallback">
		<property name="controlPv" value="FE10I-CS-BEAM-01:BLCON"/>
		<property name="statusPv" value="FE10I-CS-BEAM-01:STA"/>
		<property name="local" value="true"/>
		<property name="readOnly" value="true"/>
	</bean>

	<bean id="ab0" class ="gda.device.enumpositioner.EpicsPneumaticCallback">
		<property name="controlPv" value="FE10I-RS-ABSB-02:BLCON"/>
		<property name="statusPv" value="FE10I-RS-ABSB-02:STA"/>
		<property name="local" value="true"/>
	</bean>

	<!-- 
	<bean id="rlt" class="gda.device.monitor.EpicsMonitor">
