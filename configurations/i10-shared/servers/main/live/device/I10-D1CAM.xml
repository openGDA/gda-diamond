<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

	<!-- D1 (D3) Camera 1 aka cam1 -->

	<!--  Based on GDA-mt/configurations/i16-config/servers/main/live/epics/detector/andor1.xml at d024aae -->

	<!-- AD hardware -->

	<bean id="cam1_adbase" class="gda.device.detector.areadetector.v17.impl.ADBaseImpl">
		<property name="deviceName" value="D1.DCAM.CAM_ADBase" />
	</bean>

	<bean id="cam1_ndfile" class="gda.device.detector.areadetector.v17.impl.NDFileImpl">
		<property name="deviceName" value="D1.DCAM.FIMG_NDFile" />
		<property name="resetToInitialValues" value="false" />
	</bean>

	<!-- NXDetector collection strategies -->

	<!-- SingleExposureStandard(ADBase adBase, double readoutTime)
				Negative readoutTime disables AcquirePeriod
	 -->
	<bean id="cam1_nxcollectionstrategy"
		class="gda.device.detector.addetector.triggering.SingleExposureStandard">
		<constructor-arg ref="cam1_adbase" />
		<constructor-arg value="-1" />
	</bean>

		<!-- NXDetector file writers -->

	<!-- SingleImagePerFileWriter(String detectorName)
	 -->
	<bean id="cam1_nxfilewriter_for_scans"
		class="gda.device.detector.nxdetector.plugin.areadetector.filewriter.SingleImagePerFileWriter">
		<constructor-arg value="cam1" />
		<property name="ndFile" ref="cam1_ndfile" />
		<property name="keyNameForMetadataPathTemplate" value="cam1_path_template" />
	</bean>

	<!-- SingleImagePerFileWriterWithNumTracker(String detectorName)
	 -->
	<bean id="cam1_nxfilewriter_for_snaps"
		class="gda.device.detector.nxdetector.plugin.areadetector.filewriter.SingleImagePerFileWriterWithNumTracker">
		<constructor-arg value="cam1" />
		<property name="ndFile" ref="cam1_ndfile" />
		<property name="numTrackerExtension" value="cam1snaps" />
		<property name="keyNameForMetadataPathTemplate" value="cam1_path_template" />
	</bean>

	<!-- NXDetectors -->

	<bean id="cam1det" class="gda.device.detector.NXDetector">
		<property name="name" value="cam1det" />
		<property name="collectionStrategy" ref="cam1_nxcollectionstrategy" />
		<property name="additionalPluginList">
			<list>
				<ref bean="cam1_nxfilewriter_for_scans" />
			</list>
		</property>
	</bean>

	<bean id="cam1det_for_snaps" class="gda.device.detector.NXDetector">
		<property name="name" value="cam1det_for_snaps" />
		<property name="collectionStrategy" ref="cam1_nxcollectionstrategy" />
		<property name="additionalPluginList">
			<list>
				<ref bean="cam1_nxfilewriter_for_snaps" />
			</list>
		</property>
	</bean>
</beans>