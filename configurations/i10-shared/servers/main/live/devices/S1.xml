<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans.xsd">

	<!-- Primary Slits / S1 Optical Elements -->

	<bean id="s1xaptr_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL10I-AL-SLITS-01:APTR1:X" />
	</bean>

	<bean id="s1xhall_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL10I-AL-SLITS-01:APTR2:X" />
	</bean>
	
	<bean id="s1yplus_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL10I-AL-SLITS-01:APTR1:Y" />
	</bean>
	
	<bean id="s1yminus_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL10I-AL-SLITS-01:APTR2:Y" />
	</bean>
	
	<bean id="s1xsize_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL10I-AL-SLITS-01:XSIZE" />
	</bean>
	
	<bean id="s1xcentre_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL10I-AL-SLITS-01:XCENTRE" />
	</bean>
	
	<bean id="s1ysize_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL10I-AL-SLITS-01:YSIZE" />
	</bean>
	
	<bean id="s1ycentre_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL10I-AL-SLITS-01:YCENTRE" />
	</bean>
</beans>