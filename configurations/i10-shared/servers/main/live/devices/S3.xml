<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

	<!-- Tertiary Slits / S3 Optical Element -->

	<bean id="s3xring_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL10I-AL-SLITS-03:XRING" />
		<property name="local" value="true"/>
	</bean>

	<bean id="s3xhall_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL10I-AL-SLITS-03:XHALL" />
		<property name="local" value="true"/>
	</bean>

	<bean id="s3yplus_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL10I-AL-SLITS-03:YPLUS" />
		<property name="local" value="true"/>
	</bean>

	<bean id="s3yminus_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL10I-AL-SLITS-03:YMINUS" />
		<property name="local" value="true"/>
	</bean>

	<bean id="s3xsize_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL10I-AL-SLITS-03:XSIZE" />
		<property name="local" value="true"/>
	</bean>
	
	<bean id="s3xcentre_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL10I-AL-SLITS-03:XCENTRE" />
		<property name="local" value="true"/>
	</bean>
	
	<bean id="s3ysize_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL10I-AL-SLITS-03:YSIZE" />
		<property name="local" value="true"/>
	</bean>
	
	<bean id="s3ycentre_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL10I-AL-SLITS-03:YCENTRE" />
		<property name="local" value="true"/>
	</bean>
</beans>