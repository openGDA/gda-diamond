<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:util="http://www.springframework.org/schema/util"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
	   	http://www.springframework.org/schema/util
		http://www.springframework.org/schema/util/spring-util-2.5.xsd">
           
	<!-- D3 (D5) --> 
	<bean id="d3_scrn" class="gda.device.enumpositioner.DummyEnumPositioner">
		<property name="positions">
			<util:list list-class="java.util.ArrayList">
				<value>Move In</value>
				<value>Move Out</value>
				<value>Reset</value>
			</util:list>
		</property>
		<property name="local" value="true"/>
	</bean>
	<bean id="d3d5_det_motor" class="gda.device.motor.DummyMotor" />
	<bean id="d3_pos" class="gda.device.enumpositioner.DummyEnumPositioner">
		<property name="positions">
			<util:list list-class="java.util.ArrayList">
				<value>Nothing</value>
				<value>Grid</value>
			</util:list>
		</property>
		<property name="local" value="true"/>
	</bean>
	<!-- Area detector camera -->
	<!-- To use this, you will have to start an area detector simulator -->
	<!-- and edit adSimulator.xml with the correct PVs for your simulator -->
 	<bean id="d3cam" class="gda.device.detector.NXDetector">
		<property name="name" value="d3cam" />
		<property name="collectionStrategy" ref="simCollectionStrategy" />
		<property name="additionalPluginList">
			<list>
				<ref bean="sim_RoiStats1" />
				<ref bean="sim_RoiStats2" />
				<ref bean="sim_RoiStats3" />
				<ref bean="sim_RoiStats4" />
				<ref bean="sim_RoiStats5" />
				<ref bean="sim_RoiStats6" />
				<ref bean="simHdf5Filewriter" />
			</list>
		</property>
	</bean>
</beans>