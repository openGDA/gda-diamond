<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">
           
    <!-- FrontEnd Aperture -->
	
	<bean id="feapx_motor" class="gda.device.motor.DummyMotor" >
		<property name="minPosition" value="-5" />
		<property name="maxPosition" value="5" />
		<property name="speed" value="0.4" />
		<property name="unitString" value="mm"/>
		<property name="local" value="true" />
	</bean>
	
	<bean id="feapy_motor" class="gda.device.motor.DummyMotor" >
		<property name="minPosition" value="-5" />
		<property name="maxPosition" value="5" />
		<property name="speed" value="0.06" />
		<property name="unitString" value="mm"/>
		<property name="local" value="true" />
	</bean>
	
    <!-- Front End Beam Permit -->
	<bean id="frontend" class="gda.device.enumpositioner.DummyEnumPositioner">
		<property name="positions">
			<list>
				<value>Open</value>
				<value>Close</value>
				<value>Abort</value>
				<value>Unknown</value>
			</list>
		</property>
	</bean>

	<bean id="ab0" class="gda.device.enumpositioner.DummyEnumPositioner">
		<property name="positions">
			<list>
				<value>Open</value>
				<value>Close</value>
				<value>Abort</value>
				<value>Unknown</value>
			</list>
		</property>
	</bean>
	
	<bean id="portshutterMonitor" class="gda.device.monitor.DummyEpicsMonitor">
		<property name="value" value="Open" />
	</bean>
	
	<bean id="portshutter" class="gda.device.enumpositioner.DummyEnumPositioner">
		<property name="positions">
			<list>
				<value>Open</value>
				<value>Close</value>
				<value>Abort</value>
				<value>Unknown</value>
			</list>
		</property>
	</bean>
	<bean id="opticsshutter" class="gda.device.enumpositioner.DummyEnumPositioner">
		<property name="positions">
			<list>
				<value>Open</value>
				<value>Close</value>
				<value>Abort</value>
				<value>Unknown</value>
			</list>
		</property>
	</bean>

</beans>