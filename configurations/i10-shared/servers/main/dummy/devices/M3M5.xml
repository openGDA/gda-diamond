<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">
           
	<!-- M3M5 -->

	<bean id="m3m5x_motor" class="gda.device.motor.DummyMotor">
		<property name="minPosition" value="-10.0" />
		<property name="maxPosition" value="10.0" />
		<property name="speed" value="1" />
		<property name="unitString" value="mm"/>
	</bean>
	<bean id="m3m5y_motor" class="gda.device.motor.DummyMotor">
		<property name="minPosition" value="-45.0" />
		<property name="maxPosition" value="45.0" />
		<property name="speed" value="1" />
		<property name="unitString" value="mm"/>
	</bean>
	<bean id="m3m5z_motor" class="gda.device.motor.DummyMotor">
		<property name="minPosition" value="-79.05" />
		<property name="maxPosition" value="79.05" />
		<property name="speed" value="2" />
		<property name="unitString" value="mm"/>
	</bean>
	<bean id="m3m5yaw_motor" class="gda.device.motor.DummyMotor">
		<property name="minPosition" value="-35000.0" />
		<property name="maxPosition" value="35000.0" />
		<property name="speed" value="1" />
		<property name="unitString" value="urad"/>
	</bean>
	<bean id="m3m5pitch_motor" class="gda.device.motor.DummyMotor">
		<property name="minPosition" value="-35000.0" />
		<property name="maxPosition" value="35000.0" />
		<property name="speed" value="1" />
		<property name="unitString" value="urad"/>
	</bean>
	<bean id="m3m5roll_motor" class="gda.device.motor.DummyMotor">
		<property name="minPosition" value="-9000.0" />
		<property name="maxPosition" value="9000.0" />
		<property name="speed" value="1" />
		<property name="unitString" value="urad"/>
	</bean>
	
	<bean id="m3m5_x" class="gda.device.scannable.ScannableMotor">
		<property name="motor" ref="m3m5x_motor" />
		<!-- <property name="initialUserUnits" value="mm" />
		<property name="hardwareUnitString" value="mm" />
		<property name="lowerGdaLimits" value="-100" />
		<property name="upperGdaLimits" value="100" /> -->
	</bean>  
	
	<bean id="m3m5_y" class="gda.device.scannable.ScannableMotor">
		<property name="motor" ref="m3m5y_motor" />
		<!-- <property name="initialUserUnits" value="Deg" />
		<property name="hardwareUnitString" value="Deg" />
		<property name="lowerGdaLimits" value="-100" />
		<property name="upperGdaLimits" value="100" /> -->
	</bean>  
	
	<bean id="m3m5_z" class="gda.device.scannable.ScannableMotor">
		<property name="motor" ref="m3m5z_motor" />
		<!-- <property name="initialUserUnits" value="mm" />
		<property name="hardwareUnitString" value="mm" />
		<property name="lowerGdaLimits" value="-100" />
		<property name="upperGdaLimits" value="100" /> -->
	</bean>  
	
	<bean id="m3m5_yaw" class="gda.device.scannable.ScannableMotor">
		<property name="motor" ref="m3m5yaw_motor" />
		<!-- <property name="initialUserUnits" value="mm" />
		<property name="hardwareUnitString" value="mm" />
		<property name="lowerGdaLimits" value="-100" />
		<property name="upperGdaLimits" value="100" /> -->
	</bean>  
	
	<bean id="m3m5_pitch" class="gda.device.scannable.ScannableMotor">
		<property name="motor" ref="m3m5pitch_motor" />
		<!-- <property name="initialUserUnits" value="mm" />
		<property name="hardwareUnitString" value="mm" />
		<property name="lowerGdaLimits" value="-100" />
		<property name="upperGdaLimits" value="100" /> -->
	</bean> 
	 
	<bean id="m3m5_roll" class="gda.device.scannable.ScannableMotor">
		<property name="motor" ref="m3m5roll_motor" />
		<!-- <property name="initialUserUnits" value="mm" />
		<property name="hardwareUnitString" value="mm" />
		<property name="lowerGdaLimits" value="-100" />
		<property name="upperGdaLimits" value="100" /> -->
	</bean>  

	<bean id="m3m5" class="gda.device.scannable.scannablegroup.ScannableGroup">
		<property name="groupMembers">
			<list>
				<ref bean="m3m5_x" />
				<ref bean="m3m5_y" />
				<ref bean="m3m5_z" />
				<ref bean="m3m5_yaw" />
				<ref bean="m3m5_pitch" />
				<ref bean="m3m5_roll" />
				
			</list>
		</property>
	</bean>
</beans>