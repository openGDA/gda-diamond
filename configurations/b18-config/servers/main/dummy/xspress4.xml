<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans.xsd">

<!-- Controller for xspress4  -->
	<bean id="xspress4Controller"  class="uk.ac.gda.devices.detector.xspress4.DummyXspress4Controller">
		<property name="numElements" value="36" />
		<property name="numMcaChannels" value="4096" />
		<property name="numScalers" value="8" />
     	<property name="timeSeriesNumPoints" value="10000" />	
	</bean>

<!-- 	<bean id="xspress4ControllerOdin"  class="uk.ac.gda.devices.detector.xspress4.DummyXspress4Controller"> -->
<!-- 		<property name="numElements" value="36" /> -->
