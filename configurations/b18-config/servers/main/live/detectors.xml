	<bean id="counterTimer01_gmsd" class="gda.device.detector.countertimer.TfgScalerWithFrames">
		<property name="extraNames">
			<list>
				<!-- <value>Time</value> -->
				<value>I0</value>
				<value>tey</value>
				<value>gmsd1</value>
				<value>gmsd2</value>
				<value>gmsd3</value>
				<value>gmsd4</value>
				<value>gmsd5</value>
<!-- 				<value>gmsd6</value> -->
			</list>
		</property>
		<property name="scaler" ref="CalMemory" />
		<property name="timer" ref="tfg" />
		<property name="timeChannelRequired" value="false" />
		<property name="darkCurrentRequired" value="false" />
		<property name="outputLogValues" value="false" />
		<property name="TFGv2" value="true" />
		<property name="minimumReadoutDelay" value="0" />
		<property name="numChannelsToRead" value="8" />
		<property name="outputFormat">
			<list>
				<!-- <value>%6.2g</value> -->
				<value>%6.5g</value>
				<value>%9d</value>
				<value>%9d</value>
				<value>%9d</value>
				<value>%9d</value>
				<value>%9d</value>
				<value>%9d</value>
				<value>%9d</value>
<!-- 				<value>%9d</value> -->
			</list>
		</property>
	</bean>

</beans>
