<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- display message in Logger Server's console -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <layout class="ch.qos.logback.classic.PatternLayout">
            <Pattern>%date %-5level [%logger] - %message%n%ex</Pattern>
        </layout>
    </appender>
    <!-- Socket for forwarding log message to LogPanel in GDA Client or other viewers -->
    <appender name="WS001" class="ch.qos.logback.classic.net.SocketAppender">
        <RemoteHost>b18-ws001.diamond.ac.uk</RemoteHost>
        <Port>6789</Port>
        <ReconnectionDelay>10000</ReconnectionDelay>
        <IncludeCallerData>true</IncludeCallerData>
    </appender>
    <appender name="WS001_LogPanel" class="ch.qos.logback.classic.net.SocketAppender">
        <RemoteHost>b18-ws001.diamond.ac.uk</RemoteHost>
        <Port>6790</Port>
        <ReconnectionDelay>10000</ReconnectionDelay>
        <IncludeCallerData>true</IncludeCallerData>
    </appender>
    <appender name="WS002" class="ch.qos.logback.classic.net.SocketAppender">
        <RemoteHost>b18-ws002.diamond.ac.uk</RemoteHost>
        <Port>6789</Port>
        <ReconnectionDelay>10000</ReconnectionDelay>
        <IncludeCallerData>true</IncludeCallerData>
    </appender>
    <appender name="WS002_LogPanel" class="ch.qos.logback.classic.net.SocketAppender">
        <RemoteHost>b18-ws002.diamond.ac.uk</RemoteHost>
        <Port>6790</Port>
        <ReconnectionDelay>10000</ReconnectionDelay>
        <IncludeCallerData>true</IncludeCallerData>
    </appender>
    <appender name="WS003" class="ch.qos.logback.classic.net.SocketAppender">
        <RemoteHost>b18-ws003.diamond.ac.uk</RemoteHost>
        <Port>6789</Port>
        <ReconnectionDelay>10000</ReconnectionDelay>
        <IncludeCallerData>true</IncludeCallerData>
    </appender>
    <appender name="WS003_LogPanel" class="ch.qos.logback.classic.net.SocketAppender">
        <RemoteHost>b18-ws003.diamond.ac.uk</RemoteHost>
        <Port>6790</Port>
        <ReconnectionDelay>10000</ReconnectionDelay>
        <IncludeCallerData>true</IncludeCallerData>
    </appender>
    
    <appender name="DebugFILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <File>${gda.logs.dir}/gda_server.log</File>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <FileNamePattern>${gda.logs.dir}/gda_server.%d{yyyy-MM-dd}.log.zip</FileNamePattern>
        </rollingPolicy>
        <layout class="ch.qos.logback.classic.PatternLayout">
            <pattern>%d %-5level [%logger] %ex - %m%n</pattern>
        </layout>
    </appender>   
    
    <logger name="gda">
        <level value="DEBUG"/>
    </logger>
    <logger name="gda.device.motor.MoveEventQueue">
        <level value="ERROR"/>
    </logger>
    <logger name="gda.device.monitor.corba.impl">
        <level value="INFO"/>
    </logger>
    <logger name="gda.device.corba.impl">
        <level value="INFO"/>
    </logger>
    <logger name="gda.device.motor.EpicsMotor">
        <level value="WARN"/>
    </logger>
    <logger name="gda.factory.corba.util.PushEventQueue">
        <level value="ERROR"/>
    </logger>
     <logger name="uk.ac.gda.exafs.iu.XasScanParametersUIEditor">
        <level value="ERROR"/>
    </logger>
    <logger name="gda.factory.corba.util.CorbaEventDispatcher">
        <level value="ERROR"/>
    </logger>
    <root>
        <level value="ALL"/>
        <appender-ref ref="DebugFILE"/>
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="WS001"/>
        <appender-ref ref="WS001_LogPanel"/>
        <appender-ref ref="WS002"/>
        <appender-ref ref="WS002_LogPanel"/>
        <appender-ref ref="WS003"/>
        <appender-ref ref="WS003_LogPanel"/>
    </root>
</configuration>
