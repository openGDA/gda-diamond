<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

	<bean id="xspress2system" class="gda.device.detector.xspress.Xspress2System">
		<property name="daServer" ref="DAServer" />
		<property name="tfg" ref="tfg" />
		<property name="xspressSystemName" value="xsp1" />

		<property name="mcaOpenCommand" value="xspress2 open-mca 'xsp1'" />
		<property name="scalerOpenCommand" value="xspress2 open-scalers 'xsp1'" />
		<property name="startupScript" value="xspress2 format-run 'xsp1' res-none" />

		<property name="numberOfDetectors" value="9" />
		<property name="configFileName"
			value="${gda.config}/templates/Xspress_Parameters.xml" />		
		<property name="dtcConfigFileName"
			value="${gda.config}/templates/Xspress_DeadTime_Parameters.xml" />
		<property name="fullMCABits" value="12" />

		<property name="outputFormat">
			<list>
				<value>%9.2f</value>
			</list>
		</property>
	</bean>

	<!-- Time Frame Generator -->
	<bean id="tfg" class="gda.device.timer.Etfg">
		<property name="daServer" ref="DAServer" />
	</bean>

	<!-- Scaler channels -->
	<bean id="CalMemory" class="gda.device.memory.Scaler">
		<property name="daServer" ref="DAServer" />
		<property name="width" value="8" />
		<property name="height" value="1" />
		<property name="openCommand" value="tfg open-cc" />
	</bean>

	<bean id="scalers" class="gda.device.detector.countertimer.TfgScalerWithFrames">
		<property name="extraNames">
			<list>
				<value>channel3</value>
				<value>channel4</value>
				<value>channel5</value>
				<value>channel6</value>
			</list>
		</property>
		<property name="scaler" ref="CalMemory" />
		<property name="timer" ref="tfg" />
		<property name="TFGv2" value="true" />
		<property name="numChannelsToRead" value="4" />
		<property name="firstDataChannel" value="3" />
		<property name="outputFormat">
			<list>
				<value>%4.6g</value>
				<value>%4.6g</value>
				<value>%4.6g</value>
				<value>%4.6g</value>
				<value>%4.6g</value>
			</list>
		</property>
	</bean>

	<bean id="counterTimer01" class="gda.device.detector.countertimer.TfgScalerWithFrames">
		<property name="extraNames">
			<list>
				<!-- <value>Time</value> -->
				<value>I0</value>
				<value>It</value>
				<value>Iref</value>
				<value>lnI0It</value>
				<value>lnItIref</value>
			</list>
		</property>
		<property name="scaler" ref="CalMemory" />
		<property name="timer" ref="tfg" />
		<property name="timeChannelRequired" value="false" />
		<property name="darkCurrentRequired" value="false" />
		<property name="outputLogValues" value="true" />
		<property name="TFGv2" value="true" />
		<property name="minimumReadoutDelay" value="0" />
		<property name="numChannelsToRead" value="3" />
		<property name="outputFormat">
			<list>
				<!-- <value>%6.2g</value> -->
				<value>%6.5g</value>
				<value>%9d</value>
				<value>%9d</value>
				<value>%9d</value>
				<value>%.6g</value>
				<value>%.6g</value>
			</list>
		</property>
	</bean>

	<bean id="counterTimer02_nocorr"
		class="gda.device.detector.countertimer.TfgXspress2NoCorrection">
		<property name="extraNames">
			<list>
				<value>flu_0</value>
				<value>flu_1</value>
				<value>flu_2</value>
				<value>flu_3</value>
				<value>flu_4</value>
				<value>flu_5</value>
				<value>flu_6</value>
				<value>flu_7</value>
				<value>flu_8</value>
				<value>FF</value>
			</list>
		</property>
		<property name="xspress" ref="xspress2system" />
		<property name="timer" ref="tfg" />
		<property name="slave" value="true" />
	</bean>

	<bean id="counterTimer02_raw" class="gda.device.detector.countertimer.TfgXspress2Raw">
		<property name="extraNames">
			<list>
				<value>flu_0</value>
				<value>flu_1</value>
				<value>flu_2</value>
				<value>flu_3</value>
				<value>flu_4</value>
				<value>flu_5</value>
				<value>flu_6</value>
				<value>flu_7</value>
				<value>flu_8</value>
				<value>FF</value>
			</list>
		</property>
		<property name="xspress" ref="xspress2system" />
		<property name="timer" ref="tfg" />
		<property name="slave" value="true" />
	</bean>

	<bean id="FFI0" class="gda.device.detector.TfgFFoverI0">
		<property name="xspress" ref="xspress2system" />
		<property name="scalerName" value="counterTimer01" />
	</bean>

	<bean id="FFI0_vortex" class="gda.device.detector.TfgXMapFFoverI0">
		<property name="xmap" ref="xmapMca" />
		<property name="scalerName" value="counterTimer01" />
	</bean>

	<bean id="counterTimer03" class="gda.device.detector.xmap.TfgXmap">
		<property name="xmap" ref="xmapMca" />
		<property name="timer" ref="tfg" />
		<property name="slave" value="true" />
		<property name="minimumReadoutDelay" value="100" />
	</bean>

	<bean id="xmapMca" class="gda.device.detector.xmap.NexusXmap">
		<property name="controller" ref="xmapcontroller" />
		<property name="slave" value="false" />
		<property name="configFileName"
			value="${gda.config}/templates/Vortex_Parameters.xml" />
		<property name="tfg" ref="tfg" />
		<property name="eventProcessingTimes">
			<list>
				<value>1.1029752060937018e-007</value>
				<value>1.1407794527246737e-007</value>
				<value>1.1465765791909203e-007</value>
				<value>1.0675602460939456e-007</value>
			</list>
		</property>
	</bean>

	<bean id="det1" class="gda.device.detector.DummyBufferedDetector">
		<property name="inputNames">
			<list>
				<value>det1</value>
			</list>
		</property>
	</bean>

	<bean id="gmsd" class="gda.device.detector.countertimer.TFGStruck">
		<property name="struck" ref="struckScaler" />
		<property name="timer" ref="tfg" />
	</bean>
	
		
