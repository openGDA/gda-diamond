<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans.xsd">
           
<!--     Various objects for testing continuous Xspress4 scans on i20  -->

	<bean id="xspress4" class="uk.ac.gda.devices.detector.xspress4.Xspress4Detector">
		<property name="name" value="xspress4" />
		<property name="controller" ref="xspress4Controller" />
		<property name="xspress3Controller" ref="xspress3ControllerForXspress4" />
		<property name="tfgFFI0" ref="xspress4FFI0" />
		<property name="configFileName" value="${gda.config}/templates/Xspress4_Parameters_36Ge.xml" />
		<property name="defaultSubdirectory" value="xspress4" />
	</bean>

	<bean id="xspress4FFI0" class="gda.device.detector.TfgFFoverI0">
		<property name="xspress" ref="xspress4" />
		<property name="i0_channel" value="0" />
		<property name="counterTimer" ref="counterTimer01" />
	</bean>

	<bean id="qexafs_xspress4" class="uk.ac.gda.devices.detector.xspress4.Xspress4BufferedDetector" >
		<property name="xspress4Detector" ref="xspress4" />
		<property name="useNexusTreeWriter" value="true" />
	</bean>

	<bean id="qexafs_FFI0_xspress4"	class="uk.ac.gda.devices.detector.xspress3.Xspress3FFoverI0BufferedDetector">
		<property name="qexafsXspress" ref="qexafs_xspress4" />
		<property name="qexafsScaler" ref="qexafs_counterTimer01" />
		<property name="i0_channel" value="1" />
	</bean>

</beans>
