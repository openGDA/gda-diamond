<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans.xsd">

<bean class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
		<property name="locations">
			<list value-type="java.lang.String">
				<value>file:${gda.config}/properties/${gda.mode}/${gda.mode}_instance_java.properties</value>
				<value>file:${gda.config}/properties/_common/common_instance_java.properties</value>
			</list>
		</property>
</bean>

	<!-- Provides ability to import/find remote objects over RMI -->
	<bean class="uk.ac.gda.remoting.client.RmiProxyFactory" />

	<import resource="spreadsheet-view.xml" />
	<import resource="detector-rate-views.xml" />
	<import resource="live_controls.xml" />
	<import resource="medipix.xml" />
	<import resource="../${gda.mode}/epics-cameras.xml" />
	<import resource="epics-cameras.xml" />
	
	<import resource="classpath:gda/spring/propertyeditors/registration.xml" />

	<import resource="file://${gda.core.dir}/clients/_common/plot_server.xml" />


	<bean id="commandQueueProcessor" class="uk.ac.gda.remoting.client.GdaRmiProxy" />

	<bean class="gda.util.osgi.OSGiServiceRegister">
		<property name="class" value="gda.commandqueue.Processor" />
		<property name="service" ref="commandQueueProcessor" />
	</bean>

	<bean class="gda.util.osgi.OSGiServiceRegister">
		<property name="class" value="gda.commandqueue.Queue" />
		<property name="service" ref="commandQueueProcessor" />
	</bean>

<!-- 	Detector element order config for 9 element xspress2 detector;  -->
	<bean id="xspress2ElementConfig" class=" uk.ac.gda.exafs.ui.composites.detectors.internal.FluoDetectorElementConfig">
		<property name="name" value="xspress2ElementConfig" />
		<property name="detectorName" value="xspress2system" />

<!-- Grid order will be used if number of elements on detector != size of elementMap
		(i.e. xspress2detector is 36 element detector) -->
		<property name="gridOrder" value="1" />  <!-- Use right to left, top to bottom order-->

		<property name="elementMap">
			<map>
				<entry key="0" value="5" />
				<entry key="1" value="4" />
				<entry key="2" value="3" />

				<entry key="3" value="6" />
				<entry key="4" value="8" />
				<entry key="5" value="2" />

				<entry key="6" value="7" />
				<entry key="7" value="0" />
				<entry key="8" value="1" />
			</map>
		</property>
	</bean>

	<bean id="xspress2ViewFactory" class="uk.ac.gda.exafs.ui.views.detectors.FluorescenceDetectorViewFactory" >
		<property name="name" value="xspress2ViewFactory" />
		<property name="detectorName" value="xspress2system" />
	</bean>

	<bean id="xspress3ViewFactory" class="uk.ac.gda.exafs.ui.views.detectors.FluorescenceDetectorViewFactory" >
		<property name="name" value="xspress3ViewFactory" />
		<property name="detectorName" value="xspress3" />
	</bean>

	<bean id="xspress4ViewFactory" class="uk.ac.gda.exafs.ui.views.detectors.FluorescenceDetectorViewFactory" >
		<property name="name" value="xspress4ViewFactory" />
		<property name="detectorName" value="xspress4Odin" />
		<property name="maxDetectorElementCounts" value="500000" />
	</bean>

	<bean id="xspress3XViewFactory" class="uk.ac.gda.exafs.ui.views.detectors.FluorescenceDetectorViewFactory" >
		<property name="detectorName" value="xspressX" />
	</bean>

	<bean id="detectorGroupTemplateConfiguration" class="uk.ac.gda.beans.exafs.DetectorGroupTemplateConfiguration" >
		<property name="detectorGroupsMap">
			<map>
				<entry key="Fluorescence">
					<list>
						<value>XMap</value>
						<value>Xspress2</value>
						<value>Xspress3</value>
						<value>Xspress3X</value>
						<value>Xspress4Odin</value>
						<value>Medipix</value>
					</list>
				</entry>
			</map>
		</property>

		<property name="detectorTemplateMap">
			<map>
				<entry key="xmapMca" value="${gda.config}/templates/Vortex_Parameters.xml"/>
				<entry key="medipix" value="${gda.config}/templates/Medipix_Parameters.xml"/>
				<entry key="xspress2system" value="${gda.config}/templates/Xspress_Parameters36.xml"/>
				<entry key="xspress3" value="${gda.config}/templates/Xspress3_Parameters.xml" />
				<entry key="xspress3X" value="${gda.config}/templates/Xspress3X_Parameters_ME7.xml" />
				<entry key="xspress4Odin" value="${gda.config}/templates/Xspress4Odin_Parameters_36Ge.xml" />
				<entry key="mythen" value="${gda.config}/templates/Mythen_Parameters.xml" />
			</map>
		</property>
	</bean>

</beans>
