<?xml version="1.0" encoding="UTF-8"?>
<included>
    <!-- display message in Logger Server's console -->
    <appender name="Console" class="ch.qos.logback.core.ConsoleAppender">
        <layout class="ch.qos.logback.classic.PatternLayout">
            <pattern>%d %-5level [%property{GDA_SOURCE}/%property{JVMNAME}] %logger - %m%n%rEx</pattern>
        </layout>
    </appender>
    <consolePlugin />

    <logger name="gda">
        <level value="INFO"/>
    </logger>

    <logger name="gda.device.corba.impl">
        <level value="INFO"/>
    </logger>

    <logger name="gda.device.detector.areadetector">
        <level value="ALL"/>
    </logger>

    <logger name="gda.epics.connection.EpicsController">
        <level value="INFO"/>
    </logger>

    <logger name="gda.jython.corba.impl.JythonImpl">
        <level value="INFO"/>
    </logger>

    <logger name="gda.device.detector.mar345">
        <level value="INFO"/>
    </logger>

    <logger name="gda.device.zebra.ZebraConstantVelocityMoveController">
        <level value="DEBUG"/>
    </logger>

    <logger name="gda.epics.LazyPVFactory">
        <level value="DEBUG"/>
    </logger>

    <!-- 
    <logger name="gda.util.ElogEntry">
        <level value="INFO"/>
        <appender-ref ref="ELOG"/>
    </logger>
     -->
</included>
