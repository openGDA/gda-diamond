<?xml version="1.0" encoding="UTF-8"?>
<included>

    <!-- The include statement in the following java.properties file is not read so you need to reference both -->
    <property file="${gda.config}/properties/${gda.mode}/java.properties" />
    <property file="${gda.config}/properties/common/java.properties" />

    <!-- Socket for forwarding log message to LogPanel in GDA Client or other viewers -->
    <appender name="localhost" class="ch.qos.logback.classic.net.SocketAppender">
        <RemoteHost>localhost</RemoteHost>
        <Port>${gda.client.logging.port}</Port>
        <ReconnectionDelay>10000</ReconnectionDelay>
        <IncludeCallerData>true</IncludeCallerData>
    </appender>

    <appender name="localhost_LogPanel" class="ch.qos.logback.classic.net.SocketAppender">
        <RemoteHost>localhost</RemoteHost>
        <Port>${gda.logPanel.logging.port}</Port>
        <ReconnectionDelay>10000</ReconnectionDelay>
        <IncludeCallerData>true</IncludeCallerData>
    </appender>
</included>
