<?xml version="1.0" encoding="UTF-8"?>
<configuration debug="true"> <!-- Add debug="true" in here to log logback configuration -->

    <!-- The logServer.xml files define which messages are sent to the logging system appenders. -->
    <!-- Levels: ALL TRACE DEBUG INFO WARN ERROR FATAL OFF -->

    <!-- include file is relative to the application directory -->

    <!-- ServerDebugFILE                                                       servers/log/common/logServer.xml -->
    <include file="${gda.install.git.loc}/gda-mt.git/configurations/i15-config/servers/log/common/logServer.xml"/>

    <!-- Console LogPanel DebugPanel                                           servers/log/common/logSharedWithClients.xml -->
    <include file="${gda.install.git.loc}/gda-mt.git/configurations/i15-config/servers/log/common/logSharedWithClients.xml"/>

    <!-- WS001_LogPanel WS002_LogPanel WS005_LogPanel                          servers/log/live/logSharedWithClients.xml-->
    <include file="${gda.install.git.loc}/gda-mt.git/configurations/i15-config/servers/log/live/logSharedWithClients.xml"/>

    <!-- Socket for forwarding log message to LogPanel in GDA Client or other viewers -->
    <appender name="WS001" class="ch.qos.logback.classic.net.SocketAppender">
        <RemoteHost>i15-ws001.diamond.ac.uk</RemoteHost>
        <Port>6789</Port>
        <ReconnectionDelay>10000</ReconnectionDelay>
        <IncludeCallerData>true</IncludeCallerData>
    </appender>
    <appender name="WS002" class="ch.qos.logback.classic.net.SocketAppender">
        <RemoteHost>i15-ws002.diamond.ac.uk</RemoteHost>
        <Port>6789</Port>
        <ReconnectionDelay>10000</ReconnectionDelay>
        <IncludeCallerData>true</IncludeCallerData>
    </appender>
    <appender name="WS005" class="ch.qos.logback.classic.net.SocketAppender">
        <RemoteHost>i15-ws005.diamond.ac.uk</RemoteHost>
        <Port>6789</Port>
        <ReconnectionDelay>10000</ReconnectionDelay>
        <IncludeCallerData>true</IncludeCallerData>
    </appender>
	
