<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:gda="http://www.diamond.ac.uk/schema/gda/gda"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.diamond.ac.uk/schema/gda/gda
		http://www.diamond.ac.uk/schema/gda/gda/gda.xsd">

	<gda:motor id="s5xpos" live-pvName="BL15I-AL-SLITS-05:X:CENTRE"/>
	<gda:motor id="s5xgap" live-pvName="BL15I-AL-SLITS-05:X:SIZE"/>
	<gda:motor id="s5ypos" live-pvName="BL15I-AL-SLITS-05:Y:CENTRE"/>
	<gda:motor id="s5ygap" live-pvName="BL15I-AL-SLITS-05:Y:SIZE"/>

	<bean id="s5" class="gda.device.scannable.scannablegroup.ScannableGroup">
		<property name="groupMembers">
			<list>
				<ref bean="s5xpos"/>
				<ref bean="s5xgap"/>
				<ref bean="s5ypos"/>
				<ref bean="s5ygap"/>
			</list>
		</property>
	</bean>
</beans>
