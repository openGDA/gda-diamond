<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:gda="http://www.diamond.ac.uk/schema/gda/gda"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.diamond.ac.uk/schema/gda/gda
		http://www.diamond.ac.uk/schema/gda/gda/gda.xsd">

	<gda:motor id="s2xgap" initialUserUnits="mm" live-pvName="BL15I-AL-SLITS-02:X:SIZE"/>
	<gda:motor id="s2xpos" initialUserUnits="mm" live-pvName="BL15I-AL-SLITS-02:X:CENTRE"/>
	<gda:motor id="s2ygap" initialUserUnits="mm" live-pvName="BL15I-AL-SLITS-02:Y:SIZE"/>
	<gda:motor id="s2ypos" initialUserUnits="mm" live-pvName="BL15I-AL-SLITS-02:Y:CENTRE"/>

	<bean id="s2" class="gda.device.scannable.scannablegroup.ScannableGroup">
		<property name="groupMembers">
			<list>
				<ref bean="s2xgap"/>
				<ref bean="s2xpos"/>
				<ref bean="s2ygap"/>
				<ref bean="s2ypos"/>
			</list>
		</property>
	</bean>
</beans>