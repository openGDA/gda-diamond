<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans.xsd">

	<!-- Vertical Small KB mirror motors -->

	<bean id="svfmcurve_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL15I-OP-MIRR-03:VFM:CURVE" />
	</bean>

	<bean id="svfmellip_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL15I-OP-MIRR-03:VFM:ELLIP" />
	</bean>

	<bean id="svfmy_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL15I-OP-MIRR-03:VFM:Y" />
	</bean>

	<bean id="svfmpitch_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL15I-OP-MIRR-03:VFM:PITCH" />
	</bean>

	<!-- Horizontal Small KB mirror motors -->

	<bean id="shfmcurve_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL15I-OP-MIRR-03:HFM:CURVE" />
	</bean>

	<bean id="shfmellip_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL15I-OP-MIRR-03:HFM:ELLIP" />
	</bean>

	<bean id="shfmx_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL15I-OP-MIRR-03:HFM:X" />
	</bean>

	<bean id="shfmpitch_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL15I-OP-MIRR-03:HFM:PITCH" />
	</bean>
</beans>
