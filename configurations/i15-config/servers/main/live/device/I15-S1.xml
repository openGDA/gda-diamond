<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

	<bean id="S1xminusMotor" class="gda.device.motor.EpicsMotor">
		<property name="deviceName" value="S1.XMINUS" />
	</bean>

	<bean id="S1xplusMotor" class="gda.device.motor.EpicsMotor">
		<property name="deviceName" value="S1.XPLUS" />
	</bean>

	<bean id="S1yminusMotor" class="gda.device.motor.EpicsMotor">
		<property name="deviceName" value="S1.YMINUS" />
	</bean>

	<bean id="S1yplusMotor" class="gda.device.motor.EpicsMotor">
		<property name="deviceName" value="S1.YPLUS" />
	</bean>

	<bean id="S1xposMotor" class="gda.device.motor.EpicsMotor">
		<property name="deviceName" value="S1.XCENTRE" />
		<property name="local" value="true"/>
	</bean>

	<bean id="S1xgapMotor" class="gda.device.motor.EpicsMotor">
		<property name="deviceName" value="S1.XSIZE" />
		<property name="local" value="true"/>
	</bean>

	<bean id="S1yposMotor" class="gda.device.motor.EpicsMotor">
		<property name="deviceName" value="S1.YCENTRE" />
		<property name="local" value="true"/>
	</bean>

	<bean id="S1ygapMotor" class="gda.device.motor.EpicsMotor">
		<property name="deviceName" value="S1.YSIZE" />
		<property name="local" value="true"/>
	</bean>
</beans>
