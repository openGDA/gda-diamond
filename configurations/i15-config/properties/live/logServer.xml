<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true" scanPeriod="10 seconds" debug="true">

    <!-- The logServer.xml files define which messages are sent to the logging system appenders. -->
    <!-- Levels: ALL TRACE DEBUG INFO WARN ERROR FATAL OFF -->

    <!-- include file is relative to the application directory -->

    <!-- ServerDebugFILE RemoteLoggerListener -->
    <include file="${gda.config}/properties/_common/logServer.xml"/>

    <root>
        <level value="ALL"/>
        <appender-ref ref="ServerDebugFILE"/>
        <appender-ref ref="RemoteLoggerListener" />
     </root>
</configuration>
