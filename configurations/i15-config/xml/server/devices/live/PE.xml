<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

	<!-- AD hardware -->

	<bean id="pe_adbase" class="gda.device.detector.areadetector.v17.impl.ADBaseImpl">
		<property name="basePVName" value="BL15I-EA-DET-01:CAM:" />
	</bean>

	<bean id="pe_ndfile" class="gda.device.detector.areadetector.v17.impl.NDFileImpl">
		<!-- Should we use a <property name="pvProvider" ref="..._" /> instead of a basePVName? -->
		<property name="basePVName" value="BL15I-EA-DET-01:TIF:" />
		<property name="resetToInitialValues" value="false" />
		<!-- Is a <property name="pluginBase" ref="..." /> required here too? -->
		<property name="filePathConverter">
			<bean class="uk.ac.gda.util.UnixToWindowsFilePathConverter">
				<property name="unixSubString" value="/dls/i15/data" />
				<property name="windowsSubString" value="z:\data" />
			</bean>
		</property>
	</bean>


	<!-- NXDetector collection strategies -->

	<!-- SingleExposureStandard(ADBase adBase, double readoutTime)
				Negative readoutTime disables AcquirePeriod
	 -->
	<bean id="pe_nxcollectionstrategy"
		class="gda.device.detector.addetector.triggering.SingleExposureStandard">
		<constructor-arg ref="pe_adbase" />
		<constructor-arg value="-1" />
	</bean>

	<!-- SingleExposureEpicsShutter(ADBase adBase, double readoutTime,
			String shutterPV, String shutterOpenValue, double shutterOpenDelay,
			String shutterCloseValue, double shutterCloseDelay)
				Negative readoutTime disables AcquirePeriod
	 -->
	<bean id="peFS_nxcollectionStrategy"
		class="gda.device.detector.addetector.triggering.SingleExposureEpicsShutter">
		<constructor-arg ref="pe_adbase" />
		<constructor-arg value="-1" />
		<constructor-arg value="BL15I-EA-FSHTR-01:OVERRIDE" />
		<constructor-arg value="Open" />
		<constructor-arg value="1.0" />
		<constructor-arg value="Close" />
		<constructor-arg value="1.0" />
	</bean>

	<!-- NXDetector file writers -->

	<!-- SingleImagePerFileWriter(String detectorName)
	 -->
	<bean id="pe_nxfilewriter_for_scans"
		class="gda.device.detector.nxdetector.plugin.areadetector.filewriter.SingleImagePerFileWriter">
		<constructor-arg value="pe" />
		<property name="ndFile" ref="pe_ndfile" />
		<property name="keyNameForMetadataPathTemplate" value="pe_path_template" />
	</bean>

	<!-- SingleImagePerFileWriterWithNumTracker(String detectorName)
	 -->
	<bean id="pe_nxfilewriter_for_snaps"
		class="gda.device.detector.nxdetector.plugin.areadetector.filewriter.SingleImagePerFileWriterWithNumTracker">
		<constructor-arg value="pe" />
		<property name="ndFile" ref="pe_ndfile" />
		<property name="numTrackerExtension" value="pesnaps" />
		<property name="keyNameForMetadataPathTemplate" value="pe_path_template" />
	</bean>

	<!-- NXDetectors -->

	<bean id="pedet" class="gda.device.detector.NXDetector">
		<property name="name" value="pedet" />
		<property name="collectionStrategy" ref="pe_nxcollectionstrategy" />
		<property name="additionalPluginList">
			<list>
				<ref bean="pe_nxfilewriter_for_scans" />
			</list>
		</property>
	</bean>

	<bean id="pedet_for_snaps" class="gda.device.detector.NXDetector">
		<property name="name" value="pedet_for_snaps" />
		<property name="collectionStrategy" ref="pe_nxcollectionstrategy" />
		<property name="additionalPluginList">
			<list>
				<ref bean="pe_nxfilewriter_for_snaps" />
			</list>
		</property>
	</bean>

	<bean id="peFSdet" class="gda.device.detector.NXDetector">
		<property name="name" value="peFSdet" />
		<property name="collectionStrategy" ref="peFS_nxcollectionStrategy" />
		<property name="additionalPluginList">
			<list>
				<ref bean="pe_nxfilewriter_for_scans" />
			</list>
		</property>
	</bean>

	<bean id="peFSdet_for_snaps" class="gda.device.detector.NXDetector">
		<property name="name" value="peFSdet_for_snaps" />
		<property name="collectionStrategy" ref="peFS_nxcollectionStrategy" />
		<property name="additionalPluginList">
			<list>
				<ref bean="pe_nxfilewriter_for_snaps" />
			</list>
		</property>
	</bean>

</beans>