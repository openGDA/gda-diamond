<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

	<!-- Space fab motors -->
	
	<bean id="sxMotor" class="gda.device.motor.EpicsMotor">
		<property name="deviceName" value="SFAB.X" />
		<property name="local" value="true"/>
	</bean>

	<bean id="syMotor" class="gda.device.motor.EpicsMotor">
		<property name="deviceName" value="SFAB.Y" />
		<property name="local" value="true"/>
	</bean>

	<bean id="szMotor" class="gda.device.motor.EpicsMotor">
		<property name="deviceName" value="SFAB.Z" />
		<property name="local" value="true"/>
	</bean>

	<bean id="spitchMotor" class="gda.device.motor.EpicsMotor">
		<property name="deviceName" value="SFAB.PITCH" />
		<property name="local" value="true"/>
	</bean>

	<bean id="syawMotor" class="gda.device.motor.EpicsMotor">
		<property name="deviceName" value="SFAB.YAW" />
		<property name="local" value="true"/>
	</bean>

	<bean id="srollMotor" class="gda.device.motor.EpicsMotor">
		<property name="deviceName" value="SFAB.ROLL" />
		<property name="local" value="true"/>
	</bean>

	<bean id="sx" class="gda.device.scannable.ScannableMotor">
		<property name="motor" ref="sxMotor" />
	</bean>

	<bean id="sy" class="gda.device.scannable.ScannableMotor">
		<property name="motor" ref="syMotor" />
	</bean>

	<bean id="sz" class="gda.device.scannable.ScannableMotor">
		<property name="motor" ref="szMotor" />
	</bean>

	<bean id="spitch" class="gda.device.scannable.ScannableMotor">
		<property name="motor" ref="spitchMotor" />
	</bean>

	<bean id="syaw" class="gda.device.scannable.ScannableMotor">
		<property name="motor" ref="syawMotor" />
	</bean>

	<bean id="sroll" class="gda.device.scannable.ScannableMotor">
		<property name="motor" ref="srollMotor" />
	</bean>

	<bean id="sfab" class="gda.device.scannable.scannablegroup.ScannableGroup">
		<property name="groupMembers">
			<list>
				<ref bean="sx" />
				<ref bean="sy" />
				<ref bean="sz" />
				<ref bean="spitch" />
				<ref bean="syaw" />
				<ref bean="sroll" />
			</list>
		</property>
	</bean>
</beans>
