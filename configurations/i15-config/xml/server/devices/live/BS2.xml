<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

	<bean id="bs2x_motor" class="gda.device.motor.EpicsMotor">
		<property name="deviceName" value="BS2.X" />
		<property name="local" value="true"/>
	</bean>

	<bean id="bs2x" class="gda.device.scannable.ScannableMotor">
		<property name="motor" ref="bs2x_motor" />
	</bean>

	<bean id="bs2y_motor" class="gda.device.motor.EpicsMotor">
		<property name="deviceName" value="BS2.Y" />
		<property name="local" value="true"/>
	</bean>

	<bean id="bs2y" class="gda.device.scannable.ScannableMotor">
		<property name="motor" ref="bs2y_motor" />
	</bean>
</beans>
