<?xml version="1.0" encoding="UTF-8"?>
<configuration debug="true"> <!-- Add debug="true" in here to log logback configuration -->

    <!-- The logPanel.xml file defines which messages sent to the appenders are displayed on the log panel. -->
    <!-- Levels: ALL TRACE DEBUG INFO WARN ERROR FATAL OFF -->

    <appender name="LogPanel" class="gda.util.LogPanelAppender">
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>ALL</level>
        </filter>
        <layout class="ch.qos.logback.classic.PatternLayout">
            <pattern>%d %-5level [%property{GDA_SOURCE}/%property{JVMNAME}] %logger - %m%n%ex</pattern>
        </layout>
    </appender>

    <root>
        <level value="ALL"/>
        <appender-ref ref="LogPanel"/>
    </root>
</configuration>
