<?xml version="1.0" encoding="UTF-8"?>
<configuration debug="true"> <!-- Add debug="true" in here to log logback configuration -->

    <!-- The logClient.xml files define which messages are sent to the logging system appenders. -->
    <!-- Levels: ALL TRACE DEBUG INFO WARN ERROR FATAL OFF -->

    <!-- ClientDebugFILE                                                       clients/main/common/logClient.xml -->
    <include file="${gda.install.git.loc}/gda-mt.git/configurations/i15-config/clients/main/common/logClient.xml"/>

    <!-- Console                                                               servers/log/common/logSharedWithClients.xml -->
    <include file="${gda.install.git.loc}/gda-mt.git/configurations/i15-config/servers/log/common/logSharedWithClients.xml"/>

    <root>
        <level value="INFO"/>
        <appender-ref ref="Console"/>
        <appender-ref ref="ClientDebugFILE"/>
    </root>
</configuration>
