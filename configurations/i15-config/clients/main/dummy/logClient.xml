<?xml version="1.0" encoding="UTF-8"?>
<configuration debug="true"> <!-- Add debug="true" in here to log logback configuration -->

    <!-- The logClient.xml files define which messages are sent to the logging system appenders. -->
    <!-- Levels: ALL TRACE DEBUG INFO WARN ERROR FATAL OFF -->

    <!-- Client include files are relative to the application directory -->

    <!-- ClientDebugFILE                                                 clients/main/common/logClient.xml -->
    <include file="../workspace_git/gda-mt.git/configurations/i15-config/clients/main/common/logClient.xml"/>

    <!-- Console LogPanel DebugPanel                                     servers/log/common/logSharedWithClients.xml -->
    <include file="../workspace_git/gda-mt.git/configurations/i15-config/servers/log/common/logSharedWithClients.xml"/>

    <!-- localhost localhost_LogPanel                                    servers/log/dummy/logSharedWithClients.xml-->
    <include file="../workspace_git/gda-mt.git/configurations/i15-config/servers/log/dummy/logSharedWithClients.xml"/>

    <root>
        <level value="INFO"/>
        <appender-ref ref="Console"/>
        <appender-ref ref="LogPanel"/>
        <appender-ref ref="ClientDebugFILE"/>
        <appender-ref ref="localhost_LogPanel"/>
    </root>
</configuration>
