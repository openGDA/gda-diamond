<?xml version="1.0" encoding="UTF-8"?>
<configuration debug="true"> <!-- Add debug="true" in here to log logback configuration -->

    <!-- The logClient.xml files define which messages are sent to the logging system appenders. -->
    <!-- Levels: ALL TRACE DEBUG INFO WARN ERROR FATAL OFF -->

    <!-- include file is relative to the application directory -->

    <!-- 	DebugFILE                                                    clients/main/common/logClient.xml -->
    <include file="../workspace_git/gda-mt.git/configurations/i15-config/clients/main/common/logClient.xml"/>

    <!--  Console                                                        servers/log/common/logSharedWithClients.xml -->
    <include file="../workspace_git/gda-mt.git/configurations/i15-config/servers/log/common/logSharedWithClients.xml"/>

    <!--  WS001_LogPanel WS005_LogPanel WS005_LogPanel                   servers/log/live/logSharedWithClients.xml-->
    <include file="../workspace_git/gda-mt.git/configurations/i15-config/servers/log/live/logSharedWithClients.xml"/>

    <root>
        <level value="INFO"/>
        <appender-ref ref="Console"/>
        <appender-ref ref="LogPanel"/>
        <appender-ref ref="DebugFILE"/>
        <appender-ref ref="WS001_LogPanel"/>
        <appender-ref ref="WS002_LogPanel"/>
        <appender-ref ref="WS005_LogPanel"/>
    </root>
</configuration>
