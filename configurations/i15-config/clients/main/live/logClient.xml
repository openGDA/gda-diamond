<?xml version="1.0" encoding="UTF-8"?>
<configuration debug="true"> <!-- Add debug="true" in here to log logback configuration -->

    <!-- enable this if you want log message appear on local console -->
    <appender name="LogPanel" class="gda.util.LogPanelAppender">
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>INFO</level>
        </filter>
        <layout class="ch.qos.logback.classic.PatternLayout">
            <pattern>%date %-5level [%logger{36}] - %m%n</pattern>
        </layout>
    </appender>

    <appender name="DebugPanel" class="gda.util.DebugPanelAppender">
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>DEBUG</level>
        </filter>
        <layout class="ch.qos.logback.classic.PatternLayout">
            <pattern>%date %-5level [%logger] - %m%n</pattern>
        </layout>
    </appender>

    <appender name="DebugFILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <File>${gda.logs.dir}/gda_client.${user.name}.log</File>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <FileNamePattern>${gda.logs.dir}/gda_client.%d{yyyy-MM-dd}.${user.name}.log.gz</FileNamePattern>
        </rollingPolicy>
        <layout class="ch.qos.logback.classic.PatternLayout">
            <pattern>%d %-5level [%logger] %ex - %m%n</pattern>
        </layout>
    </appender>

    <appender name="WS001_LogPanel" class="ch.qos.logback.classic.net.SocketAppender">
        <RemoteHost>i15-ws001.diamond.ac.uk</RemoteHost>
        <Port>6790</Port>
        <ReconnectionDelay>10000</ReconnectionDelay>
        <IncludeCallerData>true</IncludeCallerData>
    </appender>

    <appender name="WS002_LogPanel" class="ch.qos.logback.classic.net.SocketAppender">
        <RemoteHost>i15-ws002.diamond.ac.uk</RemoteHost>
        <Port>6790</Port>
        <ReconnectionDelay>10000</ReconnectionDelay>
        <IncludeCallerData>true</IncludeCallerData>
    </appender>

    <appender name="WS005_LogPanel" class="ch.qos.logback.classic.net.SocketAppender">
        <RemoteHost>i15-ws005.diamond.ac.uk</RemoteHost>
        <Port>6790</Port>
        <ReconnectionDelay>10000</ReconnectionDelay>
        <IncludeCallerData>true</IncludeCallerData>
    </appender>

    <logger name="gda">
        <level value="INFO"/>
    </logger>

    <logger name="uk.ac.diamond.scisoft.analysis.rcp.plotting.PlotWindowManager">
        <level value="OFF"/>
    </logger>

    <root>
        <level value="INFO"/>
        <appender-ref ref="Console"/>
        <appender-ref ref="LogPanel"/>
        <appender-ref ref="DebugFILE"/>
        <appender-ref ref="WS001_LogPanel"/>
        <appender-ref ref="WS002_LogPanel"/>
        <appender-ref ref="WS005_LogPanel"/>
    </root>
</configuration>
