<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="peADController" class="uk.ac.gda.epics.adviewer.ADControllerImpl">
		<property name="imageNDStats" ref="peAD_summary_stat" />
		<property name="liveViewNDProc" ref="peAD_summary_proc" />
		<property name="imageNDArray" ref="peAD_summary_arr" />
		<property name="imageHistSize" value="500" />
		<property name="imageMin" value="0" />
		<property name="imageMax" value="65535" />
		<property name="detectorName" value="pe" />
		<property name="adBase" ref="peAD_config_base" />
		<property name="ffmpegStream" ref="peAD_summary_mjpg" />
		<property name="ffmpegImageOutHeightMax" value="1200" />
		<property name="ffmpegImageOutWidthMax" value="1600" />
		<property name="cameraImageWidthMax" value="2069" />
		<property name="cameraImageHeightMax" value="1793" />
		<property name="imageNDROI" ref="peAD_summary_roi"/>
		<property name="serviceName" value="pe"/>
	</bean>

	<bean id="peViewCreator" class="uk.ac.gda.epics.adviewer.views.ViewCreatorImpl">
		<property name="adController" ref="peADController" />
	</bean>

	<bean id="peAD_dictionary" class="uk.ac.gda.util.dictionary.MapBasedDictionary">
		<property name="map">
			<map>
				<entry key="SERVICE_NAME" value="pe" />
			</map>
		</property>
	</bean>

	<bean class="gda.rcp.util.OSGIServiceRegister">
		<property name="class" value="uk.ac.gda.epics.adviewer.ADController" />
		<property name="service" ref="peADController" />
		<property name="properties" ref="peAD_dictionary" />
	</bean>

	<bean class="gda.rcp.util.OSGIServiceRegister">
		<property name="class" value="uk.ac.gda.epics.adviewer.views.ViewCreator" />
		<property name="service" ref="peViewCreator" />
		<property name="properties" ref="peAD_dictionary" />
	</bean>
</beans>