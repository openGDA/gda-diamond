<?xml version="1.0" encoding="UTF-8"?>
<included>

    <!-- The logClient.xml files define which messages are sent to the logging system appenders. -->
    <!-- Levels: ALL TRACE DEBUG INFO WARN ERROR FATAL OFF -->

    <appender name="ClientDebugFILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <File>${gda.logs.dir}/gda_client.${user.name}.log</File>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <FileNamePattern>${gda.logs.dir}/gda_client.%d{yyyy-MM-dd}.${user.name}.log.gz</FileNamePattern>
        </rollingPolicy>
        <layout class="ch.qos.logback.classic.PatternLayout">
            <pattern>%d %-5level [%property{GDA_SOURCE}/%property{JVMNAME}] %logger - %m%n%ex</pattern>
        </layout>
    </appender>

    <logger name="uk.ac.diamond.scisoft.analysis.rcp.plotting.PlotWindowManager">
        <level value="OFF"/>
    </logger>
</included>
