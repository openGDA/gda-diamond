<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xmlns:util="http://www.springframework.org/schema/util"
	xmlns:corba="http://www.diamond.ac.uk/schema/gda/corba"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd 
	    http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-3.0.xsd
		http://www.diamond.ac.uk/schema/gda/corba platform:/resource/uk.ac.gda.core/src/gda/spring/namespaces/corba/gda-corba-1.1.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.2.xsd">

	

	<bean id="plot_server" class="uk.ac.diamond.scisoft.analysis.plotserver.PlotServerBase" />
	
	<import resource="scanDataPointServer.xml"/>
	<import resource="commandQueueProcessor.xml" />
	<import resource="CommandServer.xml" />

	<import resource="dataFileMonitor.xml"/>
	<import resource="dataArchieval.xml"/>
	<import resource="dataWriter.xml"/>
	<import resource="pixiumMetadata.xml"/>
	
	<import resource="imageProcessors.xml"/>

<!-- 	<import resource="RCPController.xml"/> -->

	<bean id="visitPathConstructor" class="gda.data.ObservablePathConstructor">
		<property name="template" value="${gda.data.scan.datawriter.datadir}" />
		<property name="gdaMetadata" ref="GDAMetadata" />
		<property name="local" value="true" />
	</bean>
	
	 <!-- ScriptControllers must be after command_server -->
    <import resource="scriptControllers.xml" />
 
	<bean class="gda.spring.FindableNameSetterPostProcessor" />
	<bean class="gda.spring.SingletonRegistrationPostProcessor" />
	<!--enable types supported by the PropertyEditors listed in the GdaPropertyEditorRegistrar class -->
	<import resource="classpath:gda/spring/propertyeditors/registration.xml" />
	
 	<!-- corba export must be the final bean. Later beans are not exported via Corba -->
	<corba:export namespace="i11-1" />
	
</beans>
