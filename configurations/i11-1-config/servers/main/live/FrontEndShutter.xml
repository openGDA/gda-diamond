<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">
	
	<bean id="feshutter" class="gda.spring.EpicsPneumaticFactoryBean">
		<property name="deviceName" value="FE.BEAM" />
		<property name="statusPvIndicatesPositionOnly" value="true"/>
	</bean>
	<bean id="portshutter" class="gda.device.enumpositioner.EpicsSimpleMbbinary">
		<property name="deviceName" value="FE.SHTR1"/>
	</bean>

</beans>
