<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">

	<!-- Area Detector Motors (individual Motions) -->
	<bean id="detectorX_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL11J-MO-DET-01:X"/>
	</bean>
	<bean id="detectorY_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL11J-MO-DET-01:Y"/>
	</bean>
	<bean id="detectorZ_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL11J-MO-DET-01:Z"/>
	</bean>
</beans>
