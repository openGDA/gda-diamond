<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">

	<!-- Diffractometer Motors -->
	<bean id="tth_motor" class="gda.device.motor.EpicsMotor">
		<property name="deviceName" value="DIFF.2THETA"/>
	</bean>
	<bean id="theta_motor" class="gda.device.motor.EpicsMotor">
		<property name="deviceName" value="DIFF.THETA"/>
	</bean>
	<bean id="delta_motor" class="gda.device.motor.EpicsMotor">
		<property name="deviceName" value="DIFF.DELTA"/>
	</bean>
	<bean id="trans_motor" class="gda.device.motor.EpicsMotor">
		<property name="deviceName" value="DIFF.TRANS"/>
	</bean>
	<bean id="y1_motor" class="gda.device.motor.EpicsMotor">
		<property name="deviceName" value="DIFF.Y1"/>
	</bean>
	<bean id="y2_motor" class="gda.device.motor.EpicsMotor">
		<property name="deviceName" value="DIFF.Y2"/>
	</bean>
	<bean id="y3_motor" class="gda.device.motor.EpicsMotor">
		<property name="deviceName" value="DIFF.Y3"/>
	</bean>
	<!-- Sample Positioner motor -->
	<bean id="spos_motor" class="gda.device.motor.EpicsMotor">
		<property name="deviceName" value="DIFF.SPOS"/>
	</bean>
</beans>
