<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

	<!-- Strip selection -->
	<bean id="m1stripe" class="gda.spring.EpicsPositionerFactoryBean">
		<property name="deviceName" value="M1.STRIPE"/>
	</bean>
	<!-- Mirror M1 Motors (individual Motions) -->
	<bean id="m1bend_motor" class="gda.device.motor.EpicsMotor">
		<property name="deviceName" value="M1.M1BEND"/>
	</bean>
	<bean id="m1pitch_motor" class="gda.device.motor.EpicsMotor">
		<property name="deviceName" value="M1.M1PITCH"/>
	</bean>
	<bean id="m1roll_motor" class="gda.device.motor.EpicsMotor">
		<property name="deviceName" value="M1.M1ROLL"/>
	</bean>
	<bean id="m1x_motor" class="gda.device.motor.EpicsMotor">
		<property name="deviceName" value="M1.M1X"/>
	</bean>
	<bean id="m1y_motor" class="gda.device.motor.EpicsMotor">
		<property name="deviceName" value="M1.M1Y"/>
	</bean>
	<bean id="m2x_motor" class="gda.device.motor.EpicsMotor">
		<property name="deviceName" value="M1.M2X"/>
	</bean>
	<bean id="m2y_motor" class="gda.device.motor.EpicsMotor">
		<property name="deviceName" value="M1.M2Y"/>
	</bean>
</beans>
