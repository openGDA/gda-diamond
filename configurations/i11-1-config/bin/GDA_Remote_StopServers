#! /bin/bash
if [ ! -n "$BEAMLINE" ]; 
then
  echo "Please set BEAMLINE environment variable."
  exit 1
fi
echo "Stopping GDA server processes..."

SSHOPTS="-o StrictHostKeyChecking=no -o BatchMode=yes"

ssh $SSHOPTS -i /$SOFTWAREFOLDER/$BEAMLINE/software/gda_versions/var/gdastop.key gda2@${BEAMLINE}-control.diamond.ac.uk
