<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:util="http://www.springframework.org/schema/util"
	xmlns:tx="http://www.springframework.org/schema/tx" xmlns:aop="http://www.springframework.org/schema/aop"
	xmlns:corba="http://www.diamond.ac.uk/schema/gda/corba"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.diamond.ac.uk/schema/gda/corba
		http://www.diamond.ac.uk/schema/gda/corba/gda-corba-1.1.xsd">

	<import resource="file://${gda.core.dir}/clients/_common/plot_server.xml" />
	<import resource="scanDataPointServer.xml"/>
	<import resource="commandQueueProcessor.xml"/>
	<import resource="serverFileListener.xml"/>
	<import resource="commandRunner.xml"/>
	<import resource="batonStateProvider.xml"/>
	<!-- sample stage control -->
	<import resource="live_controls.xml"/>
	<import resource="statusView.xml"/>
	
	<!-- new solstice scanning sourced from dls-config -->
	<import resource="file://${gda.facility.dir}/clients/_common/stage_controls_tree.xml"/>
	<!-- mapping perspective -->
	<import resource="mapping.xml"/>

	<bean class="gda.factory.corba.util.AdapterFactory">
		<constructor-arg index="0" value="${gda.factory.factoryName}" />
		<constructor-arg index="1">
			<bean class="gda.spring.NetServiceFactoryBean" />
		</constructor-arg>
	</bean>

	<bean class="gda.spring.FindableNameSetterPostProcessor" />
	
</beans>
