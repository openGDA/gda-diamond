<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans.xsd">


	<!-- D3A Stick Positioner -->
	<bean id="d3a" class="gda.device.enumpositioner.EpicsPositionerCallback">
		<property name="recordName" value="BL21I-DI-PHDGA-03:MP" />
	</bean>

	<!-- Stick motor -->
	<bean id="d3amotor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL21I-DI-PHDGA-03:POS" />
		<property name="local" value="true" />
	</bean>


	<!-- Area detector camera -->
	<bean id="d3acamAD" class="gda.device.detector.areadetector.v17.impl.ADBaseImpl">
		<property name="basePVName" value="BL21I-DI-DCAM-03:CAM:" />
		<property name="initialDataType" value="UInt8" />
	</bean>

	<bean id="d3acamArray" class="gda.device.detector.areadetector.v17.impl.NDArrayImpl">
		<property name="basePVName" value="BL21I-DI-DCAM-03:ARR:" />
		<property name="pluginBase">
			<bean class="gda.device.detector.areadetector.v17.impl.NDPluginBaseImpl">
				<property name="basePVName" value="BL21I-DI-DCAM-03:ARR:" />
			</bean>
		</property>
	</bean>

	<bean id="d3acam" class="gda.device.detector.addetector.ADCameraDetector">
		<property name="basePVName" value="BL21I-DI-DCAM-03:" />
		<property name="areaDetector" ref="d3acamAD" />
		<property name="array" ref="d3acamArray" />
		<property name="local" value="true" />
	</bean>


	<!-- Camera stats total intensity -->
	<bean id="d3acamStatTotal" class="gda.device.scannable.SimplePVScannable">
		<property name="pvName" value="BL21I-DI-DCAM-03:STAT:Total_RBV" />
		<property name="local" value="true" />
	</bean>
	
</beans>
