<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans.xsd">


	<!-- D2 Stick Positioner -->
	<bean id="d2" class="gda.device.enumpositioner.EpicsPositionerCallback">
		<property name="recordName" value="BL21I-DI-PHDGN-02:MP" />
	</bean>


	<!-- Area detector camera -->
	<bean id="d2camAD" class="gda.device.detector.areadetector.v17.impl.ADBaseImpl">
		<property name="basePVName" value="BL21I-DI-DCAM-02:CAM:" />
		<property name="initialDataType" value="UInt8" />
	</bean>

	<bean id="d2camArray" class="gda.device.detector.areadetector.v17.impl.NDArrayImpl">
		<property name="basePVName" value="BL21I-DI-DCAM-02:ARR:" />
		<property name="pluginBase">
			<bean class="gda.device.detector.areadetector.v17.impl.NDPluginBaseImpl">
				<property name="basePVName" value="BL21I-DI-DCAM-02:ARR:" />
			</bean>
		</property>
	</bean>

	<bean id="d2cam" class="gda.device.detector.addetector.ADCameraDetector">
		<property name="basePVName" value="BL21I-DI-DCAM-02:" />
		<property name="areaDetector" ref="d2camAD" />
		<property name="array" ref="d2camArray" />
		<property name="local" value="true" />
	</bean>


	<!-- Camera stats total intensity -->
	<bean id="d2camStatTotal" class="gda.device.scannable.SimplePVScannable">
		<property name="pvName" value="BL21I-DI-DCAM-02:STAT:Total_RBV" />
		<property name="local" value="true" />
	</bean>

</beans>
