<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans.xsd">


	<!-- DGN Stick Positioner -->
	<bean id="diago01mp" class="gda.spring.EpicsEnumPositionerFactoryBean">
		<property name="pvBase" value="BL21I-DI-DIAGO-01:MP" />
		<property name="local" value="true" />
	</bean>

	<!-- Camera acquire status (switch acquisition on & off) -->
	<bean id="dcam01acquire" class="gda.device.scannable.SimplePVScannable">
		<property name="pvName" value="BL21I-DI-DCAM-01:CAM:Acquire" />
		<property name="local" value="true" />
	</bean>

	<!-- Camera stats total intensity -->
	<bean id="dcam01statTotal" class="gda.device.scannable.SimplePVScannable">
		<property name="pvName" value="BL21I-DI-DCAM-01:STAT:Total_RBV" />
		<property name="local" value="true" />
	</bean>
	
</beans>
