<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans.xsd">


	<!-- DGN Stick Positioner -->
	<bean id="dgnpos" class="gda.device.enumpositioner.EpicsPositionerCallback">
		<property name="recordName" value="BL21I-DI-DIAGO-01:MP" />
	</bean>

	<!-- Stick motor -->
	<bean id="dgnmotor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL21I-DI-DIAGO-01:POS" />
		<property name="local" value="true" />
	</bean>


	<!-- Area detector camera -->
	<bean id="dgncamAD" class="gda.device.detector.areadetector.v17.impl.ADBaseImpl">
		<property name="basePVName" value="BL21I-DI-DCAM-00:CAM:" />
		<property name="initialDataType" value="UInt8" />
	</bean>

	<bean id="dgncamArray" class="gda.device.detector.areadetector.v17.impl.NDArrayImpl">
		<property name="basePVName" value="BL21I-DI-DCAM-00:ARR:" />
		<property name="pluginBase">
			<bean class="gda.device.detector.areadetector.v17.impl.NDPluginBaseImpl">
				<property name="basePVName" value="BL21I-DI-DCAM-00:ARR:" />
			</bean>
		</property>
	</bean>

	<bean id="dgncam" class="gda.device.detector.addetector.ADCameraDetector">
		<property name="basePVName" value="BL21I-DI-DCAM-00:" />
		<property name="areaDetector" ref="dgncamAD" />
		<property name="array" ref="dgncamArray" />
		<property name="local" value="true" />
	</bean>


	<!-- Camera stats total intensity -->
	<bean id="dgncamStatTotal" class="gda.device.scannable.SimplePVScannable">
		<property name="pvName" value="BL21I-DI-DCAM-00:STAT:Total_RBV" />
		<property name="local" value="true" />
	</bean>
	
</beans>
