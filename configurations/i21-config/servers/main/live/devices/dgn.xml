<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans.xsd">


	<!-- DGN Stick Positioner -->
	<bean id="diago01mp" class="gda.device.enumpositioner.EpicsPositionerCallback">
		<property name="recordName" value="BL21I-DI-DIAGO-01:MP" />
	</bean>


	<!-- Area detector camera -->
	<bean id="dcam01ad" class="gda.device.detector.areadetector.v17.impl.ADBaseImpl">
		<property name="basePVName" value="BL21I-DI-DCAM-01:CAM:" />
		<property name="initialDataType" value="UInt8" />
	</bean>

	<bean id="dcam01array" class="gda.device.detector.areadetector.v17.impl.NDArrayImpl">
		<property name="basePVName" value="BL21I-DI-DCAM-01:ARR:" />
		<property name="pluginBase">
			<bean class="gda.device.detector.areadetector.v17.impl.NDPluginBaseImpl">
				<property name="basePVName" value="BL21I-DI-DCAM-01:ARR:" />
			</bean>
		</property>
	</bean>

	<bean id="dcam01" class="gda.device.detector.addetector.ADCameraDetector">
		<property name="basePVName" value="BL21I-DI-DCAM-01:" />
		<property name="areaDetector" ref="dcam01ad" />
		<property name="array" ref="dcam01array" />
		<property name="local" value="true" />
	</bean>


	<!-- Camera stats total intensity -->
	<bean id="dcam01statTotal" class="gda.device.scannable.SimplePVScannable">
		<property name="pvName" value="BL21I-DI-DCAM-01:STAT:Total_RBV" />
		<property name="local" value="true" />
	</bean>
	
</beans>
