<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans.xsd">


	<!-- D1 Stick Positioner -->
	<bean id="d1" class="gda.device.enumpositioner.EpicsPositionerCallback">
		<property name="recordName" value="BL21I-DI-PHDGN-01:MP" />
	</bean>

	<!-- Stick motor -->
	<bean id="d1motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL21I-DI-PHDGN-01:POS" />
		<property name="local" value="true" />
	</bean>


	<!-- Area detector camera -->
	<bean id="d1camAD" class="gda.device.detector.areadetector.v17.impl.ADBaseImpl">
		<property name="basePVName" value="BL21I-DI-DCAM-01:CAM:" />
		<property name="initialDataType" value="UInt8" />
	</bean>

	<bean id="d1camArray" class="gda.device.detector.areadetector.v17.impl.NDArrayImpl">
		<property name="basePVName" value="BL21I-DI-DCAM-01:ARR:" />
		<property name="pluginBase">
			<bean class="gda.device.detector.areadetector.v17.impl.NDPluginBaseImpl">
				<property name="basePVName" value="BL21I-DI-DCAM-01:ARR:" />
			</bean>
		</property>
	</bean>

	<bean id="d1cam" class="gda.device.detector.addetector.ADCameraDetector">
		<property name="basePVName" value="BL21I-DI-DCAM-01:" />
		<property name="areaDetector" ref="d1camAD" />
		<property name="array" ref="d1camArray" />
		<property name="local" value="true" />
	</bean>


	<!-- Camera stats total intensity -->
	<bean id="d1camStatTotal" class="gda.device.scannable.SimplePVScannable">
		<property name="pvName" value="BL21I-DI-DCAM-01:STAT:Total_RBV" />
		<property name="local" value="true" />
	</bean>
	
</beans>
