<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:util="http://www.springframework.org/schema/util"
	xmlns:gda="http://www.diamond.ac.uk/schema/gda/gda" xmlns:corba="http://www.diamond.ac.uk/schema/gda/corba"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
		http://www.diamond.ac.uk/schema/gda/corba
		http://www.diamond.ac.uk/schema/gda/corba/gda-corba-1.1.xsd
		http://www.diamond.ac.uk/schema/gda/gda
		http://www.diamond.ac.uk/schema/gda/gda/gda-gda-1.1.xsd
		http://www.springframework.org/schema/context
		http://www.springframework.org/schema/context/spring-context.xsd">

	<import resource="file://${gda.core.dir}/clients/_common/plot_server.xml" />
	<import resource="GDAMetadata.xml"/>
	<import resource="scanDataPointServer.xml"/>
	<import resource="commandQueueProcessor.xml"/>
	<import resource="topupWatchdog.xml"/>
	<import resource="expressionWatchdog.xml"/>
	<import resource="xRayWatchdog.xml"/>

	<import resource="file://${gda.facility.dir}/servers/${gda.mode}/icat_xml_creator.xml" />
	<import resource="file://${gda.facility.dir}/servers/_common/file_registrar.xml" />

	<import resource="terminal_logger.xml"/>
	<import resource="dataWriter.xml"/>

	<import resource="devices/_all.xml"/>

	<!-- dummy beans from p45-config, can be used for testing solstice scanning. -->
	<import resource="../../../../p45-config/servers/main/_common/det.xml"/>
	<import resource="../../../../p45-config/servers/main/_common/mapping_motors.xml"/>
	<import resource="../../../../p45-config/servers/main/_common/mandelbrotDetector.xml"/>
	<import resource="../../../../p45-config/servers/main/_common/darkImageDetector.xml"/>
	<import resource="../../../../p45-config/servers/main/_common/constantVelocityDevice.xml"/>
	<import resource="../../../../p45-config/servers/main/_common/mandelbrot_detectors.xml"/>
	
	<bean class="gda.spring.FindableNameSetterPostProcessor" />
	<import resource="commandServer.xml" />
	<import resource="beanAdder.xml"/>
	<corba:export namespace="${gda.factory.factoryName}" />
	<!--  
	      IMPORTANT: this will start processing the scanning queue. 
	      detectors must be created before doing this.
	      ADVISED: do it last or towards the end, scan will now start to run!
	 --> 
	<import resource="../../../../p45-config/servers/main/_common/solstice_scanning.xml"/>
</beans>
