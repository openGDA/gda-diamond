<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:corba="http://www.diamond.ac.uk/schema/gda/corba"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
	http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-2.5.xsd">


	<!-- Diagnostic stick -->
	<bean id="dgnstick" class="gda.device.scannable.ScannableMotor">
		<property name="motor" ref="dgnmotor" />
		<property name="userUnits" value="mm" />
	</bean>

	<!-- Group diagon-related objects -->	
 	<bean id="dgn" class="gda.device.scannable.scannablegroup.ScannableGroup">
		<property name="groupMembers">
			<list>
				<ref bean="dgnpos" />
				<ref bean="dgnstick" />
				<ref bean="dgncam" />
			</list>
		</property>
		<property name="local" value="true" />
	</bean>

 </beans>