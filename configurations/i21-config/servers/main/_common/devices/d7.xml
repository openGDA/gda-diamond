<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:corba="http://www.diamond.ac.uk/schema/gda/corba"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
	http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-2.5.xsd">

	<bean id="d7gascell" class="gda.device.scannable.ScannableMotor">
		<property name="motor" ref="d7motor" />
		<property name="userUnits" value="mm" />
	</bean>

	<!-- Group d4-related objects -->	
 	<bean id="d7" class="gda.device.scannable.scannablegroup.ScannableGroup">
		<property name="groupMembers">
			<list>
				<ref bean="d7gascell" />
				<ref bean="d7femto1" />
				<ref bean="d7femto2" />
			</list>
		</property>
		<property name="local" value="true" />
	</bean>

 </beans>