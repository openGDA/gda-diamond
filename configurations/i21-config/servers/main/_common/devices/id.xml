<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">


	<bean id="idgap" class="gda.device.scannable.ScannableMotor">
		<property name="motor" ref="idgapMotor" />
		<property name="initialUserUnits" value="mm" />
		<property name="upperGdaLimits" value="200" />
		<property name="lowerGdaLimits" value="20" />
	</bean>
	
	<bean id="idcontroller" class="gda.device.insertiondevice.Apple2IDGapPolarPos">
		<property name="controller" ref="idcontrol" />
	</bean>
	
	<bean id="idcontroller2" class="gda.device.insertiondevice.Apple2IDGapPolar">
		<property name="controller" ref="idcontrol" />
	</bean>
	
	<bean id="id" class="gda.device.scannable.scannablegroup.ScannableGroup">
		<property name="groupMembers">
			<list>
				<ref bean="idgap" />
				<ref bean="idcontroller" />
				<ref bean="idcontroller2" />
			</list>
		</property>
	</bean>

</beans>