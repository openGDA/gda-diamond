<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:corba="http://www.diamond.ac.uk/schema/gda/corba"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
	http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-2.5.xsd">


	<bean id="specgamma" class="gda.device.scannable.ScannableMotor">
		<property name="motor" ref="specgammaMotor" />
		<property name="userUnits" value="deg" />
	</bean>
	
	<bean id="specz" class="gda.device.scannable.ScannableMotor">
		<property name="motor" ref="speczMotor" />
		<property name="userUnits" value="mm" />
	</bean>
	
	<bean id="specx" class="gda.device.scannable.ScannableMotor">
		<property name="motor" ref="specxMotor" />
		<property name="userUnits" value="mm" />
	</bean>

	<bean id="sgm" class="gda.device.scannable.scannablegroup.ScannableGroup">
		<property name="groupMembers">
			<list>
				<ref bean="specgamma" />
				<ref bean="specz" />
				<ref bean="specx" />
			</list>
		</property>
		<property name="local" value="true" />
	</bean>	

</beans>
