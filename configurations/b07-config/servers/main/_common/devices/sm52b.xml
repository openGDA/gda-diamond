			<bean class="gda.device.motor.MotorPositionTweakControl">
				<property name="motor" ref="sm52b_y_motor"/>
			</bean>
		</property>
	</bean>

	<bean id="sm52b_z" class="gda.device.scannable.TweakableScannableMotor">
		<property name="motor" ref="sm52b_z_motor" />
		<property name="userUnits" value="mm" />
		<property name="tweaker">
			<bean class="gda.device.motor.MotorPositionTweakControl">
				<property name="motor" ref="sm52b_z_motor"/>
			</bean>
		</property>
	</bean>

	<bean id="sm52b_roty" class="gda.device.scannable.TweakableScannableMotor">
		<property name="motor" ref="sm52b_roty_motor" />
		<property name="userUnits" value="deg" />
		<property name="tweaker">
			<bean class="gda.device.motor.MotorPositionTweakControl">
				<property name="motor" ref="sm52b_roty_motor"/>
			</bean>
		</property>
	</bean>
	
	<!-- Compound -->
	
	<bean id="sm52b_xp" class="gda.device.scannable.TweakableScannableMotor">
		<property name="motor" ref="sm52b_xp_motor" />
