<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<!-- Size and centre motors -->
	<bean id="s4b_xgap_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL07B-AL-SLITS-04:XGAP" />
	</bean>

	<bean id="s4b_xsize_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL07B-AL-SLITS-04:XSIZE" />
	</bean>

	<bean id="s4b_ygap_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL07B-AL-SLITS-04:YGAP" />
	</bean>

	<bean id="s4b_ysize_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL07B-AL-SLITS-04:YSIZE" />
	</bean>
	
	<bean id="s4b_z_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL07B-AL-SLITS-04:Z" />
	</bean>

</beans>