<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans.xsd">

	<!-- D9B cam1 plugin -->
	<bean id="es1b_cam4_adbase" class="gda.spring.V17ADBaseFactoryBean">
		<property name="prefix" value="BL07B-EA-ENDST-01:DCAM4:CAM:" />
	</bean>

	<!-- The Object which get the ROIs from the client over RMI -->
	<bean id="es1b_cam4_roi" class="gda.device.detector.nxdetector.roi.LiveStreamROIProvider" />
	<bean class="uk.ac.gda.remoting.server.GdaRmiServiceExporter">
		<property name="serviceName" value="gda/es1b3Roi" />
		<property name="service" ref="es1b_cam4_roi" />
		<property name="serviceInterface" value="gda.device.detector.nxdetector.roi.RemoteRectangularROIsProvider" />
	</bean>

	<!-- ROI-STAT pairs for Live Stream View-->
	<bean id="es1b_cam4_RoiStats1" class="gda.device.detector.nxdetector.plugin.areadetector.ADRoiStatsPairFactory">
		<property name="pluginName" value="es1b_cam4_RoiStats1" />
		<property name="baseRoiPVName" value="BL07B-EA-ENDST-01:DCAM4:ROI1:" />
		<property name="baseStatsPVName" value="BL07B-EA-ENDST-01:DCAM4:STAT1:" />
		<property name="roiInputNdArrayPort" value="es1b_cam4_adbase.DCAM4.CAM" />
		<property name="enabledBasicStats" value="Total" />
		<property name="oneTimeSeriesCollectionPerLine" value="false" />
		<property name="roiProvider">
			<bean class="gda.device.detector.nxdetector.roi.LiveStreamRoiIndexer">
				<property name="liveStreamRoiProvider" ref="es1b_cam4_roi" />
				<property name="index" value="0" /> <!-- Zero based indexing i.e. Region 1 = index 0 -->
			</bean>
		</property>
	</bean>

	<!-- ROI-STAT pairs for Live Stream View-->
	<bean id="es1b_cam4_RoiStats2" class="gda.device.detector.nxdetector.plugin.areadetector.ADRoiStatsPairFactory">
		<property name="pluginName" value="es1b_cam4_RoiStats2" />
		<property name="baseRoiPVName" value="BL07B-EA-ENDST-01:DCAM4:ROI2:" />
		<property name="baseStatsPVName" value="BL07B-EA-ENDST-01:DCAM4:STAT2:" />
		<property name="roiInputNdArrayPort" value="ES1B.DCAM4.CAM" />
		<property name="enabledBasicStats" value="Total" />
		<property name="oneTimeSeriesCollectionPerLine" value="false" />
		<property name="roiProvider">
			<bean class="gda.device.detector.nxdetector.roi.LiveStreamRoiIndexer">
			<property name="liveStreamRoiProvider" ref="es1b_cam4_roi" />
			<property name="index" value="1" /> <!-- Zero based indexing i.e. Region 1 = index 0 -->
		</bean>
		</property>
	</bean>

	<bean id="es1b_cam4_Hdf5Filewriter" parent="abstractHdf5FilewriternNochunking">
		<property name="fileNameTemplate" value="es1b_cam4"/>
		<property name="ndFileHDF5">
			<bean class="gda.spring.V17NDFileHDF5FactoryBean">
				<property name="ndFileImpl">
					<bean class="gda.spring.V17NDFileFactoryBean">
						<property name="prefix" value="BL07B-EA-ENDST-01:DCAM4:HDF5:" />
						<property name="resetToInitialValues" value="false" />
					</bean>
				</property>
			</bean>
		</property>
	</bean>

	<bean id="es1b_cam4_CollectionStrategy" class="gda.device.detector.addetector.collectionstrategy.SingleImageModeDecorator">
		<property name="restoreNumImagesAndImageMode" value="true" />
		<property name="decoratee">
			<bean class="gda.device.detector.addetector.collectionstrategy.InternalTriggerModeDecorator">
				<property name="restoreTriggerMode" value="true" />
				<property name="decoratee">
					<bean class="gda.device.detector.addetector.collectionstrategy.ConfigureAcquireTimeDecorator">
						<property name="restoreAcquireTime" value="true" />
						<property name="decoratee">
							<bean class="gda.device.detector.addetector.collectionstrategy.SoftwareStartStop">
								<property name="restoreAcquireState" value="true" />
								<property name="adBase" ref="es1b_cam4_adbase" />
							</bean>
						</property>
					</bean>
				</property>
			</bean>
		</property>
	</bean>

	<bean id="es1b_cam4" class="gda.device.detector.NXDetector">
		<property name="name" value="es1cam4" />
		<property name="collectionStrategy" ref="es1b_cam4_CollectionStrategy" />
		<property name="additionalPluginList">
			<list>
				<ref bean="es1b_cam4_RoiStats1" />
				<ref bean="es1b_cam4_RoiStats2" />
				<ref bean="es1b_cam4_Hdf5Filewriter" />
			</list>
		</property>
	</bean>

</beans>
