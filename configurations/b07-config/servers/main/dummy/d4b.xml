<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans.xsd">
	
	<bean id="d4b_y_positioner" class="gda.device.enumpositioner.DummyEnumPositioner">
		<property name="positions">
			<list>
			<!-- use real EPICS positioner value here -->
				<value>Out of Beam</value>
				<value>Metal Screen</value>
				<value>YAG Ce Screen</value>
				<value>Cu Foil</value>
			</list>
		</property>
	</bean>
	<bean id="d4b_y_motor" class="gda.device.motor.DummyMotor"/>

	<!-- Area detector camera -->
	<!-- To use this, you will have to start an area detector simulator -->
	<!-- and edit adSimulator.xml with the correct PVs for your simulator -->
	<bean id="d4b_cam1" class="gda.device.detector.NXDetector">
		<property name="name" value="dgncam" />
		<property name="collectionStrategy" ref="simCollectionStrategy" />
		<property name="additionalPluginList">
			<list>
				<ref bean="simRoiStats1" />
				<ref bean="simRoiStats2" />
				<ref bean="simHdf5Filewriter" />
			</list>
		</property>
	</bean>

</beans>
