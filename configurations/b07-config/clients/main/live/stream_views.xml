<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<description>
		define all cameras and detectors Live Stream views
	</description>

	<bean id="d2b_roi" class="uk.ac.gda.remoting.client.GdaRmiProxyFactoryBean">
		<property name="serviceUrl" value="${gda.rmi.prefix}d2bRoi" />
		<property name="serviceInterface" value="gda.device.detector.nxdetector.roi.RemoteRectangularROIsProvider" />
		<property name="refreshStubOnConnectFailure" value="true" />
	</bean>
	<bean id="d2b_cam" class="uk.ac.gda.client.live.stream.view.CameraConfiguration">
		<property name="displayName" value="D2B Cam" />
		<property name="url" value="http://bl07b-di-serv-01.diamond.ac.uk:8081/D2B.DCAM1.mjpg.mjpg" />
		<property name="arrayPv" value="BL07B-DI-PHDGN-02:DCAM1:ARR" />
		<property name="roiProvider" ref="d2b_roi" />
	</bean>
</beans>