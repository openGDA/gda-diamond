<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
	<description>
		To use the Simulated Area detector in dummy mode:
			1) Launch the Utilities > GDA SWMR AreaDetector Simulation
				on the local machine and start the IOC on localhost.
	</description>
	
	<bean id="localhostname" class="java.net.InetAddress" factory-method="getLocalHost"/>
	
	<!-- Live controls for controlling cross -->
	<bean id="sim_cam_extension_toggle_overlay" class="uk.ac.gda.client.live.stream.view.customui.LiveStreamViewCameraControlsToggleOverlay">
		<constructor-arg name="controlScannable">
			<bean class="gda.device.scannable.SimplePVScannable">
				<property name="pvName" value="#{localhostname.hostName.split('\.')[0] }-AD-SIM-01:OVER:1:Use" />
				<property name="textInput" value="true" />
			</bean>
		</constructor-arg>
		<constructor-arg name="monitorScannable">
			<bean class="gda.device.monitor.EpicsMonitor">
				<property name="pvName" value="#{localhostname.hostName.split('\.')[0] }-AD-SIM-01:OVER:1:Use" />
			</bean>
		</constructor-arg>
	</bean>
	
	<bean id="cross_centre_x" class="gda.device.controlpoint.EpicsControlPoint">
		<property name="pvNameGetPoint" value="#{localhostname.hostName.split('\.')[0] }-AD-SIM-01:OVER:1:CenterX_RBV" />
		<property name="pvNameSetPoint" value="#{localhostname.hostName.split('\.')[0] }-AD-SIM-01:OVER:1:CenterX" />
		<property name="outputFormat" value="%1.0f" />
	</bean>
	
	<bean id="cross_centre_y" class="gda.device.controlpoint.EpicsControlPoint">
		<property name="pvNameGetPoint" value="#{localhostname.hostName.split('\.')[0] }-AD-SIM-01:OVER:1:CenterY_RBV" />
		<property name="pvNameSetPoint" value="#{localhostname.hostName.split('\.')[0] }-AD-SIM-01:OVER:1:CenterY" />
		<property name="outputFormat" value="%1.0f" />
	</bean>

	<bean id="cross_size_x" class="gda.device.scannable.PVScannable">
		<property name="pvName" value="#{localhostname.hostName.split('\.')[0] }-AD-SIM-01:OVER:1:SizeX" />
	</bean>
	
	<bean id="cross_size_y" class="gda.device.scannable.PVScannable">
		<property name="pvName" value="#{localhostname.hostName.split('\.')[0] }-AD-SIM-01:OVER:1:SizeY" />
	</bean>
	
	<bean id="cross_position_control" class="uk.ac.gda.client.live.stream.view.customui.LiveStreamViewCameraControlsCrosshair">
		<constructor-arg name="centreX">
			<bean class="uk.ac.gda.client.livecontrol.ScannablePositionerControl">
				<property name="displayName" value="X" />
				<property name="scannableName" value="cross_centre_x" />
				<property name="boldLabel" value="true" />
				<property name="horizontalLayout" value="true" />
				<property name="showStop" value="false" />
				<property name="incrementTextWidth" value="30" />
				<property name="increment" value="10" />
			</bean>
		</constructor-arg>
		<constructor-arg name="centreY">
			<bean class="uk.ac.gda.client.livecontrol.ScannablePositionerControl">
				<property name="displayName" value="Y" />
				<property name="scannableName" value="cross_centre_y" />
				<property name="boldLabel" value="true" />
				<property name="horizontalLayout" value="true" />
				<property name="showStop" value="false" />
				<property name="incrementTextWidth" value="30" />
				<property name="increment" value="10" />
			</bean>
		</constructor-arg>
		<constructor-arg name="sizeX" ref="cross_size_x" />
		<constructor-arg name="sizeY" ref="cross_size_y" />
		<property name="crosshairSizeFactor" value="3" />
	</bean>

	<!-- Camera controls -->
	<bean id="analyserCameraControlsUi" class="uk.ac.gda.client.live.stream.view.customui.LiveStreamViewCameraControls" >
		<constructor-arg ref="analyserCameraControl" />
		<property name="changeExposureWhileCameraAcquiring" value="true" />
		<property name="extensions">
			<list>
				<ref bean="sim_cam_extension_toggle_overlay" />
				<ref bean="cross_position_control" />
			</list>
		</property>
	</bean>

	<!-- Analyser Cam -->
	<bean id="analyser_stream" class="uk.ac.gda.client.live.stream.view.CameraConfiguration">
			<property name="topUi" ref="analyserCameraControlsUi" />
			<property name="displayName" value="EAV" />
			<property name="url" value="http://#{localhostname.hostName}:8080/ADSIM.mjpg.mjpg" />
			<property name="arrayPv" value="#{localhostname.hostName.split('\.')[0] }-AD-SIM-01:ARR" />
			<property name="roiProvider" ref="analyser_eav_roi" />
	</bean>
	
	<!-- diagnostic cameras on Monitor perspective -->
	<bean id="es2_1" class="uk.ac.gda.client.live.stream.view.CameraConfiguration">
		<property name="topUi" ref="analyserCameraControlsUi" />
		<property name="displayName" value="ES2-1" />
		<property name="url" value="http://#{localhostname.hostName}:8080/ADSIM.mjpg.mjpg" />
	</bean>
	 
	<bean id="es2_2" class="uk.ac.gda.client.live.stream.view.CameraConfiguration">
		<property name="topUi" ref="analyserCameraControlsUi" />
		<property name="displayName" value="ES2-2" />
		<property name="url" value="http://#{localhostname.hostName}:8080/ADSIM.mjpg.mjpg" />
	</bean>
	
	<bean id="es2_3" class="uk.ac.gda.client.live.stream.view.CameraConfiguration">
		<property name="topUi" ref="analyserCameraControlsUi" />
		<property name="displayName" value="ES2-3" />
		<property name="url" value="http://#{localhostname.hostName}:8080/ADSIM.mjpg.mjpg" />
	</bean>
	
	<!-- Feedback perspective -->
	<bean id="sd3" class="uk.ac.gda.client.live.stream.view.CameraConfiguration">
		<property name="topUi" ref="analyserCameraControlsUi" />
		<property name="displayName" value="SD3" />
		<property name="url" value="http://#{localhostname.hostName}:8080/ADSIM.mjpg.mjpg" />
	</bean>
	
	<bean id="xbpm" class="uk.ac.gda.client.live.stream.view.CameraConfiguration">
		<property name="topUi" ref="analyserCameraControlsUi" />
		<property name="displayName" value="XBPM" />
		<property name="url" value="http://#{localhostname.hostName}:8080/ADSIM.mjpg.mjpg" />
	</bean>
	
	<!-- Import the server side object over RMI -->
	<bean id="analyser_eav_roi" class="uk.ac.gda.remoting.client.GdaRmiProxy">
	</bean>
	
	
</beans>

	