<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="sd1temp1" class="gda.device.monitor.EpicsMonitor">
		<property name="pvName" value="BL09J-MO-SD-01:TEMP1" />
	</bean>

		<!-- SD1 cam -->
	<bean id="sd1_CamBase" class="gda.spring.V17ADBaseFactoryBean">
		<property name="prefix" value="BL09J-MO-SD-01:CAM:" />
	</bean>
	<!-- The Object which gets the ROIs from the client over RMI -->
	<bean id="sd1_cam_roi" class="gda.device.detector.nxdetector.roi.LiveStreamROIProvider" /> <!-- Make one per camera -->
	<!-- Export it over RMI so the client can use it -->
	<bean class="uk.ac.gda.remoting.server.GdaRmiServiceExporter">
	    <property name="serviceName" value="gda/sd1Roi" />
	    <property name="service" ref="sd1_cam_roi" />
	    <property name="serviceInterface" value="gda.device.detector.nxdetector.roi.RemoteRectangularROIsProvider" />
	</bean>
	<bean id="sd1_cam_RoiStats" class="gda.device.detector.nxdetector.plugin.areadetector.ADRoiStatsPairFactory">
		<property name="pluginName" value="roistats1" />
		<!-- Use ROI1 and STATS1 because the first ROI is used as the data source for the array view -->
		<property name="baseRoiPVName" value="BL09J-MO-SD-01:ROI:" />
		<property name="baseStatsPVName" value="BL09J-MO-SD-01:STAT:" />
		<property name="roiInputNdArrayPort" value="SD1.CAM" />
		<property name="enabledBasicStats" value="Total" />
		<property name="oneTimeSeriesCollectionPerLine" value="false" />
		<property name="roiProvider">
			<bean class="gda.device.detector.nxdetector.roi.LiveStreamRoiIndexer">
				<property name="liveStreamRoiProvider" ref="sd1_cam_roi" />
				<property name="index" value="0" />
			</bean>
		</property>
	</bean>
	<bean id="sd1_cam_Hdf5Filewriter" parent="abstractHdf5FilewriterNochunking">
		<property name="fileNameTemplate" value="sd1_cam"/>
		<property name="ndFileHDF5">
			<bean class="gda.spring.V17NDFileHDF5FactoryBean">
				<property name="ndFileImpl">
					<bean class="gda.spring.V17NDFileFactoryBean">
						<property name="prefix" value="BL09J-MO-SD-01:HDF5:" />
						<property name="resetToInitialValues" value="false" />
					</bean>
				</property>
			</bean>
		</property>
	</bean>
	<bean id="sd1_cam_CollectionStrategy" class="gda.device.detector.addetector.collectionstrategy.SingleImageModeDecorator">
		<property name="restoreNumImagesAndImageMode" value="true" />
		<property name="decoratee">
			<bean class="gda.device.detector.addetector.collectionstrategy.InternalTriggerModeDecorator">
				<property name="restoreTriggerMode" value="true" />
				<property name="decoratee">
					<bean class="gda.device.detector.addetector.collectionstrategy.ConfigureAcquireTimeDecorator">
						<property name="restoreAcquireTime" value="true" />
						<property name="decoratee">
							<bean class="gda.device.detector.addetector.collectionstrategy.SoftwareStartStop">
								<property name="restoreAcquireState" value="true" />
								<property name="adBase" ref="sd1_CamBase" />
							</bean>
						</property>
					</bean>
				</property>
			</bean>
		</property>
	</bean>
	<bean id="sd1_cam" class="gda.device.detector.NXDetector">
		<property name="name" value="sd1_cam" />
		<property name="collectionStrategy" ref="sd1_cam_CollectionStrategy" />
		<property name="additionalPluginList">
			<list>
				<ref bean="sd1_cam_RoiStats" />
				<ref bean="sd1_cam_Hdf5Filewriter" />
			</list>
		</property>
	</bean>
</beans>