<?xml version="1.0" encoding="UTF-8"?>
<configuration>
	<property file="${gda.config}/logging/live/log.properties" />
	
    <!-- display message in Logger Server's console -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <layout class="ch.qos.logback.classic.PatternLayout">
            <Pattern>%date %-5level %logger - %message %ex %n</Pattern>
        </layout>
    </appender>
    <!-- forwarding log message to external LogPanel client application -->
    <appender name="WS001_LogPanel1" class="ch.qos.logback.classic.net.SocketAppender">
        <RemoteHost>i12-ws001.diamond.ac.uk</RemoteHost>
        <Port>${gda.logPanel.logging.port}</Port>
        <ReconnectionDelay>10000</ReconnectionDelay>
        <IncludeCallerData>true</IncludeCallerData>
    </appender>
    <appender name="WS002_LogPanel1" class="ch.qos.logback.classic.net.SocketAppender">
        <RemoteHost>i12-ws002.diamond.ac.uk</RemoteHost>
        <Port>${gda.logPanel.logging.port}</Port>
        <ReconnectionDelay>10000</ReconnectionDelay>
        <IncludeCallerData>true</IncludeCallerData>
    </appender>    
    <appender name="WS003_LogPanel1" class="ch.qos.logback.classic.net.SocketAppender">
        <RemoteHost>i12-ws003.diamond.ac.uk</RemoteHost>
        <Port>${gda.logPanel.logging.port}</Port>
        <ReconnectionDelay>10000</ReconnectionDelay>
        <IncludeCallerData>true</IncludeCallerData>
    </appender>   
        <appender name="WS006_LogPanel1" class="ch.qos.logback.classic.net.SocketAppender">
        <RemoteHost>i12-ws006.diamond.ac.uk</RemoteHost>
        <Port>${gda.logPanel.logging.port}</Port>
        <ReconnectionDelay>10000</ReconnectionDelay>
        <IncludeCallerData>true</IncludeCallerData>
    </appender>    
    <appender name="WS007_LogPanel1" class="ch.qos.logback.classic.net.SocketAppender">
        <RemoteHost>i12-ws007.diamond.ac.uk</RemoteHost>
        <Port>${gda.logPanel.logging.port}</Port>
        <ReconnectionDelay>10000</ReconnectionDelay>
        <IncludeCallerData>true</IncludeCallerData>
    </appender>    
    <appender name="WS008_LogPanel1" class="ch.qos.logback.classic.net.SocketAppender">
        <RemoteHost>i12-ws008.diamond.ac.uk</RemoteHost>
        <Port>${gda.logPanel.logging.port}</Port>
        <ReconnectionDelay>10000</ReconnectionDelay>
        <IncludeCallerData>true</IncludeCallerData>
    </appender>    
    <appender name="DebugFILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <File>${gda.logs.dir}/gda.log</File>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <FileNamePattern>${gda.logs.dir}/gda.%d{yyyy-MM-dd}.log.gz</FileNamePattern>
        </rollingPolicy>
        <layout class="ch.qos.logback.classic.PatternLayout">
            <pattern>%d %-5level %logger - %m %ex %n</pattern>
        </layout>
    </appender>
    <logger name="gda">
        <level value="DEBUG"/>
    </logger>
    <logger name="gda.device.corba.impl">
        <level value="INFO"/>
    </logger>
    <logger name="gda.device.temperature">
        <level value="INFO"/>
    </logger>
    <logger name="gda.jython.corba.impl">
        <level value="INFO"/>
    </logger>
    <logger name="gda.oe.corba.impl">
        <level value="INFO"/>
    </logger>
    <root>
        <level value="ALL"/>
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="WS001_LogPanel1"/>
        <appender-ref ref="WS002_LogPanel1"/>
        <appender-ref ref="WS003_LogPanel1"/> 
        <appender-ref ref="WS006_LogPanel1"/>
        <appender-ref ref="WS007_LogPanel1"/>
        <appender-ref ref="WS008_LogPanel1"/>
        <appender-ref ref="DebugFILE"/>
    </root>
</configuration>
