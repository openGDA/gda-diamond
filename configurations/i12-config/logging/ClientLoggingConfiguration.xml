<?xml version="1.0" encoding="UTF-8"?>
<configuration>
	<property file="${gda.config}/properties/localhost/java.properties" />

    <turboFilter class="ch.qos.logback.classic.turbo.MarkerFilter">
        <Name>Finest</Name>
        <Marker>FINEST</Marker>
        <OnMatch>DENY</OnMatch>
    </turboFilter>
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <layout class="ch.qos.logback.classic.PatternLayout">
            <Pattern>%date %-5level [%thread] %logger - %message %ex %n</Pattern>
        </layout>
    </appender>
    <!-- log to the GDA GUI internal panel -->
    <appender name="LogPanel" class="gda.util.LogPanelAppender">
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>INFO</level>
        </filter>
        <layout class="ch.qos.logback.classic.PatternLayout">
            <pattern>%date %-5level %logger - %m %ex %n</pattern>
        </layout>
    </appender>    
    
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <File>${gda.logs.dir}/gda_client.log</File>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <FileNamePattern>${gda.users}/logs/gda_client.%d{yyyy-MM-dd}.log.gz</FileNamePattern>
        </rollingPolicy>
        <layout class="ch.qos.logback.classic.PatternLayout">
            <pattern>%d %-5level %logger - %m %ex %n</pattern>
        </layout>
    </appender>
    
    <logger name="gda">
        <level value="DEBUG"/>
    </logger>
    <logger name="gda.device.corba.impl">
        <level value="INFO"/>
    </logger>
    <logger name="gda.device.temperature">
        <level value="INFO"/>
    </logger>
    <logger name="gda.jython.corba.impl">
        <level value="INFO"/>
    </logger>
    <logger name="gda.oe.corba.impl">
        <level value="INFO"/>
    </logger>

    <root>
        <level value="INFO"/>
<!--        <appender-ref ref="SOCKET"/>-->
        <appender-ref ref="LogPanel"/>
        <appender-ref ref="FILE"/>
        <appender-ref ref="CONSOLE"/>
   </root>
    <!--<consolePlugin />-->
</configuration>
