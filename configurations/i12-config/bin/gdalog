# start logpanel if not already running

#identify install folder and JAVA_HOME
source /dls_sw/i12/etc/i12_profile.sh

module load java/gda836
# Start log panel if not already started
CLASSPATH=$GDAFOLDER/workspace_git/gda-legacy.git/uk.ac.gda.swingclient/bin; export CLASSPATH
LOGPANEL=$(ps -ef | grep LogPanel | grep -v grep)
if [ "X$LOGPANEL" == "X" ] ; then
python $GDAFOLDER/workspace_git/gda-core.git/uk.ac.gda.core/bin/gda --config=$GDAFOLDER/config --restart --mode=$GDAMODE logpanel
else
wmctrl -R "GDA Log Panel"
fi