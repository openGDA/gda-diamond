<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">


	<!--  Define all the motors -->
	<bean id="cam1_roll_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL12I-EA-CAM-01:TILT" />
	</bean>

	<bean id="cam1_x_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL12I-EA-CAM-01:ZOOM" />
	</bean>

	<bean id="cam1_z_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL12I-EA-CAM-01:FOCUS" />
	</bean>

</beans>
