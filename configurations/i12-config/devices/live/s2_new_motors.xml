<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">


	<!--  Define all the motors -->
	<bean id="s2_top_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL12I-AL-SLITS-02:Y:PLUS" />
	</bean>
	<bean id="s2_bottom_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL12I-AL-SLITS-02:Y:MINUS" />
	</bean>
	<bean id="s2_in_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL12I-AL-SLITS-02:X:MINUS" />
	</bean>
	<bean id="s2_out_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL12I-AL-SLITS-02:X:PLUS" />
	</bean>
	<bean id="s2_xs_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL12I-AL-SLITS-02:X:SIZE" />
	</bean>
	<bean id="s2_xc_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL12I-AL-SLITS-02:X:CENTER" />
	</bean>
	<bean id="s2_ys_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL12I-AL-SLITS-02:Y:SIZE" />
	</bean>
	<bean id="s2_yc_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL12I-AL-SLITS-02:Y:CENTER" />
	</bean>

</beans>