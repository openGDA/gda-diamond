				<entry key="GETGAPTIME1" value="BL12I-EA-DET-03:DXP1:GapTime_RBV" />
				<entry key="GETMAXENERGY1" value="BL12I-EA-DET-03:DXP1:MaxEnergy_RBV" />
				<entry key="GETMAXWIDTH1" value="BL12I-EA-DET-03:DXP1:MaxWidth_RBV" />
