				<entry key="GETBINWIDTH1" value="BL12I-EA-DET-03:DXP1:MCABinWidth_RBV" />
				<entry key="GETDYNRANGE1" value="BL12I-EA-DET-03:DXP1:DynamicRange_RBV" />
