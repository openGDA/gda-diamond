<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

<!-- 	<bean id="local_pco_pv_prefix" class="java.lang.String">
	    <constructor-arg value="BL12I-EA-DET-13" />
	</bean> -->

	<bean id="pco3_adbase" class="gda.device.detector.areadetector.v17.impl.ADBaseImpl">
		<property name="basePVName" value="BL12I-EA-DET-13:CAM:" />
		<!-- <property name="prefix" value="#{local_pco_pv_prefix}':CAM:'" /> -->
	</bean>

	<bean id="pco3_ndfile_tif" class="gda.spring.V17NDFileFactoryBean">
		<property name="prefix" value="BL12I-EA-DET-13:TIF:" />
		<!-- <property name="prefix" value="#{local_pco_pv_prefix+':TIF:'}" /> -->
		<property name="resetToInitialValues" value="false" />
		<property name="filePathConverter">
			<bean class="uk.ac.gda.util.UnixToWindowsFilePathConverter">
				<property name="unixSubString" value="/dls/i12/data" />
				<property name="windowsSubString" value="G:\data" />
			</bean>
		</property>
	</bean>

	<bean id="pco3_addriverpco" class = "gda.device.detector.areadetector.v17.impl.ADDriverPcoImpl">
		<property name="basePvName" value="BL12I-EA-DET-13:CAM"/>
		<!-- <property name="prefix" value="#{local_pco_pv_prefix+':CAM:'}" /> -->
	</bean>

	<bean id="pco3_ndfilehdf5_base" class="gda.spring.V17NDFileFactoryBean">
		<property name="prefix" value="BL12I-EA-DET-13:HDF:" />
		<!-- <property name="prefix" value="#{local_pco_pv_prefix+':HDF:'}" /> -->
		<property name="resetToInitialValues" value="false" />
		<property name="filePathConverter">
			<bean class="uk.ac.gda.util.UnixToWindowsFilePathConverter">
				<property name="unixSubString" value="/dls/i12/data" />
				<property name="windowsSubString" value="G:\data" />
			</bean>
		</property>
	</bean>

	<bean id="pco3_ndhdf5file" class="gda.spring.V17NDFileHDF5FactoryBean">
		<property name="ndFileImpl" ref="pco3_ndfilehdf5_base" />
	</bean>

</beans>