<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<!-- Define all the motors -->
	<bean id="s3_top_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL12I-AL-SLITS-03:Y:PLUS" />
	</bean>

	<bean id="s3_bottom_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL12I-AL-SLITS-03:Y:MINUS" />
	</bean>

	<bean id="s3_in_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL12I-AL-SLITS-03:X:MINUS" />
	</bean>

	<bean id="s3_out_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL12I-AL-SLITS-03:X:PLUS" />
	</bean>

	<bean id="s3_xs_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL12I-AL-SLITS-03:X:SIZE" />
	</bean>

	<bean id="s3_xc_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL12I-AL-SLITS-03:X:CENTER" />
	</bean>

	<bean id="s3_ys_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL12I-AL-SLITS-03:Y:SIZE" />
	</bean>

	<bean id="s3_yc_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL12I-AL-SLITS-03:Y:CENTER" />
	</bean>

	<bean id="s3_y_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL12I-AL-SLITS-03:Y" />
	</bean>

</beans>