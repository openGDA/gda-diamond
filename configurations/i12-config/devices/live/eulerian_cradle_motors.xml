<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">


	<bean id="cradle_x_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL12I-MO-ECR-01:X"/>
		<property name="local" value="true" />
	</bean>

	<bean id="cradle_z_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL12I-MO-ECR-01:Z"/>
		<property name="local" value="true" />
	</bean>

	<bean id="cradle_phi_y_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL12I-MO-ECR-01:PHIY"/>
		<property name="local" value="true" />
	</bean>

	<bean id="cradle_phi_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL12I-MO-ECR-01:PHI"/>
		<property name="local" value="true" />
	</bean>

	<bean id="cradle_chi_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL12I-MO-ECR-02:CHI"/>
		<property name="local" value="true" />
	</bean>

</beans>