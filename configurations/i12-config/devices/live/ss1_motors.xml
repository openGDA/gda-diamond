<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans.xsd">


	<!-- Define all the motors -->
	<bean id="ssbase_x_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL12I-MO-TAB-02:X" />
	</bean>
	
	<bean id="ss1_y1_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL12I-MO-TAB-02:ST1:Y1" />
	</bean>

	<bean id="ss1_phi_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL12I-MO-TAB-02:ST1:PHI" />
	</bean>

	<bean id="ss1_rx_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL12I-MO-TAB-02:ST1:RX" />
	</bean>

	<bean id="ss1_rz_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL12I-MO-TAB-02:ST1:RZ" />
	</bean>

	<bean id="ss1_y2_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL12I-MO-TAB-02:ST1:Y2" />
	</bean>

	<bean id="ss1_y3_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL12I-MO-TAB-02:ST1:Y3" />
	</bean>

	<bean id="ss1_theta_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL12I-MO-TAB-02:ST1:THETA" />
	</bean>

	<bean id="ss1_tx_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL12I-MO-TAB-02:ST1:X" />
	</bean>

	<bean id="ss1_tz_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL12I-MO-TAB-02:ST1:Z" />
	</bean>

</beans>
