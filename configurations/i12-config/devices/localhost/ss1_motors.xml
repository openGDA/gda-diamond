<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">


	<!-- Define all the motors -->
	<bean id="ssbase_x_motor" class="gda.spring.EpicsMotorFactoryBean">
		<property name="deviceName" value="ss1.x" />
	</bean>
	
	<bean id="ss1_y1_motor" class="gda.spring.EpicsMotorFactoryBean">
		<property name="deviceName" value="ss1.y1" />
	</bean>

	<bean id="ss1_phi_motor" class="gda.spring.EpicsMotorFactoryBean">
		<property name="deviceName" value="ss1.phi" />
	</bean>

	<bean id="ss1_rx_motor" class="gda.spring.EpicsMotorFactoryBean">
		<property name="deviceName" value="ss1.rx" />
	</bean>

	<bean id="ss1_rz_motor" class="gda.spring.EpicsMotorFactoryBean">
		<property name="deviceName" value="ss1.rz" />
	</bean>

	<bean id="ss1_y2_motor" class="gda.spring.EpicsMotorFactoryBean">
		<property name="deviceName" value="ss1.y2" />
	</bean>

	<bean id="ss1_y3_motor" class="gda.spring.EpicsMotorFactoryBean">
		<property name="deviceName" value="ss1.y3" />
	</bean>

	<bean id="ss1_theta_motor" class="gda.spring.EpicsMotorFactoryBean">
		<property name="deviceName" value="ss1.theta" />
	</bean>

	<bean id="ss1_tx_motor" class="gda.spring.EpicsMotorFactoryBean">
		<property name="deviceName" value="ss1.tx" />
	</bean>

	<bean id="ss1_tz_motor" class="gda.spring.EpicsMotorFactoryBean">
		<property name="deviceName" value="ss1.tz" />
	</bean>

</beans>
