<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

	<!-- Define all the motors -->
	<bean id="t1_x_motor" class="gda.spring.EpicsMotorFactoryBean">
		<property name="deviceName" value="t1.x" />
	</bean>

	<bean id="t1_y_motor" class="gda.spring.EpicsMotorFactoryBean">
		<property name="deviceName" value="t1.y" />
	</bean>

	<bean id="t1_z_motor" class="gda.spring.EpicsMotorFactoryBean">
		<property name="deviceName" value="t1.z" />
	</bean>

</beans>
