
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
	
	<!--  Define the scannable group -->
	<bean id="s3" class="gda.device.scannable.scannablegroup.ScannableGroup">
		<property name="groupMembers">
			<list>
				<!--  Scannables in the group 
  -->
				<bean id="s3_top" class="gda.device.scannable.ScannableMotor">
					<property name="name" value="s3_top" />
					<property name="motor" ref="s3_top_motor" />
					<property name="tolerance" value="0.01" />
					<property name="outputFormat">
						<list>
							<value>%.3f</value>
						</list>
					</property>
				</bean>
				<bean id="s3_bottom" class="gda.device.scannable.ScannableMotor">
