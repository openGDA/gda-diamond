							<value>%.3f</value>
						</list>
					</property>
				</bean>
				<bean id="s3_in" class="gda.device.scannable.ScannableMotor">
					<property name="name" value="s3_in" />
					<property name="motor" ref="s3_in_motor" />
					<property name="tolerance" value="0.01" />
					<property name="outputFormat">
						<list>
							<value>%.3f</value>
						</list>
					</property>
				</bean>
				<bean id="s3_out" class="gda.device.scannable.ScannableMotor">
					<property name="name" value="s3_out" />
					<property name="motor" ref="s3_out_motor" />
					<property name="tolerance" value="0.01" />
					<property name="outputFormat">
						<list>
							<value>%.3f</value>
						</list>
					</property>
				</bean>
				<bean id="s3_xs" class="gda.device.scannable.ScannableMotor">
					<property name="name" value="s3_xs" />
					<property name="motor" ref="s3_xs_motor" />
