						<list>
							<value>%.3f</value>
						</list>
					</property>
				</bean>
				<bean id="s3_yc" class="gda.device.scannable.ScannableMotor">
					<property name="name" value="s3_yc" />
					<property name="motor" ref="s3_yc_motor" />
