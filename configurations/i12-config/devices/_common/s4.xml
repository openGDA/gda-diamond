<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
	
	<!--  Define the scannable group -->
	<bean id="s4" class="gda.device.scannable.scannablegroup.ScannableGroup">
		<property name="groupMembers">
			<list>
				<!--  Scannables in the group 
  -->
				<bean id="s4_top" class="gda.device.scannable.ScannableMotor">
					<property name="name" value="s4_top" />
					<property name="motor" ref="s4_top_motor" />
					<property name="tolerance" value="0.01" />
					<property name="outputFormat">
						<list>
							<value>%.3f</value>
						</list>
					</property>
				</bean>
				<bean id="s4_bottom" class="gda.device.scannable.ScannableMotor">
