					<property name="outputFormat">
						<list>
							<value>%.3f</value>
						</list>
					</property>
				</bean>
				<bean id="s4_yc" class="gda.device.scannable.ScannableMotor">
					<property name="name" value="s4_yc" />
					<property name="motor" ref="s4_yc_motor" />
