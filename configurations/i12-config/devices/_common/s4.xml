					<property name="outputFormat">
						<list>
							<value>%.3f</value>
						</list>
					</property>
				</bean>
				<bean id="s4_out" class="gda.device.scannable.ScannableMotor">
					<property name="name" value="s4_out" />
					<property name="motor" ref="s4_out_motor" />
					<property name="tolerance" value="0.01" />
					<property name="outputFormat">
						<list>
							<value>%.3f</value>
						</list>
					</property>
				</bean>
				<bean id="s4_xs" class="gda.device.scannable.ScannableMotor">
					<property name="name" value="s4_xs" />
					<property name="motor" ref="s4_xs_motor" />
