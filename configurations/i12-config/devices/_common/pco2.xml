<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">


	<!-- Cannot use gda:rmi-export as the object does not implement IObservable -->
	<bean class="org.springframework.remoting.rmi.RmiServiceExporter">
		<property name="serviceName" value="gda/pcoTomography" />
		<property name="service" ref="pcoTomography" />
		<property name="serviceInterface"
			value="uk.ac.gda.tomography.devices.ITomographyDetector" />
	</bean>

</beans>