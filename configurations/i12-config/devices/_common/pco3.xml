<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:gda="http://www.diamond.ac.uk/schema/gda/gda"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
		http://www.diamond.ac.uk/schema/gda/gda http://www.diamond.ac.uk/schema/gda/gda/gda-gda-1.0.xsd">

	<!-- Triggering -->

	<bean id="pco2_singleExposurePco" class="gda.device.detector.addetector.triggering.SingleExposurePco">
		<constructor-arg ref="pco2_adbase" />
		<constructor-arg ref="pco2_addriverpco"/>
		<constructor-arg value="0" />
	</bean>

	<!-- File writers -->
	
	<!-- TIFF -->
	
	<bean id="pco2_nxfilewriter_tif" class="gda.device.detector.nxdetector.plugin.areadetector.filewriter.SingleImagePerFileWriter">
		<constructor-arg value="pco2" />
		<property name="ndFile" ref="pco2_ndfile_tif" />
		<property name="writeErrorStatusSupported" value="false"/>
		<property name="fileNameTemplate" value="p_" />
		<property name="fileNumberAtScanStart" value="0" />
		<property name="waitForFileArrival" value="false"/>
	</bean>

	<!-- HDF5 -->

	<bean id="pco2_nxfilewriter_hdf5_nochunking" class="gda.device.detector.addetector.filewriter.MultipleImagesPerHDF5FileWriter">
		<property name="ndFileHDF5" ref="pco2_ndhdf5file" />
		<property name="fileNameTemplate" value="pco2"/>
		<property name="filePathTemplate" value="$datadir$"/>
		<property name="fileTemplate" value="%s%s-%d.hdf"/>
		<property name="fileNumberAtScanStart" value="-1"/>
		<property name="setFileNameAndNumber" value="true"/>
		<property name="rowChunks" value="0"/>
		<property name="colChunks" value="0"/>
		<property name="framesChunks" value="0"/>
		<property name="framesFlush" value="0"/>
		<property name="lazyOpen" value="true"/>
		<!-- property name="boundaryAlign" value="1048576"/ -->
		<property name="blocking" value="false"/> <!-- must be false otherwise PCO Event Driver driver crashes if framesChunks is 64-->
	</bean>


	<!-- NXDetectors -->

	<bean id="pco2_sw_tif" class="gda.device.detector.NXDetector">
		<property name="name" value="pco2_sw_tif" />
		<property name="collectionStrategy" ref="pco2_singleExposurePco"/>
		<property name="additionalPluginList">
			<list>
				<ref bean="pco2_nxfilewriter_tif" />
			</list>
		</property>
	</bean>

	<bean id="pco2_sw_hdf" class="gda.device.detector.NXDetector">
		<property name="name" value="pco2_sw_hdf"/>
		<property name="addCollectTimeMs" value="true"/>
		<property name="collectionStrategy" ref="pco2_singleExposurePco" />
		<property name="additionalPluginList">
			<list>
				<ref bean="pco2_nxfilewriter_hdf5_nochunking" />
			</list>
		</property>
	</bean>	

</beans>