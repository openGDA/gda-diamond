<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

	<bean id="pco2_ad_pluginBase" class="gda.device.detector.areadetector.v17.impl.NDPluginBaseSimulator">
		<property name="dims" value="1000,1000" />
		<property name="datatype" value="UINT32" />
	</bean>

	<bean id="pco_hdf_adDriverPco" class="gda.device.detector.areadetector.v17.impl.DummyADDriverPco" />

	<bean id="pco.cam" class="gda.device.detector.areadetector.v17.impl.ADBaseSimulator">
		<property name="model" value="PCOEdge" />
	</bean>

	<bean id="pco.arr" class="gda.device.detector.areadetector.v17.impl.NDArraySimulator">
		<property name="pluginBase" ref="pco2_ad_pluginBase" />
	</bean>

	<bean id="pco.stat" class="gda.device.detector.areadetector.v17.impl.NDStatsSimulator">
		<property name="pluginBase" ref="pco2_ad_pluginBase" />
	</bean>

	<bean id="pco.roi1" class="gda.device.detector.areadetector.v17.impl.NDROISimulator">
		<property name="pluginBase" ref="pco2_ad_pluginBase" />
	</bean>

	<bean id="pco.roi2" class="gda.device.detector.areadetector.v17.impl.NDROISimulator">
		<property name="pluginBase" ref="pco2_ad_pluginBase" />
	</bean>

	<bean id="pco.mpeg1" class="gda.device.detector.areadetector.v17.impl.FfmpegStreamSimulator">
		<property name="pluginBase" ref="pco2_ad_pluginBase" />
		<property name="mjpg_url" value="DummySwtVideoReceiver" />
	</bean>

	<bean id="pco.mpeg2" class="gda.device.detector.areadetector.v17.impl.FfmpegStreamSimulator">
		<property name="pluginBase" ref="pco2_ad_pluginBase" />
		<property name="mjpg_url" value="DummySwtVideoReceiver" />
	</bean>

	<bean id="pco_hdf_file" class="gda.device.detector.areadetector.v17.impl.NDFileSimulator">
		<property name="pluginBase" ref="pco2_ad_pluginBase" />
	</bean>

	<bean id="pco.hdf" class="gda.device.detector.areadetector.v17.impl.NDFileHDF5Simulator">
		<property name="file" ref="pco_hdf_file" />
	</bean>

 	<bean id="pco.tif" class="gda.device.detector.areadetector.v17.impl.NDFileSimulator">
		<property name="pluginBase" ref="pco2_ad_pluginBase" />
	</bean>

	<bean id="pco.prc1" class="gda.device.detector.areadetector.v17.impl.NDProcessSimulator">
		<property name="pluginBase" ref="pco2_ad_pluginBase" />
	</bean>

	<bean id="pco.prc2" class="gda.device.detector.areadetector.v17.impl.NDProcessSimulator">
		<property name="pluginBase" ref="pco2_ad_pluginBase" />
	</bean>

</beans>