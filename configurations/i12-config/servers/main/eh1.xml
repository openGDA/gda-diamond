<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">
	<!-- Set up the Area Detector base class which will manage the eh1.cam -->
	<bean id="eh1.cam" class="gda.device.detector.areadetector.v17.impl.ADBaseImpl">
		<property name="basePVName" value="BL12I-DI-PHDGN-03:CAM:" />
		<property name="initialDataType" value="UInt16" />
		<property name="initialMinX" value="1" />
		<property name="initialMinY" value="1" />
		<property name="initialSizeX" value="1292" />
		<property name="initialSizeY" value="964" />
		<property name="initialBinX" value="1" />
		<property name="initialBinY" value="1" />
	</bean>

	<bean id="eh1.roi" class="gda.device.detector.areadetector.v17.impl.NDROIImpl">
		<property name="basePVName" value="BL12I-DI-PHDGN-03:ROI:" />
		<property name="pluginBase">
			<bean class="gda.device.detector.areadetector.v17.impl.NDPluginBaseImpl">
				<property name="basePVName" value="BL12I-DI-PHDGN-03:ROI:" />
				<property name="initialArrayPort" value="eh1.cam" />
				<property name="initialArrayAddress" value="0" />
				<property name="initialEnableCallbacks" value="1" />
				<property name="initialBlockingCallbacks" value="false" />
			</bean>
		</property>
		<property name="initialMinX" value="1" />
		<property name="initialMinY" value="1" />
		<property name="initialBinX" value="1" />
		<property name="initialBinY" value="1" />
	</bean>

	<bean id="eh1.arr" class="gda.device.detector.areadetector.v17.impl.NDArrayImpl">
		<property name="basePVName" value="BL12I-DI-PHDGN-03:ARR:" />
		<property name="pluginBase">
			<bean class="gda.device.detector.areadetector.v17.impl.NDPluginBaseImpl">
				<property name="basePVName" value="BL12I-DI-PHDGN-03:ARR:" />
				<property name="initialArrayPort" value="eh1.cam" />
				<property name="initialArrayAddress" value="0" />
				<property name="initialEnableCallbacks" value="1" />
				<property name="initialBlockingCallbacks" value="false" />
			</bean>
		</property>
	</bean>

	<bean id="eh1.proc" class="gda.device.detector.areadetector.v17.impl.NDProcessImpl">
		<property name="basePVName" value="BL12I-DI-PHDGN-03:PROC:" />
		<property name="pluginBase">
			<bean class="gda.device.detector.areadetector.v17.impl.NDPluginBaseImpl">
				<property name="basePVName" value="BL12I-DI-PHDGN-03:PROC:" />
				<property name="initialArrayPort" value="eh1.roi" />
				<property name="initialArrayAddress" value="0" />
				<property name="initialEnableCallbacks" value="1" />
				<property name="initialBlockingCallbacks" value="false" />
			</bean>
		</property>
		<property name="initialEnableBackground" value="0" />
		<property name="initialEnableFlatField" value="0" />
		<property name="initialEnableOffsetScale" value="0" />
		<property name="initialEnableHighClip" value="0" />
		<property name="initialEnableLowClip" value="0" />
		<property name="initialEnableFilter" value="0" />
	</bean>

	<bean id="eh1.stat" class="gda.device.detector.areadetector.v17.impl.NDStatsImpl">
		<property name="basePVName" value="BL12I-DI-PHDGN-03:STAT:" />
		<property name="pluginBase">
			<bean class="gda.device.detector.areadetector.v17.impl.NDPluginBaseImpl">
				<property name="basePVName" value="BL12I-DI-PHDGN-03:STAT:" />
				<property name="initialArrayPort" value="eh1.roi" />
				<property name="initialArrayAddress" value="0" />
				<property name="initialEnableCallbacks" value="1" />
				<property name="initialBlockingCallbacks" value="false" />
			</bean>
		</property>
	</bean>

	<bean id="eh1.draw" class="gda.device.detector.areadetector.v17.impl.NDOverlayImpl">
		<property name="basePVName" value="BL12I-DI-PHDGN-03:DRAW:" />
		<property name="pluginBase">
			<bean class="gda.device.detector.areadetector.v17.impl.NDPluginBaseImpl">
				<property name="basePVName" value="BL12I-DI-PHDGN-03:DRAW:" />
				<property name="initialArrayPort" value="eh1.roi" />
				<property name="initialArrayAddress" value="0" />
				<property name="initialEnableCallbacks" value="1" />
				<property name="initialBlockingCallbacks" value="false" />
			</bean>
		</property>
	</bean>

	<bean id="eh1.mpeg"
		class="gda.device.detector.areadetector.v17.impl.FfmpegStreamImpl">
		<property name="basePVName" value="BL12I-DI-PHDGN-03:MPEG:" />
		<property name="pluginBase">
			<bean class="gda.device.detector.areadetector.v17.impl.NDPluginBaseImpl">
				<property name="basePVName" value="BL12I-DI-PHDGN-03:MPEG:" />
				<property name="initialArrayPort" value="eh1.draw" />
				<property name="initialArrayAddress" value="0" />
				<property name="initialEnableCallbacks" value="1" />
				<property name="initialBlockingCallbacks" value="false" />
			</bean>
		</property>
		<property name="initialQuality" value="100" />
		<property name="initialFalseColor" value="0" />
		<property name="initialAlwaysOn" value="0" />
	</bean>

	<bean id="eh1.tif" class="gda.device.detector.areadetector.v17.impl.NDFileImpl">
		<property name="basePVName" value="BL12I-DI-PHDGN-03:TIFF:" />
		<property name="pluginBase">
			<bean class="gda.device.detector.areadetector.v17.impl.NDPluginBaseImpl">
				<property name="basePVName" value="BL12I-DI-PHDGN-03:TIFF:" />
				<property name="initialArrayPort" value="eh1.draw" />
				<property name="initialArrayAddress" value="0" />
				<property name="initialEnableCallbacks" value="1" />
				<property name="initialBlockingCallbacks" value="false" />
			</bean>
		</property>
		<property name="initialAutoIncrement" value="Yes" />
		<property name="initialAutoSave" value="Yes" />
		<property name="initialWriteMode" value="2" />
		<property name="initialNumCapture" value="1" />
		<property name="initialFileName" value="p" />
		<property name="initialFileTemplate" value="%s/%s_%05d.tif" />
	</bean>

	<bean id="eh1.hdf"
		class="gda.device.detector.areadetector.v17.impl.NDFileHDF5Impl">
		<property name="basePVName" value="BL12I-DI-PHDGN-03:HDF:" />
		<property name="file">
			<bean class="gda.device.detector.areadetector.v17.impl.NDFileImpl">
				<property name="basePVName" value="BL12I-DI-PHDGN-03:HDF:" />
				<property name="pluginBase">
					<bean class="gda.device.detector.areadetector.v17.impl.NDPluginBaseImpl">
						<property name="basePVName" value="BL12I-OP-DCM-01:HDF2:" />
						<property name="initialArrayPort" value="eh1.cam" />
						<property name="initialArrayAddress" value="0" />
						<property name="initialEnableCallbacks" value="1" />
						<property name="initialBlockingCallbacks" value="false" />
					</bean>
				</property>
				<property name="initialAutoSave" value="Yes" />
				<property name="initialAutoIncrement" value="Yes" />
				<property name="initialWriteMode" value="2" />
				<property name="initialNumCapture" value="1" />
				<property name="initialFileName" value="projections" />
				<property name="initialFileTemplate" value="%s/%s.h5" />
			</bean>
		</property>
		<property name="initialNumExtraDims" value="0" />
		<property name="initialExtraDimSizeN" value="1" />
		<property name="initialExtraDimSizeX" value="0" />
		<property name="initialExtraDimSizeY" value="0" />
		<property name="initialNumRowChunks" value="2672" />
		<property name="initialCompression" value="None" />
		<property name="initialNumBitOffset" value="0" />
		<property name="initialNumBitPrecision" value="8" />
		<property name="initialSzipNumPixels" value="16" />
		<property name="initialZCompressLevel" value="6" />
	</bean>

	<bean id="eh1" class="gda.device.detector.AdDetectorExtRoiDraw">
		<property name="adBase" ref="eh1.cam" />
		<property name="ndStats" ref="eh1.stat" />
		<property name="ndArray" ref="eh1.arr" />
		<property name="ndFile" ref="eh1.tif" />
		<property name="ndRoi" ref="eh1.roi" />
		<property name="ndDraw" ref="eh1.draw" />
		<property name="mjpeg" ref="eh1.mpeg" />
		<property name="computeCentroid" value="true" />
		<property name="computeStats" value="true" />
	</bean>
</beans>
