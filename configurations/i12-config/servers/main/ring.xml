<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

	<!-- Define the scannable group -->
	<bean id="ring_energy" class="gda.device.monitor.EpicsMonitor">
		<property name="name" value="ring_energy" />
		<property name="deviceName" value="MSTAT.ENERGY" />
	</bean>

	<bean id="ring_current" class="gda.device.monitor.EpicsMonitor">
		<property name="name" value="ring_current" />
		<property name="deviceName" value="MSTAT.CURRENT" />
	</bean>

	<bean id="ring_topup_countdown" class="gda.device.monitor.EpicsMonitor">
		<property name="name" value="ring_topup_countdown" />
		<property name="deviceName" value="MSTAT.TOPUPCD" />
	</bean>

	<bean id="ring_beam_lifetime" class="gda.device.monitor.EpicsMonitor">
		<property name="name" value="ring_beam_lifetime" />
		<property name="deviceName" value="MSTAT.LIFETIME" />
	</bean>
	
	<bean id="ring" class="gda.device.scannable.scannablegroup.ScannableGroup">
		<property name="groupMembers">
			<list>
				<ref bean="ring_energy" />
				<ref bean="ring_current" />
				<ref bean="ring_topup_countdown" />
				<ref bean="ring_beam_lifetime" />
			</list>
		</property>
	</bean>

</beans>
