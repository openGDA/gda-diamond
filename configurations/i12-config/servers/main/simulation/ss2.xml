<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">


	<!-- Define all the motors -->
	<bean id="ss2_rx_motor" class="gda.spring.EpicsMotorFactoryBean">
		<property name="deviceName" value="ss2.rx" />
	</bean>
	
	<bean id="ss2_ry_motor" class="gda.spring.EpicsMotorFactoryBean">
		<property name="deviceName" value="ss2.ry" />
	</bean>

	<bean id="ss2_x_motor" class="gda.spring.EpicsMotorFactoryBean">
		<property name="deviceName" value="ss2.x" />
	</bean>

	<bean id="ss2_y_motor" class="gda.spring.EpicsMotorFactoryBean">
		<property name="deviceName" value="ss2.y" />
	</bean>

	<bean id="ss2_z_motor" class="gda.spring.EpicsMotorFactoryBean">
		<property name="deviceName" value="ss2.z" />
	</bean>

</beans>
