<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">


	<bean id="edxd" class="gda.device.detector.edxd.EDXDController">
		<property name="deviceName" value="xmap_dxp" />
		<property name="numberOfElements" value="24" />
		<!-- <property name="numberOfElements" value="4" /> -->
	</bean>

	<bean id="edxdAlignment" class="gda.device.detector.edxd.EDXDAlignment">
		<property name="edxdController" ref="edxd" />
		<property name="edxdCalibrationResourceHandler" ref="edxdCalibrationResourceHandler" />
		<property name="eh1" ref="camEH1" />
		<property name="eh2" ref="camEH2" />
	</bean>

	<bean id="edxdCalibrationResourceHandler"
		class="uk.ac.gda.edxd.calibration.edxdcalibration.util.EdxdCalibrationResourceHandler">
		<property name="fileLocation" value="${gda.var}/edxdcalibration.ec" />
	</bean>

	<bean class="org.springframework.remoting.rmi.RmiServiceExporter">
		<property name="serviceName" value="gda/edxdAlignment" />
		<property name="service" ref="edxdAlignment" />
		<property name="serviceInterface" value="uk.ac.gda.edxd.common.IEdxdAlignment" />
	</bean>
</beans>