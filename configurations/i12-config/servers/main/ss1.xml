			<list>
				<value>%.3f</value>
			</list>
		</property>
	</bean>

	<bean id="ss1_rx" class="gda.device.scannable.ScannableMotor">
		<property name="name" value="ss1_rx" />
		<property name="motor" ref="ss1_rx_motor" />
