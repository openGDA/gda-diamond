<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

	<!-- Define the scannable group -->

	<bean id="gbc1" class="gda.device.scannable.scannablegroup.ScannableGroup">
		<property name="groupMembers">
			<list>

				<bean id="gbc1_flow" class="gda.device.monitor.EpicsMonitor">
					<property name="name" value="gbc1_flow" />
					<property name="deviceName" value="gbc1.water" />
				</bean>

				<bean id="gbc1_t3" class="gda.device.monitor.EpicsMonitor">
					<property name="name" value="gbc1_t3" />
					<property name="deviceName" value="gbc1.temp3" />
				</bean>

				<bean id="gbc1_t4" class="gda.device.monitor.EpicsMonitor">
					<property name="name" value="gbc1_t4" />
					<property name="deviceName" value="gbc1.temp4" />
				</bean>

			</list>
		</property>
	</bean>

</beans>
