
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">
	<!--  Define all the motors 
  -->
	<bean id="s2_top_motor" class="gda.spring.EpicsMotorFactoryBean">
		<property name="deviceName" value="s2.top" />
	</bean>
	<bean id="s2_bottom_motor" class="gda.spring.EpicsMotorFactoryBean">
		<property name="deviceName" value="s2.bottom" />
	</bean>
	<bean id="s2_in_motor" class="gda.spring.EpicsMotorFactoryBean">
		<property name="deviceName" value="s2.in" />
	</bean>
	<bean id="s2_out_motor" class="gda.spring.EpicsMotorFactoryBean">
		<property name="deviceName" value="s2.out" />
	</bean>
	<bean id="s2_xs_motor" class="gda.spring.EpicsMotorFactoryBean">
		<property name="deviceName" value="s2.xs" />
	</bean>
	<bean id="s2_xc_motor" class="gda.spring.EpicsMotorFactoryBean">
		<property name="deviceName" value="s2.xc" />
	</bean>
	<bean id="s2_ys_motor" class="gda.spring.EpicsMotorFactoryBean">
		<property name="deviceName" value="s2.ys" />
	</bean>
	<bean id="s2_yc_motor" class="gda.spring.EpicsMotorFactoryBean">
		<property name="deviceName" value="s2.yc" />
	</bean>
	<!--  Define the scannable group 
  -->
	<bean id="s2" class="gda.device.scannable.scannablegroup.ScannableGroup">
		<property name="groupMembers">
			<list>
				<!--  Scannables in the group 
  -->
				<bean id="s2_top" class="gda.device.scannable.ScannableMotor">
					<property name="name" value="s2_top" />
					<property name="motor" ref="s2_top_motor" />
					<property name="tolerance" value="0.01" />
					<property name="outputFormat">
						<list>
							<value>%.3f</value>
						</list>
					</property>
				</bean>
				<bean id="s2_bottom" class="gda.device.scannable.ScannableMotor">
					<property name="name" value="s2_bottom" />
					<property name="motor" ref="s2_bottom_motor" />
					<property name="tolerance" value="0.01" />
					<property name="outputFormat">
						<list>
							<value>%.3f</value>
						</list>
					</property>
				</bean>
				<bean id="s2_in" class="gda.device.scannable.ScannableMotor">
					<property name="name" value="s2_in" />
					<property name="motor" ref="s2_in_motor" />
					<property name="tolerance" value="0.01" />
					<property name="outputFormat">
						<list>
							<value>%.3f</value>
						</list>
					</property>
				</bean>
				<bean id="s2_out" class="gda.device.scannable.ScannableMotor">
					<property name="name" value="s2_out" />
					<property name="motor" ref="s2_out_motor" />
					<property name="tolerance" value="0.01" />
					<property name="outputFormat">
						<list>
							<value>%.3f</value>
						</list>
					</property>
				</bean>
				<bean id="s2_xs" class="gda.device.scannable.ScannableMotor">
					<property name="name" value="s2_xs" />
					<property name="motor" ref="s2_xs_motor" />
					<property name="tolerance" value="0.01" />
					<property name="outputFormat">
						<list>
							<value>%.3f</value>
						</list>
					</property>
				</bean>
				<bean id="s2_xc" class="gda.device.scannable.ScannableMotor">
					<property name="name" value="s2_xc" />
					<property name="motor" ref="s2_xc_motor" />
					<property name="tolerance" value="0.01" />
					<property name="outputFormat">
						<list>
							<value>%.3f</value>
						</list>
					</property>
				</bean>
				<bean id="s2_ys" class="gda.device.scannable.ScannableMotor">
					<property name="name" value="s2_ys" />
					<property name="motor" ref="s2_ys_motor" />
					<property name="tolerance" value="0.01" />
					<property name="outputFormat">
						<list>
							<value>%.3f</value>
						</list>
					</property>
				</bean>
				<bean id="s2_yc" class="gda.device.scannable.ScannableMotor">
					<property name="name" value="s2_yc" />
					<property name="motor" ref="s2_yc_motor" />
					<property name="tolerance" value="0.01" />
					<property name="outputFormat">
						<list>
							<value>%.3f</value>
						</list>
					</property>
				</bean>
			</list>
		</property>
	</bean>
</beans>