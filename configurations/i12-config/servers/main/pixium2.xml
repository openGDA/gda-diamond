<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">
	<description>
		There are 3 ways of configure EPICS access:
		1. use Java content objects provided by epics-x.x.x.jar to specify
		'deviceName' property;
		e.g. <!-- property name="deviceName" value="pixium.cam_ADBase"/ -->
		2. set pvProvider property which in turn uses XMLPVProvider bean to
		specify 'deviceName' property;
		e.g. <!-- property name="pvProvider"> <bean 
			class="uk.ac.gda.devices.excalibur.impl.XMLPVProvider"> <property name="deviceName" 
			value="pixium.cam_ADBase" /> </bean> </property -->
		3. set base PV name property with field or sub-element being coded in
		Java classes.
		e.g. <!-- property name="basePVName" value="BL12I-EA-DET-05:PIX:" / -->
	</description>
	<!-- Set up the Area Detector base class which will manage the pix.cam -->
	<bean id="pix.cam" class="gda.device.detector.areadetector.v17.impl.ADBaseImpl">
		<property name="deviceName" value="pix.cam_ADBase" />
		<property name="initialDataType" value="UInt16" />
		<property name="initialMinX" value="0" />
		<property name="initialMinY" value="0" />
		<property name="initialSizeX" value="2880" />
		<property name="initialSizeY" value="2881" />
		<property name="initialBinX" value="1" />
		<property name="initialBinY" value="1" />
		<property name="initialNDAttributesFile" value="Z:/epics/areadetector/pixiumattributes.xml"/>
	</bean>

	<bean id="pix.roi1" class="gda.device.detector.areadetector.v17.impl.NDROIImpl">
		<property name="deviceName" value="pix.roi1_NDROI" />
		<property name="pluginBase">
			<bean class="gda.device.detector.areadetector.v17.impl.NDPluginBaseImpl">
				<property name="deviceName" value="pix.roi1_NDPluginBase" />
				<property name="initialArrayPort" value="pix.cam" />
				<property name="initialArrayAddress" value="0" />
				<property name="initialBlockingCallbacks" value="true" />
				<property name="initialEnableCallbacks" value="1" />
			</bean>
		</property>
		<property name="initialMinX" value="0" />
		<property name="initialMinY" value="0" />
		<property name="initialSizeX" value="2880" />
		<property name="initialSizeY" value="2881" />
		<property name="initialBinX" value="1" />
		<property name="initialBinY" value="1" />
	</bean>

	<bean id="pix.arr" class="gda.device.detector.areadetector.v17.impl.NDArrayImpl">
		<property name="deviceName" value="pix.arr_NDStdArrays" />
		<property name="pluginBase">
			<bean class="gda.device.detector.areadetector.v17.impl.NDPluginBaseImpl">
				<property name="deviceName" value="pix.arr_NDPluginBase" />
				<property name="initialArrayPort" value="pix.roi1" />
				<property name="initialArrayAddress" value="0" />
				<property name="initialBlockingCallbacks" value="false" />
				<property name="initialEnableCallbacks" value="0" />
			</bean>
		</property>
	</bean>

	<bean id="pix.proc" class="gda.device.detector.areadetector.v17.impl.NDProcessImpl">
		<property name="deviceName" value="pix.proc_NDProcess" />
		<property name="pluginBase">
			<bean class="gda.device.detector.areadetector.v17.impl.NDPluginBaseImpl">
				<property name="deviceName" value="pix.proc_NDPluginBase" />
				<property name="initialArrayPort" value="pix.cam" />
				<property name="initialArrayAddress" value="0" />
				<property name="initialBlockingCallbacks" value="false" />
				<property name="initialEnableCallbacks" value="1" />
			</bean>
		</property>
		<property name="initialEnableBackground" value="0" />
		<property name="initialEnableFlatField" value="0" />
		<property name="initialEnableOffsetScale" value="1" />
		<property name="initialEnableHighClip" value="0" />
		<property name="initialEnableLowClip" value="0" />
		<property name="initialEnableFilter" value="0" />
	</bean>

	<bean id="pix.stat" class="gda.device.detector.areadetector.v17.impl.NDStatsImpl">
		<property name="deviceName" value="pix.stat_NDStats" />
		<property name="pluginBase">
			<bean class="gda.device.detector.areadetector.v17.impl.NDPluginBaseImpl">
				<property name="deviceName" value="pix.stat_NDPluginBase" />
				<property name="initialArrayPort" value="pix.cam" />
				<property name="initialArrayAddress" value="0" />
				<property name="initialBlockingCallbacks" value="false" />
				<property name="initialEnableCallbacks" value="1" />
			</bean>
		</property>
	</bean>

	<bean id="pix.draw" class="gda.device.detector.areadetector.v17.impl.NDOverlayImpl">
		<property name="deviceName" value="pix.draw_NDOverlay" />
		<property name="pluginBase">
			<bean class="gda.device.detector.areadetector.v17.impl.NDPluginBaseImpl">
				<property name="deviceName" value="pix.draw_NDPluginBase" />
				<property name="initialArrayPort" value="pix.cam" />
				<property name="initialArrayAddress" value="0" />
				<property name="initialBlockingCallbacks" value="false" />
				<property name="initialEnableCallbacks" value="0" />
			</bean>
		</property>
	</bean>

	<bean id="pix.tif" class="gda.device.detector.areadetector.v17.impl.NDFileImpl">
		<property name="deviceName" value="pix.tif_NDFile" />
		<property name="pluginBase">
			<bean class="gda.device.detector.areadetector.v17.impl.NDPluginBaseImpl">
				<property name="deviceName" value="pix.tif_NDPluginBase" />
				<property name="initialArrayPort" value="pix.cam" />
				<property name="initialArrayAddress" value="0" />
				<property name="initialBlockingCallbacks" value="false" />
				<property name="initialEnableCallbacks" value="1" />
			</bean>
		</property>
		<property name="initialAutoSave" value="Yes" />
		<property name="initialAutoIncrement" value="Yes" />
		<property name="initialWriteMode" value="2" />
		<property name="initialNumCapture" value="1" />
		<property name="initialFileName" value="pixi" />
		<property name="initialFileTemplate" value="%s%s_%05d.tif" />
	</bean>

	<bean id="pix.hdf" class="gda.device.detector.areadetector.v17.impl.NDFileHDF5Impl">
		<property name="deviceName" value="pix.hdf_NDFileHDF5" />
		<property name="file">
			<bean class="gda.device.detector.areadetector.v17.impl.NDFileImpl">
				<property name="deviceName" value="pix.hdf_NDFile" />
				<property name="pluginBase">
					<bean class="gda.device.detector.areadetector.v17.impl.NDPluginBaseImpl">
						<property name="deviceName" value="pix.hdf_NDPluginBase" />
						<property name="initialArrayPort" value="pix.cam" />
						<property name="initialArrayAddress" value="0" />
						<property name="initialBlockingCallbacks" value="false" />
						<property name="initialEnableCallbacks" value="1" />
					</bean>
				</property>
				<property name="initialAutoSave" value="Yes" />
				<property name="initialAutoIncrement" value="Yes" />
				<property name="initialWriteMode" value="2" />
				<property name="initialNumCapture" value="1" />
				<property name="initialFileName" value="pixi" />
				<property name="initialFileTemplate" value="%s%s.h5" />
			</bean>
		</property>
		<property name="initialNumExtraDims" value="0" />
		<property name="initialExtraDimSizeN" value="1" />
		<property name="initialExtraDimSizeX" value="0" />
		<property name="initialExtraDimSizeY" value="0" />
		<property name="initialNumRowChunks" value="2881" />
		<property name="initialCompression" value="szip" />
		<property name="initialNumBitOffset" value="0" />
		<property name="initialNumBitPrecision" value="8" />
		<property name="initialSzipNumPixels" value="16" />
		<property name="initialZCompressLevel" value="6" />
	</bean>
	
	<bean id="pix.mpeg" class="gda.device.detector.areadetector.v17.impl.FfmpegStreamImpl">
		<property name="deviceName" value="pix.mpeg_ffmpegStream" />
		<property name="pluginBase">
			<bean class="gda.device.detector.areadetector.v17.impl.NDPluginBaseImpl">
				<property name="deviceName" value="pix.mpeg_NDPluginBase" />
				<property name="initialArrayPort" value="pix.proc" />
				<property name="initialArrayAddress" value="0" />
				<property name="initialBlockingCallbacks" value="false" />
				<property name="initialEnableCallbacks" value="1" />
			</bean>
		</property>
		<property name="initialQuality" value="100" />
		<property name="initialFalseColor" value="0" />
		<property name="initialAlwaysOn" value="0" />
	</bean>
	
	<bean id="pixiumcontroller" class="gda.device.detector.pixium.PixiumControllerv17">
		<property name="deviceName" value="pix.cam_pixium" />
<!-- 		<property name="basePVName" value="BL12I-EA-DET-05:PIX:" /> -->
		<property name="areaDetector" ref="pix.cam" />
		<property name="roi" ref="pix.roi1" />
		<property name="proc" ref="pix.proc" />
		<property name="stat" ref="pix.stat" />
		<property name="draw" ref="pix.draw" />
		<property name="arr" ref="pix.arr" />
		<property name="tiff" ref="pix.tif" />
		<property name="hdf" ref="pix.hdf" />
		<property name="mjpeg" ref="pix.mpeg" />
		<property name="idlePollTime_ms" value="100" />
	</bean>

	<bean id="pixium" class="gda.device.detector.pixium.PixiumDetector">
		<property name="controller" ref="pixiumcontroller" />
		<property name="level" value="9"/>
		<property name="detectorID" value="pixium" />
		<property name="localDataStoreWindows2LinuxFileName">
			<bean
				class="gda.device.detector.pixium.PixiumDetector.Windows2LinuxFilePath">
				<property name="windowsPath" value="C:" />
				<property name="linuxPath" value="/dls/i12" />
			</bean>
		</property>
		<property name="nonLocalDataStoreWindows2LinuxFileName">
			<bean
				class="gda.device.detector.pixium.PixiumDetector.Windows2LinuxFilePath">
				<property name="windowsPath" value="Z:" />
				<property name="linuxPath" value="/dls/i12" />
			</bean>
		</property>
		<property name="plotName" value="PixiumPlot"/>	
		<property name="local" value="false"/>	
	</bean>
</beans>