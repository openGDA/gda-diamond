<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">


	<!-- Define all the motors -->
	<bean id="s1_top_motor" class="gda.spring.EpicsMotorFactoryBean">
		<property name="deviceName" value="fe1.yplus" />
	</bean>

	<bean id="s1_bottom_motor" class="gda.spring.EpicsMotorFactoryBean">
		<property name="deviceName" value="fe1.yminus" />
	</bean>

	<bean id="s1_in_motor" class="gda.spring.EpicsMotorFactoryBean">
		<property name="deviceName" value="fe1.xminus" />
	</bean>

	<bean id="s1_out_motor" class="gda.spring.EpicsMotorFactoryBean">
		<property name="deviceName" value="fe1.xplus" />
	</bean>

	<bean id="s1_xs_motor" class="gda.spring.EpicsMotorFactoryBean">
		<property name="deviceName" value="fe1.xsize" />
	</bean>

	<bean id="s1_xc_motor" class="gda.spring.EpicsMotorFactoryBean">
		<property name="deviceName" value="fe1.xcentre" />
	</bean>

	<bean id="s1_ys_motor" class="gda.spring.EpicsMotorFactoryBean">
		<property name="deviceName" value="fe1.ysize" />
	</bean>

	<bean id="s1_yc_motor" class="gda.spring.EpicsMotorFactoryBean">
		<property name="deviceName" value="fe1.ycentre" />
	</bean>

	<!-- Define the scannable group -->

	<bean id="s1" class="gda.device.scannable.scannablegroup.ScannableGroup">
		<property name="groupMembers">
			<list>
			
				<!-- Scannables in the group -->
				<bean id="s1_top" class="gda.device.scannable.ScannableMotor">
					<property name="name" value="s1_top" />
					<property name="motor" ref="s1_top_motor" />
					<property name="tolerance" value="0.01" />
				</bean>

				<bean id="s1_bottom" class="gda.device.scannable.ScannableMotor">
					<property name="name" value="s1_bottom" />
					<property name="motor" ref="s1_bottom_motor" />
					<property name="tolerance" value="0.01" />
				</bean>

				<bean id="s1_in" class="gda.device.scannable.ScannableMotor">
					<property name="name" value="s1_in" />
					<property name="motor" ref="s1_in_motor" />
					<property name="tolerance" value="0.01" />
				</bean>

				<bean id="s1_out" class="gda.device.scannable.ScannableMotor">
					<property name="name" value="s1_out" />
					<property name="motor" ref="s1_out_motor" />
					<property name="tolerance" value="0.01" />
				</bean>

				<bean id="s1_xs" class="gda.device.scannable.ScannableMotor">
					<property name="name" value="s1_xs" />
					<property name="motor" ref="s1_xs_motor" />
					<property name="tolerance" value="0.01" />
				</bean>

				<bean id="s1_xc" class="gda.device.scannable.ScannableMotor">
					<property name="name" value="s1_xc" />
					<property name="motor" ref="s1_xc_motor" />
					<property name="tolerance" value="0.01" />
				</bean>

				<bean id="s1_ys" class="gda.device.scannable.ScannableMotor">
					<property name="name" value="s1_ys" />
					<property name="motor" ref="s1_ys_motor" />
					<property name="tolerance" value="0.01" />
				</bean>

				<bean id="s1_yc" class="gda.device.scannable.ScannableMotor">
					<property name="name" value="s1_yc" />
					<property name="motor" ref="s1_yc_motor" />
					<property name="tolerance" value="0.01" />
				</bean>

				<!-- Diagnostics -->
				<bean id="s1_t1" class="gda.device.monitor.EpicsMonitor">
					<property name="name" value="s1_t1" />
					<property name="deviceName" value="shtr1.temp1" />
				</bean>

				<bean id="s1_t2" class="gda.device.monitor.EpicsMonitor">
					<property name="name" value="s1_t2" />
					<property name="deviceName" value="shtr1.temp2" />
				</bean>

			</list>
		</property>
	</bean>

</beans>
