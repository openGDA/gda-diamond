	</bean>
	<!--  Define the scannable groups -->
	<bean id="mono" class="gda.device.scannable.scannablegroup.ScannableGroup">
		<property name="groupMembers">
			<list>
				<!--  Scannables in the group -->
				<ref bean="m_x"/>
				<ref bean="m_y1"/>
				<ref bean="m_y2"/>
				<ref bean="m_y3"/>
			</list>
		</property>
	</bean>

