<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

	<bean id="feshtr1" class="gda.device.enumpositioner.EpicsSimpleMbbinary">
		<property name="deviceName" value="FE.SHTR1" />
	</bean>

	<bean id="feshtr2" class="gda.device.enumpositioner.EpicsSimpleMbbinary">
		<property name="deviceName" value="FE.SHTR2" />
	</bean>
	<bean id="oh2shtr" class="gda.device.enumpositioner.EpicsPneumaticCallback">
		<property name="deviceName" value="shtr1" />
	</bean>

	<bean id="eh1shtr" class="gda.device.enumpositioner.EpicsPneumaticCallback">
		<property name="deviceName" value="shtr2" />
	</bean>
	<bean id="extshtr" class="gda.device.enumpositioner.EpicsPneumaticCallback">
		<property name="deviceName" value="shtr3" />
	</bean>
	<!-- RMI export -->
	<bean class="uk.ac.gda.remoting.server.GdaRmiServiceExporter">
		<property name="serviceName" value="gda/eh1shtr" />
		<property name="service" ref="eh1shtr" />
		<property name="serviceInterface" value="gda.device.Scannable" />
	</bean>
	<bean class="uk.ac.gda.remoting.server.GdaRmiServiceExporter">
		<property name="serviceName" value="gda/extshtr" />
		<property name="service" ref="extshtr" />
		<property name="serviceInterface" value="gda.device.Scannable" />
	</bean>
</beans>
