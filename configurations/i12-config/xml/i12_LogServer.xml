<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!--<turboFilter class="ch.qos.logback.classic.turbo.MarkerFilter">
        <Name>Finest</Name>
        <Marker>FINEST</Marker>
        <OnMatch>DENY</OnMatch>
    </turboFilter>-->
    <!-- display message in Logger Server's console -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <layout class="ch.qos.logback.classic.PatternLayout">
            <Pattern>%date %-5level %logger - %message %rEx %n</Pattern>
        </layout>
    </appender>
    <!-- Socket for forwarding log message to LogPanel application -->
    <appender name="WS001_LogPanel" class="ch.qos.logback.classic.net.SocketAppender">
        <RemoteHost>i12-ws001.diamond.ac.uk</RemoteHost>
        <Port>6790</Port>
        <ReconnectionDelay>10000</ReconnectionDelay>
        <IncludeCallerData>true</IncludeCallerData>
    </appender>
     <appender name="WS001_LogPanel1" class="ch.qos.logback.classic.net.SocketAppender">
        <RemoteHost>i12-ws001.diamond.ac.uk</RemoteHost>
        <Port>6791</Port>
        <ReconnectionDelay>10000</ReconnectionDelay>
        <IncludeCallerData>true</IncludeCallerData>
    </appender>
    <appender name="WS001_LogPanel2" class="ch.qos.logback.classic.net.SocketAppender">
        <RemoteHost>i12-ws001.diamond.ac.uk</RemoteHost>
        <Port>6792</Port>
        <ReconnectionDelay>10000</ReconnectionDelay>
        <IncludeCallerData>true</IncludeCallerData>
    </appender>
    <appender name="WS002_LogPanel" class="ch.qos.logback.classic.net.SocketAppender">
        <RemoteHost>i12-ws002.diamond.ac.uk</RemoteHost>
        <Port>6790</Port>
        <ReconnectionDelay>10000</ReconnectionDelay>
        <IncludeCallerData>true</IncludeCallerData>
    </appender>    
    <appender name="WS002_LogPanel1" class="ch.qos.logback.classic.net.SocketAppender">
        <RemoteHost>i12-ws002.diamond.ac.uk</RemoteHost>
        <Port>6791</Port>
        <ReconnectionDelay>10000</ReconnectionDelay>
        <IncludeCallerData>true</IncludeCallerData>
    </appender>    
    <appender name="WS002_LogPanel2" class="ch.qos.logback.classic.net.SocketAppender">
        <RemoteHost>i12-ws002.diamond.ac.uk</RemoteHost>
        <Port>6792</Port>
        <ReconnectionDelay>10000</ReconnectionDelay>
        <IncludeCallerData>true</IncludeCallerData>
    </appender>    
    <appender name="WS003_LogPanel" class="ch.qos.logback.classic.net.SocketAppender">
        <RemoteHost>i12-ws003.diamond.ac.uk</RemoteHost>
        <Port>6790</Port>
        <ReconnectionDelay>10000</ReconnectionDelay>
        <IncludeCallerData>true</IncludeCallerData>
    </appender>    
    <appender name="WS003_LogPanel1" class="ch.qos.logback.classic.net.SocketAppender">
        <RemoteHost>i12-ws003.diamond.ac.uk</RemoteHost>
        <Port>6791</Port>
        <ReconnectionDelay>10000</ReconnectionDelay>
        <IncludeCallerData>true</IncludeCallerData>
    </appender>    
    <appender name="WS003_LogPanel2" class="ch.qos.logback.classic.net.SocketAppender">
        <RemoteHost>i12-ws003.diamond.ac.uk</RemoteHost>
        <Port>6792</Port>
        <ReconnectionDelay>10000</ReconnectionDelay>
        <IncludeCallerData>true</IncludeCallerData>
    </appender>    
    <appender name="DebugFILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <File>/dls_sw/i12/logs/gda_server.log</File>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <FileNamePattern>/dls_sw/i12/logs/gda.%d{yyyy-MM-dd}.log.gz</FileNamePattern>
        </rollingPolicy>
        <layout class="ch.qos.logback.classic.PatternLayout">
            <pattern>%d %-5level %logger - %m %rEx %n</pattern>
        </layout>
    </appender>
    <logger name="gda">
        <level value="DEBUG"/>
    </logger>
    <logger name="gda.device.corba.impl">
        <level value="INFO"/>
    </logger>
    <logger name="gda.device.temperature">
        <level value="INFO"/>
    </logger>
    <logger name="gda.jython.corba.impl">
        <level value="INFO"/>
    </logger>
    <root>
        <level value="ALL"/>
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="WS001_LogPanel"/>
        <appender-ref ref="WS001_LogPanel1"/>
        <appender-ref ref="WS001_LogPanel2"/>
        <appender-ref ref="WS002_LogPanel"/>
        <appender-ref ref="WS002_LogPanel1"/>
        <appender-ref ref="WS002_LogPanel2"/>
        <appender-ref ref="WS003_LogPanel"/>
        <appender-ref ref="WS003_LogPanel1"/>
        <appender-ref ref="WS003_LogPanel2"/>
        <appender-ref ref="DebugFILE"/>
    </root>
</configuration>
