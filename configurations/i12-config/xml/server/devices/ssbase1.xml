<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">


	<!-- Define all the motors -->	
	<bean id="ssbase_x_motor" class="gda.spring.EpicsMotorFactoryBean">
		<property name="deviceName" value="ssbase.x" />
	</bean>


	<!-- Define the scannable group -->

	<bean id="ssbase" class="gda.device.scannable.scannablegroup.ScannableGroup">
		<property name="groupMembers">
			<list>
			
				<!-- Scannables in the group -->
				<bean id="ssbase_x" class="gda.device.scannable.ScannableMotor">
					<property name="name" value="ssbase_x" />
					<property name="motor" ref="ssbase_x_motor" />
					<property name="tolerance" value="0.01" />
				</bean>
				
			</list>
		</property>
	</bean>

</beans>
