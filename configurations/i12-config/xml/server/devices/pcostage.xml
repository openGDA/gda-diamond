<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">


	<!-- Define all the motors -->
	<bean id="pco_a_motor" class="gda.spring.EpicsMotorFactoryBean">
		<property name="deviceName" value="ca.a" />
	</bean>

	<bean id="pco_f_motor" class="gda.spring.EpicsMotorFactoryBean">
		<property name="deviceName" value="ca.f" />
	</bean>

	<bean id="pco_z_motor" class="gda.spring.EpicsMotorFactoryBean">
		<property name="deviceName" value="ca.z" />
	</bean>


	<!-- Define the scannable group -->

	<bean id="pco" class="gda.device.scannable.scannablegroup.ScannableGroup">
		<property name="groupMembers">
			<list>
			
				<!-- Scannables in the group -->
				<bean id="pco_a" class="gda.device.scannable.ScannableMotor">
					<property name="name" value="pco_a" />
					<property name="motor" ref="pco_a_motor" />
					<property name="tolerance" value="0.01" />
				</bean>

				<bean id="pco_f" class="gda.device.scannable.ScannableMotor">
					<property name="name" value="pco_f" />
					<property name="motor" ref="pco_f_motor" />
					<property name="tolerance" value="0.01" />
				</bean>

				<bean id="pco_z" class="gda.device.scannable.ScannableMotor">
					<property name="name" value="pco_z" />
					<property name="motor" ref="pco_z_motor" />
					<property name="tolerance" value="0.01" />
				</bean>

			</list>
		</property>
	</bean>

</beans>
