<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">
	
	<!-- Set up the Area Detector class which will manager the PCO camea -->
	<bean id="AreaDetector" class="gda.device.detector.areadetector.EpicsAreaDetector">
		<property name="basePVName" value="BL12I-EA-DET-05:PIX:" />
		<property name="initialDataType" value="UInt16" />
		<property name="initialMinX" value="0" />
		<property name="initialMinY" value="0" />
		<property name="initialSizeX" value="2880" />
		<property name="initialSizeY" value="2881" />
		<property name="initialBinX" value="1" />
		<property name="initialBinY" value="1" />
	</bean>
	
	<!-- Set up the Region of interest manager -->
	<bean id="AreaDetectorROI" class="gda.device.detector.areadetector.EpicsAreaDetectorROI">
		<property name="basePVName" value="BL12I-EA-DET-05:ROI1:" />
	</bean>
	
	<!-- Full frame parts for the acquisition mode -->
	<!-- First set up the ROI which will be used for the real acquisitions, i.e the full available frame -->
	<bean id="FullFrameROI" class="gda.device.detector.areadetector.EpicsAreaDetectorROIElement">
		<property name="basePVName" value="BL12I-EA-DET-05:ROI1:0:" />
		<property name="initialDataType" value="UInt16" />
		<property name="initialMinX" value="0" />
		<property name="initialMinY" value="0" />
		<property name="initialSizeX" value="2880" />
		<property name="initialSizeY" value="2881" />
		<property name="initialBinX" value="1" />
		<property name="initialBinY" value="1" />
	</bean>
	
	<!-- Now set up 3 File savers which are associated with it -->
	<bean id="FullFrameFileSave" class="gda.device.detector.areadetector.EpicsAreaDetectorFileSave">
		<property name="basePVName" value="BL12I-EA-DET-05:TIFF:" />
		<property name="initialFileName" value="pixi" />
		<property name="initialFileTemplate" value="%s/%s_%04d.tif" />
		<property name="initialAutoIncrement" value="Yes" />
		<property name="initialAutoSave" value="Yes" />
		<property name="initialWriteMode" value="Single" />
		<property name="initialNumCapture" value="0" />
		<property name="initialArrayPort" value="pixium" />
		<property name="initialArrayAddress" value="0" />
		<property name="initialBlockingCallbacks" value="true" />
	</bean>	

	
	<!-- Image Recording Section -->
	<bean id="PreviewROI" class="gda.device.detector.areadetector.EpicsAreaDetectorROIElement">
		<property name="basePVName" value="BL12I-EA-DET-05:ROI1:1:" />
		<property name="initialDataType" value="UInt16" />
		<property name="initialUseROI" value="true"/>
		<property name="initialMinX" value="0" />
		<property name="initialMinY" value="0" />
		<property name="initialSizeX" value="2880" />
		<property name="initialSizeY" value="2881" />
		<property name="initialBinX" value="1" />
		<property name="initialBinY" value="1" />
	</bean>
	
	<bean id="ImageArray" class="gda.device.detector.areadetector.EPICSAreaDetectorImage">
		<property name="basePVName" value="BL12I-EA-DET-05:ARR1:" />
		<property name="initialArrayPort" value="pixiumROI" />
		<property name="initialArrayAddress" value="1" />
	</bean>	
	
	<!-- The actual camera definition -->
	<bean id="pixium" class="gda.device.detector.pixium.PixiumController">
	<property name="basePVName" value="BL12I-EA-DET-05:PIX:" />
		<property name="areaDetector" ref="AreaDetector" />
		<property name="areaDetectorROI" ref="AreaDetectorROI" />
		<property name="fullFrameROI" ref="FullFrameROI" />
		<property name="fullFrameSaver" ref="FullFrameFileSave" />
		<property name="previewROI" ref="PreviewROI" />
		<property name="image" ref="ImageArray" />
		<property name="idlePollTime_ms" value="100" />	
		<property name="plotName" value="PixiumPlot"/>		
	</bean>

</beans>