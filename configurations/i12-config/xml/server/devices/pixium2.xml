<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">
	<description>
		There are 3 ways of configure EPICS access:
		1. use Java content objects provided by epics-x.x.x.jar to specify
		'deviceName' property;
		e.g. <!-- property name="deviceName" value="pixium.cam_ADBase"/ -->
		2. set pvProvider property which in turn uses XMLPVProvider bean to
		specify 'deviceName' property;
		e.g. <!-- property name="pvProvider"> <bean 
			class="uk.ac.gda.devices.excalibur.impl.XMLPVProvider"> <property name="deviceName" 
			value="pixium.cam_ADBase" /> </bean> </property -->
		3. set base PV name property with field or sub-element being coded in
		Java classes.
		e.g. <!-- property name="basePVName" value="BL12I-EA-DET-05:PIX:" / -->
	</description>
	<!-- Set up the Area Detector base class which will manage the pixium.cam -->
	<bean id="AreaDetector" class="gda.device.detector.areadetector.v17.impl.ADBaseImpl">
		<property name="deviceName" value="pixium.cam_ADBase" />
		<property name="initialDataType" value="UInt16" />
		<property name="initialMinX" value="0" />
		<property name="initialMinY" value="0" />
		<property name="initialSizeX" value="2880" />
		<property name="initialSizeY" value="2881" />
		<property name="initialBinX" value="1" />
		<property name="initialBinY" value="1" />
	</bean>

	<bean id="roi" class="gda.device.detector.areadetector.v17.impl.NDROIImpl">
		<property name="deviceName" value="pixium.roi_NDROI" />
		<property name="pluginBase">
			<bean class="gda.device.detector.areadetector.v17.impl.NDPluginBaseImpl">
				<property name="deviceName" value="pixium.roi_NDPluginBase" />
				<property name="initialArrayPort" value="pixium.cam" />
				<property name="initialArrayAddress" value="0" />
				<property name="initialBlockingCallbacks" value="true" />
				<property name="initialEnableCallbacks" value="0" />
			</bean>
		</property>
		<property name="initialMinX" value="0" />
		<property name="initialMinY" value="0" />
		<property name="initialSizeX" value="2880" />
		<property name="initialSizeY" value="2881" />
		<property name="initialBinX" value="1" />
		<property name="initialBinY" value="1" />
	</bean>

	<bean id="proc" class="gda.device.detector.areadetector.v17.impl.NDProcessImpl">
		<property name="deviceName" value="pixium.proc_NDProcess" />
		<property name="pluginBase">
			<bean class="gda.device.detector.areadetector.v17.impl.NDPluginBaseImpl">
				<property name="deviceName" value="pixium.proc_NDPluginBase" />
				<property name="initialArrayPort" value="pixium.cam" />
				<property name="initialArrayAddress" value="0" />
				<property name="initialBlockingCallbacks" value="true" />
				<property name="initialEnableCallbacks" value="0" />
			</bean>
		</property>
		<property name="enableBackground" value="0" />
		<property name="enableFlatField" value="0" />
		<property name="enableOffsetScale" value="0" />
		<property name="enableHighClip" value="0" />
		<property name="enableLowClip" value="0" />
		<property name="enableFilter" value="0" />
	</bean>

	<bean id="stats" class="gda.device.detector.areadetector.v17.impl.NDStatsImpl">
		<property name="deviceName" value="pixium.stat_NDStats" />
		<property name="pluginBase">
			<bean class="gda.device.detector.areadetector.v17.impl.NDPluginBaseImpl">
				<property name="deviceName" value="pixium.stat_NDPluginBase" />
				<property name="initialArrayPort" value="pixium.cam" />
				<property name="initialArrayAddress" value="0" />
				<property name="initialBlockingCallbacks" value="true" />
				<property name="initialEnableCallbacks" value="0" />
			</bean>
		</property>
	</bean>

	<bean id="draw" class="gda.device.detector.areadetector.v17.impl.NDOverlayImpl">
		<property name="deviceName" value="pixium.draw_NDOverlay" />
		<property name="pluginBase">
			<bean class="gda.device.detector.areadetector.v17.impl.NDPluginBaseImpl">
				<property name="deviceName" value="pixium.draw_NDPluginBase" />
				<property name="initialArrayPort" value="pixium.cam" />
				<property name="initialArrayAddress" value="0" />
				<property name="initialBlockingCallbacks" value="true" />
				<property name="initialEnableCallbacks" value="0" />
			</bean>
		</property>
	</bean>

	<bean id="TiffFileSaver" class="gda.device.detector.areadetector.v17.impl.NDFileImpl">
		<property name="deviceName" value="pixium.tiff_NDFile" />
		<property name="pluginBase">
			<bean class="gda.device.detector.areadetector.v17.impl.NDPluginBaseImpl">
				<property name="deviceName" value="pixium.tiff_NDPluginBase" />
				<property name="initialArrayPort" value="pixium.cam" />
				<property name="initialArrayAddress" value="0" />
				<property name="initialBlockingCallbacks" value="true" />
				<property name="initialEnableCallbacks" value="0" />
			</bean>
		</property>
		<property name="initialAutoSave" value="Yes" />
		<property name="initialAutoIncrement" value="Yes" />
		<property name="initialWriteMode" value="Single" />
		<property name="initialNumCapture" value="0" />
		<property name="initialFileName" value="pixi" />
		<property name="initialFileTemplate" value="%s/%s_%04d.tif" />
	</bean>

	<bean id="NexusSaver"
		class="gda.device.detector.areadetector.v17.impl.NDFileNexusImpl">
		<property name="deviceName" value="pixium.nxs_NDFile" />
		<property name="file">
			<bean class="gda.device.detector.areadetector.v17.impl.NDFileImpl">
				<property name="deviceName" value="pixium.nxs_NDFile" />
				<property name="pluginBase">
					<bean class="gda.device.detector.areadetector.v17.impl.NDPluginBaseImpl">
						<property name="deviceName" value="pixium.nxs_NDPluginBase" />
						<property name="initialArrayPort" value="pixium.cam" />
						<property name="initialArrayAddress" value="0" />
						<property name="initialBlockingCallbacks" value="true" />
						<property name="initialEnableCallbacks" value="0" />
					</bean>
				</property>
				<property name="initialAutoSave" value="Yes" />
				<property name="initialAutoIncrement" value="Yes" />
				<property name="initialWriteMode" value="Single" />
				<property name="initialNumCapture" value="0" />
				<property name="initialFileName" value="pixi" />
				<property name="initialFileTemplate" value="%s/%s_%04d.tif" />
			</bean>
		</property>
		<property name="templateFileName" value="" />
		<property name="templateFilePath" value="" />
	</bean>

	<bean id="ImageArray" class="gda.device.detector.areadetector.v17.impl.NDArrayImpl">
		<property name="deviceName" value="pixium.arr_NDArray" />
		<property name="pluginBase">
			<bean class="gda.device.detector.areadetector.v17.impl.NDPluginBaseImpl">
				<property name="deviceName" value="pixium.arr_NDPluginBase" />
				<property name="initialArrayPort" value="pixium.cam" />
				<property name="initialArrayAddress" value="0" />
				<property name="initialBlockingCallbacks" value="true" />
				<property name="initialEnableCallbacks" value="0" />
			</bean>
		</property>
	</bean>

	<bean id="mpeg" class="gda.device.detector.areadetector.v17.impl.FfmpegStreamImpl">
		<property name="deviceName" value="pixium.mpeg_ffmpegStream" />
		<property name="pluginBase">
			<bean class="gda.device.detector.areadetector.v17.impl.NDPluginBaseImpl">
				<property name="deviceName" value="pixium.mpeg_NDPluginBase" />
				<property name="initialArrayPort" value="pixium.cam" />
				<property name="initialArrayAddress" value="0" />
				<property name="initialBlockingCallbacks" value="true" />
				<property name="initialEnableCallbacks" value="0" />
			</bean>
		</property>
		<property name="QUALITY" value="100" />
		<property name="FALSE_COL" value="off" />
		<property name="ALWAYS_ON" value="off" />
	</bean>
	
	<bean id="controller" class="gda.device.detector.pixium.PixiumControllerv17">
		<property name="basePVName" value="BL12I-EA-DET-05:PIX:" />
		<property name="areaDetector" ref="AreaDetector" />
		<property name="fullFrameSaver" ref="TiffFileSaver" />
		<property name="image" ref="ImageArray" />
		<property name="idlePollTime_ms" value="100" />
	</bean>

	<bean id="pixium" class="gda.device.detector.pixium.PixiumDetector">
		<property name="controller" ref="controller" />
		<property name="detectorID" value="pixium" />
		<property name="localDataStoreWindows2LinuxFileName">
			<bean
				class="gda.device.detector.pixium.PixiumDetector.Windows2LinuxFileName">
				<property name="windowsName" value="C:" />
				<property name="linuxName" value="/dls/i12" />
			</bean>
		</property>
		<property name="nonLocalDataStoreWindows2LinuxFileName">
			<bean
				class="gda.device.detector.pixium.PixiumDetector.Windows2LinuxFileName">
				<property name="windowsName" value="Z:" />
				<property name="linuxName" value="/dls/i12" />
			</bean>
		</property>
	</bean>
</beans>