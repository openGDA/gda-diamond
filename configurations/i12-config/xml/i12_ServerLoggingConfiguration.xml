<?xml version="1.0" encoding="UTF-8"?>

<configuration>
    <!--<turboFilter class="ch.qos.logback.classic.turbo.MarkerFilter">
        <Name>Finest</Name>
        <Marker>FINEST</Marker>
        <OnMatch>DENY</OnMatch>
    </turboFilter>-->
    <!-- enable this if you want log message appear on local console -->
   <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <layout class="ch.qos.logback.classic.PatternLayout">
            <pattern>%r [%thread] %-5level %logger{36} - %m %rEx %n</pattern>
        </layout>
    </appender>
<!-- log to the central LogServer -->
    <appender name="SOCKET" class="ch.qos.logback.classic.net.SocketAppender">
        <RemoteHost>i12-control.diamond.ac.uk</RemoteHost>
        <Port>6788</Port>
        <ReconnectionDelay>10000</ReconnectionDelay>
        <IncludeCallerData>true</IncludeCallerData>
    </appender>
    
    <logger name="gda">
        <level value="DEBUG"/>
    </logger>
    <logger name="gda.device.motor.EpicsMotor">
    	<!-- to avoid the constant stream of debug messages from changeStatusAndNotify() -->
        <level value="INFO"/>
    </logger>
    <logger name="gda.device.corba.impl">
        <level value="INFO"/>
    </logger>
    <logger name="gda.device.temperature">
        <level value="INFO"/>
    </logger>
    <logger name="gda.jython.corba.impl">
        <level value="INFO"/>
    </logger>    
    <logger name="gda.device.monitor.corba.impl">
        <level value="INFO"/>
    </logger>   
    <root>
        <level value="ALL"/>
        <appender-ref ref="STDOUT"/>
        <appender-ref ref="SOCKET"/>
    </root>
   <!-- <consolePlugin />-->
</configuration>
