<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:gda="http://www.diamond.ac.uk/schema/gda/gda"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
	http://www.diamond.ac.uk/schema/gda/gda http://www.diamond.ac.uk/schema/gda/gda/gda-gda-1.0.xsd">


	<!-- Client-side objects using the area detector simulator -->
	<bean id="simAdBaseModel" class="uk.ac.gda.epics.client.views.model.impl.ADBaseModelImpl">
		<property name="basePVName" value="${WORKSTATION}-AD-SIM-01:CAM:" />
	</bean>

	<bean id="simFileSaverModel" class="uk.ac.gda.epics.client.views.model.impl.FileSaverModelImpl">
		<property name="basePVName" value="${WORKSTATION}-AD-SIM-01:HDF5:" />
	</bean>

	<bean id="simFfmjpeg" class="uk.ac.gda.epics.client.views.model.impl.FFMjpegModelImpl">
		<property name="basePVName" value="${WORKSTATION}-AD-SIM-01:MJPG:" />
	</bean>

	<bean id="simNdProc" class="uk.ac.gda.epics.client.views.model.impl.NDProcModelImpl">
		<property name="basePVName" value="${WORKSTATION}-AD-SIM-01:PROC:" />
	</bean>

	<bean id="simNdROI" class="uk.ac.gda.epics.client.views.model.impl.NDROIModelImpl">
		<property name="basePVName" value="${WORKSTATION}-AD-SIM-01:ROI:" />
	</bean>

	<bean id="simNdArray" class="uk.ac.gda.epics.client.views.model.impl.NDArrayModelImpl">
		<property name="basePVName" value="${WORKSTATION}-AD-SIM-01:ARR:" />
	</bean>

	<bean id="simNdStat" class="uk.ac.gda.epics.client.views.model.impl.NDStatModelImpl">
		<property name="basePVName" value="${WORKSTATION}-AD-SIM-01:STAT:" />
	</bean>

</beans>