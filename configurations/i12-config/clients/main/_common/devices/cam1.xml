<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">
	<description>
		Client handles for cam1 motor
	</description>
	<bean id="cam1_x" class="uk.ac.gda.remoting.client.GdaRmiProxyFactoryBean">
		<property name="serviceUrl" value="${gda.rmi.prefix}cam1_x" />
		<property name="serviceInterface" value="gda.device.IScannableMotor" />
		<property name="refreshStubOnConnectFailure" value="true" />
	</bean>
	<bean id="cam1_z" class="uk.ac.gda.remoting.client.GdaRmiProxyFactoryBean">
		<property name="serviceUrl" value="${gda.rmi.prefix}cam1_z" />
		<property name="serviceInterface" value="gda.device.IScannableMotor" />
		<property name="refreshStubOnConnectFailure" value="true" />
	</bean>
	<bean id="cam1_roll" class="uk.ac.gda.remoting.client.GdaRmiProxyFactoryBean">
		<property name="serviceUrl" value="${gda.rmi.prefix}cam1_roll" />
		<property name="serviceInterface" value="gda.device.IScannableMotor" />
		<property name="refreshStubOnConnectFailure" value="true" />
	</bean>
</beans>