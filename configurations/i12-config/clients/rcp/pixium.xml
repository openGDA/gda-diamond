<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">
	<description>
		There are 3 ways of configure EPICS access:
		1. use Java content objects
		provided by epics-x.x.x.jar to specify
		'deviceName' property;
		e.g. <!-- property 
			name="deviceName" value="pixium.cam_ADBase"/ -->
		2. set pvProvider property which in turn uses XMLPVProvider bean to
		specify 'deviceName' property;
		e.g. <!-- property name="pvProvider"> <bean 
			class="uk.ac.gda.devices.excalibur.impl.XMLPVProvider"> <property name="deviceName" 
			value="pixium.cam_ADBase" /> </bean> </property -->
		3. set base PV name property with field or sub-element being coded in
		Java classes.
		e.g. <!-- property name="basePVName" value="BL12I-EA-DET-05:PIX:" 
			/ -->
	</description>

	<bean id="pixiumAdBaseModel" class="uk.ac.gda.epics.client.views.model.impl.ADBaseModelImpl">
		<property name="deviceName" value="pix.cam_ADBase" />
	</bean>

	<bean id="pixiumFileSaverModel" class="uk.ac.gda.epics.client.views.model.impl.FileSaverModelImpl">
		<property name="deviceName" value="pix.tif_NDFile" />
		<property name="pluginBase" value="pix.tif_NDPluginBase" />
	</bean>

	<bean id="pixiumFfmjpeg" class="uk.ac.gda.epics.client.views.model.impl.FFMjpegModelImpl">
		<property name="deviceName" value="pix.mpeg_ffmpegStream" />
		<property name="pluginBase" value="pix.mpeg_NDPluginBase" />
	</bean>

	<bean id="pixiumNdProc" class="uk.ac.gda.epics.client.views.model.impl.NDProcModelImpl">
		<property name="deviceName" value="pix.proc_NDProcess" />
		<property name="pluginBase" value="pix.proc_NDPluginBase" />
	</bean>
	<bean id="pixiumNdROI" class="uk.ac.gda.epics.client.views.model.impl.NDROIModelImpl">
		<property name="deviceName" value="pix.roi1_NDROI" />
		<property name="pluginBase" value="pix.roi1_NDPluginBase" />
	</bean>

	<bean id="ndArray" class="uk.ac.gda.epics.client.views.model.impl.NDArrayModelImpl">
		<property name="deviceName" value="pix.arr_NDStdArrays" />
		<property name="pluginBase" value="pix.arr_NDPluginBase" />
	</bean>

	<bean id="pixiumStatusViewController" class="uk.ac.gda.epics.client.views.StatusViewController">
		<property name="adBaseModel" ref="pixiumAdBaseModel" />
		<property name="fileSaverModel" ref="pixiumFileSaverModel" />
		<property name="ffmjpegModel" ref="pixiumFfmjpeg" />
	</bean>

	<bean id="pixiumStatusViewHolder"
		class="uk.ac.gda.epics.client.pixium.views.PixiumStatusViewExecutableExtensionFactory">
		<property name="viewPartName" value="Status" />
		<property name="statusViewController" ref="pixiumStatusViewController" />
	</bean>

	<bean id="pixiumCameraViewController" class="uk.ac.gda.epics.client.views.CameraViewController">
		<property name="ffmjpegModel1" ref="pixiumFfmjpeg" />
		<property name="procModel1" ref="pixiumNdProc" />
		<property name="roiModel1" ref="pixiumNdROI" />
		<property name="ndArray" ref="ndArray" />
		<property name="arrayPorts">
			<list>
				<value>pix.roi1</value>
				<value>pix.proc</value>
				<value>pix.sim</value>
				<value>pix.stat</value>
				<value>pix.tiff</value>
				<value>pix.hdf</value>
				<value>pix.draw</value>
			</list>
		</property>
	</bean>

	<bean id="pixiumCameraViewHolder"
		class="uk.ac.gda.epics.client.pixium.views.PixiumCameraViewExecutableExtensionFactory">
		<property name="viewPartName" value="Preview" />
		<property name="cameraViewController" ref="pixiumCameraViewController" />
	</bean>
</beans>