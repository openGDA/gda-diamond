<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:util="http://www.springframework.org/schema/util"
	xmlns:tx="http://www.springframework.org/schema/tx" xmlns:aop="http://www.springframework.org/schema/aop"
	xmlns:corba="http://www.diamond.ac.uk/schema/gda/corba"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
	http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-2.5.xsd
	http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx-2.5.xsd
	http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-2.5.xsd
	http://www.diamond.ac.uk/schema/gda/corba http://www.diamond.ac.uk/schema/gda/corba/gda-corba-1.0.xsd">

	<corba:import namespace="i12"
		names="plot_server, helpScriptController" />

	<bean class="gda.rcp.util.OSGIServiceRegister">
		<property name="class" value="uk.ac.diamond.scisoft.analysis.PlotServer" />
		<property name="service" ref="plot_server" />
	</bean>

	<!-- Commonly commented in the simulation environment -->


	<import resource="pixium.xml" />
	

	<import resource="pco.xml" />

	<!-- The tomoAlignment.xml must follow the pco.xml since the tomoAlignment 
		depend on PCO objects and cam1.xml and ss1.xml. -->
	<import resource="cam1.xml" />
	<import resource="ss1.xml" />
	<import resource="t3.xml" />
	<import resource="shutters.xml" />

	<import resource="tomoAlignment.xml" />
	<import resource="tomoConfiguration.xml" />
<!-- 	<import resource="tomoAlignment_dummy.xml" />
 -->	<import resource="edxd.xml" />

	<bean id="mono2_cam_config" class="uk.ac.gda.video.views.EpicsCameraParameters">
		<property name="name" value="Mono2 Camera Preview" />
		<property name="exposurePV" value="BL12I-OP-DCM-01:CAM2:AcquireTime" />
		<property name="acqPeriodPV" value="BL12I-OP-DCM-01:CAM2:AcquirePeriod" />
		<property name="gainPV" value="BL12I-OP-DCM-01:CAM2:Gain" />
		<property name="acquirePV" value="BL12I-OP-DCM-01:CAM2:Acquire" />
		<property name="urlPV" value="BL12I-OP-DCM-01:MPEG2:MJPG_URL_RBV" />
	</bean>
	<bean id="camera_config" class="uk.ac.gda.video.views.CameraConfig">
		<property name="cameras">
			<list>
				<ref bean="mono2_cam_config" />
			</list>
		</property>
		<property name="plotViewID" value="uk.ac.gda.beamline.i12.plotView" />
	</bean>

	<bean class="gda.rcp.util.OSGIServiceRegister">
		<property name="class" value="uk.ac.gda.video.views.ICameraConfig" />
		<property name="service" ref="camera_config" />
	</bean>

	<bean class="uk.ac.gda.beamline.i12.HelpListener">
		<property name="helpObservable" ref="helpScriptController" />
	</bean>

	<import resource="commandQueueProcessor.xml" />
	<import resource="../clients-common.xml" />

</beans>
