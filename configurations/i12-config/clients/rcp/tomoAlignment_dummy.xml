<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:util="http://www.springframework.org/schema/util"
	xmlns:tx="http://www.springframework.org/schema/tx" xmlns:aop="http://www.springframework.org/schema/aop"
	xmlns:corba="http://www.diamond.ac.uk/schema/gda/corba"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
	http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-2.5.xsd
	http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx-2.5.xsd
	http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-2.5.xsd
	http://www.diamond.ac.uk/schema/gda/corba http://www.diamond.ac.uk/schema/gda/corba/gda-corba-1.0.xsd">
	<description>The tomography alignment view is configured using the PCO
		objects, since tomography mainly uses the PCO camera
	</description>
	<bean id="motorsHandler"
		class="uk.ac.gda.client.tomo.alignment.view.handlers.simulator.TomoAlignmentMotorHandlerSimulator">
	</bean>

	<bean id="detectorHandler"
		class="uk.ac.gda.client.tomo.alignment.view.handlers.simulator.TomoDetectorHandlerSimulator">
	</bean>


	<bean id="moduleLookupTableHandler"
		class="uk.ac.gda.client.tomo.alignment.view.handlers.simulator.ModuleLookupTableHandlerSimulator">
	</bean>

	<bean id="cameraModuleHandler"
		class="uk.ac.gda.client.tomo.alignment.view.handlers.simulator.CameraModuleControllerSimulator">
	</bean>

	<bean id="tiltController"
		class="uk.ac.gda.client.tomo.alignment.view.handlers.simulator.TiltControllerSimulator">
	</bean>
	
	<!-- Assuming that this is invoked after the pco.xml has been invoked. -->
	<bean id="tomoAlignmentViewController"
		class="uk.ac.gda.client.tomo.alignment.view.controller.TomoAlignmentViewController">
		<property name="motorHandler" ref="motorsHandler" />
		<property name="cameraHandler" ref="detectorHandler" />
		<property name="moduleLookupTableHandler" ref="moduleLookupTableHandler" />
		<property name="cameraModuleController" ref="cameraModuleHandler" />
		<property name="tiltController" ref="tiltController" />
	</bean>

	<!-- -->
	<bean id="tomoAlignmentViewHolder"
		class="uk.ac.gda.client.tomo.alignment.view.factory.TomoAlignmentViewFactoryFactory ">
		<property name="viewPartName" value="Alignment" />
		<property name="screenPixelSize" value="0.27" />
		<property name="tomoAlignmentViewController" ref="tomoAlignmentViewController" />
	</bean>

</beans>