<?xml version="1.0" encoding="UTF-8"?>
<configuration>
	<!--  the include statement in the following java.properties file is not read so you need to reference both -->
	<property file="${gda.config}/properties/${gda.mode}/java.properties" />
	<property file="${gda.config}/properties/java.properties" />
    <appender name="SOCKET" class="ch.qos.logback.classic.net.SocketAppender">
        <RemoteHost>${gda.server.host}</RemoteHost>
        <Port>${gda.server.logging.port}</Port>
        <ReconnectionDelay>10000</ReconnectionDelay>
        <IncludeCallerData>true</IncludeCallerData>
    </appender>
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <layout class="ch.qos.logback.classic.PatternLayout">
            <Pattern>%date %-5level %logger{36} - %m %ex%n</Pattern>
        </layout>
	    <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
	      <level>ALL</level>
	    </filter>           
    </appender>    
    <logger name="gda">
        <level value="DEBUG"/>
    </logger>    
    <root>
        <level value="DEBUG"/>
        <appender-ref ref="SOCKET"/>
        <appender-ref ref="CONSOLE"/>
    </root>
    <consolePlugin />
</configuration>
