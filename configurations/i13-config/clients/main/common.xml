		<property name="refreshStubOnConnectFailure" value="true" />
	</bean>


	<bean id="imageModeManager" class="uk.ac.gda.beamline.i13i.ImageModeManager" />
	<bean id="alignmentView" class="gda.rcp.views.CompositeFactoryExecutableExtension">
		<property name="viewTitle" value="Alignment" />
		<property name="compositeFactories">
			<list>
				<bean class="uk.ac.gda.beamline.i13i.IImageModeCompositeFactory">
					<property name="imageModeManager" ref="imageModeManager" />
					<property name="availableModes">
						<util:list>
							<bean class="uk.ac.gda.beamline.i13i.SimpleMode">
								<property name="compositeFactory">
									<bean class="uk.ac.gda.beamline.i13i.StageCompositeFactory">
										<property name="stageCompositeDefinitions">
											<util:list value-type="uk.ac.gda.beamline.i13i.StageCompositeDefinition">
												<bean class="uk.ac.gda.beamline.i13i.StageCompositeDefinition">
													<property name="scannable" ref="ss1_x" />
													<property name="stepSize" value=".01" />
												</bean>
												<bean class="uk.ac.gda.beamline.i13i.StageCompositeDefinition">
													<property name="scannable" ref="ss1_sampley" />
													<property name="stepSize" value=".01" />
												</bean>
												<bean class="uk.ac.gda.beamline.i13i.StageCompositeDefinition">
													<property name="scannable" ref="ss1_z" />
													<property name="stepSize" value=".01" />
												</bean>
												<bean class="uk.ac.gda.beamline.i13i.StageCompositeDefinition">
													<property name="scannable" ref="ss1_rot" />
													<property name="controlType" value="0" />
													<property name="smallStep" value="5" />
													<property name="bigStep" value="90" />
												</bean>
											</util:list>
										</property>
										<property name="label" value="Sample Centring" />
									</bean>
								</property>
								<property name="imagePluginId" value="uk.ac.gda.beamline.i13i" />
								<property name="imageFilePath" value="icons/samplestage.gif" />
								<property name="name" value="SampleCentring" />
								<property name="label" value="Sample Centring" />
							</bean>
							<bean class="uk.ac.gda.beamline.i13i.SimpleMode">
								<property name="compositeFactory">
									<bean class="uk.ac.gda.beamline.i13i.StageCompositeFactory">
										<property name="stageCompositeDefinitions">
											<util:list value-type="uk.ac.gda.beamline.i13i.StageCompositeDefinition">
												<bean class="uk.ac.gda.beamline.i13i.StageCompositeDefinition">
													<property name="scannable" ref="ss1_samplex" />
													<property name="stepSize" value=".01" />
												</bean>
												<bean class="uk.ac.gda.beamline.i13i.StageCompositeDefinition">
													<property name="scannable" ref="ss1_sampley" />
													<property name="stepSize" value=".01" />
												</bean>
												<bean class="uk.ac.gda.beamline.i13i.StageCompositeDefinition">
													<property name="scannable" ref="ss1_samplez" />
													<property name="stepSize" value=".01" />
												</bean>
												<bean class="uk.ac.gda.beamline.i13i.StageCompositeDefinition">
													<property name="scannable" ref="ss1_rot" />
													<property name="controlType" value="0" />
													<property name="smallStep" value="5" />
													<property name="bigStep" value="90" />
												</bean>
											</util:list>
										</property>
										<property name="label" value="Sample Stage" />
									</bean>
								</property>
								<property name="imagePluginId" value="uk.ac.gda.beamline.i13i" />
								<property name="imageFilePath" value="icons/samplestage.gif" />
								<property name="name" value="Sample Stage" />
								<property name="label" value="Top" />
							</bean>
							<bean class="uk.ac.gda.beamline.i13i.SimpleMode">
								<property name="compositeFactory">
									<bean class="uk.ac.gda.beamline.i13i.StageCompositeFactory">
										<property name="stageCompositeDefinitions">
											<util:list value-type="uk.ac.gda.beamline.i13i.StageCompositeDefinition">
												<bean class="uk.ac.gda.beamline.i13i.StageCompositeDefinition">
													<property name="scannable" ref="ss1_X" />
												</bean>
												<bean class="uk.ac.gda.beamline.i13i.StageCompositeDefinition">
													<property name="scannable" ref="ss1_Y" />
												</bean>
												<bean class="uk.ac.gda.beamline.i13i.StageCompositeDefinition">
													<property name="scannable" ref="ss1_Z" />
												</bean>
											</util:list>
										</property>
										<property name="label" value="Sample Base Stage" />
									</bean>
								</property>
								<property name="imagePluginId" value="uk.ac.gda.beamline.i13i" />
								<property name="imageFilePath" value="icons/samplebasestage.gif" />
								<property name="name" value="SampleBaseStage" />
