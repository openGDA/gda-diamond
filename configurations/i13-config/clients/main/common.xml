									<bean class="uk.ac.gda.beamline.i13i.StageCompositeFactory">
										<property name="stageCompositeDefinitions">
											<util:list value-type="uk.ac.gda.beamline.i13i.StageCompositeDefinition">
												<bean class="uk.ac.gda.beamline.i13i.StageCompositeDefinition">
													<property name="scannable" ref="cs1_x" />
