		<property name="cameraImageHeightMax" value="2672" />
		<property name="ffmpegImageInOffsetX" value="100" />
		<property name="ffmpegImageInOffsetY" value="100" />
		<property name="showNormalisedImageCmd"
			value="tomographyScan.showNormalisedImage(%s,exposureTime=%s)" />
		<property name="imageNDROI" ref="pco1_roi1"/>
	</bean>

	<bean id="i13ADViewcreator" class="uk.ac.gda.epics.adviewer.views.ViewCreatorImpl">
		<property name="adController" ref="i13ADController" />
	</bean>

	<bean id="dictionary" class="uk.ac.gda.util.dictionary.MapBasedDictionary">
		<property name="map">
			<map>
