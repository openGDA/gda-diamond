<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:util="http://www.springframework.org/schema/util"
	xmlns:tx="http://www.springframework.org/schema/tx" xmlns:aop="http://www.springframework.org/schema/aop"
	xmlns:corba="http://www.diamond.ac.uk/schema/gda/corba"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
	http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-2.5.xsd
	http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx-2.5.xsd
	http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-2.5.xsd
	http://www.diamond.ac.uk/schema/gda/corba http://www.diamond.ac.uk/schema/gda/corba/gda-corba-1.0.xsd">

	<corba:import namespace="i13"
		names="plot_server, dcm_energy, eh_shtr, fs" />

	<bean class="gda.rcp.util.OSGIServiceRegister">
		<property name="class" value="uk.ac.diamond.scisoft.analysis.PlotServer" />
		<property name="service" ref="plot_server" />
	</bean>

	<import resource="commandQueueProcessor.xml" />
	<import resource="cameraViewPartConfig.xml" />

	<bean id="RCPController" class="uk.ac.gda.remoting.client.GdaRmiProxyFactoryBean">
		<property name="serviceUrl" value="${gda.rmi.prefix}rcpController" />
		<property name="serviceInterface" value="gda.gui.RCPController" />
		<property name="refreshStubOnConnectFailure" value="true" />
	</bean>


	<bean id="highestExistingFileMonitor" class="uk.ac.gda.remoting.client.GdaRmiProxyFactoryBean">
		<property name="serviceUrl" value="${gda.rmi.prefix}highestExistingFileMonitor" />
		<property name="serviceInterface"
			value="gda.device.detectorfilemonitor.HighestExistingFileMonitor" />
		<property name="refreshStubOnConnectFailure" value="true" />
	</bean>
	<bean id="imageFileDisplayer" class="uk.ac.gda.dls.client.views.ImageFileDisplayer">
		<property name="viewName" value="Detector Image" />
		<property name="viewID" value="uk.ac.gda.beamline.i13i.DetectorPlot" />
	</bean>

	<bean id="i13ADController"
		class="uk.ac.gda.beamline.i13i.views.adScaleAdjustmentView.ADControllerImpl">
		<property name="imageNDStats" ref="pco1_stat" />
		<property name="liveViewNDProc" ref="pco1_proc1" />
		<property name="imageNDArray" ref="pco1_arr"/>
		<property name="imageHistSize" value="100"/>
		<property name="imageMin" value="0"/>
		<property name="imageMax" value="65535"/>
		<property name="detectorName" value="PCO"/>
		<property name="adBase" ref="pco1_cam_base"/>
		<property name="setExposureTimeCmd" value="tomodet.setupForAlignment( exposureTime=%f)"/>
	</bean>

	<bean id="dictionary"  class="uk.ac.gda.beamline.i13i.views.adScaleAdjustmentView.MyDictionary">
		<property name="map">
		<map>
		<entry key="SERVICE_NAME" value="i13"/>
		</map>
		</property>
	</bean>
	<bean class="gda.rcp.util.OSGIServiceRegister">
		<property name="class"
			value="uk.ac.gda.beamline.i13i.views.adScaleAdjustmentView.ADController" />
		<property name="service" ref="i13ADController" />
		<property name="properties" ref="dictionary"/>
	</bean>


	<bean id="statusView" class="gda.rcp.views.CompositeFactoryExecutableExtension">
		<property name="viewTitle" value="Status" />
		<property name="compositeFactories">
			<list>
				<bean class="gda.rcp.views.GroupCompositeFactory">
					<property name="label" value="Machine" />
					<property name="columns" value="2" />
					<property name="compositeFactories">
						<list>
							<bean
								class="uk.ac.gda.dls.client.views.ReadonlyScannableCompositeFactory">
								<property name="scannable" ref="ringCurrent" />
								<property name="label" value="Ring Current" />
								<property name="units" value="mA" />
							</bean>
							<bean
								class="uk.ac.gda.dls.client.views.ReadonlyScannableCompositeFactory">
								<property name="scannable" ref="timeToRefill" />
								<property name="label" value="Time to refill" />
								<property name="units" value="s" />
							</bean>
							<bean
								class="uk.ac.gda.dls.client.views.ReadonlyScannableCompositeFactory">
								<property name="scannable" ref="idGap" />
								<property name="label" value="ID Gap" />
								<property name="units" value="mm" />
							</bean>
							<bean
								class="uk.ac.gda.dls.client.views.ReadonlyScannableCompositeFactory">
								<property name="scannable" ref="dcm_energy" />
								<property name="label" value="DCM" />
								<property name="units" value="keV" />
							</bean>
						</list>
					</property>
				</bean>
				<bean class="gda.rcp.views.GroupCompositeFactory">
					<property name="label" value="Hutch Shutter" />
					<property name="columns" value="1" />
					<property name="compositeFactories">
						<list>
							<bean
								class="uk.ac.gda.dls.client.views.ReadonlyScannableCompositeFactory">
								<property name="scannable" ref="eh_shtr" />
								<property name="label" value="State" />
							</bean>
							<bean class="uk.ac.gda.dls.client.views.QueueCommandCompositeFactory">
								<property name="command" value="eh_shtr_control()" />
								<property name="label" value="Open/Close" />
								<property name="description"
									value="Opens or closes the experiment hutch shutter" />
							</bean>
						</list>
					</property>
				</bean>
				<bean class="gda.rcp.views.GroupCompositeFactory">
					<property name="label" value="Fast Shutter" />
					<property name="columns" value="1" />
					<property name="compositeFactories">
						<list>
							<bean class="uk.ac.gda.dls.client.views.EnumPositionerCompositeFactory">
								<property name="positioner" ref="fs" />
								<property name="label" value="" />
							</bean>
						</list>
					</property>
				</bean>
				<bean class="uk.ac.gda.dls.client.views.LatestFileNameCompositeFactory">
					<property name="label" value="Latest Detector File" />
					<property name="fileProcessor" ref="imageFileDisplayer" />
					<property name="highestExistingFileMonitorDataProvider"
						ref="highestExistingFileMonitor" />
					<property name="showButtonSeparator" value="true" />
					<property name="separatePlayPauseButtons" value="true" />
				</bean>
				<bean class="gda.rcp.views.GroupCompositeFactory">
					<property name="label" value="Cameras and Detectors" />
					<property name="columns" value="2" />
					<property name="compositeFactories">
						<list>
							<bean class="uk.ac.gda.dls.client.views.OpenViewCompositeFactory">
								<property name="tooltipText"
									value="Display MJPEG streams from diagnocstic cameras and webcams" />
								<property name="viewID" value="uk.ac.gda.video.views.cameraview" />
								<property name="buttonText" value="Diagnostics and WebCams" />
								<property name="buttonImagePath" value="icons/eye.png" />
							</bean>
							<bean class="uk.ac.gda.dls.client.views.OpenViewCompositeFactory">
								<property name="tooltipText"
									value="Open tomography alignment and exposure view" />
								<property name="viewID" value="uk.ac.gda.client.tomo.CameraView" />
								<property name="buttonText" value="Tomography - PCO " />
								<property name="buttonImagePath" value="icons/eye.png" />
							</bean>
						</list>
					</property>
				</bean>


				<!-- <bean class="uk.ac.gda.beamline.i13i.StageCompositeFactory"> <property 
					name="scannables"> <util:list> <ref bean="ss1_samplex"/> </util:list> </property> 
					<property name="label" value="Base Stage"/> </bean> -->
			</list>
		</property>
	</bean>


