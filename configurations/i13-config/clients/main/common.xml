<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:util="http://www.springframework.org/schema/util"
	xmlns:tx="http://www.springframework.org/schema/tx" xmlns:aop="http://www.springframework.org/schema/aop"
	xmlns:corba="http://www.diamond.ac.uk/schema/gda/corba"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
	http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-2.5.xsd
	http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx-2.5.xsd
	http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-2.5.xsd
	http://www.diamond.ac.uk/schema/gda/corba http://www.diamond.ac.uk/schema/gda/corba/gda-corba-1.0.xsd">

	<import resource="commandQueueProcessor.xml" />

	<corba:import namespace="i13" names="plot_server" />
	
	<bean class="gda.rcp.util.OSGIServiceRegister">
		<property name="class" value="uk.ac.diamond.scisoft.analysis.PlotServer" />
		<property name="service" ref="plot_server" />
	</bean>

	<bean id="highestExistingFileMonitor" class="uk.ac.gda.remoting.client.GdaRmiProxyFactoryBean">
		<property name="serviceUrl" value="${gda.rmi.prefix}highestExistingFileMonitor" />
		<property name="serviceInterface" value="gda.device.detectorfilemonitor.HighestExistingFileMonitor" />
		<property name="refreshStubOnConnectFailure" value="true" />
	</bean>
	<bean id="imageFileDisplayer" class="uk.ac.gda.dls.client.views.ImageFileDisplayer">
		<property name="viewName" value="Detector Image"/>
		<property name="viewID" value="uk.ac.gda.beamline.i13i.DetectorPlot"/>
	</bean>

	
	<bean id="statusView" class="gda.rcp.views.CompositeFactoryExecutableExtension">
	<property name="viewTitle" value="Status"/>
	<property name="compositeFactories">
	<list>
		<bean class="gda.rcp.views.GroupCompositeFactory">
			<property name="label" value="Machine"/>
			<property name="columns" value="2"/>
			<property name="compositeFactories">
				<list>
					<bean class="uk.ac.gda.dls.client.views.ReadonlyScannableCompositeFactory">
					<property name="scannable" ref="ringCurrent"/>
					<property name="label" value="Ring Current"/>
					<property name="units" value="mA"/>
					</bean>
					<bean class="uk.ac.gda.dls.client.views.ReadonlyScannableCompositeFactory">
					<property name="scannable" ref="timeToRefill"/>
					<property name="label" value="Time to refill"/>
					<property name="units" value="s"/>
					</bean>
					<bean class="uk.ac.gda.dls.client.views.ReadonlyScannableCompositeFactory">
					<property name="scannable" ref="idGap"/>
					<property name="label" value="ID Gap"/>
					<property name="units" value="mm"/>
					</bean>
				</list>
			</property>
		</bean>
		<bean class="uk.ac.gda.dls.client.views.LatestFileNameCompositeFactory">
		<property name="label" value="Latest Detector File"/>
		<property name="fileProcessor" ref="imageFileDisplayer"/>
		<property name="highestExistingFileMonitorDataProvider" ref="highestExistingFileMonitor"/>
		</bean>
		<bean class="uk.ac.gda.dls.client.views.OpenViewCompositeFactory">
		<property name="tooltipText" value="Display MJPEG streams from cameras and detectors"/>
		<property name="viewID" value="uk.ac.gda.video.views.cameraview"/>
		<property name="buttonText" value="Cameras"/>
		<property name="buttonImagePath" value="icons/eye.png"/>
		</bean>
		
						<bean class="uk.ac.gda.beamline.i13i.StageCompositeFactory">
							<property name="scannables">
								<util:list>
									<ref bean="ss1_samplex"/>
								</util:list>
							</property>
							<property name="label" value="Base Stage"/>
						</bean>
		
	</list>
	</property>
	</bean>


	<bean id="ss1_samplex" class="uk.ac.gda.remoting.client.GdaRmiProxyFactoryBean">
		<property name="serviceUrl" value="${gda.rmi.prefix}ss1_samplex" />
		<property name="serviceInterface" value="gda.device.ScannableMotionUnits" />
		<property name="refreshStubOnConnectFailure" value="true" />
	</bean>
	<bean id="ss1_sampley" class="uk.ac.gda.remoting.client.GdaRmiProxyFactoryBean">
		<property name="serviceUrl" value="${gda.rmi.prefix}ss1_sampley" />
		<property name="serviceInterface" value="gda.device.ScannableMotionUnits" />
		<property name="refreshStubOnConnectFailure" value="true" />
	</bean>
	<bean id="ss1_samplez" class="uk.ac.gda.remoting.client.GdaRmiProxyFactoryBean">
		<property name="serviceUrl" value="${gda.rmi.prefix}ss1_samplez" />
		<property name="serviceInterface" value="gda.device.ScannableMotionUnits" />
		<property name="refreshStubOnConnectFailure" value="true" />
	</bean>

	<bean id="alignmentView" class="gda.rcp.views.CompositeFactoryExecutableExtension">
	<property name="viewTitle" value="Alignment"/>
	<property name="compositeFactories">
	<list>
		<bean class="uk.ac.gda.beamline.i13i.IImageModeCompositeFactory">
		<property name="availableModes">
			<util:list>
				<bean class="uk.ac.gda.beamline.i13i.SimpleMode">
					<property name="compositeFactory">
						<bean class="uk.ac.gda.beamline.i13i.StageCompositeFactory">
							<property name="scannables">
								<util:list>
									<ref bean="ss1_samplex"/>
									<ref bean="ss1_sampley"/>
									<ref bean="ss1_samplez"/>
								</util:list>
							</property>
							<property name="label" value="Sample Stage"/>
						</bean>
					</property>
					<property name="name" value="Sample Stage"/>
				</bean>
				<bean class="uk.ac.gda.beamline.i13i.SimpleMode">
					<property name="compositeFactory">
						<bean class="uk.ac.gda.beamline.i13i.StageCompositeFactory">
							<property name="scannables">
								<util:list>
									<ref bean="ss1_samplex"/>
									<ref bean="ss1_sampley"/>
									<ref bean="ss1_samplez"/>
								</util:list>
							</property>
							<property name="label" value="Base Stage"/>
						</bean>
					</property>
					<property name="name" value="Sample Stage"/>
				</bean>
			</util:list>
		</property>
		</bean>
	</list>
	</property>
	</bean>



	<bean class="gda.factory.corba.util.AdapterFactory">
		<constructor-arg index="0" value="${gda.factory.factoryName}" />
		<constructor-arg index="1">
			<bean class="gda.spring.NetServiceFactoryBean" />
		</constructor-arg>
	</bean>

	<bean class="gda.spring.FindableNameSetterPostProcessor" />
	<import resource="classpath:gda/spring/propertyeditors/registration.xml" />
	
</beans>
