<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">


	<!-- Include the following lines to run with simulated area detector -->
	<!-- NB. Corresponding changes must be made in the dummy server.xml -->
<!--     <import resource="../../../devices/dummy/adSimulator.xml"/>
    <import resource="../../../devices/dummy/pco1_ndplugins_sim.xml"/> -->

	<!-- Include the following line to run in dummy mode -->
    <import resource="../../../devices/dummy/pco1_ndplugins.xml"/>

	<import resource="../../../devices/dummy/ion_chamber.xml" />

    <bean id="idGap" class="gda.device.scannable.SimpleScannable">
		<property name="name" value="idGap" />
		<property name="currentPosition" value="10.5" />
	</bean>
    
    <bean id="timeToRefill" class="gda.device.scannable.SimpleScannable">
		<property name="name" value="timeToRefill"/>
		<property name="currentPosition" value="376" />
	</bean>
    
    <bean id="ringCurrent" class="gda.device.scannable.SimpleScannable">
		<property name="name" value="ringCurrent"/>
		<property name="currentPosition" value="301.209" />
	</bean>
    
    <bean id="pco_binx_rbv" class="gda.device.scannable.SimpleScannable">
		<property name="name" value="pco_binx_rbv"/>
		<property name="currentPosition" value="1" />
	</bean>
    
    <bean id="pco_biny_rbv" class="gda.device.scannable.SimpleScannable">
		<property name="name" value="pco_biny_rbv"/>
		<property name="currentPosition" value="1" />
	</bean>
    
    <bean id="expt_sht_stat" class="gda.device.scannable.SimpleScannable">
		<property name="name" value="expt_sht_stat"/>
		<property name="currentPosition" value="Open" />
	</bean>
    
    <bean id="fast_shtr_stat" class="gda.device.scannable.SimpleScannable">
		<property name="name" value="fast_shtr_stat"/>
		<property name="currentPosition" value="Open" />
	</bean>
    
    <import resource="../_common/client.xml"/>

</beans>