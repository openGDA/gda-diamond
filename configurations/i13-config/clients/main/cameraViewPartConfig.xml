	<bean id="cameraViewPartConfig"
		class="uk.ac.gda.beamline.i13i.views.cameraview.CameraViewPartConfigImpl">
		<property name="adBase" ref="pco1_cam_base" />
		<property name="ndArray" ref="pco1_arr" />
		<property name="ndProcess" ref="pco1_proc1" />
		<property name="ffmpegStream" ref="pco1_ffmpeg1" />
		<property name="setExposureTimeCmd" value="tomodet.setupForAlignment( exposureTime=%s)" />
		<property name="autoCentreCmd" value="tomodet.autoCentre()"/>
		<property name="imageViewerListener" ref="sampleAligner" />
<!-- 		<property name="imageViewerListener2" ref="sampleAlignerRelImageMarker" />
 -->		<property name="fFMpegImgHeightRequired" value="1336"/>
		<property name="fFMpegImgWidthRequired" value="2004"/>
