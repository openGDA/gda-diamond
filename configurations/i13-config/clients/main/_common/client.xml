<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xmlns:util="http://www.springframework.org/schema/util"
	xmlns:corba="http://www.diamond.ac.uk/schema/gda/corba"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
	http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-2.5.xsd
	http://www.springframework.org/schema/context
	http://www.springframework.org/schema/context/spring-context.xsd
	http://www.diamond.ac.uk/schema/gda/corba http://www.diamond.ac.uk/schema/gda/corba/gda-corba-1.0.xsd">


	<context:property-placeholder/>

 	<corba:import namespace="${gda.factory.factoryName}"
		names="dcm_energy, dcm_bragg, eh_shtr, fs, rotationAxisXScannable, cameraXYScannable, cam01_objective, binning_x, binning_y" />

	<import resource="commandQueueProcessor.xml"/>
	<import resource="file://${gda.core.dir}/clients/_common/plot_server.xml" />
	<import resource="rmi_imports.xml" />
	<import resource="osgi_services.xml" />
	<import resource="mapping.xml" />
	
	<import resource="../../rcp/statusView.xml" />
	<import resource="../../rcp/alignmentView.xml" />
	<import resource="../../rcp/detectorImage.xml" />

	<import resource="../../rcp/tomographyOptions.xml" />

	<import resource="../../../devices/_common/cameraScaleProviders.xml" />

	<import resource="adController.xml" />

	<bean class="gda.factory.corba.util.AdapterFactory">
		<constructor-arg index="0" value="${gda.factory.factoryName}" />
		<constructor-arg index="1">
			<bean class="gda.spring.NetServiceFactoryBean" />
		</constructor-arg>
	</bean>

	<bean class="gda.spring.FindableNameSetterPostProcessor" />

	<import resource="classpath:gda/spring/propertyeditors/registration.xml" />

</beans>
