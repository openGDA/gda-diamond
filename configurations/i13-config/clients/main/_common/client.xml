<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
		http://www.springframework.org/schema/context
		http://www.springframework.org/schema/context/spring-context.xsd">


	<context:property-placeholder/>

	<import resource="commandQueueProcessor.xml"/>
	<import resource="file://${gda.core.dir}/clients/_common/plot_server.xml" />
	<import resource="rmi_imports.xml" />
	<import resource="osgi_services.xml" />

	<import resource="../../rcp/statusView.xml" />
	<import resource="../../rcp/alignmentView.xml" />
	<import resource="../../rcp/detectorImage.xml" />

	<import resource="../../rcp/tomographyOptions.xml" />

	<import resource="../../../devices/_common/cameraScaleProviders.xml" />

	<import resource="adController.xml" />

	<!-- Provides ability to import/find remote objects over RMI -->
	<bean class="uk.ac.gda.remoting.client.RmiProxyFactory" />

	<bean class="gda.spring.FindableNameSetterPostProcessor" />

	<import resource="classpath:gda/spring/propertyeditors/registration.xml" />

</beans>
