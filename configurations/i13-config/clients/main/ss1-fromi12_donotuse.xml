		<property name="refreshStubOnConnectFailure" value="true" />
	</bean>

	<bean id="ss1_tz" class="uk.ac.gda.remoting.client.GdaRmiProxyFactoryBean">
		<property name="serviceUrl" value="${gda.rmi.prefix}ss1_tz" />
		<property name="serviceInterface" value="gda.device.IScannableMotor" />
		<property name="refreshStubOnConnectFailure" value="true" />
	</bean>

	<bean id="ss1_y2" class="uk.ac.gda.remoting.client.GdaRmiProxyFactoryBean">
		<property name="serviceUrl" value="${gda.rmi.prefix}ss1_y2" />
		<property name="serviceInterface" value="gda.device.IScannableMotor" />
		<property name="refreshStubOnConnectFailure" value="true" />
	</bean>
	
	<bean id="ss1_y3" class="uk.ac.gda.remoting.client.GdaRmiProxyFactoryBean">
