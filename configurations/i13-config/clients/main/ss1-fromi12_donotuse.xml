		<property name="serviceInterface" value="gda.device.IScannableMotor" />
		<property name="refreshStubOnConnectFailure" value="true" />
	</bean>

	<bean id="ss1_x" class="uk.ac.gda.remoting.client.GdaRmiProxyFactoryBean">
		<property name="serviceUrl" value="${gda.rmi.prefix}ss1_x" />
		<property name="serviceInterface" value="gda.device.IScannableMotor" />
		<property name="refreshStubOnConnectFailure" value="true" />
	</bean>
	<bean id="ss1_rx" class="uk.ac.gda.remoting.client.GdaRmiProxyFactoryBean">
		<property name="serviceUrl" value="${gda.rmi.prefix}ss1_rx" />
		<property name="serviceInterface" value="gda.device.IScannableMotor" />
		<property name="refreshStubOnConnectFailure" value="true" />
	</bean>
	<bean id="ss1_rz" class="uk.ac.gda.remoting.client.GdaRmiProxyFactoryBean">
		<property name="serviceUrl" value="${gda.rmi.prefix}ss1_rz" />
		<property name="serviceInterface" value="gda.device.IScannableMotor" />
		<property name="refreshStubOnConnectFailure" value="true" />
	</bean>
</beans>