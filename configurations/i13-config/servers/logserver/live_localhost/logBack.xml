<configuration>
	<!--  the include statement in the following java.properties file is not read so you need to reference both -->
	<property file="${gda.config}/properties/${gda.mode}/java.properties" />
	<property file="${gda.config}/properties/java.properties" />
    <appender name="SOCKET" class="ch.qos.logback.classic.net.SocketAppender">
        <RemoteHost>localhost</RemoteHost>
        <Port>${gda.server.logging.port}</Port>
        <ReconnectionDelay>10000</ReconnectionDelay>
        <IncludeCallerData>true</IncludeCallerData>
    </appender>

    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <layout class="ch.qos.logback.classic.PatternLayout">
            <Pattern>%date %-5level %logger - %m%n%ex</Pattern>
        </layout>
    </appender>

    <logger name="gda">
        <level value="INFO"/>
    </logger>

    <logger name="gdascripts.messages.handle_messages">
        <level value="INFO" />
    </logger>

    <logger name="sample_control">
        <level value="INFO" />
    </logger>

    <root>
        <level value="WARN" />
        <appender-ref ref="SOCKET"/>
        <appender-ref ref="CONSOLE"/>
    </root>

    <consolePlugin />

</configuration>
