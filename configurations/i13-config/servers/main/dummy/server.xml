<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:corba="http://www.diamond.ac.uk/schema/gda/corba"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
	http://www.diamond.ac.uk/schema/gda/corba
	http://www.diamond.ac.uk/schema/gda/corba/gda-corba-1.0.xsd
	http://www.springframework.org/schema/context
	http://www.springframework.org/schema/context/spring-context.xsd">


	<context:property-placeholder/>

	<!-- Include the following lines to run with simulated area detector -->
	<!-- NB. Corresponding changes must be made in the dummy client.xml -->
<!--     <import resource="../../../devices/dummy/adSimulator.xml"/>
    <import resource="../../../devices/dummy/pco1_ndplugins_sim.xml"/> -->

	<!-- Include the following line to run in dummy mode -->
    <import resource="../../../devices/dummy/pco1_ndplugins.xml"/>

	<!-- do not remove anything below here -->
	<import resource="file:${gda.config}/servers/main/_common/server.xml" />

	<!-- corba export must be the final bean. Later beans are not exported via Corba -->
	<corba:export namespace="${gda.factory.factoryName}" />

</beans>
