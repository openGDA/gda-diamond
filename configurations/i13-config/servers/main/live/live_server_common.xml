	<import resource="../../../devices/epics/s2_motors.xml" />
	<import resource="../../../devices/s2.xml" />


	<!-- End of internal Building/ Start of external Building -->
	<import resource="../../../devices/epics/optics_hutch4_shutter.xml" />
