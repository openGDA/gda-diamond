#!/bin/bash
# starts logpanel, servers and namemanager

#identify install folder and JAVA_HOME
source /dls_sw/i13/etc/i13_profile.sh

CLASSPATH=/dls_sw/i13/software/gda/plugins/uk.ac.gda.swingclient/bin; export CLASSPATH
`dirname $0`/gda_commands logpanel --trace --mode=live_localhost --restart$@
export JAVA_OPTS="-Xms128m -Xmx1024m -XX:MaxPermSize=128m"
`dirname $0`/gda_commands servers --smart --trace --mode=live_localhost --nsport 6701 --restart --debug $@
`dirname $0`/gda_commands namemanager --trace --mode=live_localhost --restart$@
