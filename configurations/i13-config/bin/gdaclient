#! /bin/sh 
notify-send -t 10000 "GDA Client is starting...if it fails to open try 'gdaclient --clean'"
#runs the LogPanel and RCP client

#identify install folder and JAVA_HOME
source /dls_sw/i13/etc/i13_profile.sh

. /usr/share/Modules/init/bash
module load java/gda

gdalog

if [ "$1" = "--clean" ]
then
    echo "rm -rf /scratch/.i13_workspace-$(whoami)-*"
    rm -rf /scratch/.i13_workspace-$(whoami)*
    rm -rf /scratch/gda_configs/$(whoami)
fi

LD_LIBRARY_PATH=$GDAFOLDER/client/plugins/uk.ac.gda.nexus_1.0.0/lib/linux-x86_64/:$LD_LIBRARY_PATH
export LD_LIBRARY_PATH
$GDAFOLDER/client/gda-i13i -configuration /scratch/gda_configs/$(whoami)
