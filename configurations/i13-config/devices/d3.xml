	<bean id="d3_hdf5_filewriter_nochunking" parent="abstract_hdf5_filewriter_nochunking">
		<property name="ndFileHDF5" ref="d3_ndhdf5file" />
		<property name="fileNameTemplate" value="d3"/>
	</bean>
	<bean id="_d3_cam_nx" class="gda.device.detector.NXDetector">
		<property name="name" value="pco1_hw_hdf" />
		<property name="collectionStrategy" ref="d3_cam_collection_strategy" />
		<property name="additionalPluginList">
			<list>
				<ref bean="d3_hdf5_filewriter_nochunking" />
			</list>
		</property>
	</bean>

	<bean id="d3_cam" class="gda.device.detector.nexusprocessor.NexusDetectorProcessor">
		<property name="detector" ref="_d3_cam_nx" />
		<property name="processor" ref="cam_ad_processors" />
	</bean>

</beans>

