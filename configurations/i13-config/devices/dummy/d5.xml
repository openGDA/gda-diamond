<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

	<bean id="d5_y_motor" class="gda.device.motor.DummyMotor"/>
	
	<bean id="d5_ad_pluginBase" class="gda.device.detector.areadetector.v17.impl.NDPluginBaseSimulator">
	<property name="dims" value="1000,1000"/>
	<property name="datatype" value="UINT32"/>
	</bean>
	<bean id="d5_ad_base" class="gda.device.detector.areadetector.v17.impl.ADBaseSimulator"/>

	<bean id="d5_ad_arr" class="gda.device.detector.areadetector.v17.impl.NDArraySimulator">
	<property name="pluginBase" ref="d5_ad_pluginBase"/>
	</bean>


	<bean id="d5_ad_stat" class="gda.device.detector.areadetector.v17.impl.NDStatsSimulator">
	<property name="pluginBase" ref="d5_ad_pluginBase"/>
	</bean>

	<bean id="d5_cam_ad" class="gda.device.detector.addetector.ADDetector">
		<property name="adBase" ref="d5_ad_base" />
		<property name="ndStats" ref="d5_ad_stat" />
		<property name="ndArray" ref="d5_ad_arr" />
	</bean>
</beans>	