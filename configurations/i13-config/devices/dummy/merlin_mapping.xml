<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:gda="http://www.diamond.ac.uk/schema/gda/gda"
	xmlns:corba="http://www.diamond.ac.uk/schema/gda/corba"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
	http://www.diamond.ac.uk/schema/gda/gda http://www.diamond.ac.uk/schema/gda/gda/gda-gda-1.0.xsd
	http://www.diamond.ac.uk/schema/gda/corba http://www.diamond.ac.uk/schema/gda/corba/gda-corba-1.0.xsd">


	<bean id="merlin_mapping_ad_pluginBase" class="gda.device.detector.areadetector.v17.impl.NDPluginBaseSimulator">
		<property name="dims" value="1000,1000" />
		<property name="datatype" value="UINT32" />
	</bean>

	<bean id="merlin_mapping_adbase" class="gda.device.detector.areadetector.v17.impl.ADBaseSimulator" />

	<bean id="merlin_mapping_stats" class="gda.device.detector.areadetector.v17.impl.NDStatsSimulator">
		<property name="pluginBase" ref="merlin_mapping_ad_pluginBase" />
	</bean>

	<bean id="merlin_mapping_ndarray" class="gda.device.detector.areadetector.v17.impl.NDArraySimulator">
		<property name="pluginBase" ref="merlin_mapping_ad_pluginBase" />
	</bean>

	<bean id="merlin_mapping_ndfilehdf5_base" class="gda.device.detector.areadetector.v17.impl.NDFileSimulator">
		<property name="pluginBase" ref="merlin_mapping_ad_pluginBase" />
	</bean>

	<bean id="merlin_mapping_hdf5" class="gda.device.detector.areadetector.v17.impl.NDFileHDF5Simulator">
		<property name="file" ref="merlin_mapping_ndfilehdf5_base" />
	</bean>

	<bean id="merlin_mapping" class="gda.device.detector.addetector.ADDetector">
		<property name="adBase" ref="merlin_mapping_adbase" />
		<property name="ndArray" ref="merlin_mapping_ndarray" />
		<property name="ndStats" ref="merlin_mapping_stats" />
	</bean>

</beans>
