	<bean id="lens" class="gda.device.scannable.DummyPersistentEnumScannable">
		<property name="acceptableStrings" value="X2 7mm x 5mm"/>
		<property name="local" value="true"/>
	</bean>
	<bean id="displayScaleProvider" class="uk.ac.gda.beamline.i13i.SelectableDisplayScaleProvider">
		<property name="keyScannable" ref="lens" />
		<property name="providers">
			<map>
				<entry key="X2 7mm x 5mm">
				<bean class="uk.ac.gda.beamline.i13i.DisplayScaleProviderImpl">
					<property name="pixelsPerMMInX" value="534" />
					<property name="pixelsPerMMInY" value="534" />
				</bean>
				</entry>
				<entry key="X4 4mm x 3mm">
				<bean class="uk.ac.gda.beamline.i13i.DisplayScaleProviderImpl">
					<property name="pixelsPerMMInX" value="1088" />
					<property name="pixelsPerMMInY" value="1088" />
				</bean>
				</entry>
				<entry key="X4 CWD 200">
				<bean class="uk.ac.gda.beamline.i13i.DisplayScaleProviderImpl">
					<property name="pixelsPerMMInX" value="1088" />
					<property name="pixelsPerMMInY" value="1088" />
				</bean>
				</entry>
				<entry key="X10 2mm x 1mm">
				<bean class="uk.ac.gda.beamline.i13i.DisplayScaleProviderImpl">
					<property name="pixelsPerMMInX" value="2740" />
					<property name="pixelsPerMMInY" value="2740" />
				</bean>
				</entry>
			</map>
		</property>
	</bean>

	<bean id="rotationAxisXScannable" class="uk.ac.gda.beamline.i13i.RotationAxisXScannable">
		<property name="sampleStageXScannable" ref="ss1_X" />
		<property name="cameraStageXScannable" ref="cs1_x" />
		<property name="cameraScaleProvider" ref="displayScaleProvider" />
		<property name="lensScannable" ref="lens"/>
	</bean>

	<bean id="cameraXYScannable" class="uk.ac.gda.beamline.i13i.CameraXYScannable">
		<property name="cameraStageXScannable" ref="cs1_x" />
		<property name="cameraStageYScannable" ref="cs1_y" />
		<property name="cameraScaleProvider" ref="displayScaleProvider" />
		<property name="lensScannable" ref="lens"/>
	</bean>

</beans>
