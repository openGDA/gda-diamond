<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">
	<!-- Define all the motors -->
	<!-- Needed by the tomoAlignment system -->	
	<bean id="cam1_roll" class="gda.device.scannable.ScannableMotor">
		<property name="motor" ref="cam1_roll_motor" />
		<property name="tolerance" value="0.01" />
		<property name="local" value="true"/>
	</bean>

	<bean id="cam1_x" class="gda.device.scannable.ScannableMotor">
		<property name="motor" ref="cam1_x_motor" />
		<property name="tolerance" value="0.01" />
		<property name="local" value="true"/>
	</bean>

	<bean id="cam1_z" class="gda.device.scannable.ScannableMotor">
		<property name="motor" ref="cam1_z_motor" />
		<property name="tolerance" value="0.01" />
		<property name="local" value="true"/>
	</bean>

	<!-- Do not export yet - these are client objects only at the moment
	<bean class="uk.ac.gda.remoting.server.GdaRmiServiceExporter">
		<property name="serviceName" value="gda/cam1_x" />
		<property name="service" ref="cam1_x" />
		<property name="serviceInterface" value="gda.device.IScannableMotor" />
	</bean>
	<bean class="uk.ac.gda.remoting.server.GdaRmiServiceExporter">
		<property name="serviceName" value="gda/cam1_z" />
		<property name="service" ref="cam1_z" />
		<property name="serviceInterface" value="gda.device.IScannableMotor" />
	</bean>
	<bean class="uk.ac.gda.remoting.server.GdaRmiServiceExporter">
		<property name="serviceName" value="gda/cam1_roll" />
		<property name="service" ref="cam1_roll" />
		<property name="serviceInterface" value="gda.device.IScannableMotor" />
	</bean>
	-->
	<bean id="cam1" class="gda.device.scannable.scannablegroup.ScannableGroup">
		<property name="groupMembers">
			<list>
				<ref bean="cam1_roll" />
				<ref bean="cam1_x" />
				<ref bean="cam1_z" />
			</list>
		</property>
	</bean>
</beans>
