	<bean id="d3_window_temp" class="gda.device.scannable.EpicsScannable"> 
		<property name="pvName" value="BL13J-DI-PHDGN-03:T1" /> 
		<property name="useNameAsExtraName" value="true"/>
		<property name="hasUnits" value="false"/>
	</bean> 

	<bean id="d3_return_temp" class="gda.device.scannable.EpicsScannable"> 
		<property name="pvName" value="BL13J-DI-PHDGN-03:T2" /> 
		<property name="useNameAsExtraName" value="true"/>
		<property name="hasUnits" value="false"/>
	</bean> 

	<bean id="d3_cam_pvProvider" class="gda.device.detector.areadetector.v17.impl.SimplePVProvider">
	<property name="prefix" value="BL13J-DI-PHDGN-03:CAM:"/>
	</bean>
	<bean id="d3_cam_base" class="gda.device.detector.areadetector.v17.impl.ADBaseImpl">
		<property name="pvProvider" ref="d3_cam_pvProvider"/>
	</bean>

	<bean id="d3_arr_pvProvider" class="gda.device.detector.areadetector.v17.impl.SimplePVProvider">
		<property name="prefix" value="BL13J-DI-PHDGN-03:ARR:"/>
	</bean>

	<bean id="d3_arr_ndpluginbase" class="gda.device.detector.areadetector.v17.impl.NDPluginBaseImpl">
		<property name="pvProvider" ref="d3_arr_pvProvider"/>
	</bean>

	<bean id="d3_arr" class="gda.device.detector.areadetector.v17.impl.NDArrayImpl">
		<property name="pvProvider" ref="d3_arr_pvProvider"/>
		<property name="pluginBase" ref="d3_arr_ndpluginbase"/>	
	</bean>


	<bean id="d3_stat_pvProvider" class="gda.device.detector.areadetector.v17.impl.SimplePVProvider">
		<property name="prefix" value="BL13J-DI-PHDGN-03:STAT:"/>
	</bean>

	<bean id="d3_stat_ndpluginbase" class="gda.device.detector.areadetector.v17.impl.NDPluginBaseImpl">
		<property name="pvProvider" ref="d3_stat_pvProvider"/>
	</bean>

	<bean id="d3_stat" class="gda.device.detector.areadetector.v17.impl.NDStatsImpl">
		<property name="pvProvider" ref="d3_stat_pvProvider"/>
		<property name="pluginBase" ref="d3_stat_ndpluginbase"/>	
	</bean>

	<bean id="d3_roi_pvProvider" class="gda.device.detector.areadetector.v17.impl.SimplePVProvider">
		<property name="prefix" value="BL13J-DI-PHDGN-03:ROI:"/>
	</bean>

	<bean id="d3_roi_ndpluginbase" class="gda.device.detector.areadetector.v17.impl.NDPluginBaseImpl">
		<property name="pvProvider" ref="d3_roi_pvProvider"/>
	</bean>

	<bean id="d3_roi" class="gda.device.detector.areadetector.v17.impl.NDROIImpl">
		<property name="pvProvider" ref="d3_roi_pvProvider"/>
		<property name="pluginBase" ref="d3_roi_ndpluginbase"/>	
	</bean>
	

	<bean id="d3_ffmpeg_pvProvider" class="gda.device.detector.areadetector.v17.impl.SimplePVProvider">
	<property name="prefix" value="BL13J-DI-PHDGN-03:FFMPEG:"/>
	</bean>

	<bean id="d3_ffmpeg_ndpluginbase" class="gda.device.detector.areadetector.v17.impl.NDPluginBaseImpl">
		<property name="pvProvider" ref="d3_ffmpeg_pvProvider"/>
	</bean>

	<bean id="d3_ffmpeg" class="gda.device.detector.areadetector.v17.impl.FfmpegStreamImpl">
		<property name="pvProvider" ref="d3_ffmpeg_pvProvider"/>
		<property name="pluginBase" ref="d3_ffmpeg_ndpluginbase"/>
	</bean>
	
	
	<bean id="d3_cam_ad_plugins" class="gda.device.FindableObjectHolder">
		<property name="map">
			<util:map>
				<entry key="d3_cam_base" value-ref="d3_cam_base"/>
				<entry key="d3_arr" value-ref="d3_arr"/>
				<entry key="d3_ffmpeg" value-ref="d3_ffmpeg"/>
				<entry key="d3_roi" value-ref="d3_roi"/>				
			</util:map>
		</property>
	</bean>
	
	<bean id="d3_cam_ad" class="gda.device.detector.addetector.ADDetector">
		<property name="adBase" ref="d3_cam_base"/>
		<property name="ndStats" ref="d3_stat"/>
		<property name="ndArray" ref="d3_arr"/>
		<property name="collectionStrategy">
			<bean class="gda.device.detector.addetector.triggering.SingleExposureStandard">
				<constructor-arg ref="d3_cam_base" />
				<constructor-arg value=".0" />
			</bean>
		</property>
		<property name="computeStats" value="false"/>
		<property name="computeCentroid" value="false"/>
		<property name="readArray" value="true"/>
	</bean>
	

</beans>	
