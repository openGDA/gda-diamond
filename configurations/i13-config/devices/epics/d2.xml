<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:util="http://www.springframework.org/schema/util"
	xmlns:tx="http://www.springframework.org/schema/tx" xmlns:aop="http://www.springframework.org/schema/aop"
	xmlns:corba="http://www.diamond.ac.uk/schema/gda/corba"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
	http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-2.5.xsd
	http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx-2.5.xsd
	http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-2.5.xsd
	http://www.diamond.ac.uk/schema/gda/corba http://www.diamond.ac.uk/schema/gda/corba/gda-corba-1.0.xsd">

	<bean id="d2_pos" class="gda.device.enumpositioner.EpicsPositionerCallback">
		<property name="deviceName" value="d2.mp" />
	</bean>

	<bean id="d2_x_motor" class="gda.device.motor.EpicsMotor">
		<property name="deviceName" value="d2.y" />
		<property name="local" value="true" />
	</bean>

 	<bean id="d2_i" class="gda.device.scannable.EpicsScannable">
		<property name="useNameAsExtraName" value="true" />
		<property name="hasUnits" value="false" />
		<property name="pvProvider">
			<bean class="gda.epics.interfaceSpec.GDAEpicsInterfacePVProvider">
			<property name="deviceName" value="D2"/>
			<property name="fieldName" value="RECORD"/>
			</bean>
		</property>
	</bean>

	<bean id="d2_gain" class="gda.device.scannable.EpicsScannable">
		<property name="useNameAsInputName" value="true" />
		<property name="hasUnits" value="false" />
		<property name="pvProvider">
			<bean class="gda.epics.interfaceSpec.GDAEpicsInterfacePVProvider">
			<property name="deviceName" value="d2.femto"/>
			<property name="fieldName" value="SETGAIN"/>
			</bean>
		</property>
	</bean>

	<bean id="d2_coupling" class="gda.device.scannable.EpicsScannable">
		<property name="useNameAsInputName" value="true" />
		<property name="hasUnits" value="false" />
		<property name="pvProvider">
			<bean class="gda.epics.interfaceSpec.GDAEpicsInterfacePVProvider">
			<property name="deviceName" value="d2.femto"/>
			<property name="fieldName" value="SETACDC"/>
			</bean>
		</property>
	</bean>

	<bean id="d2_window_temp" class="gda.device.scannable.EpicsScannable">
		<property name="pvName" value="BL13I-DI-PHDGN-02:T1" />
		<property name="useNameAsExtraName" value="true" />
		<!-- unit C is not supported -->
		<property name="hasUnits" value="false" />
	</bean>

	<bean id="d2_cam_pvProvider"
		class="gda.device.detector.areadetector.v17.impl.SimplePVProvider">
		<property name="prefix" value="BL13I-DI-PHDGN-02:CAM:" />
	</bean>
	<bean id="d2_cam_base" class="gda.device.detector.areadetector.v17.impl.ADBaseImpl">
		<property name="pvProvider" ref="d2_cam_pvProvider" />
	</bean>

	<bean id="d2_arr_pvProvider"
		class="gda.device.detector.areadetector.v17.impl.SimplePVProvider">
		<property name="prefix" value="BL13I-DI-PHDGN-02:ARR:" />
	</bean>

	<bean id="d2_arr_ndpluginbase"
		class="gda.device.detector.areadetector.v17.impl.NDPluginBaseImpl">
		<property name="pvProvider" ref="d2_arr_pvProvider" />
	</bean>

	<bean id="d2_arr" class="gda.device.detector.areadetector.v17.impl.NDArrayImpl">
		<property name="pvProvider" ref="d2_arr_pvProvider" />
		<property name="pluginBase" ref="d2_arr_ndpluginbase" />
	</bean>


	<bean id="d2_stat_pvProvider"
		class="gda.device.detector.areadetector.v17.impl.SimplePVProvider">
		<property name="prefix" value="BL13I-DI-PHDGN-02:STAT:" />
	</bean>

	<bean id="d2_stat_ndpluginbase"
		class="gda.device.detector.areadetector.v17.impl.NDPluginBaseImpl">
		<property name="pvProvider" ref="d2_stat_pvProvider" />
	</bean>

	<bean id="d2_stat" class="gda.device.detector.areadetector.v17.impl.NDStatsImpl">
		<property name="pvProvider" ref="d2_stat_pvProvider" />
		<property name="pluginBase" ref="d2_stat_ndpluginbase" />
	</bean>

	<bean id="d2_roi_pvProvider"
		class="gda.device.detector.areadetector.v17.impl.SimplePVProvider">
		<property name="prefix" value="BL13I-DI-PHDGN-02:ROI:" />
	</bean>

	<bean id="d2_roi_ndpluginbase"
		class="gda.device.detector.areadetector.v17.impl.NDPluginBaseImpl">
		<property name="pvProvider" ref="d2_roi_pvProvider" />
	</bean>

	<bean id="d2_roi" class="gda.device.detector.areadetector.v17.impl.NDROIImpl">
		<property name="pvProvider" ref="d2_roi_pvProvider" />
		<property name="pluginBase" ref="d2_roi_ndpluginbase" />
	</bean>

	<bean id="d2_ffmpeg_pvProvider"
		class="gda.device.detector.areadetector.v17.impl.SimplePVProvider">
		<property name="prefix" value="BL13I-DI-PHDGN-02:FFMPEG:" />
	</bean>

	<bean id="d2_ffmpeg_ndpluginbase"
		class="gda.device.detector.areadetector.v17.impl.NDPluginBaseImpl">
		<property name="pvProvider" ref="d2_ffmpeg_pvProvider" />
	</bean>

	<bean id="d2_ffmpeg"
		class="gda.device.detector.areadetector.v17.impl.FfmpegStreamImpl">
		<property name="pvProvider" ref="d2_ffmpeg_pvProvider" />
		<property name="pluginBase" ref="d2_ffmpeg_ndpluginbase" />
	</bean>


	<bean id="d2_cam_ad_plugins" class="gda.device.FindableObjectHolder">
		<property name="map">
			<util:map>
				<entry key="d2_cam_base" value-ref="d2_cam_base" />
				<entry key="d2_arr" value-ref="d2_arr" />
				<entry key="d2_ffmpeg" value-ref="d2_ffmpeg" />
				<entry key="d2_roi" value-ref="d2_roi" />
			</util:map>
		</property>
	</bean>

	<bean id="d2_cam_ad" class="gda.device.detector.addetector.ADDetector">
		<property name="adBase" ref="d2_cam_base" />
		<property name="ndStats" ref="d2_stat" />
		<property name="ndArray" ref="d2_arr" />
		<property name="collectionStrategy">
			<bean class="gda.device.detector.addetector.triggering.SingleExposureStandard">
				<constructor-arg ref="d2_cam_base" />
				<constructor-arg value=".0" />
			</bean>
		</property>
		<property name="computeStats" value="false"/>
		<property name="computeCentroid" value="false"/>
		<property name="readArray" value="true"/>
	</bean>

</beans>	
