<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true" scanPeriod="5 minutes">
	<!-- address where the messages from Object Servers send to - the LogServer -->
	<appender name="SOCKET" class="ch.qos.logback.classic.net.SocketAppender">
		<RemoteHost>b21-control.diamond.ac.uk</RemoteHost>
		<Port>6788</Port>
		<ReconnectionDelay>10000</ReconnectionDelay>
		<IncludeCallerData>true</IncludeCallerData>
	</appender>
	<logger name="gda" level="DEBUG" />
	<logger name="gda.oe.dofs.DOF" level="INFO" />
	<logger name="gda.device.corba.impl" level="INFO" />
	<logger name="gda.device.temperature.corba.impl" level="INFO" />
	<logger name="gda.jython.corba.impl" level="INFO" />
	<logger name="gda.oe.corba.impl" level="INFO" />
	<logger name="gda.device.monitor.corba.impl" level="INFO" />
	<logger name="gda.oe.positioners.Positioner" level="INFO" />
	<logger name="gda.data.nexus.extractor.NexusExtractor" level="DEBUG" />
	<logger name="gda.data.nexus.NexusFileWrapper" level="DEBUG" />
	<logger name="uk.ac.gda.server.ncd.detector.DAServer" level="DEBUG" />
	<root>
		<level value="DEBUG" />
		<appender-ref ref="SOCKET" />
	</root>
	<consolePlugin />
</configuration>
