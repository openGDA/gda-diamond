<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

	<bean id="dmm_z_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL21B-OP-DMM-01:Z" />
		<property name="local" value="true" />
	</bean>

	<bean id="dmm_y1_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL21B-OP-DMM-01:Y1" />
		<property name="local" value="true" />
	</bean>

	<bean id="dmm_y2_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL21B-OP-DMM-01:Y2" />
		<property name="local" value="true" />
	</bean>

	<bean id="dmm_pitch1_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL21B-OP-DMM-01:PITCH1" />
		<property name="local" value="true" />
	</bean>

	<bean id="dmm_pitch2_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL21B-OP-DMM-01:PITCH2" />
		<property name="local" value="true" />
	</bean>

	<bean id="dmm_roll2_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL21B-OP-DMM-01:ROLL2" />
		<property name="local" value="true" />
	</bean>

</beans>
