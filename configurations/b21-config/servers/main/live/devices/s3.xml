<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

	<bean id="s3_xcentre_motor" class="gda.device.motor.EpicsMotor">
		<property name="local" value="true" />
		<property name="pvName" value="BL21B-AL-SLITS-03:X:CENTRE" />
	</bean>

	<bean id="s3_xgap_motor" class="gda.device.motor.EpicsMotor">
		<property name="local" value="true" />
		<property name="pvName" value="BL21B-AL-SLITS-03:X:SIZE" />
	</bean>

	<bean id="s3_ycentre_motor" class="gda.device.motor.EpicsMotor">
		<property name="local" value="true" />
		<property name="pvName" value="BL21B-AL-SLITS-03:Y:CENTRE" />
	</bean>

	<bean id="s3_ygap_motor" class="gda.device.motor.EpicsMotor">
		<property name="local" value="true" />
		<property name="pvName" value="BL21B-AL-SLITS-03:Y:SIZE" />
	</bean>

	<bean id="s3_xplus_motor" class="gda.device.motor.EpicsMotor">
		<property name="local" value="true" />
		<property name="pvName" value="BL21B-AL-SLITS-03:X:PLUS" />
	</bean>

	<bean id="s3_xminus_motor" class="gda.device.motor.EpicsMotor">
		<property name="local" value="true" />
		<property name="pvName" value="BL21B-AL-SLITS-03:X:MINUS" />
	</bean>

	<bean id="s3_yplus_motor" class="gda.device.motor.EpicsMotor">
		<property name="local" value="true" />
		<property name="pvName" value="BL21B-AL-SLITS-03:Y:PLUS" />
	</bean>

	<bean id="s3_yminus_motor" class="gda.device.motor.EpicsMotor">
		<property name="local" value="true" />
		<property name="pvName" value="BL21B-AL-SLITS-03:Y:MINUS" />
	</bean>

	<bean id="s3_xplusi" class="gda.device.scannable.EpicsScannable">
		<property name="useNameAsExtraName" value="true" />
		<property name="hasUnits" value="false" />
		<property name="pvName" value="BL21B-AL-SLITS-03:X:PLUS:I" />
		<property name="local" value="true" />
	</bean>

	<bean id="s3_xminusi" class="gda.device.scannable.EpicsScannable">
		<property name="useNameAsExtraName" value="true" />
		<property name="hasUnits" value="false" />
		<property name="pvName" value="BL21B-AL-SLITS-03:X:MINUS:I" />
		<property name="local" value="true" />
	</bean>

	<bean id="s3_yplusi" class="gda.device.scannable.EpicsScannable">
		<property name="useNameAsExtraName" value="true" />
		<property name="hasUnits" value="false" />
		<property name="pvName" value="BL21B-AL-SLITS-03:Y:PLUS:I" />
		<property name="local" value="true" />
	</bean>

	<bean id="s3_yminusi" class="gda.device.scannable.EpicsScannable">
		<property name="useNameAsExtraName" value="true" />
		<property name="hasUnits" value="false" />
		<property name="pvName" value="BL21B-AL-SLITS-03:Y:MINUS:I" />
		<property name="local" value="true" />
	</bean>

</beans>
