<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

	<bean id="s1_xcentre_motor" class="gda.device.motor.EpicsMotor">
		<property name="local" value="true" />
		<property name="pvName" value="BL21B-AL-SLITS-01:X:CENTRE" />
	</bean>

	<bean id="s1_xgap_motor" class="gda.device.motor.EpicsMotor">
		<property name="local" value="true" />
		<property name="pvName" value="BL21B-AL-SLITS-01:X:SIZE" />
	</bean>

	<bean id="s1_ycentre_motor" class="gda.device.motor.EpicsMotor">
		<property name="local" value="true" />
		<property name="pvName" value="BL21B-AL-SLITS-01:Y:CENTRE" />
	</bean>

	<bean id="s1_ygap_motor" class="gda.device.motor.EpicsMotor">
		<property name="local" value="true" />
		<property name="pvName" value="BL21B-AL-SLITS-01:Y:SIZE" />
	</bean>

	<bean id="s1_xplus_motor" class="gda.device.motor.EpicsMotor">
		<property name="local" value="true" />
		<property name="pvName" value="BL21B-AL-SLITS-01:X:PLUS" />
	</bean>

	<bean id="s1_xminus_motor" class="gda.device.motor.EpicsMotor">
		<property name="local" value="true" />
		<property name="pvName" value="BL21B-AL-SLITS-01:X:MINUS" />
	</bean>

	<bean id="s1_yplus_motor" class="gda.device.motor.EpicsMotor">
		<property name="local" value="true" />
		<property name="pvName" value="BL21B-AL-SLITS-01:Y:PLUS" />
	</bean>

	<bean id="s1_yminus_motor" class="gda.device.motor.EpicsMotor">
		<property name="local" value="true" />
		<property name="pvName" value="BL21B-AL-SLITS-01:Y:MINUS" />
	</bean>

</beans>
