<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

        <bean id="s6_xcentre_motor" class="gda.device.motor.EpicsMotor">
		<property name="deviceName" value="S6.XCENTRE" />
                <property name="local" value="true" />
        </bean>
        <bean id="s6_xcentre" class="gda.device.scannable.ScannableMotor">
                <property name="motor" ref="s6_xcentre_motor" />
                <property name="local" value="true" />
        </bean>

        <bean id="s6_xgap_motor" class="gda.device.motor.EpicsMotor">
		<property name="deviceName" value="S6.XSIZE" />
                <property name="local" value="true" />
        </bean>
        <bean id="s6_xgap" class="gda.device.scannable.ScannableMotor">
                <property name="motor" ref="s6_xgap_motor" />
                <property name="local" value="true" />
        </bean>

        <bean id="s6_ycentre_motor" class="gda.device.motor.EpicsMotor">
		<property name="deviceName" value="S6.YCENTRE" />
                <property name="local" value="true" />
        </bean>
        <bean id="s6_ycentre" class="gda.device.scannable.ScannableMotor">
                <property name="motor" ref="s6_ycentre_motor" />
                <property name="local" value="true" />
        </bean>

        <bean id="s6_ygap_motor" class="gda.device.motor.EpicsMotor">
		<property name="deviceName" value="S6.YSIZE" />
                <property name="local" value="true" />
        </bean>
        <bean id="s6_ygap" class="gda.device.scannable.ScannableMotor">
                <property name="motor" ref="s6_ygap_motor" />
                <property name="local" value="true" />
        </bean>

        <bean id="s6_xplus_motor" class="gda.device.motor.EpicsMotor">
		<property name="deviceName" value="S6.XPLUS" />
                <property name="local" value="true" />
        </bean>
        <bean id="s6_xplus" class="gda.device.scannable.ScannableMotor">
                <property name="motor" ref="s6_xplus_motor" />
                <property name="local" value="true" />
        </bean>

        <bean id="s6_xminus_motor" class="gda.device.motor.EpicsMotor">
		<property name="deviceName" value="S6.XMINUS" />
                <property name="local" value="true" />
        </bean>
        <bean id="s6_xminus" class="gda.device.scannable.ScannableMotor">
                <property name="motor" ref="s6_xminus_motor" />
                <property name="local" value="true" />
        </bean>

        <bean id="s6_yplus_motor" class="gda.device.motor.EpicsMotor">
		<property name="deviceName" value="S6.YPLUS" />
                <property name="local" value="true" />
        </bean>
        <bean id="s6_yplus" class="gda.device.scannable.ScannableMotor">
                <property name="motor" ref="s6_yplus_motor" />
                <property name="local" value="true" />
        </bean>

        <bean id="s6_yminus_motor" class="gda.device.motor.EpicsMotor">
		<property name="deviceName" value="S6.YMINUS" />
                <property name="local" value="true" />
        </bean>
        <bean id="s6_yminus" class="gda.device.scannable.ScannableMotor">
                <property name="motor" ref="s6_yminus_motor" />
                <property name="local" value="true" />
        </bean>

        <bean id="s6" class="gda.device.scannable.scannablegroup.ScannableGroup">
                <property name="groupMembers">
                        <list>
                                <ref bean="s6_xcentre" />
                                <ref bean="s6_xgap" />
                                <ref bean="s6_ycentre" />
                                <ref bean="s6_ygap" />
                                <ref bean="s6_xplus" />
                                <ref bean="s6_xminus" />
                                <ref bean="s6_yplus" />
                                <ref bean="s6_yminus" />
                        </list>
                </property>
                <property name="local" value="true" />
        </bean>
</beans>
