<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

        <bean id="s2_xcentre_motor" class="gda.device.motor.EpicsMotor">
		<property name="deviceName" value="S2.XCENTRE" />
                <property name="local" value="true" />
        </bean>
        <bean id="s2_xcentre" class="gda.device.scannable.ScannableMotor">
                <property name="motor" ref="s2_xcentre_motor" />
                <property name="local" value="true" />
        </bean>

        <bean id="s2_xgap_motor" class="gda.device.motor.EpicsMotor">
		<property name="deviceName" value="S2.XSIZE" />
                <property name="local" value="true" />
        </bean>
        <bean id="s2_xgap" class="gda.device.scannable.ScannableMotor">
                <property name="motor" ref="s2_xgap_motor" />
                <property name="local" value="true" />
        </bean>

        <bean id="s2_ycentre_motor" class="gda.device.motor.EpicsMotor">
		<property name="deviceName" value="S2.YCENTRE" />
                <property name="local" value="true" />
        </bean>
        <bean id="s2_ycentre" class="gda.device.scannable.ScannableMotor">
                <property name="motor" ref="s2_ycentre_motor" />
                <property name="local" value="true" />
        </bean>

        <bean id="s2_ygap_motor" class="gda.device.motor.EpicsMotor">
		<property name="deviceName" value="S2.YSIZE" />
                <property name="local" value="true" />
        </bean>
        <bean id="s2_ygap" class="gda.device.scannable.ScannableMotor">
                <property name="motor" ref="s2_ygap_motor" />
                <property name="local" value="true" />
        </bean>

        <bean id="s2_xplus_motor" class="gda.device.motor.EpicsMotor">
		<property name="deviceName" value="S2.XPLUS" />
                <property name="local" value="true" />
        </bean>
        <bean id="s2_xplus" class="gda.device.scannable.ScannableMotor">
                <property name="motor" ref="s2_xplus_motor" />
                <property name="local" value="true" />
        </bean>

        <bean id="s2_xminus_motor" class="gda.device.motor.EpicsMotor">
		<property name="deviceName" value="S2.XMINUS" />
                <property name="local" value="true" />
        </bean>
        <bean id="s2_xminus" class="gda.device.scannable.ScannableMotor">
                <property name="motor" ref="s2_xminus_motor" />
                <property name="local" value="true" />
        </bean>

        <bean id="s2_yplus_motor" class="gda.device.motor.EpicsMotor">
		<property name="deviceName" value="S2.YPLUS" />
                <property name="local" value="true" />
        </bean>
        <bean id="s2_yplus" class="gda.device.scannable.ScannableMotor">
                <property name="motor" ref="s2_yplus_motor" />
                <property name="local" value="true" />
        </bean>

        <bean id="s2_yminus_motor" class="gda.device.motor.EpicsMotor">
		<property name="deviceName" value="S2.YMINUS" />
                <property name="local" value="true" />
        </bean>
        <bean id="s2_yminus" class="gda.device.scannable.ScannableMotor">
                <property name="motor" ref="s2_yminus_motor" />
                <property name="local" value="true" />
        </bean>

	<bean id="s2_xplusi" class="gda.device.scannable.EpicsScannable">
		<property name="useNameAsExtraName" value="true" />
		<property name="hasUnits" value="false" />
		<property name="pvName" value="BL21B-AL-SLITS-02:X:PLUS:I" />
		<property name="local" value="true" />
	</bean>

	<bean id="s2_xminusi" class="gda.device.scannable.EpicsScannable">
		<property name="useNameAsExtraName" value="true" />
		<property name="hasUnits" value="false" />
		<property name="pvName" value="BL21B-AL-SLITS-02:X:MINUS:I" />
		<property name="local" value="true" />
	</bean>

	<bean id="s2_yplusi" class="gda.device.scannable.EpicsScannable">
		<property name="useNameAsExtraName" value="true" />
		<property name="hasUnits" value="false" />
		<property name="pvName" value="BL21B-AL-SLITS-02:Y:PLUS:I" />
		<property name="local" value="true" />
	</bean>

	<bean id="s2_yminusi" class="gda.device.scannable.EpicsScannable">
		<property name="useNameAsExtraName" value="true" />
		<property name="hasUnits" value="false" />
		<property name="pvName" value="BL21B-AL-SLITS-02:Y:MINUS:I" />
		<property name="local" value="true" />
	</bean>

        <bean id="s2" class="gda.device.scannable.scannablegroup.ScannableGroup">
                <property name="groupMembers">
                        <list>
                                <ref bean="s2_xcentre" />
                                <ref bean="s2_xgap" />
                                <ref bean="s2_ycentre" />
                                <ref bean="s2_ygap" />
                                <ref bean="s2_xplus" />
                                <ref bean="s2_xminus" />
                                <ref bean="s2_yplus" />
                                <ref bean="s2_yminus" />
                                <ref bean="s2_xplusi" />
                                <ref bean="s2_xminusi" />
                                <ref bean="s2_yplusi" />
                                <ref bean="s2_yminusi" />
                        </list>
                </property>
                <property name="local" value="true" />
        </bean>
</beans>
