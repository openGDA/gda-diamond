<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

	<bean id="dcm_energy_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL21B-OP-DCM-01:ENERGY" />
		<property name="local" value="true" />
	</bean>
	<bean id="dcm_energy" class="gda.device.scannable.ScannableMotor">
		<property name="motor" ref="dcm_energy_motor" />
		<property name="local" value="true" />
	</bean>

	<bean id="dcm_bragg_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL21B-OP-DCM-01:BRAGG" />
		<property name="local" value="true" />
	</bean>
	<bean id="dcm_bragg" class="gda.device.scannable.ScannableMotor">
		<property name="motor" ref="dcm_bragg_motor" />
		<property name="local" value="true" />
	</bean>

	<bean id="dcm_offset_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL21B-OP-DCM-01:OFFSET" />
		<property name="local" value="true" />
	</bean>
	<bean id="dcm_offset" class="gda.device.scannable.ScannableMotor">
		<property name="motor" ref="dcm_offset_motor" />
		<property name="local" value="true" />
	</bean>

	<bean id="dcm_z_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL21B-OP-DCM-01:Z" />
		<property name="local" value="true" />
	</bean>
	<bean id="dcm_z" class="gda.device.scannable.ScannableMotor">
		<property name="motor" ref="dcm_z_motor" />
		<property name="local" value="true" />
	</bean>

	<bean id="dcm_zcentre_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL21B-OP-DCM-01:ZCENTRE" />
		<property name="local" value="true" />
	</bean>
	<bean id="dcm_zcentre" class="gda.device.scannable.ScannableMotor">
		<property name="motor" ref="dcm_zcentre_motor" />
		<property name="local" value="true" />
	</bean>

	<bean id="dcm_perp_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL21B-OP-DCM-01:PERP" />
		<property name="local" value="true" />
	</bean>
	<bean id="dcm_perp" class="gda.device.scannable.ScannableMotor">
		<property name="motor" ref="dcm_perp_motor" />
		<property name="local" value="true" />
	</bean>

	<bean id="dcm_yaw_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL21B-OP-DCM-01:YAW" />
		<property name="local" value="true" />
	</bean>
	<bean id="dcm_yaw" class="gda.device.scannable.ScannableMotor">
		<property name="motor" ref="dcm_yaw_motor" />
		<property name="local" value="true" />
	</bean>

	<bean id="dcm_pitch_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL21B-OP-DCM-01:PITCH" />
		<property name="local" value="true" />
	</bean>
	<bean id="dcm_pitch" class="gda.device.scannable.ScannableMotor">
		<property name="motor" ref="dcm_pitch_motor" />
		<property name="local" value="true" />
	</bean>

	<bean id="dcm_finepitch" class="gda.device.scannable.EpicsScannable">
		<property name="useNameAsInputName" value="true" />
		<property name="hasUnits" value="false" />
		<property name="pvName" value="BL21B-OP-DCM-01:FPITCH" />
		<property name="local" value="true" />
	</bean>
	
	<bean id="dcm_finepitch_rbv" class="gda.device.scannable.EpicsScannable">
		<property name="useNameAsExtraName" value="true" />
		<property name="hasUnits" value="false" />
		<property name="pvName" value="BL21B-OP-DCM-01:FP:RBV" />
		<property name="local" value="true" />
	</bean>

	<bean id="dcm_roll_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL21B-OP-DCM-01:ROLL" />
		<property name="local" value="true" />
	</bean>
	<bean id="dcm_roll" class="gda.device.scannable.ScannableMotor">
		<property name="motor" ref="dcm_roll_motor" />
		<property name="local" value="true" />
	</bean>

	<bean id="dcm_bend1_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL21B-OP-DCM-01:BEND1" />
		<property name="local" value="true" />
	</bean>
	<bean id="dcm_bend1" class="gda.device.scannable.ScannableMotor">
		<property name="motor" ref="dcm_bend1_motor" />
		<property name="local" value="true" />
	</bean>

	<bean id="dcm_bend2_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL21B-OP-DCM-01:BEND2" />
		<property name="local" value="true" />
	</bean>
	<bean id="dcm_bend2" class="gda.device.scannable.ScannableMotor">
		<property name="motor" ref="dcm_bend2_motor" />
		<property name="local" value="true" />
	</bean>

	<bean id="dcm_radius_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL21B-OP-DCM-01:RADIUS" />
		<property name="local" value="true" />
	</bean>
	<bean id="dcm_radius" class="gda.device.scannable.ScannableMotor">
		<property name="motor" ref="dcm_radius_motor" />
		<property name="local" value="true" />
	</bean>

	<bean id="dcm_fraction_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL21B-OP-DCM-01:FRAC" />
		<property name="local" value="true" />
	</bean>
	<bean id="dcm_fraction" class="gda.device.scannable.ScannableMotor">
		<property name="motor" ref="dcm_fraction_motor" />
		<property name="local" value="true" />
	</bean>

	<bean id="dcm" class="gda.device.scannable.scannablegroup.ScannableGroup">
		<property name="groupMembers">
			<list>
				<ref bean="dcm_energy" />
				<ref bean="dcm_bragg" />
				<ref bean="dcm_offset" />
				<ref bean="dcm_z" />
				<ref bean="dcm_zcentre" />
				<ref bean="dcm_perp" />
				<ref bean="dcm_yaw" />
				<ref bean="dcm_roll" />
				<ref bean="dcm_bend1" />
				<ref bean="dcm_bend2" />
				<ref bean="dcm_radius" />
				<ref bean="dcm_fraction" />
				<ref bean="dcm_pitch" />
				<ref bean="dcm_finepitch" />
				<ref bean="dcm_finepitch_rbv" />
			</list>
		</property>
		<property name="local" value="true" />
	</bean>
</beans>