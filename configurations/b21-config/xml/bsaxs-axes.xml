<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

        <bean id="bsaxs_x_motor" class="gda.device.motor.EpicsMotor">
                <property name="pvName" value="BL22I-EA-BSAX-01:X" />
        </bean>
        <bean id="bsaxs_x" class="gda.device.scannable.ScannableMotor">
                <property name="motor" ref="bsaxs_x_motor" />
        </bean>

        <bean id="bsaxs_y_motor" class="gda.device.motor.EpicsMotor">
                <property name="pvName" value="BL22I-EA-BSAX-01:Y" />
        </bean>
        <bean id="bsaxs_y" class="gda.device.scannable.ScannableMotor">
                <property name="motor" ref="bsaxs_y_motor" />
        </bean>

        <bean id="bsaxs" class="gda.device.scannable.scannablegroup.ScannableGroup">
                <property name="groupMembers">
                        <list>
                                <ref bean="bsaxs_x" />
                                <ref bean="bsaxs_y" />
                        </list>
                </property>
        </bean>
</beans>
