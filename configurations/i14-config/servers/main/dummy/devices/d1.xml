<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:util="http://www.springframework.org/schema/util"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
        http://www.springframework.org/schema/util
		http://www.springframework.org/schema/util/spring-util-2.5.xsd">

	<!-- D1 -->

	<!-- Stick motor -->
	<bean id="d1_x_motor" class="gda.device.motor.DummyMotor">
		<property name="minPosition" value="-1000.0" />
		<property name="maxPosition" value="1000.0" />
		<property name="position" value="24.7" />
		<property name="unitString" value="mm" />
		<property name="local" value="true" />
	</bean>
	
	<!-- Stick positioner -->
	<bean id="d1_x_position" class="gda.device.enumpositioner.DummyEnumPositioner">
		<property name="positions">
			<util:list list-class="java.util.ArrayList">
				<value>Screen</value>
				<value>Out</value>
			</util:list>
		</property>
	</bean>

	<!-- Simulated area detector -->
	<alias name="simCamBase" alias="d1_camBase" />
	<alias name="simRoiStats" alias="d1_roiStats1" />
	<alias name="simRoiStats" alias="d1_roiStats2" />
	<alias name="simRoiStats" alias="d1_roiStats3" />
	<alias name="simRoiStats" alias="d1_roiStats4" />
	<alias name="simRoiStats" alias="d1_roiStats5" />
	<alias name="simRoiStats" alias="d1_roiStats6" />
	<alias name="simHdf5Filewriter" alias="d1_hdf5Filewriter" />

 </beans>