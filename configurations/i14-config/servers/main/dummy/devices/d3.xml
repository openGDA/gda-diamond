<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:util="http://www.springframework.org/schema/util"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
        http://www.springframework.org/schema/util
		http://www.springframework.org/schema/util/spring-util-2.5.xsd">

	<!-- D3 -->

	<!-- Stick motor -->
	<bean id="d3_x_motor" class="gda.device.motor.DummyMotor">
		<property name="minPosition" value="-1000.0" />
		<property name="maxPosition" value="1000.0" />
		<property name="position" value="24.7" />
		<property name="unitString" value="mm" />
		<property name="local" value="true" />
	</bean>
	
	<!-- Stick positioner -->
	<bean id="d3_x_position" class="gda.device.enumpositioner.DummyEnumPositioner">
		<property name="positions">
			<util:list list-class="java.util.ArrayList">
				<value>Screen 2</value>
				<value>Screen</value>
				<value>Trans scatter foil</value>
				<value>Out</value>
			</util:list>
		</property>
	</bean>
	
	<!-- Scatter diode -->
	<bean id="d3_diode1" class="gda.device.monitor.DummyEpicsMonitorDouble">
		<property name="unit" value="uA" />
		<property name="value">
			<value type="double">0.012148</value>
		</property>
	</bean>

	<!-- Area detector camera -->
	<!-- To use this, you will have to start an area detector simulator -->
	<!-- and edit adSimulator.xml with the correct PVs for your simulator -->
	<alias name="simCamBase" alias="d3_camBase" />
 	<bean id="d3_cam" parent="simCam">
		<property name="name" value="d3_cam" />
	</bean>

 </beans>