	<bean id="malcolmModelXsp3CoarseFine" class="org.eclipse.scanning.example.malcolm.DummyMalcolmModel">
		<property name="name" value="BL14I-ML-SCAN-11" />
		<property name="exposureTime" value="0.01" />
