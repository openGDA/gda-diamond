<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<!--  Xspress3 coarse scan -->
	<bean id="malcolmModelXsp3" class="org.eclipse.scanning.example.malcolm.DummyMalcolmModel">
		<property name="name" value="BL14I-ML-SCAN-01" />
		<property name="exposureTime" value="0.01" />
		<property name="axesToMove">
			<list>
				<value>stage1_x</value>
				<value>stage1_y</value>
			</list>
		</property>
	</bean>

	<bean id="malcolmDeviceXsp3" class="org.eclipse.scanning.example.malcolm.DummyMalcolmDevice" init-method="register">
		<property name="name"              value="BL14I-ML-SCAN-01" />
		<property name="model"             ref="malcolmModelXsp3" />
		<property name="deviceInformation" ref="malcolmInfoXsp3" />
		<property name="activated"         value="false" />
	</bean>

	<!-- Excalibur software: using Malcolm to collect data; GDA moves all devices -->
	<bean id="malcolmModelExcaliburSoftware" class="org.eclipse.scanning.example.malcolm.DummyMalcolmModel">
		<property name="name" value="BL14I-ML-EXCBR-01" />
		<property name="exposureTime" value="0.01" />
		<property name="axesToMove"><list /></property>
	</bean>

	<bean id="malcolmDeviceExcaliburSoftware" class="org.eclipse.scanning.example.malcolm.DummyMalcolmDevice" init-method="register">
		<property name="name"              value="BL14I-ML-EXCBR-01" />
		<property name="model"             ref="malcolmModelExcaliburSoftware" />
		<property name="deviceInformation" ref="malcolmInfoExcaliburSoftware" />
		<property name="activated"         value="false" />
	</bean>

	<!-- Excalibur hardware (coarse motors) -->
	<bean id="malcolmModelExcaliburHardwareCoarse" class="org.eclipse.scanning.example.malcolm.DummyMalcolmModel">
		<property name="name" value="BL14I-ML-SCAN-03" />
		<property name="exposureTime" value="0.01" />
		<property name="axesToMove">
			<list>
				<value>stage1_x</value>
				<value>stage1_y</value>
			</list>
		</property>
	</bean>

	<bean id="malcolmDeviceExcaliburHardwareCoarse" class="org.eclipse.scanning.example.malcolm.DummyMalcolmDevice" init-method="register">
		<property name="name" value="BL14I-ML-SCAN-03" />
		<property name="model" ref="malcolmModelExcaliburHardwareCoarse" />
		<property name="deviceInformation" ref="malcolmInfoExcaliburHardwareCoarse" />
		<property name="activated" value="false" />
	</bean>

	<!-- Excalibur hardware (fine motors) -->
	<bean id="malcolmModelExcaliburHardwareFine" class="org.eclipse.scanning.example.malcolm.DummyMalcolmModel">
		<property name="name" value="BL14I-ML-SCAN-07" />
		<property name="exposureTime" value="0.01" />
		<property name="axesToMove">
			<list>
				<value>stage1_xf</value>
				<value>stage1_yf</value>
			</list>
		</property>
	</bean>

	<bean id="malcolmDeviceExcaliburHardwareFine" class="org.eclipse.scanning.example.malcolm.DummyMalcolmDevice" init-method="register">
		<property name="name" value="BL14I-ML-SCAN-07" />
		<property name="model" ref="malcolmModelExcaliburHardwareFine" />
		<property name="deviceInformation" ref="malcolmInfoExcaliburHardwareFine" />
