<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<!-- Dummy Malcolm devices -->

	<!--  Xspress3 -->
	<bean id="malcolmModelXsp3" class="org.eclipse.scanning.example.malcolm.DummyMalcolmModel">
		<property name="name" value="malcolmXsp3" />
		<property name="exposureTime" value="0.1" />
		<property name="axesToMove">
			<list>
				<value>stage1_x</value>
				<value>stage1_y</value>
			</list>
		</property>
	</bean>

	<bean id="malcolmDeviceXsp3" class="org.eclipse.scanning.example.malcolm.DummyMalcolmDevice" init-method="register">
		<property name="name"              value="malcolmXsp3" />
		<property name="model"             ref="malcolmModelXsp3" />
		<property name="deviceInformation" ref="malcolmInfoXsp3" />
		<property name="activated"         value="false" />
	</bean>

	<!--  Excalibur -->
	<bean id="malcolmModelExcalibur" class="org.eclipse.scanning.example.malcolm.DummyMalcolmModel">
		<property name="name" value="malcolmExcalibur" />
		<property name="exposureTime" value="0.1" />
		<property name="axesToMove">
			<list />
		</property>
	</bean>

	<bean id="malcolmDeviceExcalibur" class="org.eclipse.scanning.example.malcolm.DummyMalcolmDevice" init-method="register">
		<property name="name"              value="malcolmExcalibur" />
		<property name="model"             ref="malcolmModelExcalibur" />
		<property name="deviceInformation" ref="malcolmInfoExcalibur" />
		<property name="activated"         value="false" />
	</bean>

</beans>