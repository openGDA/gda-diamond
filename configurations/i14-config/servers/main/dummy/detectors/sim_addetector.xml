<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:gda="http://www.diamond.ac.uk/schema/gda/gda"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
	http://www.diamond.ac.uk/schema/gda/gda http://www.diamond.ac.uk/schema/gda/gda/gda-gda-1.0.xsd">


	<!-- Simulated area detector: can be aliased to stand in for any required area detector -->	

 	<bean id="sim_adbase" class="gda.device.detector.areadetector.v17.impl.ADBaseImpl">
		<property name="basePVName" value="${WORKSTATION}-AD-SIM-01:CAM:" />
	</bean>

	<bean id="sim_adbase_pvProvider" class="gda.device.detector.areadetector.v17.impl.SimplePVProvider">
		<property name="prefix" value="${WORKSTATION}-AD-SIM-01:CAM:" />
	</bean>

	<bean id="sim_stats" class="gda.device.detector.areadetector.v17.impl.NDStatsImpl">
		<property name="basePVName" value="${WORKSTATION}-AD-SIM-01:STAT:" />
		<property name="pluginBase">
			<bean class="gda.device.detector.areadetector.v17.impl.NDPluginBaseImpl">
				<property name="basePVName" value="${WORKSTATION}-AD-SIM-01:STAT:" />
				<property name="initialArrayPort" value="CAM.CAM" />
			</bean>
		</property>
	</bean>

	<bean id="sim_ndarray" class="gda.device.detector.areadetector.v17.impl.NDArrayImpl">
		<property name="basePVName" value="${WORKSTATION}-AD-SIM-01:ARR:" />
		<property name="pluginBase">
			<bean class="gda.device.detector.areadetector.v17.impl.NDPluginBaseImpl">
				<property name="basePVName" value="${WORKSTATION}-AD-SIM-01:ARR:" />
				<property name="initialArrayPort" value="CAM.roi" />
			</bean>
		</property>
	</bean>

	<bean id="sim_ndfile" class="gda.device.detector.areadetector.v17.impl.NDFileImpl">
		<property name="basePVName" value="${WORKSTATION}-AD-SIM-01:HDF5:" />
		<property name="pluginBase">
			<bean class="gda.device.detector.areadetector.v17.impl.NDPluginBaseImpl">
				<property name="basePVName" value="${WORKSTATION}-AD-SIM-01:HDF5:" />
				<property name="initialArrayPort" value="CAM.stat" />
			</bean>
		</property>
		<!-- These arguments are here to please Spring -->
		<property name="initialAutoSave" value="Not hooked up to anything!" />
		<property name="initialAutoIncrement" value="Not hooked up to anything!" />
		<property name="initialWriteMode" value="0" />
		<property name="initialNumCapture" value="1" />
		<property name="initialFileName" value="sim" />
		<property name="initialFileTemplate" value="%s%s.hdf5" />
	</bean>

	<bean id="sim_hdf5" class="gda.device.detector.areadetector.v17.impl.NDFileHDF5Impl">
		<property name="basePVName" value="${WORKSTATION}-AD-SIM-01:HDF5:" />
		<property name="file" ref="sim_ndfile" />
	</bean>

	<!-- Define ROIs -->
	<bean id="sim_roistats1" class="gda.device.detector.nxdetector.plugin.areadetector.ADRoiStatsPairFactory">
		<property name="pluginName" value="roistats1" />
		<property name="baseRoiPVName" value="${WORKSTATION}-AD-SIM-01:ROI1:" />
		<property name="baseStatsPVName" value="${WORKSTATION}-AD-SIM-01:STAT1:" />
		<property name="roiInputNdArrayPort" value="ADSIM.CAM" />
		<property name="enabledBasicStats" value="Total" />
		<property name="oneTimeSeriesCollectionPerLine" value="false" />
	</bean>

	<bean id="sim_roistats2" class="gda.device.detector.nxdetector.plugin.areadetector.ADRoiStatsPairFactory">
		<property name="pluginName" value="roistats2" />
		<property name="baseRoiPVName" value="${WORKSTATION}-AD-SIM-01:ROI2:" />
		<property name="baseStatsPVName" value="${WORKSTATION}-AD-SIM-01:STAT2:" />
		<property name="roiInputNdArrayPort" value="ADSIM.CAM" />
		<property name="enabledBasicStats" value="Total" />
		<property name="oneTimeSeriesCollectionPerLine" value="false" />
	</bean>

	<bean id="sim_roistats3" class="gda.device.detector.nxdetector.plugin.areadetector.ADRoiStatsPairFactory">
		<property name="pluginName" value="roistats3" />
		<property name="baseRoiPVName" value="${WORKSTATION}-AD-SIM-01:ROI3:" />
		<property name="baseStatsPVName" value="${WORKSTATION}-AD-SIM-01:STAT3:" />
		<property name="roiInputNdArrayPort" value="ADSIM.CAM" />
		<property name="enabledBasicStats" value="Total" />
		<property name="oneTimeSeriesCollectionPerLine" value="false" />
	</bean>

	<bean id="sim_roistats4" class="gda.device.detector.nxdetector.plugin.areadetector.ADRoiStatsPairFactory">
		<property name="pluginName" value="roistats4" />
		<property name="baseRoiPVName" value="${WORKSTATION}-AD-SIM-01:ROI4:" />
		<property name="baseStatsPVName" value="${WORKSTATION}-AD-SIM-01:STAT4:" />
		<property name="roiInputNdArrayPort" value="ADSIM.CAM" />
		<property name="enabledBasicStats" value="Total" />
		<property name="oneTimeSeriesCollectionPerLine" value="false" />
	</bean>

	<bean id="sim_roistats5" class="gda.device.detector.nxdetector.plugin.areadetector.ADRoiStatsPairFactory">
		<property name="pluginName" value="roistats5" />
		<property name="baseRoiPVName" value="${WORKSTATION}-AD-SIM-01:ROI5:" />
		<property name="baseStatsPVName" value="${WORKSTATION}-AD-SIM-01:STAT5:" />
		<property name="roiInputNdArrayPort" value="ADSIM.CAM" />
		<property name="enabledBasicStats" value="Total" />
		<property name="oneTimeSeriesCollectionPerLine" value="false" />
	</bean>

	<bean id="sim_roistats6" class="gda.device.detector.nxdetector.plugin.areadetector.ADRoiStatsPairFactory">
		<property name="pluginName" value="roistats6" />
		<property name="baseRoiPVName" value="${WORKSTATION}-AD-SIM-01:ROI6:" />
		<property name="baseStatsPVName" value="${WORKSTATION}-AD-SIM-01:STAT6:" />
		<property name="roiInputNdArrayPort" value="ADSIM.CAM" />
		<property name="enabledBasicStats" value="Total" />
		<property name="oneTimeSeriesCollectionPerLine" value="false" />
	</bean>

</beans>