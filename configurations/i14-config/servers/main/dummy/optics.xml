<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:util="http://www.springframework.org/schema/util"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
    	http://www.springframework.org/schema/util
		http://www.springframework.org/schema/util/spring-util-2.5.xsd">

	<!--The motors associated to optics are listed in the same order as in EPICs synoptics -->

	<!-- ID gap -->
	<bean id="id_gap_motor" class="gda.device.motor.DummyMotor">
		<property name="local" value="true" />
	</bean>

	<!-- S1 (white beam slits) coordinate system motors: -->
	<bean id="s1_x_centre_motor" class="gda.device.motor.DummyMotor">
		<property name="local" value="true" />
	</bean>
	<bean id="s1_x_size_motor" class="gda.device.motor.DummyMotor">
		<property name="local" value="true" />
	</bean>
	<bean id="s1_y_centre_motor" class="gda.device.motor.DummyMotor">
		<property name="local" value="true" />
	</bean>
	<bean id="s1_y_size_motor" class="gda.device.motor.DummyMotor">
		<property name="local" value="true" />
	</bean>

	<!-- S1 (white beam slits) real motors: -->
	<bean id="s1_x_up_motor" class="gda.device.motor.DummyMotor">
		<property name="local" value="true" />
	</bean>
	<bean id="s1_y_up_motor" class="gda.device.motor.DummyMotor">
		<property name="local" value="true" />
	</bean>
	<bean id="s1_x_down_motor" class="gda.device.motor.DummyMotor">
		<property name="local" value="true" />
	</bean>
	<bean id="s1_y_down_motor" class="gda.device.motor.DummyMotor">
		<property name="local" value="true" />
	</bean>

	<!-- A1 (attenuator, sometimes called F1): -->
	<bean id="attn1_stick1_motor" class="gda.device.motor.DummyMotor">
		<property name="local" value="true" />
	</bean>
	<bean id="attn1_stick2_motor" class="gda.device.motor.DummyMotor">
		<property name="local" value="true" />
	</bean>
	<bean id="attn1_stick1_position" class="gda.device.enumpositioner.DummyEnumPositioner">
		<property name="positions">
			<util:list list-class="java.util.ArrayList">
				<value>100um graphite</value>
				<value>Out</value>
			</util:list>
		</property>
	</bean>
	<bean id="attn1_stick2_position" class="gda.device.enumpositioner.DummyEnumPositioner">
		<property name="positions">
			<util:list list-class="java.util.ArrayList">
				<value>100um graphite</value>
				<value>Out</value>
			</util:list>
		</property>
	</bean>

	<!-- M1 (mirror): -->
	<bean id="m1_x_motor" class="gda.device.motor.DummyMotor">
		<property name="local" value="true" />
	</bean>
	<bean id="m1_y_motor" class="gda.device.motor.DummyMotor">
		<property name="local" value="true" />
	</bean>
	<bean id="m1_pitch_motor" class="gda.device.motor.DummyMotor">
		<property name="local" value="true" />
	</bean>

	<!-- M2 (mirror): -->
	<bean id="m2_x_motor" class="gda.device.motor.DummyMotor">
		<property name="local" value="true" />
	</bean>
	<bean id="m2_y_motor" class="gda.device.motor.DummyMotor">
		<property name="local" value="true" />
	</bean>
	<bean id="m2_pitch_motor" class="gda.device.motor.DummyMotor">
		<property name="local" value="true" />
	</bean>
	<bean id="m2_roll_motor" class="gda.device.motor.DummyMotor">
		<property name="local" value="true" />
	</bean>

	<!-- DCM (monochromator): -->
	<bean id="dcm_pitch_motor" class="gda.device.motor.DummyMotor">
		<property name="local" value="true" />
	</bean>
	<bean id="dcm_roll_motor" class="gda.device.motor.DummyMotor">
		<property name="local" value="true" />
	</bean>
	<bean id="dcm_perp_motor" class="gda.device.motor.DummyMotor">
		<property name="local" value="true" />
	</bean>
	<bean id="dcm_bragg_motor" class="gda.device.motor.DummyMotor">
		<property name="local" value="true" />
	</bean>

</beans>
