<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:gda="http://www.diamond.ac.uk/schema/gda/gda"
	xmlns:corba="http://www.diamond.ac.uk/schema/gda/corba"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
	http://www.diamond.ac.uk/schema/gda/gda http://www.diamond.ac.uk/schema/gda/gda/gda-gda-1.0.xsd
	http://www.diamond.ac.uk/schema/gda/corba http://www.diamond.ac.uk/schema/gda/corba/gda-corba-1.0.xsd">

	<!-- AD hardware -->

	<bean id="pco_ad_pluginBase" class="gda.device.detector.areadetector.v17.impl.NDPluginBaseSimulator">
		<property name="dims" value="1000,1000" />
		<property name="datatype" value="UINT32" />
	</bean>

	<bean id="pco_adbase" class="gda.device.detector.areadetector.v17.impl.ADBaseSimulator" />

	<bean id="pco_ndfile_tif" class="gda.device.detector.areadetector.v17.impl.NDFileSimulator">
		<property name="pluginBase" ref="pco_ad_pluginBase" />
	</bean>

	<bean id="pco_addriverpco" class="gda.device.detector.areadetector.v17.impl.DummyADDriverPco" />

	<bean id="pco_ndfilehdf5_base" class="gda.device.detector.areadetector.v17.impl.NDFileSimulator">
		<property name="pluginBase" ref="pco_ad_pluginBase" />
	</bean>

	<bean id="pco_ndhdf5file" class="gda.device.detector.areadetector.v17.impl.NDFileHDF5Simulator">
		<property name="file" ref="pco_ndfilehdf5_base" />
	</bean>

</beans>