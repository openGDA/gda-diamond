<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

	<!--The scannables associated to optics are listed in the same order as in EPICs synoptics -->

	<!-- D1 -->
	<bean id="d1_x" class="gda.device.scannable.ScannableMotor">
		<property name="protectionLevel" value="3" />
		<property name="motor" ref="d1_x_motor" />
	</bean>
	
	<bean id="d1" class="gda.device.scannable.scannablegroup.ScannableGroup">
		<property name="groupMembers">
			<list>
				<ref bean="d1_x" />
				<ref bean="d1_x_position" />
			</list>
		</property>
	</bean>	

	<!-- D3 -->
	<bean id="d3_x" class="gda.device.scannable.ScannableMotor">
		<property name="protectionLevel" value="3" />
		<property name="motor" ref="d3_x_motor" />
	</bean>

	<bean id="d3" class="gda.device.scannable.scannablegroup.ScannableGroup">
		<property name="groupMembers">
			<list>
				<ref bean="d3_x" />
				<ref bean="d3_diode1" />
			</list>
		</property>
	</bean>	

	<!-- D4 -->
	<bean id="d4_x" class="gda.device.scannable.ScannableMotor">
		<property name="protectionLevel" value="3" />
		<property name="motor" ref="d4_x_motor" />
	</bean>

	<bean id="d4_y" class="gda.device.scannable.ScannableMotor">
		<property name="protectionLevel" value="3" />
		<property name="motor" ref="d4_y_motor" />
	</bean>

	<bean id="d4" class="gda.device.scannable.scannablegroup.ScannableGroup">
		<property name="groupMembers">
			<list>
				<ref bean="d4_x" />
				<ref bean="d4_y" />
				<ref bean="d4_diode1" />
				<ref bean="d4_diode2" />
			</list>
		</property>
	</bean>	

</beans>