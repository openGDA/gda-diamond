<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">


	<bean id="xreye_nxcollectionstrategy" class="gda.device.detector.addetector.triggering.SingleExposureStandard">
		<constructor-arg ref="xreye_adbase" />
		<constructor-arg value="0" />
	</bean> 

	<bean id="xreyePlotServerRoiProvider" class="gda.device.detector.nxdetector.roi.PlotServerROISelectionProvider">
		<constructor-arg value="XREYE" />
		<constructor-arg value="6" />
	</bean>

 	<bean id="xreye_nxdetector" class="gda.device.detector.NXDetector">
		<property name="name" value="xreye_nxdetector" />
		<property name="collectionStrategy" ref="xreye_nxcollectionstrategy" />
		<property name="additionalPluginList">
			<list>
				<ref bean="xreye_roiStats1" />
 				<ref bean="xreye_roiStats2" />
				<ref bean="xreye_roiStats3" />
				<ref bean="xreye_roiStats4" />
				<ref bean="xreye_roiStats5" />
				<ref bean="xreye_roiStats6" />
				<!-- <ref bean="xreye_hdf5Filewriter" /> -->
			</list>
		</property>
	</bean>

</beans>