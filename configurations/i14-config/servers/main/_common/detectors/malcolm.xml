<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">


	<!-- Xspress3 -->
	<bean id="malcolmInfoXsp3" class="org.eclipse.scanning.api.event.scan.DeviceInformation">
		<property name="label" value="XSP3 coarse Malcolm" />
		<property name="description" value="Xspress III coarse Malcolm scan" />
		<!-- <property name="icon" value=""/> TODO: we need an icon for malcolm -->
	</bean>

	<!-- Excalibur -->
	<bean id="malcolmInfoExcaliburMalcolmSoftware" class="org.eclipse.scanning.api.event.scan.DeviceInformation">
		<property name="label" value="Excalibur Malcolm software" />
		<property name="description" value="Malcolm Excalibur for software scanning" />
		<!-- <property name="icon" value=""/> TODO: we need an icon for malcolm -->
	</bean>

	<bean id="malcolmInfoExcaliburMalcolmHardware" class="org.eclipse.scanning.api.event.scan.DeviceInformation">
		<property name="label" value="Excalibur Malcolm hardware" />
		<property name="description" value="Malcolm Excalibur for true hardware scanning" />
		<!-- <property name="icon" value=""/> TODO: we need an icon for malcolm -->
	</bean>

	<!-- Merlin -->
	<!-- Merlin -->
	<bean id="malcolmInfoMerlin" class="org.eclipse.scanning.api.event.scan.DeviceInformation">
		<property name="label" value="Merlin Malcolm" />
		<property name="description" value="Merlin Malcolm scan" />
	</bean>

	<!-- Xspress3/Merlin -->
	<bean id="malcolmInfoXsp3Merlin" class="org.eclipse.scanning.api.event.scan.DeviceInformation">
		<property name="label" value="XSP3/Merlin Malcolm" />
		<property name="description" value="Combined XSP3 and Merlin Malcolm scan" />
	</bean>

</beans>