<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">


	<!-- Xspress3 coarse -->
	<bean id="malcolmInfoXsp3" class="org.eclipse.scanning.api.event.scan.DeviceInformation">
		<property name="label" value="XSP3 coarse" />
		<property name="description" value="Xspress III coarse scan" />
	</bean>

	<!-- Excalibur software: using Malcolm to collect data; GDA moves all devices -->
	<bean id="malcolmInfoExcaliburSoftware" class="org.eclipse.scanning.api.event.scan.DeviceInformation">
		<property name="label" value="Excalibur Malcolm software" />
		<property name="description" value="Malcolm Excalibur for software scanning" />
	</bean>

	<!-- Excalibur hardware (coarse motors) -->
	<bean id="malcolmInfoExcaliburHardwareCoarse" class="org.eclipse.scanning.api.event.scan.DeviceInformation">
		<property name="label" value="Excalibur coarse" />
		<property name="description" value="Excalibur for true hardware scanning (coarse motors)" />
	</bean>

	<!-- Excalibur hardware (fine motors) -->
	<bean id="malcolmInfoExcaliburHardwareFine" class="org.eclipse.scanning.api.event.scan.DeviceInformation">
		<property name="label" value="Excalibur/XRF coarse/fine" />
		<property name="description" value="Excalibur/XRF combined scan with coarse and fine motors" />
	</bean>

	<!-- Combined Excalibur/Xspress3 hardware scanning -->
	<bean id="malcolmInfoExcaliburXsp3" class="org.eclipse.scanning.api.event.scan.DeviceInformation">
		<property name="label" value="Excalibur/XSP3" />
		<property name="description" value="Combined Excalibur and Xspress3 hardware scanning" />
	</bean>

	<!-- XRF TetrAMM scan -->
	<bean id="malcolmInfoXrfTetrAMM" class="org.eclipse.scanning.api.event.scan.DeviceInformation">
		<property name="label" value="XRF TetrAMM" />
		<property name="description" value="XRF TetrAMM scanning" />
	</bean>

	<!-- Xspress3 fine scan -->
	<bean id="malcolmInfoXsp3Fine" class="org.eclipse.scanning.api.event.scan.DeviceInformation">
		<property name="label" value="XSP3 fine" />
		<property name="description" value="Xspress III fine motors scan" />
	</bean>

	<!-- Xspress3 combined coarse/fine scan -->
	<bean id="malcolmInfoXsp3CoarseFine" class="org.eclipse.scanning.api.event.scan.DeviceInformation">
		<property name="label" value="XSP3 coarse/fine" />
		<property name="description" value="Xspress III combined coarse and fine motors scan" />
	</bean>

	<!-- Merlin -->
	<bean id="malcolmInfoMerlinCoarse" class="org.eclipse.scanning.api.event.scan.DeviceInformation">
		<property name="label" value="Merlin coarse" />
		<property name="description" value="Merlin coarse scan" />
	</bean>

	<bean id="malcolmInfoMerlinFine" class="org.eclipse.scanning.api.event.scan.DeviceInformation">
		<property name="label" value="Merlin fine" />
		<property name="description" value="Merlin fine scan" />
	</bean>

	<!-- Xspress3/Merlin -->
	<bean id="malcolmInfoXsp3MerlinCoarse" class="org.eclipse.scanning.api.event.scan.DeviceInformation">
		<property name="label" value="XSP3/Merlin coarse/fine" />
		<property name="description" value="Combined XSP3 and Merlin coarse/fine scan" />
	</bean>

	<bean id="malcolmInfoXsp3MerlinFine" class="org.eclipse.scanning.api.event.scan.DeviceInformation">
		<property name="label" value="XSP3/Merlin fine" />
		<property name="description" value="Combined XSP3 and Merlin fine scan" />
	</bean>

</beans>