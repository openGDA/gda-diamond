<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:gda="http://www.diamond.ac.uk/schema/gda/gda"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
		http://www.diamond.ac.uk/schema/gda/gda http://www.diamond.ac.uk/schema/gda/gda/gda-gda-1.0.xsd">


	<!-- NXDetector triggering -->

	<bean id="pco_singleExposurePco" class="gda.device.detector.addetector.triggering.SingleExposurePco">
		<constructor-arg ref="pco_adbase" />
		<constructor-arg ref="pco_addriverpco"/>
		<constructor-arg value="0" />
	</bean>

	<bean id="pco_singleExposurePcoSoftwareTrigger" class="gda.device.detector.addetector.triggering.SingleExposurePcoSoftwareTrigger">
		<constructor-arg ref="pco_adbase" />
		<constructor-arg ref="pco_addriverpco"/>
		<constructor-arg value="0" />
	</bean>


	<!-- NXDetector file writers -->
	
	<!-- TIFF -->
	
	<bean id="pco_nxfilewriter_tif" class="gda.device.detector.nxdetector.plugin.areadetector.filewriter.SingleImagePerFileWriter">
		<constructor-arg value="pco" />
		<property name="ndFile" ref="pco_ndfile_tif" />
		<property name="writeErrorStatusSupported" value="false"/>
		<property name="waitForFileArrival" value="false"/>
	</bean>

	<bean id="pco_nxfilewriter_tif_for_snaps" class="gda.device.detector.nxdetector.plugin.areadetector.filewriter.SingleImagePerFileWriterWithNumTracker">
		<constructor-arg value="pco" />
		<property name="ndFile" ref="pco_ndfile_tif" />
		<property name="numTrackerExtension" value="pco_snaps_numtracker" />
		<property name="writeErrorStatusSupported" value="false"/>
	</bean>

	<!-- HDF5 -->

	<bean id="pco_nxfilewriter_hdf5_nochunking" class="gda.device.detector.addetector.filewriter.MultipleImagesPerHDF5FileWriter">
		<property name="ndFileHDF5" ref="pco_ndhdf5file" />
		<property name="fileNameTemplate" value="pco"/>
		<property name="filePathTemplate" value="$datadir$"/>
		<property name="fileTemplate" value="%s%s-%d.hdf"/>
		<property name="fileNumberAtScanStart" value="-1"/>
		<property name="setFileNameAndNumber" value="true"/>
		<property name="rowChunks" value="0"/>
		<property name="colChunks" value="0"/>
		<property name="framesChunks" value="0"/>
		<property name="framesFlush" value="0"/>
		<property name="lazyOpen" value="true"/>
		<!-- property name="boundaryAlign" value="1048576"/ -->
		<property name="blocking" value="false"/> <!-- must be false otherwise PCO Event Driver driver crashes if framesChunks is 64-->
	</bean>


	<!-- NXDetectors -->

	<bean id="pco_tif" class="gda.device.detector.NXDetector">
		<property name="name" value="pco" />
		<property name="collectionStrategy" ref="pco_singleExposurePco"/>
		<property name="additionalPluginList">
			<list>
				<ref bean="pco_nxfilewriter_tif" />
			</list>
		</property>
	</bean>

	<bean id="pco_tif_for_snaps" class="gda.device.detector.NXDetector">
		<property name="name" value="pco_for_snaps" />
		<property name="collectionStrategy" ref="pco_singleExposurePco"/>
		<property name="additionalPluginList">
			<list>
				<ref bean="pco_nxfilewriter_tif_for_snaps" />
			</list>
		</property>
	</bean>

	<bean id="pco_hdf" class="gda.device.detector.NXDetector">
		<property name="name" value="pco1_sw_hdf_nochunking"/>
		<property name="collectionStrategy" ref="pco_singleExposurePco" />
		<property name="additionalPluginList">
			<list>
				<ref bean="pco_nxfilewriter_hdf5_nochunking" />
			</list>
		</property>
	</bean>	
	
	<!-- scannable group for detectors -->
	
	<bean id="pco" class="gda.device.scannable.scannablegroup.ScannableGroup">
		<property name="groupMembers">
			<list>
				<ref bean="pco_tif" />
				<ref bean="pco_tif_for_snaps" />
				<ref bean="pco_hdf" />
			</list>
		</property>
	</bean>
	

</beans>