<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans.xsd">
	
	<bean id="malcolm_available_model" class="org.eclipse.scanning.api.device.models.ExpressionWatchdogModel">
		<property name="expression" value="malcolm_state.equalsIgnoreCase(&quot;Healthy&quot;)"/>
		<property name="message" value="Malcolm is not ready"/>
	</bean>

	<bean id="malcolm_available_watchdog" class="org.eclipse.scanning.sequencer.watchdog.ExpressionWatchdog" init-method="activate">
		<property name="name" value="malcolm_available_watchdog" />
		<property name="model" ref="malcolm_available_model"/>
	</bean>
	
</beans>