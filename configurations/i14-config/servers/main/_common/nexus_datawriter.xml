					</bean>
				</entry>
				<entry key="d4_adc_inline">
					<bean class="gda.data.scan.datawriter.scannablewriter.SingleScannableWriter">
						<property name="paths" value="instrument:NXInstrument/beamline:NXcollection/D4:NXpositioner/d4_adc_inline" />
						<property name="units" value="" />
					</bean>
				</entry>

				<entry key="s1">
					<bean class="gda.data.scan.datawriter.scannablewriter.SingleScannableWriter">
						<property name="paths">
							<list>
								<value>instrument:NXInstrument/beamline:NXcollection/S1:NXslit/s1_x_centre</value>
								<value>instrument:NXInstrument/beamline:NXcollection/S1:NXslit/s1_x_size</value>
								<value>instrument:NXInstrument/beamline:NXcollection/S1:NXslit/s1_x_up</value>
								<value>instrument:NXInstrument/beamline:NXcollection/S1:NXslit/s1_x_down</value>
								<value>instrument:NXInstrument/beamline:NXcollection/S1:NXslit/s1_y_centre</value>
								<value>instrument:NXInstrument/beamline:NXcollection/S1:NXslit/s1_y_size</value>
								<value>instrument:NXInstrument/beamline:NXcollection/S1:NXslit/s1_y_up</value>
								<value>instrument:NXInstrument/beamline:NXcollection/S1:NXslit/s1_y_down</value>
							</list>
						</property>
						<property name="units">
							<list>
								<value>mm</value>
								<value>mm</value>
								<value>mm</value>
								<value>mm</value>
								<value>mm</value>
								<value>mm</value>
								<value>mm</value>
								<value>mm</value>
							</list>
						</property>
					</bean>
				</entry>
				<entry key="s2">
					<bean class="gda.data.scan.datawriter.scannablewriter.SingleScannableWriter">
						<property name="paths">
							<list>
								<value>instrument:NXInstrument/beamline:NXcollection/S2:NXslit/s2_x_centre</value>
								<value>instrument:NXInstrument/beamline:NXcollection/S2:NXslit/s2_x_size</value>
								<value>instrument:NXInstrument/beamline:NXcollection/S2:NXslit/s2_outboard</value>
								<value>instrument:NXInstrument/beamline:NXcollection/S2:NXslit/s2_inboard</value>
							</list>
						</property>
						<property name="units">
							<list>
								<value>mm</value>
								<value>mm</value>
								<value>mm</value>
								<value>mm</value>
							</list>
						</property>
					</bean>
				</entry>
				<entry key="s3">
					<bean class="gda.data.scan.datawriter.scannablewriter.SingleScannableWriter">
						<property name="paths">
							<list>
								<value>instrument:NXInstrument/beamline:NXcollection/S3:NXslit/s3_x_centre</value>
								<value>instrument:NXInstrument/beamline:NXcollection/S3:NXslit/s3_x_size</value>
								<value>instrument:NXInstrument/beamline:NXcollection/S3:NXslit/s3_y_centre</value>
								<value>instrument:NXInstrument/beamline:NXcollection/S3:NXslit/s3_y_size</value>
							</list>
						</property>
						<property name="units">
							<list>
								<value>mm</value>
								<value>mm</value>
								<value>mm</value>
								<value>mm</value>
							</list>
						</property>
					</bean>
				</entry>
				<entry key="s4">
					<bean class="gda.data.scan.datawriter.scannablewriter.SingleScannableWriter">
						<property name="paths">
							<list>
								<value>instrument:NXInstrument/beamline:NXcollection/S4:NXslit/s4_x_size</value>
								<value>instrument:NXInstrument/beamline:NXcollection/S4:NXslit/s4_y_centre</value>
							</list>
						</property>
						<property name="units">
							<list>
								<value>mm</value>
								<value>mm</value>
							</list>
						</property>
					</bean>
				</entry>
				<entry key="kb1">
					<bean class="gda.data.scan.datawriter.scannablewriter.SingleScannableWriter">
						<property name="paths">
							<list>
								<value>instrument:NXInstrument/beamline:NXcollection/KB1:NXMirror/kbv1_pitch</value>
								<value>instrument:NXInstrument/beamline:NXcollection/KB1:NXMirror/kbv1_roll</value>
								<value>instrument:NXInstrument/beamline:NXcollection/KB1:NXMirror/kbh1_pitch</value>
							</list>
						</property>
						<property name="units">
							<list>
								<value>mrad</value>
								<value>mrad</value>
								<value>mrad</value>
							</list>
						</property>
					</bean>
				</entry>
				<entry key="stage1">
					<bean class="gda.data.scan.datawriter.scannablewriter.SingleScannableWriter">
						<property name="paths">
							<list>
								<value>instrument:NXInstrument/sample:NXsample/sample_x</value>
								<value>instrument:NXInstrument/sample:NXsample/sample_y</value>
								<value>instrument:NXInstrument/sample:NXsample/sample_z</value>
								<value>instrument:NXInstrument/sample:NXsample/sample_rot</value>
							</list>
						</property>
						<property name="units">
							<list>
								<value>mm</value>
								<value>mm</value>
								<value>mm</value>
								<value>deg</value>
							</list>
						</property>
					</bean>
				</entry>

				<!-- Detectors -->
				<entry key="beam_stop_x">
					<bean class="gda.data.scan.datawriter.scannablewriter.SingleScannableWriter">
						<property name="paths" value="instrument:NXInstrument/detectors:NXcollection/beam_stop_x" />
						<property name="units" value="mm" />
					</bean>
				</entry>
				<entry key="beam_stop_y">
					<bean class="gda.data.scan.datawriter.scannablewriter.SingleScannableWriter">
						<property name="paths" value="instrument:NXInstrument/detectors:NXcollection/beam_stop_y" />
						<property name="units" value="mm" />
					</bean>
				</entry>
				<entry key="detector_table_x">
					<bean class="gda.data.scan.datawriter.scannablewriter.SingleScannableWriter">
						<property name="paths" value="instrument:NXInstrument/detectors:NXcollection/detector_table_x" />
						<property name="units" value="mm" />
					</bean>
				</entry>
				<entry key="excalibur_y">
