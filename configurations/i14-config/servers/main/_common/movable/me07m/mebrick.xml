<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

	<bean id="mebrick1" class="gda.device.scannable.ScannableMotor">
		<property name="motor" ref="mebrick1Motor" />
	</bean>

	<bean id="mebrick3" class="gda.device.scannable.ScannableMotor">
		<property name="motor" ref="mebrick3Motor" />
	</bean>

	<bean id="mebrick" class="gda.device.scannable.scannablegroup.ScannableGroup">
		<property name="groupMembers">
			<list>
				<ref bean="mebrick1" />
				<ref bean="mebrick3" />
			</list>
		</property>
	</bean>

</beans>