<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">
           
<!--The scannables associated to optics are listed in the same order as in EPICs synoptics  -->
<!--  S1 (white beam slits) coordinate system motors: -->
	 <bean id="s1_xcenter" class="gda.device.scannable.ScannableMotor">
		<property name="protectionLevel" value="3" />
		<property name="motor" ref="s1_xcenter_motor" />
	</bean>
	<bean id="s1_xsize" class="gda.device.scannable.ScannableMotor">
		<property name="protectionLevel" value="3" />
		<property name="motor" ref="s1_xsize_motor" />	
	</bean>
	<bean id="s1_ycenter" class="gda.device.scannable.ScannableMotor">
		<property name="protectionLevel" value="3" />
		<property name="motor" ref="s1_ycenter_motor" />	
	</bean>
	<bean id="s1_ysize" class="gda.device.scannable.ScannableMotor">
		<property name="protectionLevel" value="3" />
		<property name="motor" ref="s1_ysize_motor" />	
	</bean>
	
	<!-- S1 (white beam slits) real motors: -->
	<bean id="s1_xup" class="gda.device.scannable.ScannableMotor">
		<property name="protectionLevel" value="3" />
		<property name="motor" ref="s1_xup_motor" />	
	</bean>
	<bean id="s1_yup" class="gda.device.scannable.ScannableMotor">
		<property name="protectionLevel" value="3" />
		<property name="motor" ref="s1_yup_motor" />	
	</bean>
	<bean id="s1_xdown" class="gda.device.scannable.ScannableMotor">
		<property name="protectionLevel" value="3" />
		<property name="motor" ref="s1_xdown_motor" />	
	</bean>
	<bean id="s1_ydown" class="gda.device.scannable.ScannableMotor">
		<property name="protectionLevel" value="3" />
		<property name="motor" ref="s1_ydown_motor" />	
	</bean>
		
	
	<!-- A1 (attenuator, sometimes called F1): -->
	<bean id="attn1_stick1" class="gda.device.scannable.ScannableMotor">
		<property name="protectionLevel" value="3" />
		<property name="motor" ref="attn1_stick1_motor" />	
	</bean>
	<bean id="attn1_stick2" class="gda.device.scannable.ScannableMotor">
		<property name="protectionLevel" value="3" />
		<property name="motor" ref="attn1_stick2_motor" />	
	</bean> 
	
</beans>

