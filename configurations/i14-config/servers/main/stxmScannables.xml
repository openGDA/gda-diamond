<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:util="http://www.springframework.org/schema/util"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
           http://www.springframework.org/schema/util
           http://www.springframework.org/schema/util/spring-util-2.0.xsd">


	<bean id="stxmDummy" class="gda.device.scannable.DummyConstantVelocityRasterScannable">
		<constructor-arg value="stxmDummy" />
	</bean>



<!-- Dummy motors to use in a scan to represent the line / row values in the Nexus file and for plotting -->

	<!--Line number -->
	<bean id="line_motor" class="gda.device.motor.DummyMotor" >
		<property name="speed" value="50" /> 
	</bean>

	<bean id="lineNumber" class="gda.device.scannable.ScannableMotor">
		<property name="protectionLevel" value="3" />
		<property name="motor" ref="line_motor" />
	</bean>

	<!--Point number -->
	<bean id="point_motor" class="gda.device.motor.DummyMotor" >
		<property name="speed" value="50" /> 
	</bean> 

	<bean id="pointNumber" class="gda.device.scannable.ScannableMotor">
		<property name="protectionLevel" value="3" />
		<property name="motor" ref="point_motor" />
	</bean>
	
</beans>
