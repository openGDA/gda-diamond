<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="_eiger" class="uk.ac.gda.devices.odin.OdinDetector">
		<property name="controller" ref="eiger_controller" />
		<property name="collectionStrategy" ref="eiger_single_strategy" />
	</bean>
	
	<bean id="eiger_single_strategy" class="uk.ac.gda.devices.odin.OdinSingleFileStrategy">
		<constructor-arg index="0" ref="eiger_controller" />
		<property name="triggerMode" value="Internal Series" />
	</bean>

	<!-- Live below -->

	<bean id="eiger_controller_base" class="uk.ac.gda.devices.odin.control.OdinDetectorControllerEpics">
		<property name="basePv" value="BL14I-EA-EIGER-01:" />
	</bean>

	<bean id="eiger_controller" class="uk.ac.gda.devices.odin.control.OdinDetectorEiger">
		<constructor-arg ref="eiger_controller_base" />
		<property name="basePv" value="BL14I-EA-EIGER-01:"/>
	</bean>

