<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="excalibur_adbase" class="gda.device.detector.areadetector.v17.impl.ADBaseImpl">
		<property name="basePVName" value="BL14I-EA-EXCBR-01:CONFIG:ACQUIRE:" />
	</bean>
	
	<bean id="excalibur_roi" class="gda.device.detector.areadetector.v17.impl.NDROIImpl">
		<property name="basePVName" value="BL14I-EA-EXCBR-02:ROI:" />
		<property name="pluginBase">
			<bean class="gda.device.detector.areadetector.v17.impl.NDPluginBaseImpl">
				<property name="basePVName" value="BL14I-EA-EXCBR-02:ROI:" />
				<property name="initialArrayPort" value="EXCBR.CAM" />
			</bean>
		</property>
	</bean>

	<bean id="excalibur_stats" class="gda.device.detector.areadetector.v17.impl.NDStatsImpl">
		<property name="basePVName" value="BL14I-EA-EXCBR-01:MASTER:STAT:" />
		<property name="pluginBase">
			<bean class="gda.device.detector.areadetector.v17.impl.NDPluginBaseImpl">
				<property name="basePVName" value="BL14I-EA-EXCBR-01:MASTER:STAT:" />
				<property name="initialArrayPort" value="master.slaves" />
			</bean>
		</property>
	</bean>

	<bean id="excalibur_ndarray" class="gda.device.detector.areadetector.v17.impl.NDArrayImpl">
		<property name="basePVName" value="BL14I-EA-EXCBR-01:MASTER:ARR:" />
		<property name="pluginBase">
			<bean class="gda.device.detector.areadetector.v17.impl.NDPluginBaseImpl">
				<property name="basePVName" value="BL14I-EA-EXCBR-01:MASTER:ARR:" />
				<property name="initialArrayPort" value="master.slaves" />
			</bean>
		</property>
	</bean>

	<bean id="excalibur_ndfile" class="gda.device.detector.areadetector.v17.impl.NDFileImpl">
		<property name="basePVName" value="BL14I-EA-EXCBR-01:MASTER:HDF5:" />
		<property name="pluginBase">
			<bean class="gda.device.detector.areadetector.v17.impl.NDPluginBaseImpl">
				<property name="basePVName" value="BL14I-EA-EXCBR-01:MASTER:HDF5:" />
				<property name="initialArrayPort" value="master.stat" />
			</bean>
		</property>
		<property name="initialWriteMode" value="0" />
		<property name="initialNumCapture" value="1" />
		<property name="initialFileName" value="excalibur" />
		<property name="initialFileTemplate" value="%s%s.hdf5" />
	</bean>

	<bean id="excalibur_ndfile_hdf5" class="gda.device.detector.areadetector.v17.impl.NDFileHDF5Impl">
		<property name="basePVName" value="BL14I-EA-EXCBR-01:MASTER:HDF5:" />
		<property name="file" ref="excalibur_ndfile" />
	</bean>
	
	<bean id="excalibur_camera_control" class="uk.ac.gda.epics.camera.EpicsCameraControl">
		<constructor-arg ref="excalibur_adbase" />
		<constructor-arg ref="excalibur_roi" />
		<property name="useAcquireTimeMonitor" value="true" />
	</bean>

</beans>