<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">


	<!-- Xspress3 -->
	<bean id="malcolmModelXsp3" class="org.eclipse.scanning.api.device.models.MalcolmModel">
		<property name="name" value="BL14I-ML-SCAN-01" />
		<property name="exposureTime" value="0.01" />
	</bean>

	<bean id="malcolmDeviceXsp3" class="org.eclipse.scanning.malcolm.core.MalcolmDevice" init-method="register">
		<property name="name" value="BL14I-ML-SCAN-01" />
		<property name="model" ref="malcolmModelXsp3" />
		<property name="deviceInformation" ref="malcolmInfoXsp3" />
		<!-- Whether this is the default device to use in a scan -->
		<property name="activated" value="false" />
	</bean>

	<!-- Excalibur: using Malcolm to collect data; GDA moves all devices -->
	<bean id="malcolmModelExcaliburMalcolmSoftware" class="org.eclipse.scanning.api.device.models.MalcolmModel">
		<property name="name" value="BL14I-ML-EXCBR-01" />
		<property name="exposureTime" value="0.01" />
	</bean>

	<bean id="malcolmDeviceExcaliburMalcolmSoftware" class="org.eclipse.scanning.malcolm.core.MalcolmDevice" init-method="register">
		<property name="name" value="BL14I-ML-EXCBR-01" />
		<property name="model" ref="malcolmModelExcaliburMalcolmSoftware" />
		<property name="deviceInformation" ref="malcolmInfoExcaliburMalcolmSoftware" />
		<!-- Whether this is the default device to use in a scan -->
		<property name="activated" value="false" />
	</bean>

	<!-- Excalibur Malcolm hardware scanning -->
	<bean id="malcolmModelExcaliburMalcolmHardware" class="org.eclipse.scanning.api.device.models.MalcolmModel">
		<property name="name" value="BL14I-ML-SCAN-03" />
		<property name="exposureTime" value="0.01" />
	</bean>

	<bean id="malcolmDeviceExcaliburMalcolmHardware" class="org.eclipse.scanning.malcolm.core.MalcolmDevice" init-method="register">
		<property name="name" value="BL14I-ML-SCAN-03" />
		<property name="model" ref="malcolmModelExcaliburMalcolmHardware" />
		<property name="deviceInformation" ref="malcolmInfoExcaliburMalcolmHardware" />
		<!-- Whether this is the default device to use in a scan -->
		<property name="activated" value="false" />
	</bean>

	<!-- Merlin -->
	<bean id="malcolmModelMerlin" class="org.eclipse.scanning.api.device.models.MalcolmModel">
		<property name="name" value="BL14I-ML-MERL-01" />
		<property name="exposureTime" value="0.01" />
	</bean>

	<bean id="malcolmDeviceMerlin" class="org.eclipse.scanning.malcolm.core.MalcolmDevice" init-method="register">
		<property name="name" value="BL14I-ML-MERL-01" />
		<property name="model" ref="malcolmModelMerlin" />
		<property name="deviceInformation" ref="malcolmInfoMerlin" />
		<!-- Whether this is the default device to use in a scan -->
		<property name="activated" value="false" />
	</bean>

	<!-- XSP3/Merlin -->
	<bean id="malcolmModelXsp3Merlin" class="org.eclipse.scanning.api.device.models.MalcolmModel">
		<property name="name" value="BL14I-ML-SCAN-02" />
		<property name="exposureTime" value="0.01" />
	</bean>

	<bean id="malcolmDeviceXsp3Merlin" class="org.eclipse.scanning.malcolm.core.MalcolmDevice" init-method="register">
		<property name="name" value="BL14I-ML-SCAN-02" />
		<property name="model" ref="malcolmModelXsp3Merlin" />
		<property name="deviceInformation" ref="malcolmInfoXsp3Merlin" />
		<!-- Whether this is the default device to use in a scan -->
		<property name="activated" value="false" />
	</bean>

</beans>
