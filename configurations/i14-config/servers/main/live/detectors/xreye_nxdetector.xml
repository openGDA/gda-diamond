<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">


	<bean id="xreye_adbase_pvProvider" class="gda.device.detector.areadetector.v17.impl.SimplePVProvider">
		<property name="prefix" value="BL14I-EA-XREYE-01:DET:" />
	</bean>

	<!-- ROI support -->
	<bean id="xreye_roiStats1" class="gda.device.detector.nxdetector.plugin.areadetector.ADRoiStatsPairFactory">
		<property name="pluginName" value="roistats1" />
		<property name="baseRoiPVName" value="BL14I-EA-XREYE-01:DET:ROI1:" />
		<property name="baseStatsPVName" value="BL14I-EA-XREYE-01:DET:STAT1:" />
		<property name="roiInputNdArrayPort" value="XREYE.cam" />
		<property name="enabledBasicStats" value="Total" />
		<property name="oneTimeSeriesCollectionPerLine" value="false" />
		<property name="roiProvider">
			<bean class="gda.device.detector.nxdetector.roi.RectangularIntegerROIIndexer">
				<constructor-arg ref="xreyePlotServerRoiProvider" />
				<constructor-arg value="0" />
			</bean>
		</property>
	</bean>

	<bean id="xreye_roiStats2" class="gda.device.detector.nxdetector.plugin.areadetector.ADRoiStatsPairFactory">
		<property name="pluginName" value="roistats2" />
		<property name="baseRoiPVName" value="BL14I-EA-XREYE-01:DET:ROI2:" />
		<property name="baseStatsPVName" value="BL14I-EA-XREYE-01:DET:STAT2:" />
		<property name="roiInputNdArrayPort" value="XREYE.cam" />
		<property name="enabledBasicStats" value="Total" />
		<property name="oneTimeSeriesCollectionPerLine" value="false" />
		<property name="roiProvider">
			<bean class="gda.device.detector.nxdetector.roi.RectangularIntegerROIIndexer">
				<constructor-arg ref="xreyePlotServerRoiProvider" />
				<constructor-arg value="1" />
			</bean>
		</property>
	</bean>

	<bean id="xreye_roiStats3" class="gda.device.detector.nxdetector.plugin.areadetector.ADRoiStatsPairFactory">
		<property name="pluginName" value="roistats3" />
		<property name="baseRoiPVName" value="BL14I-EA-XREYE-01:DET:ROI3:" />
		<property name="baseStatsPVName" value="BL14I-EA-XREYE-01:DET:STAT3:" />
		<property name="roiInputNdArrayPort" value="XREYE.cam" />
		<property name="enabledBasicStats" value="Total" />
		<property name="oneTimeSeriesCollectionPerLine" value="false" />
		<property name="roiProvider">
			<bean class="gda.device.detector.nxdetector.roi.RectangularIntegerROIIndexer">
				<constructor-arg ref="xreyePlotServerRoiProvider" />
				<constructor-arg value="2" />
			</bean>
		</property>
	</bean>

	<bean id="xreye_roiStats4" class="gda.device.detector.nxdetector.plugin.areadetector.ADRoiStatsPairFactory">
		<property name="pluginName" value="roistats4" />
		<property name="baseRoiPVName" value="BL14I-EA-XREYE-01:DET:ROI4:" />
		<property name="baseStatsPVName" value="BL14I-EA-XREYE-01:DET:STAT4:" />
		<property name="roiInputNdArrayPort" value="XREYE.cam" />
		<property name="enabledBasicStats" value="Total" />
		<property name="oneTimeSeriesCollectionPerLine" value="false" />
		<property name="roiProvider">
			<bean class="gda.device.detector.nxdetector.roi.RectangularIntegerROIIndexer">
				<constructor-arg ref="xreyePlotServerRoiProvider" />
				<constructor-arg value="3" />
			</bean>
		</property>
	</bean>

	<bean id="xreye_roiStats5" class="gda.device.detector.nxdetector.plugin.areadetector.ADRoiStatsPairFactory">
		<property name="pluginName" value="roistats5" />
		<property name="baseRoiPVName" value="BL14I-EA-XREYE-01:DET:ROI5:" />
		<property name="baseStatsPVName" value="BL14I-EA-XREYE-01:DET:STAT5:" />
		<property name="roiInputNdArrayPort" value="XREYE.cam" />
		<property name="enabledBasicStats" value="Total" />
		<property name="oneTimeSeriesCollectionPerLine" value="false" />
		<property name="roiProvider">
			<bean class="gda.device.detector.nxdetector.roi.RectangularIntegerROIIndexer">
				<constructor-arg ref="xreyePlotServerRoiProvider" />
				<constructor-arg value="4" />
			</bean>
		</property>
	</bean>

	<bean id="xreye_roiStats6" class="gda.device.detector.nxdetector.plugin.areadetector.ADRoiStatsPairFactory">
		<property name="pluginName" value="roistats6" />
		<property name="baseRoiPVName" value="BL14I-EA-XREYE-01:DET:ROI6:" />
		<property name="baseStatsPVName" value="BL14I-EA-XREYE-01:DET:STAT6:" />
		<property name="roiInputNdArrayPort" value="XREYE.cam" />
		<property name="enabledBasicStats" value="Total" />
		<property name="oneTimeSeriesCollectionPerLine" value="false" />
		<property name="roiProvider">
			<bean class="gda.device.detector.nxdetector.roi.RectangularIntegerROIIndexer">
				<constructor-arg ref="xreyePlotServerRoiProvider" />
				<constructor-arg value="5" />
			</bean>
		</property>
	</bean>

	<!-- HDF5 file -->
	<bean id="xreye_ndhdf5file" class="gda.spring.V17NDFileHDF5FactoryBean">
		<property name="ndFileImpl">
			<bean class="gda.spring.V17NDFileFactoryBean">
				<property name="prefix" value="BL14I-EA-XREYE-01:DET:HDF5:" />
				<property name="resetToInitialValues" value="false" />
			</bean>
		</property>
	</bean>

	<!-- Area detector camera -->
	<bean id="xreye_camBase" class="gda.spring.V17ADBaseFactoryBean">
		<property name="prefix" value="BL14I-EA-XREYE-01:DET:CAM:" />
	</bean>

</beans>