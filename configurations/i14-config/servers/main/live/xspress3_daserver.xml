<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:util="http://www.springframework.org/schema/util"
	xmlns:corba="http://www.diamond.ac.uk/schema/gda/corba"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
           http://www.springframework.org/schema/util
           http://www.springframework.org/schema/util/spring-util-2.0.xsd
           http://www.diamond.ac.uk/schema/gda/corba
           http://www.diamond.ac.uk/schema/gda/corba/gda-corba-1.0.xsd">
           
<!-- Make sure da.server process is running on server before starting gdaservers :
e.g. ssh to bl14i-ea-serv-01 (possibly as i14user) and run 'da.server -log' command 
 -->
	<bean id="daserver_xspress3" class="gda.device.detector.DAServer">
		<property name="local" value="True" />
		<property name="host" value="bl14i-ea-serv-01" />
	<!-- 		IP address="172.23.114.208" -->
		<property name="port" value="1972" />
		<property name="startupCommands">
			<list>
				<value>~config</value>  <!--  this might be incorrect.. -->
			</list>
		</property>
		<property name="dataPort" value="20030" />
		<property name="replyTimeOut" value="5000" />
	</bean>

</beans>
