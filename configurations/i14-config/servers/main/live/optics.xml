<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:util="http://www.springframework.org/schema/util"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
           http://www.springframework.org/schema/util
           http://www.springframework.org/schema/util/spring-util-2.0.xsd">

	<!--The motors associated to optics are listed in the same order as in EPICs synoptics -->

	<!-- ID gap -->
	<bean id="id_gap_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="SR14I-MO-SERVC-01:BLGAPMTR" />
		<property name="local" value="true" />
	</bean>

	<!-- S1 (white beam slits) coordinate system motors: -->
	<bean id="s1_x_centre_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL14I-AL-SLITS-01:X:CENTER" />
		<property name="local" value="true" />
	</bean>
	<bean id="s1_x_size_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL14I-AL-SLITS-01:X:SIZE" />
		<property name="local" value="true" />
	</bean>
	<bean id="s1_y_centre_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL14I-AL-SLITS-01:Y:CENTER" />
		<property name="local" value="true" />
	</bean>
	<bean id="s1_y_size_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL14I-AL-SLITS-01:Y:SIZE" />
		<property name="local" value="true" />
	</bean>

	<!-- S1 (white beam slits) real motors: -->
	<bean id="s1_x_up_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL14I-AL-SLITS-01:XUP" />
		<property name="local" value="true" />
	</bean>
	<bean id="s1_y_up_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL14I-AL-SLITS-01:YUP" />
		<property name="local" value="true" />
	</bean>
	<bean id="s1_x_down_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL14I-AL-SLITS-01:XDOWN" />
		<property name="local" value="true" />
	</bean>
	<bean id="s1_y_down_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL14I-AL-SLITS-01:YDOWN" />
		<property name="local" value="true" />
	</bean>

	<!-- A1 (attenuator, sometimes called F1): -->
	<bean id="attn1_stick1_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL14I-MO-ATTN-01:STICK1" />
		<property name="local" value="true" />
	</bean>
	<bean id="attn1_stick2_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL14I-MO-ATTN-01:STICK2" />
		<property name="local" value="true" />
	</bean>
	<bean id="attn1_stick1_position" class="gda.device.enumpositioner.EpicsPositioner">
		<property name="recordName" value="BL14I-MO-ATTN-01:MP1" />
		<property name="acceptNewMoveToPositionWhileMoving" value="true" />
	</bean>
	<bean id="attn1_stick2_position" class="gda.device.enumpositioner.EpicsPositioner">
		<property name="recordName" value="BL14I-MO-ATTN-01:MP2" />
		<property name="acceptNewMoveToPositionWhileMoving" value="true" />
	</bean>

	<!-- M1 (mirror): -->
	<bean id="m1_x_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL14I-OP-MIRR-01:X" />
		<property name="local" value="true" />
	</bean>
	<bean id="m1_y_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL14I-OP-MIRR-01:Y" />
		<property name="local" value="true" />
	</bean>
	<bean id="m1_pitch_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL14I-OP-MIRR-01:PITCH" />
		<property name="local" value="true" />
	</bean>

	<!-- M2 (mirror): -->
	<bean id="m2_x_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL14I-OP-MIRR-02:X" />
		<property name="local" value="true" />
	</bean>
	<bean id="m2_y_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL14I-OP-MIRR-02:Y" />
		<property name="local" value="true" />
	</bean>
	<bean id="m2_pitch_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL14I-OP-MIRR-02:PITCH" />
		<property name="local" value="true" />
	</bean>
	<bean id="m2_roll_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL14I-OP-MIRR-02:ROLL" />
		<property name="local" value="true" />
	</bean>

	<!-- DCM (monochromator): -->
	<bean id="dcm_pitch_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL14I-OP-DCM-01:PITCH" />
		<property name="local" value="true" />
	</bean>
	<bean id="dcm_roll_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL14I-OP-DCM-01:ROLL" />
		<property name="local" value="true" />
	</bean>
	<bean id="dcm_perp_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL14I-OP-DCM-01:GAP" />
		<property name="local" value="true" />
	</bean>
	<bean id="dcm_bragg_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL14I-OP-DCM-01:BRAGG" />
		<property name="local" value="true" />
	</bean>

</beans>
