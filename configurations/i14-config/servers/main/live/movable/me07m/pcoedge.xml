<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">


	<!-- AD hardware -->

	<bean id="pco_adbase" class="gda.device.detector.areadetector.v17.impl.ADBaseImpl">
		<property name="basePVName" value="ME07M-EA-DET-01:CAM:" />
	</bean>

	<bean id="pco_ndfile_tif" class="gda.spring.V17NDFileFactoryBean">
		<property name="prefix" value="ME07M-EA-DET-01:TIFF:" />
		<property name="resetToInitialValues" value="false" />
		<property name="filePathConverter">
			<bean class="uk.ac.gda.util.UnixToWindowsFilePathConverter">
				<property name="unixSubString" value="/dls/i14/data" />
				<property name="windowsSubString" value="X:\data" />
			</bean>
		</property>
	</bean>

	<bean id="pco_addriverpco" class = "gda.device.detector.areadetector.v17.impl.ADDriverPcoImpl">
		<property name="basePvName" value="ME07M-EA-DET-01:CAM"/>
	</bean>

	<bean id="pco_ndfilehdf5_base" class="gda.spring.V17NDFileFactoryBean">
		<property name="prefix" value="ME07M-EA-DET-01:HDF:" />
		<property name="resetToInitialValues" value="false" />
		<property name="filePathConverter">
			<bean class="uk.ac.gda.util.UnixToWindowsFilePathConverter">
				<property name="unixSubString" value="/dls/i14/data" />
				<property name="windowsSubString" value="X:\data" />
			</bean>
		</property>
	</bean>

	<bean id="pco_ndhdf5file" class="gda.spring.V17NDFileHDF5FactoryBean">
		<property name="ndFileImpl" ref="pco_ndfilehdf5_base" />
	</bean>

</beans>
