<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

	<!-- SR08I-MO-SERVC-01:BLGAPMTR -->

	<!-- D1 -->
	<bean id="d1_x_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL14I-DI-PHDGN-01:X" />
		<property name="local" value="true" />
	</bean>
	<bean id="d1_x_position" class="gda.device.enumpositioner.EpicsPositioner">
		<property name="recordName" value="BL14I-DI-PHDGN-01:MP" />
		<property name="acceptNewMoveToPositionWhileMoving" value="true" />
	</bean>

	<!-- D3 -->
	<bean id="d3_x_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL14I-DI-PHDGN-03:X" />
		<property name="local" value="true" />
	</bean>
	<bean id="d3_diode1" class="gda.device.monitor.EpicsMonitor">
		<property name="pvName" value="BL14I-DI-PHDGN-03:FEMTO1:I"/>
		<property name="local" value="true"/>
		 <property name="poll" value="true" />
	</bean>

	<!-- D4 -->
	<bean id="d4_x_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL14I-DI-PHDGN-04:X" />
		<property name="local" value="true" />
	</bean>
	<bean id="d4_y_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL14I-DI-PHDGN-04:Y" />
		<property name="local" value="true" />
	</bean>
	<bean id="d4_diode1" class="gda.device.monitor.EpicsMonitor">
		<property name="pvName" value="BL14I-DI-PHDGN-04:FEMTO1:I"/>
		<property name="local" value="true"/>
		 <property name="poll" value="true" />
	</bean>
	<bean id="d4_diode2" class="gda.device.monitor.EpicsMonitor">
		<property name="pvName" value="BL14I-DI-PHDGN-04:FEMTO2:I"/>
		<property name="local" value="true"/>
		 <property name="poll" value="true" />
	</bean>

</beans>
