<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

	<!-- KB mirrors -->
	<bean id="kbv1_pitch_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL14I-OP-KBV-01:PITCH" />
	</bean>

	<bean id="kbv1_roll_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL14I-OP-KBV-01:ROLL" />
	</bean>

	<bean id="kbh1_pitch_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL14I-OP-KBH-01:PITCH" />
	</bean>

</beans>