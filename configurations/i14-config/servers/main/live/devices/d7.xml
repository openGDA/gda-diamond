<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

	<!-- D7 -->

	<!-- Stick motor -->
	<bean id="d7_y_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL14I-DI-PHDGN-07:Y" />
		<property name="local" value="true" />
	</bean>
	
	<!-- Stick positioner -->
	<bean id="d7_y_position" class="gda.device.enumpositioner.EpicsPositioner">
		<property name="recordName" value="BL14I-DI-PHDGN-07:MP1" />
		<property name="acceptNewMoveToPositionWhileMoving" value="true" />
	</bean>

	<!-- ROI support -->
	<bean id="d7PlotServerRoiProvider" class="gda.device.detector.nxdetector.roi.PlotServerROISelectionProvider">
		<constructor-arg value="D7" />
		<constructor-arg value="6" />
	</bean>

	<bean id="d7_roiStats1" class="gda.device.detector.nxdetector.plugin.areadetector.ADRoiStatsPairFactory">
		<property name="pluginName" value="roistats1" />
		<property name="baseRoiPVName" value="BL14I-OP-DCAM-07:ROI1:" />
		<property name="baseStatsPVName" value="BL14I-OP-DCAM-07:STAT1:" />
		<property name="roiInputNdArrayPort" value="D7-NAN.cam" />
		<property name="enabledBasicStats" value="Total" />
		<property name="oneTimeSeriesCollectionPerLine" value="false" />
		<property name="roiProvider">
			<bean class="gda.device.detector.nxdetector.roi.RectangularIntegerROIIndexer">
				<constructor-arg ref="d7PlotServerRoiProvider" />
				<constructor-arg value="0" />
			</bean>
		</property>
	</bean>

	<bean id="d7_roiStats2" class="gda.device.detector.nxdetector.plugin.areadetector.ADRoiStatsPairFactory">
		<property name="pluginName" value="roistats2" />
		<property name="baseRoiPVName" value="BL14I-OP-DCAM-07:ROI2:" />
		<property name="baseStatsPVName" value="BL14I-OP-DCAM-07:STAT2:" />
		<property name="roiInputNdArrayPort" value="D7-NAN.cam" />
		<property name="enabledBasicStats" value="Total" />
		<property name="oneTimeSeriesCollectionPerLine" value="false" />
		<property name="roiProvider">
			<bean class="gda.device.detector.nxdetector.roi.RectangularIntegerROIIndexer">
				<constructor-arg ref="d7PlotServerRoiProvider" />
				<constructor-arg value="1" />
			</bean>
		</property>
	</bean>

	<bean id="d7_roiStats3" class="gda.device.detector.nxdetector.plugin.areadetector.ADRoiStatsPairFactory">
		<property name="pluginName" value="roistats3" />
		<property name="baseRoiPVName" value="BL14I-OP-DCAM-07:ROI3:" />
		<property name="baseStatsPVName" value="BL14I-OP-DCAM-07:STAT3:" />
		<property name="roiInputNdArrayPort" value="D7-NAN.cam" />
		<property name="enabledBasicStats" value="Total" />
		<property name="oneTimeSeriesCollectionPerLine" value="false" />
		<property name="roiProvider">
			<bean class="gda.device.detector.nxdetector.roi.RectangularIntegerROIIndexer">
				<constructor-arg ref="d7PlotServerRoiProvider" />
				<constructor-arg value="2" />
			</bean>
		</property>
	</bean>

	<bean id="d7_roiStats4" class="gda.device.detector.nxdetector.plugin.areadetector.ADRoiStatsPairFactory">
		<property name="pluginName" value="roistats4" />
		<property name="baseRoiPVName" value="BL14I-OP-DCAM-07:ROI4:" />
		<property name="baseStatsPVName" value="BL14I-OP-DCAM-07:STAT4:" />
		<property name="roiInputNdArrayPort" value="D7-NAN.cam" />
		<property name="enabledBasicStats" value="Total" />
		<property name="oneTimeSeriesCollectionPerLine" value="false" />
		<property name="roiProvider">
			<bean class="gda.device.detector.nxdetector.roi.RectangularIntegerROIIndexer">
				<constructor-arg ref="d7PlotServerRoiProvider" />
				<constructor-arg value="3" />
			</bean>
		</property>
	</bean>

	<bean id="d7_roiStats5" class="gda.device.detector.nxdetector.plugin.areadetector.ADRoiStatsPairFactory">
		<property name="pluginName" value="roistats5" />
		<property name="baseRoiPVName" value="BL14I-OP-DCAM-07:ROI5:" />
		<property name="baseStatsPVName" value="BL14I-OP-DCAM-07:STAT5:" />
		<property name="roiInputNdArrayPort" value="D7-NAN.cam" />
		<property name="enabledBasicStats" value="Total" />
		<property name="oneTimeSeriesCollectionPerLine" value="false" />
		<property name="roiProvider">
			<bean class="gda.device.detector.nxdetector.roi.RectangularIntegerROIIndexer">
				<constructor-arg ref="d7PlotServerRoiProvider" />
				<constructor-arg value="4" />
			</bean>
		</property>
	</bean>

	<bean id="d7_roiStats6" class="gda.device.detector.nxdetector.plugin.areadetector.ADRoiStatsPairFactory">
		<property name="pluginName" value="roistats6" />
		<property name="baseRoiPVName" value="BL14I-OP-DCAM-07:ROI6:" />
		<property name="baseStatsPVName" value="BL14I-OP-DCAM-07:STAT6:" />
		<property name="roiInputNdArrayPort" value="D7-NAN.cam" />
		<property name="enabledBasicStats" value="Total" />
		<property name="oneTimeSeriesCollectionPerLine" value="false" />
		<property name="roiProvider">
			<bean class="gda.device.detector.nxdetector.roi.RectangularIntegerROIIndexer">
				<constructor-arg ref="d7PlotServerRoiProvider" />
				<constructor-arg value="5" />
			</bean>
		</property>
	</bean>
	
	<!-- HDF5 file writer -->
	<bean id="d7_hdf5Filewriter" parent="abstractHdf5FilewriternNochunking">
		<property name="fileNameTemplate" value="d7"/>
		<property name="ndFileHDF5">
			<bean class="gda.spring.V17NDFileHDF5FactoryBean">
				<property name="ndFileImpl">
					<bean class="gda.spring.V17NDFileFactoryBean">
						<property name="prefix" value="BL14I-OP-DCAM-07:HDF5:" />
						<property name="resetToInitialValues" value="false" />
					</bean>
				</property>
			</bean>
		</property>
	</bean>

	<!-- Area detector camera -->
	<bean id="d7_camBase" class="gda.spring.V17ADBaseFactoryBean">
		<property name="prefix" value="BL14I-OP-DCAM-07:CAM:" />
	</bean>

 	<bean id="d7_cam" class="gda.device.detector.NXDetector">
		<property name="name" value="d7_cam" />
		<property name="collectionStrategy" ref="d7_collectionStrategy" />
		<property name="additionalPluginList">
			<list>
				<ref bean="d7_roiStats1" />
 				<ref bean="d7_roiStats2" />
				<ref bean="d7_roiStats3" />
				<ref bean="d7_roiStats4" />
				<ref bean="d7_roiStats5" />
				<ref bean="d7_roiStats6" />
				<ref bean="d7_hdf5Filewriter" />
			</list>
		</property>
	</bean>

</beans>