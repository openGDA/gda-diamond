<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

	<!-- D3 -->

	<!-- Stick motor -->
	<bean id="d3_x_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL14I-DI-PHDGN-03:X" />
		<property name="local" value="true" />
	</bean>

	<!-- Stick positioner -->
	<bean id="d3_x_position" class="gda.device.enumpositioner.EpicsPositioner">
		<property name="recordName" value="BL14I-DI-PHDGN-03:MP" />
		<property name="acceptNewMoveToPositionWhileMoving" value="true" />
	</bean>

	<!-- Scatter diode -->
	<bean id="d3_diode1" class="gda.device.monitor.EpicsMonitor">
		<property name="pvName" value="BL14I-DI-PHDGN-03:FEMTO1:I"/>
		<property name="local" value="true"/>
		 <property name="poll" value="true" />
	</bean>

	<bean id="d3_adc_scatter" class="gda.device.monitor.EpicsMonitor">
		<property name="pvName" value="BL14I-DI-PHDGN-03:FEMTO1:ADC1_VALUE"/>
		<property name="local" value="true"/>
		 <property name="poll" value="true" />
	</bean>

	<!-- ROI support -->
	<bean id="d3PlotServerRoiProvider" class="gda.device.detector.nxdetector.roi.PlotServerROISelectionProvider">
		<constructor-arg value="D3" />
		<constructor-arg value="6" />
	</bean>

	<bean id="d3_roiStats1" class="gda.device.detector.nxdetector.plugin.areadetector.ADRoiStatsPairFactory">
		<property name="pluginName" value="roistats1" />
		<property name="baseRoiPVName" value="BL14I-OP-DCAM-03:ROI1:" />
		<property name="baseStatsPVName" value="BL14I-OP-DCAM-03:STAT1:" />
		<property name="roiInputNdArrayPort" value="D3.cam" />
		<property name="enabledBasicStats" value="Total" />
		<property name="oneTimeSeriesCollectionPerLine" value="false" />
		<property name="roiProvider">
			<bean class="gda.device.detector.nxdetector.roi.RectangularIntegerROIIndexer">
				<constructor-arg ref="d3PlotServerRoiProvider" />
				<constructor-arg value="0" />
			</bean>
		</property>
	</bean>

	<bean id="d3_roiStats2" class="gda.device.detector.nxdetector.plugin.areadetector.ADRoiStatsPairFactory">
		<property name="pluginName" value="roistats2" />
		<property name="baseRoiPVName" value="BL14I-OP-DCAM-03:ROI2:" />
		<property name="baseStatsPVName" value="BL14I-OP-DCAM-03:STAT2:" />
		<property name="roiInputNdArrayPort" value="D3.cam" />
		<property name="enabledBasicStats" value="Total" />
		<property name="oneTimeSeriesCollectionPerLine" value="false" />
		<property name="roiProvider">
			<bean class="gda.device.detector.nxdetector.roi.RectangularIntegerROIIndexer">
				<constructor-arg ref="d3PlotServerRoiProvider" />
				<constructor-arg value="1" />
			</bean>
		</property>
	</bean>

	<bean id="d3_roiStats3" class="gda.device.detector.nxdetector.plugin.areadetector.ADRoiStatsPairFactory">
		<property name="pluginName" value="roistats3" />
		<property name="baseRoiPVName" value="BL14I-OP-DCAM-03:ROI3:" />
		<property name="baseStatsPVName" value="BL14I-OP-DCAM-03:STAT3:" />
		<property name="roiInputNdArrayPort" value="D3.cam" />
		<property name="enabledBasicStats" value="Total" />
		<property name="oneTimeSeriesCollectionPerLine" value="false" />
		<property name="roiProvider">
			<bean class="gda.device.detector.nxdetector.roi.RectangularIntegerROIIndexer">
				<constructor-arg ref="d3PlotServerRoiProvider" />
				<constructor-arg value="2" />
			</bean>
		</property>
	</bean>

	<bean id="d3_roiStats4" class="gda.device.detector.nxdetector.plugin.areadetector.ADRoiStatsPairFactory">
		<property name="pluginName" value="roistats4" />
		<property name="baseRoiPVName" value="BL14I-OP-DCAM-03:ROI4:" />
		<property name="baseStatsPVName" value="BL14I-OP-DCAM-03:STAT4:" />
		<property name="roiInputNdArrayPort" value="D3.cam" />
		<property name="enabledBasicStats" value="Total" />
		<property name="oneTimeSeriesCollectionPerLine" value="false" />
		<property name="roiProvider">
			<bean class="gda.device.detector.nxdetector.roi.RectangularIntegerROIIndexer">
				<constructor-arg ref="d3PlotServerRoiProvider" />
				<constructor-arg value="3" />
			</bean>
		</property>
	</bean>

	<bean id="d3_roiStats5" class="gda.device.detector.nxdetector.plugin.areadetector.ADRoiStatsPairFactory">
		<property name="pluginName" value="roistats5" />
		<property name="baseRoiPVName" value="BL14I-OP-DCAM-03:ROI5:" />
		<property name="baseStatsPVName" value="BL14I-OP-DCAM-03:STAT5:" />
		<property name="roiInputNdArrayPort" value="D3.cam" />
		<property name="enabledBasicStats" value="Total" />
		<property name="oneTimeSeriesCollectionPerLine" value="false" />
		<property name="roiProvider">
			<bean class="gda.device.detector.nxdetector.roi.RectangularIntegerROIIndexer">
				<constructor-arg ref="d3PlotServerRoiProvider" />
				<constructor-arg value="4" />
			</bean>
		</property>
	</bean>

	<bean id="d3_roiStats6" class="gda.device.detector.nxdetector.plugin.areadetector.ADRoiStatsPairFactory">
		<property name="pluginName" value="roistats6" />
		<property name="baseRoiPVName" value="BL14I-OP-DCAM-03:ROI6:" />
		<property name="baseStatsPVName" value="BL14I-OP-DCAM-03:STAT6:" />
		<property name="roiInputNdArrayPort" value="D3.cam" />
		<property name="enabledBasicStats" value="Total" />
		<property name="oneTimeSeriesCollectionPerLine" value="false" />
		<property name="roiProvider">
			<bean class="gda.device.detector.nxdetector.roi.RectangularIntegerROIIndexer">
				<constructor-arg ref="d3PlotServerRoiProvider" />
				<constructor-arg value="5" />
			</bean>
		</property>
	</bean>

	<!-- HDF5 file -->
	<bean id="d3_ndhdf5file" class="gda.spring.V17NDFileHDF5FactoryBean">
		<property name="ndFileImpl">
			<bean class="gda.spring.V17NDFileFactoryBean">
				<property name="prefix" value="BL14I-OP-DCAM-03:HDF5:" />
				<property name="resetToInitialValues" value="false" />
			</bean>
		</property>
	</bean>

	<!-- Area detector camera -->
	<bean id="d3_camBase" class="gda.spring.V17ADBaseFactoryBean">
		<property name="prefix" value="BL14I-OP-DCAM-03:CAM:" />
	</bean>

 	<bean id="d3_cam" class="gda.device.detector.NXDetector">
		<property name="name" value="d3_cam" />
		<property name="collectionStrategy" ref="d3_collectionStrategy" />
		<property name="additionalPluginList">
			<list>
				<ref bean="d3_roiStats1" />
 				<ref bean="d3_roiStats2" />
				<ref bean="d3_roiStats3" />
				<ref bean="d3_roiStats4" />
				<ref bean="d3_roiStats5" />
				<ref bean="d3_roiStats6" />
				<ref bean="d3_hdf5Filewriter" />
			</list>
		</property>
	</bean>

</beans>