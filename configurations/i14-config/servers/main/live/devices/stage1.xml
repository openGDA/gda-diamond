<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

	<!-- Coarse motors -->
	<bean id="stage1_x_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL14I-MO-STAGE-01:XC" />
	</bean>

	<bean id="stage1_y_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL14I-MO-STAGE-01:YC" />
	</bean>

	<bean id="stage1_z_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL14I-MO-STAGE-01:ZC" />
	</bean>

	<!-- Fine motors -->
	<bean id="stage1_xf_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL14I-MO-STAGE-01:XF" />
	</bean>

	<bean id="stage1_yf_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL14I-MO-STAGE-01:YF" />
	</bean>

	<!-- Rotation -->
	<bean id="stage1_rotation_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL14I-MO-STAGE-01:ROT" />
	</bean>

</beans>