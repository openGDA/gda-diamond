<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

	<!-- D4 -->

	<!-- Stick motors -->
	<bean id="d4_x_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL14I-DI-PHDGN-04:X" />
		<property name="local" value="true" />
	</bean>

	<bean id="d4_y_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL14I-DI-PHDGN-04:Y" />
		<property name="local" value="true" />
	</bean>

	<!-- Stick positioners -->
	<bean id="d4_x_position" class="gda.device.enumpositioner.EpicsPositioner">
		<property name="recordName" value="BL14I-DI-PHDGN-04:MPX" />
		<property name="acceptNewMoveToPositionWhileMoving" value="true" />
	</bean>

	<bean id="d4_lateral_position" class="gda.device.enumpositioner.EpicsPositioner">
		<property name="recordName" value="BL14I-DI-PHDGN-04:MPLATERAL" />
		<property name="acceptNewMoveToPositionWhileMoving" value="true" />
	</bean>

	<!-- Scatter diode -->
	<bean id="d4_diode1" class="gda.device.monitor.EpicsMonitor">
		<property name="pvName" value="BL14I-DI-PHDGN-04:FEMTO1:I"/>
		<property name="local" value="true"/>
		 <property name="poll" value="true" />
	</bean>

	<!-- Inline diode -->
	<bean id="d4_diode2" class="gda.device.monitor.EpicsMonitor">
		<property name="pvName" value="BL14I-DI-PHDGN-04:FEMTO2:I"/>
		<property name="local" value="true"/>
		 <property name="poll" value="true" />
	</bean>

	<bean id="d4_adc_inline" class="gda.device.monitor.EpicsMonitor">
		<property name="pvName" value="BL14I-DI-PHDGN-04:FEMTO2:ADC2_VALUE"/>
		<property name="local" value="true"/>
		 <property name="poll" value="true" />
	</bean>

	<!-- ROI support -->
	<bean id="d4PlotServerRoiProvider" class="gda.device.detector.nxdetector.roi.PlotServerROISelectionProvider">
		<constructor-arg value="D4" />
		<constructor-arg value="6" />
	</bean>

	<bean id="d4_roiStats1" class="gda.device.detector.nxdetector.plugin.areadetector.ADRoiStatsPairFactory">
		<property name="pluginName" value="roistats1" />
		<property name="baseRoiPVName" value="BL14I-OP-DCAM-04:ROI1:" />
		<property name="baseStatsPVName" value="BL14I-OP-DCAM-04:STAT1:" />
		<property name="roiInputNdArrayPort" value="D4.cam" />
		<property name="enabledBasicStats" value="Total" />
		<property name="oneTimeSeriesCollectionPerLine" value="false" />
		<property name="roiProvider">
			<bean class="gda.device.detector.nxdetector.roi.RectangularIntegerROIIndexer">
				<constructor-arg ref="d4PlotServerRoiProvider" />
				<constructor-arg value="0" />
			</bean>
		</property>
	</bean>

	<bean id="d4_roiStats2" class="gda.device.detector.nxdetector.plugin.areadetector.ADRoiStatsPairFactory">
		<property name="pluginName" value="roistats2" />
		<property name="baseRoiPVName" value="BL14I-OP-DCAM-04:ROI2:" />
		<property name="baseStatsPVName" value="BL14I-OP-DCAM-04:STAT2:" />
		<property name="roiInputNdArrayPort" value="D4.cam" />
		<property name="enabledBasicStats" value="Total" />
		<property name="oneTimeSeriesCollectionPerLine" value="false" />
		<property name="roiProvider">
			<bean class="gda.device.detector.nxdetector.roi.RectangularIntegerROIIndexer">
				<constructor-arg ref="d4PlotServerRoiProvider" />
				<constructor-arg value="1" />
			</bean>
		</property>
	</bean>

	<bean id="d4_roiStats3" class="gda.device.detector.nxdetector.plugin.areadetector.ADRoiStatsPairFactory">
		<property name="pluginName" value="roistats3" />
		<property name="baseRoiPVName" value="BL14I-OP-DCAM-04:ROI3:" />
		<property name="baseStatsPVName" value="BL14I-OP-DCAM-04:STAT3:" />
		<property name="roiInputNdArrayPort" value="D4.cam" />
		<property name="enabledBasicStats" value="Total" />
		<property name="oneTimeSeriesCollectionPerLine" value="false" />
		<property name="roiProvider">
			<bean class="gda.device.detector.nxdetector.roi.RectangularIntegerROIIndexer">
				<constructor-arg ref="d4PlotServerRoiProvider" />
				<constructor-arg value="2" />
			</bean>
		</property>
	</bean>

	<bean id="d4_roiStats4" class="gda.device.detector.nxdetector.plugin.areadetector.ADRoiStatsPairFactory">
		<property name="pluginName" value="roistats4" />
		<property name="baseRoiPVName" value="BL14I-OP-DCAM-04:ROI4:" />
		<property name="baseStatsPVName" value="BL14I-OP-DCAM-04:STAT4:" />
		<property name="roiInputNdArrayPort" value="D4.cam" />
		<property name="enabledBasicStats" value="Total" />
		<property name="oneTimeSeriesCollectionPerLine" value="false" />
		<property name="roiProvider">
			<bean class="gda.device.detector.nxdetector.roi.RectangularIntegerROIIndexer">
				<constructor-arg ref="d4PlotServerRoiProvider" />
				<constructor-arg value="3" />
			</bean>
		</property>
	</bean>

	<bean id="d4_roiStats5" class="gda.device.detector.nxdetector.plugin.areadetector.ADRoiStatsPairFactory">
		<property name="pluginName" value="roistats5" />
		<property name="baseRoiPVName" value="BL14I-OP-DCAM-04:ROI5:" />
		<property name="baseStatsPVName" value="BL14I-OP-DCAM-04:STAT5:" />
		<property name="roiInputNdArrayPort" value="D4.cam" />
		<property name="enabledBasicStats" value="Total" />
		<property name="oneTimeSeriesCollectionPerLine" value="false" />
		<property name="roiProvider">
			<bean class="gda.device.detector.nxdetector.roi.RectangularIntegerROIIndexer">
				<constructor-arg ref="d4PlotServerRoiProvider" />
				<constructor-arg value="4" />
			</bean>
		</property>
	</bean>

	<bean id="d4_roiStats6" class="gda.device.detector.nxdetector.plugin.areadetector.ADRoiStatsPairFactory">
		<property name="pluginName" value="roistats6" />
		<property name="baseRoiPVName" value="BL14I-OP-DCAM-04:ROI6:" />
		<property name="baseStatsPVName" value="BL14I-OP-DCAM-04:STAT6:" />
		<property name="roiInputNdArrayPort" value="D4.cam" />
		<property name="enabledBasicStats" value="Total" />
		<property name="oneTimeSeriesCollectionPerLine" value="false" />
		<property name="roiProvider">
			<bean class="gda.device.detector.nxdetector.roi.RectangularIntegerROIIndexer">
				<constructor-arg ref="d4PlotServerRoiProvider" />
				<constructor-arg value="5" />
			</bean>
		</property>
	</bean>

	<!-- HDF5 file -->
	<bean id="d4_ndhdf5file" class="gda.spring.V17NDFileHDF5FactoryBean">
		<property name="ndFileImpl">
			<bean class="gda.spring.V17NDFileFactoryBean">
				<property name="prefix" value="BL14I-OP-DCAM-04:HDF5:" />
				<property name="resetToInitialValues" value="false" />
			</bean>
		</property>
	</bean>

	<!-- Area detector camera -->
	<bean id="d4_camBase" class="gda.spring.V17ADBaseFactoryBean">
		<property name="prefix" value="BL14I-OP-DCAM-04:CAM:" />
	</bean>

 	<bean id="d4_cam" class="gda.device.detector.NXDetector">
		<property name="name" value="d4_cam" />
		<property name="collectionStrategy" ref="d4_collectionStrategy" />
		<property name="additionalPluginList">
			<list>
				<ref bean="d4_roiStats1" />
 				<ref bean="d4_roiStats2" />
				<ref bean="d4_roiStats3" />
				<ref bean="d4_roiStats4" />
				<ref bean="d4_roiStats5" />
				<ref bean="d4_roiStats6" />
				<ref bean="d4_hdf5Filewriter" />
			</list>
		</property>
	</bean>

</beans>