<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

	<!-- DCM (monochromator): -->
	<bean id="dcm_pitch_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL14I-OP-DCM-01:PITCH" />
		<property name="local" value="true" />
	</bean>
	<bean id="dcm_roll_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL14I-OP-DCM-01:ROLL" />
		<property name="local" value="true" />
	</bean>
	<bean id="dcm_perp_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL14I-OP-DCM-01:GAP" />
		<property name="local" value="true" />
	</bean>
	<bean id="dcm_bragg_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL14I-OP-DCM-01:BRAGG" />
		<property name="local" value="true" />
	</bean>
	<bean id="dcm_energy_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL14I-OP-DCM-01:ENERGY" />
		<property name="local" value="true" />
	</bean>
	
	<bean id="dcm_pitch_piezo" class="gda.device.scannable.EpicsScannable">
		<property name="pvName" value="BL14I-OP-DCM-01:PIEZO1" />
		<property name="local" value="true" />
		<property name="InputNames" value="dcm_pitch_piezo" />
	</bean>	
	
	<bean id="dcm_roll_piezo" class="gda.device.scannable.EpicsScannable">
		<property name="pvName" value="BL14I-OP-DCM-01:PIEZO2" />
		<property name="local" value="true" />
		<property name="InputNames" value="dcm_roll_piezo" />
	</bean>	

</beans>