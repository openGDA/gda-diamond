<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans.xsd">

	<!-- DCM (monochromator): -->
	<bean id="dcm_pitch_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL14I-OP-DCM-01:PITCH" />
	</bean>
	<bean id="dcm_roll_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL14I-OP-DCM-01:ROLL" />
	</bean>
	<bean id="dcm_perp_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL14I-OP-DCM-01:GAP" />
	</bean>
	<bean id="dcm_bragg_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL14I-OP-DCM-01:BRAGG" />
	</bean>
	<bean id="dcm_energy_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL14I-OP-DCM-01:ENERGY" />
	</bean>

</beans>