<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

	<!-- D5 -->

	<!-- Stick motor -->
	<bean id="d5_x_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL14I-DI-PHDGN-05:X" />
		<property name="local" value="true" />
	</bean>

	<!-- Stick positioner -->
	<bean id="d5_x_position" class="gda.device.enumpositioner.EpicsPositioner">
		<property name="recordName" value="BL14I-DI-PHDGN-05:MP" />
		<property name="acceptNewMoveToPositionWhileMoving" value="true" />
	</bean>

	<!-- Scatter diode -->
	<bean id="d5_diode1" class="gda.device.monitor.EpicsMonitor">
		<property name="pvName" value="BL14I-DI-PHDGN-05:FEMTO1:I"/>
		<property name="local" value="true"/>
		 <property name="poll" value="true" />
	</bean>

	<!-- Inline diode -->
	<bean id="d5_diode2" class="gda.device.monitor.EpicsMonitor">
		<property name="pvName" value="BL14I-DI-PHDGN-05:FEMTO2:I"/>
		<property name="local" value="true"/>
		 <property name="poll" value="true" />
	</bean>

	<bean id="d5_adc" class="gda.device.monitor.EpicsMonitor">
		<property name="pvName" value="BL14I-DI-PHDGN-05:FEMTO2:ADC2_VALUE"/>
		<property name="local" value="true"/>
		 <property name="poll" value="true" />
	</bean>

	<!-- ROI support -->
	<bean id="d5PlotServerRoiProvider" class="gda.device.detector.nxdetector.roi.PlotServerROISelectionProvider">
		<constructor-arg value="D5" />
		<constructor-arg value="6" />
	</bean>

	<bean id="d5_roiStats1" class="gda.device.detector.nxdetector.plugin.areadetector.ADRoiStatsPairFactory">
		<property name="pluginName" value="roistats1" />
		<property name="baseRoiPVName" value="BL14I-OP-DCAM-05:ROI1:" />
		<property name="baseStatsPVName" value="BL14I-OP-DCAM-05:STAT1:" />
		<property name="roiInputNdArrayPort" value="D5-NAN.cam" />
		<property name="enabledBasicStats" value="Total" />
		<property name="oneTimeSeriesCollectionPerLine" value="false" />
		<property name="roiProvider">
			<bean class="gda.device.detector.nxdetector.roi.RectangularIntegerROIIndexer">
				<constructor-arg ref="d5PlotServerRoiProvider" />
				<constructor-arg value="0" />
			</bean>
		</property>
	</bean>

	<bean id="d5_roiStats2" class="gda.device.detector.nxdetector.plugin.areadetector.ADRoiStatsPairFactory">
		<property name="pluginName" value="roistats2" />
		<property name="baseRoiPVName" value="BL14I-OP-DCAM-05:ROI2:" />
		<property name="baseStatsPVName" value="BL14I-OP-DCAM-05:STAT2:" />
		<property name="roiInputNdArrayPort" value="D5-NAN.cam" />
		<property name="enabledBasicStats" value="Total" />
		<property name="oneTimeSeriesCollectionPerLine" value="false" />
		<property name="roiProvider">
			<bean class="gda.device.detector.nxdetector.roi.RectangularIntegerROIIndexer">
				<constructor-arg ref="d5PlotServerRoiProvider" />
				<constructor-arg value="1" />
			</bean>
		</property>
	</bean>

	<bean id="d5_roiStats3" class="gda.device.detector.nxdetector.plugin.areadetector.ADRoiStatsPairFactory">
		<property name="pluginName" value="roistats3" />
		<property name="baseRoiPVName" value="BL14I-OP-DCAM-05:ROI3:" />
		<property name="baseStatsPVName" value="BL14I-OP-DCAM-05:STAT3:" />
		<property name="roiInputNdArrayPort" value="D5-NAN.cam" />
		<property name="enabledBasicStats" value="Total" />
		<property name="oneTimeSeriesCollectionPerLine" value="false" />
		<property name="roiProvider">
			<bean class="gda.device.detector.nxdetector.roi.RectangularIntegerROIIndexer">
				<constructor-arg ref="d5PlotServerRoiProvider" />
				<constructor-arg value="2" />
			</bean>
		</property>
	</bean>

	<bean id="d5_roiStats4" class="gda.device.detector.nxdetector.plugin.areadetector.ADRoiStatsPairFactory">
		<property name="pluginName" value="roistats4" />
		<property name="baseRoiPVName" value="BL14I-OP-DCAM-05:ROI4:" />
		<property name="baseStatsPVName" value="BL14I-OP-DCAM-05:STAT4:" />
		<property name="roiInputNdArrayPort" value="D5-NAN.cam" />
		<property name="enabledBasicStats" value="Total" />
		<property name="oneTimeSeriesCollectionPerLine" value="false" />
		<property name="roiProvider">
			<bean class="gda.device.detector.nxdetector.roi.RectangularIntegerROIIndexer">
				<constructor-arg ref="d5PlotServerRoiProvider" />
				<constructor-arg value="3" />
			</bean>
		</property>
	</bean>

	<bean id="d5_roiStats5" class="gda.device.detector.nxdetector.plugin.areadetector.ADRoiStatsPairFactory">
		<property name="pluginName" value="roistats5" />
		<property name="baseRoiPVName" value="BL14I-OP-DCAM-05:ROI5:" />
		<property name="baseStatsPVName" value="BL14I-OP-DCAM-05:STAT5:" />
		<property name="roiInputNdArrayPort" value="D5-NAN.cam" />
		<property name="enabledBasicStats" value="Total" />
		<property name="oneTimeSeriesCollectionPerLine" value="false" />
		<property name="roiProvider">
			<bean class="gda.device.detector.nxdetector.roi.RectangularIntegerROIIndexer">
				<constructor-arg ref="d5PlotServerRoiProvider" />
				<constructor-arg value="4" />
			</bean>
		</property>
	</bean>

	<bean id="d5_roiStats6" class="gda.device.detector.nxdetector.plugin.areadetector.ADRoiStatsPairFactory">
		<property name="pluginName" value="roistats6" />
		<property name="baseRoiPVName" value="BL14I-OP-DCAM-05:ROI6:" />
		<property name="baseStatsPVName" value="BL14I-OP-DCAM-05:STAT6:" />
		<property name="roiInputNdArrayPort" value="D5-NAN.cam" />
		<property name="enabledBasicStats" value="Total" />
		<property name="oneTimeSeriesCollectionPerLine" value="false" />
		<property name="roiProvider">
			<bean class="gda.device.detector.nxdetector.roi.RectangularIntegerROIIndexer">
				<constructor-arg ref="d5PlotServerRoiProvider" />
				<constructor-arg value="5" />
			</bean>
		</property>
	</bean>

	<!-- HDF5 file -->
	<bean id="d5_ndhdf5file" class="gda.spring.V17NDFileHDF5FactoryBean">
		<property name="ndFileImpl">
			<bean class="gda.spring.V17NDFileFactoryBean">
				<property name="prefix" value="BL14I-OP-DCAM-05:HDF5:" />
				<property name="resetToInitialValues" value="false" />
			</bean>
		</property>
	</bean>

	<!-- Area detector camera -->
	<bean id="d5_camBase" class="gda.spring.V17ADBaseFactoryBean">
		<property name="prefix" value="BL14I-OP-DCAM-05:CAM:" />
	</bean>

 	<bean id="d5_cam" class="gda.device.detector.NXDetector">
		<property name="name" value="d5_cam" />
		<property name="collectionStrategy" ref="d5_collectionStrategy" />
		<property name="additionalPluginList">
			<list>
				<ref bean="d5_roiStats1" />
 				<ref bean="d5_roiStats2" />
				<ref bean="d5_roiStats3" />
				<ref bean="d5_roiStats4" />
				<ref bean="d5_roiStats5" />
				<ref bean="d5_roiStats6" />
				<ref bean="d5_hdf5Filewriter" />
			</list>
		</property>
	</bean>

</beans>