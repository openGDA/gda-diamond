<?xml version="1.0" encoding="UTF-8"?>

<configuration scan="true" scanPeriod="10 seconds" debug="true">

	<include file="${gda.config}/properties/_common/client_and_server_logging.xml" />

	<root>
		<level value="ALL" />
		<appender-ref ref="SOCKET" />
	</root>

    <!-- Do not set level to DEBUG or lower on EpicsMotor or you will be flooded with messages -->
    <logger name="gda.device.motor.EpicsMotor">
        <level value="INFO"/>
    </logger>

    <!-- Do not set level to DEBUG or lower on MoveEventQueue or you will be flooded with messages -->
    <logger name="gda.device.motor.MoveEventQueue">
        <level value="INFO"/>
    </logger>

	<logger name="org.apache.activemq">
		<level value="INFO" />
	</logger>

	<logger name="org.eclipse.jetty">
		<level value="INFO" />
	</logger>

	<logger name="gda.factory">
		<level value="INFO" />
	</logger>

	<logger name="gda.device.corba.impl">
		<level value="INFO" />
	</logger>

</configuration>
