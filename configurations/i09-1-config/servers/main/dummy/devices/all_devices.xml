<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
						http://www.springframework.org/schema/beans/spring-beans.xsd">

	<!-- Slits -->
	<import resource="file://${gda.config.shared}/servers/hard/dummy/devices/HS1.xml"/>
	<import resource="file://${gda.config.shared}/servers/hard/dummy/devices/HS2.xml"/>

	<!-- Insertion Device -->
	<import resource="file://${gda.config.shared}/servers/hard/dummy/devices/ID.xml"/>
	
	<!-- Mirrors -->
	<import resource="file://${gda.config.shared}/servers/hard/dummy/devices/HM1.xml"/>
	<import resource="file://${gda.config.shared}/servers/hard/dummy/devices/HM2.xml"/>
	<import resource="HM4A.xml"/>
	<import resource="HM4B.xml"/>

	<!-- Monochromator -->
	<import resource="file://${gda.config.shared}/servers/hard/dummy/devices/DCM.xml"/>
	<import resource="file://${gda.config.shared}/servers/hard/dummy/devices/ChannelCutCrystal.xml"/>
	
	<!-- Diagnostics -->
	<import resource="file://${gda.config.shared}/servers/hard/dummy/devices/HD2.xml"/>
	<import resource="HD2_CAM.xml"/>
	<import resource="file://${gda.config.shared}/servers/hard/dummy/devices/HD3.xml"/>
	<import resource="file://${gda.config.shared}/servers/hard/dummy/devices/HD4.xml"/>

	<!-- Simulated Area Detector -->
	<import resource="adSimulator.xml"/>

	<!-- End station -->
	<import resource="analyser.xml"/>
	<import resource="manipulator.xml"/>
	<import resource="lakeshore.xml"/>

	<!-- Shutters -->
	<import resource="shutters.xml"/>

	<!-- Dummy Devices -->
	<import resource="file://${gda.config.shared}/servers/main/dummy/devices/DummyMotors.xml"/>
	
</beans>
