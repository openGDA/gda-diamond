<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:util="http://www.springframework.org/schema/util"
	xmlns:tx="http://www.springframework.org/schema/tx" xmlns:aop="http://www.springframework.org/schema/aop"
	xmlns:corba="http://www.diamond.ac.uk/schema/gda/corba"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
	http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-2.5.xsd
	http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx-2.5.xsd
	http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-2.5.xsd
	http://www.diamond.ac.uk/schema/gda/corba http://www.diamond.ac.uk/schema/gda/corba/gda-corba-1.0.xsd">

	<import resource="commandQueueProcessor.xml" />
	<import resource="../../common_beans/common.xml"/>
	<corba:import namespace="i13-1" names="plot_server" />

	<bean id="ScanDataPointServer" class="uk.ac.gda.remoting.client.GdaRmiProxyFactoryBean">
		<property name="serviceUrl" value="${gda.rmi.prefix}ScanDataPointServer" />
		<property name="serviceInterface" value="gda.scan.IScanDataPointServer" />
		<property name="refreshStubOnConnectFailure" value="true" />
	</bean>
	
	<bean class="gda.rcp.util.OSGIServiceRegister">
		<property name="class" value="uk.ac.diamond.scisoft.analysis.PlotServer" />
		<property name="service" ref="plot_server" />
	</bean>
	
	<bean class="gda.rcp.util.OSGIServiceRegister">
		<property name="class" value="uk.ac.gda.epics.adviewer.ADPVSuffixes" />
		<property name="service">
			<bean class="uk.ac.gda.epics.adviewer.SimpleADPVSuffixes">
				<property name="mpgSuffix" value="FFMPEG:" />
			</bean>
		</property>
		<property name="properties">
			<bean class="uk.ac.gda.util.dictionary.MapBasedDictionary">
				<property name="map">
					<map>
						<entry key="SERVICE_NAME" value="diagnosticCameraType" />
					</map>
				</property>
			</bean>
		</property>
	</bean>


	<bean id="highestExistingFileMonitor" class="uk.ac.gda.remoting.client.GdaRmiProxyFactoryBean">
		<property name="serviceUrl" value="${gda.rmi.prefix}highestExistingFileMonitor" />
		<property name="serviceInterface"
			value="gda.device.detectorfilemonitor.HighestExistingFileMonitor" />
		<property name="refreshStubOnConnectFailure" value="true" />
	</bean>
	<bean id="imageFileDisplayer" class="uk.ac.gda.dls.client.views.ImageFileDisplayer">
		<property name="viewName" value="Detector Image" />
		<property name="viewID" value="uk.ac.gda.beamline.i13j.DetectorPlot" />
	</bean>


	<!-- <corba:import namespace="i13-1" names="beamline_health" /> -->
	<bean id="RCPController" class="uk.ac.gda.remoting.client.GdaRmiProxyFactoryBean">
		<property name="serviceUrl" value="${gda.rmi.prefix}rcpController" />
		<property name="serviceInterface" value="gda.gui.RCPController" />
		<property name="refreshStubOnConnectFailure" value="true" />
	</bean>

	<bean id="commandRunner" class="gda.jython.CommandRunnerBean" />
	<bean class="gda.rcp.util.OSGIServiceRegister">
		<property name="class" value="gda.jython.ICommandRunner" />
		<property name="service" ref="commandRunner" />
	</bean>
	<bean id="batonStateProvider" class="uk.ac.gda.client.interfaces.impl.BatonStateProviderBean" />
	<bean class="gda.rcp.util.OSGIServiceRegister">
		<property name="class" value="gda.jython.IBatonStateProvider" />
		<property name="service" ref="batonStateProvider" />
	</bean>

	<bean id="helpHandler" class="uk.ac.gda.client.HelpHandlerImpl">
	<property name="filePath" value="${gda.var}/helpHandler.txt"/>
	</bean>
	<bean class="gda.rcp.util.OSGIServiceRegister">
		<property name="class" value="uk.ac.gda.client.HelpHandler" />
		<property name="service" ref="helpHandler" />
	</bean>
	<bean id="expt_sht_stat" class="gda.device.scannable.EpicsScannable">
		<property name="hasUnits" value="False" />
		<property name="getAsString" value="True" />
		<property name="pvName" value="BL13J-PS-SHTR-02:STA" />
	</bean>	
	<bean id="statusView" class="gda.rcp.views.CompositeFactoryExecutableExtension">
		<property name="viewTitle" value="Status" />
		<property name="compositeFactories">
			<list>
				<!-- <bean class="uk.ac.gda.dls.client.views.HealthCheckCompositeFactory"> 
					<property name="healthScannable" ref="beamline_health"></property> <property 
					name="label" value="Health"/> </bean> -->
				<bean class="gda.rcp.views.ActionBtnCompositeFactory">
					<property name="tooltipText" value="Stop all motors" />
					<property name="buttonText" value="Panic Stop" />
					<property name="buttonImagePath" value="icons/stop.png" />
					<property name="foregroundColorId" value="3" />
					<property name="actionId" value="uk.ac.gda.client.StopAll" />
				</bean>
				<bean class="gda.rcp.views.GroupCompositeFactory">
					<property name="label" value="Machine" />
					<property name="columns" value="2" />
					<property name="compositeFactories">
						<list>
							<bean
								class="uk.ac.gda.dls.client.views.ReadonlyScannableCompositeFactory">
								<property name="scannable" ref="ringCurrent" />
								<property name="label" value="Ring Current" />
								<property name="units" value="mA" />
								<property name="decimalPlaces" value="2" />
							</bean>
							<bean
								class="uk.ac.gda.dls.client.views.ReadonlyScannableCompositeFactory">
								<property name="scannable" ref="timeToRefill" />
								<property name="label" value="Time to refill" />
								<property name="units" value="s" />
								<property name="decimalPlaces" value="0" />
							</bean>

							<bean
								class="uk.ac.gda.dls.client.views.ReadonlyScannableCompositeFactory">
								<property name="scannable" ref="idGap" />
								<property name="label" value="ID Gap" />
								<property name="units" value="mm" />
								<property name="decimalPlaces" value="3" />
							</bean>
						</list>
					</property>
				</bean>
				<bean class="gda.rcp.views.GroupCompositeFactory">
					<property name="label" value="Hutch Shutter" />
					<property name="columns" value="1" />
					<property name="compositeFactories">
						<list>
							<bean
								class="uk.ac.gda.dls.client.views.ReadonlyScannableCompositeFactory">
								<property name="scannable" ref="expt_sht_stat" />
								<property name="label" value="State" />
							</bean>
							<bean class="uk.ac.gda.dls.client.views.RunCommandCompositeFactory">
								<property name="command" value="eh_shtr_control()" />
								<property name="commandRunner" ref="commandRunner" />
								<property name="label" value="Open/Close" />
								<property name="tooltip"
									value="Opens or closes the experiment hutch shutter" />
								<property name="jobTitle" value="Experiment Hutch Open/Close" />
							</bean>
						</list>
					</property>
				</bean>
				<bean class="uk.ac.gda.dls.client.views.LatestFileNameCompositeFactory">
					<property name="label" value="Latest Detector File" />
					<property name="fileProcessor" ref="imageFileDisplayer" />
					<property name="highestExistingFileMonitorDataProvider"
						ref="highestExistingFileMonitor" />
					<property name="showButtonSeparator" value="true" />
					<property name="separatePlayPauseButtons" value="true" />
				</bean>
				<bean class="gda.rcp.views.OpenViewListBoxCompositeFactory">
					<property name="label" value="Cameras"></property>
					<property name="tooltipText"
						value="Open the live view for the selected camera"></property>
					<property name="options">
						<list>
							<bean class="gda.rcp.views.OpenViewOptionImpl">
								<constructor-arg value="Select a camera" />
								<constructor-arg value="" />
								<constructor-arg value="" />
							</bean>
							<bean class="uk.ac.gda.epics.adviewer.views.ADOpenViewOption">
								<constructor-arg value="d1" />
								<constructor-arg value="d1" />
								<constructor-arg value="MPEG"/>
								<constructor-arg value="BL13J-DI-PHDGN-01:"/>
								<constructor-arg value="diagnosticCameraType"/>
							</bean>
							<bean class="uk.ac.gda.epics.adviewer.views.ADOpenViewOption">
								<constructor-arg value="d2" />
								<constructor-arg value="d2" />
								<constructor-arg value="MPEG"/>
								<constructor-arg value="BL13J-DI-PHDGN-02:"/>
								<constructor-arg value="diagnosticCameraType"/>
							</bean>
							<bean class="uk.ac.gda.epics.adviewer.views.ADOpenViewOption">
								<constructor-arg value="d3" />
								<constructor-arg value="d3" />
								<constructor-arg value="MPEG"/>
								<constructor-arg value="BL13J-DI-PHDGN-03:"/>
								<constructor-arg value="diagnosticCameraType"/>
							</bean>
							<bean class="uk.ac.gda.epics.adviewer.views.ADOpenViewOption">
								<constructor-arg value="d4" />
								<constructor-arg value="d4" />
								<constructor-arg value="MPEG"/>
								<constructor-arg value="BL13J-DI-PHDGN-04:"/>
								<constructor-arg value="diagnosticCameraType"/>
							</bean>
							<bean class="uk.ac.gda.epics.adviewer.views.ADOpenViewOption">
								<constructor-arg value="d5" />
								<constructor-arg value="d5" />
								<constructor-arg value="MPEG"/>
								<constructor-arg value="BL13J-DI-PHDGN-05:"/>
								<constructor-arg value="diagnosticCameraType"/>
							</bean>
							<bean class="uk.ac.gda.epics.adviewer.views.ADOpenViewOption">
								<constructor-arg value="Float 1" />
								<constructor-arg value="Float 1" />
								<constructor-arg value="MPEG"/>
								<constructor-arg value="BL13J-OP-FLOAT-01:"/>
								<constructor-arg value="diagnosticCameraType"/>
							</bean>
							<bean class="uk.ac.gda.epics.adviewer.views.ADOpenViewOption">
								<constructor-arg value="Float 2" />
								<constructor-arg value="Float 2" />
								<constructor-arg value="MPEG"/>
								<constructor-arg value="BL13J-OP-FLOAT-02:"/>
								<constructor-arg value="diagnosticCameraType"/>
							</bean>
							<bean class="uk.ac.gda.epics.adviewer.views.ADOpenViewOption">
								<constructor-arg value="Float 2" />
								<constructor-arg value="Float 2" />
								<constructor-arg value="MPEG"/>
								<constructor-arg value="diagnosticCameraType"/>
								<constructor-arg value="BL13J-OP-FLOAT-03:"/>
							</bean>
							<bean class="gda.rcp.views.OpenViewOptionImpl">
								<constructor-arg value="excalibur" />
								<constructor-arg value="uk.ac.gda.epics.adviewer.mpegview" />
								<constructor-arg value="excalibur"/>
							</bean>
							<bean class="uk.ac.gda.epics.adviewer.views.ADOpenViewOption">
								<constructor-arg value="PCO" />
								<constructor-arg value="PCO" />
								<constructor-arg value="MPEG"/>
								<constructor-arg value="BL13J-EA-DET-01:"/>
							</bean>
							<bean class="uk.ac.gda.epics.adviewer.views.ADOpenViewOption">
								<constructor-arg value="PCO - ME07" />
								<constructor-arg value="PCO - ME07" />
								<constructor-arg value="MPEG"/>
								<constructor-arg value="ME07M-EA-DET-01:"/>
								<constructor-arg value="pcoType"/>
							</bean>
							<bean class="uk.ac.gda.epics.adviewer.views.ADOpenViewOption">
								<constructor-arg value="Merlin" />
								<constructor-arg value="Merlin" />
								<constructor-arg value="MPEG"/>
								<constructor-arg value="BL13J-EA-DET-04:"/>
							</bean>
							
							<bean class="gda.rcp.views.OpenViewOptionImpl">
								<constructor-arg value="WebCams" />
								<constructor-arg value="uk.ac.gda.video.views.cameraview" />
								<constructor-arg value=""/>
							</bean>
						</list>
					</property>
				</bean>				
			</list>
		</property>
	</bean>



	<bean class="gda.factory.corba.util.AdapterFactory">
		<constructor-arg index="0" value="${gda.factory.factoryName}" />
		<constructor-arg index="1">
			<bean class="gda.spring.NetServiceFactoryBean" />
		</constructor-arg>
	</bean>

	<bean class="gda.spring.FindableNameSetterPostProcessor" />
	<import resource="classpath:gda/spring/propertyeditors/registration.xml" />

</beans>
