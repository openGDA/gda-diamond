<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:util="http://www.springframework.org/schema/util"
	xmlns:tx="http://www.springframework.org/schema/tx" xmlns:aop="http://www.springframework.org/schema/aop"
	xmlns:corba="http://www.diamond.ac.uk/schema/gda/corba"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
	http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-2.5.xsd
	http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx-2.5.xsd
	http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-2.5.xsd
	http://www.diamond.ac.uk/schema/gda/corba http://www.diamond.ac.uk/schema/gda/corba/gda-corba-1.0.xsd">

	<import resource="commandQueueProcessor.xml" />

	<corba:import namespace="i13-1" names="plot_server" />

	<bean class="gda.rcp.util.OSGIServiceRegister">
		<property name="class" value="uk.ac.diamond.scisoft.analysis.PlotServer" />
		<property name="service" ref="plot_server" />
	</bean>

	<bean id="highestExistingFileMonitor" class="uk.ac.gda.remoting.client.GdaRmiProxyFactoryBean">
		<property name="serviceUrl" value="${gda.rmi.prefix}highestExistingFileMonitor" />
		<property name="serviceInterface"
			value="gda.device.detectorfilemonitor.HighestExistingFileMonitor" />
		<property name="refreshStubOnConnectFailure" value="true" />
	</bean>
	<bean id="imageFileDisplayer" class="uk.ac.gda.dls.client.views.ImageFileDisplayer">
		<property name="viewName" value="Detector Image" />
		<property name="viewID" value="uk.ac.gda.beamline.i13j.DetectorPlot" />
	</bean>


	<!-- <corba:import namespace="i13-1" names="beamline_health" /> -->
	<bean id="RCPController" class="uk.ac.gda.remoting.client.GdaRmiProxyFactoryBean">
		<property name="serviceUrl" value="${gda.rmi.prefix}rcpController" />
		<property name="serviceInterface" value="gda.gui.RCPController" />
		<property name="refreshStubOnConnectFailure" value="true" />
	</bean>

	<bean id="commandRunner" class="gda.jython.CommandRunnerBean" />
	<bean class="gda.rcp.util.OSGIServiceRegister">
		<property name="class" value="gda.jython.ICommandRunner" />
		<property name="service" ref="commandRunner" />
	</bean>
	<bean id="batonStateProvider" class="uk.ac.gda.client.interfaces.impl.BatonStateProviderBean" />
	<bean class="gda.rcp.util.OSGIServiceRegister">
		<property name="class" value="gda.jython.IBatonStateProvider" />
		<property name="service" ref="batonStateProvider" />
	</bean>

	<bean id="statusView" class="gda.rcp.views.CompositeFactoryExecutableExtension">
		<property name="viewTitle" value="Status" />
		<property name="compositeFactories">
			<list>
				<bean class="uk.ac.gda.dls.client.views.BatonStatusCompositeFactory">
					<property name="label" value="Baton" />
				</bean>
				<!-- <bean class="uk.ac.gda.dls.client.views.HealthCheckCompositeFactory"> 
					<property name="healthScannable" ref="beamline_health"></property> <property 
					name="label" value="Health"/> </bean> -->
				<bean class="gda.rcp.views.ActionBtnCompositeFactory">
					<property name="tooltipText" value="Stop all motors" />
					<property name="buttonText" value="Panic Stop" />
					<property name="buttonImagePath" value="icons/stop.png" />
					<property name="foregroundColorId" value="3" />
					<property name="actionId" value="uk.ac.gda.client.StopAll" />
				</bean>
				<bean class="gda.rcp.views.GroupCompositeFactory">
					<property name="label" value="Machine" />
					<property name="columns" value="2" />
					<property name="compositeFactories">
						<list>
							<bean
								class="uk.ac.gda.dls.client.views.ReadonlyScannableCompositeFactory">
								<property name="scannable" ref="ringCurrent" />
								<property name="label" value="Ring Current" />
								<property name="units" value="mA" />
								<property name="decimalPlaces" value="2" />
							</bean>
							<bean
								class="uk.ac.gda.dls.client.views.ReadonlyScannableCompositeFactory">
								<property name="scannable" ref="timeToRefill" />
								<property name="label" value="Time to refill" />
								<property name="units" value="s" />
								<property name="decimalPlaces" value="0" />
							</bean>

							<bean
								class="uk.ac.gda.dls.client.views.ReadonlyScannableCompositeFactory">
								<property name="scannable" ref="idGap" />
								<property name="label" value="ID Gap" />
								<property name="units" value="mm" />
								<property name="decimalPlaces" value="2" />
							</bean>
						</list>
					</property>
				</bean>
				<bean class="uk.ac.gda.dls.client.views.LatestFileNameCompositeFactory">
					<property name="label" value="Latest Detector File" />
					<property name="fileProcessor" ref="imageFileDisplayer" />
					<property name="highestExistingFileMonitorDataProvider"
						ref="highestExistingFileMonitor" />
					<property name="showButtonSeparator" value="true" />
					<property name="separatePlayPauseButtons" value="true" />
				</bean>
				<bean class="uk.ac.gda.dls.client.views.OpenViewCompositeFactory">
					<property name="tooltipText"
						value="Display MJPEG streams from cameras and detectors" />
					<property name="viewID" value="uk.ac.gda.video.views.cameraview" />
					<property name="buttonText" value="Cameras" />
					<property name="buttonImagePath" value="icons/eye.png" />
				</bean>
			</list>
		</property>
	</bean>

	<bean id="float2ADController"
		class="uk.ac.gda.epics.adviewer.ADControllerImpl">
		<property name="imageNDStats" ref="float2_stat" />
		<property name="liveViewNDProc" ref="float2_proc" />
		<property name="imageNDArray" ref="float2_arr" />
		<property name="imageHistSize" value="500" />
		<property name="imageMin" value="0" />
		<property name="imageMax" value="65535" />
		<property name="detectorName" value="Float 2" />
		<property name="adBase" ref="float2_cam_base" />
		<property name="ffmpegStream" ref="float2_ffmpeg" />
		<property name="ffmpegImageOutHeightMax" value="1200" />
		<property name="ffmpegImageOutWidthMax" value="1600" />
		<property name="cameraImageWidthMax" value="1388" />
		<property name="cameraImageHeightMax" value="1032" />
		<property name="imageNDROI" ref="float2_roi"/>
	</bean>

	<bean id="float2ADViewcreator" class="uk.ac.gda.epics.adviewer.views.ViewCreatorImpl">
		<property name="adController" ref="float2ADController" />
	</bean>

	<bean id="dictionary" class="uk.ac.gda.util.dictionary.MapBasedDictionary">
		<property name="map">
			<map>
				<entry key="SERVICE_NAME" value="float2" />
			</map>
		</property>
	</bean>
	<bean class="gda.rcp.util.OSGIServiceRegister">
		<property name="class" value="uk.ac.gda.epics.adviewer.ADController" />
		<property name="service" ref="float2ADController" />
		<property name="properties" ref="dictionary" />
	</bean>
	<bean class="gda.rcp.util.OSGIServiceRegister">
		<property name="class" value="uk.ac.gda.epics.adviewer.views.ViewCreator" />
		<property name="service" ref="float2ADViewcreator" />
		<property name="properties" ref="dictionary" />
	</bean>



	<bean class="gda.factory.corba.util.AdapterFactory">
		<constructor-arg index="0" value="${gda.factory.factoryName}" />
		<constructor-arg index="1">
			<bean class="gda.spring.NetServiceFactoryBean" />
		</constructor-arg>
	</bean>

	<bean class="gda.spring.FindableNameSetterPostProcessor" />
	<import resource="classpath:gda/spring/propertyeditors/registration.xml" />

</beans>
