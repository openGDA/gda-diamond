	<bean id="d5_cam_config" class="uk.ac.gda.video.views.EpicsCameraParameters">
		<property name="name" value="D5 - Sample Stage"/>
		<property name="urlPV" value="BL13J-DI-PHDGN-06:FFMPEG:MJPG_URL_RBV" />
		<property name="exposurePV" value="BL13J-DI-PHDGN-06:CAM:AcquireTime" />
		<property name="acqPeriodPV" value="BL13J-DI-PHDGN-06:CAM:AcquirePeriod" />
