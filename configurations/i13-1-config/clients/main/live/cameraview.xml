		<property name="acquirePV" value="BL13J-DI-PHDGN-06:CAM:Acquire" />
	</bean>

	<bean id="pco_cam_config" class="uk.ac.gda.video.views.EpicsCameraParameters">
		<property name="name" value="PCO"/>
		<property name="urlPV" value="BL13J-EA-DET-01:MPG1:MJPG_URL_RBV" />
		<property name="exposurePV" value="BL13J-EA-DET-01:CAM:AcquireTime" />
		<property name="acqPeriodPV" value="BL13J-EA-DET-01:CAM:AcquirePeriod" />
		<property name="gainPV" value="BL13J-EA-DET-01:CAM:Gain" />
		<property name="acquirePV" value="BL13J-EA-DET-01:CAM:Acquire" />
	</bean>

	<bean id="axis_186_config" class="uk.ac.gda.video.views.CameraParameters">
		<property name="name" value="AXIS_186"/>
		<property name="mjpegURL" value="http://172.23.82.186/mjpg/video.mjpg" />
	</bean>


	<bean id="camera_config" class="uk.ac.gda.video.views.CameraConfig">
		<property name="cameras">
			<list>
				<ref bean= "d1_cam_config"/>
				<ref bean= "d2_cam_config"/>
				<ref bean= "d3_cam_config"/>
				<ref bean= "shtr1_cam_config"/>
				<ref bean= "d4_cam_config"/>
				<ref bean= "d5_cam_config"/>
				<ref bean= "pco_cam_config"/>
				<ref bean= "axis_186_config"/>
			</list>
		</property>
		<property name="plotViewID" value="uk.ac.gda.beamline.i13j.DetectorPlot"/>
	</bean>

	<bean class="gda.rcp.util.OSGIServiceRegister">
		<property name="class" value="uk.ac.gda.video.views.ICameraConfig" />
		<property name="service" ref="camera_config" />
	</bean>
	


</beans>
