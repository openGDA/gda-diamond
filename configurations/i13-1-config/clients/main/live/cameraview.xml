		<property name="acqPeriodPV" value="BL13J-DI-PHDGN-03:CAM:AcquirePeriod" />
		<property name="gainPV" value="BL13J-DI-PHDGN-03:CAM:Gain" />
		<property name="acquirePV" value="BL13J-DI-PHDGN-03:CAM:Acquire" />
	</bean>

	<bean id="shtr1_cam_config" class="uk.ac.gda.video.views.EpicsCameraParameters">
		<property name="name" value="SHTR1 - Entry to QCM Hutch"/>
		<property name="urlPV" value="BL13J-DI-PHDGN-04:FFMPEG:MJPG_URL_RBV" />
		<property name="exposurePV" value="BL13J-DI-PHDGN-04:CAM:AcquireTime" />
		<property name="acqPeriodPV" value="BL13J-DI-PHDGN-04:CAM:AcquirePeriod" />
		<property name="gainPV" value="BL13J-DI-PHDGN-04:CAM:Gain" />
		<property name="acquirePV" value="BL13J-DI-PHDGN-04:CAM:Acquire" />
	</bean>

	<bean id="d4_cam_config" class="uk.ac.gda.video.views.EpicsCameraParameters">
		<property name="name" value="D4 - Entry to Experiment Hutch"/>
		<property name="urlPV" value="BL13J-DI-PHDGN-05:FFMPEG:MJPG_URL_RBV" />
		<property name="exposurePV" value="BL13J-DI-PHDGN-05:CAM:AcquireTime" />
		<property name="acqPeriodPV" value="BL13J-DI-PHDGN-05:CAM:AcquirePeriod" />
