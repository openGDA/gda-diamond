		<property name="acqPeriodPV" value="BL13J-DI-PHDGN-02:CAM:AcquirePeriod" />
		<property name="gainPV" value="BL13J-DI-PHDGN-02:CAM:Gain" />
		<property name="acquirePV" value="BL13J-DI-PHDGN-02:CAM:Acquire" />
	</bean>

	<bean id="d3_cam_config" class="uk.ac.gda.video.views.EpicsCameraParameters">
