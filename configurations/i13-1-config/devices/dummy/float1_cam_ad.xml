<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="float1_pluginBase" class="gda.device.detector.areadetector.v17.impl.NDPluginBaseSimulator">
		<property name="dims" value="1000,1000" />
		<property name="datatype" value="UINT32" />
	</bean>

	<bean id="float1_cam_base" class="gda.device.detector.areadetector.v17.impl.ADBaseSimulator"/>

	<bean id="float1_arr" class="gda.device.detector.areadetector.v17.impl.NDArraySimulator">
		<property name="pluginBase" ref="float1_pluginBase"/>
	</bean>


	<bean id="float1_stat" class="gda.device.detector.areadetector.v17.impl.NDStatsSimulator">
		<property name="pluginBase" ref="float1_pluginBase"/>
	</bean>

	<bean id="float1_cam_nx_array" class="gda.device.detector.nxdetector.plugin.areadetector.ADArrayPlugin">
		<constructor-arg ref="float1_arr" />
	</bean>

	<bean id="_float1_cam_nx" class="gda.device.detector.NXDetector">
		<property name="name" value="float1_cam_nx"/>
		<property name="collectionStrategy">
			<bean class="gda.device.detector.addetector.triggering.SingleExposureStandard">
				<constructor-arg ref="float1_cam_base" />
				<constructor-arg value=".0" />
			</bean>
		</property>
		<property name="additionalPluginList">
			<list>
				<ref bean="float1_cam_nx_array" />
			</list>
		</property>
	</bean>

</beans>