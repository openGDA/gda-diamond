<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:util="http://www.springframework.org/schema/util"
	xmlns:tx="http://www.springframework.org/schema/tx" xmlns:aop="http://www.springframework.org/schema/aop"
	xmlns:corba="http://www.diamond.ac.uk/schema/gda/corba"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
	http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-2.5.xsd
	http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx-2.5.xsd
	http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-2.5.xsd
	http://www.diamond.ac.uk/schema/gda/corba http://www.diamond.ac.uk/schema/gda/corba/gda-corba-1.0.xsd">

	<bean id="adDriverPco1"
		class="gda.device.detector.areadetector.v17.impl.ADDriverPcoImpl">
		<property name="basePvName" value="BL13J-EA-DET-01:CAM" />
	</bean>

	<bean id="pco1_cam_base"
		class="gda.device.detector.areadetector.v17.impl.ADBaseSimulator">
		<property name="model" value="PCOEdge" />
	</bean>

	<bean id="pco1_arr"
		class="gda.device.detector.areadetector.v17.impl.NDArraySimulator">
		<property name="pluginBase" ref="pco1_ad_pluginBase" />
	</bean>

	<bean id="pco1_stat"
		class="gda.device.detector.areadetector.v17.impl.NDStatsSimulator">
		<property name="pluginBase" ref="pco1_ad_pluginBase" />
	</bean>

	<bean id="pco1_roi"
		class="gda.device.detector.areadetector.v17.impl.NDROISimulator">
		<property name="pluginBase" ref="pco1_ad_pluginBase" />
	</bean>

	<bean id="pco1_ffmpeg"
		class="gda.device.detector.areadetector.v17.impl.FfmpegStreamSimulator">
		<property name="pluginBase" ref="pco1_ad_pluginBase" />
		<property name="mjpg_url" value="DummySwtVideoReceiver" />
	</bean>

	<bean id="pco1_ndfilehdf5_base"
		class="gda.device.detector.areadetector.v17.impl.NDFileSimulator">
		<property name="pluginBase" ref="pco1_ad_pluginBase" />
	</bean>

	<bean id="pco1_ndhdf5file" class="gda.device.detector.areadetector.v17.impl.NDFileHDF5Simulator">
		<property name="file" ref="pco1_ndfilehdf5_base" />
	</bean>

	<bean id="pco1_ndfiletif"
		class="gda.device.detector.areadetector.v17.impl.NDFileSimulator">
		<property name="pluginBase" ref="pco1_ad_pluginBase" />
	</bean>

	<bean id="pco1_proc"
		class="gda.device.detector.areadetector.v17.impl.NDProcessSimulator">
		<property name="pluginBase" ref="pco1_ad_pluginBase" />
	</bean>

</beans>	
