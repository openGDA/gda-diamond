<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">


	<bean id="diff_x" class="gda.device.scannable.ScannableMotor">
		<property name="motor" ref="diff_x_motor" />
		<property name="userUnits" value="um"/>
	</bean>
	<bean id="diff_y" class="gda.device.scannable.ScannableMotor">
		<property name="motor" ref="diff_y_motor" />
		<property name="userUnits" value="um"/>
	</bean>
	<bean id="diff_z" class="gda.device.scannable.ScannableMotor">
		<property name="motor" ref="diff_z_motor" />
		<property name="userUnits" value="um"/>
	</bean>

	<bean id="diff_ix" class="gda.device.scannable.SimpleScannable">
		<property name="currentPosition">
		<bean class="java.lang.Double">
		  <constructor-arg value="0.0"/>
		</bean>
		</property>
		<property name="inputNames" value="diff_ix"/>
	</bean>

	<bean id="diff_xy" class="gda.device.scannable.scannablegroup.ScannableGroup">
		<property name="groupMembers">
			<list>
				<ref bean="diff_x" />
				<ref bean="diff_y" />
				<ref bean="diff_ix" />
			</list>
		</property>
	</bean>

	<bean id="diff" class="gda.device.scannable.scannablegroup.ScannableGroup">
		<property name="groupMembers">
			<list>
				<ref bean="diff_x" />
				<ref bean="diff_y" />
				<ref bean="diff_z" />
				<ref bean="diff_xy" />
			</list>
		</property>
	</bean>

</beans>

