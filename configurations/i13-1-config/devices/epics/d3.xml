<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:util="http://www.springframework.org/schema/util"
	xmlns:tx="http://www.springframework.org/schema/tx" xmlns:aop="http://www.springframework.org/schema/aop"
	xmlns:corba="http://www.diamond.ac.uk/schema/gda/corba"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
	http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-2.5.xsd
	http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx-2.5.xsd
	http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-2.5.xsd
	http://www.diamond.ac.uk/schema/gda/corba http://www.diamond.ac.uk/schema/gda/corba/gda-corba-1.0.xsd">

	<bean id="d3_pos" class="gda.device.enumpositioner.EpicsPositioner">
		<property name="deviceName" value="d3.mp" />
	</bean>	

	<bean id="d3_x_motor" class="gda.device.motor.EpicsMotor">
		<property name="deviceName" value="d3.x" />
		<property name="local" value="true" />
	</bean>
	


	<bean id="d3_window_temp" class="gda.device.scannable.EpicsScannable"> 
		<property name="pvName" value="BL13J-DI-PHDGN-03:T1" /> 
		<property name="useNameAsExtraName" value="true"/>
		<property name="hasUnits" value="false"/>
	</bean> 

	<bean id="d3_return_temp" class="gda.device.scannable.EpicsScannable"> 
		<property name="pvName" value="BL13J-DI-PHDGN-03:T2" /> 
		<property name="useNameAsExtraName" value="true"/>
		<property name="hasUnits" value="false"/>
	</bean> 


	<bean id="d3_cam_base" class="gda.spring.V17ADBaseFactoryBean">
		<property name="prefix" value="BL13J-DI-PHDGN-03:CAM:" />
	</bean>

	<bean id="d3_arr" class="gda.spring.V17NDArrayFactoryBean">
		<property name="prefix" value="BL13J-DI-PHDGN-03:ARR:" />
	</bean>

	<bean id="d3_stat" class="gda.spring.V17NDStatsFactoryBean">
		<property name="prefix" value="BL13J-DI-PHDGN-03:STAT:" />
	</bean>

	<bean id="d3_roi" class="gda.spring.V17NDROIFactoryBean">
		<property name="prefix" value="BL13J-DI-PHDGN-03:ROI:" />
	</bean>

	<bean id="d3_ffmpeg" class="gda.spring.V17FfmpegStreamFactoryBean">
		<property name="prefix" value="BL13J-DI-PHDGN-03:FFMPEG:" />
	</bean>


	<bean id="d3_proc" class="gda.spring.V17NDProcessFactoryBean">
		<property name="prefix" value="BL13J-DI-PHDGN-03:PROC:" />
	</bean>

	<bean id="d3_cam_ad_plugins" class="gda.device.FindableObjectHolder">
		<property name="map">
			<util:map>
				<entry key="d3_cam_base" value-ref="d3_cam_base" />
				<entry key="d3_arr" value-ref="d3_arr" />
				<entry key="d3_ffmpeg" value-ref="d3_ffmpeg" />
				<entry key="d3_roi" value-ref="d3_roi" />
			</util:map>
		</property>
	</bean>

	<bean id="d3_cam_ad" class="gda.device.detector.addetector.ADDetector">
		<property name="adBase" ref="d3_cam_base" />
		<property name="ndStats" ref="d3_stat" />
		<property name="ndArray" ref="d3_arr" />
		<property name="collectionStrategy">
			<bean class="gda.device.detector.addetector.triggering.SingleExposureStandard">
				<constructor-arg ref="d3_cam_base" />
				<constructor-arg value=".0" />
			</bean>
		</property>
		<property name="computeStats" value="false"/>
		<property name="computeCentroid" value="false"/>
		<property name="readArray" value="true"/>
	</bean>	

</beans>	
