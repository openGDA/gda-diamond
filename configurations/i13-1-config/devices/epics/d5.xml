<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:util="http://www.springframework.org/schema/util"
	xmlns:tx="http://www.springframework.org/schema/tx" xmlns:aop="http://www.springframework.org/schema/aop"
	xmlns:corba="http://www.diamond.ac.uk/schema/gda/corba"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
	http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-2.5.xsd
	http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx-2.5.xsd
	http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-2.5.xsd
	http://www.diamond.ac.uk/schema/gda/corba http://www.diamond.ac.uk/schema/gda/corba/gda-corba-1.0.xsd">

	<bean id="d5_x_motor" class="gda.device.motor.EpicsMotor">
		<property name="deviceName" value="d5.x" />
		<property name="local" value="true" />
	</bean>

	<bean id="d5_pos" class="gda.device.scannable.EpicsScannable"> 
		<property name="pvName" value="BL13J-DI-PHDGN-05:X:MP:SELECT" /> 
		<property name="useNameAsInputName" value="true"/>
		<property name="getAsString" value="True"/>
		<property name="hasUnits" value="false"/>
	</bean> 

	<!--  not present
	<bean id="d5_i" class="gda.device.scannable.EpicsScannable"> 
		<property name="pvName" value="BL13J-DI-PHDGN-05:DIODE" /> 
		<property name="useNameAsInputName" value="true"/>
	</bean> 

	<bean id="d5_gain" class="gda.device.scannable.EpicsScannable"> 
		<property name="pvName" value="BL13J-DI-FEMTO-02:GAIN" /> 
		<property name="useNameAsInputName" value="true"/>
	</bean> 

	<bean id="d5_coupling" class="gda.device.scannable.EpicsScannable"> 
		<property name="pvName" value="BL13J-DI-FEMTO-02:ACDC" /> 
		<property name="useNameAsInputName" value="true"/>
	</bean> 
	 -->

	<bean id="d5_window_temp" class="gda.device.scannable.EpicsScannable"> 
		<property name="pvName" value="BL13J-DI-PHDGN-05:T1" /> 
		<property name="useNameAsInputName" value="true"/>
		<!--  unit C is not supported -->
		<property name="hasUnits" value="false"/>
	</bean> 
	<!-- not present 
	<bean id="d5_return_temp" class="gda.device.scannable.EpicsScannable"> 
		<property name="pvName" value="BL13J-DI-PHDGN-05:T2" /> 
		<property name="useNameAsInputName" value="true"/>
		<property name="hasUnits" value="false"/>
	</bean> 
	-->

	<bean id="d5_cam_pvProvider" class="gda.device.detector.areadetector.v17.impl.SimplePVProvider">
	<property name="prefix" value="BL13J-DI-PHDGN-05:CAM:"/>
	</bean>
	<bean id="d5_cam" class="gda.device.detector.areadetector.v17.impl.ADDriverProsilicaImpl">
		<property name="pvProvider" ref="d1_cam_pvProvider"/>
	</bean>
	<bean id="d5_cam_base" class="gda.device.detector.areadetector.v17.impl.ADBaseImpl">
		<property name="pvProvider" ref="d1_cam_pvProvider"/>
	</bean>

	<bean id="d5_arr_pvProvider" class="gda.device.detector.areadetector.v17.impl.SimplePVProvider">
		<property name="prefix" value="BL13J-DI-PHDGN-05:ARR:"/>
	</bean>

	<bean id="d5_arr_ndpluginbase" class="gda.device.detector.areadetector.v17.impl.NDPluginBaseImpl">
		<property name="pvProvider" ref="d1_arr_pvProvider"/>
		<property name="initialArrayPort" value="gige5.cam" />
		<property name="initialArrayAddress" value="0" />
	</bean>

	<bean id="d5_arr" class="gda.device.detector.areadetector.v17.impl.NDArrayImpl">
		<property name="pvProvider" ref="d1_arr_pvProvider"/>
		<property name="pluginBase" ref="d1_arr_ndpluginbase"/>	
	</bean>


	<bean id="d5_stat_pvProvider" class="gda.device.detector.areadetector.v17.impl.SimplePVProvider">
		<property name="prefix" value="BL13J-DI-PHDGN-05:STAT:"/>
	</bean>

	<bean id="d5_stat_ndpluginbase" class="gda.device.detector.areadetector.v17.impl.NDPluginBaseImpl">
		<property name="pvProvider" ref="d1_stat_pvProvider"/>
		<property name="initialArrayPort" value="gige5.cam" />
		<property name="initialArrayAddress" value="0" />
	</bean>

	<bean id="d5_stat" class="gda.device.detector.areadetector.v17.impl.NDStatsImpl">
		<property name="pvProvider" ref="d1_stat_pvProvider"/>
		<property name="pluginBase" ref="d1_stat_ndpluginbase"/>	
	</bean>

	<bean id="d5_tiff_pvProvider" class="gda.device.detector.areadetector.v17.impl.SimplePVProvider">
		<property name="prefix" value="BL13J-DI-PHDGN-05:TIFF:"/>
	</bean>

	<bean id="d5_tiff_ndpluginbase" class="gda.device.detector.areadetector.v17.impl.NDPluginBaseImpl">
		<property name="pvProvider" ref="d5_tiff_pvProvider"/>
		<property name="initialArrayPort" value="gige5.cam" />
		<property name="initialArrayAddress" value="0" />
	</bean>

	<bean id="d5_tiff" class="gda.device.detector.areadetector.v17.impl.NDFileImpl">
		<property name="pvProvider" ref="d1_tiff_pvProvider"/>
		<property name="pluginBase" ref="d1_tiff_ndpluginbase"/>	
		<property name="initialAutoSave" value="true" />
		<property name="initialAutoIncrement" value="true" />
		<property name="initialWriteMode" value="2" />
		<property name="initialNumCapture" value="1" />
		<property name="initialFileName" value="p" />
		<property name="initialFileTemplate" value="%s/%s_%04d.tif" />
	</bean>	
	
	<bean id="d5_ffmpeg_pvProvider" class="gda.device.detector.areadetector.v17.impl.SimplePVProvider">
	<property name="prefix" value="BL13J-DI-PHDGN-05:FFMPEG:"/>
	</bean>

	<bean id="d5_ffmpeg_ndpluginbase" class="gda.device.detector.areadetector.v17.impl.NDPluginBaseImpl">
		<property name="pvProvider" ref="d1_ffmpeg_pvProvider"/>
		<property name="initialArrayPort" value="gige5.cam" />
		<property name="initialArrayAddress" value="0" />
	</bean>

	<bean id="d5_ffmpeg" class="gda.device.detector.areadetector.v17.impl.FfmpegStreamImpl">
		<property name="pvProvider" ref="d1_ffmpeg_pvProvider"/>
		<property name="pluginBase" ref="d1_ffmpeg_ndpluginbase"/>
	</bean>
	
	
	<bean id="d5_ad_plugins" class="gda.device.FindableObjectHolder">
		<property name="map">
			<util:map>
				<entry key="d5_cam_base" value-ref="d5_cam_base"/>
				<entry key="d5_cam" value-ref="d5_cam"/>
				<entry key="d5_arr" value-ref="d5_arr"/>
				<entry key="d5_ffmpeg" value-ref="d5_ffmpeg"/>
				<entry key="d5_tiff" value-ref="d5_tiff"/>
			</util:map>
		</property>
	</bean>
	
	<bean id="d5_ad_det" class="gda.device.detector.ADDetector">
		<property name="adBase" ref="d5_cam_base"/>
		<property name="ndStats" ref="d5_stat"/>
		<property name="ndArray" ref="d5_arr"/>
	</bean>
	
</beans>	
