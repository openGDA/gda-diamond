<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:util="http://www.springframework.org/schema/util" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd 
						http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-2.5.xsd">

	<bean id="adFem" class="uk.ac.gda.devices.excalibur.impl.AdFem">
		<property name="basePVName" value="${gda.epics.excalibur.pvprefix}:CONFIG:ACQUIRE:" />
	</bean>



	<bean id="excalibur_config_arr_pvProvider"
		class="gda.device.detector.areadetector.v17.impl.SimplePVProvider">
		<property name="prefix" value="${gda.epics.excalibur.pvprefix}:CONFIG:ARR:" />
	</bean>

	<bean id="excalibur_config_arr_ndpluginbase"
		class="gda.device.detector.areadetector.v17.impl.NDPluginBaseImpl">
		<property name="pvProvider" ref="excalibur_config_arr_pvProvider" />
	</bean>

	<bean id="excalibur_config_arr" class="gda.device.detector.areadetector.v17.impl.NDArrayImpl">
		<property name="pvProvider" ref="excalibur_config_arr_pvProvider" />
		<property name="pluginBase" ref="excalibur_config_arr_ndpluginbase" />
	</bean>

	<bean id="excalibur_roi_pvProvider"
		class="gda.device.detector.areadetector.v17.impl.SimplePVProvider">
		<property name="prefix" value="${gda.epics.excalibur.pvprefix}:CONFIG:ROI:" />
	</bean>

	<bean id="excalibur_roi_ndpluginbase"
		class="gda.device.detector.areadetector.v17.impl.NDPluginBaseImpl">
		<property name="pvProvider" ref="excalibur_roi_pvProvider" />
	</bean>

	<bean id="excalibur_roi" class="gda.device.detector.areadetector.v17.impl.NDROIImpl">
		<property name="pvProvider" ref="excalibur_roi_pvProvider" />
		<property name="pluginBase" ref="excalibur_roi_ndpluginbase" />
	</bean>

	<bean id="excalibur_sync_pvProvider"
		class="gda.device.detector.areadetector.v17.impl.SimplePVProvider">
		<property name="prefix" value="${gda.epics.excalibur.pvprefix}:SYNC:" />
	</bean>

	<bean id="excalibur_sync" class="uk.ac.gda.devices.excalibur.impl.MasterSlaveSyncImpl">
		<property name="pvProvider" ref="excalibur_sync_pvProvider" />
	</bean>

	<bean id="excalibur_config_base_pvProvider"
		class="gda.device.detector.areadetector.v17.impl.SimplePVProvider">
		<property name="prefix" value="${gda.epics.excalibur.pvprefix}:CONFIG:ACQUIRE:" />
	</bean>

	<bean id="excalibur_config_base"
		class="uk.ac.gda.devices.excalibur.impl.ExcaliburConfigAdbaseImpl">
		<property name="pvProvider" ref="excalibur_config_base_pvProvider" />
		<property name="arrayCounts">
			<bean
				class="uk.ac.gda.devices.excalibur.impl.ExcaliburConfigAdbaseImpl.ArrayCountsImpl">
				<property name="pvProvider">
					<bean class="gda.device.detector.areadetector.v17.impl.SimplePVProvider">
						<property name="prefix" value="${gda.epics.excalibur.pvprefix}:CONFIG:" />
					</bean>
				</property>
			</bean>
		</property>
	</bean>

	<bean id="excalibur_config_nxs_tree_provider"
		class="uk.ac.gda.excalibur.config.model.util.ExcaliburConfigNxsTreeProvider">
		<property name="detectorName" value="excalibur" />
		<property name="excaliburSummaryAdbase" ref="excalibur_summary_adbase" />
		<property name="readoutNodeWrappers" ref="readoutNodesWrapperList" />
	</bean>

	<bean id="excalibur_config_proc_pvprovider"
		class="gda.device.detector.areadetector.v17.impl.SimplePVProvider">
		<property name="prefix" value="${gda.epics.excalibur.pvprefix}:CONFIG:PROC:"></property>
	</bean>

	<bean id="excalibur_config_proc" class="gda.device.detector.areadetector.v17.impl.NDProcessImpl">
		<property name="pvProvider" ref="excalibur_config_proc_pvprovider" />
		<property name="pluginBase">
			<bean class="gda.device.detector.areadetector.v17.impl.NDPluginBaseImpl">
				<property name="pvProvider" ref="excalibur_config_proc_pvprovider" />
			</bean>
		</property>
	</bean>

	<bean id="excalibur_config_roi_pvprovider"
		class="gda.device.detector.areadetector.v17.impl.SimplePVProvider">
		<property name="prefix" value="${gda.epics.excalibur.pvprefix}:CONFIG:ROI:"></property>
	</bean>

	<bean id="excalibur_config_roi" class="gda.device.detector.areadetector.v17.impl.NDROIImpl">
		<property name="pvProvider" ref="excalibur_config_roi_pvprovider" />
		<property name="pluginBase">
			<bean class="gda.device.detector.areadetector.v17.impl.NDPluginBaseImpl">
				<property name="pvProvider" ref="excalibur_config_roi_pvprovider" />
			</bean>
		</property>
	</bean>

	<bean id="excalibur_config_hdf_pvprovider"
		class="gda.device.detector.areadetector.v17.impl.SimplePVProvider">
		<property name="prefix" value="${gda.epics.excalibur.pvprefix}:CONFIG:HDF:"></property>
	</bean>

	<bean id="excalibur_config_hdf"
		class="gda.device.detector.areadetector.v17.impl.NDFileHDF5Impl">
		<property name="pvProvider" ref="excalibur_config_hdf_pvprovider" />
		<property name="file">
			<bean class="gda.device.detector.areadetector.v17.impl.NDFileImpl">
				<property name="pvProvider" ref="excalibur_config_hdf_pvprovider" />
				<property name="pluginBase">
					<bean class="gda.device.detector.areadetector.v17.impl.NDPluginBaseImpl">
						<property name="pvProvider" ref="excalibur_config_hdf_pvprovider" />
					</bean>
				</property>
				<property name="resetToInitialValues" value="false" />
			</bean>
		</property>
	</bean>

	<bean id="excalibur_config_gap_pvprovider"
		class="gda.device.detector.areadetector.v17.impl.SimplePVProvider">
		<property name="prefix" value="${gda.epics.excalibur.pvprefix}:CONFIG:GAP:"></property>
	</bean>

	<bean id="excalibur_config_gap" class="uk.ac.gda.devices.excalibur.impl.GapImpl">
		<property name="pvProvider" ref="excalibur_config_gap_pvprovider" />
		<property name="pluginBase">
			<bean class="gda.device.detector.areadetector.v17.impl.NDPluginBaseImpl">
				<property name="pvProvider" ref="excalibur_config_gap_pvprovider" />
			</bean>
		</property>
	</bean>

	<bean id="excalibur_config_mst_pvprovider"
		class="gda.device.detector.areadetector.v17.impl.SimplePVProvider">
		<property name="prefix" value="${gda.epics.excalibur.pvprefix}:CONFIG:MASTER:"></property>
	</bean>

	<bean id="excalibur_config_mst" class="uk.ac.gda.devices.excalibur.impl.MasterImpl">
		<property name="pvProvider" ref="excalibur_config_mst_pvprovider" />
		<property name="pluginBase">
			<bean class="gda.device.detector.areadetector.v17.impl.NDPluginBaseImpl">
				<property name="pvProvider" ref="excalibur_config_mst_pvprovider" />
			</bean>
		</property>
	</bean>

	<bean id="excalibur_config_fix_pvprovider"
		class="gda.device.detector.areadetector.v17.impl.SimplePVProvider">
		<property name="prefix" value="${gda.epics.excalibur.pvprefix}:CONFIG:FIX:"></property>
	</bean>

	<bean id="excalibur_config_fix" class="uk.ac.gda.devices.excalibur.impl.ConfigFixImpl">
		<property name="pluginBase">
			<bean class="gda.device.detector.areadetector.v17.impl.NDPluginBaseImpl">
				<property name="pvProvider" ref="excalibur_config_fix_pvprovider"></property>
			</bean>
		</property>
		<property name="pvProvider" ref="excalibur_config_fix_pvprovider" />
	</bean>


	<bean id="excalibur_config_hdf5_filewriter" class="uk.ac.gda.excalibur.MultipleImagesPerHDF5FileWriter">
		<property name="ndFileHDF5" ref="excalibur_config_hdf" />
		<property name="fileNameTemplate" value="excalibur" />
		<property name="filePathTemplate" value="$datadir$" />
		<property name="fileTemplate" value="%s%s-%d.hdf" />
		<property name="fileNumberAtScanStart" value="-1" />
		<property name="setFileNameAndNumber" value="true" />
		<property name="nodes">
			<util:list>
				<ref bean="excalibur_readoutNode1_hdf" />
				<ref bean="excalibur_readoutNode2_hdf" />
				<ref bean="excalibur_readoutNode3_hdf" />
				<ref bean="excalibur_readoutNode4_hdf" />
				<ref bean="excalibur_readoutNode5_hdf" />
				<ref bean="excalibur_readoutNode6_hdf" />
			</util:list>
		</property>
		<property name="blocking" value="false"/>
		<property name="rowChunks" value="256"/>
		<property name="colChunks" value="2069"/>
	</bean>

