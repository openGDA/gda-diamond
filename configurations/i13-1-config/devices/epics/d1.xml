<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:util="http://www.springframework.org/schema/util"
	xmlns:tx="http://www.springframework.org/schema/tx" xmlns:aop="http://www.springframework.org/schema/aop"
	xmlns:corba="http://www.diamond.ac.uk/schema/gda/corba"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
	http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-2.5.xsd
	http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx-2.5.xsd
	http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-2.5.xsd
	http://www.diamond.ac.uk/schema/gda/corba http://www.diamond.ac.uk/schema/gda/corba/gda-corba-1.0.xsd">

	<bean id="d1_x_motor" class="gda.device.motor.EpicsMotor">
		<property name="deviceName" value="d1.x" />
		<property name="local" value="true" />
	</bean>

	<bean id="d1_pos" class="gda.device.enumpositioner.EpicsPositioner">
		<property name="deviceName" value="d1.mp" />
	</bean>

	<bean id="d1_i" class="gda.device.scannable.EpicsScannable">
		<property name="useNameAsExtraName" value="true" />
		<property name="hasUnits" value="false" />
		<property name="pvProvider">
			<bean class="gda.epics.interfaceSpec.GDAEpicsInterfacePVProvider">
			<property name="deviceName" value="D1"/>
			<property name="fieldName" value="RECORD"/>
			</bean>
		</property>
	</bean>

	<bean id="d1_gain" class="gda.device.scannable.EpicsScannable">
		<property name="useNameAsInputName" value="true" />
		<property name="hasUnits" value="false" />
		<property name="pvProvider">
			<bean class="gda.epics.interfaceSpec.GDAEpicsInterfacePVProvider">
			<property name="deviceName" value="d1.femto"/>
			<property name="fieldName" value="SETGAIN"/>
			</bean>
		</property>
	</bean>

	<bean id="d1_coupling" class="gda.device.scannable.EpicsScannable">
		<property name="useNameAsInputName" value="true" />
		<property name="hasUnits" value="false" />
		<property name="pvProvider">
			<bean class="gda.epics.interfaceSpec.GDAEpicsInterfacePVProvider">
			<property name="deviceName" value="d1.femto"/>
			<property name="fieldName" value="SETACDC"/>
			</bean>
		</property>
	</bean>


	<bean id="d1_flow_temp" class="gda.device.scannable.EpicsScannable">
		<property name="pvName" value="BL13J-DI-PHDGN-01:T1" />
		<property name="useNameAsExtraName" value="true" />
		<!-- unit C is not supported -->
		<property name="hasUnits" value="false" />
	</bean>
	<bean id="d1_return_temp" class="gda.device.scannable.EpicsScannable">
		<property name="pvName" value="BL13J-DI-PHDGN-01:T2" />
		<property name="useNameAsExtraName" value="true" />
		<!-- unit C is not supported -->
		<property name="hasUnits" value="false" />
	</bean>



	<bean id="d1_cam_base" class="gda.spring.V17ADBaseFactoryBean">
		<property name="prefix" value="BL13J-DI-PHDGN-01:CAM:" />
	</bean>

	<bean id="d1_arr" class="gda.spring.V17NDArrayFactoryBean">
		<property name="prefix" value="BL13J-DI-PHDGN-01:ARR:" />
	</bean>

	<bean id="d1_stat" class="gda.spring.V17NDStatsFactoryBean">
		<property name="prefix" value="BL13J-DI-PHDGN-01:STAT:" />
	</bean>

	<bean id="d1_roi" class="gda.spring.V17NDROIFactoryBean">
		<property name="prefix" value="BL13J-DI-PHDGN-01:ROI:" />
	</bean>

	<bean id="d1_ffmpeg" class="gda.spring.V17FfmpegStreamFactoryBean">
		<property name="prefix" value="BL13J-DI-PHDGN-01:FFMPEG:" />
	</bean>


	<bean id="d1_ndfilehdf5_base" class="gda.spring.V17NDFileFactoryBean">
		<property name="prefix" value="BL13J-DI-PHDGN-01:HDF:" />
		<property name="resetToInitialValues" value="false" />
	</bean>

	<bean id="d1_ndhdf5file" class="gda.spring.V17NDFileHDF5FactoryBean">
		<property name="ndFileImpl" ref="d1_ndfilehdf5_base" />
	</bean>


	<bean id="d1_proc" class="gda.spring.V17NDProcessFactoryBean">
		<property name="prefix" value="BL13J-DI-PHDGN-01:PROC:" />
	</bean>

	<bean id="_d1_cam_ad_plugins" class="gda.device.FindableObjectHolder">
		<property name="map">
			<util:map>
				<entry key="d1_cam_base" value-ref="d1_cam_base" />
				<entry key="d1_arr" value-ref="d1_arr" />
				<entry key="d1_ffmpeg" value-ref="d1_ffmpeg" />
				<entry key="d1_roi" value-ref="d1_roi" />
			</util:map>
		</property>
	</bean>

<!-- 	<bean id="_d1_cam_ad" class="gda.device.detector.addetector.ADDetector">
		<property name="adBase" ref="d1_cam_base" />
		<property name="ndStats" ref="d1_stat" />
		<property name="ndArray" ref="d1_arr" />
		<property name="collectionStrategy">
			<bean class="gda.device.detector.addetector.triggering.SingleExposureStandard">
				<constructor-arg ref="d1_cam_base" />
				<constructor-arg value=".0" />
			</bean>
		</property>
		<property name="computeStats" value="false"/>
		<property name="computeCentroid" value="false"/>
		<property name="readArray" value="true"/>
	</bean>
 -->
	<bean id="d1_cam_nx_array"
		class="gda.device.detector.nxdetector.plugin.areadetector.ADArrayPlugin">
		<constructor-arg ref="d1_arr" />
	</bean>

	<bean id="_d1_cam_nx" class="gda.device.detector.NXDetector">
		<property name="name" value="d1_cam_nx"/>
		<property name="collectionStrategy">
			<bean
				class="gda.device.detector.addetector.triggering.SingleExposureStandard">
				<constructor-arg ref="d1_cam_base" />
				<constructor-arg value=".0" />
			</bean>
		</property>
		<property name="additionalPluginList">
			<list>
				<ref bean="d1_cam_nx_array" />
			</list>
		</property>
	</bean>
	
	
	<bean id="d1_hdf5_filewriter" class="gda.device.detector.addetector.filewriter.MultipleImagesPerHDF5FileWriter">
		<property name="ndFileHDF5" ref="d1_ndhdf5file" />
		<property name="fileNameTemplate" value="d1"/>
		<property name="filePathTemplate" value="$datadir$"/>
		<property name="fileTemplate" value="%s%s-%d.hdf"/>
		<property name="fileNumberAtScanStart" value="-1"/>
		<property name="setFileNameAndNumber" value="true"/>
		<property name="lazyOpen" value="false"/>
		<property name="boundaryAlign" value="1048576"/>
		<property name="blocking" value="false"/>
	</bean>
		
	<!--  I need to handle ndProcess == null in MultipleExposureSoftwareTriggerAutoMode and set mode to CAPTURE -->
	<bean id="d1_fast" class="gda.device.detector.NXDetector">
		<property name="name" value="d1_fast"/>
		<property name="collectionStrategy">
			<bean
				class="gda.device.detector.addetector.triggering.MultipleExposureSoftwareTriggerAutoMode">
				<constructor-arg ref="d1_cam_base" />
				<constructor-arg value=".0" />
			</bean>
		</property>
		<property name="additionalPluginList">
			<list>
				<ref bean="d1_hdf5_filewriter" />
			</list>
		</property>
	</bean>

</beans>	
