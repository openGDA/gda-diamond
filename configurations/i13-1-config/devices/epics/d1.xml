<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:util="http://www.springframework.org/schema/util"
	xmlns:tx="http://www.springframework.org/schema/tx" xmlns:aop="http://www.springframework.org/schema/aop"
	xmlns:corba="http://www.diamond.ac.uk/schema/gda/corba"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
	http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-2.5.xsd
	http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx-2.5.xsd
	http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-2.5.xsd
	http://www.diamond.ac.uk/schema/gda/corba http://www.diamond.ac.uk/schema/gda/corba/gda-corba-1.0.xsd">

	<bean id="d1_x_motor" class="gda.device.motor.EpicsMotor">
		<property name="deviceName" value="d1.x" />
		<property name="local" value="true" />
	</bean>

	<bean id="d1_pos" class="gda.device.enumpositioner.EpicsPositioner">
		<property name="deviceName" value="d1.mp" />
	</bean>

	<bean id="d1_i" class="gda.device.scannable.EpicsScannable">
		<property name="useNameAsExtraName" value="true" />
		<property name="hasUnits" value="false" />
		<property name="pvProvider">
			<bean class="gda.epics.interfaceSpec.GDAEpicsInterfacePVProvider">
			<property name="deviceName" value="D1"/>
			<property name="fieldName" value="RECORD"/>
			</bean>
		</property>
	</bean>

	<bean id="d1_gain" class="gda.device.scannable.EpicsScannable">
		<property name="useNameAsInputName" value="true" />
		<property name="hasUnits" value="false" />
		<property name="pvProvider">
			<bean class="gda.epics.interfaceSpec.GDAEpicsInterfacePVProvider">
			<property name="deviceName" value="FEMTO1"/>
			<property name="fieldName" value="SETGAIN"/>
			</bean>
		</property>
	</bean>

	<bean id="d1_coupling" class="gda.device.scannable.EpicsScannable">
		<property name="useNameAsInputName" value="true" />
		<property name="hasUnits" value="false" />
		<property name="pvProvider">
			<bean class="gda.epics.interfaceSpec.GDAEpicsInterfacePVProvider">
			<property name="deviceName" value="FEMTO1"/>
			<property name="fieldName" value="SETACDC"/>
			</bean>
		</property>
	</bean>


	<bean id="d1_flow_temp" class="gda.device.scannable.EpicsScannable">
		<property name="pvName" value="BL13J-DI-PHDGN-01:T1" />
		<property name="useNameAsExtraName" value="true" />
		<!-- unit C is not supported -->
		<property name="hasUnits" value="false" />
	</bean>
	<bean id="d1_return_temp" class="gda.device.scannable.EpicsScannable">
		<property name="pvName" value="BL13J-DI-PHDGN-01:T2" />
		<property name="useNameAsExtraName" value="true" />
		<!-- unit C is not supported -->
		<property name="hasUnits" value="false" />
	</bean>

	<bean id="d1_cam_pvProvider"
		class="gda.device.detector.areadetector.v17.impl.SimplePVProvider">
		<property name="prefix" value="BL13J-DI-PHDGN-01:CAM:" />
	</bean>
	<bean id="d1_cam_driver"
		class="gda.device.detector.areadetector.v17.impl.ADDriverProsilicaImpl">
		<property name="pvProvider" ref="d1_cam_pvProvider" />
	</bean>
	<bean id="d1_cam_base" class="gda.device.detector.areadetector.v17.impl.ADBaseImpl">
		<property name="pvProvider" ref="d1_cam_pvProvider" />
	</bean>

	<bean id="d1_arr_pvProvider"
		class="gda.device.detector.areadetector.v17.impl.SimplePVProvider">
		<property name="prefix" value="BL13J-DI-PHDGN-01:ARR:" />
	</bean>

	<bean id="d1_arr_ndpluginbase"
		class="gda.device.detector.areadetector.v17.impl.NDPluginBaseImpl">
		<property name="pvProvider" ref="d1_arr_pvProvider" />
		<property name="initialArrayPort" value="gige1.cam" />
		<property name="initialArrayAddress" value="0" />
	</bean>

	<bean id="d1_arr" class="gda.device.detector.areadetector.v17.impl.NDArrayImpl">
		<property name="pvProvider" ref="d1_arr_pvProvider" />
		<property name="pluginBase" ref="d1_arr_ndpluginbase" />
	</bean>


	<bean id="d1_stat_pvProvider"
		class="gda.device.detector.areadetector.v17.impl.SimplePVProvider">
		<property name="prefix" value="BL13J-DI-PHDGN-01:STAT:" />
	</bean>

	<bean id="d1_stat_ndpluginbase"
		class="gda.device.detector.areadetector.v17.impl.NDPluginBaseImpl">
		<property name="pvProvider" ref="d1_stat_pvProvider" />
		<property name="initialArrayPort" value="gige1.cam" />
		<property name="initialArrayAddress" value="0" />
	</bean>

	<bean id="d1_stat" class="gda.device.detector.areadetector.v17.impl.NDStatsImpl">
		<property name="pvProvider" ref="d1_stat_pvProvider" />
		<property name="pluginBase" ref="d1_stat_ndpluginbase" />
	</bean>

	<bean id="d1_roi_pvProvider"
		class="gda.device.detector.areadetector.v17.impl.SimplePVProvider">
		<property name="prefix" value="BL13J-DI-PHDGN-01:ROI:" />
	</bean>

	<bean id="d1_roi_ndpluginbase"
		class="gda.device.detector.areadetector.v17.impl.NDPluginBaseImpl">
		<property name="pvProvider" ref="d1_roi_pvProvider" />
		<property name="initialArrayPort" value="gige1.cam" />
		<property name="initialArrayAddress" value="0" />
	</bean>

	<bean id="d1_roi" class="gda.device.detector.areadetector.v17.impl.NDROIImpl">
		<property name="pvProvider" ref="d1_roi_pvProvider" />
		<property name="pluginBase" ref="d1_roi_ndpluginbase" />
	</bean>

	<!-- TIFF plugin causes GigE camera IOC to crash <bean id="d1_tiff_pvProvider" 
		class="gda.device.detector.areadetector.v17.impl.SimplePVProvider"> <property 
		name="prefix" value="BL13J-DI-PHDGN-01:TIFF:"/> </bean> <bean id="d1_tiff_ndpluginbase" 
		class="gda.device.detector.areadetector.v17.impl.NDPluginBaseImpl"> <property 
		name="pvProvider" ref="d1_tiff_pvProvider"/> <property name="initialArrayPort" 
		value="gige1.cam" /> <property name="initialArrayAddress" value="0" /> </bean> 
		<bean id="d1_tiff" class="gda.device.detector.areadetector.v17.impl.NDFileImpl"> 
		<property name="pvProvider" ref="d1_tiff_pvProvider"/> <property name="pluginBase" 
		ref="d1_tiff_ndpluginbase"/> <property name="initialAutoSave" value="true" 
		/> <property name="initialAutoIncrement" value="true" /> <property name="initialWriteMode" 
		value="2" /> <property name="initialNumCapture" value="1" /> <property name="initialFileName" 
		value="p" /> <property name="initialFileTemplate" value="%s/%s_%04d.tif" 
		/> </bean> -->

	<bean id="d1_ffmpeg_pvProvider"
		class="gda.device.detector.areadetector.v17.impl.SimplePVProvider">
		<property name="prefix" value="BL13J-DI-PHDGN-01:FFMPEG:" />
	</bean>

	<bean id="d1_ffmpeg_ndpluginbase"
		class="gda.device.detector.areadetector.v17.impl.NDPluginBaseImpl">
		<property name="pvProvider" ref="d1_ffmpeg_pvProvider" />
		<property name="initialArrayPort" value="gige1.cam" />
		<property name="initialArrayAddress" value="0" />
	</bean>

	<bean id="d1_ffmpeg"
		class="gda.device.detector.areadetector.v17.impl.FfmpegStreamImpl">
		<property name="pvProvider" ref="d1_ffmpeg_pvProvider" />
		<property name="pluginBase" ref="d1_ffmpeg_ndpluginbase" />
	</bean>


	<bean id="d1_ad_plugins" class="gda.device.FindableObjectHolder">
		<property name="map">
			<util:map>
				<entry key="d1_cam_base" value-ref="d1_cam_base" />
				<entry key="d1_cam" value-ref="d1_cam_driver" />
				<entry key="d1_arr" value-ref="d1_arr" />
				<entry key="d1_ffmpeg" value-ref="d1_ffmpeg" />
				<!-- <entry key="d1_tiff" value-ref="d1_tiff"/> -->
				<entry key="d1_roi" value-ref="d1_roi" />
			</util:map>
		</property>
	</bean>

	<bean id="d1_cam" class="gda.device.detector.addetector.ADDetector">
		<property name="adBase" ref="d1_cam_base" />
		<property name="ndStats" ref="d1_stat" />
		<property name="ndArray" ref="d1_arr" />
		<!-- TIFF plugin causes GigE camera IOC to crah <property name="ndFile" 
			ref="d1_tiff"/> -->
	</bean>



	


</beans>	
