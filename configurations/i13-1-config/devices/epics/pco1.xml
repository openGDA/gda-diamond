<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:util="http://www.springframework.org/schema/util"
	xmlns:tx="http://www.springframework.org/schema/tx" xmlns:aop="http://www.springframework.org/schema/aop"
	xmlns:corba="http://www.diamond.ac.uk/schema/gda/corba"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
	http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-2.5.xsd
	http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx-2.5.xsd
	http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-2.5.xsd
	http://www.diamond.ac.uk/schema/gda/corba http://www.diamond.ac.uk/schema/gda/corba/gda-corba-1.0.xsd">


	<bean id="pco1_cam_base" class="gda.spring.V17ADBaseFactoryBean">
		<property name="prefix" value="BL13J-EA-DET-01:CAM:" />
	</bean>
	<bean id="pco1_arr" class="gda.spring.V17NDArrayFactoryBean">
		<property name="prefix" value="BL13J-EA-DET-01:ARR:" />
	</bean>

	<bean id="pco1_stat" class="gda.spring.V17NDStatsFactoryBean">
		<property name="prefix" value="BL13J-EA-DET-01:STAT:" />
	</bean>
	<bean id="pco1_roi1" class="gda.spring.V17NDROIFactoryBean">
		<property name="prefix" value="BL13J-EA-DET-01:ROI1:" />
	</bean>
	<bean id="pco1_roi2" class="gda.spring.V17NDROIFactoryBean">
		<property name="prefix" value="BL13J-EA-DET-01:ROI2:" />
	</bean>

	<bean id="pco1_ffmpeg1" class="gda.spring.V17FfmpegStreamFactoryBean">
		<property name="prefix" value="BL13J-EA-DET-01:MPG1:" />
	</bean>

	<bean id="pco1_ffmpeg2" class="gda.spring.V17FfmpegStreamFactoryBean">
		<property name="prefix" value="BL13J-EA-DET-01:MPG2:" />
	</bean>


	<bean id="pco1_ndhdf5file" class="gda.spring.V17NDFileHDF5FactoryBean">
		<property name="ndFileImpl" ref="pco1_ndfilehdf5_base" />
	</bean>


	<bean id="pco1_ndfilehdf5_base" class="gda.spring.V17NDFileFactoryBean">
		<property name="prefix" value="BL13J-EA-DET-01:HDF:" />
		<property name="resetToInitialValues" value="false" />
		<property name="filePathConverter">
			<bean class="uk.ac.gda.util.UnixToWindowsFilePathConverter">
				<property name="unixSubString" value="/dls/i13-1/data" />
				<property name="windowsSubString" value="z:\data" />
			</bean>
		</property>
	</bean>

	<bean id="pco1_ndfiletif" class="gda.spring.V17NDFileFactoryBean">
		<property name="prefix" value="BL13J-EA-DET-01:TIF:" />
		<property name="resetToInitialValues" value="false" />
		<property name="filePathConverter">
			<bean class="uk.ac.gda.util.UnixToWindowsFilePathConverter">
				<property name="unixSubString" value="/dls/i13-1/data" />
				<property name="windowsSubString" value="z:\data" />
			</bean>
		</property>
	</bean>

	<bean id="pco1_proc1" class="gda.spring.V17NDProcessFactoryBean">
		<property name="prefix" value="BL13J-EA-DET-01:PRO1:" />
	</bean>

	<bean id="pco1_proc2" class="gda.spring.V17NDProcessFactoryBean">
		<property name="prefix" value="BL13J-EA-DET-01:PRO2:" />
	</bean>

	<bean id="pco1_plugins" class="gda.device.FindableObjectHolder">
		<property name="map">
			<util:map>
				<entry key="pco1_cam_base" value-ref="pco1_cam_base" />
				<entry key="pco1_arr" value-ref="pco1_arr" />
				<entry key="pco1_ffmpeg1" value-ref="pco1_ffmpeg1" />
				<entry key="pco1_ffmpeg2" value-ref="pco1_ffmpeg2" />
				<entry key="pco1_roi1" value-ref="pco1_roi1" />
				<entry key="pco1_roi2" value-ref="pco1_roi2" />
				<entry key="pco1_ndhdf5file" value-ref="pco1_ndhdf5file" />
				<entry key="pco1_ndfiletif" value-ref="pco1_ndfiletif" />
				<entry key="pco1_singleExposurePco" value-ref="pco1_singleExposurePco" />
				<entry key="pco1_multipleExposurePco" value-ref="pco1_multipleExposurePco" />
				<entry key="pco1_singleExposurePcoSoftwareTrigger" value-ref="pco1_singleExposurePcoSoftwareTrigger" />
			</util:map>
		</property>
	</bean>

	<bean id="adDriverPco1"
		class="gda.device.detector.areadetector.v17.impl.ADDriverPcoImpl">
		<property name="basePvName" value="BL13J-EA-DET-01:CAM" />
	</bean>


	<bean id="pco1_singleExposurePcoSoftwareTrigger"
		class="gda.device.detector.addetector.triggering.SingleExposurePcoSoftwareTrigger">
		<constructor-arg ref="pco1_cam_base" />
		<constructor-arg ref="adDriverPco1" />
		<constructor-arg value="-.03" />
	</bean>
	<bean id="pco1_singleExposurePco"
		class="gda.device.detector.addetector.triggering.SingleExposurePco">
		<constructor-arg ref="pco1_cam_base" />
		<constructor-arg ref="adDriverPco1" />
		<constructor-arg value="-.03" />
	</bean>
	<!-- <bean id="pco1_multipleExposurePco" class="gda.device.detector.addetector.triggering.MultipleExposureSoftwareTriggerAutoMode"> 
		<constructor-arg ref="pco1_cam_base" /> <constructor-arg value=".04" /> </bean> -->

	<bean id="pco1_multipleExposurePco"
		class="gda.device.detector.addetector.triggering.PCOMultipleExposureSoftwareTriggerAutoMode">
		<constructor-arg ref="pco1_cam_base" />
		<constructor-arg value="2." />
		<constructor-arg ref="adDriverPco1" />
		<property name="ndProcess" ref="pco1_proc1" />
		<property name="exposureTime" value="1." />
	</bean>


	<bean id="_pco1_tif" class="gda.device.detector.NXDetector">
		<property name="name" value="_pco1_tif" />
		<property name="collectionStrategy" ref="pco1_singleExposurePco" />
		<property name="additionalPluginList">
			<list>
				<bean
					class="gda.device.detector.addetector.filewriter.SingleImagePerFileWriter">
					<constructor-arg value="pco1_tif" />
					<property name="ndFile" ref="pco1_ndfiletif" />
					<property name="highestExistingFileMonitor" ref="highestExistingFileMonitor" />
					<property name="waitForFileArrival" value="true" />

				</bean>

				<bean
					class="gda.device.detector.nxdetector.plugin.areadetector.ADArrayPlugin">
					<constructor-arg ref="pco1_arr" />
				</bean>
				<bean
					class="gda.device.detector.nxdetector.plugin.areadetector.ADBasicStats">
					<constructor-arg ref="pco1_stat" />
				</bean>

			</list>
		</property>
	</bean>


