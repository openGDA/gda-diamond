<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:util="http://www.springframework.org/schema/util"
	xmlns:tx="http://www.springframework.org/schema/tx" xmlns:aop="http://www.springframework.org/schema/aop"
	xmlns:corba="http://www.diamond.ac.uk/schema/gda/corba"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
	http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-2.5.xsd
	http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx-2.5.xsd
	http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-2.5.xsd
	http://www.diamond.ac.uk/schema/gda/corba http://www.diamond.ac.uk/schema/gda/corba/gda-corba-1.0.xsd">

	<bean id="pco1_cam_pvProvider"
		class="gda.device.detector.areadetector.v17.impl.SimplePVProvider">
		<property name="prefix" value="BL13J-EA-DET-01:CAM:" />
	</bean>
	<bean id="pco1_cam_base" class="gda.device.detector.areadetector.v17.impl.ADBaseImpl">
		<property name="pvProvider" ref="pco1_cam_pvProvider" />
	</bean>

	<bean id="pco1_arr_pvProvider"
		class="gda.device.detector.areadetector.v17.impl.SimplePVProvider">
		<property name="prefix" value="BL13J-EA-DET-01:ARR:" />
	</bean>

	<bean id="pco1_arr" class="gda.device.detector.areadetector.v17.impl.NDArrayImpl">
		<property name="pvProvider" ref="pco1_arr_pvProvider" />
		<property name="pluginBase">
			<bean class="gda.device.detector.areadetector.v17.impl.NDPluginBaseImpl">
				<property name="pvProvider" ref="pco1_arr_pvProvider" />
			</bean>
		</property>
	</bean>


	<bean id="pco1_stat_pvProvider"
		class="gda.device.detector.areadetector.v17.impl.SimplePVProvider">
		<property name="prefix" value="BL13J-EA-DET-01:STAT:" />
	</bean>

	<bean id="pco1_stat" class="gda.device.detector.areadetector.v17.impl.NDStatsImpl">
		<property name="pvProvider" ref="pco1_stat_pvProvider" />
		<property name="pluginBase">
			<bean class="gda.device.detector.areadetector.v17.impl.NDPluginBaseImpl">
				<property name="pvProvider" ref="pco1_stat_pvProvider" />
			</bean>
		</property>
	</bean>

	<bean id="pco1_roi_pvProvider"
		class="gda.device.detector.areadetector.v17.impl.SimplePVProvider">
		<property name="prefix" value="BL13J-EA-DET-01:ROI:" />
	</bean>

	<bean id="pco1_roi" class="gda.device.detector.areadetector.v17.impl.NDROIImpl">
		<property name="pvProvider" ref="pco1_roi_pvProvider" />
		<property name="pluginBase">
			<bean class="gda.device.detector.areadetector.v17.impl.NDPluginBaseImpl">
				<property name="pvProvider" ref="pco1_roi_pvProvider" />
			</bean>
		</property>
	</bean>

	<bean id="pco1_ffmpeg_pvProvider"
		class="gda.device.detector.areadetector.v17.impl.SimplePVProvider">
		<property name="prefix" value="BL13J-EA-DET-01:MPEG:" />
	</bean>

	<bean id="pco1_ffmpeg"
		class="gda.device.detector.areadetector.v17.impl.FfmpegStreamImpl">
		<property name="pvProvider" ref="pco1_ffmpeg_pvProvider" />
		<property name="pluginBase">
			<bean class="gda.device.detector.areadetector.v17.impl.NDPluginBaseImpl">
				<property name="pvProvider" ref="pco1_ffmpeg_pvProvider" />
			</bean>
		</property>
	</bean>

	<bean id="pco1_ndfile_pvProvider"
		class="gda.device.detector.areadetector.v17.impl.SimplePVProvider">
		<property name="prefix" value="BL13J-EA-DET-01:HDF:" />
	</bean>

	<bean id="pco1_ndfile" class="gda.device.detector.areadetector.v17.impl.NDFileImpl">
		<property name="pvProvider" ref="pco1_ndfile_pvProvider" />
		<property name="pluginBase">
			<bean class="gda.device.detector.areadetector.v17.impl.NDPluginBaseImpl">
				<property name="pvProvider" ref="pco1_ndfile_pvProvider" />
			</bean>
		</property>
		<property name="initialAutoSave" value="Not hooked up to anything!" /> <!-- currently yes -->
		<property name="initialAutoIncrement" value="Not hooked up to anything!" /> <!-- currently true -->
		<property name="initialWriteMode" value="0" /> <!-- Single(current), Capture, Stream, -->
		<property name="initialNumCapture" value="1" /> <!-- current = 1 -->
		<property name="initialFileName" value="pco" />
		<property name="initialFileTemplate" value="%s%s%d.hdf" />
		<property name="filePathConverter">
			<bean class="uk.ac.gda.util.UnixToWindowsFilePathConverter">
				<property name="unixSubString" value="/dls/i13-1/data" />
				<property name="windowsSubString" value="z:\data" />
			</bean>
		</property>

	</bean>

	<bean id="pco1_ad_plugins" class="gda.device.FindableObjectHolder">
		<property name="map">
			<util:map>
				<entry key="pco1_cam_base" value-ref="pco1_cam_base" />
				<entry key="pco1_arr" value-ref="pco1_arr" />
				<entry key="pco1_ffmpeg" value-ref="pco1_ffmpeg" />
				<entry key="pco1_ndfile" value-ref="pco1_ndfile" />
				<entry key="pco1_roi" value-ref="pco1_roi" />
			</util:map>
		</property>
	</bean>

	<bean id="adDriverPco1"
		class="gda.device.detector.areadetector.v17.impl.ADDriverPcoImpl">
		<property name="basePvName" value="BL13J-EA-DET-01:CAM" />
	</bean>

	<bean id="pco1_cam" class="gda.device.detector.addetector.ADPco">
		<property name="adBase" ref="pco1_cam_base" />
		<property name="ndStats" ref="pco1_stat" />
		<property name="ndArray" ref="pco1_arr" />
		<property name="ndFile" ref="pco1_ndfile" />
		<property name="collectionStrategy">
			<bean class="gda.device.detector.addetector.triggering.SingleExposurePco">
				<constructor-arg ref="pco1_cam_base" />
				<constructor-arg ref="adDriverPco1" />
				<constructor-arg value=".03" />
			</bean>
		</property>

		<property name="readAcquisitionTime" value="true" />
		<property name="readFilepath" value="true" />
		<property name="readAcquisitionPeriod" value="false" />
		<property name="computeStats" value="true" />
		<property name="computeCentroid" value="false" />
		<property name="readArray" value="true" />
		<property name="createsOwnFiles" value="false" />
		<property name="linkFilepath" value="false" />
		<property name="setFileWriterNameNumber" value="false"/>
	</bean>





</beans>	
