<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

	<bean id="qcm_bragg1_motor" class="gda.device.motor.EpicsMotor">
		<property name="deviceName" value="qcm.bragg1" />
		<property name="local" value="true" />
	</bean>

	<bean id="qcm_bragg2_motor" class="gda.device.motor.EpicsMotor">
		<property name="deviceName" value="qcm.bragg2" />
		<property name="local" value="true" />
	</bean>

	<bean id="qcm_bragg1_x_motor" class="gda.device.motor.EpicsMotor">
		<property name="deviceName" value="qcm.bragg1.x" />
		<property name="local" value="true" />
	</bean>
	<bean id="qcm_bragg2_x_motor" class="gda.device.motor.EpicsMotor">
		<property name="deviceName" value="qcm.bragg2.x" />
		<property name="local" value="true" />
	</bean>
	<bean id="qcm_bragg1_pitch_motor" class="gda.device.motor.EpicsMotor">
		<property name="deviceName" value="qcm.bragg1.coarsepitch" />
		<property name="local" value="true" />
	</bean>
	<bean id="qcm_bragg1_roll_motor" class="gda.device.motor.EpicsMotor">
		<property name="deviceName" value="qcm.bragg1.coarseroll" />
		<property name="local" value="true" />
	</bean>

	<bean id="qcm_bragg2_pitch_motor" class="gda.device.motor.EpicsMotor">
		<property name="deviceName" value="qcm.bragg2.coarsepitch" />
		<property name="local" value="true" />
	</bean>
	<bean id="qcm_bragg2_roll_motor" class="gda.device.motor.EpicsMotor">
		<property name="deviceName" value="qcm.bragg2.coarseroll" />
		<property name="local" value="true" />
	</bean>

	<bean id="qcm_y_motor" class="gda.device.motor.EpicsMotor">
		<property name="deviceName" value="qcm.y" />
		<property name="local" value="true" />
	</bean>
	<bean id="qcm_bragg1_finepitch" class="gda.device.controlpoint.EpicsControlPoint">
		<property name="pvNameSetPoint" value="BL13J-OP-QCM-01:BRAGG1:FINEPITCH:SVA:WR" />
		<property name="pvNameGetPoint" value="BL13J-OP-QCM-01:BRAGG1:FINEPITCH:VOL:RD" />
		<property name="monitorChannels" value="false" />
	</bean>

	<bean id="qcm_bragg1_fineroll" class="gda.device.controlpoint.EpicsControlPoint">
		<property name="pvNameSetPoint" value="BL13J-OP-QCM-01:BRAGG1:FINEROLL:SVA:WR" />
		<property name="pvNameGetPoint" value="BL13J-OP-QCM-01:BRAGG1:FINEROLL:VOL:RD" />
		<property name="monitorChannels" value="false" />
	</bean>

	<bean id="qcm_bragg2_finepitch" class="gda.device.controlpoint.EpicsControlPoint">
		<property name="pvNameSetPoint" value="BL13J-OP-QCM-01:BRAGG2:FINEPITCH:SVA:WR" />
		<property name="pvNameGetPoint" value="BL13J-OP-QCM-01:BRAGG2:FINEPITCH:VOL:RD" />
		<property name="monitorChannels" value="false" />
	</bean>

	<bean id="qcm_bragg2_fineroll" class="gda.device.controlpoint.EpicsControlPoint">
		<property name="pvNameSetPoint" value="BL13J-OP-QCM-01:BRAGG2:FINEROLL:SVA:WR" />
		<property name="pvNameGetPoint" value="BL13J-OP-QCM-01:BRAGG2:FINEROLL:VOL:RD" />
		<property name="monitorChannels" value="false" />
	</bean>

	<bean id="qcm_energy_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL13J-OP-BEAM-01:ENERGY" />
		<property name="local" value="true" />
	</bean>

