<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

	<bean id="qcm_bragg_motor" class="gda.device.motor.EpicsMotor">
		<property name="deviceName" value="qcm1.bragg" />
		<property name="local" value="true" />
	</bean>
	<bean id="qcm1_theta2_motor" class="gda.device.motor.EpicsMotor">
		<property name="deviceName" value="qcm1.theta1" />
		<property name="local" value="true" />
	</bean>
	<bean id="qcm1_theta1_motor" class="gda.device.motor.EpicsMotor">
		<property name="deviceName" value="qcm1.theta2" />
		<property name="local" value="true" />
	</bean>
	<bean id="qcm1_y_motor" class="gda.device.motor.EpicsMotor">
		<property name="deviceName" value="qcm1.y" />
		<property name="local" value="true" />
	</bean>
	<bean id="qcm1_x_motor" class="gda.device.motor.EpicsMotor">
		<property name="deviceName" value="qcm1.x" />
		<property name="local" value="true" />
	</bean>
	<bean id="qcm1_rot_motor" class="gda.device.motor.EpicsMotor">
		<property name="deviceName" value="qcm1.rot" />
		<property name="local" value="true" />
	</bean>
	<bean id="qcm1_bs_motor" class="gda.device.motor.EpicsMotor">
		<property name="deviceName" value="qcm1.bs" />
		<property name="local" value="true" />
	</bean>

</beans>	