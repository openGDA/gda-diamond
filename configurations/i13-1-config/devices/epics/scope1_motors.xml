<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

	<bean id="scope1_x_motor" class="gda.device.motor.EpicsMotor">
		<property name="deviceName" value="scope1.x" />
		<property name="local" value="true" />
	</bean>
	<bean id="scope1_y_motor" class="gda.device.motor.EpicsMotor">
		<property name="deviceName" value="scope1.y" />
		<property name="local" value="true" />
	</bean>
	<bean id="scope1_focus_motor" class="gda.device.motor.EpicsMotor">
		<property name="deviceName" value="scope1.focus" />
		<property name="local" value="true" />
	</bean>
	<bean id="scope1_laser_motor" class="gda.device.motor.EpicsMotor">
		<property name="deviceName" value="scope1.laser" />
		<property name="local" value="true" />
	</bean>

</beans>	