<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:util="http://www.springframework.org/schema/util" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd 
						http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-2.5.xsd">

	<bean id="excalibur_summary_adbase_pvProvider"
		class="gda.device.detector.areadetector.v17.impl.SimplePVProvider">
		<property name="prefix" value="${gda.epics.excalibur.pvprefix}:MASTER:SLAVES:" />
	</bean>  

	<bean id="excalibur_summary_adbase"
		class="uk.ac.gda.devices.excalibur.impl.ExcaliburSummaryAdbaseImpl">
		<property name="pvProvider" ref="excalibur_summary_adbase_pvProvider"></property>
	</bean>

	<bean id="excalibur_summary_proc_pvprovider"
		class="gda.device.detector.areadetector.v17.impl.SimplePVProvider">
		<property name="prefix" value="${gda.epics.excalibur.pvprefix}:MASTER:PROC:"></property>
	</bean>

	<bean id="excalibur_summary_proc" class="gda.device.detector.areadetector.v17.impl.NDProcessImpl">
		<property name="pvProvider" ref="excalibur_summary_proc_pvprovider" />
		<property name="pluginBase">
			<bean class="gda.device.detector.areadetector.v17.impl.NDPluginBaseImpl">
				<property name="pvProvider" ref="excalibur_summary_proc_pvprovider" />
			</bean>
		</property>
	</bean>

	<bean id="excalibur_summary_roi_pvprovider"
		class="gda.device.detector.areadetector.v17.impl.SimplePVProvider">
		<property name="prefix" value="${gda.epics.excalibur.pvprefix}:MASTER:ROI1:"></property>
	</bean>

	<bean id="excalibur_summary_roi" class="gda.device.detector.areadetector.v17.impl.NDROIImpl">
		<property name="pvProvider" ref="excalibur_summary_roi_pvprovider" />
		<property name="pluginBase">
			<bean class="gda.device.detector.areadetector.v17.impl.NDPluginBaseImpl">
				<property name="pvProvider" ref="excalibur_summary_roi_pvprovider" />
			</bean>
		</property>
	</bean>

	<bean id="excalibur_summary_draw_pvprovider"
		class="gda.device.detector.areadetector.v17.impl.SimplePVProvider">
		<property name="prefix" value="${gda.epics.excalibur.pvprefix}:MASTER:DRAW:"></property>
	</bean>

	<bean id="excalibur_summary_draw" class="gda.device.detector.areadetector.v17.impl.NDOverlayImpl">
		<property name="pvProvider" ref="excalibur_summary_draw_pvprovider" />
		<property name="pluginBase">
			<bean class="gda.device.detector.areadetector.v17.impl.NDPluginBaseImpl">
				<property name="pvProvider" ref="excalibur_summary_draw_pvprovider" />
			</bean>
		</property>
	</bean>

	<bean id="excalibur_summary_stat_pvprovider"
		class="gda.device.detector.areadetector.v17.impl.SimplePVProvider">
		<property name="prefix" value="${gda.epics.excalibur.pvprefix}:MASTER:STAT:"></property>
	</bean>

	<bean id="excalibur_summary_stat" class="gda.device.detector.areadetector.v17.impl.NDStatsImpl">
		<property name="pvProvider" ref="excalibur_summary_stat_pvprovider" />
		<property name="pluginBase">
			<bean class="gda.device.detector.areadetector.v17.impl.NDPluginBaseImpl">
				<property name="pvProvider" ref="excalibur_summary_stat_pvprovider" />
			</bean>
		</property>
	</bean>

	<bean id="excalibur_summary_hdf_pvprovider"
		class="gda.device.detector.areadetector.v17.impl.SimplePVProvider">
		<property name="prefix" value="${gda.epics.excalibur.pvprefix}:MASTER:HDF:"></property>
	</bean>

	<bean id="excalibur_summary_hdf"
		class="gda.device.detector.areadetector.v17.impl.NDFileHDF5Impl">
		<property name="pvProvider" ref="excalibur_summary_hdf_pvprovider" />
		<property name="file">
			<bean class="gda.device.detector.areadetector.v17.impl.NDFileImpl">
				<property name="pvProvider" ref="excalibur_summary_hdf_pvprovider" />
				<property name="pluginBase">
					<bean class="gda.device.detector.areadetector.v17.impl.NDPluginBaseImpl">
						<property name="pvProvider" ref="excalibur_summary_hdf_pvprovider" />
					</bean>
				</property>
				<property name="resetToInitialValues" value="false" />
				<property name="filePathConverter">
					<bean class="uk.ac.gda.excalibur.NodeFilePathConverter">
						<property name="intSubString" value="/data/excalibur/nodes/node1" />
						<property name="extSubString" value="/data/excalibur/data" />
					</bean>
				</property>
			</bean>
		</property>
	</bean>

	<bean id="excalibur_summary_tiff_pvprovider"
		class="gda.device.detector.areadetector.v17.impl.SimplePVProvider">
		<property name="prefix" value="${gda.epics.excalibur.pvprefix}:MASTER:TIFF:"></property>
	</bean>

	<bean id="excalibur_summary_tiff" class="gda.device.detector.areadetector.v17.impl.NDFileImpl">
		<property name="pvProvider" ref="excalibur_summary_tiff_pvprovider" />
		<property name="pluginBase">
			<bean class="gda.device.detector.areadetector.v17.impl.NDPluginBaseImpl">
				<property name="pvProvider" ref="excalibur_summary_tiff_pvprovider" />
			</bean>
		</property>
		<property name="resetToInitialValues" value="false" />
	</bean>

	<bean id="excalibur_summary_arr_pvProvider"
		class="gda.device.detector.areadetector.v17.impl.SimplePVProvider">
		<property name="prefix" value="${gda.epics.excalibur.pvprefix}:MASTER:ARR:" />
	</bean>

	<bean id="excalibur_summary_arr" class="gda.device.detector.areadetector.v17.impl.NDArrayImpl">
		<property name="pluginBase">
			<bean class="gda.device.detector.areadetector.v17.impl.NDPluginBaseImpl">
				<property name="pvProvider" ref="excalibur_summary_arr_pvProvider" />
			</bean>
		</property>
		<property name="pvProvider" ref="excalibur_summary_arr_pvProvider" />
	</bean>


	<bean id="excalibur_summary_mjpg_pvprovider"
		class="gda.device.detector.areadetector.v17.impl.SimplePVProvider">
		<property name="prefix" value="${gda.epics.excalibur.pvprefix}:MASTER:FFMPEG:"></property>
	</bean>

	<bean id="excalibur_summary_mjpg"
		class="gda.device.detector.areadetector.v17.impl.FfmpegStreamImpl">
		<property name="pvProvider" ref="excalibur_summary_mjpg_pvprovider" />
		<property name="pluginBase">
			<bean class="gda.device.detector.areadetector.v17.impl.NDPluginBaseImpl">
				<property name="pvProvider" ref="excalibur_summary_mjpg_pvprovider" />
			</bean>
		</property>
	</bean>

	<bean id="excalibur_summary" class="gda.device.FindableObjectHolder">
		<property name="map">
			<util:map>
				<entry key="fem" value-ref="excalibur_summary_adbase" />
				<entry key="proc" value-ref="excalibur_summary_proc" />
				<entry key="roi" value-ref="excalibur_summary_roi" />
				<entry key="draw" value-ref="excalibur_summary_draw" />
				<entry key="stats" value-ref="excalibur_summary_stat" />
				<entry key="hdf" value-ref="excalibur_summary_hdf" />
				<entry key="tiff" value-ref="excalibur_summary_tiff" />
				<entry key="arr" value-ref="excalibur_summary_arr" />
				<entry key="mjpg" value-ref="excalibur_summary_mjpg" />
			</util:map>
		</property>
	</bean>


	<bean id="excalibur_summary_hdf5_filewriter" class="gda.device.detector.addetector.filewriter.MultipleImagesPerHDF5FileWriter">
		<property name="ndFileHDF5" ref="excalibur_summary_hdf" />
		<property name="fileNameTemplate" value="excalibur"/>
		<property name="filePathTemplate" value="$datadir$"/>
		<property name="fileTemplate" value="%s%s-%d.hdf"/>
		<property name="fileNumberAtScanStart" value="-1"/>
		<property name="setFileNameAndNumber" value="true"/>
		<property name="rowChunks" value="1795"/>
		<property name="colChunks" value="2069"/>
	</bean>



