#!/bin/bash
# starts logpanel, servers and namemanager

zenity --title "Are you sure?" --question --text "Are you sure you want to restart the live_localhost GDA servers?" --window-icon=question
SURE=$?
if [ $SURE == 1 ]; then
  exit
fi

#identify install folder and JAVA_HOME
source /dls_sw/i13-1/etc/i13-1_profile.sh

CLASSPATH=/dls_sw/i13-1/software/gda/plugins/uk.ac.gda.swingclient/bin; export CLASSPATH
`dirname $0`/gda_commands logpanel --mode=live_localhost --restart$@
export JAVA_OPTS="-Xms128m -Xmx1024m -XX:MaxPermSize=128m"
`dirname $0`/gda_commands servers --mode=live_localhost --restart --debug $@
`dirname $0`/gda_commands namemanager --mode=live_localhost --restart$@
