#!/bin/bash
# starts logpanel, servers and namemanager

#identify install folder and JAVA_HOME
source /dls_sw/i13-1/etc/i13-1_profile.sh

CLASSPATH=/dls_sw/i13-1/software/gda/plugins/uk.ac.gda.swingclient/bin; export CLASSPATH
`dirname $0`/gda_commands logpanel --trace --mode=live_localhost --restart$@
export JAVA_OPTS="-Xms128m -Xmx1024m -XX:MaxPermSize=128m -XX:+DisableExplicitGC"
nohup /dls_sw/i13-1/software/gda_versions/gda_trunk2/plugins/uk.ac.gda.core/bin/gda  --smart --trace --config=$GDAFOLDER/$BEAMLINE-config --debug -p 8001 --restart -v --mode=live_localhost --nsport 6701 servers
