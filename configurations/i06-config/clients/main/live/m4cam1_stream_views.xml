<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="m4_roi" class="uk.ac.gda.remoting.client.GdaRmiProxyFactoryBean">
		<property name="serviceUrl" value="${gda.rmi.prefix}m4Roi" />
		<property name="serviceInterface" value="gda.device.detector.nxdetector.roi.RemoteRectangularROIsProvider" />
		<property name="refreshStubOnConnectFailure" value="true" />
	</bean>
	<bean id="m4cam1" class="uk.ac.gda.client.live.stream.view.CameraConfiguration">
		<property name="displayName" value="M4 Cam1" />
		<property name="url" value="http://bl06i-di-serv-01.diamond.ac.uk:8081/M4.CAM1.mjpg.mjpg" />
		<property name="arrayPv" value="BL06I-EA-PHDGN-03:ARR" />
		<property name="roiProvider" ref="m4_roi" />
		<property name="calibratedAxesProvider" ref="displayPixelNumberOnAxes"/>
		<property name="withHistogram" value="true"/>
	</bean>
</beans>