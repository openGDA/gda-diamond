	<!-- PEEM line Gate Valve 11  -->
	<bean id="testPump1" class="gda.device.enumpositioner.EpicsPneumaticCallback">
		<property name="deviceName" value="GV11" />
		<property name="local" value="false"/>
	</bean>

	<!-- PEEM line Gate Valve 11 ( Valve 11)  -->
	<bean id="testPump2" class="gda.device.enumpositioner.EpicsSimplePneumatic">
		<property name="pvName" value="BL06I-VA-VALVE-11:CON"/>
		<property name="local" value="false"/>
	</bean>
	
</beans>
