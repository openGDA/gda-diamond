 	<bean id="idGap" class="gda.device.scannable.EpicsScannable">
		<property name="pvName" value="SR06I-MO-SERVC-01:CURRGAPD"/>
		<property name="useNameAsExtraName" value="true"/>
	</bean>	
 	
	<bean id="ringCurrent" class="gda.device.scannable.EpicsScannable">
		<property name="pvName" value="SR21C-DI-DCCT-01:SIGNAL"/>
		<property name="useNameAsExtraName" value="true"/>
	</bean>	



	<bean id="clientMotor1" class="gda.device.scannable.EpicsScannable">
		<property name="pvName" value="BL06J-DI-PHDGN-04:Y.VAL"/>
		<property name="useNameAsExtraName" value="true"/>
		<!-- 	<property name="hasUnits" value="false"/>  -->
	</bean>


