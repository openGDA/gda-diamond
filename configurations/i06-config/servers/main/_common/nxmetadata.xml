<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="m3NexusDevice" class="org.eclipse.scanning.device.NexusMetadataDevice" init-method="register">
		<property name="name" value="m3" />
		<property name="category" value="NX_INSTRUMENT"/>
		<property name="nexusClass" value="NXmirror"/>
		<property name="childNodes">
			<list>
				<bean class="org.eclipse.scanning.device.ScannableField">
                	<property name="name" value="x"/>
                    <property name="scannableName" value="m3x"/>
          	    </bean>
				<bean class="org.eclipse.scanning.device.ScannableField">
                	<property name="name" value="pitch"/>
                    <property name="scannableName" value="m3pitch"/>
          	    </bean>		
				<bean class="org.eclipse.scanning.device.ScannableField">
                	<property name="name" value="qg"/>
                    <property name="scannableName" value="m3qg"/>
          	    </bean>		
			</list>
		</property>
	</bean>
	<bean id="d5NexusDevice" class="org.eclipse.scanning.device.NexusMetadataDevice" init-method="register">
		<property name="name" value="d5" />
		<property name="category" value="NX_INSTRUMENT"/>
		<property name="nexusClass" value="NXcollection"/>
		<property name="childNodes">
			<list>
				<bean class="org.eclipse.scanning.device.ScannableField">
                	<property name="name" value="x"/>
                    <property name="scannableName" value="d5x"/>
          	    </bean>
			</list>
		</property>
	</bean>
	<bean id="d6NexusDevice" class="org.eclipse.scanning.device.NexusMetadataDevice" init-method="register">
		<property name="name" value="d6" />
		<property name="category" value="NX_INSTRUMENT"/>
		<property name="nexusClass" value="NXcollection"/>
		<property name="childNodes">
			<list>
				<bean class="org.eclipse.scanning.device.ScannableField">
                	<property name="name" value="y"/>
                    <property name="scannableName" value="d6y"/>
          	    </bean>
			</list>
		</property>
	</bean>
	<bean id="d7NexusDevice" class="org.eclipse.scanning.device.NexusMetadataDevice" init-method="register">
		<property name="name" value="d7" />
		<property name="category" value="NX_INSTRUMENT"/>
		<property name="nexusClass" value="NXcollection"/>
		<property name="childNodes">
			<list>
				<bean class="org.eclipse.scanning.device.ScannableField">
                	<property name="name" value="x"/>
                    <property name="scannableName" value="d7x"/>
          	    </bean>
				<bean class="org.eclipse.scanning.device.ScannableField">
                	<property name="name" value="ax"/>
                    <property name="scannableName" value="d7ax"/>
          	    </bean>
			</list>
		</property>
	</bean>
	<bean id="s4NexusDevice" class="org.eclipse.scanning.device.NexusMetadataDevice" init-method="register">
		<property name="name" value="s4" />
		<property name="category" value="NX_INSTRUMENT"/>
		<property name="nexusClass" value="NXslit"/>
		<property name="childNodes">
			<list>
				<bean class="org.eclipse.scanning.device.ScannableField">
                	<property name="name" value="x_pos"/>
                    <property name="scannableName" value="s4x"/>
          	    </bean>
				<bean class="org.eclipse.scanning.device.ScannableField">
                	<property name="name" value="x_gap"/>
                    <property name="scannableName" value="s4xgap"/>
          	    </bean>		
				<bean class="org.eclipse.scanning.device.ScannableField">
                	<property name="name" value="y_pos"/>
                    <property name="scannableName" value="s4y"/>
          	    </bean>		
				<bean class="org.eclipse.scanning.device.ScannableField">
                	<property name="name" value="y_gap"/>
                    <property name="scannableName" value="s4ygap"/>
          	    </bean>		
			</list>
		</property>
	</bean>
	<bean id="psNexusDevice" class="org.eclipse.scanning.device.NexusMetadataDevice" init-method="register">
		<property name="name" value="ps" />
		<property name="category" value="NX_INSTRUMENT"/>
		<property name="nexusClass" value="NXcollection"/>
		<property name="childNodes">
			<list>
				<bean class="org.eclipse.scanning.device.ScannableField">
                	<property name="name" value="x"/>
                    <property name="scannableName" value="psx"/>
          	    </bean>
				<bean class="org.eclipse.scanning.device.ScannableField">
                	<property name="name" value="y"/>
                    <property name="scannableName" value="psy"/>
          	    </bean>		
			</list>
		</property>
	</bean>

</beans>
