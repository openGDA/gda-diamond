<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<!-- KB Mirror (M4) Strain Gauges -->
	<bean id="m4bend1g" class="gda.device.monitor.EpicsMonitor">
		<property name="pvName" value="BL06I-OP-KBM-01:HFM:USG:POLLVALUE" />
		<property name="local" value="true"/>
	</bean>
	<bean id="m4bend2g" class="gda.device.monitor.EpicsMonitor">
		<property name="pvName" value="BL06I-OP-KBM-01:HFM:DSG:POLLVALUE" />
		<property name="local" value="true"/>
	</bean>

	<!-- KB Mirror (M4/M5) Motors -->
	<!-- KB Mirrors M4 (HFM) -->
	<bean id="MotorHFMX_M4" class="gda.device.motor.EpicsMotor">
		<property name="deviceName" value="HFM.X" />
		<property name="local" value="true"/>
	</bean>

	<bean id="MotorHFMPitch_M4" class="gda.device.motor.EpicsMotor">
		<property name="deviceName" value="HFM.PITCH" />
		<property name="local" value="true"/>
	</bean>

	<bean id="MotorHFMFinePitch_M4" class="gda.device.motor.EpicsMotor">
		<property name="deviceName" value="M4.FPITCH" />
		<property name="local" value="true"/>
	</bean>

	<bean id="MotorHFMBender1_M4" class="gda.device.motor.EpicsMotor">
		<property name="deviceName" value="HFM.BEND1" />
		<property name="local" value="true"/>
	</bean>

	<bean id="MotorHFMBender2_M4" class="gda.device.motor.EpicsMotor">
		<property name="deviceName" value="HFM.BEND2" />
		<property name="local" value="true"/>
	</bean>

	<bean id="MotorHFMRoll_M4" class="gda.device.motor.EpicsMotor">
		<property name="deviceName" value="HFM.ROLL" />
		<property name="local" value="true"/>
	</bean>

	<!-- AD hardware -->

	<!-- Standard Area Detector plugins -->

	<bean id="m4cam1AD_cam" class="gda.spring.V17ADBaseFactoryBean">
		<property name="prefix" value="BL06I-EA-PHDGN-03:CAM:" />
	</bean>

	<bean id="m4cam1AD_arr" class="gda.spring.V17NDArrayFactoryBean">
		<property name="prefix" value="BL06I-EA-PHDGN-03:ARR:" />
	</bean>

	<bean id="m4cam1AD_stat" class="gda.spring.V17NDStatsFactoryBean">
		<property name="prefix" value="BL06I-EA-PHDGN-03:STAT:" />
	</bean>

	<bean id="m4cam1AD_roi" class="gda.spring.V17NDROIFactoryBean">
		<property name="prefix" value="BL06I-EA-PHDGN-03:ROI:" />
	</bean>

	<bean id="m4cam1AD_mjpg" class="gda.spring.V17FfmpegStreamFactoryBean">
		<property name="prefix" value="BL06I-EA-PHDGN-03:MJPG:" />
	</bean>

	<bean id="m4cam1AD_proc" class="gda.spring.V17NDProcessFactoryBean">
		<property name="prefix" value="BL06I-EA-PHDGN-03:PROC:" />
	</bean>

	<!-- Extended Area Detector plugins -->

	<!-- None -->

	<!-- Area Detector Filewriters -->

	<bean id="m4cam1_NDFileTiff" class="gda.spring.V17NDFileFactoryBean">
		<property name="prefix" value="BL06I-EA-PHDGN-03:TIFF:" />
		<property name="resetToInitialValues" value="false" />
	</bean>

	<bean id="m4cam1_NDFileHDF5" class="gda.spring.V17NDFileHDF5FactoryBean">
		<property name="ndFileImpl">
			<bean class="gda.spring.V17NDFileFactoryBean">
				<property name="prefix" value="BL06I-EA-PHDGN-03:HDF5:" />
				<property name="resetToInitialValues" value="false" />
			</bean>
		</property>
	</bean>

	<!-- NXDetector collection strategies -->

	<!-- SingleExposureStandard(ADBase adBase, double readoutTime)
				Negative readoutTime disables AcquirePeriod
	 -->
	<bean id="m4cam1_SingleExposureStandardCollectionStrategy"
		class="gda.device.detector.addetector.triggering.SingleExposureStandard">
		<constructor-arg ref="m4cam1AD_cam" />
		<constructor-arg value="-1" />
	</bean>

	<!-- NXDetector file writers -->

	<bean id="m4cam1_hdf5_MultipleImagesPerHDF5FileWriter"
			class="gda.device.detector.nxdetector.plugin.areadetector.filewriter.MultipleImagesPerHDF5FileWriter">
		<property name="ndFileHDF5" ref="m4cam1_NDFileHDF5" />
		<property name="fileTemplate" value="%s%s%05d.hdf5" />
		<property name="filePathTemplate" value="$datadir$" />
		<property name="fileNameTemplate" value="$scan$-m4cam1" />
		<property name="fileNumberAtScanStart" value="-1" />
		<property name="setChunking" value="false" />
		<property name="lazyOpen" value="true" />
	</bean>

	<!-- SingleImagePerFileWriter(String detectorName)
	 -->
	<bean id="m4cam1_tiff_SingleImagePerFileWriter"
			class="gda.device.detector.nxdetector.plugin.areadetector.filewriter.SingleImagePerFileWriter">
		<constructor-arg value="m4cam1" />
		<property name="ndFile" ref="m4cam1_NDFileTiff" />
		<property name="keyNameForMetadataPathTemplate" value="m4cam1_path_template" />
	</bean>

	<!-- NXDetectors -->

	<bean id="m4cam1" class="gda.device.detector.NXDetector">
		<property name="name" value="m4cam1" />
		<property name="collectionStrategy" ref="m4cam1_SingleExposureStandardCollectionStrategy" />
		<property name="additionalPluginList">
			<list>
				<ref bean="m4cam1_hdf5_MultipleImagesPerHDF5FileWriter" />
				<ref bean="m4cam1_tiff_SingleImagePerFileWriter" />
			</list>
		</property>
	</bean>

</beans>
