<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans.xsd">

	<!-- Area detector camera -->
	<bean id="pcoPlotServerRoiProvider" class="gda.device.detector.nxdetector.roi.PlotServerROISelectionProvider">
		<constructor-arg value="PCO" />
		<constructor-arg value="6" />
	</bean>

	<bean id="pcoCamBase" class="gda.spring.V17ADBaseFactoryBean">
		<property name="prefix" value="BL06I-EA-DET-01:CAM:" />
	</bean>

	<bean id="pcocontroller" class="gda.device.detector.pco.PCOParameters" init-method="afterPropertiesSet">
		<property name="pvName" value="BL06I-EA-DET-01:CAM:"/>
		<property name="areaDetector" ref="pcoCamBase"/>
	</bean>
	
	<bean id="pcoCollectionStrategy" class="gda.device.detector.pco.decorators.PCOADCModeDecorator">
		<property name="restoreADCMode" value="true"/>
		<property name="adcMode" value="0"/>
		<property name="pcocontroller" ref="pcocontroller"/>
		<property name="decoratee">
			<bean class="gda.device.detector.pco.decorators.PCOConfigureAcquireTimeAcquirePeriodDecorator">
				<property name="restoreAcquireTime" value="true" />
				<property name="restoreAcquirePeriod" value="true"/>
				<property name="acquiringDeadtime" value="0.1"/>
				<property name="decoratee">
					<bean class="gda.device.detector.addetector.collectionstrategy.SingleImageModeDecorator">
						<property name="restoreNumImagesAndImageMode" value="true"/>
						<property name="decoratee">
							<bean class="gda.device.detector.pco.decorators.PCOSoftwareTriggerModeDecorator">
								<property name="decoratee">
									<bean class="gda.device.detector.pco.decorators.PCOSoftwareStartStop">
										<property name="adBase" ref="pcoCamBase" />
										<property name="pcocontroller" ref="pcocontroller"/>
										<property name="restoreAcquireState" value="true"/>
									</bean>
								</property>
							</bean>
						</property>
					</bean>
				</property>
			</bean>
		</property>
	</bean>
	
	<bean id="pcoRoiStats1" class="gda.device.detector.nxdetector.plugin.areadetector.ADRoiStatsPairFactory">
		<property name="pluginName" value="roistats1" />
		<property name="baseRoiPVName" value="BL06I-EA-DET-01:ROI1:" />
		<property name="baseStatsPVName" value="BL06I-EA-DET-01:STAT1:" />
		<property name="roiInputNdArrayPort" value="pco.cam" />
		<property name="enabledBasicStats" value="Total" />
		<property name="oneTimeSeriesCollectionPerLine" value="false" />
		<property name="roiProvider">
			<bean class="gda.device.detector.nxdetector.roi.RectangularIntegerROIIndexer">
				<constructor-arg ref="pcoPlotServerRoiProvider" />
				<constructor-arg value="0" />
			</bean>
		</property>
	</bean>

	<bean id="pcoRoiStats2" class="gda.device.detector.nxdetector.plugin.areadetector.ADRoiStatsPairFactory">
		<property name="pluginName" value="roistats2" />
		<property name="baseRoiPVName" value="BL06I-EA-DET-01:ROI2:" />
		<property name="baseStatsPVName" value="BL06I-EA-DET-01:STAT2:" />
		<property name="roiInputNdArrayPort" value="pco.cam" />
		<property name="enabledBasicStats" value="Total" />
		<property name="oneTimeSeriesCollectionPerLine" value="false" />
		<property name="roiProvider">
			<bean class="gda.device.detector.nxdetector.roi.RectangularIntegerROIIndexer">
				<constructor-arg ref="pcoPlotServerRoiProvider" />
				<constructor-arg value="1" />
			</bean>
		</property>
	</bean>

	<bean id="pcoRoiStats3" class="gda.device.detector.nxdetector.plugin.areadetector.ADRoiStatsPairFactory">
		<property name="pluginName" value="roistats3" />
		<property name="baseRoiPVName" value="BL06I-EA-DET-01:ROI3:" />
		<property name="baseStatsPVName" value="BL06I-EA-DET-01:STAT3:" />
		<property name="roiInputNdArrayPort" value="pco.cam" />
		<property name="enabledBasicStats" value="Total" />
		<property name="oneTimeSeriesCollectionPerLine" value="false" />
		<property name="roiProvider">
			<bean class="gda.device.detector.nxdetector.roi.RectangularIntegerROIIndexer">
				<constructor-arg ref="pcoPlotServerRoiProvider" />
				<constructor-arg value="2" />
			</bean>
		</property>
	</bean>

	<bean id="pcoRoiStats4" class="gda.device.detector.nxdetector.plugin.areadetector.ADRoiStatsPairFactory">
		<property name="pluginName" value="roistats4" />
		<property name="baseRoiPVName" value="BL06I-EA-DET-01:ROI4:" />
		<property name="baseStatsPVName" value="BL06I-EA-DET-01:STAT4:" />
		<property name="roiInputNdArrayPort" value="pco.cam" />
		<property name="enabledBasicStats" value="Total" />
		<property name="oneTimeSeriesCollectionPerLine" value="false" />
		<property name="roiProvider">
			<bean class="gda.device.detector.nxdetector.roi.RectangularIntegerROIIndexer">
				<constructor-arg ref="pcoPlotServerRoiProvider" />
				<constructor-arg value="3" />
			</bean>
		</property>
	</bean>

	<bean id="pcoRoiStats5" class="gda.device.detector.nxdetector.plugin.areadetector.ADRoiStatsPairFactory">
		<property name="pluginName" value="roistats5" />
		<property name="baseRoiPVName" value="BL06I-EA-DET-01:ROI5:" />
		<property name="baseStatsPVName" value="BL06I-EA-DET-01:STAT5:" />
		<property name="roiInputNdArrayPort" value="pco.cam" />
		<property name="enabledBasicStats" value="Total" />
		<property name="oneTimeSeriesCollectionPerLine" value="false" />
		<property name="roiProvider">
			<bean class="gda.device.detector.nxdetector.roi.RectangularIntegerROIIndexer">
				<constructor-arg ref="pcoPlotServerRoiProvider" />
				<constructor-arg value="4" />
			</bean>
		</property>
	</bean>

	<bean id="pcoRoiStats6" class="gda.device.detector.nxdetector.plugin.areadetector.ADRoiStatsPairFactory">
		<property name="pluginName" value="roistats6" />
		<property name="baseRoiPVName" value="BL06I-EA-DET-01:ROI6:" />
		<property name="baseStatsPVName" value="BL06I-EA-DET-01:STAT6:" />
		<property name="roiInputNdArrayPort" value="pco.cam" />
		<property name="enabledBasicStats" value="Total" />
		<property name="oneTimeSeriesCollectionPerLine" value="false" />
		<property name="roiProvider">
			<bean class="gda.device.detector.nxdetector.roi.RectangularIntegerROIIndexer">
				<constructor-arg ref="pcoPlotServerRoiProvider" />
				<constructor-arg value="5" />
			</bean>
		</property>
	</bean>

	<!-- detector 'pco' default to write HDF file -->
	<bean id="abstractHdf5FilewriternNochunking" class="gda.device.detector.addetector.filewriter.MultipleImagesPerHDF5FileWriter" abstract="true">
		<property name="filePathTemplate" value="$datadir$" />
		<property name="fileTemplate" value="%s%s-%d.hdf" />
		<property name="fileNumberAtScanStart" value="1" />
		<property name="setFileNameAndNumber" value="true" />
		<property name="rowChunks" value="0" />
		<property name="colChunks" value="0" />
		<property name="framesChunks" value="1024" />
		<property name="framesFlush" value="0" />
		<property name="lazyOpen" value="true" />
		<property name="blocking" value="false" />
		<property name="pathErrorSuppressed" value="true" />
	</bean>
	<bean id="pcoHdf5Filewriter" parent="abstractHdf5FilewriternNochunking">
		<property name="fileNameTemplate" value="pco"/>
		<property name="ndFileHDF5">
			<bean class="gda.spring.V17NDFileHDF5FactoryBean">
				<property name="ndFileImpl">
					<bean class="gda.spring.V17NDFileFactoryBean">
						<property name="prefix" value="BL06I-EA-DET-01:HDF5:" />
						<property name="resetToInitialValues" value="false" />
						<property name="filePathConverter">
							<bean class="uk.ac.gda.util.UnixToWindowsFilePathConverter">
								<property name="unixSubString" value="/dls/i06/data" />
								<property name="windowsSubString" value="x:\data" />
							</bean>
						</property>
					</bean>
				</property>
			</bean>
		</property>
	</bean>
 	<bean id="pco" class="gda.device.detector.NXDetector">
		<property name="name" value="pco" />
		<property name="collectionStrategy" ref="pcoCollectionStrategy" />
		<property name="additionalPluginList">
			<list>
				<ref bean="pcoRoiStats1" />
				<ref bean="pcoRoiStats2" />
				<ref bean="pcoRoiStats3" />
				<ref bean="pcoRoiStats4" />
				<ref bean="pcoRoiStats5" />
				<ref bean="pcoRoiStats6" />
				<ref bean="pcoHdf5Filewriter" />
			</list>
		</property>
	</bean>

	<bean id="pco_tiffile" class="gda.device.detector.areadetector.v17.impl.NDFileImpl">
		<property name="basePVName" value="BL06I-EA-DET-01:TIFF:" />
		<property name="pluginBase">
			<bean class="gda.device.detector.areadetector.v17.impl.NDPluginBaseImpl">
				<property name="basePVName" value="BL06I-EA-DET-01:TIFF:" />
			</bean>
		</property>
		<property name="resetToInitialValues" value="false" />
		<property name="filePathConverter">
			<bean class="uk.ac.gda.util.UnixToWindowsFilePathConverter">
				<property name="unixSubString" value="/dls/i06/data" />
				<property name="windowsSubString" value="x:\data" />
			</bean>
		</property>
	</bean>
	<!-- detector 'pcotif' default to write TIFF file during scan -->
	<!-- SingleImagePerFileWriter(String detectorName)	 -->
	<bean id="pco_nxfilewriter_for_scans" class="gda.device.detector.addetector.filewriter.SingleImagePerFileWriter">
		<constructor-arg value="pco" />
		<property name="ndFile" ref="pco_tiffile" />
		<property name="keyNameForMetadataPathTemplate" value="pco_path_template" />
		<property name="fileTemplate" value="%s%s_%05d.tif"/>
		<property name="filePathTemplate" value="$datadir$/$scan$_PCOImage"/>
		<property name="fileNameTemplate" value="pco"/>
		<property name="fileNumberAtScanStart" value="1"/>
	</bean>
 	<bean id="pcotif" class="gda.device.detector.NXDetector">
		<property name="name" value="pcotif" />
		<property name="collectionStrategy" ref="pcoCollectionStrategy" />
		<property name="additionalPluginList">
			<list>
				<ref bean="pcoRoiStats1" />
				<ref bean="pcoRoiStats2" />
				<ref bean="pcoRoiStats3" />
				<ref bean="pcoRoiStats4" />
				<ref bean="pcoRoiStats5" />
				<ref bean="pcoRoiStats6" />
				<ref bean="pco_nxfilewriter_for_scans" />
			</list>
		</property>
	</bean>
	<!-- detector 'pcosnap' is used to get a snapshot of the PCO detector.Data stored in $datadir$/snapped-data/ -->
	<!-- SingleImagePerFileWriterWithNumTracker(String detectorName)	 -->
	<bean id="pco_nxfilewriter_for_snaps" class="gda.device.detector.addetector.filewriter.SingleImagePerFileWriterWithNumTracker">
		<constructor-arg value="pco" />
		<property name="ndFile" ref="pco_tiffile" />
		<property name="numTrackerExtension" value="pcosnaps" />
		<property name="keyNameForMetadataPathTemplate" value="pco_path_template" />
	</bean>
 	<bean id="pcosnap" class="gda.device.detector.NXDetector">
		<property name="name" value="pcosnap" />
		<property name="collectionStrategy" ref="pcoCollectionStrategy" />
		<property name="additionalPluginList">
			<list>
				<ref bean="pcoRoiStats1" />
				<ref bean="pcoRoiStats2" />
				<ref bean="pcoRoiStats3" />
				<ref bean="pcoRoiStats4" />
				<ref bean="pcoRoiStats5" />
				<ref bean="pcoRoiStats6" />
				<ref bean="pco_nxfilewriter_for_snaps" />
			</list>
		</property>
	</bean>

</beans>
