<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<!--   ============================== Access control for PGM   ==============================  -->
	<!-- PEEM=0 means PEEM Line has control of PGM; BRANCHLINE=1 means Branchline has control of PGM --> 	
	<bean id="peemena" class="gda.epics.AccessControl">
		<property name="accessControlPvName" value="BL06I-OP-PGM-01:CONTROLLER" />
		<property name="enableValue" value="0" /> 
		<property name="disableValue" value="1" />
	</bean>
	
	<!-- Plane Grating Monochromator Energy is Guarded -->
	<bean id="MotorEnergy_PGM" class="gda.device.motor.EpicsMotor">
		<property name="deviceName" value="PGM.EN" />
		<property name="accessControl" ref="peemena" />
	</bean>


</beans>
