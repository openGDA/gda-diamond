<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="PGMENCODERS" class="gda.device.scannable.scannablegroup.ScannableGroup">
		<property name="groupMembers">
			<list>
				<ref bean="pgmmenc1" />
				<ref bean="pgmmenc2" />
				<ref bean="pgmmenc3" />
				<ref bean="pgmmenc4" />
				<ref bean="pgmgenc1" />
				<ref bean="pgmgenc2" />
				<ref bean="pgmgenc3" />
			</list>
		</property>
		<property name="protectionLevel" value="0" />
		<property name="local" value="true"/>
	</bean>
	
	<bean id="PGMSETTINGS" class="gda.device.scannable.scannablegroup.ScannableGroup">
		<property name="groupMembers">
			<list>
				<ref bean="cff" />
				<ref bean="pgmmo" />
				<ref bean="pgmgo" />
			</list>
		</property>
		<property name="protectionLevel" value="0" />
		<property name="local" value="true"/>
	</bean>
	<!-- Plane Grating Monochromator (PGM, M2) -->
	<bean id="pgmenergy" class="gda.device.scannable.ScannableMotor">
		<property name="motor" ref="MotorEnergy_PGM_proxy" />
		<property name="protectionLevel" value="0" />
		<property name="initialUserUnits" value="eV" />
		<property name="hardwareUnitString" value="eV" />
	</bean>
	<bean id="pgmmx" class="gda.device.scannable.ScannableMotor">
		<property name="motor" ref="MotorXMirror_PGM_proxy" />
		<property name="protectionLevel" value="0" />
		<property name="initialUserUnits" value="mm" />
		<property name="hardwareUnitString" value="mm" />
	</bean>
	<bean id="pgmgx" class="gda.device.scannable.ScannableMotor">
		<property name="motor" ref="MotorXGrating_PGM_proxy" />
		<property name="protectionLevel" value="0" />
		<property name="initialUserUnits" value="mm" />
		<property name="hardwareUnitString" value="mm" />
	</bean>
	<bean id="pgmpitch" class="gda.device.scannable.ScannableMotor">
		<property name="motor" ref="MotorPitchMirror_PGM_proxy" />
		<property name="protectionLevel" value="0" />
		<property name="initialUserUnits" value="Deg" />
		<property name="hardwareUnitString" value="Deg" />
	</bean>
	<bean id="pgmgratpitch" class="gda.device.scannable.ScannableMotor">
		<property name="motor" ref="MotorPitchGrating_PGM_proxy" />
		<property name="protectionLevel" value="0" />
		<property name="initialUserUnits" value="Deg" />
		<property name="hardwareUnitString" value="Deg" />
	</bean>
	<bean id="PGM" class="gda.device.scannable.scannablegroup.ScannableGroup">
		<property name="groupMembers">
			<list>
				<ref bean="pgmenergy" />
				<ref bean="pgmmx" />
				<ref bean="pgmgx" />
				<ref bean="pgmpitch" />
				<ref bean="pgmgratpitch" />
				
				<ref bean="cff" />
				<ref bean="pgmmo" />
				<ref bean="pgmgo" />
				
				<ref bean="pgmmenc1" />
				<ref bean="pgmmenc2" />
				<ref bean="pgmmenc3" />
				<ref bean="pgmmenc4" />
				<ref bean="pgmgenc1" />
				<ref bean="pgmgenc2" />
				<ref bean="pgmgenc3" />
			</list>
		</property>
		<property name="protectionLevel" value="0" />
		<property name="local" value="true"/>
	</bean>

</beans>
