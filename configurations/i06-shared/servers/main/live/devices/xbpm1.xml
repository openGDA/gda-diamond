<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<!-- X-Ray Beam Position Monitor in the Ring -->
	<bean id="xbpm1x" class="gda.device.monitor.EpicsMonitor">
		<property name="pvName" value="FE06I-DI-PBPM-01:BEAMX" />
		<property name="local" value="true"/>
	</bean>

	<bean id="xbpm1y" class="gda.device.monitor.EpicsMonitor">
		<property name="pvName" value="FE06I-DI-PBPM-01:BEAMY" />
		<property name="local" value="true"/>
	</bean>
	
	<bean id="xbpm1anglex" class="gda.device.monitor.EpicsMonitor">
		<property name="pvName" value="FE06I-DI-BEAM-01:RM:ANGLEX" />
		<property name="local" value="true"/>
	</bean>
	
	<bean id="xbpm1angley" class="gda.device.monitor.EpicsMonitor">
		<property name="pvName" value="FE06I-DI-BEAM-01:RM:ANGLEY" />
		<property name="local" value="true"/>
	</bean>
	
	
	<!-- FE Photon Beam Position Monitor XPBM1 -->
	<bean id="pm1a" class="gda.device.monitor.EpicsMonitor">
		<property name="deviceName" value="PBPM1.BLADEA" />
		<property name="local" value="true"/>
	</bean>

	<bean id="pm1b" class="gda.device.monitor.EpicsMonitor">
		<property name="deviceName" value="PBPM1.BLADEB" />
		<property name="local" value="true"/>
	</bean>

	<bean id="pm1c" class="gda.device.monitor.EpicsMonitor">
		<property name="deviceName" value="PBPM1.BLADEC" />
		<property name="local" value="true"/>
	</bean>

	<bean id="pm1d" class="gda.device.monitor.EpicsMonitor">
		<property name="deviceName" value="PBPM1.BLADED" />
		<property name="local" value="true"/>
	</bean>

	<bean id="pm1x" class="gda.device.monitor.EpicsMonitor">
		<property name="deviceName" value="PBPM1.X" />
		<property name="local" value="true"/>
	</bean>

	<bean id="pm1y" class="gda.device.monitor.EpicsMonitor">
		<property name="deviceName" value="PBPM1.Y" />
		<property name="local" value="true"/>
	</bean>

	<bean id="pm1xabs" class="gda.device.monitor.EpicsMonitor">
		<property name="deviceName" value="PBPM1.XABS" />
		<property name="local" value="true"/>
	</bean>

	<bean id="pm1yabs" class="gda.device.monitor.EpicsMonitor">
		<property name="deviceName" value="PBPM1.YABS" />
		<property name="local" value="true"/>
	</bean>
	
</beans>
