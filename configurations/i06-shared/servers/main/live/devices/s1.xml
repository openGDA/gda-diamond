<?xml version='1.0' encoding='UTF-8'?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<!-- Primary Slits S1 Motors -->
	<bean id="MotorXPos_S1" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL06I-AL-SLITS-01:X:POS" />
	</bean>

	<bean id="MotorXNeg_S1" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL06I-AL-SLITS-01:X:NEG" />
	</bean>

	<bean id="MotorYPos_S1" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL06I-AL-SLITS-01:Y:POS" />
	</bean>

	<bean id="MotorYNeg_S1" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL06I-AL-SLITS-01:Y:NEG" />
	</bean>

	<bean id="MotorXSize_S1" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL06I-AL-SLITS-01:X:SIZE" />
	</bean>

	<bean id="MotorXCentre_S1" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL06I-AL-SLITS-01:X:CENTER" />
	</bean>

	<bean id="MotorYSize_S1" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL06I-AL-SLITS-01:Y:SIZE" />
	</bean>

	<bean id="MotorYCentre_S1" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL06I-AL-SLITS-01:Y:CENTER" />
	</bean>

</beans>