		<property name="local" value="true"/>
	</bean>

	<bean id="MotorPitch_M1" class="gda.device.motor.EpicsMotor">
		<property name="deviceName" value="M1.PITCH" />
		<property name="local" value="true"/>
	</bean>

	<bean id="MotorRoll_M1" class="gda.device.motor.EpicsMotor">
