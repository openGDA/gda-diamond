<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<!-- LD1 motor-->
	<bean id="lsm1_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL06I-OP-SM-01:MTR" />
	</bean>
	<!-- Area detector camera -->
	<bean id="lsm1cam_adbase" class="gda.spring.V17ADBaseFactoryBean">
		<property name="prefix" value="BL06I-OP-SM-01:DCAM1:CAM:" />
	</bean>
	<bean id="lsm1cam_stats" class="gda.device.detector.areadetector.v17.impl.NDStatsImpl">
		<property name="basePVName" value="BL06I-OP-SM-01:DCAM1:STAT:" />
		<property name="pluginBase">
			<bean class="gda.device.detector.areadetector.v17.impl.NDPluginBaseImpl">
				<property name="basePVName" value="BL06I-OP-SM-01:DCAM1:STAT:" />
				<property name="initialArrayPort" value="LSM1.DCAM1.CAM" />
			</bean>
		</property>
	</bean>
	<bean id="lsm1cam_ndarray" class="gda.device.detector.areadetector.v17.impl.NDArrayImpl">
		<property name="basePVName" value="BL06I-OP-SM-01:DCAM1:ARR:" />
		<property name="pluginBase">
			<bean class="gda.device.detector.areadetector.v17.impl.NDPluginBaseImpl">
				<property name="basePVName" value="BL06I-OP-SM-01:DCAM1:ARR:" />
				<property name="initialArrayPort" value="LSM1.DCAM1.CAM" />
			</bean>
		</property>
	</bean>
	<bean id="lsm1cam_tifffile" class="gda.device.detector.areadetector.v17.impl.NDFileImpl">
		<property name="basePVName" value="BL06I-OP-SM-01:DCAM1:TIFF:" />
		<property name="pluginBase">
			<bean class="gda.device.detector.areadetector.v17.impl.NDPluginBaseImpl">
				<property name="basePVName" value="BL06I-OP-SM-01:DCAM1:TIFF:" />
				<property name="initialArrayPort" value="LSM1.DCAM1.CAM" />
			</bean>
		</property>
		<!-- These arguments are here to please Spring -->
		<property name="initialAutoSave" value="Not hooked up to anything!" />
		<property name="initialAutoIncrement" value="Not hooked up to anything!" />
		<property name="initialWriteMode" value="0" />
		<property name="initialNumCapture" value="1" />
		<property name="initialFileName" value="lsm1cam" />
		<property name="initialFileTemplate" value="%s%s-%d.tiff" />
	</bean>
	<bean id="lsm1cam_ndfile" class="gda.device.detector.areadetector.v17.impl.NDFileImpl">
		<property name="basePVName" value="BL06I-OP-SM-01:DCAM1:HDF5:" />
		<property name="pluginBase">
			<bean class="gda.device.detector.areadetector.v17.impl.NDPluginBaseImpl">
				<property name="basePVName" value="BL06I-OP-SM-01:DCAM1:HDF5:" />
				<property name="initialArrayPort" value="LSM1.DCAM1.CAM" />
			</bean>
		</property>
		<!-- These arguments are here to please Spring -->
		<property name="initialAutoSave" value="Not hooke2 up to anything!" />
		<property name="initialAutoIncrement" value="Not hooked up to anything!" />
		<property name="initialWriteMode" value="0" />
		<property name="initialNumCapture" value="1" />
		<property name="initialFileName" value="lsm1cam" />
		<property name="initialFileTemplate" value="%s%s-%d.hdf5" />
	</bean>
	<bean id="lsm1cam_hdf5" class="gda.device.detector.areadetector.v17.impl.NDFileHDF5Impl">
		<property name="basePVName" value="BL06I-OP-SM-01:DCAM1:HDF5:" />
		<property name="file" ref="lsm1cam_ndfile" />
	</bean>

	<bean id="lsm1CollectionStrategy"	class="gda.device.detector.addetector.collectionstrategy.ConfigureAcquireTimeDecorator">
		<property name="restoreAcquireTime" value="true" />
		<property name="decoratee">
			<bean class="gda.device.detector.addetector.collectionstrategy.SingleImageModeDecorator">
				<property name="restoreNumImagesAndImageMode" value="true"/>
				<property name="decoratee">
					<bean class="gda.device.detector.addetector.collectionstrategy.InternalTriggerModeDecorator">
						<property name="decoratee">
							<bean class="gda.device.detector.addetector.collectionstrategy.SoftwareStartStop">
								<property name="adBase" ref="lsm1cam_adbase" />
								<property name="restoreAcquireState" value="true"/>
							</bean>
						</property>
					</bean>
				</property>
			</bean>
		</property>
	</bean>	
	<bean id="lsm1Hdf5Filewriter" class="gda.device.detector.addetector.filewriter.MultipleImagesPerHDF5FileWriter">
		<property name="ndFileHDF5" ref="lsm1cam_hdf5"/>
		<property name="fileNameTemplate" value="lsm1"/>
		<property name="filePathTemplate" value="$datadir$" />
		<property name="fileTemplate" value="%s%s-%d.hdf" />
		<property name="fileNumberAtScanStart" value="-1" />
		<property name="setFileNameAndNumber" value="true" />
		<property name="rowChunks" value="0" />
		<property name="colChunks" value="0" />
		<property name="framesChunks" value="1" />
		<property name="framesFlush" value="1" />
		<property name="lazyOpen" value="true" />
		<property name="blocking" value="false" />
		<property name="pathErrorSuppressed" value="true" />
		<property name="ndArrayPortVal" value="LSM1.DCAM1.CAM"/>
	</bean>
	<!-- TIFF plugin - SingleImagePerFileWriter(String detectorName), one tiff file per scan data point	 -->
	<bean id="lsm1TiffFileWriter" class="gda.device.detector.addetector.filewriter.SingleImagePerFileWriter">
		<property name="ndFile" ref="lsm1cam_tifffile"/>
		<property name="fileNameTemplate" value="lsm1"/>
		<property name="filePathTemplate" value="$datadir$/$scan$-d1-files" />
		<property name="fileTemplate" value="%s%s-%d.tiff" />
		<property name="fileNumberAtScanStart" value="-1" />
		<property name="setFileNameAndNumber" value="true" />
		<property name="blocking" value="false" />
		<property name="pathErrorSuppressed" value="true" />
		<property name="keyNameForMetadataPathTemplate" value="pixis_path_template" />
		<property name="ndArrayPortVal" value="LSM1.DCAM1.CAM"/>
	</bean>

	<!-- The Object which gets the ROIs from the client over RMI -->
	<bean id="lsm1_roi" class="gda.device.detector.nxdetector.roi.LiveStreamROIProvider" /> <!-- Make one per camera -->
	<!-- Export it over RMI so the client can use it -->
	<bean class="uk.ac.gda.remoting.server.GdaRmiServiceExporter">
	    <property name="serviceName" value="gda/lsm1Roi" />
	    <property name="service" ref="lsm1_roi" />
	    <property name="serviceInterface" value="gda.device.detector.nxdetector.roi.RemoteRectangularROIsProvider" />
	</bean>	
	<bean id="lsm1_RoiStats1" class="gda.device.detector.nxdetector.plugin.areadetector.ADRoiStatsPairFactory">
		<property name="pluginName" value="lsm1_RoiStats1" />
		<property name="baseRoiPVName" value="BL06I-OP-SM-01:DCAM1:ROI1:" />
		<property name="baseStatsPVName" value="BL06I-OP-SM-01:DCAM1:STAT1:" />
		<property name="roiInputNdArrayPort" value="LSM1.DCAM1.CAM" />
		<property name="enabledBasicStats" value="Total" />
		<property name="oneTimeSeriesCollectionPerLine" value="false" />
		<property name="roiProvider">
	        <bean class="gda.device.detector.nxdetector.roi.LiveStreamRoiIndexer">
	            <property name="liveStreamRoiProvider" ref="lsm1_roi" />
	            <property name="index" value="0" /> <!-- Zero based indexing i.e. Region 1 = index 0 -->
	        </bean>
		</property>
		<property name="legacyTSpvs" value="false"/>
	</bean>
	<bean id="lsm1_RoiStats2" class="gda.device.detector.nxdetector.plugin.areadetector.ADRoiStatsPairFactory">
		<property name="pluginName" value="lsm1_RoiStats2" />
		<property name="baseRoiPVName" value="BL06I-OP-SM-01:DCAM1:ROI2:" />
		<property name="baseStatsPVName" value="BL06I-OP-SM-01:DCAM1:STAT2:" />
		<property name="roiInputNdArrayPort" value="LSM1.DCAM1.CAM" />
		<property name="enabledBasicStats" value="Total" />
		<property name="oneTimeSeriesCollectionPerLine" value="false" />
		<property name="roiProvider">
	        <bean class="gda.device.detector.nxdetector.roi.LiveStreamRoiIndexer">
	            <property name="liveStreamRoiProvider" ref="lsm1_roi" />
	            <property name="index" value="1" /> 
	        </bean>
		</property>
		<property name="legacyTSpvs" value="false"/>
	</bean>
	<bean id="lsm1_RoiStats3" class="gda.device.detector.nxdetector.plugin.areadetector.ADRoiStatsPairFactory">
		<property name="pluginName" value="lsm1_RoiStats3" />
		<property name="baseRoiPVName" value="BL06I-OP-SM-01:DCAM1:ROI3:" />
		<property name="baseStatsPVName" value="BL06I-OP-SM-01:DCAM1:STAT3:" />
		<property name="roiInputNdArrayPort" value="LSM1.DCAM1.CAM" />
		<property name="enabledBasicStats" value="Total" />
		<property name="oneTimeSeriesCollectionPerLine" value="false" />
		<property name="roiProvider">
	        <bean class="gda.device.detector.nxdetector.roi.LiveStreamRoiIndexer">
	            <property name="liveStreamRoiProvider" ref="lsm1_roi" />
	            <property name="index" value="2" /> 
	        </bean>
		</property>
		<property name="legacyTSpvs" value="false"/>
	</bean>
	<bean id="lsm1_RoiStats4" class="gda.device.detector.nxdetector.plugin.areadetector.ADRoiStatsPairFactory">
		<property name="pluginName" value="lsm1_RoiStats4" />
		<property name="baseRoiPVName" value="BL06I-OP-SM-01:DCAM1:ROI4:" />
		<property name="baseStatsPVName" value="BL06I-OP-SM-01:DCAM1:STAT4:" />
		<property name="roiInputNdArrayPort" value="LSM1.DCAM1.CAM" />
		<property name="enabledBasicStats" value="Total" />
		<property name="oneTimeSeriesCollectionPerLine" value="false" />
		<property name="roiProvider">
	        <bean class="gda.device.detector.nxdetector.roi.LiveStreamRoiIndexer">
	            <property name="liveStreamRoiProvider" ref="lsm1_roi" />
	            <property name="index" value="3" /> 
	        </bean>
		</property>
		<property name="legacyTSpvs" value="false"/>
	</bean>
	<bean id="lsm1_RoiStats5" class="gda.device.detector.nxdetector.plugin.areadetector.ADRoiStatsPairFactory">
		<property name="pluginName" value="lsm1_RoiStats5" />
		<property name="baseRoiPVName" value="BL06I-OP-SM-01:DCAM1:ROI5:" />
		<property name="baseStatsPVName" value="BL06I-OP-SM-01:DCAM1:STAT5:" />
		<property name="roiInputNdArrayPort" value="CAM" />
		<property name="enabledBasicStats" value="Total" />
		<property name="oneTimeSeriesCollectionPerLine" value="false" />
		<property name="roiProvider">
	        <bean class="gda.device.detector.nxdetector.roi.LiveStreamRoiIndexer">
	            <property name="liveStreamRoiProvider" ref="lsm1_roi" />
	            <property name="index" value="4" /> 
	        </bean>
		</property>
		<property name="legacyTSpvs" value="false"/>
	</bean>
	<bean id="lsm1_RoiStats6" class="gda.device.detector.nxdetector.plugin.areadetector.ADRoiStatsPairFactory">
		<property name="pluginName" value="lsm1_RoiStats6" />
		<property name="baseRoiPVName" value="BL06I-OP-SM-01:DCAM1:ROI6:" />
		<property name="baseStatsPVName" value="BL06I-OP-SM-01:DCAM1:STAT6:" />
		<property name="roiInputNdArrayPort" value="LSM1.DCAM1.CAM" />
		<property name="enabledBasicStats" value="Total" />
		<property name="oneTimeSeriesCollectionPerLine" value="false" />
		<property name="roiProvider">
	        <bean class="gda.device.detector.nxdetector.roi.LiveStreamRoiIndexer">
	            <property name="liveStreamRoiProvider" ref="lsm1_roi" />
	            <property name="index" value="5" /> 
	        </bean>
		</property>
		<property name="legacyTSpvs" value="false"/>
	</bean>

	<!-- NXDetector -->
 	<bean id="lsm1cam" class="gda.device.detector.NXDetector">
		<property name="name" value="lsm1cam" />
		<property name="collectionStrategy" ref="lsm1CollectionStrategy" />
		<property name="additionalPluginList">
			<list>
				<ref bean="lsm1_RoiStats1" />
				<ref bean="lsm1_RoiStats2" />
				<ref bean="lsm1_RoiStats3" />
				<ref bean="lsm1_RoiStats4" />
				<ref bean="lsm1_RoiStats5" />
				<ref bean="lsm1_RoiStats6" />
				<ref bean="lsm1Hdf5Filewriter" />
			</list>
		</property>
	</bean>
	<bean id="lsm1camtiff" class="gda.device.detector.NXDetector">
		<property name="name" value="lsm1camtiff" />
		<property name="collectionStrategy" ref="lsm1CollectionStrategy" />
		<property name="additionalPluginList">
			<list>
				<ref bean="lsm1_RoiStats1" />
				<ref bean="lsm1_RoiStats2" />
				<ref bean="lsm1_RoiStats3" />
				<ref bean="lsm1_RoiStats4" />
				<ref bean="lsm1_RoiStats5" />
				<ref bean="lsm1_RoiStats6" />
				<ref bean="lsm1TiffFileWriter" />
			</list>
		</property>
	</bean>

	<!-- ADDetector used in new scanning -->
	<bean id="lsm1cam_addetector" class="gda.device.detector.addetector.ADDetector">
		<property name="collectionStrategy" ref="lsm1CollectionStrategy"/>
		<property name="adBase" ref="lsm1cam_adbase" />
		<property name="ndFile" ref="lsm1cam_ndfile" /><!-- not used in new scanning -->
		<property name="ndArray" ref="lsm1cam_ndarray" />
		<property name="ndStats" ref="lsm1cam_stats" /><!-- not used in new scanning -->
		<property name="fileWriter" ref="lsm1Hdf5Filewriter" /> <!-- not used in new scanning -->
	</bean>
	

</beans>
