#!/bin/bash

setfacl -R -m default:user:gda:rwx /dls_sw/${BEAMLINE}/software/gda/config/var
setfacl -R -m user:gda:rwx /dls_sw/${BEAMLINE}/software/gda/config/var
setfacl -R -m g:${BEAMLINE}_staff:rwx,d:g:${BEAMLINE}_staff:rwx /dls_sw/${BEAMLINE}/software/gda/config/
setfacl -m d:g:${BEAMLINE}_staff:rwx /dls_sw/${BEAMLINE}/software #give beamline staff permissions to change the softlinks in the software folder 
