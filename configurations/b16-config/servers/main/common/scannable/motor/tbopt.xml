<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

	<bean id="tboptXcoarse" class="gda.device.scannable.ScannableMotor">
		<property name="motor" ref="TBOPTXcoarseMotor" />
	</bean>
	<bean id="tboptZcoarse" class="gda.device.scannable.ScannableMotor">
		<property name="motor" ref="TBOPTZcoarseMotor" />
	</bean>
	<bean id="tboptX" class="gda.device.scannable.ScannableMotor">
		<property name="motor" ref="TBOPTXMotor" />
	</bean>
	<bean id="tboptY" class="gda.device.scannable.ScannableMotor">
		<property name="motor" ref="TBOPTYMotor" />
	</bean>
	<bean id="tboptTheta" class="gda.device.scannable.ScannableMotor">
		<property name="motor" ref="TBOPTThetaMotor" />
	</bean>
	<bean id="tboptPhi" class="gda.device.scannable.ScannableMotor">
		<property name="motor" ref="TBOPTPhiMotor" />
	</bean>
	<bean id="tboptChi" class="gda.device.scannable.ScannableMotor">
		<property name="motor" ref="TBOPTChiMotor" />
	</bean>

	<bean id="tbopt" class="gda.device.scannable.scannablegroup.ScannableGroup">
		<property name="groupMembers">
			<list>
				<ref bean="tboptXcoarse" />
				<ref bean="tboptZcoarse" />
				<ref bean="tboptX" />
				<ref bean="tboptY" />
				<ref bean="tboptTheta" />
				<ref bean="tboptPhi" />
				<ref bean="tboptChi" />
			</list>
		</property>
	</bean>

</beans>
