<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

	<bean id="fcsampX" class="gda.device.scannable.ScannableMotor">
		<property name="motor" ref="DR1SAMPXMotor" />
	</bean>
	<bean id="fcsampY" class="gda.device.scannable.ScannableMotor">
		<property name="motor" ref="DR1SAMPYMotor" />
	</bean>
	<bean id="fcsampZ" class="gda.device.scannable.ScannableMotor">
		<property name="motor" ref="DR1SAMPZMotor" />
	</bean>

	<bean id="fcsamp" class="gda.device.scannable.scannablegroup.ScannableGroup">
		<property name="groupMembers">
			<list>
				<ref bean="fcsampX" />
				<ref bean="fcsampY" />
				<ref bean="fcsampZ" />
			</list>
		</property>
	</bean>

</beans>
