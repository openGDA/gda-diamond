<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

	<bean id="mlmTest" class="gda.device.scannable.ScannableMotor">
		<property name="motor" ref="DMMBragg1Motor" />
		<property name="userUnits" value="rad" />
	</bean>

	<bean id="mlmXtal1Bragg" class="gda.device.scannable.ScannableMotor">
		<property name="motor" ref="DMMBragg1Motor" />
	</bean>
	<bean id="mlmXtal2Bragg" class="gda.device.scannable.ScannableMotor">
		<property name="motor" ref="DMMBragg2Motor" />
	</bean>
	<bean id="mlmXtal2Roll" class="gda.device.scannable.ScannableMotor">
		<property name="motor" ref="DMMRoll2Motor" />
	</bean>
	<bean id="mlmXtal1Y" class="gda.device.scannable.ScannableMotor">
		<property name="motor" ref="DMMY1Motor" />
	</bean>
	<bean id="mlmXtal2Z" class="gda.device.scannable.ScannableMotor">
		<property name="motor" ref="DMMZ2Motor" />
	</bean>
	<bean id="mlmX1" class="gda.device.scannable.ScannableMotor">
		<property name="motor" ref="DMMX1Motor" />
	</bean>
	<bean id="mlmX2" class="gda.device.scannable.ScannableMotor">
		<property name="motor" ref="DMMX2Motor" />
	</bean>
	<bean id="mlmJack1" class="gda.device.scannable.ScannableMotor">
		<property name="motor" ref="DMMJack1Motor" />
	</bean>
	<bean id="mlmJack2" class="gda.device.scannable.ScannableMotor">
		<property name="motor" ref="DMMJack2Motor" />
	</bean>
	<bean id="mlmJack3" class="gda.device.scannable.ScannableMotor">
		<property name="motor" ref="DMMJack3Motor" />
	</bean>
	<bean id="mlmX" class="gda.device.scannable.ScannableMotor">
		<property name="motor" ref="DMMXMotor" />
	</bean>
	<bean id="mlmYaw" class="gda.device.scannable.ScannableMotor">
		<property name="motor" ref="DMMYawMotor" />
	</bean>
	<bean id="mlmBasePitch" class="gda.device.scannable.ScannableMotor">
		<property name="motor" ref="DMMPitchMotor" />
	</bean>
	<bean id="mlmBaseRoll" class="gda.device.scannable.ScannableMotor">
		<property name="motor" ref="DMMRollMotor" />
	</bean>
	<bean id="mlmBaseHeight" class="gda.device.scannable.ScannableMotor">
		<property name="motor" ref="DMMYMotor" />
	</bean>

	<bean id="mlm" class="gda.device.scannable.scannablegroup.ScannableGroup">
		<property name="groupMembers">
			<list>
				<ref bean="mlmXtal1Bragg" />
				<ref bean="mlmXtal2Bragg" />
				<ref bean="mlmXtal2Roll" />
				<ref bean="mlmXtal1Y" />
				<ref bean="mlmXtal2Z" />
				<ref bean="mlmX1" />
				<ref bean="mlmX2" />
				<ref bean="mlmJack1" />
				<ref bean="mlmJack2" />
				<ref bean="mlmJack3" />
				<ref bean="mlmX" />
				<ref bean="mlmYaw" />
				<ref bean="mlmBasePitch" />
				<ref bean="mlmBaseRoll" />
				<ref bean="mlmBaseHeight" />
			</list>
		</property>
	</bean>

	<bean id="RuB4C_Xtal1Bragg_converter" class="gda.util.converters.LookupTableConverterHolder">
		<constructor-arg value="RuB4C_Xtal1Bragg_converter" />
		<constructor-arg value="RuB4C_converter.txt" />
		<constructor-arg value="0" />
		<constructor-arg value="1" />
		<constructor-arg value="StoT" />
	</bean>
	<bean id="RuB4C_Xtal2Bragg_converter" class="gda.util.converters.LookupTableConverterHolder">
		<constructor-arg value="RuB4C_Xtal2Bragg_converter" />
		<constructor-arg value="RuB4C_converter.txt" />
		<constructor-arg value="0" />
		<constructor-arg value="2" />
		<constructor-arg value="StoT" />
	</bean>
	<bean id="RuB4C_Xtal2Z_converter" class="gda.util.converters.LookupTableConverterHolder">
		<constructor-arg value="RuB4C_Xtal2Z_converter" />
		<constructor-arg value="RuB4C_converter.txt" />
		<constructor-arg value="0" />
		<constructor-arg value="3" />
		<constructor-arg value="StoT" />
	</bean>

	<bean id="NiB4C_Xtal1Bragg_converter" class="gda.util.converters.LookupTableConverterHolder">
		<constructor-arg value="NiB4C_Xtal1Bragg_converter" />
		<constructor-arg value="NiB4C_converter.txt" />
		<constructor-arg value="0" />
		<constructor-arg value="1" />
		<constructor-arg value="StoT" />
	</bean>
	<bean id="NiB4C_Xtal2Bragg_converter" class="gda.util.converters.LookupTableConverterHolder" >
		<constructor-arg value="NiB4C_Xtal2Bragg_converter" />
		<constructor-arg value="NiB4C_converter.txt" />
		<constructor-arg value="0" />
		<constructor-arg value="2" />
		<constructor-arg value="StoT" />
	</bean>
	<bean id="NiB4C_Xtal2Z_converter" class="gda.util.converters.LookupTableConverterHolder">
		<constructor-arg value="NiB4C_Xtal2Z_converter" />
		<constructor-arg value="NiB4C_converter.txt" />
		<constructor-arg value="0" />
		<constructor-arg value="3" />
		<constructor-arg value="StoT" />
	</bean>
	<bean id="NiB4C_Xtal2Roll_converter" class="gda.util.converters.LookupTableConverterHolder">
		<constructor-arg value="NiB4C_Xtal2Roll_converter" />
		<constructor-arg value="NiB4C_converter.txt" />
		<constructor-arg value="0" />
		<constructor-arg value="4" />
		<constructor-arg value="StoT" />
	</bean>


	<bean id="RuB4C_Xtal1Bragg" class="gda.device.scannable.ConvertorScannable">
		<property name="scannable" ref="mlmXtal1Bragg" />
		<property name="convertor" ref="RuB4C_Xtal1Bragg_converter" />
		<property name="initialUserUnits" value="keV" />
	</bean>
	<bean id="RuB4C_Xtal2Bragg" class="gda.device.scannable.ConvertorScannable">
		<property name="scannable" ref="mlmXtal2Bragg" />
		<property name="convertor" ref="RuB4C_Xtal2Bragg_converter" />
		<property name="initialUserUnits" value="keV" />
	</bean>
	<bean id="RuB4C_Xtal2Z" class="gda.device.scannable.ConvertorScannable">
		<property name="scannable" ref="mlmXtal2Z" />
		<property name="convertor" ref="RuB4C_Xtal2Z_converter" />
		<property name="initialUserUnits" value="keV" />
	</bean>

	<bean id="NiB4C_Xtal1Bragg" class="gda.device.scannable.ConvertorScannable">
		<property name="scannable" ref="mlmXtal1Bragg" />
		<property name="convertor" ref="NiB4C_Xtal1Bragg_converter" />
		<property name="initialUserUnits" value="keV" />
	</bean>
	<bean id="NiB4C_Xtal2Bragg" class="gda.device.scannable.ConvertorScannable">
		<property name="scannable" ref="mlmXtal2Bragg" />
		<property name="convertor" ref="NiB4C_Xtal2Bragg_converter" />
		<property name="initialUserUnits" value="keV" />
	</bean>
	<bean id="NiB4C_Xtal2Z" class="gda.device.scannable.ConvertorScannable">
		<property name="scannable" ref="mlmXtal2Z" />
		<property name="convertor" ref="NiB4C_Xtal2Z_converter" />
		<property name="initialUserUnits" value="keV" />
	</bean>
	<bean id="NiB4C_Xtal2Roll" class="gda.device.scannable.ConvertorScannable">
		<property name="scannable" ref="mlmXtal2Roll" />
		<property name="convertor" ref="NiB4C_Xtal2Roll_converter" />
		<property name="initialUserUnits" value="keV" />
	</bean>

	<bean id="NiB4C" class="gda.device.scannable.CoupledScannable">
		<property name="scannables">
			<list>
				<ref bean="NiB4C_Xtal1Bragg"/>
				<ref bean="NiB4C_Xtal2Bragg"/>
				<ref bean="NiB4C_Xtal2Z"/>
				<ref bean="NiB4C_Xtal2Roll"/>
			</list>
		</property>
	</bean>
	<bean id="RuB4C" class="gda.device.scannable.CoupledScannable">
		<property name="scannables">
			<list>
				<ref bean="RuB4C_Xtal1Bragg"/>
				<ref bean="RuB4C_Xtal2Bragg"/>
				<ref bean="RuB4C_Xtal2Z"/>
			</list>
		</property>
		<property name="functions">
			<list>
				<bean class="gda.function.IdentityFunction"></bean>
				<bean class="gda.function.IdentityFunction"></bean>
				<bean class="gda.function.IdentityFunction"></bean>
			</list>
		</property>
	</bean>

</beans>
