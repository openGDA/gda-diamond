<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

	<bean id="testdcmBragg_motor" class="gda.device.motor.EpicsMotor">
		<property name="deviceName" value="TESTDCM.BRAGG" />
		<property name="local" value="true" />
	</bean>

	<bean id="testdcmPitch_motor" class="gda.device.motor.EpicsMotor">
		<property name="deviceName" value="TESTDCM.PITCH" />
		<property name="local" value="true" />
	</bean>

	<bean id="testdcmRoll_motor" class="gda.device.motor.EpicsMotor">
		<property name="deviceName" value="TESTDCM.ROLL" />
		<property name="local" value="true" />
	</bean>

	<bean id="testdcmY_motor" class="gda.device.motor.EpicsMotor">
		<property name="deviceName" value="TESTDCM.Y" />
		<property name="local" value="true" />
	</bean>

	<bean id="testdcmEnergy_motor" class="gda.device.motor.EpicsMotor">
		<property name="deviceName" value="TESTDCM.ENERGY" />
		<property name="local" value="true" />
	</bean>

	<bean id="testdcmOffset_motor" class="gda.device.motor.EpicsMotor">
		<property name="deviceName" value="TESTDCM.OFFSET" />
		<property name="local" value="true" />
	</bean>
	
	<bean id="testdcmLambda_motor" class="gda.device.motor.EpicsMotor">
		<property name="deviceName" value="TESTDCM.LAMBDA" />
		<property name="local" value="true" />
	</bean>
	
	<bean id="testdcmBragg" class="gda.device.scannable.ScannableMotor">
		<property name="motor" ref="testdcmBragg_motor" />
	</bean>
	
	<bean id="testdcmPitch" class="gda.device.scannable.ScannableMotor">
		<property name="motor" ref="testdcmPitch_motor" />
	</bean>
		
	<bean id="testdcmRoll" class="gda.device.scannable.ScannableMotor">
		<property name="motor" ref="testdcmRoll_motor" />
	</bean>
		
	<bean id="testdcmEnergy" class="gda.device.scannable.ScannableMotor">
		<property name="motor" ref="testdcmEnergy_motor" />
	</bean>
		
	<bean id="testdcmY" class="gda.device.scannable.ScannableMotor">
		<property name="motor" ref="testdcmY_motor" />
	</bean>
	<bean id="testdcmOffset" class="gda.device.scannable.ScannableMotor">
		<property name="motor" ref="testdcmOffset_motor" />
	</bean>
		
	<bean id="testdcmLambda" class="gda.device.scannable.ScannableMotor">
		<property name="motor" ref="testdcmLambda_motor" />
	</bean>

	<bean id="testdcm" class="gda.device.scannable.scannablegroup.ScannableGroup">
		<property name="groupMembers">
			<list>
				<ref bean="testdcmEnergy" />
				<ref bean="testdcmLambda" />
				<ref bean="testdcmBragg" />
				<ref bean="testdcmPitch" />
				<ref bean="testdcmRoll" />
				<ref bean="testdcmY"/>
				<ref bean="testdcmOffset" />
			</list>
		</property>
	</bean>

</beans>

