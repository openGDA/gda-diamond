<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">
      
      
     <!-- For Kiran --> 
         
	<bean id="ixsx_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="ME05M-MO-MIRR-01:X" />
		<property name="local" value="true"/>
	</bean>
	<bean id="ixsy_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="ME05M-MO-MIRR-01:Y" />
		<property name="local" value="true"/>
	</bean>
	<bean id="ixsz_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="ME05M-MO-MIRR-01:Z" />
		<property name="local" value="true"/>
	</bean>
	<bean id="ixsroll_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="ME05M-MO-MIRR-01:ROLL" />
		<property name="local" value="true"/>
	</bean>
	<bean id="ixspitch_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="ME05M-MO-MIRR-01:PITCH" />
		<property name="local" value="true"/>
	</bean>
	<bean id="ixsyaw_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="ME05M-MO-MIRR-01:YAW" />
		<property name="local" value="true"/>
	</bean>
	
	<bean id="ixsx" class="gda.device.scannable.ScannableMotor">
		<property name="motor" ref="ixsx_motor" />
<!--		<property name="initialUserUnits" value="mm" />-->
	</bean>
	<bean id="ixsy" class="gda.device.scannable.ScannableMotor">
		<property name="motor" ref="ixsy_motor" />
<!--		<property name="initialUserUnits" value="mm" />-->
	</bean>
	<bean id="ixsz" class="gda.device.scannable.ScannableMotor">
		<property name="motor" ref="ixsz_motor" />
<!--		<property name="initialUserUnits" value="mm" />-->
	</bean>
	<bean id="ixsroll" class="gda.device.scannable.ScannableMotor">
		<property name="motor" ref="ixsroll_motor" />
<!--		<property name="initialUserUnits" value="mm" />-->
	</bean>
	<bean id="ixspitch" class="gda.device.scannable.ScannableMotor">
		<property name="motor" ref="ixspitch_motor" />
<!--		<property name="initialUserUnits" value="mm" />-->
	</bean>
	<bean id="ixsyaw" class="gda.device.scannable.ScannableMotor">
		<property name="motor" ref="ixsyaw_motor" />
<!--		<property name="initialUserUnits" value="mm" />-->
	</bean>

	<bean id="ixs" class="gda.device.scannable.scannablegroup.ScannableGroup">
		<property name="groupMembers">
			<list>
				<ref bean="ixsx" />
				<ref bean="ixsy" />
				<ref bean="ixsz" />
				<ref bean="ixsroll" />
				<ref bean="ixspitch" />
				<ref bean="ixsyaw" />
			</list>
		</property>
	</bean>

</beans>
