<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

	<bean id="mtYaw_motor" class="gda.device.motor.EpicsMotor">
		<property name="deviceName" value="TW.YAW" />
		<property name="local" value="true" />
	</bean>

	<bean id="mtY_motor" class="gda.device.motor.EpicsMotor">
		<property name="deviceName" value="TW.Y" />
		<property name="local" value="true" />
	</bean>

	<bean id="mtPitch_motor" class="gda.device.motor.EpicsMotor">
		<property name="deviceName" value="TW.PITCH" />
		<property name="local" value="true" />
	</bean>

	<bean id="mtRoll_motor" class="gda.device.motor.EpicsMotor">
		<property name="deviceName" value="TW.ROLL" />
		<property name="local" value="true" />
	</bean>

	<bean id="mtX_motor" class="gda.device.motor.EpicsMotor">
		<property name="deviceName" value="TW.X" />
		<property name="local" value="true" />
	</bean>

	<bean id="mtZ_motor" class="gda.device.motor.EpicsMotor">
		<property name="deviceName" value="TW.Z" />
		<property name="local" value="true" />
	</bean>

	<bean id="mtXcoarse_motor" class="gda.device.motor.EpicsMotor">
		<property name="deviceName" value="TW.XCOARSE" />
		<property name="local" value="true" />
	</bean>

	<bean id="mtYcoarse_motor" class="gda.device.motor.EpicsMotor">
		<property name="deviceName" value="TW.YCOARSE" />
		<property name="local" value="true" />
	</bean>


	<bean id="mtYaw" class="gda.device.scannable.ScannableMotor">
		<property name="motor" ref="mtYaw_motor" />
	</bean>

	<bean id="mtY" class="gda.device.scannable.ScannableMotor">
		<property name="motor" ref="mtY_motor" />
	</bean>

	<bean id="mtPitch" class="gda.device.scannable.ScannableMotor">
		<property name="motor" ref="mtPitch_motor" />
	</bean>

	<bean id="mtRoll" class="gda.device.scannable.ScannableMotor">
		<property name="motor" ref="mtRoll_motor" />
	</bean>

	<bean id="mtX" class="gda.device.scannable.ScannableMotor">
		<property name="motor" ref="mtX_motor" />
	</bean>

	<bean id="mtZ" class="gda.device.scannable.ScannableMotor">
		<property name="motor" ref="mtZ_motor" />
	</bean>

	<bean id="mtXcoarse" class="gda.device.scannable.ScannableMotor">
		<property name="motor" ref="mtXcoarse_motor" />
	</bean>

	<bean id="mtYcoarse" class="gda.device.scannable.ScannableMotor">
		<property name="motor" ref="mtYcoarse_motor" />
	</bean>


	<bean id="mt" class="gda.device.scannable.scannablegroup.ScannableGroup">
		<property name="groupMembers">
			<list>
				<ref bean="mtX" />
				<ref bean="mtY" />
				<ref bean="mtZ" />
				<ref bean="mtRoll" />
				<ref bean="mtPitch" />
				<ref bean="mtYaw" />
				<ref bean="mtXcoarse" />
				<ref bean="mtYcoarse" />
			</list>
		</property>
	</bean>

</beans>