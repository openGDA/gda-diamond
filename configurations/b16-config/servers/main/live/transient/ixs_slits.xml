	<bean id="brick3mot1_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL16B-MO-BRICK-03:AXIS1" />
	</bean>

	<bean id="brick3mot2_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL16B-MO-BRICK-03:AXIS2" />
	</bean>

	<bean id="brick3mot3_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL16B-MO-BRICK-03:AXIS3" />
	</bean>

	<bean id="brick3mot4_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL16B-MO-BRICK-03:AXIS4" />
	</bean>

	<bean id="brick3mot5_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL16B-MO-BRICK-03:AXIS5" />
	</bean>




	<bean id="ixslitH1" class="gda.device.scannable.ScannableMotor">
		<property name="motor" ref="brick3mot1_motor" />
	</bean>

	<bean id="ixslitH2" class="gda.device.scannable.ScannableMotor">
		<property name="motor" ref="brick3mot2_motor" />
	</bean>

	<bean id="ixslitV1" class="gda.device.scannable.ScannableMotor">
		<property name="motor" ref="brick3mot3_motor" />
	</bean>

	<bean id="ixslitV2" class="gda.device.scannable.ScannableMotor">
		<property name="motor" ref="brick3mot4_motor" />
	</bean>

	<bean id="ixslitDiag" class="gda.device.scannable.ScannableMotor">
		<property name="motor" ref="brick3mot5_motor" />
	</bean>


	<bean id="ixslit" class="gda.device.scannable.scannablegroup.ScannableGroup">
		<property name="groupMembers">
			<list>
				<ref bean="ixslitH1" />
				<ref bean="ixslitH2" />
				<ref bean="ixslitV1" />
				<ref bean="ixslitV2" />
				<ref bean="ixslitDiag" />
			</list>
		</property>
	</bean>

</beans>