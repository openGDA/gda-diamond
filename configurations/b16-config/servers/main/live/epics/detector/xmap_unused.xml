<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

	<!-- This class is available frlom the core and i12 plugin -->
	<bean id="edxdcontroller" class="gda.device.detector.xmap.edxd.EDXDController">
		<property name="epicsDeviceName" value="edxd" />
		<property name="numberOfElements" value="4" />
		<property name="local" value="true" />
	</bean>

	<bean id="xmapcontroller" class="gda.device.detector.xmap.EpicsXmapController">
		<property name="edxdControllerName" ref="edxdcontroller" />
		<property name="local" value="true" />
	</bean>

</beans>