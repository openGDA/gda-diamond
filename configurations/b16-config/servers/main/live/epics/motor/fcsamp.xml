<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

	<bean id="DR1SAMPXMotor" class="gda.device.motor.EpicsMotor">
		<property name="deviceName" value="DR1SAMP.X" />
		<property name="local" value="true" />
	</bean>
	<bean id="DR1SAMPYMotor" class="gda.device.motor.EpicsMotor">
		<property name="deviceName" value="DR1SAMP.Y" />
		<property name="local" value="true" />
	</bean>
	<bean id="DR1SAMPZMotor" class="gda.device.motor.EpicsMotor">
		<property name="deviceName" value="DR1SAMP.Z" />
		<property name="local" value="true" />
	</bean>

</beans>
