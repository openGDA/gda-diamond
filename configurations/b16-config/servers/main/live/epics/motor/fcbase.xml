<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

	<bean id="DR1BASEY1Motor" class="gda.device.motor.EpicsMotor">
		<property name="deviceName" value="DR1BASE.Y1" />
		<property name="local" value="true" />
	</bean>
	<bean id="DR1BASEY2Motor" class="gda.device.motor.EpicsMotor">
		<property name="deviceName" value="DR1BASE.Y2" />
		<property name="local" value="true" />
	</bean>
	<bean id="DR1BASEXMotor" class="gda.device.motor.EpicsMotor">
		<property name="deviceName" value="DR1BASE.X" />
		<property name="local" value="true" />
	</bean>
	<bean id="DR1BASEPitchMotor" class="gda.device.motor.EpicsMotor">
		<property name="deviceName" value="DR1BASE.PITCH" />
		<property name="local" value="true" />
	</bean>
	<bean id="DR1BASEHeightMotor" class="gda.device.motor.EpicsMotor">
		<property name="deviceName" value="DR1BASE.HEIGHT" />
		<property name="local" value="true" />
	</bean>

</beans>
