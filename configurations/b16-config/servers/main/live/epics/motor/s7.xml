<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

	<bean id="S7XCentreMotor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL16B-OP-SLITS-07:X:CENTRE" />
		<property name="local" value="true" />
	</bean>
	<bean id="S7XGapMotor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL16B-OP-SLITS-07:X:GAP" />
		<property name="local" value="true" />
	</bean>
	<bean id="S7YCentreMotor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL16B-OP-SLITS-07:Y:CENTRE" />
		<property name="local" value="true" />
	</bean>
	<bean id="S7YGapMotor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL16B-OP-SLITS-07:Y:GAP" />
		<property name="local" value="true" />
	</bean>

</beans>
