<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">
  	<!-- Note Renamed from roll to pitch at Igor's request! -->
	
	<bean id="kbmPitch1_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL16B-MO-KBM-01:ROLL1" />
	</bean>
	<bean id="kbmPitch2_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL16B-MO-KBM-01:ROLL2" />
	</bean>
	<bean id="kbmT1_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL16B-MO-KBM-01:T1" />
	</bean>
	<bean id="kbmT2_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL16B-MO-KBM-01:T2" />
	</bean>
	<bean id="kbmT3_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL16B-MO-KBM-01:T3" />
	</bean>
	<bean id="kbmT4_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL16B-MO-KBM-01:T4" />
	</bean>
	<bean id="kbmT5_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL16B-MO-KBM-01:T5" />
	</bean>
	<bean id="kbmT6_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL16B-MO-KBM-01:T6" />
	</bean>

	<bean id="kbmPitch1" class="gda.device.scannable.ScannableMotor">
		<property name="motor" ref="kbmPitch1_motor" />
	</bean>
	<bean id="kbmPitch2" class="gda.device.scannable.ScannableMotor">
		<property name="motor" ref="kbmPitch2_motor" />
	</bean>
	<bean id="kbmT1" class="gda.device.scannable.ScannableMotor">
		<property name="motor" ref="kbmT1_motor" />
	</bean>
	<bean id="kbmT2" class="gda.device.scannable.ScannableMotor">
		<property name="motor" ref="kbmT2_motor" />
	</bean>
	<bean id="kbmT3" class="gda.device.scannable.ScannableMotor">
		<property name="motor" ref="kbmT3_motor" />
	</bean>
	<bean id="kbmT4" class="gda.device.scannable.ScannableMotor">
		<property name="motor" ref="kbmT4_motor" />
	</bean>
	<bean id="kbmT5" class="gda.device.scannable.ScannableMotor">
		<property name="motor" ref="kbmT5_motor" />
	</bean>
	<bean id="kbmT6" class="gda.device.scannable.ScannableMotor">
		<property name="motor" ref="kbmT6_motor" />
	</bean>
	
    <bean id="kbm" class="gda.device.scannable.scannablegroup.ScannableGroup">
        <property name="groupMembers">
			<list>
				<ref bean="kbmPitch1" />
				<ref bean="kbmPitch2" />
				<ref bean="kbmT1" />
				<ref bean="kbmT2" />
				<ref bean="kbmT3" />
				<ref bean="kbmT4" />
				<ref bean="kbmT5" />
				<ref bean="kbmT6" />
			</list>
        </property>
  </bean>


</beans>