<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:gda="http://www.diamond.ac.uk/schema/gda/gda"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
		http://www.diamond.ac.uk/schema/gda/gda
		http://www.diamond.ac.uk/schema/gda/gda/gda-gda-1.2.xsd">

	<gda:motor id="kbmPitch1" pv="BL16B-MO-KBM-01:ROLL1" />
	<gda:motor id="kbmPitch2" pv="BL16B-MO-KBM-01:ROLL2" />
	<gda:motor id="kbmT1" pv="BL16B-MO-KBM-01:T1" />
	<gda:motor id="kbmT2" pv="BL16B-MO-KBM-01:T2" />
	<gda:motor id="kbmT3" pv="BL16B-MO-KBM-01:T3" />
	<gda:motor id="kbmT4" pv="BL16B-MO-KBM-01:T4" />
	<gda:motor id="kbmT5" pv="BL16B-MO-KBM-01:T5" />
	<gda:motor id="kbmT6" pv="BL16B-MO-KBM-01:T6" />

	<bean id="kbm" class="gda.device.scannable.scannablegroup.ScannableGroup">
		<property name="groupMembers">
			<list>
				<ref bean="kbmPitch1" />
				<ref bean="kbmPitch2" />
				<ref bean="kbmT1" />
				<ref bean="kbmT2" />
				<ref bean="kbmT3" />
				<ref bean="kbmT4" />
				<ref bean="kbmT5" />
				<ref bean="kbmT6" />
			</list>
		</property>
	</bean>

</beans>