<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:gda="http://www.diamond.ac.uk/schema/gda/gda"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.diamond.ac.uk/schema/gda/gda
		http://www.diamond.ac.uk/schema/gda/gda/gda-gda-1.2.xsd"
	profile="ixs_mirror">


	<gda:motor id="ixsx" pv="ME05M-MO-MIRR-01:X" />
	<gda:motor id="ixsy" pv="ME05M-MO-MIRR-01:Y" />
	<gda:motor id="ixsz" pv="ME05M-MO-MIRR-01:Z" />
	<gda:motor id="ixsroll" pv="ME05M-MO-MIRR-01:ROLL" />
	<gda:motor id="ixspitch" pv="ME05M-MO-MIRR-01:PITCH" />
	<gda:motor id="ixsyaw" pv="ME05M-MO-MIRR-01:YAW" />

	<bean id="ixs" class="gda.device.scannable.scannablegroup.ScannableGroup">
		<property name="groupMembers">
			<list>
				<ref bean="ixsx" />
				<ref bean="ixsy" />
				<ref bean="ixsz" />
				<ref bean="ixsroll" />
				<ref bean="ixspitch" />
				<ref bean="ixsyaw" />
			</list>
		</property>
	</bean>

</beans>
