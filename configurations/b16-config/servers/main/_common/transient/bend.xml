<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:gda="http://www.diamond.ac.uk/schema/gda/gda"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
		http://www.diamond.ac.uk/schema/gda/gda
		http://www.diamond.ac.uk/schema/gda/gda/gda-gda-1.2.xsd">

	<gda:motor id="bend1" pv="BL16B-CS-BEND-01:BEND1" />
	<gda:motor id="bend2" pv="BL16B-CS-BEND-01:BEND2" />
	<gda:motor id="bend1enc" pv="BL16B-CS-BEND-01:BEND1ENC" />
	<gda:motor id="bend2enc" pv="BL16B-CS-BEND-01:BEND2ENC" />
	<gda:motor id="bendYaw" pv="BL16B-CS-BEND-01:YAW" />
	<gda:motor id="bendRadius" pv="BL16B-CS-BEND-01:RADIUS" />
	<gda:motor id="bendOffset" pv="BL16B-CS-BEND-01:OFFSET" />

	<bean id="bend"
		class="gda.device.scannable.scannablegroup.ScannableGroup">
		<property name="groupMembers">
			<list>
				<ref bean="bend1" />
				<ref bean="bend1enc" />
				<ref bean="bend2" />
				<ref bean="bend2enc" />
				<ref bean="bendYaw" />
				<ref bean="bendRadius" />
				<ref bean="bendOffset" />
			</list>
		</property>
	</bean>

</beans>