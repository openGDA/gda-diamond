<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:gda="http://www.diamond.ac.uk/schema/gda/gda"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.diamond.ac.uk/schema/gda/gda
		http://www.diamond.ac.uk/schema/gda/gda/gda-gda-1.2.xsd"
	profile="ixs_slits">

	<gda:motor id="ixslitH1" pv="BL16B-MO-BRICK-03:AXIS1" />
	<gda:motor id="ixslitH2" pv="BL16B-MO-BRICK-03:AXIS2" />
	<gda:motor id="ixslitV1" pv="BL16B-MO-BRICK-03:AXIS3" />
	<gda:motor id="ixslitV2" pv="BL16B-MO-BRICK-03:AXIS4" />
	<gda:motor id="ixslitDiag" pv="BL16B-MO-BRICK-03:AXIS5" />

	<bean id="ixslit" class="gda.device.scannable.scannablegroup.ScannableGroup">
		<property name="groupMembers">
			<list>
				<ref bean="ixslitH1" />
				<ref bean="ixslitH2" />
				<ref bean="ixslitV1" />
				<ref bean="ixslitV2" />
				<ref bean="ixslitDiag" />
			</list>
		</property>
	</bean>

</beans>