<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:gda="http://www.diamond.ac.uk/schema/gda/gda"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.diamond.ac.uk/schema/gda/gda
		http://www.diamond.ac.uk/schema/gda/gda/gda-gda-1.2.xsd"
	profile="dcm_for_i09">


	<gda:motor id="testdcmBragg" pv="BL16B-MO-TESTDCM-01:BRAGG" />
	<gda:motor id="testdcmPitch" pv="BL16B-MO-TESTDCM-01:PITCH" />
	<gda:motor id="testdcmRoll" pv="BL16B-MO-TESTDCM-01:ROLL" />
	<gda:motor id="testdcmY" pv="BL16B-MO-TESTDCM-01:Y" />
	<gda:motor id="testdcmEnergy" pv="BL16B-MO-TESTDCM-01:ENERGY" />
	<gda:motor id="testdcmOffset" pv="BL16B-MO-TESTDCM-01:OFFSET" />
	<gda:motor id="testdcmLambda" pv="BL16B-MO-TESTDCM-01:LAMBDA" />

	<bean id="testdcm"
		class="gda.device.scannable.scannablegroup.ScannableGroup">
		<property name="groupMembers">
			<list>
				<ref bean="testdcmEnergy" />
				<ref bean="testdcmLambda" />
				<ref bean="testdcmBragg" />
				<ref bean="testdcmPitch" />
				<ref bean="testdcmRoll" />
				<ref bean="testdcmY" />
				<ref bean="testdcmOffset" />
			</list>
		</property>
	</bean>

</beans>

