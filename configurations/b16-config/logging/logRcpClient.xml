<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    
    <!-- enable this if you want log message appear on local console -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <layout class="ch.qos.logback.classic.PatternLayout">
            <pattern>%r  %-5level [%logger{36}] - %m%n%rEx</pattern>
        </layout>
    </appender>
    <appender name="GDALOGPANEL" class="gda.util.LogPanelAppender">
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>INFO</level>
        </filter>
        <layout class="ch.qos.logback.classic.PatternLayout">
            <pattern>%date %-5level [%logger{36}] - %m %rEx %n</pattern>
        </layout>
    </appender>
    <appender name="GDADEBUGPANEL" class="gda.util.DebugPanelAppender">
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>DEBUG</level>
        </filter>
        <layout class="ch.qos.logback.classic.PatternLayout">
            <pattern>%date %-5level [%logger] - %m %rEx %n</pattern>
        </layout>
    </appender>
    <!-- appender name="SOCKET" class="ch.qos.logback.classic.net.SocketAppender">
        <RemoteHost>i16-control.diamond.ac.uk</RemoteHost>
        <Port>6789</Port>
        <ReconnectionDelay>10000</ReconnectionDelay>
        <IncludeCallerData>true</IncludeCallerData>
    </appender-->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <File>/scratch/var/logs/gda_rcp_client.log</File>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <FileNamePattern>/scratch/var/logs/gda_rcp_client.%d{yyyy-MM-dd}.log.gz</FileNamePattern>
        </rollingPolicy>
        <layout class="ch.qos.logback.classic.PatternLayout">
            <pattern>%d %-5level [%logger] %rEx - %m%n</pattern>
        </layout>
    </appender> 
    
    <logger name="gda">
        <level value="DEBUG"/>
    </logger>
 
    <root>
        <level value="ALL"/>
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="GDALOGPANEL"/>
        <appender-ref ref="GDADEBUGPANEL"/>
        <appender-ref ref="FILE"/>
        <!-- appender-ref ref="SOCKET"/-->
    </root>
</configuration>
