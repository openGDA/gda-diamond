<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    
    <!-- display message in Logger Server's console -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <layout class="ch.qos.logback.classic.PatternLayout">
            <Pattern>%date %-5level [%logger] - %message%n%ex</Pattern>
        </layout>
    </appender>
    <!-- Socket for forwarding log message to LogPanel in GDA Client or other viewers -->
    <appender name="SOCKET1" class="ch.qos.logback.classic.net.SocketAppender">
        <RemoteHost>b16-ws001.diamond.ac.uk</RemoteHost>
        <Port>6002</Port>
        <ReconnectionDelay>10000</ReconnectionDelay>
        <IncludeCallerData>true</IncludeCallerData>
    </appender>
    <appender name="SOCKET2" class="ch.qos.logback.classic.net.SocketAppender">
        <RemoteHost>b16-ws002.diamond.ac.uk</RemoteHost>
        <Port>6002</Port>
        <ReconnectionDelay>10000</ReconnectionDelay>
        <IncludeCallerData>true</IncludeCallerData>
    </appender>
    <appender name="SOCKET3" class="ch.qos.logback.classic.net.SocketAppender">
        <RemoteHost>b16-ws007.diamond.ac.uk</RemoteHost>
        <Port>6002</Port>
        <ReconnectionDelay>10000</ReconnectionDelay>
        <IncludeCallerData>true</IncludeCallerData>
    </appender>  
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <File>${gda.logs.dir}/gda_server.log</File>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <FileNamePattern>${gda.logs.dir}/gda_server.%d{yyyy-MM-dd}.log.gz</FileNamePattern>
        </rollingPolicy>
        <layout class="ch.qos.logback.classic.PatternLayout">
            <pattern>%d %-5level [%logger] %ex - %m%n</pattern>
        </layout>
    </appender> 
    
    <logger name="gda.analysis.DataSet">
        <level value="ERROR"/>
    </logger>
    <logger name="gda.analysis.ScanFileHolder">
        <level value="ERROR"/>
    </logger>
    
    <logger name="default">
        <level value="INFO"/>
    </logger>    
    
    <root>
        <level value="ALL"/>
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="SOCKET1"/>
        <appender-ref ref="SOCKET2"/>
        <appender-ref ref="SOCKET3"/>
        <appender-ref ref="FILE"/>
    </root>
    
</configuration>
