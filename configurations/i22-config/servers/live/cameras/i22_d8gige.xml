<?xml version="1.0" encoding="utf-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="d8gige_ad" class="gda.device.detector.areadetector.v17.impl.ADBaseImpl">
		<property name="basePVName" value="BL22I-DI-PHDGN-08:CAM:"/>
		<property name="initialDataType" value="UInt8"/>
	</bean>

	<bean id="d8gige" class="uk.ac.gda.server.ncd.camera.ADCameraDetector">
		<property name="basePVName" value="BL22I-DI-PHDGN-08:"/>
		<property name="areaDetector" ref="d8gige_ad"/>
		<property name="array" ref="d8gige_array"/>
	</bean>

	<bean id="d8gige_array" class="gda.device.detector.areadetector.v17.impl.NDArrayImpl">
		<property name="basePVName" value="BL22I-DI-PHDGN-08:ARR:"/>
		<property name="pluginBase">
			<bean class="gda.device.detector.areadetector.v17.impl.NDPluginBaseImpl">
				<property name="basePVName" value="BL22I-DI-PHDGN-08:ARR:"/>
			</bean>
		</property>
	</bean>
</beans>
