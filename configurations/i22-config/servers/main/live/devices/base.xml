<?xml version="1.0" encoding="utf-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="base_x_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL22I-MO-FLYTABLE-01:X"/>
		<property name="local" value="true"/>
	</bean>

	<bean id="base_pitch_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL22I-MO-TABLE-01:PITCH"/>
		<property name="local" value="true"/>
	</bean>

	<bean id="base_yaw_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL22I-MO-TABLE-01:YAW"/>
		<property name="local" value="true"/>
	</bean>

	<bean id="base_y_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL22I-MO-FLYTABLE-01:Y"/>
		<property name="local" value="true"/>
	</bean>
</beans>
