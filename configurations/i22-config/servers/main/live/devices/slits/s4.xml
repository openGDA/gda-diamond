<?xml version="1.0" encoding="utf-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

	<bean id="s4_xcentre_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL22I-AL-SLITS-04:X"/>
		<property name="local" value="true"/>
	</bean>
	<bean id="s4_ycentre_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL22I-AL-SLITS-04:Y"/>
		<property name="local" value="true"/>
	</bean>
	<bean id="s4_xgap_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL22I-AL-SLITS-04:HDSO"/>
		<property name="local" value="true"/>
	</bean>
	<bean id="s4_ygap_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL22I-AL-SLITS-04:VDSO"/>
		<property name="local" value="true"/>
	</bean>
</beans>
