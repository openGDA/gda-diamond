<?xml version="1.0" encoding="utf-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:aop="http://www.springframework.org/schema/aop"
	xmlns:corba="http://www.diamond.ac.uk/schema/gda/corba"
	xmlns:tx="http://www.springframework.org/schema/tx"
	xmlns:util="http://www.springframework.org/schema/util"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
		http://www.springframework.org/schema/util
		http://www.springframework.org/schema/util/spring-util-2.5.xsd
		http://www.springframework.org/schema/tx
		http://www.springframework.org/schema/tx/spring-tx-2.5.xsd
		http://www.springframework.org/schema/aop
		http://www.springframework.org/schema/aop/spring-aop-2.5.xsd
		http://www.diamond.ac.uk/schema/gda/corba
		http://www.diamond.ac.uk/schema/gda/corba/gda-corba-1.0.xsd">

	<bean id="s2_ycentre_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL22I-AL-SLITS-02:Y:CENTRE"/>
		<property name="local" value="true"/>
	</bean>

	<bean id="s2_xcentre_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL22I-AL-SLITS-02:X:CENTRE"/>
		<property name="local" value="true"/>
	</bean>

	<bean id="s2_yplus_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL22I-AL-SLITS-02:Y:PLUS"/>
		<property name="local" value="true"/>
	</bean>

	<bean id="s2_yminusi" class="gda.device.scannable.EpicsScannable">
		<property name="useNameAsExtraName" value="true"/>
		<property name="hasUnits" value="false"/>
		<property name="pvName" value="BL22I-AL-SLITS-02:YMDRAIN:I"/>
		<property name="local" value="true"/>
	</bean>

	<bean id="s2_xminus_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL22I-AL-SLITS-02:X:MINUS"/>
		<property name="local" value="true"/>
	</bean>

	<bean id="s2_xgap_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL22I-AL-SLITS-02:X:SIZE"/>
		<property name="local" value="true"/>
	</bean>

	<bean id="s2_yplusi" class="gda.device.scannable.EpicsScannable">
		<property name="useNameAsExtraName" value="true"/>
		<property name="hasUnits" value="false"/>
		<property name="pvName" value="BL22I-AL-SLITS-02:YPDRAIN:I"/>
		<property name="local" value="true"/>
	</bean>

	<bean id="s2_yminus_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL22I-AL-SLITS-02:Y:MINUS"/>
		<property name="local" value="true"/>
	</bean>

	<bean id="s2_ygap_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL22I-AL-SLITS-02:Y:SIZE"/>
		<property name="local" value="true"/>
	</bean>

	<bean id="s2_xplus_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL22I-AL-SLITS-02:X:PLUS"/>
		<property name="local" value="true"/>
	</bean>
</beans>
