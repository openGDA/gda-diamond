<?xml version="1.0" encoding="utf-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="s3_xgap_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL22I-AL-SLITS-03:X:SIZE"/>
		<property name="local" value="true"/>
	</bean>

	<bean id="s3_yminus_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL22I-AL-SLITS-03:Y:MINUS"/>
		<property name="local" value="true"/>
	</bean>

	<bean id="s3_yplus_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL22I-AL-SLITS-03:Y:PLUS"/>
		<property name="local" value="true"/>
	</bean>

	<bean id="s3_xcentre_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL22I-AL-SLITS-03:X:CENTRE"/>
		<property name="local" value="true"/>
	</bean>

	<bean id="s3_ygap_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL22I-AL-SLITS-03:Y:SIZE"/>
		<property name="local" value="true"/>
	</bean>

	<bean id="s3_ycentre_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL22I-AL-SLITS-03:Y:CENTRE"/>
		<property name="local" value="true"/>
	</bean>

	<bean id="s3_xplus_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL22I-AL-SLITS-03:X:PLUS"/>
		<property name="local" value="true"/>
	</bean>

	<bean id="s3_xminus_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL22I-AL-SLITS-03:X:MINUS"/>
		<property name="local" value="true"/>
	</bean>
</beans>
