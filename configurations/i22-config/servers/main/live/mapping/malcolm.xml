<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="saxsWaxsMalcolmModel" class="org.eclipse.scanning.api.device.models.MalcolmModel">
		<property name="name" value="BL22I-ML-SCAN-01"/>
		<property name="exposureTime" value="0.01"/>
	</bean>
	
	<bean id="saxsWaxsMalcolmInfo" class="org.eclipse.scanning.api.event.scan.DeviceInformation">
		<property name="id" value="org.eclipse.scanning.example.malcolm.defaultMalcolmDevice"/>
		<property name="label" value="SAXS/WAXS"/>
		<property name="description" value="SAXS and WAXS detectors"/>
	</bean>
	
	<bean id="saxsWaxsMalcolmDevice" class="org.eclipse.scanning.malcolm.core.MalcolmDevice" init-method="register">
		<property name="name" value="BL22I-ML-SCAN-01"/>
		<property name="model" ref="saxsWaxsMalcolmModel"/>
		<property name="deviceInformation" ref="saxsWaxsMalcolmInfo"/>
		<property name="activated" value="false"/>
	</bean>
</beans>

