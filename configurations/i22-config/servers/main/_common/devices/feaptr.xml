<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

        <bean id="feaptr_x_motor" class="gda.device.motor.EpicsMotor">
                <property name="pvName" value="FE22I-AL-APTR-02:X" />
                <property name="local" value="true" />
        </bean>
        <bean id="feaptr_x" class="gda.device.scannable.ScannableMotor">
                <property name="motor" ref="feaptr_x_motor" />
                <property name="local" value="true" />
                <property name="protectionLevel" value="3" />
        </bean>

        <bean id="feaptr_y_motor" class="gda.device.motor.EpicsMotor">
                <property name="pvName" value="FE22I-AL-APTR-02:Y" />
                <property name="local" value="true" />
        </bean>
        <bean id="feaptr_y" class="gda.device.scannable.ScannableMotor">
                <property name="motor" ref="feaptr_y_motor" />
                <property name="local" value="true" />
                <property name="protectionLevel" value="3" />
        </bean>

        <bean id="feaptr" class="gda.device.scannable.scannablegroup.ScannableGroup">
                <property name="groupMembers">
                        <list>
                                <ref bean="feaptr_x" />
                                <ref bean="feaptr_y" />
                        </list>
                </property>
                <property name="local" value="true" />
                <property name="protectionLevel" value="3" />
        </bean>
</beans>