<?xml version="1.0" encoding="utf-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:gda="http://www.diamond.ac.uk/schema/gda/gda"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
            http://www.springframework.org/schema/beans/spring-beans.xsd
            http://www.diamond.ac.uk/schema/gda/gda
            http://www.diamond.ac.uk/schema/gda/gda/gda-gda-1.2.xsd">

    <gda:motor id="vfm_pitch" pv="BL22I-OP-KBM-01:VFM:PITCH" protectionLevel="3" />
    <gda:motor id="vfm_yaw" pv="BL22I-OP-KBM-01:VFM:YAW" protectionLevel="3" />
    <gda:motor id="vfm_y1" pv="BL22I-OP-KBM-01:VFM:Y1" protectionLevel="3" />
    <gda:motor id="vfm_roll" pv="BL22I-OP-KBM-01:VFM:ROLL" protectionLevel="3" />
    <gda:motor id="vfm_x1" pv="BL22I-OP-KBM-01:VFM:X1" protectionLevel="3" />
    <gda:motor id="vfm_x" pv="BL22I-OP-KBM-01:VFM:X" protectionLevel="3" />
    <gda:motor id="vfm_y3" pv="BL22I-OP-KBM-01:VFM:Y3" protectionLevel="3" />
    <gda:motor id="vfm_y" pv="BL22I-OP-KBM-01:VFM:Y" protectionLevel="3" />
    <gda:motor id="vfm_x2" pv="BL22I-OP-KBM-01:VFM:X2" protectionLevel="3" />
    <gda:motor id="vfm_y2" pv="BL22I-OP-KBM-01:VFM:Y2" protectionLevel="3" />
    <gda:motor id="vfm_yfine" pv="BL22I-OP-KBM-01:VFM:FY3" protectionLevel="3" />

    <bean id="vfm" class="gda.device.scannable.scannablegroup.ScannableGroup">
        <property name="groupMembers">
            <list>
                <ref bean="vfm_pitch"/>
                <ref bean="vfm_roll"/>
                <ref bean="vfm_yaw"/>
                <ref bean="vfm_x"/>
                <ref bean="vfm_y"/>
                <ref bean="vfm_y1"/>
                <ref bean="vfm_y2"/>
                <ref bean="vfm_y3"/>
                <ref bean="vfm_x1"/>
                <ref bean="vfm_x2"/>
                <ref bean="vfm_yfine"/>
            </list>
        </property>
        <property name="protectionLevel" value="3"/>
    </bean>
</beans>
