                <property name="motor" ref="vfm_yfine_motor" />
                <property name="local" value="true" />
                <property name="protectionLevel" value="3" />
        </bean>

        <bean id="vfm" class="gda.device.scannable.scannablegroup.ScannableGroup">
                <property name="groupMembers">
                        <list>
                                <ref bean="vfm_pitch" />
                                <ref bean="vfm_roll" />
                                <ref bean="vfm_yaw" />
                                <ref bean="vfm_x" />
                                <ref bean="vfm_y" />
                                <ref bean="vfm_y1" />
                                <ref bean="vfm_y2" />
                                <ref bean="vfm_y3" />
                                <ref bean="vfm_x1" />
                                <ref bean="vfm_x2" />
                                <ref bean="vfm_yfine" />
                        </list>
                </property>
                <property name="local" value="true" />
                <property name="protectionLevel" value="3" />
        </bean>
</beans>
