        <bean id="vfm_x1_motor" class="gda.device.motor.EpicsMotor">
                <property name="pvName" value="BL22I-OP-KBM-01:VFM:X1" />
                <property name="local" value="true" />
        </bean>
        <bean id="vfm_x1" class="gda.device.scannable.ScannableMotor">
                <property name="motor" ref="vfm_x1_motor" />
                <property name="local" value="true" />
                <property name="protectionLevel" value="3" />
        </bean>

        <bean id="vfm_x2_motor" class="gda.device.motor.EpicsMotor">
                <property name="pvName" value="BL22I-OP-KBM-01:VFM:X2" />
