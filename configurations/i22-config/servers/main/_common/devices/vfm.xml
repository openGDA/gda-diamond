<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

        <bean id="vfm_pitch_motor" class="gda.device.motor.EpicsMotor">
                <property name="pvName" value="BL22I-OP-KBM-01:VFM:PITCH" />
                <property name="local" value="true" />
        </bean>
        <bean id="vfm_pitch" class="gda.device.scannable.ScannableMotor">
                <property name="motor" ref="vfm_pitch_motor" />
                <property name="local" value="true" />
                <property name="protectionLevel" value="3" />
        </bean>

        <bean id="vfm_roll_motor" class="gda.device.motor.EpicsMotor">
                <property name="pvName" value="BL22I-OP-KBM-01:VFM:ROLL" />
                <property name="local" value="true" />
        </bean>
        <bean id="vfm_roll" class="gda.device.scannable.ScannableMotor">
                <property name="motor" ref="vfm_roll_motor" />
                <property name="local" value="true" />
                <property name="protectionLevel" value="3" />
        </bean>

        <bean id="vfm_yaw_motor" class="gda.device.motor.EpicsMotor">
                <property name="pvName" value="BL22I-OP-KBM-01:VFM:YAW" />
                <property name="local" value="true" />
        </bean>
        <bean id="vfm_yaw" class="gda.device.scannable.ScannableMotor">
                <property name="motor" ref="vfm_yaw_motor" />
                <property name="local" value="true" />
                <property name="protectionLevel" value="3" />
        </bean>

        <bean id="vfm_x_motor" class="gda.device.motor.EpicsMotor">
                <property name="pvName" value="BL22I-OP-KBM-01:VFM:X" />
                <property name="local" value="true" />
        </bean>
        <bean id="vfm_x" class="gda.device.scannable.ScannableMotor">
                <property name="motor" ref="vfm_x_motor" />
                <property name="local" value="true" />
                <property name="protectionLevel" value="3" />
        </bean>

        <bean id="vfm_y_motor" class="gda.device.motor.EpicsMotor">
                <property name="pvName" value="BL22I-OP-KBM-01:VFM:Y" />
                <property name="local" value="true" />
        </bean>
        <bean id="vfm_y" class="gda.device.scannable.ScannableMotor">
                <property name="motor" ref="vfm_y_motor" />
                <property name="local" value="true" />
                <property name="protectionLevel" value="3" />
        </bean>

        <bean id="vfm_y1_motor" class="gda.device.motor.EpicsMotor">
                <property name="pvName" value="BL22I-OP-KBM-01:VFM:Y1" />
                <property name="local" value="true" />
        </bean>
        <bean id="vfm_y1" class="gda.device.scannable.ScannableMotor">
                <property name="motor" ref="vfm_y1_motor" />
                <property name="local" value="true" />
                <property name="protectionLevel" value="3" />
        </bean>

        <bean id="vfm_y2_motor" class="gda.device.motor.EpicsMotor">
                <property name="pvName" value="BL22I-OP-KBM-01:VFM:Y2" />
                <property name="local" value="true" />
        </bean>
        <bean id="vfm_y2" class="gda.device.scannable.ScannableMotor">
                <property name="motor" ref="vfm_y2_motor" />
                <property name="local" value="true" />
                <property name="protectionLevel" value="3" />
        </bean>

        <bean id="vfm_y3_motor" class="gda.device.motor.EpicsMotor">
                <property name="pvName" value="BL22I-OP-KBM-01:VFM:Y3" />
                <property name="local" value="true" />
        </bean>
        <bean id="vfm_y3" class="gda.device.scannable.ScannableMotor">
