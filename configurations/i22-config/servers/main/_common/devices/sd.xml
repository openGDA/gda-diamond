<?xml version="1.0" encoding="utf-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:gda="http://www.diamond.ac.uk/schema/gda/gda"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
            http://www.springframework.org/schema/beans/spring-beans.xsd
            http://www.diamond.ac.uk/schema/gda/gda
            http://www.diamond.ac.uk/schema/gda/gda/gda-gda-1.2.xsd">

    <gda:motor id="sp_x" pv="BL22I-MO-SAXSP-01:X" protectionLevel="3" />
    <gda:motor id="sp_y" pv="BL22I-MO-SAXSP-01:Y" protectionLevel="3" />

    <gda:motor id="sd_x" pv="BL22I-MO-DET-02:X" protectionLevel="2" />
    <gda:motor id="sd_y" pv="BL22I-MO-DET-02:Y" protectionLevel="2" />

    <bean id="sd" class="gda.device.scannable.scannablegroup.ScannableGroup">
        <property name="groupMembers">
            <list>
                <ref bean="sd_x"/>
                <ref bean="sd_y"/>
            </list>
        </property>
        <property name="protectionLevel" value="3"/>
    </bean>

    <bean id="sp" class="gda.device.scannable.scannablegroup.ScannableGroup">
        <property name="groupMembers">
            <list>
                <ref bean="sp_x"/>
                <ref bean="sp_y"/>
            </list>
        </property>
        <property name="protectionLevel" value="3"/>
    </bean>
</beans>
