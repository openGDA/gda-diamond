<?xml version="1.0" encoding="utf-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:aop="http://www.springframework.org/schema/aop"
    xmlns:corba="http://www.diamond.ac.uk/schema/gda/corba"
    xmlns:tx="http://www.springframework.org/schema/tx"
    xmlns:util="http://www.springframework.org/schema/util"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
        http://www.springframework.org/schema/util
        http://www.springframework.org/schema/util/spring-util-2.5.xsd
        http://www.springframework.org/schema/tx
        http://www.springframework.org/schema/tx/spring-tx-2.5.xsd
        http://www.springframework.org/schema/aop
        http://www.springframework.org/schema/aop/spring-aop-2.5.xsd
        http://www.diamond.ac.uk/schema/gda/corba
        http://www.diamond.ac.uk/schema/gda/corba/gda-corba-1.0.xsd">

    <bean id="hfm_y2" class="gda.device.scannable.ScannableMotor">
        <property name="motor" ref="hfm_y2_motor"/>
        <property name="local" value="true"/>
        <property name="protectionLevel" value="3"/>
    </bean>

    <bean id="hfm_roll" class="gda.device.scannable.ScannableMotor">
        <property name="motor" ref="hfm_roll_motor"/>
        <property name="local" value="true"/>
        <property name="protectionLevel" value="3"/>
    </bean>

    <bean id="hfm_y" class="gda.device.scannable.ScannableMotor">
        <property name="motor" ref="hfm_y_motor"/>
        <property name="local" value="true"/>
        <property name="protectionLevel" value="3"/>
    </bean>

    <bean id="hfm" class="gda.device.scannable.scannablegroup.ScannableGroup">
        <property name="groupMembers">
            <list>
                <ref bean="hfm_pitch"/>
                <ref bean="hfm_roll"/>
                <ref bean="hfm_yaw"/>
                <ref bean="hfm_x"/>
                <ref bean="hfm_y"/>
                <ref bean="hfm_y1"/>
                <ref bean="hfm_y2"/>
                <ref bean="hfm_y3"/>
                <ref bean="hfm_x1"/>
                <ref bean="hfm_x2"/>
                <ref bean="hfm_xfine"/>
            </list>
        </property>
        <property name="local" value="true"/>
        <property name="protectionLevel" value="3"/>
    </bean>

    <bean id="hfm_x" class="gda.device.scannable.ScannableMotor">
        <property name="motor" ref="hfm_x_motor"/>
        <property name="local" value="true"/>
        <property name="protectionLevel" value="3"/>
    </bean>

    <bean id="hfm_xfine" class="gda.device.scannable.ScannableMotor">
        <property name="motor" ref="hfm_xfine_motor"/>
        <property name="local" value="true"/>
        <property name="protectionLevel" value="3"/>
    </bean>

    <bean id="hfm_y3" class="gda.device.scannable.ScannableMotor">
        <property name="motor" ref="hfm_y3_motor"/>
        <property name="local" value="true"/>
        <property name="protectionLevel" value="3"/>
    </bean>

    <bean id="hfm_x1" class="gda.device.scannable.ScannableMotor">
        <property name="motor" ref="hfm_x1_motor"/>
        <property name="local" value="true"/>
        <property name="protectionLevel" value="3"/>
    </bean>

    <bean id="hfm_y1" class="gda.device.scannable.ScannableMotor">
        <property name="motor" ref="hfm_y1_motor"/>
        <property name="local" value="true"/>
        <property name="protectionLevel" value="3"/>
    </bean>

    <bean id="hfm_x2" class="gda.device.scannable.ScannableMotor">
        <property name="motor" ref="hfm_x2_motor"/>
        <property name="local" value="true"/>
        <property name="protectionLevel" value="3"/>
    </bean>

    <bean id="hfm_yaw" class="gda.device.scannable.ScannableMotor">
        <property name="motor" ref="hfm_yaw_motor"/>
        <property name="local" value="true"/>
        <property name="protectionLevel" value="3"/>
    </bean>

    <bean id="hfm_pitch" class="gda.device.scannable.ScannableMotor">
        <property name="motor" ref="hfm_pitch_motor"/>
        <property name="local" value="true"/>
        <property name="protectionLevel" value="3"/>
    </bean>
</beans>
