<?xml version="1.0" encoding="utf-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:gda="http://www.diamond.ac.uk/schema/gda/gda"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
            http://www.springframework.org/schema/beans/spring-beans.xsd
            http://www.diamond.ac.uk/schema/gda/gda
            http://www.diamond.ac.uk/schema/gda/gda/gda-gda-1.2.xsd">

    <gda:motor id="s4_xcentre" pv="BL22I-AL-SLITS-04:X" protectionLevel="3" />
    <gda:motor id="s4_ycentre" pv="BL22I-AL-SLITS-04:Y" protectionLevel="3" />
    <gda:motor id="s4_xgap" pv="BL22I-AL-SLITS-04:HDSO" protectionLevel="3" />
    <gda:motor id="s4_ygap" pv="BL22I-AL-SLITS-04:VDSO" protectionLevel="3" />

    <bean id="s4" class="gda.device.scannable.scannablegroup.ScannableGroup">
        <property name="groupMembers">
            <list>
                <ref bean="s4_xcentre"/>
                <ref bean="s4_ycentre"/>
                <ref bean="s4_xgap"/>
                <ref bean="s4_ygap"/>
            </list>
        </property>
        <property name="protectionLevel" value="3"/>
    </bean>
</beans>
