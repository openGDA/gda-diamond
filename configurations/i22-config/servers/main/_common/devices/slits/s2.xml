<?xml version="1.0" encoding="utf-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:gda="http://www.diamond.ac.uk/schema/gda/gda"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
            http://www.springframework.org/schema/beans/spring-beans.xsd
            http://www.diamond.ac.uk/schema/gda/gda
            http://www.diamond.ac.uk/schema/gda/gda/gda-gda-1.2.xsd">

    <gda:motor id="s2_xcentre" pv="BL22I-AL-SLITS-02:X:CENTRE" protectionLevel="3" />
    <gda:motor id="s2_xgap" pv="BL22I-AL-SLITS-02:X:SIZE" protectionLevel="3" />
    <gda:motor id="s2_ycentre" pv="BL22I-AL-SLITS-02:Y:CENTRE" protectionLevel="3" />
    <gda:motor id="s2_ygap" pv="BL22I-AL-SLITS-02:Y:SIZE" protectionLevel="3" />
    <gda:motor id="s2_xplus" pv="BL22I-AL-SLITS-02:X:PLUS" protectionLevel="3" />
    <gda:motor id="s2_xminus" pv="BL22I-AL-SLITS-02:X:MINUS" protectionLevel="3" />
    <gda:motor id="s2_yplus" pv="BL22I-AL-SLITS-02:Y:PLUS" protectionLevel="3" />
    <gda:motor id="s2_yminus" pv="BL22I-AL-SLITS-02:Y:MINUS" protectionLevel="3" />

    <bean id="s2" class="gda.device.scannable.scannablegroup.ScannableGroup">
        <property name="groupMembers">
            <list>
                <ref bean="s2_xcentre"/>
                <ref bean="s2_xgap"/>
                <ref bean="s2_ycentre"/>
                <ref bean="s2_ygap"/>
                <ref bean="s2_xplus"/>
                <ref bean="s2_xminus"/>
                <ref bean="s2_yplus"/>
                <ref bean="s2_yminus"/>
                <ref bean="s2_yplusi"/>
                <ref bean="s2_yminusi"/>
            </list>
        </property>
        <property name="protectionLevel" value="3"/>
    </bean>
</beans>
