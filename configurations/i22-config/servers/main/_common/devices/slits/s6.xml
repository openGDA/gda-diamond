<?xml version="1.0" encoding="utf-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:gda="http://www.diamond.ac.uk/schema/gda/gda"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
            http://www.springframework.org/schema/beans/spring-beans.xsd
            http://www.diamond.ac.uk/schema/gda/gda
            http://www.diamond.ac.uk/schema/gda/gda/gda-gda-1.2.xsd">

    <gda:motor id="s6_xminus" pv="BL22I-AL-SLITS-06:X:MINUS" protectionLevel="3" />
    <gda:motor id="s6_xplus" pv="BL22I-AL-SLITS-06:X:PLUS" protectionLevel="3" />
    <gda:motor id="s6_xcentre" pv="BL22I-AL-SLITS-06:X:CENTRE" protectionLevel="3" />
    <gda:motor id="s6_xgap" pv="BL22I-AL-SLITS-06:X:SIZE" protectionLevel="3" />
    <gda:motor id="s6_yminus" pv="BL22I-AL-SLITS-06:Y:MINUS" protectionLevel="3" />
    <gda:motor id="s6_yplus" pv="BL22I-AL-SLITS-06:Y:PLUS" protectionLevel="3" />
    <gda:motor id="s6_ycentre" pv="BL22I-AL-SLITS-06:Y:CENTRE" protectionLevel="3" />
    <gda:motor id="s6_ygap" pv="BL22I-AL-SLITS-06:Y:SIZE" protectionLevel="3" />

    <bean id="s6" class="gda.device.scannable.scannablegroup.ScannableGroup">
        <property name="groupMembers">
            <list>
                <ref bean="s6_xminus"/>
                <ref bean="s6_xplus"/>
                <ref bean="s6_xcentre"/>
                <ref bean="s6_xgap"/>
                <ref bean="s6_yminus"/>
                <ref bean="s6_yplus"/>
                <ref bean="s6_ycentre"/>
                <ref bean="s6_ygap"/>
            </list>
        </property>
        <property name="protectionLevel" value="3"/>
    </bean>
</beans>
