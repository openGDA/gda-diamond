<?xml version="1.0" encoding="utf-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:gda="http://www.diamond.ac.uk/schema/gda/gda"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
            http://www.springframework.org/schema/beans/spring-beans.xsd
            http://www.diamond.ac.uk/schema/gda/gda
            http://www.diamond.ac.uk/schema/gda/gda/gda-gda-1.2.xsd">

    <gda:motor id="s3_xcentre" pv="BL22I-AL-SLITS-03:X:CENTRE" protectionLevel="3" />
    <gda:motor id="s3_xgap" pv="BL22I-AL-SLITS-03:X:SIZE" protectionLevel="3" />
    <gda:motor id="s3_ycentre" pv="BL22I-AL-SLITS-03:Y:CENTRE" protectionLevel="3" />
    <gda:motor id="s3_ygap" pv="BL22I-AL-SLITS-03:Y:SIZE" protectionLevel="3" />
    <gda:motor id="s3_xplus" pv="BL22I-AL-SLITS-03:X:PLUS" protectionLevel="3" />
    <gda:motor id="s3_xminus" pv="BL22I-AL-SLITS-03:X:MINUS" protectionLevel="3" />
    <gda:motor id="s3_yplus" pv="BL22I-AL-SLITS-03:Y:PLUS" protectionLevel="3" />
    <gda:motor id="s3_yminus" pv="BL22I-AL-SLITS-03:Y:MINUS" protectionLevel="3" />

    <bean id="s3" class="gda.device.scannable.scannablegroup.ScannableGroup">
        <property name="groupMembers">
            <list>
                <ref bean="s3_xcentre"/>
                <ref bean="s3_xgap"/>
                <ref bean="s3_ycentre"/>
                <ref bean="s3_ygap"/>
                <ref bean="s3_xplus"/>
                <ref bean="s3_xminus"/>
                <ref bean="s3_yplus"/>
                <ref bean="s3_yminus"/>
            </list>
        </property>
        <property name="protectionLevel" value="3"/>
    </bean>
</beans>
