<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:gda="http://www.diamond.ac.uk/schema/gda/gda"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
            http://www.springframework.org/schema/beans/spring-beans.xsd
            http://www.diamond.ac.uk/schema/gda/gda
            http://www.diamond.ac.uk/schema/gda/gda/gda.xsd" >

    <gda:motor id="p1xy_x" live-pvName="BL22I-MO-PXY-01:X" protectionLevel="3" />
    <gda:motor id="p1xy_y" live-pvName="BL22I-MO-PXY-01:Y" protectionLevel="3" />

    <bean id="p1xy" class="gda.device.scannable.scannablegroup.ScannableGroup">
        <property name="groupMembers">
            <list>
                <ref bean="p1xy_x"/>
                <ref bean="p1xy_y"/>
            </list>
        </property>
    </bean>
</beans>
