<?xml version="1.0" encoding="utf-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="bs" class="gda.device.scannable.scannablegroup.ScannableGroup">
        <property name="groupMembers">
            <list>
                <ref bean="bs1_x"/>
                <ref bean="bs1_y"/>
                <ref bean="bs2_x"/>
                <ref bean="bs2_y"/>
                <ref bean="bs3_x"/>
                <ref bean="bs3_y"/>
            </list>
        </property>
    </bean>

    <bean id="bs1_x" class="gda.device.scannable.ScannableMotor">
        <property name="motor" ref="bs1_x_motor"/>
        <property name="protectionLevel" value="3"/>
    </bean>
    <bean id="bs1_y" class="gda.device.scannable.ScannableMotor">
        <property name="motor" ref="bs1_y_motor"/>
        <property name="protectionLevel" value="3"/>
    </bean>
    <bean id="bs1" class="gda.device.scannable.scannablegroup.ScannableGroup">
        <property name="groupMembers">
            <list>
                <ref bean="bs1_x"/>
                <ref bean="bs1_y"/>
                <ref bean="bs1_x_temp"/>
                <ref bean="bs1_y_temp"/>
            </list>
        </property>
    </bean>

    <bean id="bs2_x" class="gda.device.scannable.ScannableMotor">
        <property name="motor" ref="bs2_x_motor"/>
        <property name="protectionLevel" value="2"/>
    </bean>
    <bean id="bs2_y" class="gda.device.scannable.ScannableMotor">
        <property name="motor" ref="bs2_y_motor"/>
        <property name="protectionLevel" value="2"/>
    </bean>
    <bean id="bs2" class="gda.device.scannable.scannablegroup.ScannableGroup">
        <property name="groupMembers">
            <list>
                <ref bean="bs2_x"/>
                <ref bean="bs2_y"/>
                <ref bean="bs2_x_temp"/>
                <ref bean="bs2_y_temp"/>
            </list>
        </property>
    </bean>

    <bean id="bs3_x" class="gda.device.scannable.ScannableMotor">
        <property name="motor" ref="bs3_x_motor"/>
        <property name="protectionLevel" value="2"/>
    </bean>
    <bean id="bs3_y" class="gda.device.scannable.ScannableMotor">
        <property name="motor" ref="bs3_y_motor"/>
        <property name="protectionLevel" value="2"/>
    </bean>
    <bean id="bs3" class="gda.device.scannable.scannablegroup.ScannableGroup">
        <property name="groupMembers">
            <list>
                <ref bean="bs3_x"/>
                <ref bean="bs3_y"/>
                <ref bean="bs3_x_temp"/>
                <ref bean="bs3_y_temp"/>
            </list>
        </property>
    </bean>
</beans>
