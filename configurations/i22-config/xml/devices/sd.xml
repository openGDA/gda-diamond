<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

        <bean id="sd_x_motor" class="gda.device.motor.EpicsMotor">
                <property name="pvName" value="BL22I-EA-DET-02:X" />
                <property name="local" value="true" />
        </bean>
        <bean id="sd_x" class="gda.device.scannable.ScannableMotor">
                <property name="motor" ref="sd_x_motor" />
                <property name="local" value="true" />
        </bean>

        <bean id="sd_y_motor" class="gda.device.motor.EpicsMotor">
                <property name="pvName" value="BL22I-EA-DET-02:Y" />
                <property name="local" value="true" />
        </bean>
        <bean id="sd_y" class="gda.device.scannable.ScannableMotor">
                <property name="motor" ref="sd_y_motor" />
                <property name="local" value="true" />
        </bean>

        <bean id="sd_pitch_motor" class="gda.device.motor.EpicsMotor">
                <property name="pvName" value="BL22I-EA-DET-02:RPITCH" />
                <property name="local" value="true" />
        </bean>
        <bean id="sd_pitch" class="gda.device.scannable.ScannableMotor">
                <property name="motor" ref="sd_pitch_motor" />
                <property name="local" value="true" />
        </bean>

        <bean id="sd" class="gda.device.scannable.scannablegroup.ScannableGroup">
                <property name="groupMembers">
                        <list>
                                <ref bean="sd_x" />
                                <ref bean="sd_y" />
                                <ref bean="sd_pitch" />
                        </list>
                </property>
                <property name="local" value="true" />
        </bean>
</beans>
