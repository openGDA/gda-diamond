<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

	<bean id="bs_x_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL22I-RS-ABSB-02:X" />
		<property name="local" value="true" />
	</bean>
	<bean id="bs_x" class="gda.device.scannable.ScannableMotor">
		<property name="motor" ref="bs_x_motor" />
		<property name="local" value="true" />
		<property name="protectionLevel" value="3" />
	</bean>

	<bean id="bs_y_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL22I-RS-ABSB-02:Y" />
		<property name="local" value="true" />
	</bean>
	<bean id="bs_y" class="gda.device.scannable.ScannableMotor">
		<property name="motor" ref="bs_y_motor" />
		<property name="local" value="true" />
		<property name="protectionLevel" value="3" />
	</bean>

	<bean id="bs" class="gda.device.scannable.scannablegroup.ScannableGroup">
		<property name="local" value="true" />
		<property name="groupMembers">
			<list>
				<ref bean="bs_x" />
				<ref bean="bs_y" />
			</list>
		</property>
		<property name="protectionLevel" value="3" />
	</bean>
</beans>