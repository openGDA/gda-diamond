<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">
	<description>
		There are 3 ways of configure EPICS access:
		1. use Java content objects provided by epics-x.x.x.jar to specify
		'deviceName' property;
		e.g. <!-- property name="deviceName" value="pilad.cam_ADBase"/ -->
		2. set pvProvider property which in turn uses XMLPVProvider bean to
		specify 'deviceName' property;
		e.g. <!-- property name="pvProvider"> <bean 
			class="uk.ac.gda.devices.excalibur.impl.XMLPVProvider"> <property name="deviceName" 
			value="pilad.cam_ADBase" /> </bean> </property -->
		3. set base PV name property with field or sub-element being coded in
		Java classes.
		e.g. <!-- property name="basePVName" value="BL12I-EA-DET-05:PIX:" / -->
	</description>

	<bean id="AreaDetector100k" class="gda.device.detector.areadetector.v17.impl.ADBaseImpl">
		<property name="basePVName" value="BL22I-EA-PILAT-02:cam1:" />
		<property name="initialDataType" value="UInt16" />
		<property name="initialMinX" value="0" />
		<property name="initialMinY" value="0" />
		<property name="initialSizeX" value="487" />
		<property name="initialSizeY" value="195" />
		<property name="initialBinX" value="1" />
		<property name="initialBinY" value="1" />
	</bean>

	<bean id="hdf5100k" class="gda.device.detector.areadetector.v17.impl.NDFileHDF5Impl">
		<property name="basePVName" value="BL22I-EA-PILAT-02:HDF5:" />
		 		<property name="compression" value="zlib" /> 
				<property name="zCompressLevel" value="1" /> 
				<property name="numRowChunks" value="10" /> 
		<property name="file">
			<bean class="gda.device.detector.areadetector.v17.impl.NDFileImpl">
				<property name="basePVName" value="BL22I-EA-PILAT-02:HDF5:" />
				<property name="initialAutoIncrement" value="0" />
				<property name="initialAutoSave" value="0" />
				<property name="initialWriteMode" value="0" />
				<property name="initialNumCapture" value="1" />
				<property name="initialFileName" value="helloworld" />
				<property name="initialFileTemplate" value="%s%s-%d.h5" />
				<property name="pluginBase">
					<bean class="gda.device.detector.areadetector.v17.impl.NDPluginBaseImpl">
						<property name="basePVName" value="BL22I-EA-PILAT-02:HDF5:" />
					</bean>
				</property>
			</bean>
		</property>
	</bean>	
	
	<bean id="array100k" class="gda.device.detector.areadetector.v17.impl.NDArrayImpl">
		<property name="basePVName" value="BL22I-EA-PILAT-02:image1:" />
		<property name="pluginBase">
			<bean class="gda.device.detector.areadetector.v17.impl.NDPluginBaseImpl">
				<property name="basePVName" value="BL22I-EA-PILAT-02:image1:" />
			</bean>
		</property>
	</bean>	
	
	<bean id="stats100k" class="gda.device.detector.areadetector.v17.impl.NDStatsImpl">
		<property name="basePVName" value="BL22I-EA-PILAT-02:STATS1:" />
	</bean>
	
	<bean id="controller100k" class="uk.ac.gda.server.ncd.pilatus.PilatusADController">
		<property name="basePVName" value="BL22I-EA-PILAT-02:cam1:" />
		<property name="areaDetector" ref="AreaDetector100k" />
		<property name="HDF5" ref="hdf5100k" />
		<property name="array" ref="array100k" />
		<property name="stats" ref="stats100k" />
	</bean>

	<bean id="Pilatus100k" class="uk.ac.gda.server.ncd.subdetector.NcdPilatusAD">
		<property name="controller" ref="controller100k" />
		<property name="detectorType" value="WAXS" />
		<property name="pixelSize" value="0.000172" />
	</bean>
</beans>
