<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

        <bean id="pimf_x_motor" class="gda.device.motor.EpicsMotor">
                <property name="pvName" value="BL22I-MO-TABLE-07:X" />
		<property name="local" value="true" />
        </bean>
        <bean id="pimf_x" class="gda.device.scannable.ScannableMotor">
                <property name="motor" ref="pimf_x_motor" />
		<property name="local" value="true" />
        </bean>

        <bean id="pimf_y_motor" class="gda.device.motor.EpicsMotor">
                <property name="pvName" value="BL22I-MO-TABLE-07:Y" />
		<property name="local" value="true" />
        </bean>
        <bean id="pimf_y" class="gda.device.scannable.ScannableMotor">
                <property name="motor" ref="pimf_y_motor" />
		<property name="local" value="true" />
        </bean>

        <bean id="pimf_z_motor" class="gda.device.motor.EpicsMotor">
                <property name="pvName" value="BL22I-MO-TABLE-07:Z" />
		<property name="local" value="true" />
        </bean>
        <bean id="pimf_z" class="gda.device.scannable.ScannableMotor">
                <property name="motor" ref="pimf_z_motor" />
		<property name="local" value="true" />
        </bean>

        <bean id="pimf" class="gda.device.scannable.scannablegroup.ScannableGroup">
		<property name="local" value="true" />
                <property name="groupMembers">
                        <list>
                                <ref bean="pimf_x" />
                                <ref bean="pimf_y" />
                                <ref bean="pimf_z" />
                        </list>
                </property>
        </bean>
</beans>
