<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

        <bean id="usery_size_motor" class="gda.device.motor.EpicsMotor">
                <property name="pvName" value="BL22I-MO-USER-01:Y:SIZE" />
		<property name="local" value="true" />
        </bean>
        <bean id="usery_size" class="gda.device.scannable.ScannableMotor">
                <property name="motor" ref="usery_size_motor" />
		<property name="local" value="true" />
        </bean>

        <bean id="usery_centre_motor" class="gda.device.motor.EpicsMotor">
                <property name="pvName" value="BL22I-MO-USER-01:Y:CENTER" />
		<property name="local" value="true" />
        </bean>
        <bean id="usery_centre" class="gda.device.scannable.ScannableMotor">
                <property name="motor" ref="usery_centre_motor" />
		<property name="local" value="true" />
        </bean>

        <bean id="usery" class="gda.device.scannable.scannablegroup.ScannableGroup">
		<property name="local" value="true" />
                <property name="groupMembers">
                        <list>
                                <ref bean="usery_size" />
                                <ref bean="usery_centre" />
                        </list>
                </property>
        </bean>
</beans>
