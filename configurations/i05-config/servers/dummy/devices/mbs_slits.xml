<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="mbs_slits" class="uk.ac.diamond.daq.devices.mbs.MBSAnalyserEntranceSlit">
		<property name="slits">
			<list>
				<bean
					class="uk.ac.diamond.daq.devices.mbs.MBSAnalyserEntranceSlit$EntranceSlit">
					<constructor-arg index="0" value="1" />
					<constructor-arg index="1" value="0.1" />
					<constructor-arg index="2" value="no aperture" />
					<constructor-arg index="3" value="vertical" />
				</bean>
				<bean
					class="uk.ac.diamond.daq.devices.mbs.MBSAnalyserEntranceSlit$EntranceSlit">
					<constructor-arg index="0" value="6" />
					<constructor-arg index="1" value="0.2" />
					<constructor-arg index="2" value="straight" />
					<constructor-arg index="3" value="vertical" />
				</bean>
				<bean
					class="uk.ac.diamond.daq.devices.mbs.MBSAnalyserEntranceSlit$EntranceSlit">
					<constructor-arg index="0" value="3" />
					<constructor-arg index="1" value="0.3" />
					<constructor-arg index="2" value="no aperture" />
					<constructor-arg index="3" value="vertical" />
				</bean>
				<bean
					class="uk.ac.diamond.daq.devices.mbs.MBSAnalyserEntranceSlit$EntranceSlit">
					<constructor-arg index="0" value="4" />
					<constructor-arg index="1" value="0.2" />
					<constructor-arg index="2" value="aperture" />
					<constructor-arg index="3" value="vertical" />
				</bean>
				<bean
					class="uk.ac.diamond.daq.devices.mbs.MBSAnalyserEntranceSlit$EntranceSlit">
					<constructor-arg index="0" value="5" />
					<constructor-arg index="1" value="0.3" />
					<constructor-arg index="2" value="aperture" />
					<constructor-arg index="3" value="vertical" />
				</bean>
				<bean
					class="uk.ac.diamond.daq.devices.mbs.MBSAnalyserEntranceSlit$EntranceSlit">
					<constructor-arg index="0" value="2" />
					<constructor-arg index="1" value="0.5" />
					<constructor-arg index="2" value="aperture" />
					<constructor-arg index="3" value="vertical" />
				</bean>
			</list>
		</property>
	</bean>
</beans>
