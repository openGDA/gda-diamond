<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="sockpuppet" class="gda.data.fileregistrar.ClientFileAnnouncer" />

	<bean id="FileRegistrar" class="gda.data.fileregistrar.FileRegistrar">
		<property name="name" value="FileRegistrar" />
		<property name="directory" value="/tmp/i05-" />
		<property name="clientFileAnnouncer" ref="sockpuppet" />
	</bean>

	<bean id="localscriptproject" class="gda.jython.ScriptProject">
 		<property name="path" value="${gda.data}" /> <!-- In dummy mode just use data folder for user scripts -->
		<property name="name" value="Scripts: User" />
		<property name="type" value="USER" />
	</bean>

	<import resource="../_common/server.xml"/>

</beans>