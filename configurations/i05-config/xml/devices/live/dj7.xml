<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="dj7_y_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL05J-DI-PHDGN-02:IONC:Y" />
		<property name="local" value="true" />
	</bean>
	<bean id="dj7y" class="gda.device.scannable.ScannableMotor">
		<property name="motor" ref="dj7_y_motor" />
		<property name="local" value="true" />
	</bean>

	<bean id="dj7filter" class="gda.spring.EpicsEnumPositionerFactoryBean">
		<property name="pvBase" value="BL05J-DI-PHDGN-02:IONC:Y:MP" />
		<property name="local" value="true" />
	</bean>

	<bean id="dj7current" class="gda.device.currentamplifier.CalibratedAmplifier">
		<property name="scalingAndOffset" ref="dj7gain" />
		<property name="useNameAsExtraName" value="true" />
		<property name="hasUnits" value="false" />
		<property name="pvName" value="BL05J-DI-PHDGN-02:DET:I" />
		<property name="local" value="true" />
	</bean>

	<bean id="dj7average" class="gda.device.currentamplifier.CalibratedAmplifier">
		<property name="scalingAndOffset" ref="dj7gain" />
		<property name="useNameAsExtraName" value="true" />
		<property name="hasUnits" value="false" />
		<property name="pvName" value="BL05J-DI-PHDGN-02:DET:IAV" />
		<property name="local" value="true" />
	</bean>

	<bean id="dj7gain" class="gda.device.currentamplifier.GainWithScalingAndOffset">
		<property name="pvName" value="BL05J-DI-PHDGN-02:DET:GAIN" />
		<property name="gaintosando">
			<map> <!-- scaling: multiply by negated gain exponent to display pre-gain value (amps) given the post-gain value (volts) -->
				<entry key="0">
					<bean class="gda.device.currentamplifier.ScalingAndOffsetParameters">
						<property name="scaling" value="10e-4" />
					</bean>
				</entry>
				<entry key="1">
					<bean class="gda.device.currentamplifier.ScalingAndOffsetParameters">
						<property name="scaling" value="10e-5" />
					</bean>
				</entry>
				<entry key="2">
					<bean class="gda.device.currentamplifier.ScalingAndOffsetParameters">
						<property name="scaling" value="10e-6" />
					</bean>
				</entry>
				<entry key="3">
					<bean class="gda.device.currentamplifier.ScalingAndOffsetParameters">
						<property name="scaling" value="10e-7" />
					</bean>
				</entry>
				<entry key="4">
					<bean class="gda.device.currentamplifier.ScalingAndOffsetParameters">
						<property name="scaling" value="10e-8" />
					</bean>
				</entry>
				<entry key="5">
					<bean class="gda.device.currentamplifier.ScalingAndOffsetParameters">
						<property name="scaling" value="10e-9" />
					</bean>
				</entry>
				<entry key="6">
					<bean class="gda.device.currentamplifier.ScalingAndOffsetParameters">
						<property name="scaling" value="10e-10" />
					</bean>
				</entry>
				<entry key="7">
					<bean class="gda.device.currentamplifier.ScalingAndOffsetParameters">
						<property name="scaling" value="10e-11" />
					</bean>
				</entry>
				<entry key="8">
					<bean class="gda.device.currentamplifier.ScalingAndOffsetParameters">
						<property name="scaling" value="10e-12" />
					</bean>
				</entry>
				<entry key="9">
					<bean class="gda.device.currentamplifier.ScalingAndOffsetParameters">
						<property name="scaling" value="10e-13" />
					</bean>
				</entry>
			</map>
		</property>
	</bean>

</beans>
