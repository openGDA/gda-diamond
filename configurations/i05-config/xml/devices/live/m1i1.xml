<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.springframework.org/schema/context
		http://www.springframework.org/schema/context/spring-context.xsd">

	<context:property-placeholder properties-ref="cameraPVs"/>
	
	<bean id="m1_i1CamBase" class="gda.spring.V17ADBaseFactoryBean">
		<property name="prefix" value="${m1_i1}:CAM:" />
	</bean>

	<bean id="m1_i1CollectionStrategy"	class="gda.device.detector.addetector.collectionstrategy.ConfigureAcquireTimeDecorator">
		<property name="restoreAcquireTime" value="true" />
		<property name="decoratee">
			<bean class="gda.device.detector.addetector.collectionstrategy.SingleImageModeDecorator">
				<property name="restoreNumImagesAndImageMode" value="true"/>
				<property name="decoratee">
					<bean class="gda.device.detector.addetector.collectionstrategy.InternalTriggerModeDecorator">
						<property name="decoratee">
							<bean class="gda.device.detector.addetector.collectionstrategy.SoftwareStartStop">
								<property name="adBase" ref="m1_i1CamBase" />
								<property name="restoreAcquireState" value="true"/>
							</bean>
						</property>
					</bean>
				</property>
			</bean>
		</property>
	</bean>
	
	<bean id="m1_i1Hdf5Filewriter" parent="abstractHdf5FilewriternNochunking">
		<property name="fileNameTemplate" value="m1_i1"/>
		<property name="ndFileHDF5">
			<bean class="gda.spring.V17NDFileHDF5FactoryBean">
				<property name="ndFileImpl">
					<bean class="gda.spring.V17NDFileFactoryBean">
						<property name="prefix" value="${m1_i1}:HDF5:" />
						<property name="resetToInitialValues" value="false" />
					</bean>
				</property>
			</bean>
		</property>
	</bean>

	<!-- The Object which gets the ROIs from the client over RMI -->
	<bean id="m1_i1_roi" class="gda.device.detector.nxdetector.roi.LiveStreamROIProvider" /> <!-- Make one per camera -->
	<!-- Export it over RMI so the client can use it -->
	<bean class="uk.ac.gda.remoting.server.GdaRmiServiceExporter">
	    <property name="serviceName" value="gda/m1_i1Roi" />
	    <property name="service" ref="m1_i1_roi" />
	    <property name="serviceInterface" value="gda.device.detector.nxdetector.roi.RemoteRectangularROIsProvider" />
	</bean>	

	<bean id="m1_i1_RoiStats1" class="gda.device.detector.nxdetector.plugin.areadetector.ADRoiStatsPairFactory">
		<property name="pluginName" value="m1_i1_RoiStats1" />
		<property name="baseRoiPVName" value="${m1_i1}:ROI1:" />
		<property name="baseStatsPVName" value="${m1_i1}:STAT1:" />
		<property name="roiInputNdArrayPort" value="SMPL.cam1.cam" />
		<property name="enabledBasicStats" value="Total" />
		<property name="oneTimeSeriesCollectionPerLine" value="false" />
		<property name="roiProvider">
	        <bean class="gda.device.detector.nxdetector.roi.LiveStreamRoiIndexer">
	            <property name="liveStreamRoiProvider" ref="m1_i1_roi" />
	            <property name="index" value="0" /> <!-- Zero based indexing i.e. Region 1 = index 0 -->
	        </bean>
		</property>
		<property name="legacyTSpvs" value="false"/>
	</bean>

	<bean id="m1_i1_RoiStats2" class="gda.device.detector.nxdetector.plugin.areadetector.ADRoiStatsPairFactory">
		<property name="pluginName" value="m1_i1_RoiStats2" />
		<property name="baseRoiPVName" value="${m1_i1}:ROI2:" />
		<property name="baseStatsPVName" value="${m1_i1}:STAT2:" />
		<property name="roiInputNdArrayPort" value="SMPL.cam1.cam" />
		<property name="enabledBasicStats" value="Total" />
		<property name="oneTimeSeriesCollectionPerLine" value="false" />
		<property name="roiProvider">
	        <bean class="gda.device.detector.nxdetector.roi.LiveStreamRoiIndexer">
	            <property name="liveStreamRoiProvider" ref="m1_i1_roi" />
	            <property name="index" value="1" /> 
	        </bean>
		</property>
		<property name="legacyTSpvs" value="false"/>
	</bean>

	<bean id="m1_i1_RoiStats3" class="gda.device.detector.nxdetector.plugin.areadetector.ADRoiStatsPairFactory">
		<property name="pluginName" value="m1_i1_RoiStats3" />
		<property name="baseRoiPVName" value="${m1_i1}:ROI3:" />
		<property name="baseStatsPVName" value="${m1_i1}:STAT3:" />
		<property name="roiInputNdArrayPort" value="SMPL.cam1.cam" />
		<property name="enabledBasicStats" value="Total" />
		<property name="oneTimeSeriesCollectionPerLine" value="false" />
		<property name="roiProvider">
	        <bean class="gda.device.detector.nxdetector.roi.LiveStreamRoiIndexer">
	            <property name="liveStreamRoiProvider" ref="m1_i1_roi" />
	            <property name="index" value="2" /> 
	        </bean>
		</property>
		<property name="legacyTSpvs" value="false"/>
	</bean>

	<bean id="m1_i1_RoiStats4" class="gda.device.detector.nxdetector.plugin.areadetector.ADRoiStatsPairFactory">
		<property name="pluginName" value="m1_i1_RoiStats4" />
		<property name="baseRoiPVName" value="${m1_i1}:ROI4:" />
		<property name="baseStatsPVName" value="${m1_i1}:STAT4:" />
		<property name="roiInputNdArrayPort" value="SMPL.cam1.cam" />
		<property name="enabledBasicStats" value="Total" />
		<property name="oneTimeSeriesCollectionPerLine" value="false" />
		<property name="roiProvider">
	        <bean class="gda.device.detector.nxdetector.roi.LiveStreamRoiIndexer">
	            <property name="liveStreamRoiProvider" ref="m1_i1_roi" />
	            <property name="index" value="3" /> 
	        </bean>
		</property>
		<property name="legacyTSpvs" value="false"/>
	</bean>

	<bean id="m1_i1_RoiStats5" class="gda.device.detector.nxdetector.plugin.areadetector.ADRoiStatsPairFactory">
		<property name="pluginName" value="m1_i1_RoiStats5" />
		<property name="baseRoiPVName" value="${m1_i1}:ROI5:" />
		<property name="baseStatsPVName" value="${m1_i1}:STAT5:" />
		<property name="roiInputNdArrayPort" value="SMPL.cam1.cam" />
		<property name="enabledBasicStats" value="Total" />
		<property name="oneTimeSeriesCollectionPerLine" value="false" />
		<property name="roiProvider">
	        <bean class="gda.device.detector.nxdetector.roi.LiveStreamRoiIndexer">
	            <property name="liveStreamRoiProvider" ref="m1_i1_roi" />
	            <property name="index" value="4" /> 
	        </bean>
		</property>
		<property name="legacyTSpvs" value="false"/>
	</bean>

	<bean id="m1_i1_RoiStats6" class="gda.device.detector.nxdetector.plugin.areadetector.ADRoiStatsPairFactory">
		<property name="pluginName" value="m1_i1_RoiStats6" />
		<property name="baseRoiPVName" value="${m1_i1}:ROI6:" />
		<property name="baseStatsPVName" value="${m1_i1}:STAT6:" />
		<property name="roiInputNdArrayPort" value="SMPL.cam1.cam" />
		<property name="enabledBasicStats" value="Total" />
		<property name="oneTimeSeriesCollectionPerLine" value="false" />
		<property name="roiProvider">
	        <bean class="gda.device.detector.nxdetector.roi.LiveStreamRoiIndexer">
	            <property name="liveStreamRoiProvider" ref="m1_i1_roi" />
	            <property name="index" value="5" /> 
	        </bean>
		</property>
		<property name="legacyTSpvs" value="false"/>
	</bean>

 	<bean id="m1i1" class="gda.device.detector.NXDetector">
		<property name="name" value="m1-i1" />
		<property name="collectionStrategy" ref="m1_i1CollectionStrategy" />
		<property name="additionalPluginList">
			<list>
				<ref bean="m1_i1_RoiStats1" />
				<ref bean="m1_i1_RoiStats2" />
				<ref bean="m1_i1_RoiStats3" />
				<ref bean="m1_i1_RoiStats4" />
				<ref bean="m1_i1_RoiStats5" />
				<ref bean="m1_i1_RoiStats6" />
				<ref bean="m1_i1Hdf5Filewriter" />
			</list>
		</property>
	</bean>


</beans>