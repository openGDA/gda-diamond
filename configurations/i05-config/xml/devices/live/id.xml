<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

        <bean id="rawid_gap_motor" class="gda.device.motor.EpicsMotor">
		<property name="deviceName" value="ID1.GAP" />
                <property name="local" value="true" />
        </bean>
        <bean id="rawid_gap" class="gda.device.scannable.ScannableMotor">
                <property name="motor" ref="rawid_gap_motor" />
                <property name="local" value="true" />
                <property name="tolerances"><list><value>0.002</value></list></property>
        </bean>

        <bean id="rawid_lowerphase_motor" class="gda.device.motor.EpicsMotor">
		<property name="deviceName" value="ID1.LOWERPHASE" />
                <property name="local" value="true" />
        </bean>
        <bean id="rawid_lowerphase" class="gda.device.scannable.ScannableMotor">
                <property name="motor" ref="rawid_lowerphase_motor" />
                <property name="local" value="true" />
				<property name="tolerances"><list><value>0.002</value></list></property>
		</bean>

        <bean id="rawid_upperphase_motor" class="gda.device.motor.EpicsMotor">
		<property name="deviceName" value="ID1.UPPERPHASE" />
                <property name="local" value="true" />
        </bean>
        <bean id="rawid_upperphase" class="gda.device.scannable.ScannableMotor">
                <property name="motor" ref="rawid_upperphase_motor" />
                <property name="local" value="true" />
				<property name="tolerances"><list><value>0.002</value></list></property>
		</bean>

        <bean id="rawid" class="gda.device.scannable.scannablegroup.ScannableGroup">
                <property name="groupMembers">
                        <list>
                                <ref bean="rawid_gap" />
                                <ref bean="rawid_lowerphase" />
                                <ref bean="rawid_upperphase" />
                        </list>
                </property>
                <property name="local" value="true" />
        </bean>

        <bean id="id" class="uk.ac.gda.beamline.i05.scannable.I05Apple">
        	<property name="gapScannable" ref="rawid_gap" />
        	<property name="upperPhaseScannable" ref="rawid_upperphase" />
        	<property name="lowerPhaseScannable" ref="rawid_lowerphase" />
        </bean>
</beans>