<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">
	<description>
		There are 3 ways of configure EPICS access:
		1. use Java content objects provided by epics-x.x.x.jar to specify
		'deviceName' property;
		e.g. <!-- property name="deviceName" value="pilad.cam_ADBase"/ -->
		2. set pvProvider property which in turn uses XMLPVProvider bean to
		specify 'deviceName' property;
		e.g. <!-- property name="pvProvider"> <bean 
			class="uk.ac.gda.devices.excalibur.impl.XMLPVProvider"> <property name="deviceName" 
			value="pilad.cam_ADBase" /> </bean> </property -->
		3. set base PV name property with field or sub-element being coded in
		Java classes.
		e.g. <!-- property name="basePVName" value="BL12I-EA-DET-05:PIX:" / -->
	</description>

	<bean id="area" class="gda.device.detector.areadetector.v17.impl.ADBaseImpl">
		<property name="basePVName" value="BL05I-EA-DET-01:CAM:" />
<!-- 		<property name="initialDataType" value="UInt16" />
		<property name="initialMinX" value="0" />
		<property name="initialMinY" value="0" />
		<property name="initialSizeX" value="1475" />
		<property name="initialSizeY" value="1679" />
		<property name="initialBinX" value="1" />
		<property name="initialBinY" value="1" />   -->
	</bean>

			<bean id="filebase" class="gda.device.detector.areadetector.v17.impl.NDFileImpl">
				<property name="basePVName" value="BL05I-EA-DET-01:HDF:" />
				<property name="initialAutoIncrement" value="0" />
				<property name="initialAutoSave" value="0" />
				<property name="initialWriteMode" value="0" />
				<property name="initialNumCapture" value="1" />
				<property name="initialFileName" value="helloworld" />
				<property name="initialFileTemplate" value="%s%s-%d.h5" />
				<property name="pluginBase">
					<bean class="gda.device.detector.areadetector.v17.impl.NDPluginBaseImpl">
						<property name="basePVName" value="BL22I-EA-PILAT-01:HDF5:" />
					</bean>
				</property>
			</bean>
			
	<bean id="hdf5" class="gda.device.detector.areadetector.v17.impl.NDFileHDF5Impl">
				<property name="basePVName" value="BL05I-EA-DET-01:HDF:" />
		 		<property name="compression" value="zlib" /> 
				<property name="zCompressLevel" value="1" /> 
				<property name="numRowChunks" value="10" /> 
				<property name="file" ref="filebase" />
	</bean>	
	
	<bean id="array" class="gda.device.detector.areadetector.v17.impl.NDArrayImpl">
		<property name="basePVName" value="BL05I-EA-DET-01:ARR1:" />
		<property name="pluginBase">
			<bean class="gda.device.detector.areadetector.v17.impl.NDPluginBaseImpl">
				<property name="basePVName" value="BL05I-EA-DET-01:ARR1:" />
			</bean>
		</property>
	</bean>	
	
	<bean id="mjpeg" class="gda.device.detector.areadetector.v17.impl.FfmpegStreamImpl">
		<property name="basePVName" value="BL05I-EA-DET-01:MPG:" />
				<property name="pluginBase">
			<bean class="gda.device.detector.areadetector.v17.impl.NDPluginBaseImpl">
				<property name="basePVName" value="BL05I-EA-DET-01:MPG:" />
			</bean>
		</property>
	</bean>
	
	<bean id="stats" class="gda.device.detector.areadetector.v17.impl.NDStatsImpl">
		<property name="basePVName" value="BL05I-EA-DET-01:STATS:" />
						<property name="pluginBase">
			<bean class="gda.device.detector.areadetector.v17.impl.NDPluginBaseImpl">
				<property name="basePVName" value="BL05I-EA-DET-01:STAT:" />
			</bean>
		</property>
	</bean>
	
	<bean id="controller" class="uk.ac.gda.arpes.detector.VGScientaController">
		<property name="basePVName" value="BL05I-EA-DET-01:CAM:" />
	</bean>
		
	<bean id="centre_energy" class="gda.device.controlpoint.EpicsControlPoint">
		<property name="pvNameGetPoint" value="BL05I-EA-DET-01:CAM:CENTRE_ENERGY_RBV" />
		<property name="pvNameSetPoint" value="BL05I-EA-DET-01:CAM:CENTRE_ENERGY" />
	</bean>	
	
	<bean id="acquire_time" class="gda.device.controlpoint.EpicsControlPoint">
		<property name="pvNameGetPoint" value="BL05I-EA-DET-01:CAM:AcquireTime_RBV" />
		<property name="pvNameSetPoint" value="BL05I-EA-DET-01:CAM:AcquireTime" />
	</bean>
	
	<bean id="AnalyserCapabilities" class="uk.ac.gda.arpes.detector.AnalyserCapabilties" />
	
	<bean id="analyser" class="uk.ac.gda.arpes.detector.VGScientaAnalyser">
		<property name="controller" ref="controller" />
		<property name="adBase" ref="area" />
		<property name="ndArray" ref="array" />
		<!-- <property name="ndStats" ref="stats" /> -->
		<property name="ndFile" ref="filebase" />
		<property name="local" value="false" />
		<property name="capabilities" ref="AnalyserCapabilities" />
		<property name="fixedModeRegion">
			<list>
				<value>0</value>
				<value>0</value>
				<value>948</value>
				<value>948</value>
			</list>
		</property>
	</bean>
	
	<bean id="AnalyserLive" class="uk.ac.gda.arpes.detector.AnalyserLiveDataDispatcher">
		<property name="analyser" ref="analyser" />
		<property name="plotName" value="Detector Plot" />
		<property name="arrayPV" value="BL05I-EA-DET-01:ARR1:ArrayData" />
	</bean>
</beans>
