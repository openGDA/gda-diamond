<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="cryostat" class="uk.ac.gda.arpes.scannable.EpicsLakeshore336">
		<property name="tolerance" value="0.1" />
		<property name="basePVName" value="BL05I-EA-TCTRL-02:" />
		<property name="local" value="true" />
		<property name="extraNames">
			<list>
				<value>cryostat</value>
				<value>sample</value>
				<value>shield</value>
				<value>heater</value>
				<value>heatersetting</value>
			</list>
		</property>
	</bean>

</beans>
