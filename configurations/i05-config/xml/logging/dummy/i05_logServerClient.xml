<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- display message in Logger Server's console -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
    <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
      <level>DEBUG</level>
    </filter>
        <layout class="ch.qos.logback.classic.PatternLayout">
            <Pattern>%date %-5level %logger{36} - %m %ex%n</Pattern>
        </layout>
    </appender>
    <logger name="gda">
        <level value="DEBUG"/>
    </logger>
    <logger name="gda.device.corba.impl">
        <level value="DEBUG"/>
    </logger>
    <logger name="gda.device.temperature.corba.impl">
        <level value="INFO"/>
    </logger>
    <logger name="gda.jython.corba.impl">
        <level value="INFO"/>
    </logger>
    <logger name="gda.oe.corba.impl">
        <level value="INFO"/>
    </logger>
    <logger name="gda.device.monitor.corba.impl">
        <level value="INFO"/>
    </logger>
    <logger name="gda.data.nexus.extractor.NexusExtractor">
        <level value="DEBUG"/>
    </logger>
    <logger name="gda.data.nexus.NexusFileWrapper">
        <level value="DEBUG"/>
    </logger>    
    <root>
        <level value="All"/>
        <appender-ref ref="CONSOLE"/>
    </root>
</configuration>
