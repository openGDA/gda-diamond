<?xml version="1.0" encoding="UTF-8"?>
<configuration>
<!-- address where the messages from Object Servers send to - the LogServer-->
    <appender name="SOCKET" class="ch.qos.logback.classic.net.SocketAppender">
        <RemoteHost>i05-control.diamond.ac.uk</RemoteHost>
        <Port>6788</Port>
        <ReconnectionDelay>10000</ReconnectionDelay>
        <IncludeCallerData>true</IncludeCallerData>
    </appender>
       <appender name="Console" class="ch.qos.logback.core.ConsoleAppender">
        <layout class="ch.qos.logback.classic.PatternLayout">
            <pattern>%d %-5level [%logger{36}] - %m%n</pattern>
        </layout>
    </appender>
    <logger name="gda">
        <level value="DEBUG"/>
    </logger>
    <logger name="gda.oe.dofs.DOF">
        <level value="INFO"/>
    </logger>
    <logger name="gda.device.corba.impl">
        <level value="INFO"/>
    </logger>
    <logger name="gda.device.temperature.corba.impl">
        <level value="INFO"/>
    </logger>
    <logger name="gda.jython.corba.impl">
        <level value="INFO"/>
    </logger>    
    <logger name="gda.oe.corba.impl">
        <level value="INFO"/>
    </logger> 
    <logger name="gda.device.monitor.corba.impl">
        <level value="INFO"/>
    </logger>   
    <logger name="gda.oe.positioners.Positioner">
        <level value="INFO"/>
    </logger>   
    <logger name="gda.data.nexus.extractor.NexusExtractor">
        <level value="DEBUG"/>
    </logger>
    <logger name="gda.data.nexus.NexusFileWrapper">
        <level value="DEBUG"/>
    </logger>    
    <logger name="gda.device.motor.MoveEventQueue"> 
        <level value="WARN"/>
    </logger>    
    <logger name="gda.device.motor.EpicsMotor"> 
        <level value="WARN"/>
    </logger>    
    <root>
        <level value="ALL"/>
        <appender-ref ref="SOCKET"/>
        <appender-ref ref="Console"/>
    </root>
    <consolePlugin />
</configuration>
