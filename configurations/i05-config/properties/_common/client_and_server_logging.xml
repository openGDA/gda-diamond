<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration>

<included>

	<!-- The include statement in the following java.properties file is not read so you need to reference both -->
	<!-- include file is relative to the application directory -->
	<property file="${gda.config}/properties/${gda.mode}/${gda.mode}_instance_java.properties" />
	<property file="${gda.config}/properties/_common/common_instance_java.properties" />

	<!-- address where the messages from Object Servers send to - the LogServer -->
	<appender name="SOCKET" class="ch.qos.logback.classic.net.SocketAppender">
		<RemoteHost>${gda.logserver.host}</RemoteHost>
		<Port>${gda.server.logging.port}</Port>
		<ReconnectionDelay>10000</ReconnectionDelay>
		<IncludeCallerData>true</IncludeCallerData>
	</appender>

	<!-- Configure the levels of specific loggers -->
	<logger name="gda.device.motor.DummyMotor" level="INFO"/>
	<logger name="gda.device.motor.EpicsMotor" level="INFO"/>
	<logger name="gda.device.motor.MoveEventQueue" level="INFO"/>
	<!-- This suppresses lots of warnings about chunking from the user see GDA-6192 -->
	<logger name="org.eclipse.dawnsci.hdf5.nexus.NexusFile" level="ERROR"/>
	<logger name="uk.ac.diamond.scisoft.analysis.plotclient.ScriptingConnection" level="INFO"/>
	<logger name="uk.ac.gda.rcp.views.sample.MetadataUpdater" level="INFO"/>
	<logger name="gda.scan.ScanDataPointPopulatorAndPublisher" level="INFO"/>
	<logger name="uk.ac.gda.devices.vgscienta.SweepUpdater" level="INFO"/>
	<logger name="gda.device.corba.impl.DeviceAdapter" level="INFO"/>

	<root>
		<level value="DEBUG" />
 		<appender-ref ref="SOCKET" /> <!-- to logserver -->
	</root>

</included>
