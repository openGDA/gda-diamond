<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<!-- es_i3 Controls in Live Stream Views-->
	<bean id="es_i3_time_remaining" class="uk.ac.gda.client.live.stream.controls.custom.widgets.CountDownControl">
		<property name="displayName" value="Time remain"/>
		<property name="group" value="Sample" />
		<property name="observable" ref="es_i3Countdown" />
		<property name="textWidth" value="30"/>
		<property name="userUnits" value="s" />
	</bean>
	<bean id="es_i3_time_remaining_progress" class="uk.ac.gda.client.live.stream.controls.custom.widgets.CountDownProgressBarControl">
		<property name="displayName" value=""/>
		<property name="group" value="Sample" />
		<property name="observable" ref="es_i3CountdownProgress" />
		<property name="barWidth" value="110"/>
	</bean>
	<bean id="es_i3_expsure_time_control" class="uk.ac.gda.client.livecontrol.ScannableValueControl">
		<property name="displayName" value="Exposure" />
		<property name="group" value="Sample" />
		<property name="scannableName" value="es_i3ExposureTime" />
		<property name="textWidth" value="50"/>
		<property name="userUnits" value="s" />
	</bean>
	<bean id="es_i3_acquire_period_control" class="uk.ac.gda.client.livecontrol.ScannableValueControl">
		<property name="displayName" value="Period" />
		<property name="group" value="Sample" />
		<property name="scannableName" value="es_i3AcquirePeriod" />
		<property name="textWidth" value="50"/>
		<property name="userUnits" value="s" />
	</bean>
	
</beans>
