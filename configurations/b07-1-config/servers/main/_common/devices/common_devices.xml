<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans.xsd">

	<!-- Ring -->
	<import resource="ring.xml"/>

	<!-- Slits -->
	<import resource="s1c.xml"/>
	<import resource="s2c.xml"/>
	<import resource="s3c.xml"/>
	<import resource="s4c.xml"/>
	
	<!-- Mirrors -->
	<import resource="m1c.xml"/>
	<import resource="m3c.xml"/>

	<!-- Diagnostics -->
	<import resource="d1c.xml"/>
	<import resource="d2c.xml"/>
	<import resource="d3c.xml"/>
	
	<!-- Monocromators -->
	<import resource="pgm.xml"/>

	<!-- Dummy devices -->
	<import resource="dummy.xml"/>

</beans>
