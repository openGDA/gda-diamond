<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="d7c_y_positioner" class="gda.device.enumpositioner.EpicsPositionerCallback">
		<property name="recordName" value="BL07C-DI-PHDGN-07:IONC:Y:MP" />
	</bean>

	<bean id="d7c_y_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL07C-DI-PHDGN-07:IONC:Y" />
		<property name="local" value="true" />
	</bean>

	<bean id="d7c_current1" class="gda.device.currentamplifier.CalibratedAmplifier">
		<property name="useNameAsExtraName" value="true" />
		<property name="hasUnits" value="false" />
		<property name="pvName" value="BL07C-DI-PHDGN-07:I1:I" />
		<property name="upperThreshold" value="9.5" />
		<property name="autoGain" value="false" />
		<property name="local" value="true" />
		<property name="scalingAndOffset">
			<bean class="gda.device.currentamplifier.GainWithScalingAndOffset">
				<property name="pvName" value="BL07C-DI-PHDGN-07:I1:I:GAIN" />
				<property name="gaintosando">
					<ref bean="scaling_offset_map"/>
				</property>
			</bean>
		</property>
	</bean>

	<bean id="d7c_current1_av" class="gda.device.currentamplifier.CalibratedAmplifier">
		<property name="useNameAsExtraName" value="true" />
		<property name="hasUnits" value="false" />
		<property name="pvName" value="BL07C-DI-PHDGN-07:I1:IAV" />
		<property name="upperThreshold" value="9.5" />
		<property name="autoGain" value="false" />
		<property name="local" value="true" />
		<property name="scalingAndOffset">
			<bean class="gda.device.currentamplifier.GainWithScalingAndOffset">
				<property name="pvName" value="BL07C-DI-PHDGN-07:I1:I:GAIN" />
				<property name="gaintosando">
					<ref bean="scaling_offset_map"/>
				</property>
			</bean>
		</property>
	</bean>

	<bean id="d7c_current2" class="gda.device.currentamplifier.CalibratedAmplifier">
		<property name="useNameAsExtraName" value="true" />
		<property name="hasUnits" value="false" />
		<property name="pvName" value="BL07C-DI-PHDGN-07:I2:I" />
		<property name="upperThreshold" value="9.5" />
		<property name="autoGain" value="false" />
		<property name="local" value="true" />
		<property name="scalingAndOffset">
			<bean class="gda.device.currentamplifier.GainWithScalingAndOffset">
				<property name="pvName" value="BL07C-DI-PHDGN-07:I2:I:GAIN" />
				<property name="gaintosando">
					<ref bean="scaling_offset_map"/>
				</property>
			</bean>
		</property>
	</bean>

	<bean id="d7c_current2_av" class="gda.device.currentamplifier.CalibratedAmplifier">
		<property name="useNameAsExtraName" value="true" />
		<property name="hasUnits" value="false" />
		<property name="pvName" value="BL07C-DI-PHDGN-07:I1:IAV" />
		<property name="upperThreshold" value="9.5" />
		<property name="autoGain" value="false" />
		<property name="local" value="true" />
		<property name="scalingAndOffset">
			<bean class="gda.device.currentamplifier.GainWithScalingAndOffset">
				<property name="pvName" value="BL07C-DI-PHDGN-07:I2:I:GAIN" />
				<property name="gaintosando">
					<ref bean="scaling_offset_map"/>
				</property>
			</bean>
		</property>
	</bean>

</beans>
