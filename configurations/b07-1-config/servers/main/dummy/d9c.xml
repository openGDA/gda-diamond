<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<!-- Area detector camera -->
	<!-- To use this, you will have to start an area detector simulator -->
	<!-- and edit adSimulator.xml with the correct PVs for your simulator -->
	<bean id="d9c_cam" class="gda.device.detector.NXDetector">
		<property name="name" value="dgncam" />
		<property name="collectionStrategy" ref="simCollectionStrategy" />
		<property name="additionalPluginList">
			<list>
				<ref bean="simRoiStats" />
				<ref bean="simHdf5Filewriter" />
			</list>
		</property>
	</bean>
	
	<bean id="d9c_foil" class="gda.device.scannable.DummyScannable" />

	<bean id="d9c_y_positioner" class="gda.device.enumpositioner.DummyEnumPositioner">
		<property name="positions">
			<list>
				<value>Out of Beam</value>
				<value>Screen</value>
			</list>
		</property>
	</bean>
	
	<!-- This is to move the motor underneath the positioner to make scans. Maybe can be removed after commissioning-->
	<bean id="d9c_y_motor" class="gda.device.motor.DummyMotor">
		<property name="local" value="true" />
	</bean>

</beans>
