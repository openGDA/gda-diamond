<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <appender name="GDALOGPANEL" class="gda.util.LogPanelAppender">
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>DEBUG</level>
        </filter>
        <layout class="ch.qos.logback.classic.PatternLayout">
            <pattern>%date %-5level %logger - %m %rEx %n</pattern>
        </layout>
    </appender>    
    <logger name="gda">
        <level value="INFO"/>
    </logger>
    
     <logger name="gda.device.scannable.ScannableMotor">
        <level value="DEBUG"/>
    </logger>
     <logger name="gda.device.motor.EpicsMotor">
        <level value="DEBUG"/>
    </logger>
    <root>
        <level value="ALL"/>
        <appender-ref ref="GDALOGPANEL"/>
    </root>
</configuration>
