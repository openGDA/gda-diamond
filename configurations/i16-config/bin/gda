#!/bin/bash

if [ -f "/etc/profile.d/modules.sh" ]; then
  . /etc/profile.d/modules.sh
fi

module load java/gda826

PYTHON=/dls_sw/tools/bin/python2.5

GDA_INSTALL_WORKSPACE_LOC=`readlink -f /dls_sw/$BEAMLINE/software/gda`
GDA_INSTALL_GIT_LOC=`readlink -f $GDA_INSTALL_WORKSPACE_LOC/../workspace_git`

echo 'JAVA_HOME:' $JAVA_HOME
echo '   PYTHON:' $PYTHON
echo 'WORKSPACE:' $GDA_INSTALL_WORKSPACE_LOC

GDA=$GDA_INSTALL_GIT_LOC/gda-core.git/uk.ac.gda.core/bin/gda
$PYTHON $GDA $@

