<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

	<!-- AD hardware -->
	
	<bean id="cam5_adbase" class="gda.device.detector.areadetector.v17.impl.ADBaseImpl">
		<property name="basePVName" value="BL16I-DI-EYE-01:CAM:" />
	</bean>

	
	<bean id="cam5_ndfile_base" class="gda.device.detector.areadetector.v17.impl.NDPluginBaseImpl">
		<property name="basePVName" value="BL16I-DI-EYE-01:TIFF:" />
	</bean>

	<bean id="cam5_ndfile" class="gda.device.detector.areadetector.v17.impl.NDFileImpl">
		<property name="basePVName" value="BL16I-DI-EYE-01:TIFF:" />
		<property name="resetToInitialValues" value="false" />
		<property name="pluginBase" ref="cam5_ndfile_base" />
	</bean>



<!-- CAM1.TIFF_NDPluginBase -->
	<!-- NXDetector collection strategies -->

	<bean id="cam5_nxcollectionstrategy"
		class="gda.device.detector.addetector.triggering.SingleExposureStandard">
		<constructor-arg ref="cam5_adbase" />
		<constructor-arg value="-1" />
	</bean>


	<!-- NXDetector file writers -->

	<bean id="cam5_nxfilewriter_for_scans"
		class="gda.device.detector.nxdetector.plugin.areadetector.filewriter.SingleImagePerFileWriter">
		<constructor-arg value="cam5" />
		<property name="ndFile" ref="cam5_ndfile" />
		<property name="keyNameForMetadataPathTemplate" value="cam5_path_template" />
		<property name="writeErrorStatusSupported" value="false"/>
		<property name="alwaysPrepare" value="true" />
	</bean>

	<bean id="cam5_nxfilewriter_for_snaps"
		class="gda.device.detector.nxdetector.plugin.areadetector.filewriter.SingleImagePerFileWriterWithNumTracker">
		<constructor-arg value="cam5" />
		<property name="ndFile" ref="cam5_ndfile" />
		<property name="numTrackerExtension" value="cam5snaps" />
		<property name="keyNameForMetadataPathTemplate" value="cam5_path_template" />
		<property name="writeErrorStatusSupported" value="false"/>
		<property name="alwaysPrepare" value="true" />
	</bean>


	<!-- NXDetectors -->

	<bean id="cam5" class="gda.device.detector.NXDetector">
		<property name="name" value="cam5" />
		<property name="collectionStrategy" ref="cam5_nxcollectionstrategy" />
		<property name="additionalPluginList">
			<list>
				<ref bean="cam5_nxfilewriter_for_scans" />
			</list>
		</property>
	</bean>
	
		<bean id="cam5_for_snaps" class="gda.device.detector.NXDetector">
		<property name="name" value="cam5_for_snaps" />
		<property name="collectionStrategy" ref="cam5_nxcollectionstrategy" />
		<property name="additionalPluginList">
			<list>
				<ref bean="cam5_nxfilewriter_for_snaps" />
			</list>
		</property>
	</bean>

</beans>