<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

	<bean id="pilatus2_driver" class="gda.device.detector.areadetector.v17.impl.ADDriverPilatusImpl">
		<property name="deviceName" value="pilatus2_pilatus" />
	</bean>

	<bean id="pilatus2_adbase"  class="gda.device.detector.areadetector.v17.impl.ADBaseImpl">
		<property name="deviceName" value="pilatus2_ADBase" />
	</bean>

	<bean id="pilatus2" class="gda.device.detector.addetector.HardwareTriggerableADDetector">

		<property name="readAcquisitionTime" value="true" />
		
		<property name="readFilepath" value="true" />
		
		<property name="readAcquisitionPeriod" value="false" />
		
		<property name="computeStats" value="false" />
		
		<property name="computeCentroid" value="false" />
		
		<property name="readArray" value="false" />

		<property name="adBase" ref="pilatus2_adbase"/>
		
		<property name="hardwareTriggerProvider" ref="xpsTrajController" />


	<property name="hardwareTriggeredCollectionStrategy">
		<bean class="gda.device.detector.addetector.triggering.HardwareTriggeredPilatus">
			<constructor-arg ref="pilatus2_adbase" />
			<constructor-arg ref="pilatus2_driver" />
			<constructor-arg value=".003" />
			<constructor-arg value="EXTERNAL_TRIGGER" />
		</bean>
	</property>
	<property name="nonHardwareTriggeredCollectionStrategy">
		<bean class="gda.device.detector.addetector.triggering.SingleExposurePilatus">
			<constructor-arg ref="pilatus2_adbase" />
			<constructor-arg value=".003" />
		</bean>
	</property>
		
		<property name="ndFile">
			<bean class="gda.device.detector.areadetector.v17.impl.NDFileImpl">
				<property name="deviceName" value="pilatus2_NDFile" />
				<property name="initialAutoSave" value="Not hooked up to anything!" /> <!-- currently yes -->
				<property name="initialAutoIncrement" value="Not hooked up to anything!" /> <!-- currently true -->
				<property name="initialWriteMode" value="0" /> <!-- Single(current), Capture, Stream, -->
				<property name="initialNumCapture" value="1" /> <!-- current = 1 -->
				<property name="initialFileName" value="p" />
				<property name="initialFileTemplate" value="%s%s%d.tif" />
			</bean>
		</property>
		
		<property name="fileWriter">
			<bean class="gda.device.detector.addetector.filewriter.NullFileWriter"></bean>
		</property>
		
		<property name="ndArray">
			<bean class="gda.device.detector.areadetector.v17.impl.NDArrayImpl">
				<property name="deviceName" value="pilatus2.Image1_NDStdArrays" />
				<property name="pluginBase">
					<bean class="gda.device.detector.areadetector.v17.impl.NDPluginBaseImpl">
						<property name="deviceName" value="pilatus2.Image1_NDPluginBase" />
					</bean>
				</property>
			</bean>
		</property>
		
		<property name="ndStats">
			<bean class="gda.device.detector.areadetector.v17.impl.NDStatsImpl">
				<property name="deviceName" value="pilatus2.STATS1_NDStats" />
				<property name="pluginBase">
					<bean class="gda.device.detector.areadetector.v17.impl.NDPluginBaseImpl">
						<property name="deviceName" value="pilatus2.STATS1_NDPluginBase" />
					</bean>
				</property>
			</bean>
		</property>

	</bean>


	<bean id="pilatus2.ROI1_NDROI" class="gda.device.detector.areadetector.v17.impl.NDROIImpl">
		<property name="deviceName" value="pilatus2.ROI1_NDROI" />
		<property name="pluginBase">
			<bean class="gda.device.detector.areadetector.v17.impl.NDPluginBaseImpl">
				<property name="deviceName" value="pilatus2.ROI1_NDPluginBase" />
			</bean>
		</property>
		<property name="initialBinX" value="0" />
		<property name="initialBinY" value="0" />
		<property name="initialMinX" value="0" />
		<property name="initialMinY" value="0" />
		<property name="initialSizeX" value="487" />
		<property name="initialSizeY" value="195" />
	</bean>

	<bean id="pilatus2.PROC1_NDProcess" class="gda.device.detector.areadetector.v17.impl.NDProcessImpl">
		<property name="deviceName" value="pilatus2.PROC1_NDProcess" />
		<property name="pluginBase">
			<bean class="gda.device.detector.areadetector.v17.impl.NDPluginBaseImpl">
				<property name="deviceName" value="pilatus2.PROC1_NDPluginBase" />
			</bean>
		</property>

	</bean>

	<bean id="pilatus2.MJPG1_ffmpegStream"
		class="gda.device.detector.areadetector.v17.impl.FfmpegStreamImpl">
		<property name="deviceName" value="pilatus2.MJPG1_ffmpegStream" />
		<property name="pluginBase">
			<bean class="gda.device.detector.areadetector.v17.impl.NDPluginBaseImpl">
				<property name="deviceName" value="pilatus2.MJPG1_NDPluginBase" />
			</bean>
		</property>

	</bean>



	<bean id="pilatus2.STATS2_NDStats" class="gda.device.detector.areadetector.v17.impl.NDStatsImpl">
		<property name="deviceName" value="pilatus2.STATS2_NDStats" />
		<property name="pluginBase">
			<bean class="gda.device.detector.areadetector.v17.impl.NDPluginBaseImpl">
				<property name="deviceName" value="pilatus2.STATS2_NDPluginBase" />
			</bean>
		</property>

	</bean>

	<bean id="pilatus2.HDF5_NDFileHDF5"
		class="gda.device.detector.areadetector.v17.impl.NDFileHDF5Impl">
		<property name="deviceName" value="pilatus2.HDF5_NDFileHDF5" />
		<property name="file">
			<bean class="gda.device.detector.areadetector.v17.impl.NDFileImpl">
				<property name="deviceName" value="pilatus2.HDF5_NDFile" />
				<property name="pluginBase">
					<bean class="gda.device.detector.areadetector.v17.impl.NDPluginBaseImpl">
						<property name="deviceName" value="pilatus2.HDF5_NDPluginBase" />
					</bean>
				</property>
				<property name="initialAutoSave" value="Not hooked up to anything!" /> <!-- currently yes -->
				<property name="initialAutoIncrement" value="Not hooked up to anything!" /> <!-- currently true -->
				<property name="initialWriteMode" value="0" /> <!-- Single(current), Capture, Stream, -->
				<property name="initialNumCapture" value="1" /> <!-- current = 1 -->
				<property name="initialFileName" value="p" />
				<property name="initialFileTemplate" value="%s%s%d.tif" />
			</bean>
		</property>
	</bean>

</beans>

