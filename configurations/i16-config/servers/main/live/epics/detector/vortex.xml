<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

	<!-- epics records -->
	
	<bean id="epicsAdcRecord01" class="gda.epics.xml.EpicsRecord">
		<property name="name" value="epicsAdcRecord01"/>
		<property name="deviceName" value="Vortex1"/>
		<property name="subsystemName" value="ADC1"/>
	</bean>

	<bean id="epicsTcaRecord01" class="gda.epics.xml.EpicsRecord">
		<property name="name" value="epicsTcaRecord01"/>
		<property name="deviceName" value="Vortex1"/>
		<property name="subsystemName" value="TCA1"/>
	</bean>
	
	<!-- devices -->
	
	<bean id="epicsMca01" class="gda.device.detector.analyser.EpicsMCA">
		<property name="pvName" value="BL16I-EA-DET-01:aim_adc1" />
		<property name="numberOfRegions" value="32" />
		<property name="local" value="true" />
	</bean>
	
	<bean id="epicsAdc01" class="gda.device.adc.EpicsADC">
		<!-- property name="deviceName" value="Vortex_ADC.1" /-->
		<property name="epicsAdcRecordName" value="epicsAdcRecord01" />
		<property name="local" value="true" />
	</bean>
	
	<bean id="epicsTca01" class="gda.device.EpicsTca">
		<!-- property name="deviceName" value="Vortex_TCA.1" /-->
		<property name="epicsTcaRecordName" value="epicsTcaRecord01" />
		<property name="local" value="true" />
	</bean>



	<bean id="edxdcontroller" class="gda.device.detector.xmap.edxd.EDXDMappingController">
		<property name="local" value="true" />
		<property name="epicsDeviceName" value="xmap_dxp" />
		<property name="elementOffset" value="1" />
		<property name="aquisitionTimeOn" value="true" />
	</bean>

	<bean id="xmapcontroller" class="gda.device.detector.xmap.EpicsXmapControllerROI">
		<property name="edxdController" ref="edxdcontroller" />
		<property name="numberOfElements" value="1" />
		<property name="local" value="true" />
	</bean>

	<bean id="xmapMca" class="gda.device.detector.xmap.NexusXmap">
		<property name="xmapControllerName" value="xmapcontroller" />
		<property name="eventProcessingTimes">
			<list>
				<value>1.1029752060937018e-007</value>
			</list>
		</property>
		<property name="outputFormat">
			<list>
				<value>%.2f</value>
			</list>
		</property>
		<property name="extraNames">
			<list>
				<value>Element1</value>
			</list>
		</property>
		<property name="alwaysRecordRawMCAs" value="true" />
		<property name="slave" value="false" />
		<property name="configFileName"
			value="${gda.config}/xml/vortex_parameters.xml" />
	</bean>



