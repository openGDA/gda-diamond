<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

	<bean id="andor1_adbase" class="gda.device.detector.areadetector.v17.impl.ADBaseImpl">
		<property name="deviceName" value="ANDOR1_ADBase" />
	</bean>

	<bean id="andor_ndfile" class="gda.device.detector.areadetector.v17.impl.NDFileImpl">
		<property name="deviceName" value="ANDOR1_NDFile" />
		<property name="initialAutoSave" value="Not hooked up to anything!" /> <!-- currently yes -->
		<property name="initialAutoIncrement" value="Not hooked up to anything!" /> <!-- currently true -->
		<property name="initialWriteMode" value="0" /> <!-- Single(current), Capture, Stream, -->
		<property name="initialNumCapture" value="1" /> <!-- current = 1 -->
		<property name="initialFileName" value="p" />
		<property name="initialFileTemplate" value="%s%s%d.tif" />
	</bean>

	<bean id="andor1det" class="gda.device.detector.addetector.ADDetector">

		<property name="readAcquisitionTime" value="true" />

		<property name="readFilepath" value="true" />

		<property name="readAcquisitionPeriod" value="false" />

		<property name="computeStats" value="false" />

		<property name="computeCentroid" value="false" />

		<property name="readArray" value="false" />

		<property name="adBase" ref="andor1_adbase" />

		<property name="ndFile" ref="andor_ndfile"/>

		<property name="collectionStrategy">
			<bean class="gda.device.detector.addetector.triggering.SingleExposureStandard">
				<constructor-arg ref="andor1_adbase" />
				<constructor-arg value="-1" />
			</bean>
		</property>
	
		<property name="fileWriter">
			<bean class="gda.device.detector.addetector.filewriter.SingleImagePerFileWriter">
				<constructor-arg value="andor" />
				<constructor-arg ref="andor_ndfile" />
				<constructor-arg value="false" />
				<constructor-arg value="" />
				<constructor-arg value="" />
			</bean>
		</property>
	</bean>

</beans>