<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">
	
	<bean id="S6YSizeMotor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL16I-AL-SLITS-06:Y:GAP" />
		<property name="local" value="true" />
	</bean>
	<bean id="S6YTransMotor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL16I-AL-SLITS-06:Y:TRANSLATION" />
		<property name="local" value="true" />
	</bean>
	<bean id="S6XSizeMotor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL16I-AL-SLITS-06:X:GAP" />
		<property name="local" value="true" />
	</bean>
	<bean id="S6XTransMotor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL16I-AL-SLITS-06:X:TRANSLATION" />
		<property name="local" value="true" />
	</bean>
	
</beans>
