	<bean id="sixcDeltaXpsController" class="gda.device.motor.NewportXPSController">
		<property name="host" value="172.23.116.165"/>
		<property name="port" value="5001"/>
		<property name="local" value="true" />
	</bean>
	<bean id="sixcGammaXpsController" class="gda.device.motor.NewportXPSController">
		<property name="host" value="172.23.116.165"/>
		<property name="port" value="5001"/>
		<property name="local" value="true" />
	</bean>
	<bean id="sixcMuXpsController" class="gda.device.motor.NewportXPSController">
		<property name="host" value="172.23.116.165"/>
		<property name="port" value="5001"/>
		<property name="local" value="true" />
	</bean>
	<bean id="sixcKThXpsController" class="gda.device.motor.NewportXPSController">
		<property name="host" value="172.23.116.165"/>
		<property name="port" value="5001"/>
		<property name="local" value="true" />
	</bean>
	<bean id="sixcKappaXpsController" class="gda.device.motor.NewportXPSController">
		<property name="host" value="172.23.116.165"/>
		<property name="port" value="5001"/>
		<property name="local" value="true" />
	</bean>
	<bean id="sixcKphiXpsController" class="gda.device.motor.NewportXPSController">
		<property name="host" value="172.23.116.165"/>
		<property name="port" value="5001"/>
		<property name="local" value="true" />
	</bean>
	
	<bean id="sixcGammaMotor" class="gda.device.motor.NewportXPSMotor">
		<property name="newportXpsControllerName" ref="sixcGammaXpsController"/>
		<property name="xpsGroupName" value="GROUP1"/>
		<property name="xpsPositionerName" value="Gamma"/>
		<property name="safeToAutoHome" value="false"/>
		<property name="local" value="true" />
	</bean>
	<bean id="sixcDeltaMotor" class="gda.device.motor.NewportXPSMotor">
		<property name="newportXpsControllerName" value="sixcDeltaXpsController"/>
		<property name="xpsGroupName" value="GROUP2"/>
		<property name="xpsPositionerName" value="2Theta"/>
		<property name="safeToAutoHome" value="false"/>
		<property name="local" value="true" />
	</bean>
	<bean id="sixcMuMotor" class="gda.device.motor.NewportXPSMotor">
		<property name="newportXpsControllerName" ref="sixcMuXpsController"/>
		<property name="xpsGroupName" value="GROUP3"/>
		<property name="xpsPositionerName" value="Mu"/>
		<property name="safeToAutoHome" value="false"/>
		<property name="local" value="true" />
	</bean>
	<bean id="sixcKthMotor" class="gda.device.motor.NewportXPSMotor">
		<property name="newportXpsControllerName" ref="sixcKthXpsController"/>
		<property name="xpsGroupName" value="GROUP4"/>
		<property name="xpsPositionerName" value="Teta"/>
		<property name="safeToAutoHome" value="false"/>
		<property name="local" value="true" />
	</bean>
	<bean id="sixcKappaMotor" class="gda.device.motor.NewportXPSMotor_VaryIntegration">
		<property name="newportXpsControllerName" ref="sixcKappaXpsController"/>
		<property name="xpsGroupName" value="GROUP5"/>
		<property name="xpsPositionerName" value="Kappa"/>
		<property name="safeToAutoHome" value="false"/>
		<property name="KIWhenMoving" value="2"/>
		<property name="KIWhenStationary" value="2"/>
		<property name="local" value="true" />
	</bean>
	<bean id="sixcKphiMotor" class="gda.device.motor.NewportXPSMotor">
		<property name="newportXpsControllerName" ref="sixcKphiXpsController"/>
		<property name="xpsGroupName" value="GROUP6"/>
		<property name="xpsPositionerName" value="Phi"/>
		<property name="safeToAutoHome" value="false"/>
