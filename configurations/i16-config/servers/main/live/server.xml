<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
		http://www.springframework.org/schema/context
		http://www.springframework.org/schema/context/spring-context.xsd">

	<context:property-placeholder/>

	<bean class="gda.spring.FindableNameSetterPostProcessor" />

	<import resource="file:${gda.install.git.loc}/gda-mt.git/configurations/mt-config/servers/main/common/required_at_start.xml"/>

	<import resource="epics/motor/atten.xml" />
	<import resource="epics/motor/diag.xml" />
	<import resource="epics/motor/id.xml" />
	<import resource="epics/motor/dcm.xml" />
	<import resource="epics/motor/m1.xml" />
	<import resource="epics/motor/m2.xml" />
	<import resource="epics/motor/p2.xml" />
	<import resource="epics/motor/pa.xml" />
	<import resource="epics/motor/s1.xml" />
	<import resource="epics/motor/s2.xml" />
	<import resource="epics/motor/s3.xml" />
	<import resource="epics/motor/s4.xml" />
	<import resource="epics/motor/s5.xml" />
	<import resource="epics/motor/s6.xml" />
	<import resource="epics/motor/s7.xml" />
	<import resource="epics/motor/sixc.xml" />
	<import resource="epics/motor/sixcbase.xml" />
	<!--<import resource="transient/kbmbase.xml" /-->
	<!--<import resource="transient/smargon.xml" />-->
	
	<import resource="epics/motor/sixcsample.xml" />

	<import resource="../_common/scannable/motors.xml" />
	<import resource="../live/epics/pie725_raster.xml" />
	<import resource="../live/epics/detector/rasterpil1.xml" />

	<import resource="epics/monitor/currentamps.xml" />
	<import resource="epics/monitor/machine.xml" />
	<import resource="epics/monitor/sixc.xml" />

	<bean id="ic1monitor_" class="gda.device.monitor.EpicsMonitor">
		<property name="pvName" value="BL16I-EA-USER-01:AI4AV" />
		<property name="local" value="true" />
		<property name="poll" value="false" />
	</bean>
	<bean id="ic1poll_" class="gda.device.monitor.EpicsMonitor">
		<property name="pvName" value="BL16I-EA-USER-01:AI4AV" />
		<property name="local" value="true" />
		<property name="poll" value="true" />
	</bean>

	<!--<import resource="epics/detector/vortex.xml" />-->
	<import resource="epics/detector/pilatus100k.xml" />
	<import resource="epics/detector/pilatus3_100k.xml" />
<!-- 	<import resource="epics/detector/fastpil1.xml" /> -->
	<import resource="epics/detector/pilatus2M.xml" />
	<import resource="epics/detector/andor1.xml" />
	<import resource="epics/detector/cam1.xml" />
	<import resource="epics/detector/cam2.xml" />
	<import resource="epics/detector/cam5.xml" />
	<!-- <import resource="epics/detector/medipix.xml" />-->
	<import resource="epics/detector/merlin.xml" />
	<import resource="epics/detector/c10.xml" />
	<import resource="epics/detector/xeye.xml" />
	<import resource="epics/detector/zylar.xml" />

	<import resource="file:${gda.install.git.loc}/gda-mt.git/configurations/mt-config/servers/main/common/abstract_command_server.xml"/>

	<bean id="script_paths" parent="common_script_paths_with_diffcalc_and_epics"/>
	
	<bean id="beamline_test_suite" class="gda.jython.ScriptProject">
		<property name="path" value="${gda.config}/scripts/livetest/startUp"/>
		<property name="name" value="Scripts: Tests" />
		<property name="type" value="CONFIG" />
	</bean>
	
	<!-- We don't like duplicating stuff in common_script_paths_with_diffcalc but need a way to extend the list inside the gda.jython.ScriptPaths class -->
	<bean id="common_script_paths_with_diffcalc_and_epics" class="gda.jython.ScriptPaths">
		<property name="projects">
			<list>
				<ref bean="user_script_project" />
				<ref bean="diffcalc_script_project" />
				<ref bean="beamline_config_script_project" />
				<ref bean="mt_config_script_project" />
				<ref bean="gda_core_script_project" />
				<ref bean="gda_epics_script_project" />
				<ref bean ="beamline_test_suite" />
			</list>
		</property>
		<property name="startupScript" value="${gda.config}/scripts/localStation.py" />
	</bean>

	<bean id="command_server" parent="abstract_command_server">
		<property name="jythonScriptPaths" ref="script_paths"/>
		<property name="stopJythonScannablesOnStopAll" value="false" />
		<property name="disableBatonControlOverVisitMetadataEntry" value="true" />
	</bean>

	<bean id="terminallog_path_provider" class="gda.data.SimpleObservablePathProvider">
		<property name="local" value="true" />
	</bean>

	<import resource="file:${gda.install.git.loc}/gda-mt.git/configurations/mt-config/servers/main/common/terminal_logger.xml" />


	<!-- live only -->

	<import resource="metadata.xml" />
	<import resource="../_common/nxmetadata.xml" />

	<import resource="file://${gda.facility.dir}/servers/_common/file_registrar.xml" />
	<import resource="file://${gda.facility.dir}/servers/${gda.mode}/icat_xml_creator.xml" />

	<bean id="Beamline" class="gda.device.epicsdevice.FindableEpicsDevice">
		<property name="recordPVs">
			<map>
				<entry key="Top" value="BL16I"/>
			</map>
		</property>
	</bean>

	<bean id="DefaultDataWriterFactory" class="gda.data.scan.datawriter.DefaultDataWriterFactory">
		<property name="name" value="DefaultDataWriterFactory" />
		<property name="dataWriterExtenders">
			<list>
			</list>
		</property>
	</bean>

	<bean class="gda.spring.SingletonRegistrationPostProcessor" />

	<!-- Exports objects over RMI -->
	<bean class="uk.ac.gda.remoting.server.RmiAutomatedExporter" />
</beans>
