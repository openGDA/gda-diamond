	<bean id="pilatus3_stats" class="gda.device.detector.nexusprocessor.DatasetStats">
		<property name="enabledStats">
			<list>
				<value>MAX_VAL</value>
				<value>MAX_X</value>
				<value>MAX_Y</value>
				<value>SUM</value>
			</list>
		</property>
		<property name="statNames">
			<map>
				<entry key="MAX_VAL" value="pil3_max_val"/>
				<entry key="MAX_X" value="pil3_max_x"/>
				<entry key="MAX_Y" value="pil3_max_y"/>
				<entry key="SUM" value="pil3_total"/>
			</map>
		</property>
	</bean>

	<bean class="org.eclipse.scanning.device.NexusMetadataAppender" init-method="register">
