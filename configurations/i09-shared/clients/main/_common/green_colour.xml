<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="green_colour" class="org.eclipse.swt.graphics.Color">
		<constructor-arg name="device">
			<null/>
		</constructor-arg>
		<constructor-arg name="red">
			<value>0</value>
		</constructor-arg>
		<constructor-arg name="green">
			<value>255</value>
		</constructor-arg>
		<constructor-arg name="blue">
			<value>0</value>
		</constructor-arg>
	</bean>

</beans>