<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<!-- PEEM line XPEEM Manipulating Stage Motors -->
	<bean id="pscx" class="gda.device.scannable.ScannableMotor">
		<property name="motor" ref="periscope_top_X" />
		<property name="protectionLevel" value="0" />
		<property name="initialUserUnits" value="deg" />
		<property name="hardwareUnitString" value="deg" />
	</bean>
	<bean id="pscy" class="gda.device.scannable.ScannableMotor">
		<property name="motor" ref="periscope_top_Y" />
		<property name="protectionLevel" value="0" />
		<property name="initialUserUnits" value="deg" />
		<property name="hardwareUnitString" value="deg" />
	</bean>

</beans>
