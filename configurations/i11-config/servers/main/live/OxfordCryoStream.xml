<?xml version='1.0' encoding='UTF-8'?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="ocs" class="gda.device.temperature.OxfordCryostream700">
		<property name="configureAtStartup" value="true" />
		<property name="probeNames">
			<list>
				<value>ocs_probe</value>
			</list>
		</property>
		<property name="accuracy" value="0.5" />
		<property name="polltime" value="1000" />
		<property name="fileSuffix" value="temp" />
		<property name="upperTemp" value="500.0" />
		<property name="lowerTemp" value="80.0" />
		<property name="cryoController" ref="ocs_controller" />
	</bean>

	<bean id="ocs2" class="gda.device.temperature.OxfordCryostream700">
		<property name="configureAtStartup" value="true" />
		<property name="probeNames">
			<list>
				<value>ocs2_probe</value>
			</list>
		</property>
		<property name="accuracy" value="0.5" />
		<property name="polltime" value="1000" />
		<property name="fileSuffix" value="temp" />
		<property name="upperTemp" value="500.0" />
		<property name="lowerTemp" value="80.0" />
		<property name="cryoController" ref="ocs2_controller" />
	</bean>

	<bean id="ocs_controller" class="gda.device.temperature.CryoController">
		<property name="local" value="true" />
		<property name="configureAtStartup" value="true" />
		<property name="pvRoot" value="BL11I-CG-CSTRM-01" />
	</bean>

	<bean id="ocs2_controller" class="gda.device.temperature.CryoController">
		<property name="local" value="true" />
		<property name="configureAtStartup" value="true" />
		<property name="pvRoot" value="BL11I-CG-CSTRM-02" />
	</bean>
</beans>
