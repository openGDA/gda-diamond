<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<!-- NXDetector collection strategies -->

	<bean id="pixis1CollectionStrategy"	class="gda.device.detector.addetector.collectionstrategy.InitialiseDetectorAfterExposureTimeChangeDecorator">
		<property name="detector">
			<bean id="pixis" class="gda.device.detector.pvcam.EpicsPvCam" init-method="init" destroy-method="destroy">
				<property name="basePVName" value="BL06I-EA-PIXIS-01:CAM:"/>
				<property name="name" value="pixis"/>
			</bean>
		</property>	
		<property name="decoratee">		
			<bean class="gda.device.detector.addetector.collectionstrategy.ConfigureAcquireTimeDecorator">
				<property name="restoreAcquireTime" value="false" />
				<property name="decoratee">
					<bean class="gda.device.detector.addetector.collectionstrategy.SingleImageModeDecorator">
						<property name="restoreNumImagesAndImageMode" value="true"/>
						<property name="decoratee">
							<bean class="gda.device.detector.addetector.collectionstrategy.InternalTriggerModeDecorator">
								<property name="decoratee">
									<bean class="gda.device.detector.addetector.collectionstrategy.SoftwareStartStop">
										<property name="adBase" ref="pixis_adbase" />
										<property name="restoreAcquireState" value="true"/>
									</bean>
								</property>
							</bean>
						</property>
					</bean>
				</property>
			</bean>
		</property>
	</bean>
	<!-- NXDetector file writers -->

	<!-- SingleImagePerFileWriter(String detectorName)
	 -->
	<bean id="pixis_nxfilewriter_for_scans"
		class="gda.device.detector.nxdetector.plugin.areadetector.filewriter.SingleImagePerFileWriter">
		<constructor-arg value="pixis" />
		<property name="ndFile" ref="pixis_ndfile_tiff" />
		<property name="keyNameForMetadataPathTemplate" value="pixis_path_template" />
		<property name="blocking" value="false"/>
		<property name="pathErrorSuppressed" value="true"/>
		<property name="fileTemplate" value="%s%s_%05d.tif"/>
		<property name="filePathTemplate" value="$datadir$/$scan$_PixisImage"/>
		<property name="fileNameTemplate" value="pixis"/>
		<property name="fileNumberAtScanStart" value="1"/>
	</bean>

	<!-- SingleImagePerFileWriterWithNumTracker(String detectorName)
	 -->
	<bean id="pixis_nxfilewriter_for_snaps"
		class="gda.device.detector.addetector.filewriter.SingleImagePerFileWriterWithNumTracker">
		<constructor-arg value="pixis" />
		<property name="ndFile" ref="pixis_ndfile_tiff" />
		<property name="numTrackerExtension" value="pixis1snaps" />
		<property name="keyNameForMetadataPathTemplate" value="pixis_path_template" />
		<property name="blocking" value="false"/>
		<property name="pathErrorSuppressed" value="true"/>
		<property name="fileTemplate" value="%s%s_%05d.tif"/>
		<property name="filePathTemplate" value="$datadir$/$scan$_PixisImage"/>
		<property name="fileNameTemplate" value="pixis"/>
		<property name="fileNumberAtScanStart" value="1"/>
	</bean>

	<!-- NXDetectors -->

	<bean id="pixis" class="gda.device.detector.NXDetector">
		<property name="name" value="pixis1det" />
		<property name="collectionStrategy" ref="pixis1CollectionStrategy" />
		<property name="additionalPluginList">
			<list>
				<ref bean="pixis_RoiStats1" />
				<ref bean="pixis_RoiStats2" />
				<ref bean="pixis_RoiStats3" />
				<ref bean="pixis_RoiStats4" />
				<ref bean="pixis_RoiStats5" />
				<ref bean="pixis_RoiStats6" />
				<ref bean="pixis_nxfilewriter_for_scans" />
			</list>
		</property>
	</bean>

	<bean id="pixis_for_snaps" class="gda.device.detector.NXDetector">
		<property name="name" value="pixis1det_for_snaps" />
		<property name="collectionStrategy" ref="pixis1CollectionStrategy" />
		<property name="additionalPluginList">
			<list>
				<ref bean="pixis_RoiStats1" />
				<ref bean="pixis_RoiStats2" />
				<ref bean="pixis_RoiStats3" />
				<ref bean="pixis_RoiStats4" />
				<ref bean="pixis_RoiStats5" />
				<ref bean="pixis_RoiStats6" />
				<ref bean="pixis_nxfilewriter_for_snaps" />
			</list>
		</property>
	</bean>
	
		<!-- NXDetector file writers -->
	<bean id="m4cam1_hdf5_MultipleImagesPerHDF5FileWriter" class="gda.device.detector.addetector.filewriter.MultipleImagesPerHDF5FileWriter">
		<property name="ndFileHDF5" ref="m4cam1_NDFileHDF5" />
		<property name="fileTemplate" value="%s%s%05d.hdf5" />
		<property name="filePathTemplate" value="$datadir$" />
		<property name="fileNameTemplate" value="$scan$-m4cam1" />
		<property name="fileNumberAtScanStart" value="-1" />
		<property name="setChunking" value="false" />
		<property name="lazyOpen" value="true" />
	</bean>

	<!-- SingleImagePerFileWriter(String detectorName)	 -->
	<bean id="m4cam1_tiff_SingleImagePerFileWriter" class="gda.device.detector.addetector.filewriter.SingleImagePerFileWriter">
		<constructor-arg value="m4cam1" />
		<property name="ndFile" ref="m4cam1_NDFileTiff" />
		<property name="keyNameForMetadataPathTemplate" value="m4cam1_path_template" />
	</bean>
		<!-- NXDetectors -->
 	<bean id="m4cam1" class="gda.device.detector.NXDetector">
		<property name="name" value="m4cam1" />
		<property name="collectionStrategy" ref="m4cam1ADCollectionStrategy" />
		<property name="additionalPluginList">
			<list>
				<ref bean="m4_RoiStats1" />
				<ref bean="m4_RoiStats2" />
				<ref bean="m4_RoiStats3" />
				<ref bean="m4_RoiStats4" />
				<ref bean="m4_RoiStats5" />
				<ref bean="m4_RoiStats6" />
				<ref bean="m4cam1_hdf5_MultipleImagesPerHDF5FileWriter" />
				<ref bean="m4cam1_tiff_SingleImagePerFileWriter" />
			</list>
		</property>
	</bean>
</beans>
