<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans.xsd">

	<!-- AD hardware -->
	<!-- AD hardware -->
	<!-- Standard Area Detector plugins -->
	<bean id="pixis_adbase" class="gda.spring.V17ADBaseFactoryBean">
		<property name="prefix" value="BL06I-EA-PIXIS-01:CAM:" />
	</bean>

	<bean id="pixis_arr" class="gda.spring.V17NDArrayFactoryBean">
		<property name="prefix" value="BL06I-EA-PIXIS-01:ARR:" />
	</bean>

	<bean id="pixis_stat" class="gda.spring.V17NDStatsFactoryBean">
		<property name="prefix" value="BL06I-EA-PIXIS-01:STAT:" />
	</bean>

	<bean id="pixis_ROI" class="gda.spring.V17NDROIFactoryBean">
		<property name="prefix" value="BL06I-EA-PIXIS-01:ROI:" />
	</bean>

	<bean id="pixis_mjpg" class="gda.spring.V17FfmpegStreamFactoryBean">
		<property name="prefix" value="BL06I-EA-PIXIS-01:MJPG:" />
	</bean>

	<bean id="pixis_proc" class="gda.spring.V17NDProcessFactoryBean">
		<property name="prefix" value="BL06I-EA-PIXIS-01:PROC:" />
	</bean>

	<bean id="pixis_ndfile_tiff" class="gda.device.detector.areadetector.v17.impl.NDFileImpl">
		<property name="basePVName" value="BL06I-EA-PIXIS-01:TIFF1:" />
		<property name="pluginBase">
			<bean class="gda.device.detector.areadetector.v17.impl.NDPluginBaseImpl">
				<property name="basePVName" value="BL06I-EA-PIXIS-01:TIFF1:" />
			</bean>
		</property>
		<property name="resetToInitialValues" value="false" />
		<property name="filePathConverter">
			<bean class="uk.ac.gda.util.UnixToWindowsFilePathConverter">
				<property name="unixSubString" value="/dls/i10/data" />
				<property name="windowsSubString" value="x:\data" />
			</bean>
		</property>
	</bean>

	<!-- The Object which gets the ROIs from the client over RMI -->
	<bean id="pixis_roi" class="gda.device.detector.nxdetector.roi.LiveStreamROIProvider" /> <!-- Make one per camera -->
	<!-- Export it over RMI so the client can use it -->
	<bean class="uk.ac.gda.remoting.server.GdaRmiServiceExporter">
	    <property name="serviceName" value="gda/pixisRoi" />
	    <property name="service" ref="pixis_roi" />
	    <property name="serviceInterface" value="gda.device.detector.nxdetector.roi.RemoteRectangularROIsProvider" />
	</bean>	
	
	<bean id="pixis_RoiStats1" class="gda.device.detector.nxdetector.plugin.areadetector.ADRoiStatsPairFactory">
		<property name="pluginName" value="pixis_RoiStats1" />
		<property name="baseRoiPVName" value="BL06I-EA-PIXIS-01:ROI1:" />
		<property name="baseStatsPVName" value="BL06I-EA-PIXIS-01:STAT1:" />
		<property name="roiInputNdArrayPort" value="PVCAM" />
		<property name="enabledBasicStats" value="Total" />
		<property name="oneTimeSeriesCollectionPerLine" value="false" />
		<property name="roiProvider">
	        <bean class="gda.device.detector.nxdetector.roi.LiveStreamRoiIndexer">
	            <property name="liveStreamRoiProvider" ref="pixis_roi" />
	            <property name="index" value="0" /> <!-- Zero based indexing i.e. Region 1 = index 0 -->
	        </bean>
		</property>
	</bean>

	<bean id="pixis_RoiStats2" class="gda.device.detector.nxdetector.plugin.areadetector.ADRoiStatsPairFactory">
		<property name="pluginName" value="pixis_RoiStats2" />
		<property name="baseRoiPVName" value="BL06I-EA-PIXIS-01:ROI2:" />
		<property name="baseStatsPVName" value="BL06I-EA-PIXIS-01:STAT2:" />
		<property name="roiInputNdArrayPort" value="PVCAM" />
		<property name="enabledBasicStats" value="Total" />
		<property name="oneTimeSeriesCollectionPerLine" value="false" />
		<property name="roiProvider">
	        <bean class="gda.device.detector.nxdetector.roi.LiveStreamRoiIndexer">
	            <property name="liveStreamRoiProvider" ref="pixis_roi" />
	            <property name="index" value="1" /> 
	        </bean>
		</property>
	</bean>
	<bean id="pixis_RoiStats3" class="gda.device.detector.nxdetector.plugin.areadetector.ADRoiStatsPairFactory">
		<property name="pluginName" value="pixis_RoiStats3" />
		<property name="baseRoiPVName" value="BL06I-EA-PIXIS-01:ROI3:" />
		<property name="baseStatsPVName" value="BL06I-EA-PIXIS-01:STAT3:" />
		<property name="roiInputNdArrayPort" value="PVCAM" />
		<property name="enabledBasicStats" value="Total" />
		<property name="oneTimeSeriesCollectionPerLine" value="false" />
		<property name="roiProvider">
	        <bean class="gda.device.detector.nxdetector.roi.LiveStreamRoiIndexer">
	            <property name="liveStreamRoiProvider" ref="pixis_roi" />
	            <property name="index" value="2" /> 
	        </bean>
		</property>
	</bean>
	<bean id="pixis_RoiStats4" class="gda.device.detector.nxdetector.plugin.areadetector.ADRoiStatsPairFactory">
		<property name="pluginName" value="pixis_RoiStats4" />
		<property name="baseRoiPVName" value="BL06I-EA-PIXIS-01:ROI4:" />
		<property name="baseStatsPVName" value="BL06I-EA-PIXIS-01:STAT4:" />
		<property name="roiInputNdArrayPort" value="PVCAM" />
		<property name="enabledBasicStats" value="Total" />
		<property name="oneTimeSeriesCollectionPerLine" value="false" />
		<property name="roiProvider">
	        <bean class="gda.device.detector.nxdetector.roi.LiveStreamRoiIndexer">
	            <property name="liveStreamRoiProvider" ref="pixis_roi" />
	            <property name="index" value="3" /> 
	        </bean>
		</property>
	</bean>
	<bean id="pixis_RoiStats5" class="gda.device.detector.nxdetector.plugin.areadetector.ADRoiStatsPairFactory">
		<property name="pluginName" value="pixis_RoiStats5" />
		<property name="baseRoiPVName" value="BL06I-EA-PIXIS-01:ROI5:" />
		<property name="baseStatsPVName" value="BL06I-EA-PIXIS-01:STAT5:" />
		<property name="roiInputNdArrayPort" value="PVCAM" />
		<property name="enabledBasicStats" value="Total" />
		<property name="oneTimeSeriesCollectionPerLine" value="false" />
		<property name="roiProvider">
	        <bean class="gda.device.detector.nxdetector.roi.LiveStreamRoiIndexer">
	            <property name="liveStreamRoiProvider" ref="pixis_roi" />
	            <property name="index" value="4" /> 
	        </bean>
		</property>
	</bean>
	<bean id="pixis_RoiStats6" class="gda.device.detector.nxdetector.plugin.areadetector.ADRoiStatsPairFactory">
		<property name="pluginName" value="pixis_RoiStats6" />
		<property name="baseRoiPVName" value="BL06I-EA-PIXIS-01:ROI6:" />
		<property name="baseStatsPVName" value="BL06I-EA-PIXIS-01:STAT6:" />
		<property name="roiInputNdArrayPort" value="PVCAM" />
		<property name="enabledBasicStats" value="Total" />
		<property name="oneTimeSeriesCollectionPerLine" value="false" />
		<property name="roiProvider">
	        <bean class="gda.device.detector.nxdetector.roi.LiveStreamRoiIndexer">
	            <property name="liveStreamRoiProvider" ref="pixis_roi" />
	            <property name="index" value="5" /> 
	        </bean>
		</property>
	</bean>

	<bean id="pixisCollectionStrategy"	class="gda.device.detector.addetector.collectionstrategy.InitialiseDetectorAfterExposureTimeChangeDecorator">
		<property name="detector">
			<bean id="pixis" class="gda.device.detector.pvcam.EpicsPvCam" init-method="init" destroy-method="destroy">
				<property name="basePVName" value="BL06I-EA-PIXIS-01:CAM:"/>
				<property name="name" value="pixis"/>
			</bean>
		</property>	
		<property name="decoratee">		
			<bean class="gda.device.detector.addetector.collectionstrategy.ConfigureAcquireTimeDecorator">
				<property name="restoreAcquireTime" value="false" />
				<property name="decoratee">
					<bean class="gda.device.detector.addetector.collectionstrategy.SingleImageModeDecorator">
						<property name="restoreNumImagesAndImageMode" value="true"/>
						<property name="decoratee">
							<bean class="gda.device.detector.addetector.collectionstrategy.InternalTriggerModeDecorator">
								<property name="decoratee">
									<bean class="gda.device.detector.addetector.collectionstrategy.SoftwareStartStop">
										<property name="adBase" ref="pixis1_adbase" />
										<property name="restoreAcquireState" value="true"/>
									</bean>
								</property>
							</bean>
						</property>
					</bean>
				</property>
			</bean>
		</property>
	</bean>

	<!-- NXDetector file writers -->

	<!-- SingleImagePerFileWriter(String detectorName)
	 -->
	<bean id="pixis1_nxfilewriter_for_scans"
		class="gda.device.detector.nxdetector.plugin.areadetector.filewriter.SingleImagePerFileWriter">
		<constructor-arg value="pixis" />
		<property name="ndFile" ref="pixis_ndfile" />
		<property name="keyNameForMetadataPathTemplate" value="pixis_path_template" />
		<property name="blocking" value="false"/>
		<property name="pathErrorSuppressed" value="true"/>
		<property name="fileTemplate" value="%s%s_%05d.tif"/>
		<property name="filePathTemplate" value="$datadir$/$scan$_PixisImage"/>
		<property name="fileNameTemplate" value="pixis"/>
		<property name="fileNumberAtScanStart" value="1"/>
	</bean>

</beans>