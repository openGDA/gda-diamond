<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<!-- PIXIS controls -->
	<beans profile="DD">
		<bean id="pixisExposureTime" class="gda.device.scannable.EpicsScannable">
			<property name="pvName" value="BL06J-EA-PIXIS-01:CAM:AcquireTime"/>
			<property name="useNameAsInputName" value="true"/>
			<property name="hasUnits" value="false"/>	
			<property name="outputFormat">
				<list>
					<value>%4.3f</value>
				</list>
			</property>
		</bean>
		<bean id="pixisAcquirePeriod" class="gda.device.scannable.EpicsScannable">
			<property name="pvName" value="BL06J-EA-PIXIS-01:CAM:AcquirePeriod"/>
			<property name="useNameAsInputName" value="true"/>
			<property name="hasUnits" value="false"/>	
			<property name="outputFormat">
				<list>
					<value>%4.3f</value>
				</list>
			</property>
		</bean>
		<bean id="pixisProcNumFilter" class="gda.device.scannable.EpicsScannable">
			<property name="pvName" value="BL06J-EA-PIXIS-01:PROC:NumFilter"/>
			<property name="useNameAsInputName" value="true"/>
			<property name="hasUnits" value="false"/>	
			<property name="outputFormat">
				<list>
					<value>%2d</value>
				</list>
			</property>
		</bean>
	</beans>

</beans>
