<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

	<!-- NXDetector collection strategies -->

	<bean id="bpm1_SingleExposureStandardCollectionStrategy" 
			class="gda.device.detector.addetector.collectionstrategy.ConfigureAcquireTimeDecorator">
		<property name="restoreAcquireTime" value="true"/>
		<property name="decoratee">
			<bean class="gda.device.detector.addetector.collectionstrategy.SingleImageModeDecorator">
				<property name="restoreNumImagesAndImageMode" value="true"/>
				<property name="decoratee">
					<bean class="gda.device.detector.addetector.collectionstrategy.InternalTriggerModeDecorator">
						<property name="restoreTriggerMode" value="true"/>
						<property name="decoratee">
							<bean class="gda.device.detector.addetector.collectionstrategy.SoftwareStartStop">
								<property name="adBase" ref="bpm1AD_cam" />
								<property name="restoreAcquireState" value="true"/>
							</bean>
						</property>
					</bean>
				</property>
			</bean>
		</property>
	</bean>

	<!-- NXDetector file writers -->

	<bean id="bpm1_hdf5_MultipleImagesPerHDF5FileWriter"
			class="gda.device.detector.addetector.filewriter.MultipleImagesPerHDF5FileWriter">
		<property name="ndFileHDF5" ref="bpm1_NDFileHDF5" />
		<property name="fileTemplate" value="%s%s%05d.hdf5" />
		<property name="filePathTemplate" value="$datadir$/$scan$" />
		<property name="fileNameTemplate" value="bpm1-" />
		<property name="fileNumberAtScanStart" value="-1" />
		<property name="setChunking" value="false" />
		<property name="lazyOpen" value="true" />
	</bean>
	<!-- This generates files of the form $datadir$/$scan$/bpm1.hdf5 -->

	<!-- SingleImagePerFileWriter(String detectorName)
	 -->
	<bean id="bpm1_tiff_SingleImagePerFileWriter"
			class="gda.device.detector.addetector.filewriter.SingleImagePerFileWriter">
		<property name="ndFile" ref="bpm1_NDFileTiff" />
		<property name="fileTemplate" value="%s%s%05d.tif" />
		<property name="filePathTemplate" value="$datadir$/$scan$/bpm1" />
		<property name="fileNameTemplate" value="" />
		<property name="fileNumberAtScanStart" value="1" />
		<property name="keyNameForMetadataPathTemplate" value="bpm1_path_template" />
	</bean>
	<!-- To generate files of the form $datadir$/$scan$-bpm1-files/%05d.tif :
		<property name="fileTemplate" value="%s%s%05d.tif" />
		<property name="filePathTemplate" value="$datadir$/$scan$-bpm1-files" />
		<property name="fileNameTemplate" value="" />
	-->

	<!-- NXDetectors -->

	<bean id="bpm1rawNx" class="gda.device.detector.NXDetector">
		<property name="name" value="bpm1rawNx" />
		<property name="collectionStrategy" ref="bpm1_SingleExposureStandardCollectionStrategy" />
		<property name="additionalPluginList">
			<list>
				<ref bean="bpm1_hdf5_MultipleImagesPerHDF5FileWriter" />
				<ref bean="bpm1_tiff_SingleImagePerFileWriter" />
			</list>
		</property>
	</bean>

	<!-- ADDetectors -->

	<bean id="bpm1rawAD" class="gda.device.detector.addetector.ADDetector">
		<property name="adBase" ref="bpm1AD_cam"/>
		<property name="collectionStrategy" ref="bpm1_SingleExposureStandardCollectionStrategy" />
		<property name="ndFile"  ref="bpm1_NDFileHDF5file"/>
		<property name="ndArray" ref="bpm1AD_arr"/>
		<property name="ndStats" ref="bpm1AD_stat"/>
		<property name="fileWriter" ref="bpm1_hdf5_MultipleImagesPerHDF5FileWriter"/>
	</bean>
</beans>
