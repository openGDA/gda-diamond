<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

	<!-- NXDetector collection strategies -->

	<bean id="eye_SingleExposureStandardCollectionStrategy" 
			class="gda.device.detector.addetector.collectionstrategy.ConfigureAcquireTimeDecorator">
		<property name="restoreAcquireTime" value="true"/>
		<property name="decoratee">
			<bean class="gda.device.detector.addetector.collectionstrategy.SingleImageModeDecorator">
				<property name="restoreNumImagesAndImageMode" value="true"/>
				<property name="decoratee">
					<bean class="gda.device.detector.addetector.collectionstrategy.SoftwareStartStop">
						<property name="adBase" ref="eyeAD_cam" />
						<property name="restoreAcquireState" value="true"/>
					</bean>
				</property>
			</bean>
		</property>
	</bean>

	<!-- NXDetector file writers -->

	<bean id="eye_hdf5_MultipleImagesPerHDF5FileWriter"
			class="gda.device.detector.addetector.filewriter.MultipleImagesPerHDF5FileWriter">
		<property name="ndFileHDF5" ref="eye_NDFileHDF5" />
		<property name="fileTemplate" value="%s%s%05d.hdf5" />
		<property name="filePathTemplate" value="$datadir$/$scan$" />
		<property name="fileNameTemplate" value="eye" />
		<property name="fileNumberAtScanStart" value="-1" />
		<property name="setChunking" value="false" />
		<property name="lazyOpen" value="true" />
	</bean>
	<!-- This generates files of the form $datadir$/$scan$/eye.hdf5 -->

	<!-- SingleImagePerFileWriter(String detectorName)
	 -->
	<bean id="eye_tiff_SingleImagePerFileWriter"
			class="gda.device.detector.addetector.filewriter.SingleImagePerFileWriter">
		<property name="ndFile" ref="eye_NDFileTiff" />
		<property name="fileTemplate" value="%s%s%05d.tif" />
		<property name="filePathTemplate" value="$datadir$/$scan$/eye" />
		<property name="fileNameTemplate" value="" />
		<property name="fileNumberAtScanStart" value="1" />
		<property name="keyNameForMetadataPathTemplate" value="eye_path_template" />
	</bean>
	<!-- To generate files of the form $datadir$/$scan$-eye-files/%05d.tif :
		<property name="fileTemplate" value="%s%s%05d.tif" />
		<property name="filePathTemplate" value="$datadir$/$scan$-eye-files" />
		<property name="fileNameTemplate" value="" />
	-->

	<!-- NXDetectors -->

	<bean id="eyeRawNx" class="gda.device.detector.NXDetector">
		<property name="name" value="eyeRawNx" />
		<property name="collectionStrategy" ref="eye_SingleExposureStandardCollectionStrategy" />
		<property name="additionalPluginList">
			<list>
				<ref bean="eye_hdf5_MultipleImagesPerHDF5FileWriter" />
				<ref bean="eye_tiff_SingleImagePerFileWriter" />
			</list>
		</property>
	</bean>

	<!-- ADDetectors -->

	<bean id="eyeRawAD" class="gda.device.detector.addetector.ADDetector">
		<property name="adBase" ref="eyeAD_cam"/>
		<property name="collectionStrategy" ref="eye_SingleExposureStandardCollectionStrategy" />
		<property name="ndFile"  ref="eye_NDFileHDF5file"/>
		<property name="ndArray" ref="eyeAD_arr"/>
		<property name="ndStats" ref="eyeAD_stat"/>
		<property name="fileWriter" ref=eye_hdf5_MultipleImagesPerHDF5FileWriter"/>
	</bean>
</beans>
