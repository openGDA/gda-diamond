<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans.xsd"
	profile="trans">

	<bean id="transX" class="gda.device.scannable.ScannableMotor">
		<property name="initialUserUnits" value="mm"/>
		<property name="motor" ref="transX_motor" />
	</bean>

	<bean id="transPhi" class="gda.device.scannable.ScannableMotor">
		<property name="initialUserUnits" value="deg"/>
		<property name="motor" ref="transPhi_motor" />
	</bean>

	<bean id="trans" class="gda.device.scannable.scannablegroup.ScannableGroup">
		<property name="groupMembers">
			<list>
				<ref bean="transX" />
				<ref bean="transPhi" />
			</list>
		</property>
	</bean>
</beans>