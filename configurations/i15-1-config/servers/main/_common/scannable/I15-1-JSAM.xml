<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

	<bean id="samX" class="gda.device.scannable.ScannableMotor">
		<property name="initialUserUnits" value="mm"/>
		<property name="motor" ref="samX_motor" />
	</bean>

	<bean id="samY" class="gda.device.scannable.ScannableMotor">
		<property name="initialUserUnits" value="mm"/>
		<property name="motor" ref="samY_motor" />
	</bean>

	<bean id="blowerZ" class="gda.device.scannable.ScannableMotor">
		<property name="initialUserUnits" value="mm"/>
		<property name="motor" ref="blowerZ_motor" />
	</bean>

    <bean id="blower" class="gda.device.temperature.Eurotherm2K">
        <property name="local" value="true"/>
        <property name="configureAtStartup" value="true"/>
        <property name="accuracy" value = "5"/>
        <property name="polltime" value = "1000"/>
        <property name="fileSuffix" value = "temp"/>
        <property name="upperTemp" value = "1000"/>
        <property name="lowerTemp" value = "0"/>
        <property name="controller" ref= "blower_controller"/>
    </bean>

	<bean id="sam" class="gda.device.scannable.scannablegroup.ScannableGroup">
		<property name="groupMembers">
			<list>
				<ref bean="samX" />
				<ref bean="samY" />
				<ref bean="blowerZ" />
			</list>
		</property>
	</bean>
</beans>