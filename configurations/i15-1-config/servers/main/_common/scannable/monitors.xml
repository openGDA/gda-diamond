<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<!-- Non generic NexusSlitsWrapper slits scannables -->

	<bean id="s1NeXusSlit" class="uk.ac.diamond.daq.scanning.NexusSlitsWrapper" init-method="register">
		<property name="name"              value="s1NeXusSlit"/>
		<property name="x_gap"			   ref="s1gapX"/>
		<property name="y_gap"			   ref="s1gapY"/>
		<property name="monitorRole"		value="PER_SCAN"/>
		<property name="activated"         value="true"/> <!-- Use as a monitor with scans, we always want this NeXus information -->
	</bean>

