<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
 
	<!-- This is only an example
	<bean id="s1Model" class="org.eclipse.scanning.example.scannable.MockScannableConfiguration">
		<property name="xGapName"          value="s1gapX"/>
		<property name="yGapName"          value="s1gapY"/>
		<property name="xCentreName"       value="s1cenX"/>
		<property name="yCentreName"       value="s1cenY"/>
	</bean>
	 -->
	<bean id="s1MockNeXusSlit" class="org.eclipse.scanning.example.scannable.MockNeXusSlit" init-method="register">
		<property name="name"              value="s1MockNeXusSlit"/>
		<!-- This usn't used yet! 
		<property name="model"             ref="s1Model"/>
		 -->
		<property name="activated"         value="true"/> <!-- Use as a monitor with scans, we always want this NeXus information -->
	</bean>

	<bean id="s1NeXusSlit" class="uk.ac.diamond.daq.scanning.NexusSlitsWrapper" init-method="register">
		<property name="name"              value="s1NeXusSlit"/>
		<property name="x_gap"			   ref="s1gapX"/>
		<property name="y_gap"			   ref="s1gapY"/>
		<property name="activated"         value="true"/> <!-- Use as a monitor with scans, we always want this NeXus information -->
	</bean>
</beans>