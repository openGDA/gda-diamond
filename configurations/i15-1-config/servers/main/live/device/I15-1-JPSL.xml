<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

	<!-- AD hardware -->

	<!-- Standard Area Detector plugins -->

	<bean id="eyeAD_cam" class="gda.spring.V17ADBaseFactoryBean">
		<property name="prefix" value="BL15J-EA-PSL-01:CAM:" />
	</bean>

	<bean id="eyeAD_arr" class="gda.spring.V17NDArrayFactoryBean">
		<property name="prefix" value="BL15J-EA-PSL-01:ARR:" />
	</bean>

	<bean id="eyeAD_stat" class="gda.spring.V17NDStatsFactoryBean">
		<property name="prefix" value="BL15J-EA-PSL-01:STAT:" />
	</bean>

	<bean id="eyeAD_roi" class="gda.spring.V17NDROIFactoryBean">
		<property name="prefix" value="BL15J-EA-PSL-01:ROI:" />
	</bean>

	<bean id="eyeAD_mjpg" class="gda.spring.V17FfmpegStreamFactoryBean">
		<property name="prefix" value="BL15J-EA-PSL-01:MJPG:" />
	</bean>

	<bean id="eyeAD_proc" class="gda.spring.V17NDProcessFactoryBean">
		<property name="prefix" value="BL15J-EA-PSL-01:PROC:" />
	</bean>

	<!-- Extended Area Detector plugins -->

	<bean id="eyeAD_roi1" class="gda.spring.V17NDROIFactoryBean">
		<property name="prefix" value="BL15J-EA-PSL-01:ROI1:" />
	</bean>

	<bean id="eyeAD__roi2" class="gda.spring.V17NDROIFactoryBean">
		<property name="prefix" value="BL15J-EA-PSL-01:ROI2:" />
	</bean>

	<bean id="eyeAD__roi3" class="gda.spring.V17NDROIFactoryBean">
		<property name="prefix" value="BL15J-EA-PSL-01:ROI3:" />
	</bean>

	<bean id="eyeAD__roi4" class="gda.spring.V17NDROIFactoryBean">
		<property name="prefix" value="BL15J-EA-PSL-01:ROI4:" />
	</bean>

	<bean id="eyeAD_roi5" class="gda.spring.V17NDROIFactoryBean">
		<property name="prefix" value="BL15J-EA-PSL-01:ROI5:" />
	</bean>

	<bean id="eyeAD_roi6" class="gda.spring.V17NDROIFactoryBean">
		<property name="prefix" value="BL15J-EA-PSL-01:ROI6:" />
	</bean>

	<bean id="eyeAD_stat1" class="gda.spring.V17NDStatsFactoryBean">
		<property name="prefix" value="BL15J-EA-PSL-01:STAT1:" />
	</bean>

	<bean id="eyeAD_stat2" class="gda.spring.V17NDStatsFactoryBean">
		<property name="prefix" value="BL15J-EA-PSL-01:STAT2:" />
	</bean>

	<bean id="eyeAD_stat3" class="gda.spring.V17NDStatsFactoryBean">
		<property name="prefix" value="BL15J-EA-PSL-01:STAT3:" />
	</bean>

	<bean id="eyeAD_stat4" class="gda.spring.V17NDStatsFactoryBean">
		<property name="prefix" value="BL15J-EA-PSL-01:STAT4:" />
	</bean>

	<bean id="eyeAD_stat5" class="gda.spring.V17NDStatsFactoryBean">
		<property name="prefix" value="BL15J-EA-PSL-01:STAT5:" />
	</bean>

	<bean id="eyeAD_stat6" class="gda.spring.V17NDStatsFactoryBean">
		<property name="prefix" value="BL15J-EA-PSL-01:STAT6:" />
	</bean>

	<bean id="eye_NDFileTiff" class="gda.spring.V17NDFileFactoryBean">
		<property name="prefix" value="BL15J-EA-PSL-01:TIFF:" />
		<property name="resetToInitialValues" value="false" />
	</bean>

	<bean id="eye_NDFileHDF5file" class="gda.spring.V17NDFileFactoryBean">
		<property name="prefix" value="BL15J-EA-PSL-01:HDF5:" />
		<property name="resetToInitialValues" value="false" />
	</bean>

	<bean id="eye_NDFileHDF5" class="gda.spring.V17NDFileHDF5FactoryBean">
		<property name="ndFileImpl" ref="eye_NDFileHDF5file" />
		<property name="initialCompression" value="zlib" />
	</bean>
</beans>
