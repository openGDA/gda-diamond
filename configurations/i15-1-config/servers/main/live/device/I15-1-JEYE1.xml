<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

	<!-- AD hardware -->

	<!-- Standard Area Detector plugins -->

	<bean id="eyeAD_cam" class="gda.spring.V17ADBaseFactoryBean">
		<property name="prefix" value="BL15J-DI-EYE-01:CAM:" />
	</bean>

	<bean id="eyeAD_arr" class="gda.spring.V17NDArrayFactoryBean">
		<property name="prefix" value="BL15J-DI-EYE-01:ARR:" />
	</bean>

	<bean id="eyeAD_stat" class="gda.spring.V17NDStatsFactoryBean">
		<property name="prefix" value="BL15J-DI-EYE-01:STAT:" />
	</bean>

	<bean id="eyeAD_roi" class="gda.spring.V17NDROIFactoryBean">
		<property name="prefix" value="BL15J-DI-EYE-01:ROI:" />
	</bean>

	<bean id="eyeAD_mjpg" class="gda.spring.V17FfmpegStreamFactoryBean">
		<property name="prefix" value="BL15J-DI-EYE-01:MJPG:" />
	</bean>

	<bean id="eyeAD_proc" class="gda.spring.V17NDProcessFactoryBean">
		<property name="prefix" value="BL15J-DI-EYE-01:PROC:" />
	</bean>

	<!-- Extended Area Detector plugins -->

	<bean id="eyeAD_roi1" class="gda.spring.V17NDROIFactoryBean">
		<property name="prefix" value="BL15J-DI-EYE-01:ROI1:" />
	</bean>

	<bean id="eyeAD__roi2" class="gda.spring.V17NDROIFactoryBean">
		<property name="prefix" value="BL15J-DI-EYE-01:ROI2:" />
	</bean>

	<bean id="eyeAD__roi3" class="gda.spring.V17NDROIFactoryBean">
		<property name="prefix" value="BL15J-DI-EYE-01:ROI3:" />
	</bean>

	<bean id="eyeAD__roi4" class="gda.spring.V17NDROIFactoryBean">
		<property name="prefix" value="BL15J-DI-EYE-01:ROI4:" />
	</bean>

	<bean id="eyeAD_roi5" class="gda.spring.V17NDROIFactoryBean">
		<property name="prefix" value="BL15J-DI-EYE-01:ROI5:" />
	</bean>

	<bean id="eyeAD_roi6" class="gda.spring.V17NDROIFactoryBean">
		<property name="prefix" value="BL15J-DI-EYE-01:ROI6:" />
	</bean>

	<bean id="eyeAD_stat1" class="gda.spring.V17NDStatsFactoryBean">
		<property name="prefix" value="BL15J-DI-EYE-01:STAT1:" />
	</bean>

	<bean id="eyeAD_stat2" class="gda.spring.V17NDStatsFactoryBean">
		<property name="prefix" value="BL15J-DI-EYE-01:STAT2:" />
	</bean>

	<bean id="eyeAD_stat3" class="gda.spring.V17NDStatsFactoryBean">
		<property name="prefix" value="BL15J-DI-EYE-01:STAT3:" />
	</bean>

	<bean id="eyeAD_stat4" class="gda.spring.V17NDStatsFactoryBean">
		<property name="prefix" value="BL15J-DI-EYE-01:STAT4:" />
	</bean>

	<bean id="eyeAD_stat5" class="gda.spring.V17NDStatsFactoryBean">
		<property name="prefix" value="BL15J-DI-EYE-01:STAT5:" />
	</bean>

	<bean id="eyeAD_stat6" class="gda.spring.V17NDStatsFactoryBean">
		<property name="prefix" value="BL15J-DI-EYE-01:STAT6:" />
	</bean>

	<bean id="eye_NDFileTiff" class="gda.spring.V17NDFileFactoryBean">
		<property name="prefix" value="BL15J-DI-EYE-01:TIFF:" />
		<property name="resetToInitialValues" value="false" />
	</bean>

	<bean id="eye_NDFileHDF5file" class="gda.spring.V17NDFileFactoryBean">
		<property name="prefix" value="BL15J-DI-EYE-01:HDF5:" />
		<property name="resetToInitialValues" value="false" />
	</bean>

	<bean id="eye_NDFileHDF5" class="gda.spring.V17NDFileHDF5FactoryBean">
		<property name="ndFileImpl" ref="eye_NDFileHDF5file" />
		<property name="initialCompression" value="zlib" />
	</bean>

	<!-- NXDetector collection strategies -->

	<bean id="eye_SingleExposureStandardCollectionStrategy" 
			class="gda.device.detector.addetector.collectionstrategy.ConfigureAcquireTimeDecorator">
		<property name="restoreAcquireTime" value="true"/>
		<property name="decoratee">
			<bean class="gda.device.detector.addetector.collectionstrategy.SingleImageModeDecorator">
				<property name="restoreNumImagesAndImageMode" value="true"/>
				<property name="decoratee">
					<bean class="gda.device.detector.addetector.collectionstrategy.SoftwareStartStop">
						<property name="adBase" ref="eyeAD_cam" />
						<property name="restoreAcquireState" value="true"/>
					</bean>
				</property>
			</bean>
		</property>
	</bean>

	<!-- NXDetector file writers -->

	<bean id="eye_hdf5_MultipleImagesPerHDF5FileWriter"
			class="gda.device.detector.addetector.filewriter.MultipleImagesPerHDF5FileWriter">
		<property name="ndFileHDF5" ref="eye_NDFileHDF5" />
		<property name="fileTemplate" value="%s%s%05d.hdf5" />
		<property name="filePathTemplate" value="$datadir$/$scan$" />
		<property name="fileNameTemplate" value="eye" />
		<property name="fileNumberAtScanStart" value="-1" />
		<property name="setChunking" value="false" />
		<property name="lazyOpen" value="true" />
	</bean>
	<!-- This generates files of the form $datadir$/$scan$/eye.hdf5 -->

	<!-- SingleImagePerFileWriter(String detectorName)
	 -->
	<bean id="eye_tiff_SingleImagePerFileWriter"
			class="gda.device.detector.addetector.filewriter.SingleImagePerFileWriter">
		<property name="ndFile" ref="eye_NDFileTiff" />
		<property name="fileTemplate" value="%s%s%05d.tif" />
		<property name="filePathTemplate" value="$datadir$/$scan$/eye" />
		<property name="fileNameTemplate" value="" />
		<property name="fileNumberAtScanStart" value="1" />
		<property name="keyNameForMetadataPathTemplate" value="eye_path_template" />
	</bean>
	<!-- To generate files of the form $datadir$/$scan$-eye-files/%05d.tif :
		<property name="fileTemplate" value="%s%s%05d.tif" />
		<property name="filePathTemplate" value="$datadir$/$scan$-eye-files" />
		<property name="fileNameTemplate" value="" />
	-->

	<!-- NXDetectors -->

	<bean id="eyeRawNx" class="gda.device.detector.NXDetector">
		<property name="name" value="eyeRawNx" />
		<property name="collectionStrategy" ref="eye_SingleExposureStandardCollectionStrategy" />
		<property name="additionalPluginList">
			<list>
				<ref bean="eye_hdf5_MultipleImagesPerHDF5FileWriter" />
				<ref bean="eye_tiff_SingleImagePerFileWriter" />
			</list>
		</property>
	</bean>

	<!-- ADDetectors -->

	<bean id="eyeRawAD" class="gda.device.detector.addetector.ADDetector">
		<property name="adBase" ref="eyeAD_cam"/>
		<property name="collectionStrategy" ref="eye_SingleExposureStandardCollectionStrategy" />
		<property name="ndFile"  ref="eye_NDFileHDF5file"/>
		<property name="ndArray" ref="eyeAD_arr"/>
		<property name="ndStats" ref="eyeAD_stat"/>
		<property name="fileWriter" ref="eye_hdf5_MultipleImagesPerHDF5FileWriter"/>
	</bean>
</beans>
