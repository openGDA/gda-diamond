<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

	<!-- AD hardware -->

	<!-- Standard Area Detector plugins -->

	<bean id="bpm2AD_cam" class="gda.spring.V17ADBaseFactoryBean">
		<property name="prefix" value="BL15J-DI-BPM-02:CAM:" />
	</bean>

	<bean id="bpm2AD_arr" class="gda.spring.V17NDArrayFactoryBean">
		<property name="prefix" value="BL15J-DI-BPM-02:ARR:" />
	</bean>

	<bean id="bpm2AD_stat" class="gda.spring.V17NDStatsFactoryBean">
		<property name="prefix" value="BL15J-DI-BPM-02:STAT:" />
	</bean>

	<bean id="bpm2AD_roi" class="gda.spring.V17NDROIFactoryBean">
		<property name="prefix" value="BL15J-DI-BPM-02:ROI:" />
	</bean>

	<bean id="bpm2AD_mjpg" class="gda.spring.V17FfmpegStreamFactoryBean">
		<property name="prefix" value="BL15J-DI-BPM-02:MJPG:" />
	</bean>

	<bean id="bpm2AD_proc" class="gda.spring.V17NDProcessFactoryBean">
		<property name="prefix" value="BL15J-DI-BPM-02:PROC:" />
	</bean>

	<!-- Extended Area Detector plugins -->

	<bean id="bpm2AD_roi1" class="gda.spring.V17NDROIFactoryBean">
		<property name="prefix" value="BL15J-DI-BPM-02:ROI1:" />
	</bean>

	<bean id="bpm2AD__roi2" class="gda.spring.V17NDROIFactoryBean">
		<property name="prefix" value="BL15J-DI-BPM-02:ROI2:" />
	</bean>

	<bean id="bpm2AD__roi3" class="gda.spring.V17NDROIFactoryBean">
		<property name="prefix" value="BL15J-DI-BPM-02:ROI3:" />
	</bean>

	<bean id="bpm2AD__roi4" class="gda.spring.V17NDROIFactoryBean">
		<property name="prefix" value="BL15J-DI-BPM-02:ROI4:" />
	</bean>

	<bean id="bpm2AD_roi5" class="gda.spring.V17NDROIFactoryBean">
		<property name="prefix" value="BL15J-DI-BPM-02:ROI5:" />
	</bean>

	<bean id="bpm2AD_roi6" class="gda.spring.V17NDROIFactoryBean">
		<property name="prefix" value="BL15J-DI-BPM-02:ROI6:" />
	</bean>

	<bean id="bpm2AD_stat1" class="gda.spring.V17NDStatsFactoryBean">
		<property name="prefix" value="BL15J-DI-BPM-02:STAT1:" />
	</bean>

	<bean id="bpm2AD_stat2" class="gda.spring.V17NDStatsFactoryBean">
		<property name="prefix" value="BL15J-DI-BPM-02:STAT2:" />
	</bean>

	<bean id="bpm2AD_stat3" class="gda.spring.V17NDStatsFactoryBean">
		<property name="prefix" value="BL15J-DI-BPM-02:STAT3:" />
	</bean>

	<bean id="bpm2AD_stat4" class="gda.spring.V17NDStatsFactoryBean">
		<property name="prefix" value="BL15J-DI-BPM-02:STAT4:" />
	</bean>

	<bean id="bpm2AD_stat5" class="gda.spring.V17NDStatsFactoryBean">
		<property name="prefix" value="BL15J-DI-BPM-02:STAT5:" />
	</bean>

	<bean id="bpm2AD_stat6" class="gda.spring.V17NDStatsFactoryBean">
		<property name="prefix" value="BL15J-DI-BPM-02:STAT6:" />
	</bean>

	<bean id="bpm2_NDFileTiff" class="gda.spring.V17NDFileFactoryBean">
		<property name="prefix" value="BL15J-DI-BPM-02:TIFF:" />
		<property name="resetToInitialValues" value="false" />
	</bean>

	<bean id="bpm2_NDFileHDF5" class="gda.spring.V17NDFileHDF5FactoryBean">
		<property name="ndFileImpl">
			<bean class="gda.spring.V17NDFileFactoryBean">
				<property name="prefix" value="BL15J-DI-BPM-02:HDF5:" />
				<property name="resetToInitialValues" value="false" />
			</bean>
		</property>
		<property name="initialCompression" value="zlib" />
	</bean>

	<!-- NXDetector collection strategies -->

	<bean id="bpm2_SingleExposureStandardCollectionStrategy" 
			class="gda.device.detector.addetector.collectionstrategy.ConfigureAcquireTimeDecorator">
		<property name="restoreAcquireTime" value="true"/>
		<property name="decoratee">
			<bean class="gda.device.detector.addetector.collectionstrategy.SingleImageModeDecorator">
				<property name="restoreNumImagesAndImageMode" value="true"/>
				<property name="decoratee">
					<bean class="gda.device.detector.addetector.collectionstrategy.InternalTriggerModeDecorator">
						<property name="restoreTriggerMode" value="true"/>
						<property name="decoratee">
							<bean class="gda.device.detector.addetector.collectionstrategy.SoftwareStartStop">
								<property name="adBase" ref="bpm2AD_cam" />
								<property name="restoreAcquireState" value="true"/>
							</bean>
						</property>
					</bean>
				</property>
			</bean>
		</property>
	</bean>

	<!-- NXDetector file writers -->

	<bean id="bpm2_hdf5_MultipleImagesPerHDF5FileWriter"
			class="gda.device.detector.addetector.filewriter.MultipleImagesPerHDF5FileWriter">
		<property name="ndFileHDF5" ref="bpm2_NDFileHDF5" />
		<property name="fileTemplate" value="%s%s%05d.hdf5" />
		<property name="filePathTemplate" value="$datadir$/$scan$" />
		<property name="fileNameTemplate" value="bpm2" />
		<property name="fileNumberAtScanStart" value="-1" />
		<property name="setChunking" value="false" />
		<property name="lazyOpen" value="true" />
	</bean>
	<!-- This generates files of the form $datadir$/$scan$/bpm2.hdf5 -->

	<!-- SingleImagePerFileWriter(String detectorName)
	 -->
	<bean id="bpm2_tiff_SingleImagePerFileWriter"
			class="gda.device.detector.addetector.filewriter.SingleImagePerFileWriter">
		<property name="ndFile" ref="bpm2_NDFileTiff" />
		<property name="fileTemplate" value="%s%s%05d.tif" />
		<property name="filePathTemplate" value="$datadir$/$scan$/bpm2" />
		<property name="fileNameTemplate" value="" />
		<property name="fileNumberAtScanStart" value="1" />
		<property name="keyNameForMetadataPathTemplate" value="bpm2_path_template" />
	</bean>
	<!-- To generate files of the form $datadir$/$scan$-bpm2-files/%05d.tif :
		<property name="fileTemplate" value="%s%s%05d.tif" />
		<property name="filePathTemplate" value="$datadir$/$scan$-bpm2-files" />
		<property name="fileNameTemplate" value="" />
	-->

	<!-- NXDetectors -->

	<bean id="bpm2" class="gda.device.detector.NXDetector">
		<property name="name" value="bpm2" />
		<property name="collectionStrategy" ref="bpm2_SingleExposureStandardCollectionStrategy" />
		<property name="additionalPluginList">
			<list>
				<ref bean="bpm2_hdf5_MultipleImagesPerHDF5FileWriter" />
				<ref bean="bpm2_tiff_SingleImagePerFileWriter" />
			</list>
		</property>
	</bean>

</beans>
