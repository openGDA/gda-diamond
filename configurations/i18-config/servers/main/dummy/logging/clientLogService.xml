<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true" scanPeriod="10 seconds" debug="true">

	<!-- Include I18 properties files (would be better to include dls-config/logging/logging_properties.xml if I18 used
		the correct config 1.1 layout) -->
	<property file="${gda.config}/properties/common.properties" />
	<property file="${gda.config}/properties/${gda.mode}/${gda.mode}_instance_java.properties" />

    <appender name="SwingLogPanel" class="gda.util.LogPanelAppender">
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>INFO</level>
        </filter>
        <layout class="ch.qos.logback.classic.PatternLayout">
            <pattern>%date %-5level %logger - %m %rEx %n</pattern>
        </layout>
    </appender>
    <logger name="gda">
        <level value="INFO"/>
    </logger>
    <logger name="gda.jython.GDAJythonInterpreter">
        <level value="WARN"/>
    </logger>
    <logger name="gda.device.motor.EpicsMotor">
        <level value="WARN"/>
    </logger>
    <logger name="gda.jython.GDAInteractiveConsole">
        <level value="ERROR"/>
    </logger>
    <root>
        <level value="INFO"/>
        <appender-ref ref="SwingLogPanel"/>
    </root>
</configuration>
