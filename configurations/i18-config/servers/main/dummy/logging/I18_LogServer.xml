<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true" scanPeriod="10 seconds" debug="true">

	<!-- Include I18 properties files (would be better to include dls-config/logging/logging_properties.xml if I18 used
		the correct config 1.1 layout) -->
	<property file="${gda.config}/properties/common.properties" />
	<property file="${gda.config}/properties/${gda.mode}/${gda.mode}_instance_java.properties" />

    <!-- display message in Logger Server's console -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <layout class="ch.qos.logback.classic.PatternLayout">
            <Pattern>%date %-5level [%logger] - %message%n%rEx</Pattern>
        </layout>
    </appender>
     <appender name="DebugFILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <File>${gda.logs.dir}/gda_server.log</File>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
<!--       		<ActiveFileName>${gda.logs.dir}/gda_server.log</ActiveFileName>-->
            <FileNamePattern>${gda.logs.dir}/gda_server.%d{yyyy-MM-dd}.log.zip</FileNamePattern>
        </rollingPolicy>
        <layout class="ch.qos.logback.classic.PatternLayout">
            <pattern>%d %-5level [%logger] %rEx - %m%n</pattern>
        </layout>
    </appender>

	<appender name="LogPanel" class="ch.qos.logback.classic.net.server.ServerSocketAppender">
		<port>${gda.logserver.out.port}</port>
	</appender>

    <logger name="gda">
        <level value="INFO"/>
    </logger>
    
    <logger name="gda.device.monitor.corba.impl">
        <level value="INFO"/>
    </logger>
    
    <logger name="gda.device.corba.impl">
        <level value="INFO"/>
    </logger>
    
    <root>
        <level value="ALL"/>
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="DebugFILE"/>
        <appender-ref ref="LogPanel"/>
    </root>
</configuration>
