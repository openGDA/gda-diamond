<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true" scanPeriod="10 seconds" debug="true">

	<!-- Include I18 properties files (would be better to include dls-config/logging/logging_properties.xml if I18 used
		the correct config 1.1 layout) -->
	<property file="${gda.config}/properties/_common/common_instance_java.properties" />
	<property file="${gda.config}/properties/${gda.mode}/${gda.mode}_instance_java.properties" />

<!-- address where the messages from Object Servers send to - the LogServer-->
    <appender name="SOCKET" class="ch.qos.logback.classic.net.SocketAppender">
        <RemoteHost>localhost</RemoteHost>
<!--        <RemoteHost>i18-control.diamond.ac.uk</RemoteHost>-->
        <Port>${gda.server.logging.port}</Port>
        <ReconnectionDelay>10000</ReconnectionDelay>
        <IncludeCallerData>true</IncludeCallerData>
    </appender>
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <layout class="ch.qos.logback.classic.PatternLayout">
            <Pattern>%date %-5level %logger{36} - %m %rEx%n</Pattern>
        </layout>
    </appender>    
    <logger name="gda.analysis.DataSet">
        <level value="ERROR"/>
    </logger>
    <root>
        <level value="INFO"/>
        <appender-ref ref="SOCKET"/>
        <appender-ref ref="CONSOLE"/>
    </root>
</configuration>
