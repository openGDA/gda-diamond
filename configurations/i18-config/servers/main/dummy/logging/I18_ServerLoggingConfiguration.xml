<?xml version="1.0" encoding="UTF-8"?>

<configuration scan="true" scanPeriod="10 seconds" debug="true">

	<!-- Include I18 properties files (would be better to include dls-config/logging/logging_properties.xml if I18 used
		the correct config 1.1 layout) -->
	<property file="${gda.config}/properties/_common/common_instance_java.properties" />
	<property file="${gda.config}/properties/${gda.mode}/${gda.mode}_instance_java.properties" />

    <turboFilter class="ch.qos.logback.classic.turbo.MarkerFilter">
        <Name>Finest</Name>
        <Marker>FINEST</Marker>
        <OnMatch>DENY</OnMatch>
    </turboFilter>

    <!-- enable this if you want log message appear on local console -->
   <appender name="Console" class="ch.qos.logback.core.ConsoleAppender">
        <layout class="ch.qos.logback.classic.PatternLayout">
            <pattern>%r  %-5level [%logger{36}] - %m%n</pattern>
        </layout>
    </appender>

    <appender name="SOCKET" class="ch.qos.logback.classic.net.SocketAppender">
        <RemoteHost>localhost</RemoteHost>
        <Port>${gda.server.logging.port}</Port>
        <ReconnectionDelay>10000</ReconnectionDelay>
        <IncludeCallerData>true</IncludeCallerData>
    </appender>
    <logger name="gda">
        <level value="DEBUG"/>
        <!--<appender-ref ref="FILE"/>-->
    </logger>
    <logger name="gda.device.corba.impl">
        <level value="INFO"/>
    </logger>
    <logger name="gda.device.temperature">
        <level value="INFO"/>
    </logger>
    <logger name="gda.jython.corba.impl">
        <level value="INFO"/>
    </logger>    
    <logger name="gda.oe.corba.impl">
        <level value="INFO"/>
    </logger>    
    <root>
        <level value="ALL"/>
       <appender-ref ref="Console"/>
        <appender-ref ref="SOCKET"/>
    </root>
</configuration>
