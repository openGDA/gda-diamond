<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true" scanPeriod="10 seconds" debug="true">

	<!-- Include I18 properties files (would be better to include dls-config/logging/logging_properties.xml if I18 used
		the correct config 1.1 layout) -->
	<property file="${gda.config}/properties/_common/common_instance_java.properties" />
	<property file="${gda.config}/properties/${gda.mode}/${gda.mode}_instance_java.properties" />

    <appender name="LogPanel" class="gda.util.LogPanelAppender">
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>INFO</level>
        </filter>
        <layout class="ch.qos.logback.classic.PatternLayout">
            <pattern>%date %-5level %logger - %m %rEx %n</pattern>
        </layout>
    </appender>    
    <logger name="gda">
        <level value="INFO"/>
    </logger>
       <logger name="gda.device.motor.EpicsMotor">
        <level value="WARN"/>
    </logger>
        <!-- This class no longer exists in the codebase and is referenced in various other configs under "xx_old_logging" folders only,
    it appears to be a hangover from the swingclient days as it is used to set a property which is only loaded by the swingclient.
    <logger name="uk.ac.gda.client.XYPlotView">
        <level value="FATAL"/>
    </logger>
    -->
    <logger name="uk.ac.gda.exafs.ui.plot.ExafsScanPlotView">
        <level value="FATAL"/>
    </logger>
    <logger name="gda.rcp.views.scan.AbstractScanPlotView">
        <level value="FATAL"/>
    </logger>
    <logger name="uk.ac.gda.exafs.iu.XasScanParametersUIEditor">
        <level value="ERROR"/>
    </logger>
    <logger name="gda.jython.GDAInteractiveConsole">
        <level value="INFO"/>
    </logger>
    <logger name="gda.factory.corba.util.PushEventQueue">
        <level value="ERROR"/>
    </logger>
     <logger name="gda.scan.ScanDataPointPopulatorAndPublisher">
       <level value="DEBUG"/>
   </logger>
     <logger name="gda.scan.MultithreadedScanDataPointPipeline">
        <level value="DEBUG"/>
    </logger>
    <root>
        <level value="INFO"/>
        <appender-ref ref="LogPanel"/>
    </root>
</configuration>
