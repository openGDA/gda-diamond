<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">


	<!-- Used in raster_map.py only -->
	<bean id="traj1ContiniousX" class="gda.device.scannable.DummyContinuouslyScannable" />

	<bean id="traj1PositionReader" class="gda.device.scannable.DummyRealPositionReader" />

	<bean id="traj1ScanControllerAdapter"
		class="gda.device.continuouscontroller.DummyTrajectoryMoveController">
		<property name="local" value="true" />
	</bean>

	<bean id="traj1SampleX" class="gda.device.scannable.TrajectoryScannableMotor">
		<property name="protectionLevel" value="0" />
		<property name="initialUserUnits" value="mm" />
		<property name="motor" ref="sample_x_motor" />
		<property name="hardwareUnitString" value="mm" />
		<property name="continuousMoveController" ref="traj1ScanControllerAdapter" />
	</bean>

	<bean id="traj1tfg" class="gda.device.detector.countertimer.TFGTriggeredScaler">
		<property name="extraNames">
			<list>
				<value>liveTime</value>
				<value>I0</value>
				<value>It</value>
				<value>Iother</value>
			</list>
		</property>
		<property name="scaler" ref="CalMemory" />
		<property name="timer" ref="tfg" />
		<property name="timeChannelRequired" value="true" />
		<property name="darkCurrentRequired" value="false" />
		<property name="outputLogValues" value="false" />
		<property name="TFGv2" value="true" />
		<property name="numChannelsToRead" value="4" />
		<property name="daserver" ref="daserver" />
		<property name="ttlSocket" value="1" />
		<property name="outputFormat">
			<list>
				<value>%6.4g</value>
				<value>%6.4g</value>
				<value>%9d</value>
				<value>%9d</value>
				<value>%9d</value>
			</list>
		</property>
		<property name="hardwareTriggerProvider" ref="traj1ScanControllerAdapter" />
	</bean>

</beans>