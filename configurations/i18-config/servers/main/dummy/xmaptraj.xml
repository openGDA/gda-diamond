<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

	<!--  to use with xmap detector -->
	<bean id="xpsTrajController"
		class="gda.device.continuouscontroller.DummyTrajectoryMoveController">
		<property name="numberAxes" value="1" />
	</bean>

<bean id="continuousSampleX" class="gda.device.scannable.TrajectoryScannableMotor">
		<property name="protectionLevel" value="0" />
		<property name="initialUserUnits" value="mm" />
		<property name="motor" ref="sample_x_motor" />
		<property name="hardwareUnitString" value="mm" />
		<property name="controllerMotorIndex" value="0" />
		<property name="continuousMoveController" ref="xpsTrajController" />
	</bean>
</beans>