<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans-2.5.xsd" >


	<bean id="vma_dummy_cam_pluginBase" class="gda.device.detector.areadetector.v17.impl.NDPluginBaseSimulator">
		<property name="dims" value="1000,1000"/>
		<property name="datatype" value="UINT32"/>
	</bean>

	<bean id="vma_adbase" class="gda.device.detector.areadetector.v17.impl.ADBaseSimulator"/>

	<bean id="vma_ndfile" class="gda.device.detector.areadetector.v17.impl.NDFileSimulator">
		<constructor-arg ref="vma_dummy_cam_pluginBase" />
	</bean>

	<bean id="vma_hdf5" class="gda.device.detector.areadetector.v17.impl.NDFileHDF5Simulator">
		<property name="file" ref="vma_ndfile" />
	</bean>

	<bean id="vma_stats" class="gda.device.detector.areadetector.v17.impl.NDStatsSimulator">
		<property name="pluginBase" ref="vma_dummy_cam_pluginBase" />
	</bean>

	<bean id="vma_ndarray" class="gda.device.detector.areadetector.v17.impl.NDArraySimulator">
		<property name="pluginBase" ref="vma_dummy_cam_pluginBase" />
	</bean>

</beans>
