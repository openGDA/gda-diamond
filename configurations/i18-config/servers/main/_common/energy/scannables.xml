<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">


	<!-- Insertion Device -->
	<bean id="sc_idgap" class="gda.device.scannable.ScannableMotor">
		<property name="protectionLevel" value="0" />
		<property name="initialUserUnits" value="mm" />
		<property name="motor" ref="idgap_motor" />
		<property name="hardwareUnitString" value="mm" />
	</bean>

	<!-- Monochromator / DCM Optical Element -->
	<bean id="sc_dcm_bragg" class="gda.device.scannable.ScannableMotor">
		<property name="protectionLevel" value="0" />
		<property name="initialUserUnits" value="Deg" />
		<property name="motor" ref="dcm_bragg_motor" />
		<property name="hardwareUnitString" value="Deg" />
	</bean>

	<bean id="sc_energy_motor" class="gda.device.scannable.ScannableMotor">
		<property name="protectionLevel" value="0" />
		<property name="motor" ref="dcm_energy_motor" />
	</bean>

	<bean id="sc_dcm_crystal1_roll" class="gda.device.scannable.ScannableMotor">
		<property name="protectionLevel" value="0" />
		<property name="motor" ref="dcm_crystal1_roll_motor" />
	</bean>

	<bean id="sc_dcm_crystal2_roll" class="gda.device.scannable.ScannableMotor">
		<property name="protectionLevel" value="0" />
		<property name="motor" ref="dcm_crystal2_roll_motor" />
	</bean>

	<bean id="sc_dcm_crystal2_pitch" class="gda.device.scannable.ScannableMotor">
		<property name="protectionLevel" value="0" />
		<property name="motor" ref="dcm_crystal2_pitch_motor" />
	</bean>

	<bean id="sc_dcm_perp" class="gda.device.scannable.ScannableMotor">
		<property name="protectionLevel" value="0" />
		<property name="initialUserUnits" value="mm" />
		<property name="motor" ref="dcm_perp_motor" />
		<property name="hardwareUnitString" value="mm" />
	</bean>

	<bean id="sc_DCM" class="gda.device.scannable.scannablegroup.ScannableGroup">
		<property name="groupMembers">
			<list>
				<ref bean="sc_dcm_bragg" />
				<ref bean="sc_dcm_crystal1_roll" />
				<ref bean="sc_dcm_crystal2_pitch" />
				<ref bean="sc_dcm_perp" />
			</list>
		</property>
		<property name="protectionLevel" value="0" />
	</bean>

	<!-- ComboDCM controller -->
	<bean id="sc_dcm_perp_mDeg" class="gda.device.scannable.ConvertorScannable">
		<property name="protectionLevel" value="0" />
		<property name="scannableName" value="sc_dcm_perp" />
		<property name="convertorName" value="Deg_dcm_perp_mm_converter" />
		<property name="initialUserUnits" value="Deg" />
		<property name="convertorUnitString" value="Deg" />
	</bean>

	<bean id="sc_idgap_mDeg" class="gda.device.scannable.ConvertorScannable">
		<property name="protectionLevel" value="0" />
		<property name="scannableName" value="sc_idgap" />
		<property name="convertorName" value="auto_mDeg_idGap_mm_converter" />
		<property name="initialUserUnits" value="Deg" />
		<property name="convertorUnitString" value="Deg" />
	</bean>

	<bean id="sc_comboDCM_nogap" class="gda.device.scannable.CoupledScannable">
		<property name="scannables">
			<list>
				<ref bean="sc_dcm_bragg" />
				<ref bean="sc_dcm_perp_mDeg" />
			</list>
		</property>
		<property name="functions">
			<list>
				<bean class="gda.function.IdentityFunction" />
				<bean class="gda.function.IdentityFunction" />
			</list>
		</property>
		<property name="initialUserUnits" value="Deg" />
	</bean>

	<bean id="sc_comboDCM_d" class="gda.device.scannable.CoupledScannable">
		<property name="scannables">
			<list>
				<ref bean="sc_dcm_bragg" />
				<ref bean="sc_idgap_mDeg" />
				<ref bean="sc_dcm_perp_mDeg" />
			</list>
		</property>
		<property name="functions">
			<list>
				<bean class="gda.function.IdentityFunction" />
				<bean class="gda.function.IdentityFunction" />
				<bean class="gda.function.IdentityFunction" />
			</list>
		</property>
		<property name="initialUserUnits" value="Deg" />
	</bean>

	<bean id="energy" class="gda.device.scannable.ConvertorScannable">
		<property name="protectionLevel" value="0" />
		<property name="scannableName" value="sc_comboDCM_d" />
		<property name="convertorName" value="eV_Deg_converter" />
		<property name="lowerGdaLimits" value="2000" />
		<property name="upperGdaLimits" value="25000" />
		<property name="initialUserUnits" value="eV" />
		<property name="convertorUnitString" value="eV" />
	</bean>

	<bean id="energy_nogap" class="gda.device.scannable.ConvertorScannable">
		<property name="protectionLevel" value="0" />
		<property name="scannableName" value="sc_comboDCM_nogap" />
		<property name="convertorName" value="eV_Deg_converter" />
		<property name="lowerGdaLimits" value="2000" />
		<property name="upperGdaLimits" value="25000" />
		<property name="initialUserUnits" value="eV" />
		<property name="convertorUnitString" value="eV" />
	</bean>

	<bean id="sc_ComboDCMController" class="gda.device.scannable.scannablegroup.ScannableGroup">
		<property name="groupMembers">
			<list>
				<ref bean="energy" />
				<ref bean="sc_comboDCM_d" />
				<ref bean="sc_comboDCM_nogap" />
				<ref bean="sc_idgap_mDeg" />
				<ref bean="sc_dcm_perp_mDeg" />
			</list>
		</property>
		<property name="protectionLevel" value="0" />
	</bean>

</beans>