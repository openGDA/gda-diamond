<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans.xsd">	
	
<!-- Single element xspress3 Mini  -->
	<bean id="FFI0_xspress3Mini" class="gda.device.detector.TfgFFoverI0">
		<property name="xspress" ref="xspress3Mini" />
		<property name="i0_channel" value="2" />
		<property name="counterTimer" ref="counterTimer01" />
	</bean>
 	
 	<bean id="xspress3Mini" class="uk.ac.gda.devices.detector.xspress4.Xspress4Detector">
		<property name="controller" ref="xspress3MiniController" />
		<property name="tfgFFI0" ref="FFI0_xspress3Mini" />
		<property name="configFileName" value="${gda.config}/templates/Xspress3Mini_Parameters.xml" />
		<property name="defaultSubdirectory" value="xspress3Mini" />
		<property name="triggerModeForScans" value="3" /> <!--  0 = software trigger mode, 3 = TTL veto -->
	</bean>
	
</beans>
