<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:gda="http://www.diamond.ac.uk/schema/gda/gda"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
	http://www.diamond.ac.uk/schema/gda/gda http://www.diamond.ac.uk/schema/gda/gda/gda-gda-1.0.xsd">


	<bean id="vma_focus1" class="gda.device.scannable.ScannableMotor">
		<property name="protectionLevel" value="0" />
		<property name="motor" ref="vma_focus_motor" />
	</bean>

	<bean id="VMA1" class="gda.device.scannable.scannablegroup.ScannableGroup">
		<property name="groupMembers">
			<list>
				<ref bean="vma_zoom" />
				<ref bean="vma_focus1" />
			</list>
		</property>
		<property name="protectionLevel" value="0" />
	</bean>

</beans>
