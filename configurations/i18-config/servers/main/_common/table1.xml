<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

	<bean id="sc_sample_z" class="gda.device.scannable.ScannableMotor">
		<property name="protectionLevel" value="0" />
		<property name="initialUserUnits" value="mm" />
		<property name="motor" ref="sample_z_motor" />
		<property name="hardwareUnitString" value="mm" />
		<property name="outputFormat">
			<list>
				<value>%.4f</value>
			</list>
		</property>
	</bean>

	<bean id="sc_sample_thetacoarse" class="gda.device.scannable.ScannableMotor">
		<property name="protectionLevel" value="0" />
		<property name="initialUserUnits" value="Deg" />
		<property name="motor" ref="sample_theta_coarse_motor" />
		<property name="hardwareUnitString" value="Deg" />
	</bean>

	<bean id="sc_MicroFocusSampleX" class="gda.device.scannable.ScannableMotor">
		<property name="protectionLevel" value="0" />
		<property name="initialUserUnits" value="mm" />
		<property name="motor" ref="sample_x_motor" />
		<property name="hardwareUnitString" value="mm" />
		<property name="outputFormat">
			<list>
				<value>%.4f</value>
			</list>
		</property>
	</bean>

	<bean id="sc_sample_y1" class="gda.device.scannable.ScannableMotor">
		<property name="protectionLevel" value="0" />
		<property name="initialUserUnits" value="mm" />
		<property name="motor" ref="sample_y1_motor" />
		<property name="hardwareUnitString" value="mm" />
	</bean>

	<bean id="sc_sample_y2" class="gda.device.scannable.ScannableMotor">
		<property name="protectionLevel" value="0" />
		<property name="initialUserUnits" value="mm" />
		<property name="motor" ref="sample_y2_motor" />
		<property name="hardwareUnitString" value="mm" />
	</bean>

	<bean id="sc_sample_y3" class="gda.device.scannable.ScannableMotor">
		<property name="protectionLevel" value="0" />
		<property name="initialUserUnits" value="mm" />
		<property name="motor" ref="sample_y3_motor" />
		<property name="hardwareUnitString" value="mm" />
	</bean>

	<bean id="sc_sample_thetafine" class="gda.device.scannable.ScannableMotor">
		<property name="protectionLevel" value="0" />
		<property name="initialUserUnits" value="Deg" />
		<property name="motor" ref="sample_theta_fine_motor" />
		<property name="hardwareUnitString" value="Deg" />
	</bean>

	<bean id="sc_MicroFocusSampleY" class="gda.device.scannable.CoupledScannable">
		<property name="scannables">
			<list>
				<ref bean="sc_sample_y1" />
				<ref bean="sc_sample_y2" />
				<ref bean="sc_sample_y3" />
			</list>
		</property>
		<property name="initialUserUnits" value="mm" />
		<property name="hardwareUnitString" value="mm" />
		<property name="outputFormat">
			<list>
				<value>%.4f</value>
			</list>
		</property>
	</bean>

	<bean id="sample_focus" class="gda.device.scannable.I18SampleFocusScannable">
		<property name="xScannable" ref="sc_MicroFocusSampleX" />
		<property name="zScannable" ref="sc_sample_z" />
	</bean>

	<bean id="sc_MicroFocusSampleStage" class="gda.device.scannable.scannablegroup.ScannableGroup">
		<property name="groupMembers">
			<list>
				<ref bean="sc_sample_z" />
				<ref bean="sc_sample_thetacoarse" />
				<ref bean="sc_MicroFocusSampleX" />
				<ref bean="sc_sample_y1" />
				<ref bean="sc_sample_y2" />
				<ref bean="sc_sample_y3" />
				<ref bean="sc_sample_thetafine" />
				<ref bean="sc_MicroFocusSampleY" />
				<ref bean="sample_focus" />
			</list>
		</property>
		<property name="protectionLevel" value="0" />
	</bean>

	<bean id="deferMFY" class="gda.device.scannable.DeferredScannable">
		<property name="controlPointScannable" ref="sc_MicroFocusSampleY"></property>
		<property name="deferredControlPoint" ref="xpsDeferFlag"></property>
	</bean>

</beans>
