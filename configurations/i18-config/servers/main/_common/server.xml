<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:corba="http://www.diamond.ac.uk/schema/gda/corba"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
		http://www.springframework.org/schema/context
		http://www.springframework.org/schema/context/spring-context.xsd
		http://www.diamond.ac.uk/schema/gda/corba
		http://www.diamond.ac.uk/schema/gda/corba/gda-corba-1.1.xsd">

	<context:property-placeholder/>

	<bean class="gda.spring.FindableNameSetterPostProcessor" />
	<bean class="gda.spring.SingletonRegistrationPostProcessor" />

	<bean id="GDAHashtable" class="gda.util.findableHashtable.FindableHashtable" />

	<!-- Import mode-specific objects -->
	<import resource="file:${gda.config}/servers/main/${gda.mode}/detectors/cmos.xml" />
	<import resource="file:${gda.config}/servers/main/${gda.mode}/detectors/detectors.xml" />
	<import resource="file:${gda.config}/servers/main/${gda.mode}/detectors/malcolm.xml" />
	<import resource="file:${gda.config}/servers/main/${gda.mode}/detectors/keithleys.xml" />
	<import resource="file:${gda.config}/servers/main/${gda.mode}/detectors/qexafs.xml" />
	<import resource="file:${gda.config}/servers/main/${gda.mode}/detectors/xspress3.xml" />
	<import resource="file:${gda.config}/servers/main/${gda.mode}/detectors/xspress3_addetector.xml" />
	<import resource="file:${gda.config}/servers/main/${gda.mode}/detectors/VMA_addetector.xml" />
	<import resource="file:${gda.config}/servers/main/${gda.mode}/core.xml" />
	<import resource="file:${gda.config}/servers/main/${gda.mode}/devices.xml" />
	<import resource="file:${gda.config}/servers/main/${gda.mode}/table1.xml" />
	<import resource="file:${gda.config}/servers/main/${gda.mode}/table3.xml" />
	<!-- Make mandelbrot detector available both on dummy and live modes for testing mapping scans. -->
	<import resource="file:${gda.config}/servers/main/_common/detectors/example_detectors.xml"/>

	<!-- Import common objects -->
	<import resource="detectors/cmos.xml" />
	<import resource="detectors/detectors.xml" />
	<import resource="detectors/qexafs.xml" />
	<import resource="detectors/xspress3.xml" />
	<import resource="detectors/xspress3_addetector.xml" />
	<import resource="detectors/VMA_addetector.xml" />
	<import resource="detectors/processing.xml" />
	<import resource="converters.xml" />
	<import resource="datawriter.xml" />
	<import resource="logging_script_controller.xml" />
	<import resource="metadata.xml" />
	<import resource="motor_rmi_exports.xml" />
	<import resource="new_scanning.xml" />
	<import resource="beam_watchdogs.xml" />
	<import resource="scannables.xml" />
	<import resource="table1.xml" />
	<import resource="table3.xml" />

	<!-- Need to import core.xml last so all other objects are configured before the Jython server -->
	<import resource="core.xml" />

	<corba:export namespace="${gda.factory.factoryName}" />

</beans>
