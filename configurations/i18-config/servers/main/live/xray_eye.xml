<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

	<!-- HDF5 file writers -->
	<bean id="xrayeye_abstract_hdf5_filewriter_nochunking"
		class="gda.device.detector.addetector.filewriter.MultipleImagesPerHDF5FileWriter"
		abstract="true">
		<property name="filePathTemplate" value="$datadir$/nexus" />
		<property name="fileTemplate" value="%s%s-%d.hdf" />
		<property name="fileNumberAtScanStart" value="-1" />
		<property name="setFileNameAndNumber" value="true" />
		<property name="rowChunks" value="0" />
		<property name="colChunks" value="0" />
		<property name="framesChunks" value="0" />
		<property name="framesFlush" value="0" />
		<property name="lazyOpen" value="true" />
		<!-- property name="boundaryAlign" value="1048576"/ -->
		<property name="setChunking" value="false" /> 
		<property name="blocking" value="false" /> <!-- must be false otherwise PCO Event Driver driver crashes if framesChunks 
			is 64 -->
	</bean>

	<bean id="xrayeye_ndfilehdf5_base" class="gda.spring.V17NDFileFactoryBean">
		<property name="prefix" value="BL18I-EA-DET-07:HDF5:" />
		<property name="resetToInitialValues" value="false" />
	</bean>

	<bean id="xrayeye_ndhdf5file" class="gda.spring.V17NDFileHDF5FactoryBean">
		<property name="ndFileImpl" ref="xrayeye_ndfilehdf5_base" />
	</bean>

	<bean id="xrayeye_hdf5_filewriter_nochunking" parent="xrayeye_abstract_hdf5_filewriter_nochunking">
		<property name="ndFileHDF5" ref="xrayeye_ndhdf5file" />
		<property name="fileNameTemplate" value="xrayeye" />
	</bean>

	<!-- main objects -->
	<bean id="xrayeye_base" class="gda.spring.V17ADBaseFactoryBean">
		<property name="prefix" value="BL18I-EA-DET-07:CAM:" />
	</bean>

<!-- 		class="gda.device.detector.addetector.triggering.SingleExposureStandard"> -->
<!-- 		<constructor-arg value="0.1" /> -->
	<bean id="xrayeye_stepscan_collection_strategy"
		class="gda.device.detector.addetector.triggering.PSLSingleExposure">
		<constructor-arg ref="xrayeye_base" />
		<constructor-arg value="-1" />
		<constructor-arg value="BL18I-EA-DET-07:CAM:RESET.PROC" />
		<constructor-arg value="BL18I-EA-DET-07:CAM:AcquireTime" />
	</bean>

	<bean id="xrayeye" class="gda.device.detector.NXDetector">
		<property name="name" value="xrayeye" />
		<property name="collectionStrategy" ref="xrayeye_stepscan_collection_strategy" />
		<property name="additionalPluginList">
			<list>
				<ref bean="xrayeye_hdf5_filewriter_nochunking" />
			</list>
		</property>
	</bean>
	
</beans>