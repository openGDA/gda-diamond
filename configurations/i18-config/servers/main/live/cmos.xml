<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

	<!-- HDF5 file writers -->
	<bean id="abstract_hdf5_filewriter_nochunking"
		class="gda.device.detector.addetector.filewriter.MultipleImagesPerHDF5FileWriter"
		abstract="true">
		<property name="filePathTemplate" value="$datadir$/nexus" />
		<property name="fileTemplate" value="%s%s-%d.hdf" />
		<property name="fileNumberAtScanStart" value="-1" />
		<property name="setFileNameAndNumber" value="true" />
		<property name="rowChunks" value="0" />
		<property name="colChunks" value="0" />
		<property name="framesChunks" value="0" />
		<property name="framesFlush" value="0" />
		<property name="lazyOpen" value="true" />
		<!-- property name="boundaryAlign" value="1048576"/ -->
		<property name="blocking" value="false" /> <!-- must be false otherwise PCO Event Driver driver crashes if framesChunks 
			is 64 -->
	</bean>

	<bean id="cmos_ndhdf5file" class="gda.spring.V17NDFileHDF5FactoryBean">
		<property name="ndFileImpl" ref="cmos_ndfilehdf5_base" />
	</bean>

	<bean id="cmos_ndfilehdf5_base" class="gda.spring.V17NDFileFactoryBean">
		<property name="prefix" value="BL18I-EA-DET-06:HDF5:" />
		<property name="resetToInitialValues" value="false" />
	</bean>

	<bean id="cmos_hdf5_filewriter_nochunking" parent="abstract_hdf5_filewriter_nochunking">
		<property name="ndFileHDF5" ref="cmos_ndhdf5file" />
		<property name="fileNameTemplate" value="cmos" />
	</bean>


	<!-- Define ROIs -->
	<bean id="roistats1"
		class="gda.device.detector.nxdetector.plugin.areadetector.ADRoiStatsPairFactory">
		<property name="pluginName" value="roistats1" />
		<property name="baseRoiPVName" value="BL08I-EA-DET-01:ROI1:" />
		<property name="baseStatsPVName" value="BL08I-EA-DET-01:STAT1:" />
		<property name="roiInputNdArrayPort" value="DET1.CAM" />
		<property name="enabledBasicStats" value="Total" />
		<property name="oneTimeSeriesCollectionPerLine" value="false" />
	</bean>

	<bean id="roistats2"
		class="gda.device.detector.nxdetector.plugin.areadetector.ADRoiStatsPairFactory">
		<property name="pluginName" value="roistats2" />
		<property name="baseRoiPVName" value="BL08I-EA-DET-01:ROI2:" />
		<property name="baseStatsPVName" value="BL08I-EA-DET-01:STAT2:" />
		<property name="roiInputNdArrayPort" value="DET1.CAM" />
		<property name="enabledBasicStats" value="Total" />
		<property name="oneTimeSeriesCollectionPerLine" value="false" />
	</bean>

	<bean id="roistats3"
		class="gda.device.detector.nxdetector.plugin.areadetector.ADRoiStatsPairFactory">
		<property name="pluginName" value="roistats3" />
		<property name="baseRoiPVName" value="BL08I-EA-DET-01:ROI3:" />
		<property name="baseStatsPVName" value="BL08I-EA-DET-01:STAT3:" />
		<property name="roiInputNdArrayPort" value="DET1.CAM" />
		<property name="enabledBasicStats" value="Total" />
		<property name="oneTimeSeriesCollectionPerLine" value="false" />
	</bean>

	<bean id="roistats4"
		class="gda.device.detector.nxdetector.plugin.areadetector.ADRoiStatsPairFactory">
		<property name="pluginName" value="roistats4" />
		<property name="baseRoiPVName" value="BL08I-EA-DET-01:ROI4:" />
		<property name="baseStatsPVName" value="BL08I-EA-DET-01:STAT4:" />
		<property name="roiInputNdArrayPort" value="DET1.CAM" />
		<property name="enabledBasicStats" value="Total" />
		<property name="oneTimeSeriesCollectionPerLine" value="false" />
	</bean>

	<bean id="roistats5"
		class="gda.device.detector.nxdetector.plugin.areadetector.ADRoiStatsPairFactory">
		<property name="pluginName" value="roistats5" />
		<property name="baseRoiPVName" value="BL08I-EA-DET-01:ROI5:" />
		<property name="baseStatsPVName" value="BL08I-EA-DET-01:STAT5:" />
		<property name="roiInputNdArrayPort" value="DET1.CAM" />
		<property name="enabledBasicStats" value="Total" />
		<property name="oneTimeSeriesCollectionPerLine" value="false" />
	</bean>


	<!-- main objects -->
	<bean id="cmos_base" class="gda.spring.V17ADBaseFactoryBean">
		<property name="prefix" value="BL18I-EA-DET-06:CAM:" />
	</bean>

	<bean id="cmos_stepscan_collection_strategy"
		class="gda.device.detector.addetector.triggering.SingleExposureStandard">
		<constructor-arg ref="cmos_base" />
		<constructor-arg value="0." />
	</bean>

	<bean id="cmos" class="gda.device.detector.NXDetector">
		<property name="name" value="cmos" />
		<property name="collectionStrategy" ref="cmos_stepscan_collection_strategy" />
		<property name="additionalPluginList">
			<list>
				<ref bean="cmos_hdf5_filewriter_nochunking" />
			</list>
		</property>
	</bean>

	<bean id="cmos_hardwaretriggered_strategy"
		class="gda.device.detector.addetector.triggering.HardwareTriggeredStandard">
		<constructor-arg ref="cmos_base" />
		<constructor-arg value="0." />
		<property name="readoutTime" value="0.1" />
	</bean>

	<bean id="cmos_for_maps" class="gda.device.detector.NXDetector">
		<property name="name" value="cmos" />
		<property name="collectionStrategy" ref="cmos_hardwaretriggered_strategy" />
		<property name="additionalPluginList">
			<list>
				<ref bean="cmos_hdf5_filewriter_nochunking" />
			</list>
		</property>
	</bean>

	<bean id="cmos_for_maps_with_phasecontrast" class="gda.device.detector.NXDetector">
		<property name="name" value="cmos" />
		<property name="collectionStrategy" ref="cmos_hardwaretriggered_strategy" />
		<property name="additionalPluginList">
			<list>
				<ref bean="cmos_hdf5_filewriter_nochunking" />
				<ref bean="roistats1" />
				<ref bean="roistats2" />
				<ref bean="roistats3" />
				<ref bean="roistats4" />
				<ref bean="roistats5" />
				<bean
					class="gda.device.detector.nxdetector.plugin.areadetector.phasecontrast.PhaseContrastCalculationPlugin">
					<property name="roi1Name" value="quadrant1" />
					<property name="roi2Name" value="quadrant2" />
					<property name="roi3Name" value="quadrant3" />
					<property name="roi4Name" value="quadrant4" />
				</bean>
			</list>
		</property>
	</bean>

</beans>