<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

	<bean id="traj1ScanController" class="gda.device.continuouscontroller.EpicsTrajectoryScanController">
		<property name="deviceName" value="TRAJ" />
		<property name="local" value="true" />
		<property name="maximumNumberElements" value="2000" />
		<property name="maximumNumberPulses" value="20000" />
	</bean>

	<bean id="traj1ScanControllerAdapter" class="gda.device.continuouscontroller.EpicsTrajectoryMoveControllerAdapter">
		<property name="controller" ref="traj1ScanController" />
		<property name="axisNames">
			<list>
				<value>samplez</value>
				<value>thetacoarse</value>
				<value>samplex</value>
				<value>thetafine</value>
			</list>
		</property>
		<property name="verifyEpicsReadbackEnabled" value="false" />
		<property name="local" value="true" />
	</bean>

	<bean id="traj1SampleX" class="gda.device.scannable.TrajectoryScannableMotor">
		<property name="protectionLevel" value="0" />
		<property name="initialUserUnits" value="mm" />
		<property name="motor" ref="sample_x_motor" />
		<property name="hardwareUnitString" value="mm" />
		<property name="controllerMotorIndex" value="2" />
		<property name="continuousMoveController" ref="traj1ScanControllerAdapter" />
	</bean>

</beans>
