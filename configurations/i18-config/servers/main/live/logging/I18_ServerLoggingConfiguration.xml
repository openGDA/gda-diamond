<?xml version="1.0" encoding="UTF-8"?>

<configuration>
	<turboFilter class="ch.qos.logback.classic.turbo.MarkerFilter">
        <Name>Finest</Name>
        <Marker>FINEST</Marker>
        <OnMatch>DENY</OnMatch>
    </turboFilter>

<!-- address where the messages from Object Servers send to - the LogServer-->
    <appender name="SOCKET" class="ch.qos.logback.classic.net.SocketAppender">
        <RemoteHost>i18-control.diamond.ac.uk</RemoteHost>
        <Port>6788</Port>
        <ReconnectionDelay>10000</ReconnectionDelay>
        <IncludeCallerData>true</IncludeCallerData>
    </appender>
<!--     <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender"> -->
<!--         <layout class="ch.qos.logback.classic.PatternLayout"> -->
<!--              <Pattern>%date %-5level %logger{36} - %m %rEx%n</Pattern> -->
<!--             <pattern>%r  %-5level [%logger{36}] - %m%n</pattern> -->
<!--         </layout> -->
<!--     </appender>     -->
    <logger name="gda">
        <level value="INFO"/>
    </logger>
    <logger name="gda.device.motor.EpicsMotor">
        <level value="INFO"/>
    </logger>
    <logger name="gda.jython.GDAInteractiveConsole">
        <level value="INFO"/>
    </logger>
     <logger name="gda.device.corba.impl">
        <level value="INFO"/>
    </logger>
    <logger name="gda.device.temperature">
        <level value="INFO"/>
    </logger>
    <logger name="gda.jython.corba.impl">
        <level value="INFO"/>
    </logger>    
    <logger name="gda.oe.corba.impl">
        <level value="INFO"/>
    </logger>    
    <root>
        <level value="ALL"/>
        <appender-ref ref="SOCKET"/>
        <appender-ref ref="CONSOLE"/>
    </root>
    <consolePlugin />
    

</configuration>
