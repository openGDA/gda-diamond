<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="t1xyDevice" class="org.eclipse.scanning.malcolm.core.MalcolmDevice"
		init-method="register">
		<property name="name" value="BL18I-ML-SCAN-01" />
		<property name="model" ref="t1xyModel" />
		<property name="deviceInformation" ref="t1xyInfo" />
		<property name="activated" value="false" />
	</bean>
	<bean id="t1xyModel" class="org.eclipse.scanning.api.device.models.MalcolmModel">
		<property name="name" value="BL18I-ML-SCAN-01" />
		<property name="exposureTime" value="0.01" />
	</bean>
	<bean id="t1xyInfo" class="org.eclipse.scanning.api.event.scan.DeviceInformation">
		<property name="id" value="org.eclipse.scanning.malcolm.t1xyDevice" />
		<property name="label" value="T1 X vs Y" />
		<property name="description"
			value="Scan of Xspress3 and ion chambers over T1 X (fast) and Y (slow)" />
	</bean>

	<bean id="t1xtDevice" class="org.eclipse.scanning.malcolm.core.MalcolmDevice"
		init-method="register">
		<property name="name" value="BL18I-ML-SCAN-02" />
		<property name="model" ref="t1xtModel" />
		<property name="deviceInformation" ref="t1xtInfo" />
		<property name="activated" value="false" />
	</bean>
	<bean id="t1xtModel" class="org.eclipse.scanning.api.device.models.MalcolmModel">
		<property name="name" value="BL18I-ML-SCAN-02" />
		<property name="exposureTime" value="0.01" />
	</bean>
	<bean id="t1xtInfo" class="org.eclipse.scanning.api.event.scan.DeviceInformation">
		<property name="id" value="org.eclipse.scanning.malcolm.t1xtDevice" />
		<property name="label" value="T1 X vs theta" />
		<property name="description"
			value="Scan of Xspress3 and ion chambers over T1 X (fast) and fine theta (slow)" />
	</bean>

	<bean id="t3xyDevice" class="org.eclipse.scanning.malcolm.core.MalcolmDevice"
		init-method="register">
		<property name="name" value="BL18I-ML-SCAN-03" />
		<property name="model" ref="t3xyModel" />
		<property name="deviceInformation" ref="t3xyInfo" />
		<property name="activated" value="false" />
	</bean>
	<bean id="t3xyModel" class="org.eclipse.scanning.api.device.models.MalcolmModel">
		<property name="name" value="BL18I-ML-SCAN-03" />
		<property name="exposureTime" value="0.01" />
	</bean>
	<bean id="t3xyInfo" class="org.eclipse.scanning.api.event.scan.DeviceInformation">
		<property name="id" value="org.eclipse.scanning.malcolm.t3xyDevice" />
		<property name="label" value="T3 X vs Y" />
		<property name="description"
			value="Scan of Xspress3 and ion chambers over T3 X (fast) and Y (slow)" />
	</bean>

	<bean id="t3xtDevice" class="org.eclipse.scanning.malcolm.core.MalcolmDevice"
		init-method="register">
		<property name="name" value="BL18I-ML-SCAN-04" />
		<property name="model" ref="t3xtModel" />
		<property name="deviceInformation" ref="t3xtInfo" />
		<property name="activated" value="false" />
	</bean>
	<bean id="t3xtModel" class="org.eclipse.scanning.api.device.models.MalcolmModel">
		<property name="name" value="BL18I-ML-SCAN-04" />
		<property name="exposureTime" value="0.01" />
	</bean>
	<bean id="t3xtInfo" class="org.eclipse.scanning.api.event.scan.DeviceInformation">
		<property name="id" value="org.eclipse.scanning.malcolm.t3xtDevice" />
		<property name="label" value="T3 X vs theta" />
		<property name="description"
			value="Scan of Xspress3 and ion chambers over T3 X (fast) and fine theta (slow)" />
	</bean>

</beans>
