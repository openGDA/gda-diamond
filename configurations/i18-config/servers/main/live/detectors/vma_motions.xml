	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
	http://www.diamond.ac.uk/schema/gda/gda http://www.diamond.ac.uk/schema/gda/gda/gda-gda-1.0.xsd">


	<bean id="vma_zoom" class="gda.device.enumpositioner.EpicsEnumPositioner">
		<property name="pvBase" value="BL18I-DI-DCAM-01:MP:SELECT" />
	</bean>
	
	<bean id="vma_focus_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL18I-DI-DCAM-01:FOCUS" />
	</bean>

</beans>
