<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

	<bean id="jython_script_paths" class="gda.jython.ScriptPaths">
		<property name="projects">
			<list>
				<bean class="gda.jython.ScriptProject">
					<property name="path" value="/dls_sw/i18/scripts"></property>
					<property name="name" value="Scripts: User"></property>
					<property name="type" value="USER"></property>
				</bean>
				<bean class="gda.jython.ScriptProject">
					<property name="path" value="${gda.config}/scripts"></property>
					<property name="name" value="Scripts: Config"></property>
					<property name="type" value="CONFIG"></property>
				</bean>
				<bean class="gda.jython.ScriptProject">
					<property name="path"
						value="${gda.install.git.loc}/gda-xas-core.git/uk.ac.gda.server.exafs/scripts" />
					<property name="name" value="Scripts: Exafs" />
					<property name="type" value="CORE" />
				</bean>
				<bean class="gda.jython.ScriptProject">
					<property name="path"
						value="${gda.install.git.loc}/gda-xas-core.git/uk.ac.diamond.daq.client.microfocus.scan/scripts" />
					<property name="name" value="Scripts: Microfocus" />
					<property name="type" value="CORE" />
				</bean>
			</list>
		</property>
		<property name="startupScript" value="${gda.config}/scripts/localStation.py"></property>
	</bean>

	<bean id="FileRegistrar" class="gda.data.fileregistrar.FileRegistrar">
		<property name="name" value="FileRegistrar" />
		<property name="directory"
			value="/dls/bl-misc/dropfiles2/icat/dropZone/${gda.instrument}-" />
	</bean>

	<bean id="DataWriterFactory" class="gda.data.scan.datawriter.DefaultDataWriterFactory">
		<property name="dataWriterExtenders">
			<list>
				<ref bean="FileRegistrar" />
			</list>
		</property>
	</bean>

</beans>