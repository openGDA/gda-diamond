<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

<!--  to use with xmap detector -->
	<bean id="xps2EpicsTrajScanController"
		class="gda.device.continuouscontroller.EpicsTrajectoryScanControllerDev812">
		<property name="deviceName" value="TRAJ" />
		<property name="local" value="true" />
		<property name="maximumNumberElements" value="2000" />
		<property name="maximumNumberPulses" value="20000" />
	</bean>
	<bean id="xpsTrajController"
		class="gda.device.continuouscontroller.EpicsTrajectoryMoveControllerAdapter">
		<property name="controller" ref="xps2EpicsTrajScanController" />
		
		<property name="axisNames">
			<list>
			<value>samplez</value>
			<value>thetacoarse</value>
			<value>samplex</value>
			<value>thetafine</value>
			</list>
		</property>
		<property name="axisMotorOrder">
			<list>
				<value>0</value>
				<value>1</value>
				<value>2</value>
				<value>3</value>
			</list>
		</property>
		<property name="local" value="true" />
		<property name="useAlternateMethod" value="true"/>
	</bean>
	
	<bean id="continuousSampleX" class="gda.device.scannable.TrajectoryScannableMotor">
		<property name="protectionLevel" value="0" />
		<property name="initialUserUnits" value="mm" />
		<property name="motor" ref="sample_x_motor" />
		<property name="hardwareUnitString" value="mm" />
		<property name="controllerMotorIndex" value="3" />
		<property name="continuousMoveController" ref="xpsTrajController" />
	</bean>

</beans>