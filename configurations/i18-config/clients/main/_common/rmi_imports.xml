	</bean>
	<bean id="sample_focus" class="uk.ac.gda.remoting.client.GdaRmiProxyFactoryBean">
		<property name="serviceUrl" value="${gda.rmi.prefix}sample_focus" />
		<property name="serviceInterface" value="gda.device.ScannableMotionUnits" />
		<property name="refreshStubOnConnectFailure" value="true" />
	</bean>
	<bean id="vma_zoom1" class="uk.ac.gda.remoting.client.GdaRmiProxyFactoryBean">
		<property name="serviceUrl" value="${gda.rmi.prefix}vma_zoom1" />
		<property name="serviceInterface" value="gda.device.ScannableMotionUnits" />
		<property name="refreshStubOnConnectFailure" value="true" />
	</bean>
	<bean id="vma_focus1" class="uk.ac.gda.remoting.client.GdaRmiProxyFactoryBean">
		<property name="serviceUrl" value="${gda.rmi.prefix}vma_focus1" />
