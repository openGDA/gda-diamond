		<property name="refreshStubOnConnectFailure" value="true" />
	</bean>
	<bean id="sc_sample_z" class="uk.ac.gda.remoting.client.GdaRmiProxyFactoryBean">
		<property name="serviceUrl" value="${gda.rmi.prefix}sc_sample_z" />
		<property name="serviceInterface" value="gda.device.ScannableMotionUnits" />
		<property name="refreshStubOnConnectFailure" value="true" />
	</bean>
	<bean id="sc_sample_thetacoarse" class="uk.ac.gda.remoting.client.GdaRmiProxyFactoryBean">
		<property name="serviceUrl" value="${gda.rmi.prefix}sc_sample_thetacoarse" />
		<property name="serviceInterface" value="gda.device.ScannableMotionUnits" />
