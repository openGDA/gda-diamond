<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

	<!-- Motors -->
	<bean id="sc_MicroFocusSampleX" class="uk.ac.gda.remoting.client.GdaRmiProxyFactoryBean">
		<property name="serviceUrl" value="${gda.rmi.prefix}sc_MicroFocusSampleX" />
		<property name="serviceInterface" value="gda.device.ScannableMotionUnits" />
		<property name="refreshStubOnConnectFailure" value="true" />
	</bean>
	<bean id="sc_MicroFocusSampleY" class="uk.ac.gda.remoting.client.GdaRmiProxyFactoryBean">
		<property name="serviceUrl" value="${gda.rmi.prefix}sc_MicroFocusSampleY" />
