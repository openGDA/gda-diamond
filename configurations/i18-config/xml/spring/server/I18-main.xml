<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:util="http://www.springframework.org/schema/util"
	xmlns:corba="http://www.diamond.ac.uk/schema/gda/corba"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
           http://www.springframework.org/schema/util
           http://www.springframework.org/schema/util/spring-util-2.0.xsd
           http://www.diamond.ac.uk/schema/gda/corba
           http://www.diamond.ac.uk/schema/gda/corba/gda-corba-1.0.xsd">
	<bean
		class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
		<property name="location" value="file:${gda.config}/properties/java.properties" />
	</bean>
	
	<bean class="gda.spring.FindableNameSetterPostProcessor" />

	<bean id="GDAHashtable" class="gda.util.findableHashtable.FindableHashtable" />
	
	<!-- Meta Data File -->
    <import resource="file:${gda.config}/xml/spring/server/gda/I18-meta-data.xml"/>
    
	
	<!--  GDA configuration split up by part type with the rest being in core -->
	<import resource="file:${gda.config}/xml/spring/server/gda/I18-epics-objects.xml"/>
	<import resource="file:${gda.config}/xml/spring/server/gda/xmaptraj_scan_controller.xml"/>
	<import resource="file:${gda.config}/xml/spring/server/gda/I18-server-sampleenvironments.xml"/>
	<import resource="file:${gda.config}/xml/spring/server/gda/I18-meta-data.xml"/> 
	<import resource="file:${gda.config}/xml/spring/server/gda/I18-detectors.xml"/>	
	<import resource="file:${gda.config}/xml/spring/server/gda/I18-scannables.xml"/>
	<import resource="file:${gda.config}/xml/spring/server/gda/I18-swing-objects.xml"/>
	<import resource="file:${gda.config}/xml/spring/server/gda/I18-rmiserver.xml"/>
	<import resource="file:${gda.config}/xml/spring/server/gda/I18-server-datawriterconfig.xml"/>
	<!--  <import resource="file:${gda.config}/xml/spring/server/gda/i18_attocubes.xml"/>-->
	<import resource="file:${gda.config}/xml/spring/server//I18-command-server.xml"/>
	<import resource="file:${gda.config}/xml/spring/server/gda/I18-core.xml"/>
	<bean class="gda.spring.SingletonRegistrationPostProcessor" />
	<bean class="uk.ac.gda.remoting.server.GdaRmiServiceExporter">
			<property name="serviceName" value="gda/qexafs_energy" />
			<property name="service" ref="qexafs_energy" />
			<property name="serviceInterface" value="uk.ac.gda.exafs.ui.views.scalersmonitor.IQexafsScannableState" />
		</bean>
	<corba:export namespace="I18" />

</beans>
