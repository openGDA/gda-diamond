<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

	<bean class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
		<property name="location" value="file:${gda.config}/properties/java-localrcp.properties" />
	</bean>
	<bean class="gda.spring.FindableNameSetterPostProcessor" />

	<bean id="command_server" class="gda.jython.JythonServer">

		<property name="jythonScriptPaths">
			<bean class="gda.jython.ScriptPaths">
				<property name="projects">
					<list>
						<bean class="gda.jython.ScriptProject">
							<property name="path" value="/dls_sw/i18/scripts"></property>
							<property name="name" value="Scripts: User"></property>
							<property name="type" value="USER"></property>
						</bean>
						<bean class="gda.jython.ScriptProject">
							<property name="path" value="${gda.config}/scripts"></property>
							<property name="name" value="Scripts: Config"></property>
							<property name="type" value="CONFIG"></property>
						</bean>
						<bean class="gda.jython.ScriptProject">
							<property name="path" value="${gda.root}/uk.ac.gda.core/scripts"></property>
							<property name="name" value="Scripts: Core"></property>
							<property name="type" value="CORE"></property>
						</bean>
						<bean class="gda.jython.ScriptProject">
							<property name="path" value="../../../trunk_git/gda-xas-core.git/uk.ac.gda.server.exafs/scripts/" />
							<property name="name" value="Scripts: Exafs" />
							<property name="type" value="CORE" />
						</bean>
					</list>
				</property>
				<property name="startupScript" value="${gda.config}/scripts/localStation_localrcp.py"></property>
			</bean>
		</property>
		<property name="gdaVarDirectory" value="${gda.config}/var" />
		<property name="cacheDirectory" value="${gda.config}/var/jythonCache" />
		<property name="remotePort" value="9999" />
	</bean>
	
	<bean id="RCPController" class="gda.gui.RCPControllerImpl"/>
	<bean class="uk.ac.gda.remoting.server.GdaRmiServiceExporter">
		<property name="serviceName" value="gda/rcpController" />
		<property name="service" ref="RCPController" />
		<property name="serviceInterface" value="gda.gui.RCPController" />
	</bean>
	<bean id="plot_server" class="uk.ac.diamond.scisoft.analysis.plotserver.PlotServerBase"/>
	
	<bean id="ExafsScriptObserver" class="gda.jython.scriptcontroller.ScriptControllerBase">
	</bean>

	<bean id="ExafsController" class="gda.jython.scriptcontroller.ScriptControllerBase">
	</bean>
	<bean id="MicroFocusController" class="gda.jython.scriptcontroller.ScriptControllerBase">
	</bean>
	
	 <!--  We need to define which classes are responsible for beans in the BeanFactory -->
	<bean class="uk.ac.gda.beans.BeansFactory">
	    <property name="classList">
	        <list>
	           <value>uk.ac.gda.beans.exafs.XasScanParameters</value>
	           <value>uk.ac.gda.beans.exafs.XanesScanParameters</value>
	           <value>uk.ac.gda.beans.exafs.XesScanParameters</value>
	           <value>uk.ac.gda.beans.exafs.QEXAFSParameters</value>
	           <value>uk.ac.gda.beans.exafs.i18.I18SampleParameters</value>
	           <value>uk.ac.gda.beans.exafs.SampleElements</value>
	           <value>uk.ac.gda.beans.exafs.DetectorParameters</value>
	           <value>uk.ac.gda.beans.exafs.OutputParameters</value>
	           <value>uk.ac.gda.beans.vortex.VortexParameters</value>
	           <value>uk.ac.gda.beans.xspress.XspressParameters</value>
	           <value>uk.ac.gda.beans.microfocus.MicroFocusScanParameters</value>
	        </list>
	    </property>
	</bean>

</beans>