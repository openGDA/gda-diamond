<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

	<bean id="daserver" class="gda.device.detector.DAServer">
		<property name="local" value="True" />
		<property name="host" value="i18-xspress0" />
		<property name="port" value="1972" />
		<property name="startupCommands">
			<list>
				<value>~config</value>
			</list>
		</property>
		<property name="dataPort" value="20030" />
		<property name="replyTimeOut" value="5000" />
	</bean>

	<bean id="xspress2system" class="gda.device.detector.xspress.Xspress2System">
		<property name="daServer" ref="daserver" />
		<property name="tfg" ref="tfg" />
		<property name="xspressSystemName" value="xsp1" />
		<property name="mcaOpenCommand" value="xspress2 open-mca 'xsp1'" />
		<property name="scalerOpenCommand" value="xspress2 open-scalers 'xsp1'" />
		<property name="startupScript" value="xspress2 format-run 'xsp1' res-none" />

		<property name="numberOfDetectors" value="9" />
		<property name="configFileName"
			value="${gda.config}/templates/Xspress_Parameters.xml" />
		<property name="dtcConfigFileName"
			value="${gda.config}/templates/Xspress_DeadTime_Parameters.xml" />
		<property name="fullMCABits" value="12" />
		<property name="outputFormat">
			<list>
				<value>%9.2f</value>
			</list>
		</property>
		<property name="sumAllElementData" value="true" />
	</bean>



	<!-- Time Frame Generator -->
	<bean id="tfg" class="gda.device.timer.Etfg">
		<property name="daServer" ref="daserver" />
	</bean>

	<!-- Scaler channels -->
	<bean id="CalMemory" class="gda.device.memory.Scaler">
		<property name="daServer" ref="daserver" />
		<property name="width" value="3" />
		<property name="height" value="1" />
		<property name="openCommand" value="tfg open-cc" />
	</bean>



	<bean id="counterTimer01" class="gda.device.detector.countertimer.TfgScalerWithLogValues">
		<property name="extraNames">
			<list>
				<value>liveTime</value>
				<value>I0</value>
				<value>It</value>
				<value>Iother</value>
				<value>lnI0It</value>
				<value>lnItIref</value>

			</list>
		</property>
		<property name="scaler" ref="CalMemory" />
		<property name="timer" ref="tfg" />
		<property name="timeChannelRequired" value="true" />
		<property name="outputLogValues" value="true" />
		<property name="TFGv2" value="true" />
		<property name="numChannelsToRead" value="4" />
		<property name="darkCurrentRequired" value="false" />
		<property name="outputFormat">
			<list>
				<value>%6.4g</value>
				<value>%6.4g</value>
				<value>%9d</value>
				<value>%9d</value>
				<value>%9d</value>
				<value>%.6g</value>
				<value>%.6g</value>

			</list>
		</property>
	</bean>

	<bean id="counterTimer02" class="gda.device.detector.countertimer.TfgXspress2">
		<property name="extraNames">
			<list>
				<value>flu_0</value>
				<value>flu_1</value>
				<value>flu_2</value>
				<value>flu_3</value>
				<value>flu_4</value>
				<value>flu_5</value>
				<value>flu_6</value>
				<value>flu_7</value>
				<value>flu_8</value>
				<value>FF</value>
			</list>
		</property>
		<property name="xspress" ref="xspress2system" />
		<property name="timer" ref="tfg" />
		<property name="slave" value="true" />
	</bean>

	<bean id="xmapMca" class="gda.device.detector.xmap.NexusXmap">
		<property name="controller" ref="xmapcontroller" />

		<!-- Value determined by procedure in DTC_for_vortex.doc and is a list, 
			one value for each element -->
		<property name="eventProcessingTimes">
			<list>
				<!-- <value>3.218415e-007</value> <value>3.332003e-007</value> <value>3.035056e-007</value> 
					<value>3.353330e-007</value> -->
				<value>1.7867731067630825e-08</value>
				<value>2.1322543748867164e-08</value>
				<value>2.1412068256345848e-08</value>
				<value>2.5302404673324592e-08</value>
			</list>
		</property>

		<property name="slave" value="true" />
		<property name="configFileName"
			value="${gda.config}/templates/Vortex_Parameters.xml" />
		<property name="tfg" ref="tfg" />
		<property name="sumAllElementData" value="true" />
	</bean>

	<bean id="HTXmapMca" class="gda.device.detector.xmap.HardwareTriggeredNexusXmapImpl">
		<property name="hardwareTriggerProvider" ref="xpsTrajController" />
		<property name="xmap" ref="xmapMca" />
		<property name="controller" ref="edxdcontroller" />
		<property name="daServer" ref="daserver" />
	</bean>

	<bean id="counterTimer03" class="gda.device.detector.countertimer.TfgXmap">
		<property name="xmap" ref="xmapMca" />
		<property name="timer" ref="tfg" />
		<property name="slave" value="true" />
	</bean>
	<bean id="raster_xspress" class="gda.device.detector.Xspress2BufferedDetector">
		<property name="xspress2system" ref="xspress2system" />
	</bean>
	<bean id="raster_xmap" class="gda.device.detector.xmap.XmapBufferedDetector">
		<property name="xmap" ref="xmapMca" />
		<property name="controller" ref="edxdcontroller">
		</property>
		<property name="daServer" ref="daserver"></property>
		<property name="local" value="true" />
	</bean>

	<bean id="raster_counterTimer01" class="gda.device.detector.countertimer.BufferedScaler">
		<property name="extraNames">
			<list>
				<value>liveTime</value>
				<value>I0</value>
				<value>It</value>
				<value>Iother</value>
			</list>
		</property>
		<property name="scaler" ref="CalMemory" />
		<property name="timer" ref="tfg" />
		<property name="daserver" ref="daserver" />
		<property name="timeChannelRequired" value="true" />
		<property name="darkCurrentRequired" value="false" />
		<property name="outputLogValues" value="false" />
		<property name="TFGv2" value="true" />
		<property name="numChannelsToRead" value="4" />
		<property name="outputFormat">
			<list>
				<value>%6.4g</value>
				<value>%6.4g</value>
				<value>%9d</value>
				<value>%9d</value>
				<value>%9d</value>
			</list>
		</property>
	</bean>
	<bean id="HTScaler"
		class="gda.device.detector.countertimer.HardwareTriggeredScaler">
		<property name="extraNames">
			<list>
				<value>liveTime</value>
				<value>I0</value>
				<value>It</value>
				<value>Iother</value>
			</list>
		</property>
		<property name="scaler" ref="CalMemory" />
		<property name="timer" ref="tfg" />
		<property name="daserver" ref="daserver" />
		<property name="timeChannelRequired" value="true" />
		<property name="darkCurrentRequired" value="false" />
		<property name="outputLogValues" value="false" />
		<property name="TFGv2" value="true" />
		<property name="numChannelsToRead" value="4" />
		<property name="outputFormat">
			<list>
				<value>%6.4g</value>
				<value>%6.4g</value>
				<value>%9d</value>
				<value>%9d</value>
				<value>%9d</value>
			</list>
		</property>
		<property name="hardwareTriggerProvider" ref="xpsTrajController" />
	</bean>


	<bean id="photonccd" class="gda.device.detector.IPPserver">
		<property name="outputFolderRoot" value="x:/data/2012/sp8012-1/xrd/" />
		<property name="fileNameRoot" value="i18-" />
		<property name="fileFormat" value="tif" />
		<property name="collectionTime" value="1" />
		<property name="host" value="172.23.118.71" />
		<property name="port" value="23" />
	</bean>

	<bean id="seso" class="gda.device.detector.SesoXbpmDetector">
		<property name="host" value="172.23.118.71" />
		<property name="port" value="20" />
	</bean>



	<bean id="mapdetector" class="gda.device.detector.DummyDetector" />
	<bean id="vortexmapdetector" class="gda.device.detector.DummyDetector" />

	<bean id="FFI0" class="gda.device.detector.TfgFFoverI0">
		<property name="xspress" ref="xspress2system" />
		<property name="counterTimer" ref="counterTimer01" />
		<property name="i0_channel" value="1" />
	</bean>

	<bean id="FFI0_vortex" class="gda.device.detector.TfgXMapFFoverI0">
		<property name="xmap" ref="xmapMca" />
		<property name="counterTimer" ref="counterTimer01" />
		<property name="i0_channel" value="1" />
	</bean>

<!-- 	<bean id="qexafs_xspress" class="gda.device.detector.Xspress2BufferedDetector"> -->
<!-- 		<property name="xspress2system" ref="xspress2system" /> -->
<!-- 		<property name="triggerSwitch" value="1" /> -->
<!-- 	</bean> -->

	<bean id="qexafs_xspress" class="gda.device.detector.Xspress2BufferedDetector">
		<property name="xspress2system" ref="xspress2system" />
		<property name="inputNames">
			<list>
			</list>
		</property>
	</bean>


	<bean id="qexafs_counterTimer01" class="gda.device.detector.countertimer.BufferedScaler">
		<property name="extraNames">
			<list>
				<!-- <value>liveTime</value> -->
				<value>I0</value>
				<value>It</value>
				<value>Iother</value>
				<!-- <value>lnI0It</value> -->
				<!-- <value>lnItIref</value> -->
			</list>
		</property>
		<property name="scaler" ref="CalMemory" />
		<property name="timer" ref="tfg" />
		<property name="daserver" ref="daserver" />
		<property name="timeChannelRequired" value="true" />
		<property name="darkCurrentRequired" value="false" />
		<property name="outputLogValues" value="false" />
		<property name="TFGv2" value="true" />
		<property name="outputFormat">
			<list>
				<!-- <value>%6.4g</value> -->
				<value>%6.4g</value>
				<value>%9d</value>
				<value>%9d</value>
				<value>%9d</value>
				<!-- <value>%.6g</value> -->
				<!-- <value>%.6g</value> -->
			</list>
		</property>
	</bean>

	<bean id="QexafsFFI0" class="gda.device.detector.QexafsFFoverIO">
		<property name="qexafsXspress" ref="qexafs_xspress" />
		<property name="qexafsScaler" ref="qexafs_counterTimer01" />
	</bean>
</beans>
