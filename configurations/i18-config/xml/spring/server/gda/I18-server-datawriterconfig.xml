<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

	<bean id="datawriterconfig" class="gda.data.scan.datawriter.AsciiDataWriterConfiguration">
		<property name="commentMarker" value="#"></property>
		<property name="controllerName" value="ExafsScriptObserver"></property>			
		<property name="header">
			<list>
				<bean id="machine" class="gda.data.scan.datawriter.AsciiMetadataConfig">
					<property name="label" value="Diamond Light Source"/>
				</bean>
				<bean id="inst" class="gda.data.scan.datawriter.AsciiMetadataConfig">
					<property name="label" value="Instrument: I18-XAS Date: %s"/>
					<property name="labelValues">
						<list>
							<bean id="date" class="gda.device.scannable.TimeScannable"/>
						</list>
					</property>
				</bean>
				<bean id="primaryslits" class="gda.data.scan.datawriter.AsciiMetadataConfig">
					<property name="label" value="Primary slits:  vertical gap= %4.1f; horizontal gap= %4.1f; vertical offset= %4.1f; horizontal offset= %4.1f"/>
					<property name="labelValues">
						<list>
							<ref bean="s1ygap"/>
							<ref bean="s1xgap"/>
							<ref bean="s1ypos"/>
							<ref bean="s1xpos"/>
						</list>
					</property>
				</bean>
				<bean id="secondaryslits" class="gda.data.scan.datawriter.AsciiMetadataConfig">
					<property name="label" value="Secondary slits:  vertical gap= %4.1f; horizontal gap= %4.1f; vertical offset= %4.1f; horizontal offset= %4.1f"/>
					<property name="labelValues">
						<list>
							<ref bean="s2ygap"/>
							<ref bean="s2xgap"/>
							<ref bean="s2ypos"/>
							<ref bean="s2xpos"/>
						</list>
					</property>
				</bean>
				<bean id="crystalcut" class="gda.data.scan.datawriter.AsciiMetadataConfig">
					<property name="label" value="Crystal cut: Si(III)"/>
				</bean>
				<bean id="postDCMslits" class="gda.data.scan.datawriter.AsciiMetadataConfig">
					<property name="label" value="PostDCM slits:  vertical gap= %4.1f; horizontal gap= %4.1f; vertical offset= %4.1f; horizontal offset= %4.1f"/>
					<property name="labelValues">
						<list>
							<ref bean="s3ygap"/>
							<ref bean="s3xgap"/>
							<ref bean="s3ypos"/>
							<ref bean="s3xpos"/>
						</list>
					</property>
				</bean>
				<bean id="sampleStagexyz" class="gda.data.scan.datawriter.AsciiMetadataConfig">
					<property name="label" value="SampleStage:  sample_x= %4.3f; sample_y= %4.3f; sample_z= %4.3f; sample_thetacoarse= %4.3f; sample_thetafine= %4.3f" />
					<property name="labelValues">
						<list>
							<ref bean="sc_MicroFocusSampleX"/>
							<ref bean="sc_MicroFocusSampleY"/>
							<ref bean="sc_sample_z"/>
							<ref bean="sc_sample_thetacoarse" />
							<ref bean="sc_sample_thetafine" />
						</list>
					</property>
				</bean>
				<bean id="attenuators" class="gda.data.scan.datawriter.AsciiMetadataConfig">
					<property name="label" value="Attenuators:  D7A= %s; D7B= %s" />
					<property name="labelValues">
						<list>
							<ref bean="D7A"/>
							<ref bean="D7B"/>
						</list>
					</property>
				</bean>
			</list>
		</property>
		<!-- <property name="footer">
			<list>
				<bean id="ringcurrentend" class="gda.data.scan.datawriter.AsciiMetadataConfig">
					<property name="label" value="Ring current - end: %5.1f"/>
					<property name="labelValues">
						<list>
							<ref bean="ringCurrent"/>
						</list>
					</property>
				</bean>
			</list>
		</property>-->
		
	</bean>
	
</beans>
