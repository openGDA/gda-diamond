<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

<!--	This should be the last object server xml file called as when the Jython server is configured it makes method-->
<!--	calls to the OE objects which rely on them being configured already. This can be back into the main object-->
<!--	server xml file if OEs are not in use on the beamline.-->


	<bean class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
		<property name="location" value="file:${gda.config}/properties/java.properties" />
	</bean>
	<bean class="gda.spring.FindableNameSetterPostProcessor" />

<!--***************************************-->
	<!-- *** Jython Server section *** -->
	<!--***************************************-->
	<bean id="command_server" class="gda.jython.JythonServer">
		<property name="userScriptDirectory" value="${gda.root}/../../../scripts" />
		<property name="gdaScriptDirectory" value="${gda.config}/scripts" />
		<property name="gdaScriptLibraryDirectory" value="${gda.root}/uk.ac.gda.core/scripts" />
		<property name="gdaVarDirectory" value="${gda.config}/var" />
		<property name="cacheDirectory" value="${gda.config}/var/jythonCache" />
		<property name="remotePort" value="9999" />
	</bean>
	<!--***************************************-->
	<!-- *** Plot Server section *** -->
	<!--***************************************-->
	<bean id="plot_server" class="uk.ac.diamond.scisoft.analysis.plotserver.PlotServerBase"/>
	
	<!-- *************************************** Plot Manager section *************************************** -->	
	 <bean id="Plot_Manager" class="gda.analysis.plotmanager.PlotManager" />
	 <bean id="Current_Scan_Holder" class="gda.analysis.utils.CurrentScanHolder" />
	
	<bean id="ExafsController" class="gda.jython.scriptcontroller.ScriptControllerBase">
	</bean>
	<bean id="MicroFocusController" class="gda.jython.scriptcontroller.ScriptControllerBase">
	</bean>
	
</beans>
	

	
