<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:util="http://www.springframework.org/schema/util"
	xmlns:tx="http://www.springframework.org/schema/tx" xmlns:aop="http://www.springframework.org/schema/aop"
	xmlns:corba="http://www.diamond.ac.uk/schema/gda/corba"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
        http://www.springframework.org/schema/util
http://www.springframework.org/schema/util/spring-util-2.5.xsd
        http://www.springframework.org/schema/tx
http://www.springframework.org/schema/tx/spring-tx-2.5.xsd
        http://www.springframework.org/schema/aop
http://www.springframework.org/schema/aop/spring-aop-2.5.xsd
        http://www.diamond.ac.uk/schema/gda/corba
http://www.diamond.ac.uk/schema/gda/corba/gda-corba-1.0.xsd">

	<bean
		class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
		<property name="location"
			value="file:${gda.config}/properties/java.rcp.properties" />
	</bean>
	<bean class="gda.spring.FindableNameSetterPostProcessor" />

	<corba:import namespace="I18" names="plot_server" />
	<bean class="gda.factory.corba.util.AdapterFactory">
		<constructor-arg index="0" value="${gda.factory.factoryName}" />
		<constructor-arg index="1">
			<bean class="gda.spring.NetServiceFactoryBean" />
		</constructor-arg>
	</bean>


	<bean id="sc_MicroFocusSampleX" class="uk.ac.gda.remoting.client.GdaRmiProxyFactoryBean">
		<property name="serviceUrl" value="${gda.rmi.prefix}/sc_MicroFocusSampleX" />
		<property name="serviceInterface" value="gda.device.ScannableMotionUnits" />
		<property name="refreshStubOnConnectFailure" value="true" />
	</bean>
	<bean id="sc_MicroFocusSampleY" class="uk.ac.gda.remoting.client.GdaRmiProxyFactoryBean">
		<property name="serviceUrl" value="${gda.rmi.prefix}/sc_MicroFocusSampleY" />
		<property name="serviceInterface" value="gda.device.ScannableMotionUnits" />
		<property name="refreshStubOnConnectFailure" value="true" />
	</bean>
	<bean id="sc_sample_z" class="uk.ac.gda.remoting.client.GdaRmiProxyFactoryBean">
		<property name="serviceUrl" value="${gda.rmi.prefix}/sc_sample_z" />
		<property name="serviceInterface" value="gda.device.ScannableMotionUnits" />
		<property name="refreshStubOnConnectFailure" value="true" />
	</bean>
	<bean id="sc_sample_thetacoarse" class="uk.ac.gda.remoting.client.GdaRmiProxyFactoryBean">
		<property name="serviceUrl" value="${gda.rmi.prefix}/sc_sample_thetacoarse" />
		<property name="serviceInterface" value="gda.device.ScannableMotionUnits" />
		<property name="refreshStubOnConnectFailure" value="true" />
	</bean>
	<bean id="sc_microfocusXZ" class="uk.ac.gda.remoting.client.GdaRmiProxyFactoryBean">
		<property name="serviceUrl" value="${gda.rmi.prefix}/sc_microfocusXZ" />
		<property name="serviceInterface" value="gda.device.ScannableMotionUnits" />
		<property name="refreshStubOnConnectFailure" value="true" />
	</bean>
	<bean id="vma_zoom1" class="uk.ac.gda.remoting.client.GdaRmiProxyFactoryBean">
		<property name="serviceUrl" value="${gda.rmi.prefix}/vma_zoom1" />
		<property name="serviceInterface" value="gda.device.ScannableMotionUnits" />
		<property name="refreshStubOnConnectFailure" value="true" />
	</bean>
	<bean id="vma_focus1" class="uk.ac.gda.remoting.client.GdaRmiProxyFactoryBean">
		<property name="serviceUrl" value="${gda.rmi.prefix}/vma_focus1" />
		<property name="serviceInterface" value="gda.device.ScannableMotionUnits" />
		<property name="refreshStubOnConnectFailure" value="true" />
	</bean>
	<bean id="energy" class="uk.ac.gda.remoting.client.GdaRmiProxyFactoryBean">
		<property name="serviceUrl" value="${gda.rmi.prefix}/energy" />
		<property name="serviceInterface" value="gda.device.ScannableMotionUnits" />
		<property name="refreshStubOnConnectFailure" value="true" />
	</bean>

	<bean class="gda.rcp.util.OSGIServiceRegister">
		<property name="class" value="uk.ac.diamond.scisoft.analysis.PlotServer" />
		<property name="service" ref="plot_server" />
	</bean>
	<bean id="RCPController" class="uk.ac.gda.remoting.client.GdaRmiProxyFactoryBean">
		<property name="serviceUrl" value="${gda.rmi.prefix}/rcpController" />
		<property name="serviceInterface" value="gda.gui.RCPController" />
		<property name="refreshStubOnConnectFailure" value="true" />
	</bean>	
	
	
	<bean id="XASLoggingScriptController" class="uk.ac.gda.remoting.client.GdaRmiProxyFactoryBean">
		<property name="serviceUrl" value="${gda.rmi.prefix}/XASLoggingScriptController" />
		<property name="serviceInterface" value="gda.jython.scriptcontroller.logging.ILoggingScriptController" />
		<property name="refreshStubOnConnectFailure" value="true" />
	</bean>
	
	<bean id="commandQueueProcessor" class="uk.ac.gda.remoting.client.GdaRmiProxyFactoryBean">
		<property name="serviceUrl" value="${gda.rmi.prefix}/commandQueueProcessor" />
		<property name="serviceInterface" value="gda.commandqueue.IFindableQueueProcessor" />
		<property name="refreshStubOnConnectFailure" value="true" />
	</bean>
	<bean class="gda.rcp.util.OSGIServiceRegister">
		<property name="class" value="gda.commandqueue.Processor" />
		<property name="service" ref="commandQueueProcessor" />
	</bean>
	<bean class="gda.rcp.util.OSGIServiceRegister">
		<property name="class" value="gda.commandqueue.Queue" />
		<property name="service" ref="commandQueueProcessor" />
	</bean>
</beans>