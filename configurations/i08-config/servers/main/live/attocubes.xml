<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd"><!--
     
    <bean class="gda.configuration.epics.EpicsConfiguration">
		<constructor-arg value="${gda.config}/xml/epics/BL18I-gda-interface2-0.xml" />
	</bean>      
    --><!-- ANC motors -->
    <bean id="anc1_x_motor" class="gda.device.motor.EpicsMotor">
    <property name="deviceName" value="ANC1.X"></property>
    </bean>
    <bean id="anc1_y_motor" class="gda.device.motor.EpicsMotor">
    <property name="deviceName" value="ANC1.Y"></property>
    </bean>
    <bean id="anc1_z_motor" class="gda.device.motor.EpicsMotor">
    <property name="deviceName" value="ANC1.Z"></property>
    </bean>
    <bean id="anc1_theta_motor" class="gda.device.motor.EpicsMotor">
    <property name="deviceName" value="ANC1.THETA"></property>
    </bean>
    <bean id="anc1_cappa_motor" class="gda.device.motor.EpicsMotor">
    <property name="deviceName" value="ANC1.CAPPA"></property>
    </bean>
    <bean id="anc1_rot_motor" class="gda.device.motor.EpicsMotor">
    <property name="deviceName" value="ANC1.ROT"></property>
    </bean>

<bean id="anc1_x" class="gda.device.scannable.ScannableMotor">
		<property name="name" value="anc1_x"></property>
		<property name="protectionLevel" value="0" />
		<property name="motorName" value="anc1_x_motor" />
</bean>
<bean id="anc1_y" class="gda.device.scannable.ScannableMotor">
		<property name="name" value="anc1_y"></property>
		<property name="protectionLevel" value="0" />
		<property name="motorName" value="anc1_y_motor" />
</bean>
<bean id="anc1_z" class="gda.device.scannable.ScannableMotor">
		<property name="name" value="anc1_z"></property>
		<property name="protectionLevel" value="0" />
		<property name="motorName" value="anc1_z_motor" />
</bean>
<bean id="anc1_theta" class="gda.device.scannable.ScannableMotor">
		<property name="name" value="anc1_theta"></property>
		<property name="protectionLevel" value="0" />
		<property name="motorName" value="anc1_theta_motor" />
</bean>
<bean id="anc1_cappa" class="gda.device.scannable.ScannableMotor">
		<property name="name" value="anc1_cappa"></property>
		<property name="protectionLevel" value="0" />
		<property name="motorName" value="anc1_cappa_motor" />
</bean>
<bean id="anc1_rot" class="gda.device.scannable.ScannableMotor">
		<property name="name" value="anc1_rot"></property>
		<property name="protectionLevel" value="0" />
		<property name="motorName" value="anc1_rot_motor" />
</bean>
</beans>