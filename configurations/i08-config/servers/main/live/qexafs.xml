<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">
     
     <bean id="qexafs_energy" class="gda.device.scannable.QexafsScannable">
		<property name="motor" ref="dcm_energy_motor" />
		<property name="lowerGdaLimits" value="2000" />
		<property name="upperGdaLimits" value="40000" />
		<property name="outputFormat">
			<list>
				<value>%.2f</value>
			</list>
		</property>
		<property name="outputModePV" value="BL18I-OP-DCM-01:COMP:CTRL" />
		<property name="startPV" value="BL18I-OP-DCM-01:COMP:START" />
		<property name="stopPV" value="BL18I-OP-DCM-01:COMP:STOP" />
		<property name="stepPV" value="BL18I-OP-DCM-01:COMP:STEP" />
		<property name="accelPV" value="BL18I-OP-DCM-01:BRAGG.ACCL" />
		<property name="braggCurrentSpeedPV" value="BL18I-OP-DCM-01:ENERGY.VELO" />
		<property name="braggMaxSpeedPV" value="BL18I-OP-DCM-01:ENERGY.VMAX" />
		<property name="stepIncDegPV" value="BL18I-OP-DCM-01:COMP:STEP" />
		<property name="pulseWidthDegPV" value="BL18I-OP-DCM-01:COMP:PULSE" />
		<property name="numPulsesPV" value="BL18I-OP-DCM-01:COMP:NPULSES" />
	</bean>
     
	<bean id="qexafs_xspress" class="gda.device.detector.Xspress2BufferedDetector">
		<property name="xspress2system" ref="xspress2system" />
		<property name="inputNames">
			<list>
			</list>
		</property>
	</bean>

	<bean id="qexafs_counterTimer01" class="gda.device.detector.countertimer.BufferedScaler">
		<property name="extraNames">
			<list>
				<value>liveTime</value>
				<value>I0</value>
				<value>It</value>
				<value>Iother</value>
				<value>lnI0It</value>
				<value>lnItIref</value>
			</list>
		</property>
		<property name="scaler" ref="CalMemory" />
		<property name="timer" ref="tfg" />
		<property name="daserver" ref="daserver" />
		<property name="timeChannelRequired" value="true" />
		<property name="darkCurrentRequired" value="false" />
		<property name="outputLogValues" value="false" />
		<property name="TFGv2" value="true" />
		<property name="outputFormat">
			<list>
				<value>%6.4g</value>
				<value>%6.4g</value>
				<value>%9d</value>
				<value>%9d</value>
				<value>%9d</value>
				<value>%.6g</value>
				<value>%.6g</value>
			</list>
		</property>
	</bean>

	<bean id="QexafsFFI0" class="gda.device.detector.QexafsFFoverIO">
		<property name="qexafsXspress" ref="qexafs_xspress" />
		<property name="qexafsScaler" ref="qexafs_counterTimer01" />
	</bean>
	
</beans>
