<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">


<!-- Andor driver information for metadata -->
	<bean id="andorAccumulatePeriod" class="gda.device.monitor.EpicsMonitor">
		<property name="pvName" value="BL08I-EA-DET-01:CAM:AndorAccumulatePeriod_RBV"/>
		<property name="local" value="true"/>
		 <property name="poll" value="true" />
	</bean>

	<bean id="andorShutterMode" class="gda.device.monitor.EpicsMonitor">
		<property name="pvName" value="BL08I-EA-DET-01:CAM:AndorShutterMode"/>
		<property name="local" value="true"/>
		 <property name="poll" value="true" />
	</bean>

	<bean id="andorExtShutterTrigger" class="gda.device.monitor.EpicsMonitor">
		<property name="pvName" value="BL08I-EA-DET-01:CAM:AndorShutterExTTL"/>
		<property name="local" value="true"/>
		 <property name="poll" value="true" />
	</bean>

	<bean id="andorPreampGain" class="gda.device.monitor.EpicsMonitor">
		<property name="pvName" value="BL08I-EA-DET-01:CAM:AndorPreAmpGain_RBV"/>
		<property name="local" value="true"/>
		 <property name="poll" value="true" />
	</bean>

	<bean id="andorADCSpeed" class="gda.device.monitor.EpicsMonitor">
		<property name="pvName" value="BL08I-EA-DET-01:CAM:AndorADCSpeed_RBV"/>
		<property name="local" value="true"/>
		 <property name="poll" value="true" />
	</bean>

	<bean id="andorVerticalShiftSpeed" class="gda.device.monitor.EpicsMonitor">
		<property name="pvName" value="BL08I-EA-DET-01:CAM:AndorVSSpeed_RBV"/>
		<property name="local" value="true"/>
		 <property name="poll" value="true" />
	</bean>

	<bean id="andorVerticalShiftAmplitude" class="gda.device.monitor.EpicsMonitor">
		<property name="pvName" value="BL08I-EA-DET-01:CAM:AndorVSAmplitude_RBV"/>
		<property name="local" value="true"/>
		 <property name="poll" value="true" />
	</bean>

	<bean id="andorEMCCDGain" class="gda.device.monitor.EpicsMonitor">
		<property name="pvName" value="BL08I-EA-DET-01:CAM:AndorEMGain_RBV"/>
		<property name="local" value="true"/>
		 <property name="poll" value="true" />
	</bean>

	<bean id="andorCoolerTemperature" class="gda.device.monitor.EpicsMonitor">
		<property name="pvName" value="BL08I-EA-DET-01:CAM:Temperature_RBV"/>
		<property name="local" value="true"/>
		 <property name="poll" value="true" />
	</bean>

	<bean id="andorCoolerControl" class="gda.device.monitor.EpicsMonitor">
		<property name="pvName" value="BL08I-EA-DET-01:CAM:AndorCooler"/>
		<property name="local" value="true"/>
		 <property name="poll" value="true" />
	</bean>

	<bean id="andorBinningSizeX" class="gda.device.monitor.EpicsMonitor">
		<property name="pvName" value="BL08I-EA-DET-01:CAM:BinX_RBV"/>
		<property name="local" value="true"/>
		<property name="poll" value="true" />
		<!-- <property name="outputFormat" value="%5.5g" />  -->
	</bean>

	<bean id="andorBinningSizeY" class="gda.device.monitor.EpicsMonitor">
		<property name="pvName" value="BL08I-EA-DET-01:CAM:BinY_RBV"/>
		<property name="local" value="true"/>
		<property name="poll" value="true" />
		<!-- <property name="outputFormat" value="%5.5g" />  -->
	</bean>

<!-- Andor Camera Detector -->

	<bean id="andor_adbase_pvProvider"
		class="gda.device.detector.areadetector.v17.impl.SimplePVProvider">
		<property name="prefix" value="BL08I-EA-DET-01:CAM:" />
	</bean>

	<bean id="andor_adbase"  class="gda.device.detector.areadetector.v17.impl.ADBaseImpl">
		<property name="pvProvider" ref="andor_adbase_pvProvider" />
		<property name="BinX" value="4" />
		<property name="BinY" value="4" />
	</bean>

	<bean id="andor_base_proc"  class="gda.device.detector.areadetector.v17.impl.NDPluginBaseImpl">
		<property name="basePVName" value="BL08I-EA-DET-01:PROC:" />
	</bean>
	<bean id="andor_adproc"  class="gda.device.detector.areadetector.v17.impl.NDProcessImpl">
		<property name="basePVName" value="BL08I-EA-DET-01:PROC:" />
		<property name="pluginBase" ref= "andor_base_proc" />
	</bean>

<!-- HDF5 file writers -->
	 <bean id="andor_ndfilehdf5_base" class="gda.spring.V17NDFileFactoryBean">
		<property name="prefix" value="BL08I-EA-DET-01:HDF5:" />
		<property name="resetToInitialValues" value="false" />
	</bean>

	<bean id="andor_ndfilehdf5" class="gda.spring.V17NDFileHDF5FactoryBean">
		<property name="ndFileImpl" ref="andor_ndfilehdf5_base" />
	</bean>

	<bean id="andor_ringcurrent" class="gda.device.detector.nxdetector.plugin.areadetector.ADNDAttributesPlugin">
		<property name="ndFile" ref="andor_ndfilehdf5" />
		<property name="nDAttributeNodeNameInHDF5File" value="RingCurrent" />
	</bean>

<!-- Define ROIs -->
	<bean id="roistats1" class="gda.device.detector.nxdetector.plugin.areadetector.ADRoiStatsPairFactory">
		<property name="pluginName" value="roistats1" />
		<property name="baseRoiPVName" value="BL08I-EA-DET-01:ROI1:" />
		<property name="baseStatsPVName" value="BL08I-EA-DET-01:STAT1:" />
		<property name="roiInputNdArrayPort" value="DET1.CAM" />
		<property name="enabledBasicStats" value="Total" />
		<property name="oneTimeSeriesCollectionPerLine" value="false" />
	</bean>

	<bean id="roistats2" class="gda.device.detector.nxdetector.plugin.areadetector.ADRoiStatsPairFactory">
		<property name="pluginName" value="roistats2" />
		<property name="baseRoiPVName" value="BL08I-EA-DET-01:ROI2:" />
		<property name="baseStatsPVName" value="BL08I-EA-DET-01:STAT2:" />
		<property name="roiInputNdArrayPort" value="DET1.CAM" />
		<property name="enabledBasicStats" value="Total" />
		<property name="oneTimeSeriesCollectionPerLine" value="false" />
	</bean>

	<bean id="roistats3" class="gda.device.detector.nxdetector.plugin.areadetector.ADRoiStatsPairFactory">
		<property name="pluginName" value="roistats3" />
		<property name="baseRoiPVName" value="BL08I-EA-DET-01:ROI3:" />
		<property name="baseStatsPVName" value="BL08I-EA-DET-01:STAT3:" />
		<property name="roiInputNdArrayPort" value="DET1.CAM" />
		<property name="enabledBasicStats" value="Total" />
		<property name="oneTimeSeriesCollectionPerLine" value="false" />
	</bean>

	<bean id="roistats4" class="gda.device.detector.nxdetector.plugin.areadetector.ADRoiStatsPairFactory">
		<property name="pluginName" value="roistats4" />
		<property name="baseRoiPVName" value="BL08I-EA-DET-01:ROI4:" />
		<property name="baseStatsPVName" value="BL08I-EA-DET-01:STAT4:" />
		<property name="roiInputNdArrayPort" value="DET1.CAM" />
		<property name="enabledBasicStats" value="Total" />
		<property name="oneTimeSeriesCollectionPerLine" value="false" />
	</bean>

	<bean id="roistats5" class="gda.device.detector.nxdetector.plugin.areadetector.ADRoiStatsPairFactory">
		<property name="pluginName" value="roistats5" />
		<property name="baseRoiPVName" value="BL08I-EA-DET-01:ROI5:" />
		<property name="baseStatsPVName" value="BL08I-EA-DET-01:STAT5:" />
		<property name="roiInputNdArrayPort" value="DET1.CAM" />
		<property name="enabledBasicStats" value="Total" />
		<property name="oneTimeSeriesCollectionPerLine" value="false" />
	</bean>
</beans>