<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<!-- Malcolm sample scan -->
	<bean id="malcolmModel01" class="org.eclipse.scanning.api.device.models.MalcolmModel">
		<property name="name" value="I08-SCAN01" />
		<property name="exposureTime" value="0.01" />
	</bean>

	<bean id="malcolmInfo01" class="org.eclipse.scanning.api.event.scan.DeviceInformation">
		<property name="id" value="org.eclipse.scanning.example.malcolm.malcolmDevice01" />
		<property name="label" value="Malcolm sample scan" />
		<property name="description" value="X/Y sample scan using Malcolm" />
		<!-- <property name="icon" value=""/> TODO: we need an icon for malcolm -->
	</bean>

	<bean id="malcolmDevice01" class="org.eclipse.scanning.malcolm.core.MalcolmDevice" init-method="register">
		<property name="name" value="I08-SCAN01" />
		<property name="model" ref="malcolmModel01" />
		<property name="deviceInformation" ref="malcolmInfo01" />
		<!-- Whether this is the default device to use in a scan -->
		<property name="activated" value="false" />
	</bean>

	<!-- Malcolm focus scan -->
	<bean id="malcolmModel02" class="org.eclipse.scanning.api.device.models.MalcolmModel">
		<property name="name" value="I08-SCAN02" />
		<property name="exposureTime" value="0.02" />
	</bean>

	<bean id="malcolmInfo02" class="org.eclipse.scanning.api.event.scan.DeviceInformation">
		<property name="id" value="org.eclipse.scanning.example.malcolm.malcolmDevice02" />
		<property name="label" value="Malcolm focus scan" />
		<property name="description" value="Butterfly scan to find focus point, changing zone plate" />
		<property name="icon" value=""/> <!-- TODO: we need an icon for malcolm -->
	</bean>

	<bean id="malcolmDevice02" class="org.eclipse.scanning.malcolm.core.MalcolmDevice" init-method="register">
		<property name="name" value="I08-SCAN02" />
		<property name="model" ref="malcolmModel02" />
		<property name="deviceInformation" ref="malcolmInfo02" />
		<!-- Whether this is the default device to use in a scan -->
		<property name="activated" value="false" />
	</bean>

</beans>
