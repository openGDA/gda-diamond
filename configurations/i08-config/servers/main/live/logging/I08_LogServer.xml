<?xml version="1.0" encoding="UTF-8"?>
<configuration>
	<!--  the include statement in the following java.properties file is not read so you need to reference both -->
	<property file="${gda.config}/properties/${gda.mode}/java.properties" />
	<property file="${gda.config}/properties/java.properties" />
	<turboFilter class="ch.qos.logback.classic.turbo.MarkerFilter">
        <Name>Finest</Name>
        <Marker>FINEST</Marker>
        <OnMatch>DENY</OnMatch>
    </turboFilter>
    <!-- display message in Logger Server's console -->
    
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <layout class="ch.qos.logback.classic.PatternLayout">
            <Pattern>%date %-5level [%t] [%logger] - %message %n %ex</Pattern>
        </layout>
    </appender>
    <!-- Socket for forwarding log message to LogPanel in GDA Client or other viewers -->
   <appender name="WS001" class="ch.qos.logback.classic.net.SocketAppender">
        <RemoteHost>i08-ws001.diamond.ac.uk</RemoteHost>
        <Port>6789</Port>
        <ReconnectionDelay>10000</ReconnectionDelay>
        <IncludeCallerData>true</IncludeCallerData>
    </appender>
	  <appender name="WS001_LogPanel" class="ch.qos.logback.classic.net.SocketAppender">
        <RemoteHost>i08-ws001.diamond.ac.uk</RemoteHost>
        <Port>6790</Port>
        <ReconnectionDelay>10000</ReconnectionDelay>
        <IncludeCallerData>true</IncludeCallerData>
    </appender>
    <appender name="WS002" class="ch.qos.logback.classic.net.SocketAppender">
        <RemoteHost>i08-ws002.diamond.ac.uk</RemoteHost>
        <Port>6789</Port>
        <ReconnectionDelay>10000</ReconnectionDelay>
        <IncludeCallerData>true</IncludeCallerData>
    </appender>
    <appender name="WS002_LogPanel" class="ch.qos.logback.classic.net.SocketAppender">
        <RemoteHost>i08-ws002.diamond.ac.uk</RemoteHost>
        <Port>6790</Port>
        <ReconnectionDelay>10000</ReconnectionDelay>
        <IncludeCallerData>true</IncludeCallerData>
    </appender>    
    <appender name="LogFile" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <File>${gda.logs.dir}/gda_server.log</File>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <FileNamePattern>${gda.logs.dir}/gda_server.%d{yyyy-MM-dd}.log.zip</FileNamePattern>
        </rollingPolicy>
        <layout class="ch.qos.logback.classic.PatternLayout">
            <pattern>%d %-5level [%logger] %ex - %m%n</pattern>
        </layout>
    </appender>
    <logger name="gda">
        <level value="INFO"/>
    </logger>
    
    <logger name="gda.device.monitor.corba.impl">
        <level value="INFO"/>
    </logger>
    
    <logger name="gda.device.corba.impl">
        <level value="INFO"/>
    </logger>
    <logger name="uk.ac.gda.exafs.iu.XasScanParametersUIEditor">
        <level value="ERROR"/>
    </logger>
    <logger name="gda.device.motor.EpicsMotor">
        <level value="WARN"/>
    </logger>
        <logger name="gda.scan.ScanDataPointPopulatorAndPublisher">
       <level value="DEBUG"/>
   </logger>
     <logger name="gda.scan.MultithreadedScanDataPointPipeline">
        <level value="DEBUG"/>
    </logger>
     <logger name="org.nexusformat.*">
        <level value="DEBUG"/>
    </logger>
    <root>
        <level value="ALL"/>
        <appender-ref ref="WS001"/>
        <appender-ref ref="WS001_LogPanel"/>
		<appender-ref ref="WS002"/>
        <appender-ref ref="WS002_LogPanel"/>        
        <!--<appender-ref ref="CONSOLE"/>-->
        <appender-ref ref="SOCKET"/>
        <!--<appender-ref ref="EMAIL"/>-->
        <appender-ref ref="LogFile"/>
    </root>
</configuration>
