<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">


<!-- Photodiode Detector -->

	<bean id="photoDiode1" class="gda.device.monitor.EpicsMonitor">
		<property name="pvName" value="BL08I-EA-PATCH-01:AI1"/>
		<property name="local" value="true"/>
		 <property name="poll" value="true" />
	</bean> 
	
<!-- Andor Camera Detector -->
	
	<bean id="andor_adbase_pvProvider"
		class="gda.device.detector.areadetector.v17.impl.SimplePVProvider">
		<property name="prefix" value="BL08I-EA-DET-01:CAM:" />
	</bean>
	
	<bean id="andor_adbase"  class="gda.device.detector.areadetector.v17.impl.ADBaseImpl">
		<property name="pvProvider" ref="andor_adbase_pvProvider" />
	</bean>

	
<!-- HDF5 file writers -->
	 <bean id="andor_ndfilehdf5_base" class="gda.spring.V17NDFileFactoryBean">
		<property name="prefix" value="BL08I-EA-DET-01:HDF5:" />
		<property name="resetToInitialValues" value="false" />
	</bean>

	<bean id="andor_ndfilehdf5" class="gda.spring.V17NDFileHDF5FactoryBean">
		<property name="ndFileImpl" ref="andor_ndfilehdf5_base" />
	</bean>

<!-- XIA Fluorescence Detector -->
	
	<bean id="xmap_hdf5filewriter"
		class="gda.device.detector.areadetector.v17.impl.NDFileHDF5Impl">
		<property name="basePVName" value="BL18B-EA-DET-02:HDF:" />
		<property name="file">
			<bean class="gda.device.detector.areadetector.v17.impl.NDFileImpl">
				<property name="basePVName" value="BL08I-EA-DET-02:HDF:" />
				<property name="initialAutoIncrement" value="0" />
				<property name="initialAutoSave" value="0" />
				<property name="initialWriteMode" value="0" />
				<property name="initialNumCapture" value="1" />
				<property name="initialFileName" value="helloworld" />
				<property name="initialFileTemplate" value="%s%s-%d.hdf" />
				<property name="pluginBase">
					<bean class="gda.device.detector.areadetector.v17.impl.NDPluginBaseImpl">
						<property name="basePVName" value="BL08I-EA-DET-02:HDF:" />
					</bean>
				</property>
			</bean>
		</property>
	</bean>

	<bean id="edxdcontroller" class="gda.device.detector.xmap.edxd.EDXDMappingController">
		<property name="epicsDeviceName" value="xmap_dxp" />
		<property name="elementOffset" value="1" />
		<property name="local" value="true" />
		<property name="numberOfElements" value="4" />
		<property name="hdf5" ref="xmap_hdf5filewriter" />
		<property name="aquisitionTimeOn" value="true" />
	</bean>

	<bean id="xmapcontroller" class="gda.device.detector.xmap.EpicsXmapController">
		<property name="edxdControllerName" value="edxdcontroller" />
		<property name="local" value="true" />
	</bean>	
		
</beans> 