<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">


<!-- SR08I-MO-SERVC-01:BLGAPMTR -->

<!-- Photodiode Detector -->

	<bean id="photoDiode1" class="gda.device.monitor.EpicsMonitor">
		<property name="pvName" value="BL08I-EA-PATCH-01:AI1"/>
		<property name="local" value="true"/>
		 <property name="poll" value="true" />
	</bean> 
	
<!-- Andor Camera Detector -->
	
	<bean id="andor_adbase_pvProvider"
		class="gda.device.detector.areadetector.v17.impl.SimplePVProvider">
		<property name="prefix" value="BL08I-EA-DET-01:CAM:" />
	</bean>
	
	<bean id="andor_adbase"  class="gda.device.detector.areadetector.v17.impl.ADBaseImpl">
		<property name="pvProvider" ref="andor_adbase_pvProvider" />
	</bean>

	<bean id="andor_ndfiletiff_pvProvider"
		class="gda.device.detector.areadetector.v17.impl.SimplePVProvider">
		<property name="prefix" value="BL08I-EA-DET-01:TIFF:" />
	</bean>

	<bean id="andor_ndfiletiff" class="gda.device.detector.areadetector.v17.impl.NDFileImpl">
		<property name="pvProvider" ref="andor_ndfiletiff_pvProvider" />
		<property name="pluginBase">
			<bean class="gda.device.detector.areadetector.v17.impl.NDPluginBaseImpl">
				<property name="pvProvider" ref="andor_ndfiletiff_pvProvider" />
			</bean>
		</property>
		<property name="resetToInitialValues" value="false"/>
	</bean>

	<bean id="andor_ndfilehdf5_base" class="gda.spring.V17NDFileFactoryBean">
		<property name="prefix" value="BL08I-EA-DET-01:HDF5:" />
		<property name="resetToInitialValues" value="false" />
	</bean>

	<bean id="andor_ndfilehdf5" class="gda.spring.V17NDFileHDF5FactoryBean">
		<property name="ndFileImpl" ref="andor_ndfilehdf5_base" />
	</bean>


	<!-- NXDetector collection strategies -->

	<bean id="andor_nxcollectionstrategy" class="gda.device.detector.addetector.triggering.SingleExposureStandard">
		<constructor-arg ref="andor_adbase" />
		<constructor-arg value="0" />
	</bean>


	<!-- NXDetector file writers -->
	
	<bean id="andor_hdf5filewriter_for_scans" class="gda.device.detector.addetector.filewriter.MultipleImagesPerHDF5FileWriter">
		<property name="ndFileHDF5" ref="andor_ndfilehdf5" />
		<property name="fileNameTemplate" value="andor"/>
		<property name="filePathTemplate" value="$datadir$"/>
		<property name="fileTemplate" value="%s%s-%d.hdf"/>
		<property name="fileNumberAtScanStart" value="-1"/>
		<property name="setFileNameAndNumber" value="true"/>
		<property name="rowChunks" value="64"/>
		<property name="colChunks" value="0"/>
		<property name="framesChunks" value="64"/>
		<property name="framesFlush" value="64"/>
		<property name="lazyOpen" value="true"/>
<!-- 		<property name="boundaryAlign" value="1048576"/>
 -->		<property name="blocking" value="false"/> <!-- must be false otherwise PCO Event Driver driver crashes if framesChunks is 64-->
	</bean>
	
	<bean id="andor_tifffilewriter_for_scans" class="gda.device.detector.nxdetector.plugin.areadetector.filewriter.SingleImagePerFileWriter">
		<constructor-arg value="andor" />
		<property name="ndFile" ref="andor_ndfiletiff" />
		<property name="writeErrorStatusSupported" value="false"/>
	</bean>

	<!-- <bean id="medipix_nxfilewriter_for_snaps"
		class="gda.device.detector.nxdetector.plugin.areadetector.filewriter.SingleImagePerFileWriterWithNumTracker">
		<constructor-arg value="medipix" />
		<property name="ndFile" ref="medipix_ndfiletif" />
		<property name="numTrackerExtension" value="medipix_snaps_numracker" />
		<property name="writeErrorStatusSupported" value="false"/>
	</bean> -->


	<!-- NXDetectors -->	

	<bean id="_andor" class="gda.device.detector.NXDetector">
		<property name="name" value="andor" />
		<property name="collectionStrategy" ref="andor_nxcollectionstrategy"/>
		<property name="additionalPluginList">
			<list>
				<ref bean="andor_hdf5filewriter_for_scans" />
				<!-- <ref bean="andor_tifffilewriter_for_scans" /> -->
			</list>
		</property>
	</bean>
	
	<bean id="_andor2" class="gda.device.detector.NXDetector">
		<property name="name" value="andor" />
		<property name="collectionStrategy" ref="andor_nxcollectionstrategy"/>
		<property name="additionalPluginList">
			<list>
				<!-- <ref bean="andor_hdf5filewriter_for_scans" /> -->
				<ref bean="andor_tifffilewriter_for_scans" />
			</list>
		</property>
	</bean>
	
	<!-- <bean id="_medipix_for_snaps" class="gda.device.detector.NXDetector">
		<property name="name" value="medipix" />
		<property name="collectionStrategy" ref="medipix_nxcollectionstrategy"/>
		<property name="additionalPluginList">
			<list>
				<ref bean="medipix_nxfilewriter_for_snaps" />
			</list>
		</property>
	</bean> -->
	
	
</beans> 