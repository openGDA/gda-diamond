<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

	<bean id="beam_monitors" class="gda.device.scannable.scannablegroup.ScannableGroup">
		<property name="groupMembers">
			<list>
				<ref bean="machineModeMonitor" />
				<ref bean="machineTopupMonitor" />
				<ref bean="machineTopupPeriod" />
				<ref bean="ringCurrentMonitor" />
				<ref bean="ringModeMonitor" />
			</list>
		</property>
	</bean>

</beans>