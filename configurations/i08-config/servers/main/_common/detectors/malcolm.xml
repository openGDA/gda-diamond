<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">


	<!-- Sample scan -->
	<bean id="malcolmInfoSample" class="org.eclipse.scanning.api.event.scan.DeviceInformation">
		<property name="label" value="Malcolm sample scan" />
		<property name="description" value="X/Y sample scan using Malcolm" />
		<!-- <property name="icon" value=""/> TODO: we need an icon for malcolm -->
	</bean>

	<!-- Focus scan -->
	<bean id="malcolmInfoFocus" class="org.eclipse.scanning.api.event.scan.DeviceInformation">
		<property name="label" value="Malcolm focus scan" />
		<property name="description" value="Butterfly scan to find focus point, changing zone plate" />
		<property name="icon" value=""/> <!-- TODO: we need an icon for malcolm -->
	</bean>

	<!-- Sample scan (Xmap) -->
	<bean id="malcolmInfoSampleXmap" class="org.eclipse.scanning.api.event.scan.DeviceInformation">
		<property name="label" value="Malcolm sample scan (Xmap)" />
		<property name="description" value="Malcolm sample scan with Xmap detector" />
		<property name="icon" value=""/> <!-- TODO: we need an icon for malcolm -->
	</bean>

	<!-- Sample scan (Andor) -->
	<bean id="malcolmInfoSampleAndor" class="org.eclipse.scanning.api.event.scan.DeviceInformation">
		<property name="label" value="Malcolm sample scan (Andor)" />
		<property name="description" value="Malcolm sample scan with Andor detector" />
		<property name="icon" value=""/> <!-- TODO: we need an icon for malcolm -->
	</bean>

	<!-- Sample scan (Andor/Xmap) -->
	<bean id="malcolmInfoSampleAndorXmap" class="org.eclipse.scanning.api.event.scan.DeviceInformation">
		<property name="label" value="Malcolm sample scan (Andor/Xmap)" />
		<property name="description" value="Malcolm sample scan with Andor and Xmap detectors" />
		<property name="icon" value=""/> <!-- TODO: we need an icon for malcolm -->
	</bean>

</beans>