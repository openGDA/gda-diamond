<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans.xsd">

	<description>
		The ScannableMotors representing an XY stage to be used for mapping scans
	</description>

	<bean id="SampleX" class="gda.device.scannable.ScannableMotor">
		<property name="motor" ref="SampleX_motor" />
	</bean>

	<bean id="SampleY" class="gda.device.scannable.ScannableMotor">
		<property name="motor" ref="SampleY_motor" />
	</bean>

	<bean id="SampleCoarseZ" class="gda.device.scannable.ScannableMotor">
		<property name="motor" ref="SampleCoarseZ_motor" />
	</bean>

	<bean id="sample" class="gda.device.scannable.scannablegroup.ScannableGroup">
		<property name="groupMembers">
			<list>
				<ref bean="SampleX" />
				<ref bean="SampleY" />
				<ref bean="SampleCoarseZ" />
			</list>
		</property>
	</bean>

</beans>
