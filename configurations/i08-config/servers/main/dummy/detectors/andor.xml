<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:util="http://www.springframework.org/schema/util"
	xmlns:corba="http://www.diamond.ac.uk/schema/gda/corba"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
           http://www.springframework.org/schema/util
           http://www.springframework.org/schema/util/spring-util-2.0.xsd
           http://www.diamond.ac.uk/schema/gda/corba
           http://www.diamond.ac.uk/schema/gda/corba/gda-corba-1.0.xsd">
	
<!-- Andor Camera Detector -->

	<bean id="andor_adbase_pvProvider"
		class="gda.device.detector.areadetector.v17.impl.SimplePVProvider">
		<property name="prefix" value="${WORKSTATION}-AD-SIM-01:CAM:" />
	</bean>

	<bean id="andor_adbase" class="gda.device.detector.areadetector.v17.impl.ADBaseImpl">
		<property name="pvProvider" ref="andor_adbase_pvProvider" />
		<property name="BinX" value="4" />
		<property name="BinY" value="4" />
	</bean>

	<bean id="andor_base_proc"
		class="gda.device.detector.areadetector.v17.impl.NDPluginBaseImpl">
		<property name="basePVName" value="${WORKSTATION}-AD-SIM-01:PROC:" />
	</bean>

	<bean id="andor_adproc" class="gda.device.detector.areadetector.v17.impl.NDProcessImpl">
		<property name="basePVName" value="${WORKSTATION}-AD-SIM-01:PROC:" />
		<property name="pluginBase" ref="andor_base_proc" />
	</bean>

<!-- HDF5 file writers -->
	<bean id="andor_ndfilehdf5_base" class="gda.spring.V17NDFileFactoryBean">
		<property name="prefix" value="${WORKSTATION}-AD-SIM-01:HDF5:" />
		<property name="resetToInitialValues" value="false" />
	</bean>

	<bean id="andor_ndfilehdf5" class="gda.spring.V17NDFileHDF5FactoryBean">
		<property name="ndFileImpl" ref="andor_ndfilehdf5_base" />
	</bean>

	<bean id="andor_ringcurrent" class="gda.device.detector.nxdetector.plugin.areadetector.ADNDAttributesPlugin">
		<property name="ndFile" ref="andor_ndfilehdf5" />
		<property name="nDAttributeNodeNameInHDF5File" value="RingCurrent" />
	</bean>

<!-- Define ROIs -->
	<bean id="roistats1"
		class="gda.device.detector.nxdetector.plugin.areadetector.ADRoiStatsPairFactory">
		<property name="pluginName" value="roistats1" />
		<property name="baseRoiPVName" value="${WORKSTATION}-AD-SIM-01:ROI1:" />
		<property name="baseStatsPVName" value="${WORKSTATION}-AD-SIM-01:STAT1:" />
		<property name="roiInputNdArrayPort" value="ADSIM.CAM" />
		<property name="enabledBasicStats" value="Total" />
		<property name="oneTimeSeriesCollectionPerLine" value="false" />
	</bean>

	<bean id="roistats2"
		class="gda.device.detector.nxdetector.plugin.areadetector.ADRoiStatsPairFactory">
		<property name="pluginName" value="roistats2" />
		<property name="baseRoiPVName" value="${WORKSTATION}-AD-SIM-01:ROI2:" />
		<property name="baseStatsPVName" value="${WORKSTATION}-AD-SIM-01:STAT2:" />
		<property name="roiInputNdArrayPort" value="ADSIM.CAM" />
		<property name="enabledBasicStats" value="Total" />
		<property name="oneTimeSeriesCollectionPerLine" value="false" />
	</bean>

	<bean id="roistats3"
		class="gda.device.detector.nxdetector.plugin.areadetector.ADRoiStatsPairFactory">
		<property name="pluginName" value="roistats3" />
		<property name="baseRoiPVName" value="${WORKSTATION}-AD-SIM-01:ROI3:" />
		<property name="baseStatsPVName" value="${WORKSTATION}-AD-SIM-01:STAT3:" />
		<property name="roiInputNdArrayPort" value="ADSIM.CAM" />
		<property name="enabledBasicStats" value="Total" />
		<property name="oneTimeSeriesCollectionPerLine" value="false" />
	</bean>

	<bean id="roistats4"
		class="gda.device.detector.nxdetector.plugin.areadetector.ADRoiStatsPairFactory">
		<property name="pluginName" value="roistats4" />
		<property name="baseRoiPVName" value="${WORKSTATION}-AD-SIM-01:ROI4:" />
		<property name="baseStatsPVName" value="${WORKSTATION}-AD-SIM-01:STAT4:" />
		<property name="roiInputNdArrayPort" value="ADSIM.CAM" />
		<property name="enabledBasicStats" value="Total" />
		<property name="oneTimeSeriesCollectionPerLine" value="false" />
	</bean>

	<bean id="roistats5"
		class="gda.device.detector.nxdetector.plugin.areadetector.ADRoiStatsPairFactory">
		<property name="pluginName" value="roistats5" />
		<property name="baseRoiPVName" value="${WORKSTATION}-AD-SIM-01:ROI5:" />
		<property name="baseStatsPVName" value="${WORKSTATION}-AD-SIM-01:STAT5:" />
		<property name="roiInputNdArrayPort" value="ADSIM.CAM" />
		<property name="enabledBasicStats" value="Total" />
		<property name="oneTimeSeriesCollectionPerLine" value="false" />
	</bean>

</beans>