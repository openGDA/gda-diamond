<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:util="http://www.springframework.org/schema/util"
	xmlns:corba="http://www.diamond.ac.uk/schema/gda/corba"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
           http://www.springframework.org/schema/util
           http://www.springframework.org/schema/util/spring-util-2.0.xsd
           http://www.diamond.ac.uk/schema/gda/corba
           http://www.diamond.ac.uk/schema/gda/corba/gda-corba-1.0.xsd">

	<!-- Andor driver information for metadata -->
	<bean id="andorAccumulatePeriod" class="gda.device.monitor.DummyEpicsMonitor">
		<property name="value">
			<bean class="java.lang.Double">
				<constructor-arg value="0.06155" />
			</bean>
		</property>
		<property name="outputFormat" value="%.6f" />
	</bean>

	<bean id="andorShutterMode" class="gda.device.monitor.DummyEpicsMonitor">
		<property name="value" value="Open"/>
	</bean>

	<bean id="andorExtShutterTrigger" class="gda.device.monitor.DummyEpicsMonitor">
		<property name="value" value="High To Open"/>
	</bean>

	<bean id="andorPreampGain" class="gda.device.monitor.DummyEpicsMonitor">
		<property name="value">
			<bean class="java.lang.Double">
				<constructor-arg value="1.0" />
			</bean>
		</property>
		<property name="outputFormat" value="%.2f" />
	</bean>

	<bean id="andorADCSpeed" class="gda.device.monitor.DummyEpicsMonitor">
		<property name="value">
			<bean class="java.lang.Double">
				<constructor-arg value="17.0" />
			</bean>
		</property>
		<property name="unit" value="MHz" />
		<property name="outputFormat" value="%.2f" />
	</bean>

	<bean id="andorVerticalShiftSpeed" class="gda.device.monitor.DummyEpicsMonitor">
		<property name="value">
			<bean class="java.lang.Double">
				<constructor-arg value="3.3" />
			</bean>
		</property>
		<property name="unit" value="uS" />
		<property name="outputFormat" value="%.2f" />
	</bean>

	<bean id="andorVerticalShiftAmplitude" class="gda.device.monitor.DummyEpicsMonitor">
		<property name="value" value="Normal"/>
	</bean>

	<bean id="andorEMCCDGain" class="gda.device.monitor.DummyEpicsMonitor">
		<property name="value">
			<bean class="java.lang.Double">
				<constructor-arg value="0" />
			</bean>
		</property>
	</bean>

	<bean id="andorCoolerTemperature" class="gda.device.monitor.DummyEpicsMonitor">
		<property name="value">
			<bean class="java.lang.Double">
				<constructor-arg value="25.0" />
			</bean>
		</property>
		<property name="unit" value="C" />
		<property name="outputFormat" value="%.3f" />
	</bean>

	<bean id="andorCoolerControl" class="gda.device.monitor.DummyEpicsMonitor">
		<property name="value" value="On"/>
	</bean>

	<bean id="andorBinningSizeX" class="gda.device.monitor.DummyEpicsMonitor">
		<property name="value">
			<bean class="java.lang.Double">
				<constructor-arg value="4.0" />
			</bean>
		</property>
		<property name="outputFormat" value="%.4f" />
	</bean>

	<bean id="andorBinningSizeY" class="gda.device.monitor.DummyEpicsMonitor">
		<property name="value">
			<bean class="java.lang.Double">
				<constructor-arg value="4.0" />
			</bean>
		</property>
		<property name="outputFormat" value="%.4f" />
	</bean>

	<!-- Andor Camera Detector -->

	<alias name="sim_adbase_pvProvider" alias="andor_adbase_pvProvider" />
	<alias name="sim_adproc" alias="andor_adproc" />
	<alias name="sim_hdf5" alias="andor_ndfilehdf5" />

	<alias name="sim_roistats1" alias="roistats1" />
	<alias name="sim_roistats2" alias="roistats2" />
	<alias name="sim_roistats3" alias="roistats3" />
	<alias name="sim_roistats4" alias="roistats4" />
	<alias name="sim_roistats5" alias="roistats5" />
	<alias name="sim_roistats6" alias="roistats6" />

	<bean id="andor_adbase" class="gda.device.detector.areadetector.v17.impl.ADBaseImpl">
		<property name="pvProvider" ref="andor_adbase_pvProvider" />
		<property name="BinX" value="4" />
		<property name="BinY" value="4" />
	</bean>

	<bean id="andor_ringcurrent" class="gda.device.detector.nxdetector.plugin.areadetector.ADNDAttributesPlugin">
		<property name="ndFile" ref="andor_ndfilehdf5" />
		<property name="nDAttributeNodeNameInHDF5File" value="RingCurrent" />
	</bean>

</beans>