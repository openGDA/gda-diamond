<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<!-- Dummy Malcolm Device 1 -->
	<bean id="dummyMalcolmModel1" class="org.eclipse.scanning.example.malcolm.DummyMalcolmModel">
		<property name="name" value="dummyMalcolm1"/>
		<property name="exposureTime" value="0.01"/>
		<property name="timeout" value="300"/> <!-- 5 minute timeout for testing -->
		<property name="axesToMove">
			<list>
				<value>T1X</value>
				<value>T1Y</value>
			</list>
		</property>
	</bean>
	
	<bean id="dummyMalcolmInfo1" class="org.eclipse.scanning.api.event.scan.DeviceInformation">
		<property name="id" value="org.eclipse.scanning.example.malcolm.dummyMalcolmDevice"/>
		<property name="label" value="Dummy Malcolm 1"/>
		<property name="description" value="A dummy Malcolm device for testing"/>
		<!--  <property name="icon" value=""/> TODO: we need an icon for malcolm-->
	</bean>
	
	<bean id="dummyMalcolmDevice1" class="org.eclipse.scanning.example.malcolm.DummyMalcolmDevice" init-method="register">
		<property name="name" value="dummyMalcolm1"/>
		<property name="model" ref="dummyMalcolmModel1"/>
		<property name="deviceInformation" ref="dummyMalcolmInfo1"/>
		<!-- Whether this is the default device to use in a scan. Possibly should be set to true if/when we remove the Mandelbrot detector-->
		<property name="activated" value="false"/>
		<property name="axesToMove">
			<array>
				<value>T1X</value>
				<value>T1Y</value>
			</array>
		</property>
	</bean>

	<bean id="dummyMalcolmModel2" class="org.eclipse.scanning.example.malcolm.DummyMalcolmModel">
		<property name="name" value="dummyMalcolm2"/>
		<property name="exposureTime" value="0.02"/>
		<property name="timeout" value="300"/> <!-- 5 minute timeout for testing -->
		<property name="axesToMove">
			<list>
				<value>T1X</value>
				<value>T1Y</value>
			</list>
		</property>
	</bean>

	<bean id="dummyMalcolmInfo2" class="org.eclipse.scanning.api.event.scan.DeviceInformation">
		<property name="id" value="org.eclipse.scanning.example.malcolm.dummyMalcolmDevice"/>
		<property name="label" value="Dummy Malcolm 2"/>
		<property name="description" value="A dummy Malcolm device for testing"/>
		<!--  <property name="icon" value=""/> TODO: we need an icon for malcolm-->
	</bean>
	
	<bean id="dummyMalcolmDevice2" class="org.eclipse.scanning.example.malcolm.DummyMalcolmDevice" init-method="register">
		<property name="name" value="dummyMalcolm2"/>
		<property name="model" ref="dummyMalcolmModel2"/>
		<property name="deviceInformation" ref="dummyMalcolmInfo2"/>
		<!-- Whether this is the default device to use in a scan. Possibly should be set to true if/when we remove the Mandelbrot detector-->
		<property name="activated" value="false"/>
		<property name="axesToMove">
			<array>
				<value>T1X</value>
				<value>T1Y</value>
			</array>
		</property>
	</bean>

</beans>

