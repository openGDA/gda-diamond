	<!--Scannable group containing IDgap and pgm_energy (monochromator) (both are connected, calibration file 
	will be in EPICs rather than in a GDA lookup table -->
	<bean id="id_energy" class="gda.device.scannable.scannablegroup.ScannableGroup">
		<property name="groupMembers">
			<list>
				<ref bean="idgap" />
				<ref bean="pgm_energy" />
			</list>
		</property>
	</bean>

