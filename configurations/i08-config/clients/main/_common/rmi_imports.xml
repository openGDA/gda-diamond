<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

	<!-- Motors -->
	<bean id="T1X" class="uk.ac.gda.remoting.client.GdaRmiProxyFactoryBean">
		<property name="serviceUrl" value="${gda.rmi.prefix}T1X" />
		<property name="serviceInterface" value="gda.device.ScannableMotionUnits" />
		<property name="refreshStubOnConnectFailure" value="true" />
	</bean>

	<bean id="T1Y" class="uk.ac.gda.remoting.client.GdaRmiProxyFactoryBean">
		<property name="serviceUrl" value="${gda.rmi.prefix}T1Y" />
		<property name="serviceInterface" value="gda.device.ScannableMotionUnits" />
		<property name="refreshStubOnConnectFailure" value="true" />
	</bean>

	<bean id="T1ZC" class="uk.ac.gda.remoting.client.GdaRmiProxyFactoryBean">
		<property name="serviceUrl" value="${gda.rmi.prefix}T1ZC" />
		<property name="serviceInterface" value="gda.device.ScannableMotionUnits" />
		<property name="refreshStubOnConnectFailure" value="true" />
	</bean>

	<!-- XMAP detector -->
	<bean id="xmap" class="uk.ac.gda.remoting.client.GdaRmiProxyFactoryBean">
		<property name="serviceUrl" value="${gda.rmi.prefix}xmap" />
		<property name="serviceInterface" value="uk.ac.gda.devices.detector.FluorescenceDetector" />
		<property name="refreshStubOnConnectFailure" value="true" />
	</bean>

</beans>
