<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans.xsd">


	<bean id="andorStart" class="uk.ac.gda.client.livecontrol.JythonCommandControl">
		<property name="jythonCommand" value="andor_addetector.adBase.setImageModeWait(gda.device.detector.areadetector.v17.ImageMode.CONTINUOUS); andor_addetector.collectData()" />
		<property name="buttonText" value="Start" />
		<property name="group" value="Andor" />
	</bean>

	<bean id="andorStop" class="uk.ac.gda.client.livecontrol.JythonCommandControl">
		<property name="jythonCommand" value="andor_addetector.stop()" />
		<property name="buttonText" value="Stop" />
		<property name="group" value="Andor" />
	</bean>

	<bean name="andorControlSet" class="uk.ac.gda.client.livecontrol.ControlSet">
		<property name="controls">
			<list>
				<ref bean="andorStart" />
				<ref bean="andorStop" />
			</list>
		</property>
	</bean>

</beans>