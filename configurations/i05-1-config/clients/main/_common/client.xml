<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:util="http://www.springframework.org/schema/util"
	xmlns:gda="http://www.diamond.ac.uk/schema/gda/gda" xmlns:tx="http://www.springframework.org/schema/tx"
	xmlns:aop="http://www.springframework.org/schema/aop" xmlns:corba="http://www.diamond.ac.uk/schema/gda/corba"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
        http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-2.5.xsd
        http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx-2.5.xsd
        http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-2.5.xsd
        http://www.diamond.ac.uk/schema/gda/gda http://www.diamond.ac.uk/schema/gda/gda/gda-gda-1.0.xsd
        http://www.diamond.ac.uk/schema/gda/corba http://www.diamond.ac.uk/schema/gda/corba/gda-corba-1.0.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

	<context:property-placeholder
		location="file:${gda.config}/properties/${gda.mode}/${gda.mode}_instance_java.properties,file:${gda.config}/properties/_common/common_instance_java.properties" />

	<bean class="gda.spring.FindableNameSetterPostProcessor" />

	<corba:import namespace="i05-1" names="plot_server" />

	<bean class="gda.rcp.util.OSGIServiceRegister">
		<property name="class" value="uk.ac.diamond.scisoft.analysis.PlotServer" />
		<property name="service" ref="plot_server" />
	</bean>

	<bean class="gda.factory.corba.util.AdapterFactory">
		<constructor-arg index="0" value="${gda.factory.factoryName}" />
		<constructor-arg index="1">
			<bean class="gda.spring.NetServiceFactoryBean" />
		</constructor-arg>
	</bean>

	<bean id="analyser" class="uk.ac.gda.remoting.client.GdaRmiProxyFactoryBean">
		<property name="serviceUrl" value="${gda.rmi.prefix}/analyser" />
		<property name="serviceInterface" value="uk.ac.gda.devices.vgscienta.FlexibleFrameDetector" />
		<property name="refreshStubOnConnectFailure" value="true" />
	</bean>
	
	<import resource="analyser_lens_mapping.xml"/>
	<bean id="AnalyserCapabilities"	class="uk.ac.gda.beamline.i05_1.analyser.I05_1AnalyserCapabilties">
		<description>
			This class is used to hold the specific capabilities of the analyser. it contains a map of
			lens modes and an array to map pixel position to angle for each.
		</description>
		
		<property name="lens2angles">
			<map>
				<entry key="Transmission" value-ref="transmissionArray"/>
				<entry key="A14_08" value-ref="a14_08Array"/>
				<entry key="A7_08" value-ref="a7_08Array"/>
				<entry key="A30_08" value-ref="a30_08Array"/>
				<entry key="DA30_01" value-ref="da30_01Array"/>
				<entry key="DA30_08" value-ref="da30_08Array"/>
				<entry key="DA14_01" value-ref="da14_01Array"/>
				<entry key="DA14_08" value-ref="da14_08Array"/>
				<entry key="DA7_08" value-ref="da7_08Array"/>
				<entry key="DA30Q_01" value-ref="da30q_01Array"/>
				<entry key="DA30Q_08" value-ref="da30q_08Array"/>
				<entry key="A14_01" value-ref="a14_01Array"/>
				<entry key="A30_01" value-ref="a30_01Array"/>
			</map>
		</property>
		<property name="energyStepPerPixel" value="0.086088032" />
		<property name="detectorEnergyWidthInPixels" value="1064"/>
	</bean>

	<gda:rbac />
</beans>