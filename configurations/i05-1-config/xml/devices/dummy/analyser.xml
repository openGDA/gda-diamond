<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:gda="http://www.diamond.ac.uk/schema/gda/gda"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans.xsd
	http://www.diamond.ac.uk/schema/gda/gda
	http://www.diamond.ac.uk/schema/gda/gda/gda-gda-1.1.xsd">

	<bean id="area" class="gda.device.detector.areadetector.v17.impl.ADBaseImpl">
		<property name="basePVName" value="BL05I-EA-DET-01:CAM:" />
	</bean>

	<bean id="array1" class="gda.device.detector.areadetector.v17.impl.NDArrayImpl">
		<property name="basePVName" value="BL05I-EA-DET-01:ARR1:" />
		<property name="pluginBase">
			<bean class="uk.ac.gda.devices.vgscienta.FakeNDPluginBaseForSwept">
				<property name="basePVName" value="BL05I-EA-DET-01:ARR2:" />
				<property name="analyser" ref="analyser" />
			</bean>
		</property>
	</bean>

	<bean id="array2" class="gda.device.detector.areadetector.v17.impl.NDArrayImpl">
		<property name="basePVName" value="BL05I-EA-DET-01:ARR2:" />
		<property name="pluginBase">
			<bean class="uk.ac.gda.devices.vgscienta.FakeNDPluginBaseForSwept">
				<property name="basePVName" value="BL05I-EA-DET-01:ARR2:" />
				<property name="analyser" ref="analyser" />
			</bean>
		</property>
	</bean>

	<bean id="mjpeg"
		class="gda.device.detector.areadetector.v17.impl.FfmpegStreamImpl">
		<property name="basePVName" value="BL05I-EA-DET-01:MPG:" />
		<property name="pluginBase">
			<bean class="gda.device.detector.areadetector.v17.impl.NDPluginBaseImpl">
				<property name="basePVName" value="BL05I-EA-DET-01:MPG:" />
			</bean>
		</property>
	</bean>

	<bean id="stats" class="gda.device.detector.areadetector.v17.impl.NDStatsImpl">
		<property name="basePVName" value="BL05I-EA-DET-01:STATS:" />
		<property name="pluginBase">
			<bean class="gda.device.detector.areadetector.v17.impl.NDPluginBaseImpl">
				<property name="basePVName" value="BL05I-EA-DET-01:STAT:" />
			</bean>
		</property>
	</bean>

	<bean id="proc" class="gda.device.detector.areadetector.v17.impl.NDProcessImpl">
		<property name="basePVName" value="BL05I-EA-DET-01:PROC:" />
		<property name="pluginBase">
			<bean class="gda.device.detector.areadetector.v17.impl.NDPluginBaseImpl">
				<property name="basePVName" value="BL05I-EA-DET-01:PROC:" />
			</bean>
		</property>
	</bean>

	<bean id="controller" class="uk.ac.gda.devices.vgscienta.VGScientaController">
		<property name="basePVName" value="BL05J-EA-DET-01:CAM:" />
	</bean>

	<bean id="analyser_roi_provider"
		class="gda.device.detector.nxdetector.roi.PlotServerROISelectionProvider">
		<property name="viewName" value="Detector Plot" />
		<property name="maximumActiveRois" value="1" />
	</bean>

	<bean id="analyser" class="uk.ac.gda.devices.vgscienta.VGScientaAnalyser">
		<property name="cpsRoiProvider" ref="analyser_roi_provider" />
		<property name="controller" ref="controller" />
		<property name="energyRange" ref="analyser_energy_range" />
		<property name="adBase" ref="area" />
		<property name="ndProc" ref="proc" />
		<property name="ndArray" ref="array2" />
		<property name="local" value="true" />
		<property name="fixedModeRegion">
			<list>
				<value>1</value>
				<value>1</value>
				<value>1064</value>
				<value>1000</value>
			</list>
		</property>
		<property name="sweptModeRegion">
			<list>
				<value>55</value>
				<value>166</value>
				<value>905</value>
				<value>690</value>
			</list>
		</property>
		<property name="energyStepPerPixel" value="0.0861" />
		<property name="entranceSlitInformationProvider" ref="scientaslit" />
	</bean>
	
	<gda:rmi-export
		service="analyser"
		serviceName="gda/analyser"
		serviceInterface="uk.ac.gda.devices.vgscienta.FlexibleFrameDetector" />
		
	<gda:rmi-export
		service="analyser"
		serviceName="gda/analyserRmi"
		serviceInterface="uk.ac.gda.devices.vgscienta.IVGScientaAnalyserRMI" />

	<bean id="raw_centre_energy" class="gda.device.controlpoint.EpicsControlPoint">
		<property name="pvNameGetPoint" value="BL05I-EA-DET-01:CAM:CENTRE_ENERGY_RBV" />
		<property name="pvNameSetPoint" value="BL05I-EA-DET-01:CAM:CENTRE_ENERGY" />
	</bean>

	<bean id="acquire_time" class="gda.device.controlpoint.EpicsControlPoint">
		<property name="pvNameGetPoint" value="BL05I-EA-DET-01:CAM:AcquireTime_RBV" />
		<property name="pvNameSetPoint" value="BL05I-EA-DET-01:CAM:STEP_TIME" />
	</bean>

	<bean id="AnalyserLive" class="uk.ac.gda.devices.vgscienta.AnalyserLiveDataDispatcher">
		<property name="analyser" ref="analyser" />
		<property name="plotName" value="Detector Plot" />
		<property name="arrayPV" value="BL05I-EA-DET-01:ARR1:ArrayData" />
		<property name="frameNumberPV" value="BL05I-EA-DET-01:ARR1:ArrayCounter_RBV" />
	</bean>

	<bean id="AnalyserSumLive" class="uk.ac.gda.devices.vgscienta.AnalyserLiveDataDispatcher">
		<property name="analyser" ref="analyser" />
		<property name="plotName" value="Detector Sum Plot" />
		<property name="arrayPV" value="BL05I-EA-DET-01:ARR2:ArrayData" />
		<property name="frameNumberPV" value="BL05I-EA-DET-01:ARR2:ArrayCounter_RBV" />
	</bean>

	<bean id="AnalyserSweptLive" class="uk.ac.gda.devices.vgscienta.AnalyserLiveDataDispatcher">
		<property name="analyser" ref="analyser" />
		<property name="plotName" value="Swept Plot" />
		<property name="arrayPV" value="BL05I-EA-DET-01:CAM:IMAGE" />
		<property name="frameNumberPV" value="BL05I-EA-DET-01:CAM:CURRENT_POINT_RBV" />
	</bean>

	<bean id="sweepupdater" class="uk.ac.gda.devices.vgscienta.SweepUpdater">
		<property name="currentSweepPV" value="BL05I-EA-DET-01:CAM:CURRENT_POINT_RBV" />
		<property name="maxSweepPV" value="BL05I-EA-DET-01:CAM:TOTAL_POINTS_ITERATION_RBV" />
		<property name="percentagePV" value="BL05I-EA-DET-01:CAM:PROGRESS_RBV" />
		<property name="local" value="false" />
	</bean>

	<bean id="psu_mode" class="gda.device.monitor.EpicsMonitor">
		<property name="pvName" value="BL05I-EA-DET-01:CAM:ELEMENT_SET" />
		<property name="outputFormat" value="%s" />
	</bean>

</beans>
