<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="analyser_mapping" class="uk.ac.gda.devices.vgscienta.VGScientaAnalyser">
		<property name="cpsRoiProvider" ref="analyser_roi_provider" />
		<property name="controller" ref="controller" />
		<property name="adBase" ref="area" />
		<property name="ndProc" ref="proc" />
		<property name="ndArray" ref="array" />
		<property name="ndFile" ref="analyser_ndfile" />
		<property name="local" value="true" />
		<property name="capabilities" ref="AnalyserCapabilities" />
		<property name="fixedModeRegion">
			<list>
				<value>1</value>
				<value>1</value>
				<value>1064</value>
				<value>1000</value>
			</list>
		</property>
		<property name="sweptModeRegion">
			<list>
				<value>55</value>
				<value>166</value>
				<value>905</value>
				<value>690</value>
			</list>
		</property>
		<property name="entranceSlitInformationProvider" ref="scientaslit" />
		<property name="fileWriter" ref="analyser_hdf5_writer"></property>
	</bean>

	<bean id="analyser_ndfile" class="gda.device.detector.areadetector.v17.impl.NDFileImpl">
		<property name="basePVName" value="BL05J-EA-DET-01:HDF5:" />
		<property name="pluginBase">
			<bean class="gda.device.detector.areadetector.v17.impl.NDPluginBaseImpl">
				<property name="basePVName" value="BL05J-EA-DET-01:HDF5:" />
				<property name="initialArrayPort" value="EASWMR.stat" />
			</bean>
		</property>
		<!-- These arguments are here to please Spring -->
		<property name="initialAutoSave" value="Not hooked up to anything!" />
		<property name="initialAutoIncrement" value="Not hooked up to anything!" />
		<property name="initialWriteMode" value="0" />
		<property name="initialNumCapture" value="1" />
		<property name="initialFileName" value="analyser" />
		<property name="initialFileTemplate" value="%s%s.hdf5" />
	</bean>

	<bean id="analyser_hdf5" class="gda.device.detector.areadetector.v17.impl.NDFileHDF5Impl">
		<property name="basePVName" value="BL05J-EA-DET-01:HDF5:" />
		<property name="file" ref="analyser_ndfile" />
	</bean>

	<!-- This seems a bit redundant in the new scanning but keeping it for now 
		to fit with the current ADDectector framework -->
	<bean id="analyser_hdf5_writer" class="gda.device.detector.addetector.filewriter.MultipleImagesPerHDF5FileWriter">
		<property name="ndFileHDF5" ref="analyser_hdf5" />
		<property name="fileTemplate" value="%s%s.hdf5" />
		<property name="filePathTemplate" value="$datadir$" />
		<property name="fileNameTemplate" value="" />
		<property name="fileNumberAtScanStart" value="-1" />
		<property name="setFileNameAndNumber" value="true" />
	</bean>
</beans>
