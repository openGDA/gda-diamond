<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans.xsd">

	<description>
	The MCP and camera placed behind the sample position for looking at the diffraction pattern produced by the zone plate
	</description>

	<bean id="mcp_total" class="gda.device.scannable.EpicsScannable">
		<property name="pvName" value="BL05J-DI-PHDGN-10:DCAM:STAT:Total_RBV" />
		<property name="useNameAsExtraName" value="true" />
		<property name="local" value="true" />
	</bean>

	<bean id="mcp_gain" class="gda.device.scannable.EpicsScannable">
		<property name="pvName" value="BL05J-DI-PHDGN-10:DCAM:CAM:Gain" />
		<property name="useNameAsInputName" value="true" />
		<property name="local" value="true" />
	</bean>

	<bean id="mcpCamBase" class="gda.spring.V17ADBaseFactoryBean">
		<property name="prefix" value="BL05J-DI-PHDGN-10:DCAM:CAM:" />
	</bean>

	<bean id="mcpRoiStats" class="gda.device.detector.nxdetector.plugin.areadetector.ADRoiStatsPairFactory">
		<property name="pluginName" value="roistats" />
		<property name="baseRoiPVName" value="BL05J-DI-PHDGN-10:DCAM:ROI:" />
		<property name="baseStatsPVName" value="BL05J-DI-PHDGN-10:DCAM:STAT:" />
		<property name="roiInputNdArrayPort" value="MCP.DCAM.CAM" />
		<property name="enabledBasicStats" value="Total" />
		<property name="oneTimeSeriesCollectionPerLine" value="false" />
		<property name="roiProvider" ref="mcp_roi" />
	</bean>

	<bean id="mcp_roi" class="gda.device.detector.nxdetector.roi.MutableRectangularIntegerROI">
		<property name="xstart" value="0" />
		<property name="ystart" value="0" />
		<property name="xsize" value="1292" />
		<property name="ysize" value="964" />
	</bean>

	<bean id="mcpHdf5Filewriter" parent="abstractHdf5FilewriternNochunking">
		<property name="ndFileHDF5">
			<bean class="gda.spring.V17NDFileHDF5FactoryBean">
				<property name="ndFileImpl">
					<bean class="gda.spring.V17NDFileFactoryBean">
						<property name="prefix" value="BL05J-DI-PHDGN-10:DCAM:HDF5:" />
						<property name="resetToInitialValues" value="false" />
					</bean>
				</property>
			</bean>
		</property>
	</bean>

	<bean id="mcpCollectionStrategy" class="gda.device.detector.addetector.collectionstrategy.SingleImageModeDecorator">
		<property name="restoreNumImagesAndImageMode" value="true" />
		<property name="decoratee">
			<bean class="gda.device.detector.addetector.collectionstrategy.InternalTriggerModeDecorator">
				<property name="restoreTriggerMode" value="true" />
				<property name="decoratee">
					<bean class="gda.device.detector.addetector.collectionstrategy.ConfigureAcquireTimeDecorator">
						<property name="restoreAcquireTime" value="false" />
						<property name="decoratee">
							<bean class="gda.device.detector.addetector.collectionstrategy.SoftwareStartStop">
								<property name="restoreAcquireState" value="true" />
								<property name="adBase" ref="mcpCamBase" />
								<property name="readoutTime" value="-1" />
							</bean>
						</property>
					</bean>
				</property>
			</bean>
		</property>
	</bean>

	<bean id="abstractHdf5FilewriternNochunking" class="gda.device.detector.addetector.filewriter.MultipleImagesPerHDF5FileWriter" abstract="true">
		<property name="filePathTemplate" value="$datadir$" />
		<property name="fileNameTemplate" value="i05-1-$scan$-mcp" />
		<property name="fileTemplate" value="%s%s.hdf5" />
		<property name="fileNumberAtScanStart" value="-1" />
		<property name="setFileNameAndNumber" value="true" />
		<property name="lazyOpen" value="true" />
		<property name="blocking" value="false" />
	</bean>

	<bean id="mcp" class="gda.device.detector.NXDetector">
		<property name="name" value="mcp" />
		<property name="collectionStrategy" ref="mcpCollectionStrategy" />
		<property name="additionalPluginList">
			<list>
				<ref bean="mcpRoiStats" />
				<ref bean="mcpHdf5Filewriter" />
			</list>
		</property>
	</bean>

</beans>