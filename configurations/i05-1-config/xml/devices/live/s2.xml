<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans  http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="s2_xcentre_motor" class="gda.device.motor.EpicsMotor">
		<property name="local" value="true" />
		<property name="pvName" value="BL05I-AL-SLITS-02:XCENTRE" />
	</bean>
	<bean id="s2_xcentre" class="gda.device.scannable.ScannableMotor">
		<property name="motor" ref="s2_xcentre_motor" />
		<property name="local" value="true" />
	</bean>

	<bean id="s2_xgap_motor" class="gda.device.motor.EpicsMotor">
		<property name="local" value="true" />
		<property name="pvName" value="BL05I-AL-SLITS-02:XSIZE" />
	</bean>
	<bean id="s2_xsize" class="gda.device.scannable.ScannableMotor">
		<property name="motor" ref="s2_xgap_motor" />
		<property name="local" value="false" />
	</bean>

	<bean id="s2_ycentre_motor" class="gda.device.motor.EpicsMotor">
		<property name="local" value="true" />
		<property name="pvName" value="BL05I-AL-SLITS-02:YCENTRE" />
	</bean>
	<bean id="s2_ycentre" class="gda.device.scannable.ScannableMotor">
		<property name="motor" ref="s2_ycentre_motor" />
		<property name="local" value="true" />
	</bean>

	<bean id="s2_ygap_motor" class="gda.device.motor.EpicsMotor">
		<property name="local" value="true" />
		<property name="pvName" value="BL05I-AL-SLITS-02:YSIZE" />
	</bean>
	<bean id="s2_ysize" class="gda.device.scannable.ScannableMotor">
		<property name="motor" ref="s2_ygap_motor" />
		<property name="local" value="false" />
	</bean>

	<bean id="s2_xring_motor" class="gda.device.motor.EpicsMotor">
		<property name="local" value="true" />
		<property name="pvName" value="BL05I-AL-SLITS-02:XRING" />
	</bean>
	<bean id="s2_xring" class="gda.device.scannable.ScannableMotor">
		<property name="motor" ref="s2_xring_motor" />
		<property name="local" value="true" />
	</bean>

	<bean id="s2_xhall_motor" class="gda.device.motor.EpicsMotor">
		<property name="local" value="true" />
		<property name="pvName" value="BL05I-AL-SLITS-02:XHALL" />
	</bean>
	<bean id="s2_xhall" class="gda.device.scannable.ScannableMotor">
		<property name="motor" ref="s2_xhall_motor" />
		<property name="local" value="true" />
	</bean>

	<bean id="s2_ytop_motor" class="gda.device.motor.EpicsMotor">
		<property name="local" value="true" />
		<property name="pvName" value="BL05I-AL-SLITS-02:YPLUS" />
	</bean>
	<bean id="s2_ytop" class="gda.device.scannable.ScannableMotor">
		<property name="motor" ref="s2_ytop_motor" />
		<property name="local" value="true" />
	</bean>

	<bean id="s2_ybottom_motor" class="gda.device.motor.EpicsMotor">
		<property name="local" value="true" />
		<property name="pvName" value="BL05I-AL-SLITS-02:YMINUS" />
	</bean>
	<bean id="s2_ybottom" class="gda.device.scannable.ScannableMotor">
		<property name="motor" ref="s2_ybottom_motor" />
		<property name="local" value="true" />
	</bean>

	<bean id="s2" class="gda.device.scannable.scannablegroup.ScannableGroup">
		<property name="groupMembers">
			<list>
				<ref bean="s2_xcentre" />
				<ref bean="s2_xsize" />
				<ref bean="s2_ycentre" />
				<ref bean="s2_ysize" />
				<ref bean="s2_xring" />
				<ref bean="s2_xhall" />
				<ref bean="s2_ytop" />
				<ref bean="s2_ybottom" />
			</list>
		</property>
		<property name="local" value="true" />
	</bean>

</beans>