<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:util="http://www.springframework.org/schema/util"
	xmlns:tx="http://www.springframework.org/schema/tx" xmlns:aop="http://www.springframework.org/schema/aop"
	xmlns:corba="http://www.diamond.ac.uk/schema/gda/corba"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
        http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-2.5.xsd
        http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx-2.5.xsd
        http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-2.5.xsd
        http://www.diamond.ac.uk/schema/gda/corba http://www.diamond.ac.uk/schema/gda/corba/gda-corba-1.0.xsd">

	<bean id="d9current" class="gda.device.currentamplifier.CalibratedAmplifier">
		<property name="scalingAndOffset" ref="d9gain" />
		<property name="useNameAsExtraName" value="true" />
		<property name="hasUnits" value="false" />
		<property name="pvName" value="BL05I-DI-PHDGN-08:DET:I" />
		<property name="local" value="true" />
	</bean>
	<bean id="d9average" class="gda.device.currentamplifier.CalibratedAmplifier">
		<property name="scalingAndOffset" ref="d9gain" />
		<property name="useNameAsExtraName" value="true" />
		<property name="hasUnits" value="false" />
		<property name="pvName" value="BL05I-DI-PHDGN-08:DET:IAV" />
		<property name="local" value="true" />
	</bean>
	<bean id="d9gain" class="gda.device.currentamplifier.GainWithScalingAndOffset">
		<property name="pvName" value="BL05I-DI-PHDGN-08:DET:GAIN" />
		<property name="gaintosando">
			<map> <!-- scaling: multiply by negated gain exponent to display pre-gain value (amps) given the post-gain value (volts) -->
				<entry key="0">
					<bean class="gda.device.currentamplifier.ScalingAndOffsetParameters">
						<property name="scaling" value="10e-4" />
					</bean>
				</entry>
				<entry key="1">
					<bean class="gda.device.currentamplifier.ScalingAndOffsetParameters">
						<property name="scaling" value="10e-5" />
					</bean>
				</entry>
				<entry key="2">
					<bean class="gda.device.currentamplifier.ScalingAndOffsetParameters">
						<property name="scaling" value="10e-6" />
					</bean>
				</entry>
				<entry key="3">
					<bean class="gda.device.currentamplifier.ScalingAndOffsetParameters">
						<property name="scaling" value="10e-7" />
					</bean>
				</entry>
				<entry key="4">
					<bean class="gda.device.currentamplifier.ScalingAndOffsetParameters">
						<property name="scaling" value="10e-8" />
					</bean>
				</entry>
				<entry key="5">
					<bean class="gda.device.currentamplifier.ScalingAndOffsetParameters">
						<property name="scaling" value="10e-9" />
					</bean>
				</entry>
				<entry key="6">
					<bean class="gda.device.currentamplifier.ScalingAndOffsetParameters">
						<property name="scaling" value="10e-10" />
					</bean>
				</entry>
				<entry key="7">
					<bean class="gda.device.currentamplifier.ScalingAndOffsetParameters">
						<property name="scaling" value="10e-11" />
					</bean>
				</entry>
				<entry key="8">
					<bean class="gda.device.currentamplifier.ScalingAndOffsetParameters">
						<property name="scaling" value="10e-12" />
					</bean>
				</entry>
				<entry key="9">
					<bean class="gda.device.currentamplifier.ScalingAndOffsetParameters">
						<property name="scaling" value="10e-13" />
					</bean>
				</entry>
			</map>
		</property>
	</bean>
</beans>
