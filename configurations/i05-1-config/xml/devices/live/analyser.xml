	<bean id="array1" class="gda.device.detector.areadetector.v17.impl.NDArrayImpl">
		<property name="basePVName" value="BL05J-EA-DET-01:ARR1:" />
		<property name="pluginBase">
			<bean class="uk.ac.gda.beamline.i05_1.analyser.FakeNDPluginBaseForSwept">
				<property name="basePVName" value="BL05J-EA-DET-01:ARR2:" />
				<property name="analyser" ref="analyser" />
			</bean>
		</property>
	</bean>
	<bean id="array2" class="gda.device.detector.areadetector.v17.impl.NDArrayImpl">
		<property name="basePVName" value="BL05J-EA-DET-01:ARR2:" />
		<property name="pluginBase">
			<bean class="uk.ac.gda.beamline.i05_1.analyser.FakeNDPluginBaseForSwept">
				<property name="basePVName" value="BL05J-EA-DET-01:ARR2:" />
				<property name="analyser" ref="analyser" />
			</bean>
		</property>
	</bean>

	<bean id="mjpeg"
		class="gda.device.detector.areadetector.v17.impl.FfmpegStreamImpl">
		<property name="basePVName" value="BL05J-EA-DET-01:MPG:" />
		<property name="pluginBase">
			<bean class="gda.device.detector.areadetector.v17.impl.NDPluginBaseImpl">
				<property name="basePVName" value="BL05J-EA-DET-01:MPG:" />
			</bean>
		</property>
	</bean>

	<bean id="stats" class="gda.device.detector.areadetector.v17.impl.NDStatsImpl">
		<property name="basePVName" value="BL05J-EA-DET-01:STATS:" />
		<property name="pluginBase">
			<bean class="gda.device.detector.areadetector.v17.impl.NDPluginBaseImpl">
				<property name="basePVName" value="BL05J-EA-DET-01:STAT:" />
			</bean>
		</property>
	</bean>

	<bean id="proc" class="gda.device.detector.areadetector.v17.impl.NDProcessImpl">
		<property name="basePVName" value="BL05J-EA-DET-01:PROC:" />
		<property name="pluginBase">
			<bean class="gda.device.detector.areadetector.v17.impl.NDPluginBaseImpl">
				<property name="basePVName" value="BL05J-EA-DET-01:PROC:" />
			</bean>
		</property>
	</bean>

	<bean id="controller" class="uk.ac.gda.devices.vgscienta.VGScientaController">
		<property name="basePVName" value="BL05J-EA-DET-01:CAM:" />
	</bean>

	<bean id="analyser_roi_provider"
		class="gda.device.detector.nxdetector.roi.PlotServerROISelectionProvider">
		<property name="viewName" value="Detector Plot" />
		<property name="maximumActiveRois" value="1" />
	</bean>

	<bean id="analyser" class="uk.ac.gda.devices.vgscienta.VGScientaAnalyser">
		<property name="cpsRoiProvider" ref="analyser_roi_provider" />
		<property name="controller" ref="controller" />
		<property name="adBase" ref="area" />
		<property name="ndProc" ref="proc" />
		<property name="ndArray" ref="array2" />
		<!-- <property name="ndStats" ref="stats" /> -->
		<!-- <property name="ndFile" ref="filebase" /> -->
		<property name="local" value="true" />
		<property name="capabilities" ref="AnalyserCapabilities" />
		<property name="fixedModeRegion">
			<list>
				<value>1</value>
				<value>1</value>
				<value>1064</value>
				<value>1000</value>
			</list>
		</property>
		<property name="sweptModeRegion">
			<list>
				<value>55</value>
				<value>166</value>
				<value>905</value>
				<value>690</value>
			</list>
		</property>
		<property name="entranceSlitInformationProvider" ref="scientaslit" />
		<property name="dataChunking">
			<list>
				<value>5</value>
				<value>1000</value>
				<value>50</value>
			</list>
		</property>
	</bean>

	<bean class="uk.ac.gda.remoting.server.GdaRmiServiceExporter">
		<property name="serviceName" value="gda/analyser" />
		<property name="service" ref="analyser" />
		<property name="serviceInterface" value="uk.ac.gda.devices.vgscienta.FlexibleFrameDetector" />
	</bean>

	<bean id="raw_centre_energy" class="gda.device.controlpoint.EpicsControlPoint">
		<property name="pvNameGetPoint" value="BL05J-EA-DET-01:CAM:CENTRE_ENERGY_RBV" />
		<property name="pvNameSetPoint" value="BL05J-EA-DET-01:CAM:CENTRE_ENERGY" />
	</bean>

	<bean id="acquire_time" class="gda.device.controlpoint.EpicsControlPoint">
		<property name="pvNameGetPoint" value="BL05J-EA-DET-01:CAM:AcquireTime_RBV" />
		<property name="pvNameSetPoint" value="BL05J-EA-DET-01:CAM:STEP_TIME" />
	</bean>

	<import resource="analyser_lens_mapping.xml"/>
	<bean id="AnalyserCapabilities"	class="uk.ac.gda.beamline.i05_1.analyser.I05_1AnalyserCapabilties">
		<description>
			This class is used to hold the specific capabilities of the analyser. it contains a map of
			lens modes and an array to map pixel position to angle for each.
		</description>
		
		<property name="lens2angles">
			<map>
				<entry key="Transmission" value-ref="transmissionArray"/>
				<entry key="A14_08" value-ref="a14_08Array"/>
				<entry key="A7_08" value-ref="a7_08Array"/>
				<entry key="A30_08" value-ref="a30_08Array"/>
				<entry key="DA30_01" value-ref="da30_01Array"/>
				<entry key="DA30_08" value-ref="da30_08Array"/>
				<entry key="DA14_01" value-ref="da14_01Array"/>
				<entry key="DA14_08" value-ref="da14_08Array"/>
				<entry key="DA7_08" value-ref="da7_08Array"/>
				<entry key="DA30Q_01" value-ref="da30q_01Array"/>
				<entry key="DA30Q_08" value-ref="da30q_08Array"/>
				<entry key="A14_01" value-ref="a14_01Array"/>
				<entry key="A30_01" value-ref="a30_01Array"/>
			</map>
		</property>
		<property name="energyStepPerPixel" value="0.086088032" />
		<property name="detectorEnergyWidthInPixels" value="1064"/>
	</bean>

	<bean id="AnalyserLive" class="uk.ac.gda.devices.vgscienta.AnalyserLiveDataDispatcher">
		<property name="analyser" ref="analyser" />
		<property name="plotName" value="Detector Plot" />
		<property name="arrayPV" value="BL05J-EA-DET-01:ARR1:ArrayData" />
		<property name="frameNumberPV" value="BL05J-EA-DET-01:ARR1:ArrayCounter_RBV" />
	</bean>

	<bean id="AnalyserSumLive" class="uk.ac.gda.devices.vgscienta.AnalyserLiveDataDispatcher">
		<property name="analyser" ref="analyser" />
		<property name="plotName" value="Detector Sum Plot" />
		<property name="arrayPV" value="BL05J-EA-DET-01:ARR2:ArrayData" />
		<property name="frameNumberPV" value="BL05J-EA-DET-01:ARR2:ArrayCounter_RBV" />
	</bean>

	<bean id="AnalyserSweptLive" class="uk.ac.gda.devices.vgscienta.AnalyserLiveDataDispatcher">
		<property name="analyser" ref="analyser" />
		<property name="plotName" value="Swept Plot" />
		<property name="arrayPV" value="BL05J-EA-DET-01:CAM:IMAGE" />
		<property name="frameNumberPV" value="BL05J-EA-DET-01:CAM:CURRENT_POINT_RBV" />
	</bean>

	<bean id="sweepupdater" class="uk.ac.gda.devices.vgscienta.SweepUpdater">
		<property name="currentSweepPV" value="BL05J-EA-DET-01:CAM:CURRENT_POINT_RBV" />
		<property name="maxSweepPV" value="BL05J-EA-DET-01:CAM:TOTAL_POINTS_ITERATION_RBV" />
		<property name="local" value="false" />
	</bean>

	<bean id="psu_mode" class="gda.device.monitor.EpicsMonitor">
		<property name="pvName" value="BL05J-EA-DET-01:CAM:ELEMENT_SET"></property>
	</bean>

</beans>
