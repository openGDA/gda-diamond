<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:gda="http://www.diamond.ac.uk/schema/gda/gda"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans.xsd
	http://www.diamond.ac.uk/schema/gda/gda
	http://www.diamond.ac.uk/schema/gda/gda/gda-gda-1.1.xsd">

	<bean id="commandQueue" class="gda.commandqueue.CommandQueue">
	</bean>
	<bean id="commandQueueProcessor" class="gda.commandqueue.FindableProcessorQueue">
		<property name="queue" ref="commandQueue" />
		<property name="startImmediately" value="true"/>
		<!-- logFilePath property to be removed once commit fd889d3c5fe2683a2eca7cf0c92271e5783b6d8c is merged into master -->
		<property name="logFilePath" value="${gda.logs.dir}/commandQueueProcessor.log"/>
	</bean>

	<gda:rmi-export
		service="commandQueueProcessor"
		serviceName="gda/commandQueueProcessor"
		serviceInterface="gda.commandqueue.IFindableQueueProcessor" />

</beans>
