<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<description>
		EpicsMotors to control the mapping test rig stage
	</description>

	<bean id="stage_x_motor"
			class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL45P-MO-STAGE-01:X" />
	</bean>

	<bean id="stage_y_motor"
			class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL45P-MO-STAGE-01:Y" />
	</bean>

	<bean id="stage_z_motor"
			class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL45P-MO-STAGE-01:Z" />
	</bean>
	
	<bean id="stage_theta_motor"
			class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL45P-MO-SAMP-01:THETA" />
	</bean>

<!-- Other PVs to be added to the config:
BL45P-MO-MAP-01:ZEBRA
 -->

</beans>
