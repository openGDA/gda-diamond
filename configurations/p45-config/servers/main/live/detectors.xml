<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans-2.5.xsd" >

	<description>
		NOTE: this has not been tested at all with the real PVs - quite possibly the configuration and PV names are wrong...
	</description>

	<bean id="det_base" class="gda.device.detector.areadetector.v17.impl.ADBaseImpl">
		<property name="basePVName" value="LAB-MO-MAP-01:DET:" />
	</bean>

	<bean id="det_collection_strategy"
		class="gda.device.detector.addetector.triggering.SingleExposureStandard">
		<constructor-arg ref="det_base" /> <!-- ADBase -->
		<constructor-arg value="0.01" /> <!-- Readout time -->
	</bean>

	<bean id="det_NDFileHDF5" class="gda.spring.V17NDFileHDF5FactoryBean">
		<property name="ndFileImpl">
			<bean class="gda.spring.V17NDFileFactoryBean">
				<property name="prefix" value="LAB-MO-MAP-01:HDF5:" />
				<property name="resetToInitialValues" value="false" />
			</bean>
		</property>
	</bean>

	<bean id="det_MultipleImagesPerHDF5FileWriter"
		class="gda.device.detector.nxdetector.plugin.areadetector.filewriter.MultipleImagesPerHDF5FileWriter">
		<property name="ndFileHDF5" ref="det_NDFileHDF5" />
		<property name="fileTemplate" value="%s%s%05d.hdf5" />
		<property name="filePathTemplate" value="$datadir$" />
		<property name="fileNameTemplate" value="$scan$-det-" />
		<property name="fileNumberAtScanStart" value="-1" />
		<property name="setChunking" value="false" />
		<property name="lazyOpen" value="true" />
		<property name="storeAttr" value="true" />
	</bean>

	<bean id="det" class="gda.device.detector.NXDetector">
		<property name="name" value="det" />
		<property name="collectionStrategy" ref="det_collection_strategy" />
		<property name="additionalPluginList">
			<list>
				<ref bean="det_MultipleImagesPerHDF5FileWriter" />
			</list>
		</property>
	</bean>

</beans>
