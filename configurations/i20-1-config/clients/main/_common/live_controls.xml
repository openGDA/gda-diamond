<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans.xsd">


 	<bean id="turbo_slit_x_control" class="uk.ac.gda.client.livecontrol.ScannablePositionerControl">
		<property name="displayName" value="Turbo slit X Motor" />
		<property name="scannableName" value="turbo_xas_slit" />
		<property name="increment" value="1" />
		<property name="incrementTextWidth" value="60" />
	</bean>
	
 	<bean id="as_slit_x_control" class="uk.ac.gda.client.livecontrol.ScannablePositionerControl">
		<property name="displayName" value="Alignment Stage Slit X motor" />
		<property name="scannableName" value="as_hoffset" />
<!-- 		<property name="increment" value="1" /> -->
		<property name="incrementTextWidth" value="60" />
	</bean>
	
	<bean name="liveControlSet" class="uk.ac.gda.client.livecontrol.ControlSet">
		<property name="controls">
			<list>
				<ref bean="turbo_slit_x_control" />
				<ref bean="as_slit_x_control" />
			</list>
		</property>
	</bean>

</beans>