<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans   
	http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

	<bean id="alignment_stage" class="gda.device.scannable.AlignmentStageScannable">
		<constructor-arg ref="sample_x" />
		<constructor-arg ref="sample_y" />
		<constructor-arg ref="fast_shutter_x" />
		<constructor-arg ref="fast_shutter_y" />
	</bean>
	
	<bean class="uk.ac.gda.remoting.server.GdaRmiServiceExporter">
		<property name="serviceName" value="gda/alignment_stage" />
		<property name="service" ref="alignment_stage" />
		<property name="serviceInterface" value="gda.device.scannable.AlignmentStage" />
	</bean>  

</beans>