<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans   http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">


	<!-- me1 -->


	<bean id="me1y" class="gda.device.scannable.ScannableMotor">
		<property name="motor" ref="me1y_motor" />
	</bean>
	<bean id="me1pitch" class="gda.device.scannable.ScannableMotor">
		<property name="motor" ref="me1pitch_motor" />
	</bean>
	<bean id="me1yaw" class="gda.device.scannable.ScannableMotor">
		<property name="motor" ref="me1yaw_motor" />
	</bean>
	<bean id="me1curvature" class="gda.device.scannable.ScannableMotor">
		<property name="motor" ref="me1curvature_motor" />
	</bean>

	<bean id="me1" class="gda.device.scannable.scannablegroup.ScannableGroup">
		<property name="groupMembers">
			<list>
				<ref bean="me1y" />
				<ref bean="me1pitch" />
				<ref bean="me1yaw" />
				<ref bean="me1curvature" />
				<ref bean="me1_stripe" />
			</list>
		</property>
	</bean>


	<!-- me2 -->

	<bean id="me2y" class="gda.device.scannable.ScannableMotor">
		<property name="motor" ref="me2y_motor" />
	</bean>
	<bean id="me2pitch" class="gda.device.scannable.ScannableMotor">
		<property name="motor" ref="me2pitch_motor" />
	</bean>
	<bean id="me2roll" class="gda.device.scannable.ScannableMotor">
		<property name="motor" ref="me2roll_motor" />
	</bean>

	<bean id="me2" class="gda.device.scannable.scannablegroup.ScannableGroup">
		<property name="groupMembers">
			<list>
				<ref bean="me2y" />
				<ref bean="me2pitch" />
				<ref bean="me2roll" />
				<ref bean="me2_stripe" />
			</list>
		</property>
	</bean>

	<!-- polychromator -->

	<bean id="polyx" class="gda.device.scannable.ScannableMotor">
		<property name="motor" ref="poly_xbase_motor" />
	</bean>
	<bean id="polyy" class="gda.device.scannable.ScannableMotor">
		<property name="motor" ref="poly_ybase_motor" />
	</bean>
	<bean id="polytheta" class="gda.device.scannable.ScannableMotor">
		<property name="motor" ref="poly_thetabase_motor" />
	</bean>
	<bean id="polyyfine" class="gda.device.scannable.ScannableMotor">
		<property name="motor" ref="poly_yfine_motor" />
	</bean>
	<bean id="polyyaw" class="gda.device.scannable.ScannableMotor">
		<property name="motor" ref="poly_yawfine_motor" />
	</bean>
	<bean id="polyroll" class="gda.device.scannable.ScannableMotor">
		<property name="motor" ref="poly_rollfine_motor" />
	</bean>
	<bean id="polycurve" class="gda.device.scannable.ScannableMotor">
		<property name="motor" ref="poly_curvature_motor" />
	</bean>
	<bean id="polyyellip" class="gda.device.scannable.ScannableMotor">
		<property name="motor" ref="poly_ellip_motor" />
	</bean>
	<bean id="polytwist" class="gda.device.scannable.ScannableMotor">
		<property name="motor" ref="poly_twist_motor" />
	</bean>

	<bean id="polychromator" class="gda.device.scannable.scannablegroup.ScannableGroup">
		<property name="groupMembers">
			<list>
				<ref bean="polyx" />
				<ref bean="polyy" />
				<ref bean="polytheta" />
				<ref bean="polyyfine" />
				<ref bean="polyyaw" />
				<ref bean="polyroll" />
				<ref bean="polycurve" />
				<ref bean="polyyellip" />
				<ref bean="polytwist" />
			</list>
		</property>
	</bean>

</beans>