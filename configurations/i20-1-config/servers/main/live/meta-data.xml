<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">


	<bean id="GDAMetadata" class="gda.data.metadata.GdaMetadata">

		<property name="metadataEntries">
			<list>

				<bean name="instrument" class="gda.data.metadata.PropertyMetadataEntry">
					<property name="propertyName" value="gda.instrument" />
				</bean>

				<bean name="facility" class="gda.data.metadata.PropertyMetadataEntry">
					<property name="propertyName" value="gda.facility" />
				</bean>

				<bean name="facilityType" class="gda.data.metadata.PropertyMetadataEntry">
					<property name="propertyName" value="gda.facility.type" />
				</bean>

				<bean name="probe" class="gda.data.metadata.PropertyMetadataEntry">
					<property name="propertyName" value="gda.facility.probe" />
				</bean>
				
				<bean name="subdirectory" class="gda.data.metadata.SubdirectoryMetadataEntry">
					<property name="defaultSubdirectory" value="" />
				</bean>

				<bean name="beamCurrent" class="gda.data.metadata.PropertyMetadataEntry">
					<property name="propertyName" value="SR-DI-DCCT-01:SIGNAL" />
				</bean>

				<bean name="facilityMode" class="gda.data.metadata.PropertyMetadataEntry">
					<property name="propertyName" value="CS-CS-MSTAT-01:MODE" />
				</bean>

				<bean name="fillMode" class="gda.data.metadata.PropertyMetadataEntry">
					<property name="propertyName" value="LI-TI-MTGEN-01:MODE" />
				</bean>

				<bean name="userid" class="gda.data.metadata.PropertyMetadataEntry">
					<property name="propertyName" value="user.name" />
				</bean>

				<bean name="visitid" class="gda.data.metadata.StoredMetadataEntry">
					<property name="name" value="visitid" />
				</bean>

				<bean name="subdirectory" class="gda.data.metadata.PropertyMetadataEntry">
					<property name="propertyName" value="gda.defVisit" />
				</bean>
			</list>
		</property>
	</bean>

	<bean id="metashop" class="gda.data.metadata.NXMetaDataProvider">
		<property name="name" value="metashop" />
	</bean>

</beans>