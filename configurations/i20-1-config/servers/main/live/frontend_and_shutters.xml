<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

	<bean id="apertureX_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="FE20I-AL-APTR-02:X" />
	</bean>

	<bean id="apertureX" class="gda.device.scannable.ScannableMotor">
		<property name="name" value="apertureX" />
		<property name="motor" ref="apertureX_motor" />
	</bean>

	<bean id="apertureY_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="FE20I-AL-APTR-02:Y" />
	</bean>

	<bean id="apertureY" class="gda.device.scannable.ScannableMotor">
		<property name="name" value="apertureY" />
		<property name="motor" ref="apertureY_motor" />
	</bean>

	<bean id="optics_shutter" class="gda.device.enumpositioner.EpicsValveCallback">
		<property name="epicsRecordName" value="FE20I-PS-SHTR-02" />
		<property name="outputFormat">
			<list>
				<value>%s</value>
			</list>
		</property>
		<property name="inputNames">
			<list>
				<value>shutter1</value>
			</list>
		</property>
	</bean>
	<bean id="shutter1" class="gda.device.enumpositioner.EpicsValveCallback">
		<property name="epicsRecordName" value="BL20J-PS-SHTR-01" />
		<property name="outputFormat">
			<list>
				<value>%s</value>
			</list>
		</property>
		<property name="inputNames">
			<list>
				<value>shutter1</value>
			</list>
		</property>
	</bean>
	<bean id="shutter2" class="gda.device.enumpositioner.EpicsValveCallback">
		<property name="epicsRecordName" value="BL20J-PS-SHTR-02" />
		<property name="outputFormat">
			<list>
				<value>%s</value>
			</list>
		</property>
		<property name="inputNames">
			<list>
				<value>shutter1</value>
			</list>
		</property>
	</bean>

</beans>