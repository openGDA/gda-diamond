<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

	<bean id="test_motor" class="gda.device.motor.DummyMotor" />
	<bean id="test" class="gda.device.scannable.ScannableMotor">
		<property name="name" value="test" />
		<property name="motor" ref="test_motor" />
	</bean>

	<bean id="topup" class="gda.device.monitor.EpicsMonitor">
		<property name="pvName" value="SR-CS-FILL-01:COUNTDOWN" />
		<property name="local" value="false" />
	</bean>

	<bean id="shutterChecker" class="gda.device.scannable.ShutterChecker">
		<property name="shutter" ref="shutter2" />
		<property name="pssPVName" value="BL20J-PS-SHTR-02:CON"/>
	</bean>
	
	
	<import resource="file:${gda.config}/servers/main/scannables-common.xml" />

</beans>
