<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

	<bean id="test_motor" class="gda.device.motor.DummyMotor" />
	<bean id="test" class="gda.device.scannable.ScannableMotor">
		<property name="name" value="test" />
		<property name="motor" ref="test_motor" />
	</bean>


	<bean id="topup" class="gda.device.monitor.EpicsMonitor">
		<property name="pvName" value="SR-CS-FILL-01:COUNTDOWN" />
		<property name="local" value="false" />
	</bean>
	
	<bean id="absorber" class="gda.device.monitor.EpicsMonitor">
		<property name="pvName" value="FE20I-RS-ABSB-01:STA" />
		<property name="local" value="false" />
	</bean>

	<bean id="topupChecker" class="gda.device.scannable.TopupScannable">
		<property name="scannableToBeMonitored" ref="topup" />
		<property name="tolerance" value="10" />
		<property name="timeout" value="300" />
		<property name="waittime" value="10" />
		<property name="level" value="0" />
		<property name="pauseBeforePoint" value="true" />
		<property name="local" value="true" />
	</bean>

	<bean id="absorberChecker" class="gda.device.scannable.CheckingScannable">
		<property name="scannable" ref="absorber" />
		<property name="value" value="Open" />
		<property name="level" value="0" />
		<property name="pauseBeforePoint" value="true" />
		<property name="local" value="true" />
	</bean>

	<bean id="shutterChecker" class="gda.device.scannable.ShutterChecker">
		<property name="shutter" ref="shutter2" />
		<property name="pssPVName" value="BL20J-PS-SHTR-02:CON"/>
	</bean>
	
</beans>
