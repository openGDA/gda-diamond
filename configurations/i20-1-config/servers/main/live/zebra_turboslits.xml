<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans   http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

<!--  Setup for Turbo slits driven by Zebra. imh  20/4/2016 -->

<!-- Turbo slit x motor   -->
	<bean id="turbo_slit_x_motor" class="gda.device.motor.EpicsMotor">
		<property name="name" value="turbo_slit_x_motor" />
		<property name="pvName" value="BL20J-OP-PCHRO-01:TS:XFINE" />
	</bean>
	
<!-- 	shutter using turbo slit. imh 21/4/2017-->
	<bean id="turbo_slit_shutter" class="gda.device.enumpositioner.EpicsSimplePositioner">
		<property name="name" value="turbo_slit_shutter" />
		<property name="pvName" value="BL20J-OP-PCHRO-01:TS:XFINE" />
	</bean>
	
	<bean id="turbo_slit_x" class="gda.device.scannable.ScannableMotor">
		<property name="name" value="turbo_slit_x" />
		<property name="motor" ref="turbo_slit_x_motor" />
		<property name="initialUserUnits" value="mm" />
	</bean>

<!-- Zebra device -->
	<bean id="zebra_device" class="gda.device.zebra.controller.impl.ZebraImpl">
		<property name="name" value="zebra_device" />
		<property name="zebraPrefix" value="BL20J-EA-ZEBRA-01:"/>
		<property name="armPutNoWait" value="true" />
	</bean>

<!-- Zebra gate and pulse preparer bean. 12/1/2017 -->
	<bean id="zebra_gatePulsePreparer" class="gda.device.zebra.ZebraGatePulsePreparer">
		<property name="name" value="zebra_gatePulsePreparer" />
		<property name="zebraDevice" ref="zebra_device" />
		<property name="positionTriggerEncoder" value="2" /> <!-- PC_ENC_3 -->
		<property name="ttlOutputPort" value="31" />
		<property name="positionTriggerTimeUnits" value="1" />  <!--  times in seconds -->
	</bean>

	<bean id="trajscan_controller" class="gda.device.trajectoryscancontroller.EpicsTrajectoryScanController">
		<property name="name" value="trajscan_controller" />
		<property name="pvBase" value="BL20J-MO-STEP-06:TC:" />
		<property name="maxPointsPerProfileBuild" value="1500" />
	</bean>

<!--  Trajectory scan preparer bean. 12/1/2017  -->
	<bean id="trajscan_preparer" class="gda.scan.TrajectoryScanPreparer">
		<property name="name" value="trajscan_preparer" />
		<property name="trajectoryScanController" ref="trajscan_controller" />
		<property name="useMaxTimePerStep" value="true" />
		<property name="maxTimePerStep" value="2" />
	</bean>

<!-- TurboxXasScannable for driving turbo slits in a continuous scan. imh 23/5/2016 -->
	<bean id="turbo_xas_slit" class="gda.device.scannable.TurboXasScannable">
		<property name="motor" ref="turbo_slit_x_motor" />
		<property name="zebraDevice" ref="zebra_device" />
		<property name="zebraGatePulsePreparer" ref="zebra_gatePulsePreparer" />
		<property name="trajectoryScanPreparer" ref="trajscan_preparer" />
	</bean>

</beans>