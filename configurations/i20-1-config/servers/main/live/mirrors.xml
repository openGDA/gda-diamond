<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans   http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">


	<!-- me1 -->

	<bean id="me1_stripe" class="gda.device.enumpositioner.EpicsPositioner">
		<property name="deviceName" value="M1EP" />
		<property name="local" value="true" />
	</bean>

	<bean id="me1y_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL20J-OP-VFM-01:Y" />
	</bean>
	<bean id="me1pitch_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL20J-OP-VFM-01:PITCH" />
	</bean>
	<bean id="me1yaw_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL20J-OP-VFM-01:YAW" />
	</bean>
	<bean id="me1curvature_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL20J-OP-VFM-01:CURVE" />
	</bean>


	<!-- me2 -->

	<bean id="me2_stripe" class="gda.device.enumpositioner.EpicsPositioner">
		<property name="deviceName" value="M2EP" />
		<property name="local" value="true" />
	</bean>

	<bean id="me2y_motor" class="gda.device.motor.DummyMotor" />
	<bean id="me2pitch_motor" class="gda.device.motor.DummyMotor" />
	<bean id="me2roll_motor" class="gda.device.motor.DummyMotor" />

	<!-- polychromator -->
	<bean id="poly_xbase_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL20J-OP-PCHRO-01:X" />
	</bean>
	<bean id="poly_ybase_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL20J-OP-PCHRO-01:Y" />
	</bean>
	<bean id="poly_thetabase_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL20J-OP-PCHRO-01:THETA" />
	</bean>
	<bean id="poly_yfine_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL20J-OP-PCHRO-01:YF" />
	</bean>
	<bean id="poly_yawfine_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL20J-OP-PCHRO-01:YAW" />
	</bean>
	<bean id="poly_rollfine_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL20J-OP-PCHRO-01:ROLL" />
	</bean>
	<bean id="poly_curvature_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL20J-OP-PCHRO-01:CURVE" />
	</bean>
	<bean id="poly_ellip_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL20J-OP-PCHRO-01:ELLIP" />
	</bean>
	<bean id="poly_twist_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL20J-OP-PCHRO-01:TWIST" />
	</bean>
	

	<import resource="file:${gda.config}/servers/main/mirrors-common.xml" />

</beans>