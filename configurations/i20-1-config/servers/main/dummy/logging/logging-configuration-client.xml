<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <turboFilter class="ch.qos.logback.classic.turbo.MarkerFilter">
        <Name>Finest</Name>
        <Marker>FINEST</Marker>
        <OnMatch>DENY</OnMatch>
    </turboFilter>

    <!-- enable this if you want log message appear on local console -->
   <appender name="Console" class="ch.qos.logback.core.ConsoleAppender">
        <layout class="ch.qos.logback.classic.PatternLayout">
            <pattern>%r  %-5level [%logger{36}] - %m%n</pattern>
        </layout>
    </appender>
        
    <appender name="LogServer" class="ch.qos.logback.classic.net.SocketAppender">
        <RemoteHost>localhost</RemoteHost>
        <Port>6788</Port>
        <ReconnectionDelay>10000</ReconnectionDelay>
        <IncludeCallerData>true</IncludeCallerData>
    </appender>

<!--    <logger name="gda">-->
<!--        <level value="WARN"/>-->
<!--        <appender-ref ref="FILE"/>-->
<!--    </logger>-->
    <logger name="gda.factory.corba">
        <level value="WARN"/>
    </logger>
    <logger name="gda.device.corba.util">
        <level value="ERROR"/>
    </logger>
    <logger name="gda.device.corba.impl">
        <level value="WARN"/>
    </logger>
    <logger name="gda.device.temperature">
        <level value="WARN"/>
    </logger>
    <logger name="gda.jython.corba.impl">
        <level value="WARN"/>
    </logger>
    <logger name="gda.data.nexus.NexusFileWrapper">
        <level value="DEBUG"/>
    </logger>
    <logger name="uk.ac.gda.exafs.ui">
        <level value="WARN"/>
    </logger>
    <logger name="org.apache.commons.beanutils.converters.*">
        <level value="ERROR"/>
    </logger>
    <logger name="gda.jython.GDAJythonInterpreter">
        <level value="WARN"/>
    </logger>
    <root>
        <level value="INFO"/>
        <appender-ref ref="Console"/>
        <appender-ref ref="LogServer"/>
     </root>
</configuration>
