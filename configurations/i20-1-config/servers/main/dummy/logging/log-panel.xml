<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <appender name="LogPanel" class="gda.util.LogPanelAppender">
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>INFO</level>
        </filter>
        <layout class="ch.qos.logback.classic.PatternLayout">
            <pattern>%date %-5level %logger - %m %rEx %n</pattern>
        </layout>
    </appender>    
    <logger name="gda">
        <level value="INFO"/>
    </logger>
<!--    <logger name="gda.jython.GDAJythonInterpreter">-->
<!--        <level value="WARN"/>-->
<!--    </logger>-->
    <logger name="gda.device.motor.EpicsMotor">
        <level value="WARN"/>
    </logger>
    <logger name="uk.ac.gda.client.XYPlotView">
        <level value="FATAL"/>
    </logger>
    <logger name="uk.ac.gda.exafs.ui.plot.ExafsScanPlotView">
        <level value="FATAL"/>
    </logger>
    <logger name="gda.rcp.views.scan.AbstractScanPlotView">
        <level value="FATAL"/>
    </logger>
    <logger name="uk.ac.gda.exafs.iu.XasScanParametersUIEditor">
        <level value="ERROR"/>
    </logger>
    <logger name="gda.jython.GDAInteractiveConsole">
        <level value="INFO"/>
    </logger>
    <logger name="gda.jython.GDAJythonInterpreter">
        <level value="WARN"/>
    </logger>
    <root>
        <level value="INFO"/>
        <appender-ref ref="LogPanel"/>
    </root>
</configuration>
