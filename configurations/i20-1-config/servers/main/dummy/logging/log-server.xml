    <appender name="localhost_LogPanel" class="ch.qos.logback.classic.net.SocketAppender">
        <RemoteHost>localhost</RemoteHost>
        <Port>6790</Port>
        <ReconnectionDelay>10000</ReconnectionDelay>
        <IncludeCallerData>true</IncludeCallerData>
    </appender>
    
    <appender name="DebugFILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <File>${gda.logs.dir}/gda_server.log</File>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <FileNamePattern>${gda.logs.dir}/gda_server.%d{yyyy-MM-dd}.log.zip</FileNamePattern>
        </rollingPolicy>
        <layout class="ch.qos.logback.classic.PatternLayout">
            <pattern>%d %-5level [%logger] %ex - %m%n</pattern>
        </layout>
    </appender>   
    
    <logger name="gda">
        <level value="DEBUG"/>
    </logger>
    <logger name="gda.jython.GDAJythonInterpreter">
        <level value="WARN"/>
    </logger>
    <logger name="gda.device.monitor.corba.impl">
        <level value="INFO"/>
    </logger>
    <logger name="gda.device.corba.impl">
        <level value="INFO"/>
    </logger>
    <logger name="gda.device.motor.EpicsMotor">
        <level value="WARN"/>
    </logger>
     <logger name="gda.factory.corba.util.PushEventQueue">
        <level value="ERROR"/>
    </logger>
    <logger name="uk.ac.gda.exafs.iu.XasScanParametersUIEditor">
        <level value="ERROR"/>
    </logger>
    
    <root>
        <level value="ALL"/>
        <appender-ref ref="DebugFILE"/>
        <appender-ref ref="CONSOLE"/>
