	<bean id="frelon_objects" class="gda.device.FindableObjectHolder">
		<property name="map">
			<util:map>
				<entry key="limaCCD" value-ref="__limaCCD" />
				<entry key="frelon" value-ref="__frelon" />
			</util:map>
		</property>
	</bean>
</beans>

