<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="m3c_x_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL07C-OP-VFM-01:X" />
		<property name="local" value="true" />
	</bean>

	<bean id="m3c_y_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL07C-OP-VFM-01:Y" />
		<property name="local" value="true" />
	</bean>

	<bean id="m3c_pitch_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL07C-OP-VFM-01:PITCH" />
		<property name="local" value="true" />
	</bean>

	<bean id="m3c_roll_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL07C-OP-VFM-01:ROLL" />
		<property name="local" value="true" />
	</bean>

	<bean id="m3c_yaw_motor" class="gda.device.motor.EpicsMotor">
		<property name="pvName" value="BL07C-OP-VFM-01:YAW" />
		<property name="local" value="true" />
	</bean>

	<bean id="m3c_current1" class="gda.device.currentamplifier.CalibratedAmplifier">
		<property name="useNameAsExtraName" value="true" />
		<property name="hasUnits" value="false" />
		<property name="pvName" value="BL07C-OP-VFM-01:I1:I" />
		<property name="upperThreshold" value="9.5" />
		<property name="autoGain" value="false" />
		<property name="local" value="true" />
		<property name="scalingAndOffset">
			<bean class="gda.device.currentamplifier.GainWithScalingAndOffset">
				<property name="pvName" value="BL07C-OP-VFM-01:I1:I:GAIN" />
				<property name="gaintosando">
					<ref bean="scaling_offset_map"/>
				</property>
			</bean>
		</property>
	</bean>

	<bean id="m3c_current1_av" class="gda.device.currentamplifier.CalibratedAmplifier">
		<property name="useNameAsExtraName" value="true" />
		<property name="hasUnits" value="false" />
		<property name="pvName" value="BL07C-OP-VFM-01:I1:IAV" />
		<property name="upperThreshold" value="9.5" />
		<property name="autoGain" value="false" />
		<property name="local" value="true" />
		<property name="scalingAndOffset">
			<bean class="gda.device.currentamplifier.GainWithScalingAndOffset">
				<property name="pvName" value="BL07C-OP-VFM-01:I1:I:GAIN" />
				<property name="gaintosando">
					<ref bean="scaling_offset_map"/>
				</property>
			</bean>
		</property>
	</bean>

	<bean id="m3c_current2" class="gda.device.currentamplifier.CalibratedAmplifier">
		<property name="useNameAsExtraName" value="true" />
		<property name="hasUnits" value="false" />
		<property name="pvName" value="BL07C-OP-VFM-01:I2:I" />
		<property name="upperThreshold" value="9.5" />
		<property name="autoGain" value="false" />
		<property name="local" value="true" />
		<property name="scalingAndOffset">
			<bean class="gda.device.currentamplifier.GainWithScalingAndOffset">
				<property name="pvName" value="BL07C-OP-VFM-01:I2:I:GAIN" />
				<property name="gaintosando">
					<ref bean="scaling_offset_map"/>
				</property>
			</bean>
		</property>
	</bean>

	<bean id="m3c_current2_av" class="gda.device.currentamplifier.CalibratedAmplifier">
		<property name="useNameAsExtraName" value="true" />
		<property name="hasUnits" value="false" />
		<property name="pvName" value="BL07C-OP-VFM-01:I2:IAV" />
		<property name="upperThreshold" value="9.5" />
		<property name="autoGain" value="false" />
		<property name="local" value="true" />
		<property name="scalingAndOffset">
			<bean class="gda.device.currentamplifier.GainWithScalingAndOffset">
				<property name="pvName" value="BL07C-OP-VFM-01:I2:I:GAIN" />
				<property name="gaintosando">
					<ref bean="scaling_offset_map"/>
				</property>
			</bean>
		</property>
	</bean>

</beans>
