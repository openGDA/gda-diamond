if [ -r $1 ]; then
  printf "%30s: Waiting for no %s\n" "$2" "$1"

  while true; do
    if [ ! -r $1 ]; then
      printf "\n%30s: Not found      %s\n" "$2" "$1"
      break
    fi

    sleep 1
    printf "+"
  done
fi

printf "\n%30s: Waiting for    %s\n" "$2" "$1"

while true; do
  if [ -r $1 ]; then
    printf "\n%30s: Found          %s\n" "$2" "$1"
    exit 0
  fi

  sleep 1
  printf "-"
done
