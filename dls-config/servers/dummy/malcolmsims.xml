<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<!-- To run the scans:	*Run GDA AreaDetector Simulation from the diamond launcher
							*To run the scans type the following in a terminal:*
							/dls_sw/prod/R3.14.12.7/support/TS-BUILDER/3-1/etc/malcolm/MALCOLM-SIMULATIONS.yaml     -->

	<import resource="malcolmsims_scans.xml"/>
	<import resource="malcolmsims_axes.xml"/>

	<bean id="localhostInetAddress" class="java.net.InetAddress" factory-method="getLocalHost"/>
	<bean id="workstation" class="java.lang.String">
		<constructor-arg value="#{ localhostInetAddress.hostName.split('\.')[0] }" />
	</bean>
</beans>
