<?xml version="1.0" encoding="UTF-8"?>
<configuration monitorInterval="10">

	<define scope="context" name="JVMNAME"
		class="gda.util.logging.JvmNamePropertyDefiner" />

	<!-- the include statement in the following java.properties file is not 
		read so you need to reference both -->
	<property file="${gda.install.git.loc}/gda-diamond.git/dls-config/properties/common/java.properties" />
	<property file="${gda.install.git.loc}/gda-diamond.git/dls-config/properties/logging.properties" />
	<property file="${gda.install.git.loc}/gda-diamond.git/dls-config/properties/${gda.mode}/java.properties" />
	<property file="${gda.config}/properties/common.properties" />
	<property file="${gda.config}/properties/${gda.mode}/java.properties" />
	<appender name="FILE"
		class="ch.qos.logback.core.rolling.RollingFileAppender">
		<File>${gda.logs.dir}/gda_server.log</File>
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<FileNamePattern>${gda.logs.dir}/gda_server.%d{yyyy-MM-dd}.log.gz
			</FileNamePattern>
		</rollingPolicy>
		<layout class="ch.qos.logback.classic.PatternLayout">
			<pattern>%d %-5level [%property{GDA_SOURCE}/%property{JVMNAME}]
				%logger - %m%n%rEx</pattern>
		</layout>
	</appender>


	<appender name="RemoteLoggerListener"
		class="ch.qos.logback.classic.net.server.ServerSocketAppender">
		<port>${gda.logserver.out.port}</port>
	</appender>

    <logger name="gda">
        <level value="INFO"/>
    </logger>
    <logger name="gda.jython.GDAInteractiveConsole">
        <level value="INFO"/>
    </logger>
    <logger name="gda.factory.corba.util.CorbaEventDispatcher">
        <level value="DEBUG"/>
    </logger>
    <logger name="gda.factory.corba.util.MyEventChannelImpl">
        <level value="DEBUG"/>
    </logger>
    <logger name="org.apache.commons"><level value="INFO"/></logger>
    <logger name="gda.px.sampleChanger.irelec">
    	<level value="INFO"/>
    </logger>

	<root>
		<level value="ALL" />
		<appender-ref ref="FILE" />
	</root>
	<root>
		<level value="INFO" />
		<appender-ref ref="RemoteLoggerListener" />
	</root>
</configuration>
