<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

	<bean id="topup" class="gda.device.scannable.TopupScannable" >
		<property name="tolerance" value="1.0"/>
		<property name="waittime" value="1"/>
		<property name="timeout" value="600"/>
		<property name="scannableToBeMonitored" ref="epicsTopupMonitor"/>
	</bean>

</beans>
