<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

	<bean id="sm1wfs1" class="gda.spring.EpicsMonitorFactoryBean">
		<property name="deviceName" value="SM1.WFS1" />
	</bean>

	<bean id="sm1x_motor" class="gda.device.motor.EpicsMotor">
		<property name="deviceName" value="SM1.X" />
	</bean>
	<bean id="sm1y_motor" class="gda.device.motor.EpicsMotor">
		<property name="deviceName" value="SM1.Y" />
	</bean>
	<bean id="sm1z_motor" class="gda.device.motor.EpicsMotor">
		<property name="deviceName" value="SM1.Z" />
	</bean>
	<bean id="sm1pitch_motor" class="gda.device.motor.EpicsMotor">
		<property name="deviceName" value="SM1.PITCH" />
	</bean>
	<bean id="sm1roll_motor" class="gda.device.motor.EpicsMotor">
		<property name="deviceName" value="SM1.ROLL" />
	</bean>
	<bean id="sm1yaw_motor" class="gda.device.motor.EpicsMotor">
		<property name="deviceName" value="SM1.YAW" />
	</bean>
	<bean id="sm1fpitch_motor" class="gda.device.motor.PiezoEpicsMotor">
		<property name="deviceName" value="SM1.FPITCH" />
	</bean>
	
	<bean id="sm1fpitchfeedback" class="gda.device.enumpositioner.EpicsSimpleBinary">
		<property name="pvName" value="BL09J-EA-FDBK-01:ENABLE" />
		<property name="positions">
			<list>
				<value>Enabled</value>
				<value>Disabled</value>
			</list>
		</property>
	</bean>
</beans>
