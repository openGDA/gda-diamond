<?xml version="1.0" encoding="UTF-8"?>
<configuration>
	<property file="${gda.config}/logging/${gda.mode}/log.properties" />
	
	<receiver class="ch.qos.logback.classic.net.SocketReceiver">
		<remoteHost>${gda.logserver.host}</remoteHost>
		<port>${gda.logserver.out.port}</port>
		<reconnectionDelay>10000</reconnectionDelay>
	</receiver>
	
	<appender name="LogPanel" class="gda.util.LogPanelAppender">
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>INFO</level>
        </filter>
        <layout class="ch.qos.logback.classic.PatternLayout">
            <pattern>%date %-5level %logger - %m %ex %n</pattern>
        </layout>
    </appender>    

    <logger name="gda">
        <level value="INFO"/>
    </logger>
    <logger name="gda.jython.GDAInteractiveConsole">
        <level value="ERROR"/>
    </logger>
    <logger name="gda.factory.corba.util.CorbaEventDispatcher">
        <level value="ERROR"/>
    </logger>
    <logger name="gda.factory.corba.util.CorbaEventReceiver">
        <level value="ERROR"/>
    </logger>
    <logger name="gda.factory.corba.util.MyEventChannelImpl">
        <level value="ERROR"/>
    </logger>
    
    <root>
        <level value="INFO"/>
        <appender-ref ref="LogPanel"/>
    </root>
</configuration>
