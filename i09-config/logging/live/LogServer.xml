<?xml version="1.0" encoding="UTF-8"?>
<configuration>
	<property file="${gda.config}/logging/live/log.properties" />

	<!-- display message in Logger Server's console -->
	<appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
		<layout class="ch.qos.logback.classic.PatternLayout">
			<Pattern>%date %-5level %logger - %message %ex %n</Pattern>
		</layout>
	</appender>
	<!-- forwarding log message to external LogPanel client application -->
	<appender name="WS001_LogPanel" class="ch.qos.logback.classic.net.SocketAppender">
		<RemoteHost>i09-ws001.diamond.ac.uk</RemoteHost>
		<Port>${gda.logPanel.logging.port}</Port>
		<ReconnectionDelay>10000</ReconnectionDelay>
		<IncludeCallerData>true</IncludeCallerData>
	</appender>
	<appender name="WS002_LogPanel" class="ch.qos.logback.classic.net.SocketAppender">
		<RemoteHost>i09-ws002.diamond.ac.uk</RemoteHost>
		<Port>${gda.logPanel.logging.port}</Port>
		<ReconnectionDelay>10000</ReconnectionDelay>
		<IncludeCallerData>true</IncludeCallerData>
	</appender>
	<appender name="WS003_LogPanel" class="ch.qos.logback.classic.net.SocketAppender">
		<RemoteHost>i09-ws099.diamond.ac.uk</RemoteHost>
		<Port>${gda.logPanel.logging.port}</Port>
		<ReconnectionDelay>10000</ReconnectionDelay>
		<IncludeCallerData>true</IncludeCallerData>
	</appender>
	<appender name="DebugFILE"
		class="ch.qos.logback.core.rolling.RollingFileAppender">
		<File>${gda.logs.dir}/gda.log</File>
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<FileNamePattern>${gda.logs.dir}/gda.%d{yyyy-MM-dd}.log.gz</FileNamePattern>
		</rollingPolicy>
		<layout class="ch.qos.logback.classic.PatternLayout">
			<pattern>%d %-5level %logger - %m %ex %n</pattern>
		</layout>
	</appender>
	<logger name="gda">
		<level value="DEBUG" />
	</logger>
	<logger name="gda.device.corba.impl">
		<level value="INFO" />
	</logger>
	<logger name="gda.device.temperature">
		<level value="INFO" />
	</logger>
	<logger name="gda.jython.corba.impl">
		<level value="INFO" />
	</logger>
	<logger name="gda.oe.corba.impl">
		<level value="INFO" />
	</logger>
	<root>
		<level value="ALL" />
		<appender-ref ref="CONSOLE" />
		<appender-ref ref="WS001_LogPanel" />
		<appender-ref ref="WS002_LogPanel" />
		<appender-ref ref="WS003_LogPanel" />
		<appender-ref ref="DebugFILE" />
	</root>
</configuration>
